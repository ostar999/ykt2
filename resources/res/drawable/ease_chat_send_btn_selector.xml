<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#04aef0"/>
            <corners android:radius="5dp"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
            <stroke
                android:width="1dp"
                android:color="#04aef0"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#04aef0"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
            <corners android:radius="5dp"/>
            <stroke
                android:width="1dp"
                android:color="#04aef0"/>
        </shape>
    </item>
</selector>
