<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <size
        android:height="16dp"
        android:width="36dp"/>
    <gradient
        android:startColor="?attr/main_color_translate_end"
        android:endColor="?attr/main_color_translate_start"
        android:useLevel="true"
        android:angle="90"
        android:type="linear"
        android:centerColor="?attr/main_color_translate_center"/>
    <corners
        android:topLeftRadius="8dp"
        android:topRightRadius="2dp"
        android:bottomLeftRadius="2dp"
        android:bottomRightRadius="8dp"/>
</shape>
