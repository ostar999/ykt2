<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:height="@dimen/dp_44"
        android:width="@dimen/dp_64"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/zx_color_calendar_bg"/>
            <corners android:radius="4dp"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>
    <item
        android:gravity="bottom|center_horizontal"
        android:height="12dp"
        android:width="12dp"
        android:bottom="-4dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <corners android:radius="2dp"/>
                <solid android:color="@color/zx_color_calendar_bg"/>
            </shape>
        </rotate>
    </item>
</layer-list>
