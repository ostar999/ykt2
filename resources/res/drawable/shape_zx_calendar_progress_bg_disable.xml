<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="12dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/zx_color_calendar_bg_disable"/>
            <corners android:radius="8dp"/>
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp"/>
        </shape>
    </item>
    <item
        android:gravity="bottom|center_horizontal"
        android:height="24dp"
        android:width="24dp"
        android:bottom="-8dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <corners android:radius="4dp"/>
                <solid android:color="?attr/zx_color_calendar_bg_disable"/>
            </shape>
        </rotate>
    </item>
</layer-list>
