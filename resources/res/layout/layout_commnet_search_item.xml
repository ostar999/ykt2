<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/llay_reply_bg"
    android:background="@color/transparent"
    android:paddingTop="10dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/linciew"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel_cdf"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">
            <com.psychiatrygarden.widget.CircleImageView
                android:id="@+id/commentList_item_userIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="?attr/personal_headimg_icon"
                android:scaleType="centerCrop"/>
            <com.psychiatrygarden.widget.CircleImageView
                android:id="@+id/jiav"
                android:visibility="gone"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/jiav"
                android:scaleType="centerCrop"
                android:layout_alignBottom="@+id/commentList_item_userIcon"
                android:layout_marginEnd="-5dp"
                android:layout_alignEnd="@+id/commentList_item_userIcon"/>
            <RelativeLayout
                android:orientation="vertical"
                android:id="@+id/lineTile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/commentList_item_userIcon">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/lineviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/comment_nick_name_text_color"
                        android:id="@+id/commentList_item_tv_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/vipimgid"
                        android:visibility="gone"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@drawable/vipimg"
                        android:scaleType="fitCenter"
                        android:layout_marginStart="3dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/linetitlschool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/lineviews"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/isverauth"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:src="@drawable/auth2img"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="5dp"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="?attr/item_school_color"
                        android:id="@+id/commentList_item_tv_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <include
            android:id="@+id/myexptervew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/rel_cdf"
            layout="@layout/adapter_item"/>
        <com.psychiatrygarden.gradview.NineGridTestLayout
            android:id="@+id/ningrids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/myexptervew"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="10dp"
            android:transitionName="sharedView"
            app:sapcing="3dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_line_bottom"
        android:background="?attr/fourth_line_backgroup_color"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>
