<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#a0000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/yuanquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pyuan"/>
        <ImageView
            android:id="@+id/imgwer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-10dp"
            android:src="@drawable/pyuan2"
            android:layout_toLeftOf="@+id/yuanquan"
            android:layout_below="@+id/yuanquan"/>
        <ImageView
            android:id="@+id/imgsddf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="-15dp"
            android:src="@drawable/pinglunwode"
            android:layout_toLeftOf="@+id/imgwer"
            android:layout_below="@+id/imgwer"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/pyuan10"
            android:layout_toLeftOf="@+id/imgwer"
            android:layout_above="@+id/imgsddf"/>
    </RelativeLayout>
</RelativeLayout>
