<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_24"
    android:paddingBottom="@dimen/dp_24"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_40"
    android:layout_marginRight="@dimen/dp_40"
    android:layout_marginHorizontal="@dimen/dp_40"
    android:paddingVertical="@dimen/dp_24"
    app:background_normal="@color/white"
    app:corner_radius="@dimen/dp_16">
    <TextView
        android:textSize="@dimen/sp_18"
        android:textColor="@color/color_303030"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="长按段落可发表段评"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_text_operation"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:paddingHorizontal="@dimen/dp_12">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:src="@drawable/icon_text_operation"
            android:scaleType="fitCenter"
            android:contentDescription="@null"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_marginTop="@dimen/dp_7"
            android:src="@drawable/image_text_tip"
            android:scaleType="fitCenter"
            android:contentDescription="@null"/>
    </LinearLayout>
    <com.ruffian.library.widget.RTextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_i_know"
        android:layout_width="@dimen/dp_165"
        android:layout_height="@dimen/dp_40"
        android:text="我知道了"
        app:background_normal="@color/color_dd594a"
        app:corner_radius="@dimen/dp_20"/>
</com.ruffian.library.widget.RLinearLayout>
