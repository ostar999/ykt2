<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.ykb.ebook.weight.ReadView
        android:id="@+id/read_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/text_menu_position"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/cursor_left"
        android:visibility="invisible"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_33"
        android:src="@drawable/icon_cursor_left"
        android:contentDescription="文本选择开始"/>
    <ImageView
        android:id="@+id/cursor_right"
        android:visibility="invisible"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_33"
        android:src="@drawable/icon_cursor_right"
        android:contentDescription="文本选择结束"/>
    <com.ykb.ebook.weight.ReadMenu
        android:id="@+id/read_menu"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:layout_gravity="bottom"
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
</FrameLayout>
