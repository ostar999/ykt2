<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/rl_column_ques"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/ll_title"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:paddingHorizontal="@dimen/dp_12">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="?attr/first_txt_color"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tv_column_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="知识点"
                android:maxLines="1"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textStyle="bold"
                android:textColor="?attr/new_bg_one_color"
                android:gravity="center"
                android:layout_gravity="end|bottom"
                android:id="@+id/tv_column_tag"
                android:background="?attr/bg_home_tab_label"
                android:paddingLeft="@dimen/dp_4"
                android:paddingTop="@dimen/dp_1"
                android:paddingRight="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_33"
                android:text="会安安会"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/dp_4"/>
            <ImageView
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/img_choose"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_7"
                android:layout_marginBottom="@dimen/dp_5"
                android:src="?attr/ic_comment_group_tag"
                android:layout_alignStart="@+id/tv_column_name"
                android:layout_alignEnd="@+id/tv_column_name"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
