<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/framlayout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="52dp"/>
    <ImageView
        android:id="@+id/img_app_test"
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="7dp"
        android:src="@mipmap/ic_app_test_icon"
        android:layout_above="@+id/tabnav"
        android:layout_alignParentEnd="true"/>
    <View
        android:id="@+id/view1"
        android:background="?attr/line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/tabnav"/>
    <com.psychiatrygarden.widget.BottomTabLayout
        android:id="@+id/tabnav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    <View
        android:id="@+id/homepage_mask"
        android:background="@color/dialog_transparent_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_83"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
