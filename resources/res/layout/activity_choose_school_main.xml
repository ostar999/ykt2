<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainChooseSchoolMain"
    android:background="?attr/new_bg_two_color_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/chooseSchoolScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/zx_icon_choose_school_top_bg"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layoutCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_78"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_below="@+id/imgTop"
                android:layout_marginHorizontal="@dimen/dp_8">
                <RelativeLayout
                    android:id="@+id/layoutChooseSchool"
                    android:background="@drawable/shape_choose_school_card1_bg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">
                        <TextView
                            android:textSize="@dimen/sp_20"
                            android:textStyle="bold"
                            android:textColor="?attr/app_bg"
                            android:id="@+id/tvCard1"
                            android:background="@drawable/icon_select_school_svg"
                            android:layout_width="@dimen/dp_61"
                            android:layout_height="@dimen/dp_22"
                            android:text=""
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="?attr/app_bg"
                            android:id="@+id/tvSchoolCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="覆盖8908所院校"
                            android:layout_below="@+id/tvCard1"
                            android:layout_centerHorizontal="true"
                            android:alpha="0.8"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layoutMajor"
                    android:background="@drawable/shape_choose_school_card2_bg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_12">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">
                        <TextView
                            android:textSize="@dimen/sp_20"
                            android:textStyle="bold"
                            android:textColor="?attr/app_bg"
                            android:id="@+id/tvCard2"
                            android:background="@drawable/icon_select_major_svg"
                            android:layout_width="@dimen/dp_61"
                            android:layout_height="@dimen/dp_22"
                            android:text=""
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="?attr/app_bg"
                            android:id="@+id/tvZYCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="覆盖5132个专业"
                            android:layout_below="@+id/tvCard2"
                            android:layout_centerHorizontal="true"
                            android:alpha="0.8"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/layoutNotify"
                android:background="@drawable/shape_app_bg_corners_12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_below="@+id/layoutCard"
                android:layout_marginHorizontal="@dimen/dp_8">
                <ImageView
                    android:id="@+id/imgNotify"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/icon_choose_school_notify"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_12"/>
                <androidx.viewpager2.widget.ViewPager2
                    android:orientation="vertical"
                    android:id="@+id/viewPager2Notify"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/imgNotifyMore"
                    android:layout_toRightOf="@+id/imgNotify"
                    android:layout_marginStart="@dimen/dp_4"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/second_txt_color"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/tvNotify"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:maxLines="1"
                    android:layout_toLeftOf="@+id/imgNotifyMore"
                    android:layout_toRightOf="@+id/imgNotify"
                    android:layout_marginStart="@dimen/dp_4"/>
                <ImageView
                    android:id="@+id/imgNotifyMore"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@drawable/icon_right_arrow_mo_kao"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_12"/>
            </RelativeLayout>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpKingKong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_below="@+id/layoutNotify"
                android:nestedScrollingEnabled="true"/>
            <com.psychiatrygarden.widget.ViewPager2Indicator
                android:layout_gravity="center"
                android:id="@+id/tree_indicator"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_below="@+id/vpKingKong"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layoutSchool"
                android:background="@drawable/shape_choose_school_card3_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_below="@+id/tree_indicator"
                android:layout_marginHorizontal="@dimen/dp_8">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/layoutSchoolTitle"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36">
                    <ImageView
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        android:src="@drawable/icon_choose_school_card_flag"
                        android:layout_marginStart="@dimen/dp_50"/>
                    <TextView
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold"
                        android:textColor="?attr/zx_color_source_title_color"
                        android:id="@+id/tvPermissionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_2"
                        android:text="开通权限查看院校和专业数据"
                        android:layout_marginHorizontal="@dimen/dp_2"/>
                    <ImageView
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        android:src="@drawable/icon_choose_school_card_flag"
                        android:rotation="180"/>
                </LinearLayout>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:background="@drawable/shape_app_bg_corners_12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:background="@drawable/shape_choose_school_card4_bg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"/>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/tvSubTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="数据来源"
                        android:layout_marginStart="@dimen/dp_16"/>
                    <LinearLayout
                        android:id="@+id/layoutSource"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvSubTitle">
                        <com.psychiatrygarden.utils.FlowLayout
                            android:id="@+id/flowLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_12"
                            app:flowLayoutMaxLines="10"
                            app:isLimit="false"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:textColor="?attr/zx_color_get_permission_btn_text"
                        android:gravity="center"
                        android:id="@+id/tvBtnGetPermission"
                        android:background="@drawable/shape_choose_school_get_permission"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_42"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:text="获取权限"
                        android:layout_below="@+id/layoutSource"
                        android:layout_marginHorizontal="@dimen/dp_12"/>
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="?attr/second_txt_color"
                        android:gravity="center"
                        android:id="@+id/hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:text="*数据为人工收集整理仅供参考，最终以官方公布数据为准。"
                        android:layout_below="@+id/tvBtnGetPermission"
                        android:layout_marginHorizontal="@dimen/dp_12"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/layoutZx"
                android:background="@drawable/shape_school_score_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginHorizontal="@dimen/dp_8">
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/layoutTitleScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginHorizontal="@dimen/dp_12">
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/tv0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="智能择校"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="?attr/third_txt_color"
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总分"
                        android:layout_toRightOf="@+id/tv0"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_8"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/tvScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_toRightOf="@+id/tv1"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="?attr/third_txt_color"
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分"
                        android:layout_toRightOf="@+id/tvScore"
                        android:layout_centerVertical="true"/>
                    <RelativeLayout
                        android:id="@+id/layoutEditScore"
                        android:background="@drawable/shape_school_blue_corners8"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_28"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:src="@drawable/icon_school_score_edit"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_8"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="?attr/app_bg"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="输入成绩"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="@dimen/dp_8"/>
                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layoutScoreLine"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_77"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_below="@+id/layoutTitleScore">
                    <com.psychiatrygarden.activity.chooseSchool.widget.WaveChartViewNew
                        android:id="@+id/waveChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <View
                    android:id="@+id/lineGap"
                    android:background="?attr/new_gray_line_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/layoutScoreLine"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_below="@+id/lineGap">
                    <RelativeLayout
                        android:id="@+id/layoutBaoDi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:textSize="@dimen/sp_16"
                                android:textColor="@color/zx_color_blue"
                                android:id="@+id/tvCountBaoDi"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_2"
                                android:text="2023"
                                android:fontFamily="@font/poppins_semibold"/>
                            <ImageView
                                android:id="@+id/imgQuestionMark1"
                                android:padding="@dimen/dp_4"
                                android:visibility="visible"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_24"
                                android:src="@drawable/icon_score_question_mark_blue"/>
                            <TextView
                                android:textSize="@dimen/sp_13"
                                android:textColor="?attr/first_txt_color"
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="可保底"/>
                            <ImageView
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:src="@drawable/icon_arrow_first_txt_color_right"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layoutWenTuo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:textSize="@dimen/sp_16"
                                android:textColor="@color/zx_color_green"
                                android:id="@+id/tvCountWenTuo"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_2"
                                android:text="87"
                                android:fontFamily="@font/poppins_semibold"/>
                            <ImageView
                                android:id="@+id/imgQuestionMark2"
                                android:padding="@dimen/dp_4"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_24"
                                android:src="@drawable/icon_score_question_mark_green"/>
                            <TextView
                                android:textSize="@dimen/sp_13"
                                android:textColor="?attr/first_txt_color"
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="较稳妥"/>
                            <ImageView
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:src="@drawable/icon_arrow_first_txt_color_right"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layoutChongJi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:textSize="@dimen/sp_16"
                                android:textColor="?attr/app_theme_red_color"
                                android:id="@+id/tvCountChongJi"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_2"
                                android:text="22"
                                android:fontFamily="@font/poppins_semibold"/>
                            <ImageView
                                android:id="@+id/imgQuestionMark3"
                                android:padding="@dimen/dp_4"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_24"
                                android:src="@drawable/icon_score_question_mark_main_theme_color"/>
                            <TextView
                                android:textSize="@dimen/sp_13"
                                android:textColor="?attr/first_txt_color"
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="可冲击"/>
                            <ImageView
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:src="@drawable/icon_arrow_first_txt_color_right"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:background="@drawable/shape_app_bg_corners_12"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginHorizontal="@dimen/dp_8">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:id="@+id/lyTargetSchoolTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_12">
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/tvTargetSchoolTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="目标院校"
                        android:layout_marginStart="@dimen/dp_12"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/forth_txt_color"
                        android:id="@+id/tvTargetSchoolMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看更多"
                        android:drawableRight="@drawable/icon_right_arrow_mo_kao"
                        android:layout_alignBaseline="@+id/tvTargetSchoolTitle"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/dp_12"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="horizontal"
                    android:id="@+id/recyclerViewTargetSchool"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_below="@+id/lyTargetSchoolTitle"
                    android:layout_marginHorizontal="@dimen/dp_12"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/main_theme_color"
                    android:id="@+id/tvAddTargetSchool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:text="添加目标院校"
                    android:drawableLeft="@drawable/icon_choose_school_add"
                    android:layout_below="@+id/recyclerViewTargetSchool"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layoutKyCalendar"
                android:background="@drawable/shape_app_bg_corners_12"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginHorizontal="@dimen/dp_8">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/tvKyCalendarName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="考研日历"
                    android:layout_marginStart="@dimen/dp_12"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/forth_txt_color"
                    android:id="@+id/tvKyCalendarNameMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看详情"
                    android:drawableRight="@drawable/icon_right_arrow_mo_kao"
                    android:layout_alignBaseline="@+id/tvKyCalendarName"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/dp_12"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="horizontal"
                    android:id="@+id/recyclerViewKy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_below="@+id/tvKyCalendarName"
                    android:layout_marginHorizontal="@dimen/dp_12"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/shape_app_bg_corners_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_115"
                android:layout_marginHorizontal="@dimen/dp_8">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/tvWxInfoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
