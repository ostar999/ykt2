<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/new_bg_two_color_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.psychiatrygarden.widget.HeaderScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutBottom1V1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:minHeight="@dimen/dp_87">
                <ImageView
                    android:id="@+id/imageViewBg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="?attr/zx_calendar_top_bg"
                    android:scaleType="fitXY"/>
            </RelativeLayout>
            <com.psychiatrygarden.widget.StickyLinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isSticky="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <cn.webdemo.com.supporfragment.tablayout.MagicIndicator
                        android:id="@+id/magicIndicator"
                        android:background="?attr/app_bg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"/>
                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </com.psychiatrygarden.widget.StickyLinearLayout>
        </LinearLayout>
    </com.psychiatrygarden.widget.HeaderScrollView>
    <RelativeLayout
        android:id="@+id/layoutActionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88">
        <TextView
            android:id="@+id/tvActionBarBg"
            android:background="?attr/app_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/imgBack"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_12"
            android:src="?attr/ic_black_back"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:alpha="1"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:paddingVertical="5dp"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:id="@+id/tvTitle"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_12"
            android:text="考研日历"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:paddingVertical="5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutBottom1V1"
        android:background="?attr/app_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:layout_alignParentBottom="true"
        android:translationZ="@dimen/dp_3">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textColor="?attr/app_bg"
            android:gravity="center"
            android:id="@+id/tv1V1"
            android:background="@drawable/bg_download"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:text="1V1辅导"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/dp_8"/>
    </RelativeLayout>
</RelativeLayout>
