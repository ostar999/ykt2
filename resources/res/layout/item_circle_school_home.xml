<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_circle_school"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_school"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/app_icon"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/ll_school_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:minHeight="60dp"
        android:layout_toRightOf="@+id/iv_school"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="18sp"
            android:textColor="#ff1a1415"
            android:ellipsize="end"
            android:id="@+id/tv_school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="华北理工大学"
            android:maxLines="1"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#ff989898"
            android:id="@+id/tv_school_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="631成员，1263帖子，63132讨论"
            android:maxLines="1"/>
    </LinearLayout>
    <View
        android:background="?attr/divider_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_school_info"
        android:layout_alignLeft="@+id/ll_school_info"/>
</RelativeLayout>
