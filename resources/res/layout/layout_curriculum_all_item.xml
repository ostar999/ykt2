<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_app_bg_corners_8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_20">
    <RelativeLayout
        android:background="@color/transparent"
        android:paddingLeft="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/app_bg"
            android:gravity="center"
            android:id="@+id/heji"
            android:background="@drawable/shape_course_combine_flag_bg"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合集"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_2"/>
        <TextView
            android:textSize="@dimen/sp_17"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text=""
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_below="@+id/heji"
            android:lineSpacingExtra="1.2dp"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginEnd="@dimen/dp_16"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/course_combine_flags_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_below="@+id/titleTv">
            <com.psychiatrygarden.utils.FlowLayout
                android:id="@+id/course_combine_flags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleTv"
                app:flowLayoutMaxLines="1"
                app:isLimit="true"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@+id/course_combine_flags_layout"
            android:overScrollMode="never"
            android:layout_marginEnd="@dimen/dp_16"/>
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/relbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyall"
            android:layout_marginEnd="@dimen/dp_16">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/third_txt_color"
                android:gravity="center_vertical"
                android:id="@+id/jidoortv"
                android:paddingTop="@dimen/dp_1"
                android:paddingBottom="@dimen/dp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8门课程"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/imgopenbottom"
                android:layout_width="@dimen/dp_18"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:src="?attr/imgopenbottom"
                android:scaleType="center"
                android:layout_toRightOf="@+id/jidoortv"
                android:layout_alignTop="@+id/jidoortv"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/sp_11"
                android:textStyle="bold"
                android:textColor="?attr/main_theme_red_color"
                android:id="@+id/buttonStartLearn"
                android:background="@drawable/shape_main_theme_color_stroke_0_5_corners_8"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_5"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:text="开始学习"
                android:includeFontPadding="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginVertical="@dimen/dp_8"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_5"/>
            <LinearLayout
                android:gravity="right"
                android:orientation="vertical"
                android:id="@+id/line"
                android:paddingLeft="@dimen/dp_10"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="?attr/forth_txt_color"
                        android:id="@+id/originPrice"
                        android:paddingTop="@dimen/dp_6"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥699"
                        android:includeFontPadding="false"
                        android:paddingEnd="@dimen/dp_16"/>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:textColor="?attr/main_theme_red_color"
                        android:gravity="center_vertical"
                        android:id="@+id/priceTv"
                        android:paddingTop="@dimen/dp_6"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥699"
                        android:includeFontPadding="false"/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="?attr/forth_txt_color"
                    android:id="@+id/numTv"
                    android:paddingTop="@dimen/dp_1"
                    android:paddingBottom="@dimen/dp_1"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
