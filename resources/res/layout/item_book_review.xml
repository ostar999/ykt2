<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ly_title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        app:isSticky="true">
        <com.ruffian.library.widget.RView
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_16"
            app:background_normal="@color/color_dd594a"
            app:corner_radius_bottom_right="@dimen/dp_4"
            app:corner_radius_top_right="@dimen/dp_4"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_303030"
            android:id="@+id/tv_newest_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新评论（13条）"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_12"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/viewLineOne"
            android:background="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_16">
            <com.ruffian.library.widget.RImageView
                android:id="@+id/img_avatar"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@drawable/personal_headimg_icon"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                android:layout_marginEnd="@dimen/dp_8"
                app:is_circle="true"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="12sp"
                            android:textColor="@color/color_0062ba"
                            android:id="@+id/tv_nick_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="10sp"
                                android:textColor="@color/color_909090"
                                android:ellipsize="end"
                                android:id="@+id/tv_hospital"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="@dimen/dp_140"
                                android:maxLines="1"/>
                            <TextView
                                android:textSize="10sp"
                                android:textColor="@color/color_909090"
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_12"/>
                        </LinearLayout>
                    </LinearLayout>
                    <com.ruffian.library.widget.RTextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_909090"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高评价"
                        android:drawablePadding="@dimen/dp_2"
                        app:icon_height_left="@dimen/dp_16"
                        app:icon_normal_left="@drawable/icon_good_review"
                        app:icon_width_left="@dimen/dp_16"/>
                </LinearLayout>
                <com.ykb.ebook.weight.FloorViews
                    android:id="@+id/floor"
                    android:background="@color/color_FFFDF0"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/rel_cdf"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/color_303030"
                    android:id="@+id/tv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"/>
                <com.ruffian.library.widget.RImageView
                    android:id="@+id/img_picture"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_140"
                    android:layout_height="@dimen/dp_140"
                    android:layout_marginTop="@dimen/dp_8"
                    android:src="@drawable/image_cover_default"
                    android:scaleType="centerCrop"
                    app:corner_radius="@dimen/dp_12"/>
                <LinearLayout
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12">
                    <com.ruffian.library.widget.RTextView
                        android:textSize="12sp"
                        android:id="@+id/tv_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:text_color_normal="@color/color_bfbfbf"
                        app:text_color_selected="@color/color_81cb30"/>
                    <com.ruffian.library.widget.RTextView
                        android:textSize="12sp"
                        android:id="@+id/tv_opposition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_24"
                        android:layout_marginHorizontal="@dimen/dp_24"
                        app:text_color_normal="@color/color_bfbfbf"
                        app:text_color_selected="@color/color_dd594a"/>
                    <com.ruffian.library.widget.RTextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:id="@+id/tv_reply"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingTop="1dp"
                        android:paddingRight="@dimen/dp_6"
                        android:paddingBottom="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/dp_6"
                        android:paddingVertical="1dp"
                        app:background_normal="@color/color_0a000000"
                        app:corner_radius="@dimen/dp_10"
                        app:text_color_normal="@color/color_bfbfbf"
                        app:text_color_selected="@color/color_303030"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/v_line"
            android:background="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_16"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/ly_look_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        app:isSticky="true">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/color_303030"
            android:id="@+id/tv_more_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多热评"
            android:layout_marginStart="@dimen/dp_12"/>
    </LinearLayout>
</LinearLayout>
