<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/fraglabview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">
        <cn.lightsky.infiniteindicator.InfiniteIndicator xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/infinite_anim_circle"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:indicator_type="indicator_anim_circle"/>
        <TextView
            android:textSize="17sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:layout_gravity="bottom|right"
            android:id="@+id/pagenum2"
            android:background="@drawable/shape_indicator_bg"
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>
        <com.psychiatrygarden.aliPlayer.widget.CustomAliPlayerView
            android:id="@+id/videoview"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    </FrameLayout>
    <View
        android:id="@+id/view1"
        android:background="?attr/line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/fraglabview"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lll"
        android:background="?attr/app_bg"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1">
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/first_text_color"
            android:id="@+id/tv_title"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/dataimg"
            android:lineSpacingMultiplier="1.2"/>
        <WebView
            android:id="@+id/tv_content_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/coursevideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <View
            android:background="?attr/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="15dp"/>
        <LinearLayout
            android:id="@+id/lla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp">
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/dominant_color"
                android:id="@+id/tv_money1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="13sp"
                android:textColor="?attr/tertiary_text_color"
                android:id="@+id/tv_zhekoujia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:textSize="13sp"
                android:textColor="?attr/tertiary_text_color"
                android:gravity="center"
                android:id="@+id/tv_youfei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/line_content"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view3"
                android:background="?attr/line"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"/>
            <com.psychiatrygarden.utils.TagFlowLayout
                android:id="@+id/test"
                android:background="?attr/bg_backgroud"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                app:max_select="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
