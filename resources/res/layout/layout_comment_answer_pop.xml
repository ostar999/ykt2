<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="top|center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/shape_comment_answer_bg"
    android:paddingLeft="50dp"
    android:paddingTop="10dp"
    android:paddingRight="50dp"
    android:paddingBottom="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="15sp"
        android:textColor="#ffebcc66"
        android:id="@+id/tv_high_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="最高热度"/>
    <TextView
        android:textSize="15sp"
        android:textColor="#ffffffff"
        android:id="@+id/tv_latest_add_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="近期新增点赞数"/>
    <TextView
        android:textSize="15sp"
        android:textColor="#fffb9689"
        android:id="@+id/tv_most_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="最多点赞"/>
    <TextView
        android:textSize="15sp"
        android:textColor="#ffffffff"
        android:id="@+id/tv_history_acc_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="历史累计点赞数"/>
    <TextView
        android:textSize="15sp"
        android:textColor="#ffebcc66"
        android:id="@+id/tv_latest_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="最新发表"/>
    <TextView
        android:textSize="15sp"
        android:textColor="#ffffffff"
        android:id="@+id/tv_sort_by_pub_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="按发表时间排序"/>
    <TextView
        android:textSize="15sp"
        android:textColor="#ffebcc66"
        android:id="@+id/tv_most_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="最多回复"/>
    <TextView
        android:textSize="15sp"
        android:textColor="#ffffffff"
        android:id="@+id/tv_sort_total_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="按总回复数排序"/>
</LinearLayout>
