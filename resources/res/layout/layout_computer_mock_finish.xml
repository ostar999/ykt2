<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:paddingHorizontal="@dimen/dp_16">
        <ImageView
            android:id="@+id/img_back"
            android:padding="@dimen/dp_3"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="?attr/ic_back_gray"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:id="@+id/tv_mock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模考名称"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@+id/img_back"/>
    </RelativeLayout>
    <View style="@style/new_gray_line_style"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_marginEnd="@dimen/dp_12">
            <RelativeLayout
                android:orientation="vertical"
                android:background="@drawable/shape_bg_one_round4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_21">
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="座位号："/>
                <TextView
                    android:textSize="@dimen/sp_55"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="1"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/shape_bg_one_round4"
            android:padding="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_above="@+id/ly_bottom"
                android:layout_alignParentTop="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="考生姓名："
                        style="@style/computer_finish_txt_style"/>
                    <TextView
                        android:id="@+id/tv_nickname"
                        android:text="有颗糖~"
                        style="@style/computer_login_sure_right_txt_style"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="准考证号："
                        style="@style/computer_finish_txt_style"/>
                    <TextView
                        android:id="@+id/tv_test_number"
                        android:text="test001"
                        style="@style/computer_finish_txt_value_style"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:text="考试总时间："
                            style="@style/computer_finish_txt_style"/>
                        <TextView
                            android:id="@+id/tv_time"
                            android:text="180分钟"
                            style="@style/computer_finish_txt_value_style"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5">
                        <TextView
                            android:text="答题进度："
                            style="@style/computer_finish_txt_style"/>
                        <TextView
                            android:id="@+id/tv_progress"
                            android:text="20%"
                            style="@style/computer_finish_txt_value_style"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:text="答卷用时："
                            style="@style/computer_finish_txt_style"/>
                        <TextView
                            android:id="@+id/tv_use_time"
                            android:text="30分钟"
                            style="@style/computer_finish_txt_value_style"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5">
                        <TextView
                            android:text="已答题数："
                            style="@style/computer_finish_txt_style"/>
                        <TextView
                            android:id="@+id/tv_do_number"
                            android:text="67"
                            style="@style/computer_finish_txt_value_style"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:text="剩余时间："
                            style="@style/computer_finish_txt_style"/>
                        <TextView
                            android:id="@+id/tv_last_time"
                            android:text="150分钟"
                            style="@style/computer_finish_txt_value_style"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5">
                        <TextView
                            android:text="未答题数："
                            style="@style/computer_finish_txt_style"/>
                        <TextView
                            android:id="@+id/tv_last_number"
                            android:text="13"
                            style="@style/computer_finish_txt_value_style"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/main_theme_six_deep_color"
                android:gravity="center"
                android:id="@+id/btn_start"
                android:background="@drawable/shape_app_theme_corners_8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_28"
                android:text="查看报告"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
