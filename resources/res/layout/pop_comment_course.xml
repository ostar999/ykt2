<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_round_corner_radius_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="?attr/second_txt_color"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:paddingTop="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="恭喜您，本课程即将学完！\10给课程做个评价吧~~"
        android:lineSpacingExtra="@dimen/dp_5"
        android:paddingVertical="@dimen/dp_24"/>
    <View
        android:background="?attr/new_bg_one_border_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:text="知道了"
            android:layout_weight="1"/>
        <View
            android:background="?attr/new_bg_one_border_color"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/main_theme_red_color"
            android:gravity="center"
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:text="评价课程"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
