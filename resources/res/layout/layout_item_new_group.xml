<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/main_groups_layout"
        android:paddingLeft="10dp"
        android:paddingTop="17dp"
        android:paddingRight="10dp"
        android:paddingBottom="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:textColor="@color/black"
            android:id="@+id/main_groups_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="生物化学"
            android:drawableRight="@drawable/icon_indicator_bottom"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/llay_progress_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="12sp"
                android:layout_gravity="right"
                android:id="@+id/main_groups_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100题"/>
            <com.psychiatrygarden.widget.SpringProgressView
                android:id="@+id/spring_progress_view"
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <TextView
            android:textSize="14sp"
            android:gravity="center"
            android:id="@+id/main_groups_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
