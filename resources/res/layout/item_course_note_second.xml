<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemRootSecond"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_16"
    android:paddingVertical="@dimen/dp_16">
    <RelativeLayout
        android:id="@+id/itemNoteSecondContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/noteSecondSelectImage"
            android:visibility="gone"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_12"
            android:src="?attr/download_new_select"
            android:scaleType="fitXY"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/itemNoteSecondTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_22"
            android:text="第一章 绪论【直播】"
            android:maxLines="1"
            android:layout_toRightOf="@+id/noteSecondSelectImage"
            android:paddingEnd="@dimen/dp_8"/>
        <ImageView
            android:id="@+id/noteImgArrow"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_22"
            android:src="?attr/icon_bottom_arrow_new"
            android:layout_alignParentRight="true"
            android:paddingVertical="@dimen/dp_3"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/third_txt_color"
            android:id="@+id/tvNoteCount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_5"
            android:text="1条笔记"
            android:layout_below="@+id/itemNoteSecondTitle"
            android:layout_alignLeft="@+id/itemNoteSecondTitle"/>
    </RelativeLayout>
</RelativeLayout>
