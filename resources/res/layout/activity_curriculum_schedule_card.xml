<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/parentview"
    android:background="?attr/app_bg"
    android:fitsSystemWindows="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view1"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:id="@+id/relLayout"
        android:background="?attr/title_bar_white_bg_color"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/iconBack"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:src="?attr/jingyanback"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"/>
        <TextView
            android:textSize="18sp"
            android:textColor="?attr/title_bar_text_new_color"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="课程表"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/downimg2"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:src="?attr/menuimg"
            android:paddingStart="7.5dp"
            android:paddingEnd="15dp"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/qrcodeimg"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:src="?attr/qrcodeimg"
            android:paddingStart="15dp"
            android:paddingEnd="7.5dp"
            android:layout_toStartOf="@+id/downimg2"/>
        <View
            android:background="?attr/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/schedulefid"
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relLayout"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/white"
        android:id="@+id/qrshowimg"
        android:background="@drawable/shape_trans_list"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:text="进群交流"
        android:layout_below="@+id/relLayout"
        android:layout_marginEnd="27dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
