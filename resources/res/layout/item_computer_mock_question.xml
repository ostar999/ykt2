<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="10sp"
        android:textColor="?attr/first_txt_color"
        android:gravity="center"
        android:id="@+id/tv_number"
        android:background="@drawable/shape_computer_no_answer_question_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"/>
    <View
        android:id="@+id/current_view"
        android:background="@drawable/shape_computer_current_question_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
