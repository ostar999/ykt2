<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/rl_column_ques"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_12">
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@drawable/color_question_child_category"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_column_name"
        android:background="@drawable/bg_question_child_category"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:drawableLeft="?attr/ic_knowledge_chart_lock"
        android:drawablePadding="@dimen/dp_4"
        android:paddingHorizontal="@dimen/dp_12"
        android:paddingVertical="@dimen/dp_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:textColor="?attr/new_bg_one_color"
        android:gravity="center"
        android:id="@+id/tv_column_tag"
        android:background="@drawable/bg_kingkong_label"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:text="标啊签"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/dp_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
