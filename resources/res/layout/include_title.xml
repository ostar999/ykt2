<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/include_title_relative"
    android:background="?attr/new_bg_one_color"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <ImageView
        android:id="@+id/include_btn_left"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="?attr/ic_black_back"
        android:layout_centerVertical="true"
        android:paddingStart="15dp"
        android:paddingEnd="22dp"/>
    <ImageView
        android:id="@+id/include_btn_right"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingStart="22dp"
        android:paddingEnd="15dp"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/first_txt_color"
        android:gravity="center"
        android:id="@+id/include_btn_right_tv"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/include_title_layout"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <com.psychiatrygarden.widget.CircleImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/header_title_img"
            android:visibility="gone"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/schooldefaultimg"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:layout_gravity="center_vertical"
            android:id="@+id/include_title_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/include_title_center_iv"
            android:visibility="gone"
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:src="@drawable/bg_title_open_arrow"
            android:layout_marginStart="3dp"/>
    </LinearLayout>
    <TextView
        android:textSize="10sp"
        android:textColor="?attr/first_txt_color"
        android:gravity="center"
        android:id="@+id/comment_lou"
        android:background="@drawable/stoke_kongwrite"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="楼主"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/delete_img"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/deletevideo"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:textSize="15sp"
        android:textColor="?attr/first_txt_color"
        android:id="@+id/deleteTxt"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/pinglunlog"
        android:padding="15dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/tishi"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:id="@+id/lineselect"
        android:background="?attr/bondline"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true">
        <CheckedTextView
            android:textSize="13sp"
            android:textColor="@drawable/text_new_color"
            android:gravity="center"
            android:id="@+id/remen"
            android:background="@drawable/hot_select_bg"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="热门"/>
        <View
            android:background="?attr/select_line_new"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <CheckedTextView
            android:textSize="13sp"
            android:textColor="@drawable/text_new_color"
            android:gravity="center"
            android:id="@+id/zuixin"
            android:background="@drawable/latest_select_bg"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新"/>
    </LinearLayout>
</RelativeLayout>
