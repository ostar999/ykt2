<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/ly_item"
    android:background="@drawable/shape_hot_circle_one_bg"
    android:paddingLeft="8dp"
    android:paddingTop="11dp"
    android:paddingRight="8dp"
    android:paddingBottom="11dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginHorizontal="16dp"
    android:paddingHorizontal="8dp"
    android:paddingVertical="11dp">
    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:id="@+id/ly_number"
        android:background="@mipmap/ic_hot_fire_one"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp">
        <TextView
            android:textSize="9sp"
            android:textStyle="bold"
            android:textColor="@color/new_white_color"
            android:id="@+id/tv_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"/>
    </LinearLayout>
    <TextView
        android:textSize="15sp"
        android:textColor="?attr/first_txt_color"
        android:ellipsize="end"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="24小时热帖中的唯一的置顶热帖不显示热度..."
        android:lines="1"/>
</LinearLayout>
