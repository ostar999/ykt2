<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_round_corner_top_radius_16"
    android:paddingBottom="@dimen/dp_7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_16">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:layout_gravity="center"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="筛选"/>
        <ImageView
            android:layout_gravity="end"
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="?attr/ic_close"
            android:layout_marginEnd="@dimen/dp_16"/>
    </FrameLayout>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_place_holder"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"
                app:layout_constraintTop_toTopOf="parent">
                <FrameLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_56">
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/bg_tips"
                        android:padding="@dimen/dp_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="@dimen/dp_15"
                                android:layout_height="@dimen/dp_10"
                                android:src="@drawable/ic_tips"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textStyle="bold"
                                android:textColor="?attr/first_txt_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_4"
                                android:text="小提示"/>
                        </LinearLayout>
                        <TextView
                            android:textSize="@dimen/sp_10"
                            android:textColor="?attr/second_txt_color"
                            android:ellipsize="end"
                            android:id="@+id/tv_tips"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_2"
                            android:maxLines="2"
                            android:scrollHorizontally="true"
                            android:marqueeRepeatLimit="marquee_forever"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="end|top"
                        android:id="@+id/ll_detail"
                        android:background="@drawable/bg_filter_describe_jump"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dp_2">
                        <TextView
                            android:textSize="@dimen/sp_10"
                            android:textColor="?attr/white_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看详细说明"/>
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_1"
                            android:src="?attr/ic_kp_enter"
                            app:tint="?attr/white_color"/>
                    </LinearLayout>
                </FrameLayout>
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_gravity="center"
                    android:id="@+id/icon"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:src="@drawable/app_icon"
                    app:riv_corner_radius="@dimen/dp_16"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_triangle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_56"
                    android:src="@drawable/ic_left_triangle"/>
            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:orientation="vertical"
                android:id="@+id/rvOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/ll_place_holder"/>
            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_16"
                android:adjustViewBounds="true"
                android:layout_marginHorizontal="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@+id/rvOptions"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/line"
            android:background="?attr/new_bg_one_border_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_explain"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_ok"
            android:background="@drawable/red_round_coner_color_f95843_radius_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_16"
            android:text="确定"
            android:layout_marginHorizontal="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@+id/line"/>
    </LinearLayout>
</LinearLayout>
