<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:id="@+id/pop_line"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="?attr/biaoqian"
        android:paddingLeft="@dimen/content_item_padding"
        android:paddingTop="@dimen/content_item_padding_large"
        android:paddingRight="@dimen/content_item_padding"
        android:paddingBottom="@dimen/content_item_padding_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_options_1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_reply_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.psychiatrygarden.widget.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_option_1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="?attr/ic_circle_reply"
                    android:layout_centerHorizontal="true"
                    app:border_color="?attr/line_circle"
                    app:border_width="0.8dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/question_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/reply_label_only"
                    android:layout_below="@+id/iv_option_1"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_copy_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.psychiatrygarden.widget.CircleImageView
                    android:id="@+id/iv_option_2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="?attr/ic_circle_copy"
                    android:layout_centerHorizontal="true"
                    app:border_color="?attr/line_circle"
                    app:border_width="0.5dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/question_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/copy_label_only"
                    android:layout_below="@+id/iv_option_2"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_edit_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.psychiatrygarden.widget.CircleImageView
                    android:id="@+id/iv_option_4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="?attr/ic_circle_edit"
                    android:layout_centerHorizontal="true"
                    app:border_color="?attr/line_circle"
                    app:border_width="0.5dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="?attr/question_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/edit_label_only"
                    android:layout_below="@+id/iv_option_4"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_jubao_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.psychiatrygarden.widget.CircleImageView
                    android:id="@+id/iv_option_3_jubao"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="?attr/ic_circle_jubao"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    app:border_color="?attr/line_circle"
                    app:border_width="0.5dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="?attr/question_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="举报"
                    android:layout_below="@+id/iv_option_3_jubao"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:background="?attr/input_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:layout_below="@+id/ll_options_1"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_options_2"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_item_padding_large"
            android:layout_below="@+id/view1">
            <RelativeLayout
                android:id="@+id/rl_delete_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.psychiatrygarden.widget.CircleImageView
                    android:id="@+id/iv_option_5"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="?attr/ic_circle_delete"
                    android:layout_centerHorizontal="true"
                    app:border_color="?attr/line_circle"
                    app:border_width="0.5dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="?attr/question_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/delete_label_only"
                    android:layout_below="@+id/iv_option_5"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_sixin_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.psychiatrygarden.widget.CircleImageView
                    android:id="@+id/iv_option_3_sixin"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="?attr/ic_circle_sixin"
                    android:layout_centerHorizontal="true"
                    app:border_color="?attr/line_circle"
                    app:border_width="0.5dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="?attr/question_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="私信"
                    android:layout_below="@+id/iv_option_3_sixin"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_fengjin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.psychiatrygarden.widget.CircleImageView
                    android:id="@+id/iv_option_7"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="17dp"
                    android:src="?attr/imgfengjing"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="17dp"
                    app:border_color="?attr/line_circle"
                    app:border_width="0.5dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="?attr/question_color"
                    android:id="@+id/fengjin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="封禁"
                    android:layout_below="@+id/iv_option_7"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_jiajin"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.psychiatrygarden.widget.CircleImageView
                    android:id="@+id/iv_option_6"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="?attr/jiajinghui"
                    android:layout_centerHorizontal="true"
                    app:border_color="?attr/line_circle"
                    app:border_width="0.5dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="?attr/question_color"
                    android:id="@+id/jiajing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="加精"
                    android:layout_below="@+id/iv_option_6"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/ll_options_2"
            android:layout_alignLeft="@+id/ll_options_2"
            android:layout_alignRight="@+id/ll_options_2">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/linadminAll"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_alignRight="@+id/linearLayout1">
            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理员操作"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
