<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_comment"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/include_title"
        android:visibility="gone"
        layout="@layout/include_title"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mSwipeLayput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_topic_detail_bottom">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/empty_view"
                android:visibility="gone"
                layout="@layout/layout_empty_view"/>
            <com.psychiatrygarden.widget.PinnedSectionListView1
                android:id="@+id/pinnedSectionListView1"
                android:scrollbars="none"
                android:fadingEdge="none"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@color/transparent"
                android:divider="@null"
                android:dividerHeight="0dp"/>
        </LinearLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <RelativeLayout
        android:id="@+id/rl_topic_detail_bottom"
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:id="@+id/view_topic_detail_divider"
            android:background="?attr/gray_line_126"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/qbrel"
            android:background="?attr/tertiary_backgroup_white_color"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp">
            <LinearLayout
                android:id="@+id/ly_praise"
                android:layout_alignParentEnd="true"
                style="@style/layout_icon_style">
                <ImageView
                    android:id="@+id/img_praise"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/dianzancourse"/>
                <TextView
                    android:text="点赞"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_comment_msg"
                android:layout_toStartOf="@+id/ly_praise"
                style="@style/layout_icon_style">
                <ImageView
                    android:id="@+id/img_comment"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/question_msg"/>
                <TextView
                    android:text="评论"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_collection"
                android:layout_toStartOf="@+id/ly_comment_msg"
                style="@style/layout_icon_style">
                <ImageView
                    android:id="@+id/img_collection"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/icon_collect_no"/>
                <TextView
                    android:text="收藏"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
            <TextView
                android:textSize="13sp"
                android:textStyle="normal"
                android:textColor="?attr/information_edit_hint_color"
                android:gravity="center_vertical"
                android:id="@+id/btn_comment"
                android:background="@drawable/comment_bg_shape"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="写评论"
                android:drawablePadding="5dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/ly_collection"
                app:drawableStartCompat="?attr/icon_write_comment"/>
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/ll_question_comment"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignTop="@+id/btn_comment"
                android:layout_marginEnd="6dp"
                android:layout_alignEnd="@+id/btn_comment">
                <View
                    android:id="@+id/line"
                    android:background="?attr/fourth_line_backgroup_color"
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"/>
                <ImageView
                    android:id="@+id/img_msg"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="?attr/comment_icon_msg"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/line"/>
                <TextView
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:id="@+id/questiondetails_btn_commentNum"
                    android:background="@drawable/fff6614b_8"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginTop="3dp"
                    android:text="0"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="-10dp"
                    android:layout_toEndOf="@+id/img_msg"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lineselect2"
        android:background="@drawable/shape_hot_new_bg"
        android:padding="2dp"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/include_title"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true">
        <CheckedTextView
            android:textSize="@dimen/sp_11"
            android:textColor="@drawable/text_new2_color"
            android:gravity="center"
            android:id="@+id/remen2"
            android:background="@drawable/hot_select_bg"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="最热"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>
        <CheckedTextView
            android:textSize="@dimen/sp_11"
            android:textColor="@drawable/text_new2_color"
            android:gravity="center"
            android:id="@+id/zuixin2"
            android:background="@drawable/latest_select_bg"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/reltransview"
        android:background="@drawable/sanjiaoimg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <TextView
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热评功能已升级"
                android:drawablePadding="10dp"
                android:layout_centerVertical="true"
                app:drawableStartCompat="@drawable/notisimg"/>
            <TextView
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:id="@+id/catview"
                android:background="@drawable/hotshape2"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看升级版"
                android:layout_centerVertical="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
