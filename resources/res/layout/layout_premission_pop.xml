<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16dp"
        android:textColor="?attr/question_color"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="权限通知"/>
    <TextView
        android:textSize="15dp"
        android:textColor="?attr/question_color"
        android:id="@+id/content"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="为了方便您在App内更新下载版本、下载视频、上传图片或头像，请您允许医考帮使用存储（读取）内存权限和相机权限，使用第三方推送sdk，需要位置权限，更好服务用户。"/>
    <View
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="?attr/question_color"
            android:gravity="center"
            android:id="@+id/cancle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="以后再说"
            android:layout_weight="1"/>
        <View
            android:background="?attr/line"
            android:layout_width="0.5dp"
            android:layout_height="40dp"/>
        <TextView
            android:textColor="?attr/dominant_color"
            android:gravity="center"
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="允许"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
