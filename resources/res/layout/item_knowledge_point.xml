<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/app_bg"
    android:paddingTop="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="?attr/new_bg_two_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/ll_title"/>
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintTop_toBottomOf="@+id/tv_time">
        <CheckedTextView
            android:textSize="@dimen/sp_14"
            android:textColor="@drawable/color_knowledge_point"
            android:ellipsize="end"
            android:id="@+id/tv_point_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:lines="1"
            android:layout_weight="1"/>
        <CheckedTextView
            android:textSize="@dimen/sp_12"
            android:textColor="@drawable/color_knowledge_point_operation"
            android:id="@+id/tv_operate"
            android:background="@drawable/bg_knowledge_point_operation"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:checked="false"
            android:text="练习"
            android:paddingHorizontal="@dimen/dp_12"
            android:paddingVertical="@dimen/dp_2"
            app:layout_constraintBottom_toBottomOf="@+id/tv_point_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_point_title"
            app:layout_constraintTop_toTopOf="@+id/tv_point_title"/>
    </LinearLayout>
    <CheckedTextView
        android:textSize="@dimen/sp_12"
        android:textColor="@drawable/color_knowledge_point_play"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:checked="false"
        app:layout_constraintLeft_toRightOf="@+id/iv_status"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_gravity="start"
        android:id="@+id/iv_status"
        android:background="?attr/anim_excerpt_play"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
