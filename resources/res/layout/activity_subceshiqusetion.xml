<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:enabled="false"
        android:textSize="12sp"
        android:textColor="?attr/question_color"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:id="@+id/questiondetails_tv_title_gufen"
        android:background="?attr/hor_view_color"
        android:paddingLeft="20dp"
        android:paddingTop="7dp"
        android:paddingRight="20dp"
        android:paddingBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:paddingHorizontal="20dp"/>
    <com.psychiatrygarden.widget.ViewPagerCompat
        android:id="@+id/questiondetails_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/questiondetails_bottom_layout"
        android:background="@color/gray_bg_night"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:id="@+id/reljj"
            android:background="?attr/hor_view_color"
            android:layout_width="match_parent"
            android:layout_height="46dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/linejj"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/gufenjh"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="?attr/gufenjh"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/item_school_color"
                    android:id="@+id/tv_jj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交卷"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
            <TextView
                android:textSize="15sp"
                android:textColor="?attr/question_color"
                android:gravity="center"
                android:id="@+id/timestr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/linlb"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/question_color"
                    android:gravity="center"
                    android:id="@+id/cusposition"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="?attr/gufenlb"
                    android:drawablePadding="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
