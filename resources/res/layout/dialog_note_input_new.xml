<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/commentList_bottom_layout"
    android:background="@drawable/bg_round_corner_top_radius_16"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:paddingHorizontal="@dimen/dp_16">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/forth_txt_color"
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加留言"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/forth_txt_color"
            android:gravity="right"
            android:id="@+id/tv_dialog_ok"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:background="?attr/line_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:translationZ="0.1dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/shape_new_bg_two_color_corner12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_16">
            <EditText
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:textColorHint="?attr/dialog_input_hint_color"
                android:gravity="top"
                android:id="@+id/dialog_input_et_comment"
                android:background="@color/transparent"
                android:padding="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="选填 建议留言前先与客服沟通确认 "
                android:maxLength="5000"
                android:layout_weight="1"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
