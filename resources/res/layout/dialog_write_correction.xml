<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:paddingHorizontal="@dimen/dp_16">
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_close"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/color_303030"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="纠错"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_line1"
        style="@style/line_style_book"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16">
        <View
            android:id="@+id/view_top_line"
            android:background="@color/color_909090"
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_12"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_909090"
            android:ellipsize="end"
            android:id="@+id/tv_citation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="@dimen/dp_4"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"/>
    <com.ruffian.library.widget.REditText
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_303030"
        android:textColorHint="@color/color_bfbfbf"
        android:gravity="start"
        android:id="@+id/et_input"
        android:padding="@dimen/dp_16"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:hint="请输入纠错内容"
        android:maxLength="300"
        android:inputType="textMultiLine"
        android:layout_marginHorizontal="@dimen/dp_16"
        app:background_normal="@color/color_f7f8fa"
        app:corner_radius="@dimen/dp_8"/>
    <View
        android:id="@+id/view_line2"
        style="@style/line_style_book"/>
    <com.ruffian.library.widget.RTextView
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="end"
        android:id="@+id/tv_publish"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:text="发布"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginVertical="@dimen/dp_12"
        app:background_normal="@color/color_dd594a"
        app:corner_radius="@dimen/dp_12"/>
</LinearLayout>
