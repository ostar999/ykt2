<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_260">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_coupon"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_64"
                android:layout_marginBottom="@dimen/dp_16"
                android:src="@drawable/ic_single_coupon_congratulation"/>
            <include layout="@layout/item_coupon"/>
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_get"
                android:background="@drawable/shape_btn_red_radius_12"
                android:layout_width="@dimen/dp_247"
                android:layout_height="@dimen/dp_42"
                android:layout_marginLeft="@dimen/dp_23"
                android:layout_marginRight="@dimen/dp_23"
                android:layout_marginBottom="@dimen/dp_24"
                android:text="立即领取"
                android:layout_marginHorizontal="@dimen/dp_23"/>
        </LinearLayout>
    </FrameLayout>
    <ImageView
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_24"
        android:src="@drawable/ic_close_pop"/>
</LinearLayout>
