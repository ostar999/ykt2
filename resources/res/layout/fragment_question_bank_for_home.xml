<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/question_part_loading"/>
    <LinearLayout
        android:id="@+id/ly_year_filter"
        android:background="?attr/ic_home_filter_year_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:src="?attr/ic_question_year_filter"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:textSize="13sp"
            android:textColor="?attr/first_text_color"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="您的试题存在筛选条件："/>
        <TextView
            android:textSize="13sp"
            android:textColor="?attr/dominant_color"
            android:gravity="center_vertical"
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:layout_weight="1"/>
        <TextView
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="?attr/dominant_color"
            android:id="@+id/btn_update_year"
            android:background="@drawable/ffffffff_13"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="去修改"
            android:layout_marginEnd="24dp"
            android:layout_marginVertical="8dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyexpend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
