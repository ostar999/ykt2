<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="?attr/new_bg_one_color"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:id="@+id/iconBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="取消"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="下载"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:id="@+id/managerTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="管理"
            android:paddingStart="20dp"
            android:paddingEnd="15dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycledown"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_bottom_pannel"
        android:background="?attr/download_bottom_bg_color"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        <CheckedTextView
            android:textSize="16sp"
            android:textColor="?attr/first_text_color"
            android:gravity="center"
            android:id="@+id/selectAllTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:drawablePadding="10dp"
            android:drawableStart="?attr/download_item_un_select_icon"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/tertiary_text_color"
            android:gravity="center"
            android:id="@+id/cacheSizeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/downTv"
            android:background="@drawable/select_round_red"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"/>
    </LinearLayout>
</LinearLayout>
