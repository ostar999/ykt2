<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/rl_column_ques"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_72"
    android:paddingHorizontal="@dimen/dp_16">
    <FrameLayout
        android:layout_gravity="end"
        android:id="@+id/fl_tag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="?attr/bg_home_tab_label"
            android:scaleType="fitXY"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textColor="?attr/new_bg_one_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_column_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:text="会会会"
            android:maxLines="1"/>
    </FrameLayout>
    <TextView
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_141516"
        android:gravity="center"
        android:id="@+id/tv_column_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:text="历年真题"
        android:maxLines="1"
        android:includeFontPadding="false"/>
    <ImageView
        android:id="@+id/img_choose"
        android:layout_width="@dimen/dp_17"
        android:layout_height="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_4"
        android:src="?attr/ic_comment_group_tag"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_column_name"
        android:layout_alignEnd="@+id/tv_column_name"/>
</LinearLayout>
