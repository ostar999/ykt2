<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ly_root"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/parent_view"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:orientation="vertical"
            android:id="@+id/appbarlayout"
            android:background="@color/white"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">
                <ImageView
                    android:id="@+id/img_bg"
                    android:background="@mipmap/ic_mock_point_statistics"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_162"
                    app:layout_collapseMode="parallax"/>
                <RelativeLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/rellogview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_44">
                    <View
                        android:background="@color/new_bg_one_color"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignParentBottom="true"/>
                    <RelativeLayout
                        android:id="@+id/ly_statistics_parent"
                        android:background="@drawable/shape_white_top_16_no_night"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginHorizontal="@dimen/dp_16">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/ly_statistics"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_66"
                            android:layout_margin="@dimen/dp_16">
                            <LinearLayout
                                android:id="@+id/ly_score"
                                style="@style/mock_statistics_layout_style">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textColor="@color/main_theme_color"
                                        android:id="@+id/tv_score"
                                        android:text="0"
                                        android:fontFamily="@font/poppins_semibold"
                                        style="@style/statistics_main_txt_18_style"/>
                                    <TextView
                                        android:textSize="@dimen/sp_12"
                                        android:textStyle="bold"
                                        android:textColor="@color/main_theme_color"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="分"/>
                                </LinearLayout>
                                <TextView
                                    android:textSize="@dimen/sp_11"
                                    android:textColor="@color/third_txt_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="得分"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ly_time"
                                style="@style/mock_statistics_layout_style">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/tv_history_time"
                                        android:visibility="gone"
                                        android:text="0h"
                                        style="@style/statistics_main_txt_18_style"/>
                                    <TextView
                                        android:id="@+id/tv_use_time"
                                        android:text="0m"
                                        style="@style/statistics_main_txt_18_style"/>
                                </LinearLayout>
                                <TextView
                                    android:textSize="@dimen/sp_11"
                                    android:textColor="@color/third_txt_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="总用时"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ly_percent"
                                style="@style/mock_statistics_layout_style">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/tv_percent"
                                        android:text="0%"
                                        style="@style/statistics_main_txt_18_style"/>
                                </LinearLayout>
                                <TextView
                                    android:textSize="@dimen/sp_11"
                                    android:textColor="@color/third_txt_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="正确率"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ly_rank"
                                style="@style/mock_statistics_layout_style">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/tv_rank"
                                        android:text="0"
                                        style="@style/statistics_main_txt_18_style"/>
                                    <TextView
                                        android:textSize="@dimen/sp_10"
                                        android:textStyle="bold"
                                        android:textColor="@color/first_txt_color"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="名"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textSize="@dimen/sp_11"
                                        android:textColor="@color/third_txt_color"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="排名"/>
                                    <ImageView
                                        android:layout_width="@dimen/dp_12"
                                        android:layout_height="@dimen/dp_12"
                                        android:layout_marginTop="0.5dp"
                                        android:src="@mipmap/ic_outlines_arrow"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toobars1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">
                    <RelativeLayout
                        android:id="@+id/toolbars"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_actionbar_back"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/ic_black_back"/>
                        <TextView
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:textColor="@color/first_txt_color"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:id="@+id/nav_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="统计"
                            android:lines="1"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/btn_share"
                            android:layout_toEndOf="@+id/iv_actionbar_back"/>
                        <ImageView
                            android:gravity="center"
                            android:id="@+id/btn_share"
                            android:padding="@dimen/dp_10"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/ic_gray_share"
                            android:layout_marginEnd="@dimen/dp_6"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <cn.webdemo.com.supporfragment.tablayout.MagicIndicator
                android:id="@+id/magicIndicator"
                android:background="@color/new_bg_one_color"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_below="@+id/titleBarLayout"
                android:paddingHorizontal="@dimen/dp_16"/>
            <View
                android:id="@+id/line"
                android:background="@color/new_gray_line_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </com.google.android.material.appbar.AppBarLayout>
        <com.psychiatrygarden.widget.CoustromViewPager
            android:id="@+id/viewpager"
            android:background="@color/new_bg_one_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>
