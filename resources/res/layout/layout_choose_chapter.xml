<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layoutTitle"
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:id="@+id/tv_export_title"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="章节选择"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_export_back"
            android:padding="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/icon_del_141516"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_6"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/search_text_color"
            android:gravity="center"
            android:id="@+id/tv_export_all_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="全选"
            android:paddingStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <com.psychiatrygarden.widget.CustomEmptyView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mSwipeLayput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_above="@+id/linexportview">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="?attr/forum_swipe_txt"
            app:srlClassicsSpinnerStyle="Translate"
            app:srlPrimaryColor="@color/transparent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linexportview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:background="?attr/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/relbuttom"
            android:background="?attr/tertiary_backgroup_white_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:paddingStart="10dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ly_checked"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/checkeddown"
                    android:padding="6dp"
                    android:visibility="visible"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="?attr/download_item_un_select_icon"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/select_all_text_color"
                    android:id="@+id/tv_checked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全选"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
            <TextView
                android:enabled="true"
                android:textSize="14sp"
                android:textColor="@color/color_download_enable"
                android:gravity="center"
                android:id="@+id/btn_sure"
                android:background="@drawable/bg_download"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="确定"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/dp_16"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
