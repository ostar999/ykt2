<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/copy_answer_parent_ly"
        android:background="@drawable/plv_cp_ly_corner_bg"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="wrap_content"
        android:layout_height="36dp">
        <TextView
            android:textColor="#f0f1f5"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/long_press_copy_tv"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复制"
            android:layout_weight="1"/>
        <View
            android:layout_gravity="center"
            android:id="@+id/split_view"
            android:background="#2fcccccc"
            android:visibility="visible"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"/>
        <TextView
            android:textColor="#f0f1f5"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/long_press_answer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_gravity="center"
        android:id="@+id/inverted_triangle_view"
        android:background="@drawable/plv_inverted_triangle_layer_list"
        android:layout_width="12dp"
        android:layout_height="12dp"/>
</LinearLayout>
