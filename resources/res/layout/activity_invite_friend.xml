<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_view"
        android:background="?attr/bg_invite_friend_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="?attr/bg_invite_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="8dp">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/first_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="您的邀请码"
                    android:drawablePadding="8dp"
                    app:drawableEndCompat="@mipmap/invite_right"
                    app:drawableStartCompat="@mipmap/invite_left"/>
                <TextView
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="?attr/dominant_color"
                    android:id="@+id/tv_invite_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginVertical="16dp"/>
                <com.psychiatrygarden.widget.AlphaButton
                    android:textSize="14sp"
                    android:textColor="?attr/white_color02"
                    android:gravity="center"
                    android:id="@+id/tv_copy"
                    android:background="?attr/red_round_coner"
                    android:layout_width="154dp"
                    android:layout_height="40dp"
                    android:text="复制"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/tertiary_text_color"
                    android:id="@+id/tv_invite_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="43dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:contentDescription="@null"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_qr_code"
                    android:layout_width="148dp"
                    android:layout_height="148dp"
                    android:layout_marginTop="25dp">
                    <ImageView
                        android:id="@+id/img_qr_code"
                        android:layout_width="132dp"
                        android:layout_height="132dp"
                        android:src="@mipmap/ykb_qr_code"
                        android:scaleType="fitXY"
                        android:contentDescription="@null"/>
                </LinearLayout>
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/first_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:text="@string/scan_down_app"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/secondary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- 温馨提示 -"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTips"
                    android:paddingLeft="33dp"
                    android:paddingRight="33dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:nestedScrollingEnabled="false"
                    android:paddingHorizontal="33dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
