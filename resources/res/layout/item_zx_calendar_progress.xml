<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_78"
    android:layout_height="wrap_content">
    <TextView
        android:enabled="true"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/zx_color_blue"
        android:gravity="center"
        android:id="@+id/tvTop"
        android:background="@drawable/shape_zx_calendar_progress_bg_select"
        android:paddingBottom="@dimen/dp_3"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_44"
        android:text=""
        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layoutProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_below="@+id/tvTop">
        <View
            android:layout_gravity="center_vertical"
            android:id="@+id/viewProgress1"
            android:background="@color/zx_color_blue"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_3"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTop"/>
        <TextView
            android:enabled="true"
            android:id="@+id/viewProgressPoint"
            android:background="@drawable/shape_zx_calendar_point_select"
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_7"
            app:layout_constraintBaseline_toBaselineOf="@+id/viewProgress1"
            app:layout_constraintLeft_toRightOf="@+id/viewProgress1"
            app:layout_constraintTop_toBottomOf="@+id/tvTop"/>
        <View
            android:layout_gravity="center_vertical"
            android:id="@+id/viewProgress2"
            android:background="@color/zx_color_blue"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_3"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTop"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="?attr/third_txt_color"
        android:gravity="center"
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text=""
        android:layout_below="@+id/layoutProgress"/>
</RelativeLayout>
