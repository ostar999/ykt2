<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <LinearLayout
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_file_type"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="14dp">
            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:ellipsize="end"
                android:id="@+id/tv_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/third_txt_color"
                    android:ellipsize="end"
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/third_txt_color"
                    android:ellipsize="end"
                    android:id="@+id/tv_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/third_txt_color"
                    android:ellipsize="end"
                    android:id="@+id/tv_download_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ic_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/lock"
            android:layout_marginStart="@dimen/dp_32"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_select"
            android:visibility="gone"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="?attr/download_item_un_select_icon_new"/>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
</LinearLayout>
