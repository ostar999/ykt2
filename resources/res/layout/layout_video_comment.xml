<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srlAccentColor="?attr/second_txt_color"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.psychiatrygarden.widget.PinnedSectionListView1
            android:id="@+id/listView"
            android:scrollbars="none"
            android:fadingEdge="none"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:nestedScrollingEnabled="true"/>
        <LinearLayout
            android:layout_gravity="end"
            android:id="@+id/lineselect2"
            android:background="@drawable/shape_hot_new_bg"
            android:padding="@dimen/dp_2"
            android:visibility="gone"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="11sp"
                android:gravity="center"
                android:id="@+id/tvReMen"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:text="最热"/>
            <TextView
                android:textSize="11sp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/tvZuiXin"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:text="最新"/>
            <CheckedTextView
                android:textSize="@dimen/sp_11"
                android:textColor="@drawable/text_new2_color"
                android:gravity="center"
                android:id="@+id/remen2"
                android:background="@drawable/hot_select_bg"
                android:paddingTop="2dp"
                android:paddingBottom="3dp"
                android:visibility="gone"
                android:layout_width="36dp"
                android:layout_height="26dp"
                android:text="最热"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>
            <CheckedTextView
                android:textSize="@dimen/sp_11"
                android:textColor="@drawable/text_new2_color"
                android:gravity="center"
                android:id="@+id/zuixin2"
                android:background="@drawable/latest_select_bg"
                android:paddingTop="2dp"
                android:paddingBottom="3dp"
                android:visibility="gone"
                android:layout_width="36dp"
                android:layout_height="26dp"
                android:text="最新"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>
        </LinearLayout>
        <com.psychiatrygarden.widget.CustomEmptyView
            android:id="@+id/empty_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srlAccentColor="?attr/second_txt_color"/>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>
