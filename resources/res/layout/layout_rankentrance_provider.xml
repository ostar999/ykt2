<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemrel"
    android:background="?attr/app_bg"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.psychiatrygarden.widget.CircleImageView
        android:id="@+id/iv_header_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/personal_headimg_icon"
        android:layout_centerVertical="true"
        android:contentDescription="@null"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/rel_id"
        android:layout_toRightOf="@+id/iv_header_img">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/linvddd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:textColor="?attr/first_txt_color"
                android:gravity="center"
                android:id="@+id/tv_ranking_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:drawablePadding="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linvddd"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/third_txt_color"
                android:gravity="center"
                android:id="@+id/tv_ranking_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32242"
                android:drawableRight="@drawable/xqimg"
                android:drawablePadding="10dp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/rel_id"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <com.psychiatrygarden.widget.CircleImageView
            android:id="@+id/circleimg"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/forth_txt_color"
            android:gravity="center"
            android:id="@+id/tv_ranking_num"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="123"/>
    </RelativeLayout>
</RelativeLayout>
