<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="top|center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:layout_marginTop="37dp"
        android:src="?attr/ic_cut_question_pop_bg"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="45dp"
            android:layout_weight="1">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/first_text_color"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="斩题成功"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/secondary_text_color"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="你可以在“我的 - 已斩试题”中查看全部\10已斩试题"
                android:lineSpacingExtra="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_select"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="?attr/download_item_un_select_icon"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/tertiary_text_color"
                    android:id="@+id/tv_not_remind_later"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="以后不再提示"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:id="@+id/tv_i_know"
                android:background="?attr/red_round_coner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:text="我知道了"
                android:layout_marginHorizontal="16dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_gravity="top|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_cut_question_pop_top"/>
</FrameLayout>
