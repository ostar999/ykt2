<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_content"
    android:background="@color/color_f7f8fa"
    android:layout_width="317dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_book_info"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="45dp"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_16">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56">
            <com.ruffian.library.widget.RImageView
                android:id="@+id/img_cover"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:src="@drawable/image_loading_error"
                android:scaleType="fitCenter"
                app:corner_radius="@dimen/dp_4"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_12">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="@color/color_303030"
                    android:ellipsize="marquee"
                    android:id="@+id/tv_book_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/color_909090"
                    android:ellipsize="marquee"
                    android:id="@+id/tv_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginVertical="@dimen/dp_16">
            <com.ruffian.library.widget.RTextView
                android:textSize="12sp"
                android:textColor="@color/color_909090"
                android:id="@+id/tv_all_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.ruffian.library.widget.RTextView
                android:textSize="12sp"
                android:textColor="@color/color_909090"
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:drawablePadding="@dimen/dp_2"
                app:icon_height_left="@dimen/dp_12"
                app:icon_normal_left="@drawable/icon_chapter_search"
                app:icon_width_left="@dimen/dp_12"/>
            <com.ruffian.library.widget.RCheckBox
                android:textSize="12sp"
                android:textColor="@color/color_909090"
                android:id="@+id/cb_sort"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:button="@null"
                android:text="倒序"
                android:drawablePadding="@dimen/dp_2"
                android:layout_marginStart="@dimen/dp_8"
                app:icon_checked_left="@drawable/icon_positive_sequence"
                app:icon_height_left="@dimen/dp_12"
                app:icon_normal_left="@drawable/icon_reverse_order"
                app:icon_width_left="@dimen/dp_12"
                app:icon_with_text="true"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_chapter_list"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:scrollbarStyle="insideInset"
            android:id="@+id/rv_chapter_list"
            android:layout_width="300dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
