<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ll_bot_search"
        android:background="@drawable/shape_forum_search_edittext_bg"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_below="@+id/rl_topbar"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/dp_8">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="?attr/ic_forum_search"
            android:layout_marginStart="16dp"/>
        <com.psychiatrygarden.widget.ClearEditText
            android:textSize="14sp"
            android:textColor="?attr/first_txt_color"
            android:textColorHint="?attr/forth_txt_color"
            android:id="@+id/head_search"
            android:background="@null"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:hint="输入关键字"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textCursorDrawable="@drawable/color_cursor"
            android:paddingHorizontal="8dp"/>
    </LinearLayout>
</LinearLayout>
