<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_11"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginBottom="@dimen/dp_6"
    android:layout_marginHorizontal="@dimen/dp_16">
    <LinearLayout
        android:background="@mipmap/ic_rank_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_alignTop="@+id/ly_rank_name"
        android:layout_alignBottom="@+id/empty_line"/>
    <RelativeLayout
        android:id="@+id/ly_rank_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@drawable/shape_rank_top_8_bg"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_6"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_34"
            android:layout_marginTop="-1dp"
            android:src="@mipmap/ic_rank_name_bg"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/color_a36"
            android:gravity="center"
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:text="刷题榜排行TOP5"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/dp_4"/>
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/ic_rank_left"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tv_rank"/>
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/ic_rank_right"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_rank"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@+id/ly_rank_name"
        android:layout_marginHorizontal="@dimen/dp_15">
        <LinearLayout
            android:gravity="center_vertical"
            android:background="@drawable/shape_title_info_bg"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:paddingHorizontal="@dimen/dp_16">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_a36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排名"
                android:paddingEnd="@dimen/dp_32"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_a36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_a36"
                android:id="@+id/tv_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刷题量"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ly_add_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_a36"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_more"
            android:paddingBottom="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多榜单内容"
            android:drawableRight="@mipmap/ic_rank_more"
            android:drawablePadding="@dimen/dp_4"/>
    </LinearLayout>
    <View
        android:id="@+id/empty_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/ly_info"/>
</RelativeLayout>
