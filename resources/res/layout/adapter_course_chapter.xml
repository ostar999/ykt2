<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/app_bg"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <RelativeLayout
        android:id="@+id/rl_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.psychiatrygarden.widget.SkinGrakImagView
            android:id="@+id/check_video"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/uncheckvideo"
            android:layout_centerVertical="true"/>
        <com.psychiatrygarden.widget.SkinGrakImagView
            android:id="@+id/iv_store_img"
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:layout_marginLeft="8dp"
            android:src="?attr/bifangloading"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/check_video"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <TextView
            android:textSize="10sp"
            android:textColor="?attr/app_title_color"
            android:gravity="center"
            android:id="@+id/tv_course_time"
            android:background="@drawable/black_translate_bg_shape"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="01:07:10"
            android:layout_alignBottom="@+id/iv_store_img"
            android:layout_marginEnd="8dp"
            android:layout_alignEnd="@+id/iv_store_img"/>
        <ImageView
            android:id="@+id/shipinsuoload"
            android:visibility="gone"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/shipinsuoload"
            android:layout_alignRight="@+id/iv_store_img"
            android:layout_alignBottom="@+id/iv_store_img"/>
        <TextView
            android:textColor="?attr/app_title_color"
            android:id="@+id/mdownimgTxt"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="6dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="6dp"
            android:layout_alignEnd="@+id/iv_store_img"/>
        <ImageView
            android:id="@+id/mdownimg"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="6dp"
            android:src="?attr/dimg"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_alignEnd="@+id/iv_store_img"/>
        <ImageView
            android:id="@+id/dakaimg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dakaimg"
            android:layout_above="@+id/tv_course_time"
            android:layout_alignRight="@+id/tv_course_time"/>
        <RelativeLayout
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_store_img"
            android:layout_alignRight="@+id/iv_store_img">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/tv_download"
                android:background="@color/transparent"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15%"/>
            <com.psychiatrygarden.widget.SkinGrakImagView
                android:id="@+id/iv_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/download_xiazai_icon"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/rl_image"
        android:layout_above="@+id/rl_course_info"
        android:layout_alignTop="@+id/rl_image">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:ellipsize="end"
            android:id="@+id/course_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_course_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rl_image"
        android:layout_alignBottom="@+id/rl_image">
        <TextView
            android:textSize="13sp"
            android:textColor="?attr/question_color"
            android:id="@+id/tv_course_play_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/tv_course_comment"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/item_school_color"
            android:id="@+id/tv_course_comment"
            android:background="?attr/gray_round_bg"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="eeeee"
            android:drawablePadding="5dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/rl_image"/>
</RelativeLayout>
