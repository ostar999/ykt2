<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/item_school_ll"
    android:background="@drawable/shape_white_corners_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8">
    <RelativeLayout
        android:id="@+id/item_school_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12">
                <com.psychiatrygarden.widget.CircleImageView
                    android:id="@+id/iv_school_icon"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginTop="@dimen/dp_8"
                    android:src="@mipmap/ic_order_default"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/school_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <HorizontalScrollView
                        android:id="@+id/chipScrollView"
                        android:scrollbars="none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_24">
                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            app:singleLine="true"/>
                    </HorizontalScrollView>
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="?attr/third_txt_color"
                        android:id="@+id/tv_address_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_6"
                        android:text="地址： 代码："/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="?attr/new_gray_line_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="@dimen/dp_12"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/tv_follow_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:textColor="?attr/third_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/tv_follow_count_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:textColor="?attr/third_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="近7天关注"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/tv_view_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:textColor="?attr/third_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="浏览"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/tv_student_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:textColor="?attr/third_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="招生数"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/tv_major_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:textColor="?attr/third_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专业数"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            android:textColor="?attr/new_white_color"
            android:id="@+id/tv_recommend"
            android:background="@drawable/color_white_round_topright_botleft"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐"
            android:layout_alignParentRight="true"
            android:paddingHorizontal="@dimen/dp_8"
            android:paddingVertical="@dimen/dp_2"/>
        <CheckBox
            android:id="@+id/checkbox_select"
            android:background="@drawable/school_check_box_bg_new"
            android:visibility="gone"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_38"
            android:layout_marginRight="@dimen/dp_12"
            android:checked="false"
            android:button="@null"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/school_change_ll"
            android:background="@drawable/school_rank_bg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_28">
            <ImageView
                android:id="@+id/rankChangeIv"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:src="@drawable/rank_up"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textStyle="bold"
                android:textColor="@color/main_theme_color"
                android:id="@+id/school_rank_change_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_4"
                android:text="2"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/school_rank_rl"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/school_rank_iv"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/school_rank_first"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/svip_blod_color"
                android:id="@+id/school_rank_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:text="02"
                android:fontFamily="@font/poppins_bold"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
