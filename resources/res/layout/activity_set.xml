<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/gray_line_126"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:textSize="15sp"
            android:textColor="?attr/question_color"
            android:id="@+id/tv_change_password"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:drawableRight="?attr/icon_indicator_right"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:gravity="center_vertical"
            android:id="@+id/tv_function_Introduction"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="功能介绍"
            android:drawableRight="?attr/icon_indicator_right"/>
        <View
            android:id="@+id/view_score"
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:gravity="center_vertical"
            android:id="@+id/tv_to_score"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="去评分"
            android:drawableRight="?attr/icon_indicator_right"/>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:gravity="center_vertical"
            android:id="@+id/tv_versions"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="检查更新"
            android:drawableRight="?attr/icon_indicator_right"/>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:gravity="center_vertical"
            android:id="@+id/yinsizhengce"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="隐私政策"
            android:drawableRight="?attr/icon_indicator_right"/>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:gravity="center_vertical"
            android:id="@+id/yonghuxieyi"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户协议"
            android:drawableRight="?attr/icon_indicator_right"/>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/xitongquanxian"
            android:background="?attr/bg_backgroud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统权限"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/item_name_color"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="授权使用的手机权限"
                android:drawableRight="?attr/icon_indicator_right"
                android:drawablePadding="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:gravity="center_vertical"
            android:id="@+id/tv_about"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关于医考帮"
            android:drawableRight="?attr/icon_indicator_right"/>
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:gravity="center_vertical"
            android:id="@+id/tv_update_answered"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更新答题记录"
            android:drawableRight="?attr/icon_indicator_right"/>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:gravity="center_vertical"
            android:id="@+id/tv_app_version"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="版本号"
            android:drawableRight="?attr/icon_indicator_right"/>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/tuisong"
            android:background="?attr/bg_backgroud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="允许推送通知"
                android:layout_centerVertical="true"/>
            <Switch
                android:id="@+id/switchs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:checked="false"
                android:thumb="@drawable/thumb_selector"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:track="@drawable/switch_selector_green"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/rel_clear"
            android:background="?attr/bg_backgroud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除缓存"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="13sp"
                android:textColor="#909090"
                android:gravity="center_vertical"
                android:id="@+id/tv_app_clear"
                android:background="?attr/bg_backgroud"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="?attr/icon_indicator_right"
                android:drawablePadding="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="15sp"
            android:textColor="?attr/question_color"
            android:id="@+id/cleanMemer"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清空记录"
            android:drawableRight="?attr/icon_indicator_right"/>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:id="@+id/tv_clear_answer_record"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清空答题记录"
            android:drawableRight="?attr/icon_indicator_right"/>
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:gravity="center_vertical"
            android:id="@+id/tv_feedback"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="帮助与反馈"
            android:drawableRight="?attr/icon_indicator_right"/>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="15sp"
            android:textColor="?attr/question_color"
            android:id="@+id/tv_account_security"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="账号注销"
            android:drawableRight="?attr/icon_indicator_right"/>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/yejianmoshi"
            android:background="?attr/bg_backgroud"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夜间模式"
                android:layout_centerVertical="true"/>
            <Switch
                android:id="@+id/yejianmishis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:checked="false"
                android:thumb="@drawable/thumb_selector"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:track="@drawable/switch_selector_green"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:gravity="center"
            android:id="@+id/tv_exit"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出登录"/>
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
</ScrollView>
