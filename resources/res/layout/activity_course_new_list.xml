<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relalivideo"
            android:background="#000"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.aliyun.player.alivcplayerexpand.widget.AliyunVodPlayerView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/llay_buy_course"
                android:background="@color/uvv_titlebar_bg"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_free_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/app_theme_red"
                    android:id="@+id/tv_buy_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开通权限"
                    android:layout_marginStart="3dp"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_pay_view"
                android:background="@color/black"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <RelativeLayout
                    android:gravity="center"
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/gray_light"
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="试看已结束，继续观看请"
                        android:drawablePadding="5dp"/>
                    <TextView
                        android:textColor="@color/app_theme_red"
                        android:id="@+id/buy_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开通"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/tv_1"/>
                    <View
                        android:background="@color/gray_light"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="0.2dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/tv_1"
                        android:layout_alignStart="@+id/tv_1"
                        android:layout_alignEnd="@+id/tv_1"/>
                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:id="@+id/tv_media_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:layout_centerVertical="true"/>
                        <Button
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:id="@+id/bt_pay"
                            android:background="@drawable/lable_yellow_bg"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:text="购买"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                </RelativeLayout>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:id="@+id/back_tv"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginStart="10dp"
                    app:drawableStartCompat="@drawable/icon_left_back"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/llay_renew"
                android:background="@color/uvv_titlebar_bg"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_renew_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您还剩下?天课程"
                    android:drawablePadding="5dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/app_theme_red"
                    android:id="@+id/tv_renew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="续费"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relimgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.psychiatrygarden.widget.GlideForegroupImageView
                android:id="@+id/imgthume"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/app_icon"
                android:scaleType="fitXY"/>
            <RelativeLayout
                android:id="@+id/relTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.psychiatrygarden.widget.glideUtil.GlideImageView
                    android:id="@+id/icon_left_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/icon_left_back"
                    android:scaleType="centerInside"/>
                <ImageView
                    android:id="@+id/jinqunw"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/jinqunw"
                    android:scaleType="centerInside"
                    android:layout_toStartOf="@+id/xiazaiw"/>
                <ImageView
                    android:id="@+id/xiazaiw"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/xiazaiw"
                    android:scaleType="centerInside"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_alignBottom="@+id/imgthume"
                android:layout_marginStart="17dp">
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/kemutx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教材领读-生理学"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:id="@+id/letter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="教材领读-生理学"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
    <cn.webdemo.com.supporfragment.tablayout.MagicIndicator
        android:id="@+id/magic_indicator"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpage"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>
