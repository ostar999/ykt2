<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_16"
        android:layout_width="@dimen/dp_360"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_56"
        android:paddingHorizontal="@dimen/dp_30"
        app:bl_corners_radius="@dimen/dp_10"
        app:bl_solid_color="@color/color_white">
        <TextView
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:textColor="@color/c_121212"
            android:id="@+id/titleTv"
            android:paddingTop="@dimen/dp_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_black"
            android:ellipsize="end"
            android:id="@+id/subTitleTv"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTv"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_666"
            android:ellipsize="end"
            android:id="@+id/desTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subTitleTv"/>
        <com.noober.background.view.BLTextView
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:id="@+id/goTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/home_msg_details"
            app:bl_corners_radius="@dimen/dp_24"
            app:bl_solid_color="@color/c_4675c7"
            app:layout_constraintTop_toBottomOf="@+id/desTv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/closeImgv"
        android:padding="@dimen/dp_6"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:src="@drawable/common_x"/>
</FrameLayout>
