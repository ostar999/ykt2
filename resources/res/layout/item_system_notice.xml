<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="?attr/third_txt_color"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="2022-12-25 12:52"/>
    <RelativeLayout
        android:id="@+id/ly_normal_view"
        android:background="@drawable/shape_white_corners_12"
        android:padding="@dimen/dp_16"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下单通知"
            android:lines="1"/>
        <View
            android:id="@+id/line"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="12dp"
            android:layout_below="@+id/tv_title"
            style="@style/line_gray_style"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/second_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同学你好，你购买的《商品名称商品名称商品名称》已经下单成功。"
            android:maxLines="3"
            android:layout_toLeftOf="@+id/img_icon"
            android:layout_below="@+id/line"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/third_txt_color"
            android:id="@+id/tv_to_details"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="查看详情"
            android:drawablePadding="@dimen/dp_5"
            android:layout_below="@+id/tv_content"
            android:layout_alignParentLeft="true"
            app:drawableRightCompat="?attr/icon_indicator_right"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@drawable/app_icon"
            android:layout_below="@+id/line"
            android:layout_alignParentRight="true"
            app:riv_corner_radius="@dimen/dp_2"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ly_coupons_view"
        android:background="@drawable/shape_white_corners_12"
        android:padding="@dimen/dp_16"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp">
        <ImageView
            android:id="@+id/img_coupons"
            android:visibility="visible"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_8"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_coupon_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下单通知"
            android:lines="1"
            android:layout_toEndOf="@+id/img_coupons"/>
        <View
            android:id="@+id/coupon_line"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_below="@+id/tv_coupon_title"
            style="@style/line_gray_style"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/second_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_coupons_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亲爱的【用户昵称】，您有一张 ‌{金额/折扣}优惠券‌ 已存入账户！"
            android:maxLines="3"
            android:layout_below="@+id/coupon_line"
            android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_coupons_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ly_use_rang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8">
                <ImageView
                    android:id="@+id/img_rang"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginEnd="@dimen/dp_2"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="?attr/second_txt_color"
                    android:id="@+id/tv_rang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ly_validity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8">
                <ImageView
                    android:id="@+id/img_validity"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginEnd="@dimen/dp_2"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="?attr/second_txt_color"
                    android:id="@+id/tv_validity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ly_tail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8">
                <ImageView
                    android:id="@+id/img_tail"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginEnd="@dimen/dp_2"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="?attr/second_txt_color"
                    android:id="@+id/tv_tail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_8"
                style="@style/new_gray_line_style"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ly_bottom_coupons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tv_content">
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/third_txt_color"
                    android:id="@+id/btn_coupon_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击抢购"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@drawable/icon_right_arrow_svg"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
