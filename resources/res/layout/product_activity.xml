<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_390">
                <com.zhpan.bannerview.BannerViewPager
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_390"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.zhpan.indicator.IndicatorView
                    android:id="@+id/indicatorV"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"/>
            </FrameLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/moneyCl"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingHorizontal="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@+id/tipCl">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_fd600d"
                    android:id="@+id/saleTipTv"
                    android:paddingTop="@dimen/dp_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_sale"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/sp_26"
                    android:textStyle="bold"
                    android:textColor="@color/c_fd600d"
                    android:id="@+id/moneyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/saleTipTv"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_aaaaaa"
                    android:id="@+id/saleTip1Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_original"
                    android:layout_marginStart="@dimen/dp_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/moneyTv"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/c_aaaaaa"
                    android:id="@+id/maxMoneyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/saleTip1Tv"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_aaaaaa"
                    android:id="@+id/salesNumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_sales_num"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:textSize="@dimen/sp_18"
                android:textColor="@color/c_101010"
                android:id="@+id/tv"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_4"
                android:paddingRight="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.noober.background.view.BLTextView
                android:textSize="@dimen/sp_11"
                android:textColor="@color/c_d39041"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/product_sale_tip"
                android:paddingStart="@dimen/dp_8"
                android:layout_marginHorizontal="@dimen/dp_16"
                app:bl_corners_radius="@dimen/dp_4"
                app:bl_solid_color="@color/c_fdf9f2"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/goodsCl"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:minHeight="@dimen/dp_52"
                android:paddingHorizontal="@dimen/dp_16">
                <ImageView
                    android:id="@+id/goodsImgv"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@drawable/product_goods"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_333"
                    android:ellipsize="end"
                    android:id="@+id/detailsTv"
                    android:paddingTop="@dimen/dp_14"
                    android:paddingBottom="@dimen/dp_16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_14"
                    android:paddingEnd="@dimen/dp_30"
                    app:layout_constraintEnd_toStartOf="@+id/stateImgv"
                    app:layout_constraintStart_toEndOf="@+id/goodsImgv"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/stateImgv"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_16"
                    android:src="@drawable/common_right"
                    android:scaleType="fitStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:background="@color/c_f3f3f3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginStart="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_25"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_68"
                android:paddingHorizontal="@dimen/dp_16">
                <ImageView
                    android:id="@+id/tipImgv"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_12"
                    android:src="@drawable/product_goods_tip"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_333"
                    android:ellipsize="end"
                    android:id="@+id/tipTv"
                    android:paddingTop="@dimen/dp_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/product_sale_tip1"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_14"
                    android:paddingEnd="@dimen/dp_30"
                    app:layout_constraintStart_toEndOf="@+id/tipImgv"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_aaaaaa"
                    android:ellipsize="end"
                    android:id="@+id/tip1Tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/product_sale_tip2"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_14"
                    android:paddingEnd="@dimen/dp_30"
                    app:layout_constraintStart_toEndOf="@+id/tipImgv"
                    app:layout_constraintTop_toBottomOf="@+id/tipTv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:background="@color/c_f3f3f3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginStart="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_25"/>
            <FrameLayout
                android:id="@+id/rvFl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_8">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/typeImgv"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/product_goods_type"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_marginEnd="@dimen/dp_20"/>
                <ImageView
                    android:layout_gravity="end"
                    android:id="@+id/rightImgv"
                    android:padding="@dimen/dp_8"
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@drawable/common_right"/>
            </FrameLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/payTypeImgv"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/product_pay_type"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.noober.background.view.BLConstraintLayout
                    android:id="@+id/aliCl"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_50"
                    android:paddingStart="@dimen/dp_9"
                    android:layout_marginStart="@dimen/dp_10"
                    app:bl_corners_radius="@dimen/dp_6"
                    app:bl_solid_color="@color/white"
                    app:bl_stroke_color="@color/c_fd600d"
                    app:bl_stroke_width="@dimen/dp_1"
                    app:layout_constraintStart_toEndOf="@+id/payTypeImgv"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/c_101010"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_pay_ali1"
                        android:paddingStart="@dimen/dp_4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/aliImgv"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <ImageView
                        android:id="@+id/aliImgv"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:src="@drawable/common_pay_ali"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <ImageView
                        android:id="@+id/selectAliImgv"
                        android:visibility="gone"
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:src="@drawable/common_select2"
                        android:layout_marginEnd="@dimen/dp_6"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </com.noober.background.view.BLConstraintLayout>
                <com.noober.background.view.BLConstraintLayout
                    android:id="@+id/wxCl"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_50"
                    android:paddingStart="@dimen/dp_9"
                    android:layout_marginStart="@dimen/dp_28"
                    app:bl_corners_radius="@dimen/dp_6"
                    app:bl_solid_color="@color/c_f6f6f6"
                    app:layout_constraintStart_toEndOf="@+id/aliCl"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/c_101010"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_pay_wx"
                        android:paddingStart="@dimen/dp_16"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/wxImgv"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <ImageView
                        android:id="@+id/wxImgv"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:src="@drawable/common_pay_wx"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <ImageView
                        android:id="@+id/selectWxImgv"
                        android:visibility="gone"
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:src="@drawable/common_unselect"
                        android:layout_marginEnd="@dimen/dp_6"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </com.noober.background.view.BLConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ticketCl"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ticketImgv"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/product_ticket"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_333"
                    android:id="@+id/ticketTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_ticket2"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ticketImgv"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.noober.background.view.BLTextView
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/color_333"
                    android:id="@+id/ticketNameTv"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_ticket3"
                    android:paddingHorizontal="@dimen/dp_8"
                    android:paddingVertical="@dimen/dp_4"
                    app:bl_corners_radius="@dimen/dp_6"
                    app:bl_solid_color="@color/c_f6f6f6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ticketTv"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
    <com.noober.background.view.BLImageView
        android:gravity="center"
        android:id="@+id/backImgv"
        android:padding="@dimen/dp_8"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/common_back1"
        android:layout_marginStart="@dimen/dp_16"
        app:bl_corners_radius="@dimen/dp_14"
        app:bl_solid_color="@color/c_3f000000"/>
    <com.noober.background.view.BLConstraintLayout
        android:layout_gravity="bottom"
        android:id="@+id/bottomCl"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">
        <View
            android:background="@color/c_f3f3f3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.noober.background.view.BLTextView
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/unlockTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_66"
            android:layout_marginRight="@dimen/dp_66"
            android:text="@string/product_unlock"
            android:layout_marginHorizontal="@dimen/dp_66"
            app:bl_corners_radius="@dimen/dp_20"
            app:bl_gradient_angle="-90"
            app:bl_gradient_endColor="@color/c_2980ff"
            app:bl_gradient_startColor="@color/c_70baff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </com.noober.background.view.BLConstraintLayout>
</FrameLayout>
