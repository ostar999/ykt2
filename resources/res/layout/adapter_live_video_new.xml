<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingTop="30dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.psychiatrygarden.widget.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:id="@+id/iv_live_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/personal_headimg_icon"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        app:border_color="@color/white"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/tv_live_state"
        android:layout_toRightOf="@+id/iv_live_img"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/tv_live_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/gray_font_new"
            android:id="@+id/tv_live_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:maxLines="2"
            android:layout_below="@+id/tv_live_title"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/gray_font_new"
            android:id="@+id/tv_live_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:maxLines="2"
            android:singleLine="true"
            android:layout_toRightOf="@+id/tv_live_time"
            android:layout_below="@+id/tv_live_title"/>
    </RelativeLayout>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/black"
        android:id="@+id/tv_live_state"
        android:background="@drawable/live_gray_round_bg"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预约"
        android:singleLine="true"
        android:drawableLeft="@drawable/video_yy"
        android:drawablePadding="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
