<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/ly_title_view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:isSticky="true">
        <com.ruffian.library.widget.RView
            android:layout_gravity="center"
            android:id="@+id/i"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            app:background_normal="@color/color_dd594a"
            app:corner_radius_bottom_right="@dimen/dp_4"
            app:corner_radius_top_right="@dimen/dp_4"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_303030"
            android:gravity="center_vertical"
            android:id="@+id/tv_newest_review"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/i"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_title_view">
        <View
            android:id="@+id/line"
            android:background="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp">
            <com.ruffian.library.widget.RImageView
                android:id="@+id/img_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@drawable/personal_headimg_icon"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                android:layout_marginEnd="@dimen/dp_8"
                app:is_circle="true"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/color_0062ba"
                                android:id="@+id/tv_nick_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/personalVipIv"
                                android:visibility="gone"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginLeft="4dp"
                                android:src="@drawable/personal_vip_night"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:id="@+id/linearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toStartOf="@+id/tv_high"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_nick_name">
                            <TextView
                                android:textSize="10sp"
                                android:textColor="@color/color_909090"
                                android:ellipsize="end"
                                android:id="@+id/tv_hospital"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="140dp"
                                android:maxLines="1"/>
                            <TextView
                                android:textSize="10sp"
                                android:textColor="@color/color_909090"
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_12"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/iv_review_face"
                        android:layout_width="16dp"
                        android:layout_height="@dimen/dp_16"
                        android:src="@drawable/icon_good_review"
                        android:layout_marginEnd="@dimen/dp_3"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/color_303030"
                        android:gravity="center"
                        android:id="@+id/tv_high"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:checked="true"
                        android:button="@null"
                        android:text="高评论"
                        android:drawablePadding="4dp"/>
                </LinearLayout>
                <com.ykb.ebook.weight.FloorViews
                    android:id="@+id/floor"
                    android:background="@color/color_FFFDF0"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/rel_cdf"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/color_303030"
                    android:ellipsize="end"
                    android:id="@+id/tv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:maxLines="5"
                    android:lineHeight="@dimen/dp_28"/>
                <com.ruffian.library.widget.RImageView
                    android:id="@+id/img_picture"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_140"
                    android:layout_height="@dimen/dp_140"
                    android:layout_marginTop="@dimen/dp_8"
                    android:src="@drawable/image_cover_default"
                    android:scaleType="centerCrop"
                    app:corner_radius="@dimen/dp_12"/>
                <TextView
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="end"
                    android:id="@+id/tv_view_all"
                    android:background="@drawable/bg_tv_line"
                    android:paddingLeft="8dp"
                    android:paddingTop="2dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:text="查看全部"
                    android:drawablePadding="5dp"
                    android:contentDescription="@null"
                    app:drawableRightCompat="@mipmap/icon_indicator_bottomix_night"/>
                <LinearLayout
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12">
                    <TextView
                        android:textSize="12sp"
                        android:id="@+id/tv_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:text_color_normal="@color/color_bfbfbf"
                        app:text_color_selected="@color/color_81cb30"/>
                    <TextView
                        android:textSize="12sp"
                        android:id="@+id/tv_opposition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_24"
                        android:layout_marginHorizontal="@dimen/dp_24"
                        app:text_color_normal="@color/color_bfbfbf"
                        app:text_color_selected="@color/color_dd594a"/>
                    <TextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:id="@+id/tv_reply"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingTop="1dp"
                        android:paddingRight="@dimen/dp_6"
                        android:paddingBottom="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="回复(2)"
                        android:paddingHorizontal="@dimen/dp_6"
                        android:paddingVertical="1dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/v_line"
            android:background="@color/color_eeeeee"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/ly_look_more"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/ly_content_view"
        app:isSticky="true">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/color_303030"
            android:id="@+id/tv_more_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多热评"
            android:layout_marginStart="@dimen/dp_12"/>
    </LinearLayout>
</RelativeLayout>
