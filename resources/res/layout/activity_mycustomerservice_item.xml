<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_qq_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:src="@drawable/yjyzaixian"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/question_color"
            android:id="@+id/tv_qq_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:singleLine="true"
            android:drawableRight="?attr/icon_indicator_right"
            android:drawablePadding="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textIsSelectable="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/question_color"
            android:id="@+id/tv_qq_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="在线QQ客服"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/tv_qq_num"
            android:layout_toRightOf="@+id/iv_qq_icon"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:background="?attr/gray_line_126"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"/>
</LinearLayout>
