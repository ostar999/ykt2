<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/first_text_color"
        android:gravity="center_vertical"
        android:id="@+id/groupname"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="管理员"
        android:drawableLeft="?attr/select_expend"
        android:drawablePadding="12dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/tertiary_text_color"
        android:gravity="center_vertical"
        android:id="@+id/countnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="（90）"
        android:layout_toRightOf="@+id/groupname"
        android:layout_centerVertical="true"/>
    <View
        android:background="?attr/fourth_line_backgroup_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignBottom="@+id/groupname"/>
</RelativeLayout>
