<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/tertiary_backgroup_white_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view_topic_detail_divider"
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:background="?attr/bg_backgroud"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp">
        <RelativeLayout
            android:id="@+id/relksd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <LinearLayout
                android:id="@+id/ly_iv_topic_detail_msg"
                android:paddingLeft="17dp"
                style="@style/layout_icon_style">
                <ImageView
                    android:id="@+id/iv_topic_detail_msg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/question_msg"/>
                <TextView
                    android:text="评论"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_iv_topic_detail_zan"
                android:layout_toEndOf="@+id/ly_iv_topic_detail_msg"
                style="@style/layout_icon_style">
                <ImageView
                    android:id="@+id/iv_topic_detail_zan"
                    android:visibility="visible"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/dianzancourse"/>
                <TextView
                    android:text="点赞"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_questiondetails_btn_edit"
                android:layout_toEndOf="@+id/ly_iv_topic_detail_zan"
                style="@style/layout_icon_style">
                <ImageView
                    android:id="@+id/questiondetails_btn_edit"
                    android:visibility="visible"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/btn_edit"/>
                <TextView
                    android:text="笔记"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_questiondetails_btn_collect"
                android:layout_toEndOf="@+id/ly_questiondetails_btn_edit"
                style="@style/layout_icon_style">
                <ImageView
                    android:id="@+id/questiondetails_btn_collect"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/icon_collect_no"/>
                <TextView
                    android:text="收藏"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_iv_my_daka"
                android:layout_toEndOf="@+id/ly_questiondetails_btn_collect"
                style="@style/layout_icon_style">
                <ImageView
                    android:id="@+id/iv_my_daka"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/video_daka_no"/>
                <TextView
                    android:text="打卡"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="?attr/third_txt_color"
            android:gravity="center_vertical"
            android:id="@+id/tv_topic_detail_add_comment"
            android:background="?attr/line_all_round"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="写评论"
            android:drawablePadding="5dp"
            android:layout_centerVertical="true"
            android:paddingStart="15dp"
            android:layout_toStartOf="@+id/relksd"/>
    </RelativeLayout>
</LinearLayout>
