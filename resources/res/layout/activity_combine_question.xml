<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/combine_question_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <ImageView
            android:id="@+id/iv_actionbar_back"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="?attr/ic_black_back"
            android:layout_centerVertical="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingVertical="5dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/ly_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_actionbar_back">
            <ImageView
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:src="@mipmap/ic_robot"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:gravity="center"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择组题类型"
                android:layout_centerVertical="true"/>
        </LinearLayout>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:gravity="center"
            android:id="@+id/tv_loading_title"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能组题"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"/>
        <com.psychiatrygarden.widget.AlphaImageView
            android:id="@+id/iv_actionbar_right"
            android:padding="6dp"
            android:visibility="visible"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="?attr/ic_combine_question_record_new"
            android:layout_centerVertical="true"
            android:layout_marginEnd="9dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_content_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/rvTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_loading_view"
        android:background="?attr/combine_guide_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_robot"
            android:background="@drawable/anim_combine_question_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"/>
        <TextView
            android:textColor="?attr/combine_guide_text_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/bg_combine_question_tips"
            android:paddingLeft="24dp"
            android:paddingTop="16dp"
            android:paddingRight="24dp"
            android:paddingBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="AI将按您的指令出题组卷\10 分模块针对性刷题，哪里薄弱刷哪里~"
            android:lineSpacingExtra="10dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"/>
    </LinearLayout>
</LinearLayout>
