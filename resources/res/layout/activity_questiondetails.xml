<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_title_night"/>
    <RelativeLayout
        android:id="@+id/rl_top_title"
        android:background="?attr/hor_view_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/question_color"
            android:id="@+id/questiondetails_tv_title_gufen"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:textSize="15sp"
            android:textColor="?attr/question_color"
            android:id="@+id/questiondetails_tv_title"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="第一章"
            android:singleLine="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/questiondetails_bottom_layout"
            android:background="?attr/bg_backgroud"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <View
                android:background="?attr/gray_line_126"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:background="?attr/bg_backgroud"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/questiondetails_btn_zantong"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="?attr/dianzancourse"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
                <ImageView
                    android:id="@+id/questiondetails_btn_centerMsg"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="?attr/question_msg"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/questiondetails_btn_zantong"/>
                <ImageView
                    android:id="@+id/questiondetails_btn_share"
                    android:visibility="gone"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/icon_share_no"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/questiondetails_btn_centerMsg"/>
                <ImageView
                    android:id="@+id/questiondetails_btn_collect"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="?attr/icon_collect_no"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/questiondetails_btn_share"/>
                <ImageView
                    android:id="@+id/questiondetails_btn_edit"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="?attr/btn_edit"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/questiondetails_btn_collect"/>
                <Button
                    android:textSize="14sp"
                    android:textColor="?attr/line_txt_color"
                    android:gravity="center_vertical"
                    android:id="@+id/btn_comment"
                    android:background="?attr/line_all_round"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="写评论"
                    android:drawableLeft="?attr/icon_write_comment"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:paddingStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/questiondetails_btn_edit"/>
            </RelativeLayout>
        </LinearLayout>
        <com.psychiatrygarden.widget.ViewPagerCompat
            android:id="@+id/questiondetails_viewPager"
            android:background="?attr/app_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/questiondetails_bottom_layout"/>
    </RelativeLayout>
</LinearLayout>
