<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_share_lock_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/iv_share_content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/iv_share_lock_icon"
        android:layout_alignRight="@+id/iv_share_lock_icon"/>
    <ImageView
        android:id="@+id/iv_share_lock_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/iv_share_lock_icon"
        android:layout_alignTop="@+id/iv_share_lock_icon"
        android:layout_alignRight="@+id/iv_share_lock_icon"/>
</RelativeLayout>
