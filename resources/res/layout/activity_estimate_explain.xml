<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linere">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.psychiatrygarden.widget.CircleImageView
                        android:id="@+id/iconheader"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:src="?attr/personal_headimg_icon"/>
                    <TextView
                        android:textColor="?attr/question_color"
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="xxx"/>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/item_school_color"
                        android:id="@+id/quexian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="等待开通权限"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/first_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="考试类型"/>
                    <TextView
                        android:textColor="?attr/third_txt_color"
                        android:id="@+id/kaoshileixing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="考试类型"
                        android:layout_marginStart="30dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp">
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/first_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="考试题量"/>
                    <TextView
                        android:textColor="?attr/third_txt_color"
                        android:id="@+id/kaoshitiliang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="考试类型"
                        android:layout_marginStart="30dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp">
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/first_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卷面分值"/>
                    <TextView
                        android:textColor="?attr/third_txt_color"
                        android:id="@+id/juanmianfenzhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="考试类型"
                        android:layout_marginStart="30dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp">
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/first_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="考试时间"/>
                    <TextView
                        android:textColor="?attr/third_txt_color"
                        android:id="@+id/kaoshishijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="考试类型"
                        android:layout_marginStart="30dp"/>
                </LinearLayout>
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/main_theme_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="温馨提示"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/wenxintishi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text=""
                    android:lineSpacingExtra="1.5dp"
                    android:lineSpacingMultiplier="1.5"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linere"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:textColor="?attr/question_color"
            android:gravity="center"
            android:id="@+id/live_video"
            android:background="?attr/linetype1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="20dp"
            android:text="直播"/>
        <TextView
            android:textColor="?attr/question_color"
            android:gravity="center"
            android:id="@+id/tiaozhuan"
            android:background="?attr/linetype1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="20dp"
            android:text="开通模考权限"/>
        <TextView
            android:textColor="?attr/question_color"
            android:gravity="center"
            android:id="@+id/chongzuo"
            android:background="?attr/linetype1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="20dp"
            android:text="重新考试"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/xiaohongshuruihuan"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/buttomTextColorPress"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用小红书增值服务注册码兑换"
                android:drawablePadding="5dp"
                app:drawableStartCompat="?attr/zengzhi"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
