<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/alivc_common_theme_primary_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="top|right"
        android:layout_gravity="top|right"
        android:orientation="vertical"
        android:id="@+id/check_list_view_layout"
        android:background="@color/alivc_player_bg_action_list_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp">
            <View
                android:layout_gravity="center"
                android:background="@color/alivc_common_bg_gray_bright"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="1"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/alivc_common_font_white_light"
                android:id="@+id/tv_action_title"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alivc_download_video"/>
            <View
                android:layout_gravity="center"
                android:background="@color/alivc_common_bg_gray_bright"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <RelativeLayout
            android:paddingTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_video_cover"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:minWidth="120dp"
                android:minHeight="68dp"/>
            <TextView
                android:textSize="@dimen/alivc_common_font_16"
                android:textColor="@android:color/white"
                android:id="@+id/tv_add_download_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="38dp"
                android:maxWidth="125dp"
                android:singleLine="true"
                android:layout_toRightOf="@+id/iv_video_cover"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:id="@+id/tv_add_download_view_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/iv_video_cover"
                android:layout_below="@+id/tv_add_download_view_title"/>
            <ImageView
                android:id="@+id/iv_download_dialog_close"
                android:padding="12dp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/alivc_download_dialog_close"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:textColor="@color/alivc_common_font_white_light"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/choose_download_sharpness"/>
        <RadioGroup
            android:orientation="horizontal"
            android:id="@+id/rg_quality_list"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_weight="1"/>
        <View
            android:background="@color/alivc_common_bg_gray_bright"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/alivc_common_font_white_light"
                android:gravity="center"
                android:id="@+id/alivc_download_start"
                android:paddingLeft="33dp"
                android:paddingTop="15dp"
                android:paddingRight="33dp"
                android:paddingBottom="15dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/alivc_start_download"
                android:layout_weight="1"/>
            <View
                android:background="@color/alivc_common_bg_gray_bright"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_weight="0"/>
            <TextView
                android:textColor="@color/alivc_common_font_white_light"
                android:gravity="center"
                android:id="@+id/alivc_current_download"
                android:paddingLeft="33dp"
                android:paddingTop="15dp"
                android:paddingRight="33dp"
                android:paddingBottom="15dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/alivc_native_video"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
