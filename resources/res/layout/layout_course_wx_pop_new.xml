<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/shape_app_bg_corners_16"
        android:paddingLeft="@dimen/dp_29"
        android:paddingTop="@dimen/dp_32"
        android:paddingRight="@dimen/dp_29"
        android:paddingBottom="@dimen/dp_32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_29"
        android:paddingVertical="@dimen/dp_32">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:gravity="center_horizontal"
            android:id="@+id/wxPopContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我是居中对齐提示信息文案内容提示信息文案内容提示信息文案内"/>
        <ImageView
            android:id="@+id/wxPopCode"
            android:padding="@dimen/dp_9"
            android:layout_width="@dimen/dp_159"
            android:layout_height="@dimen/dp_159"
            android:layout_marginTop="@dimen/dp_7"
            android:scaleType="fitXY"
            android:layout_below="@+id/wxPopContent"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="?attr/second_txt_color"
            android:id="@+id/wxPopWxChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:text="微信号：12HdJBJF"
            android:layout_below="@+id/wxPopCode"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/app_bg"
            android:gravity="center"
            android:id="@+id/tvSaveImg"
            android:background="@drawable/shape_main_theme_red_color_corners_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_16"
            android:text="保存并跳转微信"
            android:layout_below="@+id/wxPopWxChat"/>
    </RelativeLayout>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/imgClose"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_20"
        android:src="?attr/icon_delete_circle_bg"/>
</LinearLayout>
