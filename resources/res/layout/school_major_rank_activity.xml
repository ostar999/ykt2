<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/new_bg_two_color_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:orientation="vertical"
            android:id="@+id/appbarlayout"
            android:background="@color/transparent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">
                <RelativeLayout
                    android:id="@+id/rellogview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/school_major_rank_top_iv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="?attr/school_major_rank_top_img"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"/>
                </RelativeLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toobars1"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">
                    <RelativeLayout
                        android:id="@+id/toolbars"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44">
                        <ImageView
                            android:id="@+id/iv_actionbar_back"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_16"
                            android:paddingBottom="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="?attr/ic_black_back"
                            android:layout_centerVertical="true"
                            android:paddingHorizontal="@dimen/dp_16"
                            android:paddingVertical="@dimen/dp_5"/>
                        <TextView
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:textColor="?attr/first_txt_color"
                            android:ellipsize="end"
                            android:id="@+id/txt_actionbar_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="250dp"
                            android:singleLine="true"
                            android:drawablePadding="10dp"
                            android:layout_centerInParent="true"/>
                        <ImageView
                            android:id="@+id/iv_actionbar_share"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_16"
                            android:paddingBottom="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="?attr/ic_school_rank_share"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingHorizontal="@dimen/dp_16"
                            android:paddingVertical="@dimen/dp_5"/>
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:background="?attr/app_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/school_major_rank_top_iv"
                app:tabIndicator="@drawable/tab_indicator_school"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorGravity="bottom"
                app:tabIndicatorHeight="@dimen/dp_3"
                app:tabRippleColor="@null"
                app:tabSelectedTextColor="?attr/first_text_color"
                app:tabTextColor="?attr/third_txt_color"/>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab_layout"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>
