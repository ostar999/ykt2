<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#141414"
    android:layout_width="@dimen/dp_375"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_16">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="start|center_vertical"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <LinearLayout
            android:id="@+id/lineselect2"
            android:background="@drawable/bg_hot_new_tag"
            android:padding="@dimen/dp_2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toLeftOf="@+id/iv_close"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/dp_16">
            <TextView
                android:textSize="@dimen/sp_11"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tvReMen"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:text="最热"/>
            <TextView
                android:textSize="@dimen/sp_11"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/tvZuiXin"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:text="最新"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@drawable/closenew2"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:background="#252c46"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <com.psychiatrygarden.widget.VideoCommentLayout
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/ll_add_note"
        android:background="@drawable/bg_add_note_landscape_deep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_16">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_12"
            android:src="@drawable/ic_video_add_edit_"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="#7b7e83"
            android:gravity="center_vertical"
            android:id="@+id/tv_add_note"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="写评论"/>
    </LinearLayout>
</LinearLayout>
