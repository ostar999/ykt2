<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bview">
        <com.google.android.material.appbar.AppBarLayout
            android:orientation="vertical"
            android:id="@+id/appbarlayout"
            android:background="@color/white"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">
                <ImageView
                    android:id="@+id/bgvip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/select_vip_collbg"
                    android:scaleType="fitXY"
                    app:layout_collapseMode="parallax"/>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toobars1"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">
                    <RelativeLayout
                        android:id="@+id/toolbars"
                        android:layout_width="match_parent"
                        android:layout_height="44dp">
                        <ImageView
                            android:id="@+id/backimg"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/select_vip_back"/>
                        <TextView
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textSize="18sp"
                            android:textColor="@drawable/select_vip_title"
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="会员中心"
                            android:layout_centerInParent="true"
                            android:fontFamily="sans-serif-medium"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true">
                            <ImageView
                                android:id="@+id/hyguize"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/select_vip_yhguize"/>
                            <ImageView
                                android:gravity="center"
                                android:id="@+id/guize"
                                android:paddingRight="6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/select_vip_givelog"
                                android:paddingStart="16dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
                <RelativeLayout
                    android:layout_gravity="bottom"
                    android:id="@+id/rellogview"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_marginBottom="8dp">
                    <com.psychiatrygarden.widget.CircleImageView
                        android:id="@+id/headers"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/app_icon"
                        android:layout_centerVertical="true"
                        app:border_color="@color/white"
                        app:border_width="2dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_toRightOf="@+id/headers"
                        android:layout_centerVertical="true">
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@drawable/select_vip_nickname"
                            android:id="@+id/titleid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="@drawable/select_vip_hint"
                            android:id="@+id/datatime"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/logovip"
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/select_vip_logo"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/line"
                android:background="@drawable/select_vip_vbg2"
                android:visibility="visible"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bgvip">
                <RelativeLayout
                    android:id="@+id/viprel"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/viptdcolor"
                        android:gravity="center"
                        android:id="@+id/dvipimgtv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="VIP会员"
                        android:drawableLeft="@drawable/select_vip_dvip_img"
                        android:drawablePadding="4dp"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:id="@+id/dvipsaletv"
                        android:background="@drawable/shape_sale_bg"
                        android:paddingLeft="5dp"
                        android:paddingTop="1dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="1dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:layout_marginRight="25dp"
                        android:text="热卖"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/sviprel"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@drawable/select_vip_tab_vip_text"
                        android:gravity="center"
                        android:id="@+id/dsvipimgtv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="SVIP会员"
                        android:drawableLeft="@drawable/select_vip_dsvip_img"
                        android:drawablePadding="4dp"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:id="@+id/dsvipsaletv"
                        android:background="@drawable/shape_sale_bg"
                        android:paddingLeft="5dp"
                        android:paddingTop="1dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="1dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:layout_marginRight="15dp"
                        android:text="热卖"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/cyidview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:background="@color/fourth_line_backgroup_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:gravity="center"
            android:background="@color/white"
            android:paddingTop="6dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13sp"
                android:textColor="#7b7e83"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开通前请阅读"/>
            <TextView
                android:textSize="13sp"
                android:textColor="#f95843"
                android:id="@+id/btn_member_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_rule"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/btview"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10sp"
                android:textColor="@color/vipkfuTxt"
                android:gravity="center_horizontal"
                android:id="@+id/kefu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服"
                android:drawableTop="@drawable/kf3img"
                android:drawablePadding="4dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/buttomviewtv"
                android:background="@drawable/shape_line_rote_bg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp"
                android:text="开通会员（续费）"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/btnlineview"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/xfantv"
                    android:background="@drawable/subtract"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="-10dp"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/sjantv"
                    android:background="@drawable/subtract2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
