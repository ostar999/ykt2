<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/commentList_bottom_layout"
    android:background="@drawable/bg_pop_comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/forth_txt_color"
            android:id="@+id/iv_dialog_cancel"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="@string/cancel"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="?attr/question_color"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加笔记"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16">
            <ImageView
                android:id="@+id/screenview"
                android:visibility="gone"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/ic_scale"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="?attr/sviptscolor"
                android:gravity="right"
                android:id="@+id/dialog_input_btn_comment_ok"
                android:padding="@dimen/dp_5"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:background="?attr/new_bg_one_border_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_16"
        android:fillViewport="true"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:textColorHint="?attr/forth_txt_color"
                android:gravity="top"
                android:id="@+id/dialog_input_et_comment"
                android:background="@drawable/bg_edit_note"
                android:padding="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="请输入笔记内容"
                android:maxLength="5000"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/relbuttom"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/rvPic"
            android:paddingTop="@dimen/dp_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/upimg"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="15dp"
                android:src="?attr/comment_crop_img"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@drawable/color_knowledge_point_operation"
                android:gravity="center"
                android:id="@+id/pushBtm"
                android:background="@drawable/bg_knowledge_point_operation"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="保存"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
