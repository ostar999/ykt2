<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/new_bg_two_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <ImageView
            android:layout_gravity="start|center_vertical"
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@drawable/icon_black_back"/>
        <TextView
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="课程调查问卷"/>
    </FrameLayout>
    <LinearLayout
        android:background="@drawable/bg_app_bg_radius12"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/dp_16">
        <androidx.core.widget.NestedScrollView
            android:paddingBottom="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_24">
            <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_24"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/title"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 请您公平、公正、如实地的进行评价。非常感谢您的参与，您的意见将会对医考帮团队的进步产生积极影响。评价后和获得会员XX天"
                    android:paddingHorizontal="@dimen/dp_16"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="vertical"
                    android:id="@+id/rvSurvey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_9"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingVertical="@dimen/dp_9">
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_submit"
            android:background="@drawable/red_round_coner_color_f95843_radius_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:text="提交"/>
    </LinearLayout>
</LinearLayout>
