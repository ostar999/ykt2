<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedscroll_main"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="?attr/bg_backgroud"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:nestedScrollingEnabled="false"/>
            <TextView
                android:textSize="16sp"
                android:textColor="#999999"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_look_member"
                android:paddingBottom="20dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多群成员"
                android:drawablePadding="5dp"
                app:drawableEndCompat="@drawable/icon_indicator_right"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="?attr/bg_backgroud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:minHeight="50dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/quanxuan_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="群聊名称"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/gray_font"
                android:ellipsize="end"
                android:gravity="right"
                android:id="@+id/tv_group_chat_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:drawablePadding="5dp"
                android:layout_weight="11"
                android:layout_marginStart="5dp"
                app:drawableEndCompat="@drawable/icon_indicator_right"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_notice_content"
            android:background="?attr/bg_backgroud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:minHeight="50dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="11">
                <TextView
                    android:textSize="16sp"
                    android:textColor="?attr/quanxuan_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="群聊公告"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:ellipsize="end"
                    android:id="@+id/tv_notice_content"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:maxLines="3"
                    android:lineSpacingExtra="3dp"/>
            </LinearLayout>
            <TextView
                android:textSize="16sp"
                android:textColor="#999999"
                android:gravity="right"
                android:id="@+id/tv_group_chat_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:drawablePadding="5dp"
                app:drawableEndCompat="@drawable/icon_indicator_right"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="?attr/bg_backgroud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:minHeight="50dp"
            android:paddingStart="20dp"
            android:paddingEnd="15dp">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/quanxuan_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息免打扰"
                android:layout_weight="11"/>
            <Switch
                android:id="@+id/switch_msg_disturb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumb="@drawable/thumb_selector"
                android:track="@drawable/switch_selector_green"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="?attr/bg_backgroud"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:minHeight="50dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/quanxuan_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="群文件"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/gray_font"
                android:gravity="end"
                android:id="@+id/tv_group_chat_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:drawablePadding="5dp"
                android:layout_weight="11"
                app:drawableEndCompat="@drawable/icon_indicator_right"/>
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/quanxuan_bg"
            android:gravity="center_vertical"
            android:id="@+id/tv_group_chat_history"
            android:background="?attr/bg_backgroud"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:minHeight="50dp"
            android:text="查找聊天记录"
            android:drawablePadding="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:drawableEndCompat="@drawable/icon_indicator_right"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="?attr/bg_backgroud"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:minHeight="50dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/quanxuan_bg"
                android:id="@+id/tv_group_info_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人资料隐藏"
                android:layout_weight="11"/>
            <Switch
                android:id="@+id/switch_group_info_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumb="@drawable/ebook_thumb_selector"
                android:track="@drawable/ebook_switch_selector_green"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="?attr/bg_backgroud"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:minHeight="50dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/quanxuan_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="群名称备注"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/gray_font"
                android:gravity="end"
                android:id="@+id/tv_group_chat_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:drawablePadding="5dp"
                android:layout_weight="11"
                app:drawableEndCompat="@drawable/icon_indicator_right"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="?attr/bg_backgroud"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:minHeight="50dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/quanxuan_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我在本群昵称"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/gray_font"
                android:gravity="right"
                android:id="@+id/tv_group_chat_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:drawablePadding="5dp"
                android:layout_weight="11"
                app:drawableEndCompat="@drawable/icon_indicator_right"/>
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/app_theme_red"
            android:gravity="center"
            android:id="@+id/tv_exit_group_chat"
            android:background="?attr/bg_backgroud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:minHeight="50dp"
            android:text="退出群聊"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
