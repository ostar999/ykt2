<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/chaptertitle"
        layout="@layout/include_title"/>
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/question_color"
        android:gravity="center"
        android:id="@+id/tv_chapter_name"
        android:background="?attr/hor_view_color"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第一章"
        android:singleLine="true"
        android:layout_below="@+id/chaptertitle"/>
    <ListView
        android:id="@+id/lv_chapter_data"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@color/transparent"
        android:divider="?attr/divider_color"
        android:dividerHeight="0.5dp"
        android:layout_above="@+id/voidezuo"
        android:layout_below="@+id/tv_chapter_name"/>
    <LinearLayout
        android:id="@+id/voidezuo"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/app_title_color"
            android:gravity="center"
            android:id="@+id/allselet"
            android:background="?attr/font_com_list"
            android:padding="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="全选"
            android:layout_weight="1"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/app_title_color"
            android:gravity="center"
            android:id="@+id/okdelete"
            android:background="?attr/app_theme"
            android:padding="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="确认删除"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
