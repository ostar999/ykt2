<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/relvel_item1"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:paddingRight="6dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="6dp"
        android:paddingVertical="10dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/handoutimgUrl"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/dp_12"
            app:riv_corner_radius="@dimen/dp_4"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:ellipsize="end"
                android:id="@+id/handoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_weight="1"
                android:lineSpacingExtra="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rel_id"
                android:layout_below="@+id/handoutName">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true">
                        <ImageView
                            android:id="@+id/img_view"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="12dp"
                            android:layout_marginRight="2dp"
                            android:adjustViewBounds="true"/>
                        <ImageView
                            android:id="@+id/imageView1"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="12dp"
                            android:adjustViewBounds="true"/>
                        <ImageView
                            android:id="@+id/imagetop"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="12dp"
                            android:adjustViewBounds="true"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rel_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:id="@+id/img_school"
                    android:visibility="gone"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/ic_exp_school"
                    android:layout_alignTop="@+id/handoutClass"
                    android:layout_alignBottom="@+id/handoutClass"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:textSize="11sp"
                    android:textColor="?attr/item_school_color"
                    android:id="@+id/handoutClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_toEndOf="@+id/img_school"/>
                <TextView
                    android:textColor="@color/color_new"
                    android:id="@+id/handoutTime"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11-12"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/handoutClass"/>
                <ImageView
                    android:visibility="gone"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="3dp"
                    android:src="?attr/ic_circle_item_comment"
                    android:layout_alignTop="@+id/handoutComment"
                    android:layout_marginEnd="4dp"
                    android:layout_toStartOf="@+id/handoutComment"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/third_txt_color"
                    android:id="@+id/handoutComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:includeFontPadding="false"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/txtred"
                android:background="@drawable/red_yuan"
                android:visibility="gone"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_alignTop="@+id/rel_id"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relvel_item2"
        android:background="?attr/app_bg"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/relace_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">
            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/item2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:maxLines="2"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">
                <ImageView
                    android:id="@+id/image_View2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_marginRight="2dp"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:id="@+id/imageView2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:id="@+id/imagetop2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:adjustViewBounds="true"/>
            </LinearLayout>
        </RelativeLayout>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView10"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:src="@color/accent_material_dark"
            android:scaleType="centerCrop"
            android:layout_below="@+id/relace_view"
            app:riv_corner_radius="@dimen/dp_4"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/lin_img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/imageView10"/>
        <TextView
            android:textSize="11sp"
            android:textColor="?attr/item_school_color"
            android:id="@+id/item2_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="12dp"
            android:text="数据出处"
            android:layout_below="@+id/lin_img"/>
        <TextView
            android:textSize="10sp"
            android:textColor="?attr/third_txt_color"
            android:id="@+id/item2_comment"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:text="数据状态"
            android:layout_alignBottom="@+id/item2_class"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/textred1"
            android:background="?attr/red_yuan"
            android:visibility="gone"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/item2_comment"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/textView1"
        android:background="?attr/new_gray_line_color"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>
</LinearLayout>
