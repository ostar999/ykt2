<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_recommend_loading_no_night"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <ImageView
            android:id="@+id/iv_actionbar_back"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_black_back"
            android:layout_centerVertical="true"
            android:paddingHorizontal="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_5"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/first_txt_color"
            android:ellipsize="end"
            android:id="@+id/txt_actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:drawablePadding="10dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_out_anim"
                    android:background="@mipmap/ic_out_circle_anim"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_200"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_loading"
                    android:background="@drawable/anim_robot_loading"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_200"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/new_bg_one_color"
                android:gravity="center_vertical"
                android:layout_gravity="end"
                android:id="@+id/tv_title"
                android:background="@drawable/shape_create_study_plan_start_bg"
                android:padding="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_32"
                android:text=""
                android:layout_marginHorizontal="@dimen/dp_32"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ly_day"
                android:background="@drawable/shape_create_study_plan_gray_bg"
                android:padding="@dimen/dp_12"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_32"
                android:layout_marginHorizontal="@dimen/dp_32">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_21"
                        android:layout_height="@dimen/dp_14"
                        android:src="@mipmap/ic_create_plan_ai"
                        android:layout_marginEnd="@dimen/dp_8"/>
                    <TextView
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"
                        android:textColor="@color/first_txt_color"
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/second_txt_color"
                    android:id="@+id/tv_day_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ly_count"
                android:background="@drawable/shape_create_study_plan_gray_bg"
                android:padding="@dimen/dp_12"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_32"
                android:layout_marginHorizontal="@dimen/dp_32">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_21"
                        android:layout_height="@dimen/dp_14"
                        android:src="@mipmap/ic_create_plan_ai"
                        android:layout_marginEnd="@dimen/dp_8"/>
                    <TextView
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"
                        android:textColor="@color/first_txt_color"
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/second_txt_color"
                    android:id="@+id/tv_count_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ly_day_count"
                android:background="@drawable/shape_create_study_plan_gray_bg"
                android:padding="@dimen/dp_12"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_32"
                android:layout_marginHorizontal="@dimen/dp_32">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_21"
                        android:layout_height="@dimen/dp_14"
                        android:src="@mipmap/ic_create_plan_ai"
                        android:layout_marginEnd="@dimen/dp_8"/>
                    <TextView
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"
                        android:textColor="@color/first_txt_color"
                        android:id="@+id/tv_day_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/second_txt_color"
                    android:id="@+id/tv_day_count_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text=""
                    android:lineSpacingExtra="@dimen/dp_4"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/new_bg_one_color"
                android:gravity="center"
                android:id="@+id/btn_create"
                android:background="@drawable/shape_main_theme_color_no_night_round12"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_32"
                android:layout_marginBottom="@dimen/dp_30"
                android:text="规划已生成，查看规划"
                android:layout_marginHorizontal="@dimen/dp_32"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
