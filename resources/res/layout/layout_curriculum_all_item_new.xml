<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layoutRoot"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/fl_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16">
        <TextView
            android:layout_gravity="top"
            android:background="@drawable/shape_course_directory_num_bg"
            android:layout_width="@dimen/dp_62"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"/>
        <TextView
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:gravity="top"
            android:layout_gravity="top"
            android:id="@+id/tv_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="01"/>
    </FrameLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:background="@drawable/shape_app_bg_corners_8"
        android:paddingBottom="@dimen/dp_16"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:paddingStart="@dimen/dp_16">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/app_bg"
            android:gravity="center"
            android:id="@+id/heji"
            android:background="@drawable/shape_course_combine_flag_bg"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合集"
            android:includeFontPadding="false"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_2"/>
        <TextView
            android:textSize="@dimen/sp_17"
            android:textStyle="bold"
            android:textColor="?attr/first_text_color"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_below="@+id/heji"
            android:lineSpacingExtra="1.2dp"
            android:lineSpacingMultiplier="1.2"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/course_combine_flags_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/titleTv">
            <com.psychiatrygarden.utils.FlowLayout
                android:id="@+id/course_combine_flags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleTv"
                app:flowLayoutMaxLines="1"
                app:isLimit="true"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyall"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@+id/course_combine_flags_layout"
            android:overScrollMode="never"/>
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/relbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyall"
            android:layout_marginEnd="@dimen/dp_16">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/third_txt_color"
                android:gravity="center_vertical"
                android:id="@+id/jidoortv"
                android:paddingTop="1.5dp"
                android:paddingBottom="1.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8门课程"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/imgopenbottom"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:src="?attr/imgopenbottom"
                android:scaleType="center"
                android:layout_toRightOf="@+id/jidoortv"
                android:layout_alignTop="@+id/jidoortv"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="?attr/main_theme_red_color"
                android:id="@+id/buttonStartLearn"
                android:background="@drawable/shape_main_theme_color_stroke_0_5_corners_8"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:paddingRight="8dp"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="开始学习"
                android:includeFontPadding="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginVertical="8dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"/>
            <LinearLayout
                android:gravity="right"
                android:orientation="vertical"
                android:id="@+id/line"
                android:paddingLeft="10dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/forth_txt_color"
                        android:id="@+id/originPrice"
                        android:paddingTop="6dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥699"
                        android:includeFontPadding="false"
                        android:paddingEnd="16dp"/>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/main_theme_red_color"
                        android:gravity="center_vertical"
                        android:id="@+id/priceTv"
                        android:paddingTop="6dp"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥699"
                        android:includeFontPadding="false"/>
                </LinearLayout>
                <TextView
                    android:textSize="10sp"
                    android:textColor="?attr/forth_txt_color"
                    android:id="@+id/numTv"
                    android:paddingTop="1.5dp"
                    android:paddingBottom="1.5dp"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/viewLine"
        android:background="?attr/new_bg_one_border_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
