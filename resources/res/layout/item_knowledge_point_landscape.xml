<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_16">
    <View
        android:background="#252c46"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/ll_title"/>
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintTop_toBottomOf="@+id/tv_time">
        <CheckedTextView
            android:textSize="@dimen/sp_14"
            android:textColor="@drawable/color_knowledge_point_play_landscape"
            android:ellipsize="end"
            android:id="@+id/tv_point_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:lines="1"
            android:layout_weight="1"/>
        <CheckedTextView
            android:textSize="@dimen/sp_12"
            android:textColor="@drawable/color_knowledge_point_operation_landscape"
            android:id="@+id/tv_operate"
            android:background="@drawable/bg_knowledge_point_operation_landscape"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:checked="true"
            android:text="回顾"
            android:paddingHorizontal="@dimen/dp_12"
            android:paddingVertical="@dimen/dp_2"
            app:layout_constraintBottom_toBottomOf="@+id/tv_point_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_point_title"
            app:layout_constraintTop_toTopOf="@+id/tv_point_title"/>
    </LinearLayout>
    <CheckedTextView
        android:textSize="@dimen/sp_12"
        android:textColor="@drawable/color_knowledge_point_play_landscape"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:checked="true"
        app:layout_constraintLeft_toRightOf="@+id/iv_status"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_gravity="start"
        android:id="@+id/iv_status"
        android:background="@drawable/anim_play_knowledge_landscape"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
