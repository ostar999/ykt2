<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/pop_answer_question_set_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">
        <TextView
            android:textSize="10sp"
            android:textColor="#ff1d1d1d"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信"
            android:drawableTop="@mipmap/pop_answer_question_wx"
            android:drawablePadding="8dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="10sp"
            android:textColor="#ff1d1d1d"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="朋友圈"
            android:drawableTop="@mipmap/pop_answer_question_pyq"
            android:drawablePadding="8dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="10sp"
            android:textColor="#ff1d1d1d"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QQ好友"
            android:drawableTop="@mipmap/pop_answer_question_qq"
            android:drawablePadding="8dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="10sp"
            android:textColor="#ff1d1d1d"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QQ空间"
            android:drawableTop="@mipmap/pop_answer_question_qqkj"
            android:drawablePadding="8dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="10sp"
            android:textColor="#ff1d1d1d"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微博"
            android:drawableTop="@mipmap/pop_answer_question_wb"
            android:drawablePadding="8dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:background="#ffdcdcdc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="10sp"
            android:textColor="#ff1d1d1d"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="统计"
            android:drawableTop="@mipmap/pop_answer_question_static"
            android:drawablePadding="8dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="10sp"
            android:textColor="#ff1d1d1d"
            android:gravity="center"
            android:id="@+id/tv_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="字体"
            android:drawableTop="@mipmap/pop_answer_question_font"
            android:drawablePadding="8dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="10sp"
            android:textColor="#ff1d1d1d"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="纠错"
            android:drawableTop="@mipmap/pop_answer_question_error"
            android:drawablePadding="8dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="10sp"
            android:textColor="#ff1d1d1d"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="夜间模式"
            android:drawableTop="@mipmap/pop_answer_question_mode"
            android:drawablePadding="8dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="10sp"
            android:textColor="#ff1d1d1d"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="隐藏此题"
            android:drawableTop="@mipmap/pop_answer_question_hide"
            android:drawablePadding="8dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="#ff1d1d1d"
        android:gravity="center"
        android:id="@+id/tv_cancel"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="取消"/>
</LinearLayout>
