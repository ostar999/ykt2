<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffd43b"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_personal_info"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">
        <com.psychiatrygarden.widget.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mycenter_icon"
            android:background="@drawable/empty_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:border_color="@color/color_white"
            app:border_width="3dp"/>
        <ImageView
            android:id="@+id/mycenter_layout_delete"
            android:background="@drawable/estimate_result_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:layout_alignParentEnd="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/mycenter_layout_delete"
            android:layout_toEndOf="@+id/mycenter_icon">
            <TextView
                android:textSize="20sp"
                android:textColor="@color/color_white"
                android:id="@+id/mycenter_tv_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_white"
                android:ellipsize="end"
                android:id="@+id/mycenter_tv_yan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_bottom"
        android:layout_below="@+id/rl_personal_info">
        <ImageView
            android:id="@+id/estimate_result_icon"
            android:background="@drawable/estimate_result_cry"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_centerInParent="true"
            android:contentDescription="@null"/>
        <TextView
            android:textSize="45sp"
            android:textColor="@color/color_white"
            android:id="@+id/tv_fenshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <ImageView
            android:background="@drawable/estimate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/estimate_result_icon"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_share"
        android:background="@drawable/estimate_result_zf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_personal_info"
        android:contentDescription="@null"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/iv_bottom"
        android:background="@drawable/estimate_result_bottom"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:contentDescription="@null"/>
</RelativeLayout>
