<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp">
    <View
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/tertiary_text_color"
        android:id="@+id/tv_question_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.psychiatrygarden.widget.SpringProgressView
        android:id="@+id/spring_progress_view"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_question_progress"
        app:layout_constraintTop_toBottomOf="@+id/tv_question_progress"
        app:layout_goneMarginTop="50dp"/>
    <ImageView
        android:id="@+id/ic_enter"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/ic_combine_question_enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/first_text_color"
        android:ellipsize="end"
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:text="生物化学蛋白质消化吸收和氨基酸代谢生物化学蛋白质消化吸收和氨基酸代谢"
        android:lines="1"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_question_progress"
        app:layout_constraintStart_toEndOf="@+id/ic_enter"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
