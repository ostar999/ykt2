<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_22"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_4"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:maxHeight="@dimen/dp_280"
        android:minHeight="@dimen/dp_130"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:paddingHorizontal="@dimen/dp_10"
        app:bl_corners_radius="@dimen/dp_8"
        app:bl_solid_color="@color/color_white">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333"
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333"
            android:gravity="center"
            android:id="@+id/detailTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTv"/>
        <com.noober.background.view.BLTextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:id="@+id/oneTv"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_6"
            android:text="@string/common_agree"
            app:bl_corners_radius="@dimen/dp_18"
            app:bl_solid_color="@color/c_173a8e"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.noober.background.view.BLTextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333"
            android:gravity="center"
            android:id="@+id/twoTv"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_6"
            android:text="@string/common_agree_no"
            app:bl_corners_radius="@dimen/dp_18"
            app:bl_stroke_color="@color/c_173a8e"
            app:bl_stroke_width="@dimen/dp_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.noober.background.view.BLTextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:id="@+id/singleTv"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_36"
            android:layout_marginBottom="@dimen/dp_6"
            android:text="@string/common_ok"
            app:bl_corners_radius="@dimen/dp_18"
            app:bl_solid_color="@color/c_173a8e"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <View
            android:background="@color/c_f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_56"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailTv"/>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/twoCvGrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="oneTv,twoTv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
