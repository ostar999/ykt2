<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="?attr/app_theme"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <com.psychiatrygarden.widget.AlphaImageView
            android:background="@drawable/nightmode"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/app_title_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程"
            android:layout_centerInParent="true"/>
        <com.psychiatrygarden.widget.AlphaTextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="分享"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:background="?attr/gray_line_126"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/rl_column"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView_course"
            android:background="?attr/hor_view_color"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:overScrollMode="never">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/llay_course_title"
                android:background="?attr/hor_view_color"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </HorizontalScrollView>
        <ImageView
            android:id="@+id/shade_left"
            android:background="@drawable/channel_leftblock"
            android:visibility="gone"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/shade_right"
            android:background="@drawable/channel_rightblock"
            android:visibility="gone"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
    </RelativeLayout>
    <View
        android:background="?attr/gray_line_126"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/mViewPager_course"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_network_load_fail"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/network_load_fail"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
