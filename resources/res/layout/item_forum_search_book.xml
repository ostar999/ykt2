<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/app_bg"
    android:paddingLeft="16dp"
    android:paddingTop="20dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_cover"
        android:layout_width="65dp"
        android:layout_height="88dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        app:riv_corner_radius="8dp"/>
    <TextView
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="?attr/first_txt_color"
        android:ellipsize="end"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="长安的荔枝学"
        android:maxLines="1"
        android:layout_toEndOf="@+id/img_cover"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/second_txt_color"
        android:ellipsize="end"
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="这个是余华自2003年以来的首部杂文集"
        android:maxLines="2"
        android:layout_below="@+id/tv_title"
        android:layout_toEndOf="@+id/img_cover"/>
    <LinearLayout
        android:id="@+id/ly_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_cover"
        android:layout_toEndOf="@+id/img_cover">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:visibility="gone"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="?attr/ic_book_read_people"
                android:layout_marginEnd="2dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/default_choosed_color"
                android:id="@+id/tv_read_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2345人阅读"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="end|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:visibility="gone"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="?attr/ic_circle_item_comment"
                android:layout_marginEnd="2dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/default_choosed_color"
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2345评论"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:background="?attr/new_gray_line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/img_cover"/>
</RelativeLayout>
