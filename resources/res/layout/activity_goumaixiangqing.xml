<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linvew"
        android:background="?attr/secondary_backgroup_color"
        android:padding="15dp"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/first_text_color"
                android:id="@+id/tv_dingdanhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:layout_alignParentTop="true"
                android:textIsSelectable="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:textSize="13sp"
                android:textColor="?attr/first_text_color"
                android:gravity="end|center_vertical"
                android:id="@+id/tv_chengjiaoshijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_dingdanhao"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="?attr/secondary_backgroup_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_my_order"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                android:layout_marginEnd="10dp"
                app:riv_corner_radius="3dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:layout_toStartOf="@+id/price"
                android:layout_toEndOf="@+id/iv_my_order">
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/first_text_color"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_counrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:singleLine="true"
                    android:lineSpacingMultiplier="1.2"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/tertiary_text_color"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:singleLine="true"
                    android:lineSpacingMultiplier="1.2"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/tertiary_text_color"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/addrname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:singleLine="true"
                    android:lineSpacingMultiplier="1.2"/>
            </LinearLayout>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/first_text_color"
                android:gravity="right"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lineSpacingMultiplier="1.2"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="end"
            android:orientation="horizontal"
            android:id="@+id/linr_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingStart="5dp"/>
    </LinearLayout>
    <View
        android:id="@+id/viewshow"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/linvew"/>
</RelativeLayout>
