<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/app_theme_red"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <com.psychiatrygarden.widget.AlphaImageView
            android:background="@drawable/nightmode"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资料"
            android:layout_centerInParent="true"/>
        <com.psychiatrygarden.widget.AlphaTextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="分享"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#fafafa"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:id="@+id/rl_column"
            android:background="#fafafa"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1">
            <com.psychiatrygarden.widget.ColumnHorizontalScrollView
                android:id="@+id/mColumnHorizontalScrollView"
                android:background="#fafafa"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/mRadioGroup_content"
                    android:background="#fafafa"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"/>
            </com.psychiatrygarden.widget.ColumnHorizontalScrollView>
            <ImageView
                android:id="@+id/shade_left"
                android:visibility="gone"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/shade_right"
                android:visibility="visible"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_more_columns"
            android:background="#fafafa"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/button_more_columns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/channel_glide"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/category_line"
        android:background="#ffdddddd"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_network_load_fail"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/network_load_fail"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
