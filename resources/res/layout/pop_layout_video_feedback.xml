<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/new_bg_one_color"
    android:paddingBottom="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_48">
        <RelativeLayout
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/first_text_color"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="反馈"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="?attr/ic_close_gray"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="?attr/new_bg_one_border_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="vertical"
                    android:id="@+id/rvFeedBackList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_show_content"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginHorizontal="@dimen/dp_16">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评价内容"/>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="?attr/second_txt_color"
                        android:id="@+id/tv_show_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_input_content"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="?attr/first_text_color"
                        android:textColorHint="?attr/write_comment_hint"
                        android:gravity="top"
                        android:id="@+id/input_et_content"
                        android:background="@drawable/bg_edit_note"
                        android:padding="@dimen/dp_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:minHeight="@dimen/dp_100"
                        android:hint="输入您的评价吧！"
                        android:maxLength="2000"
                        android:layout_marginHorizontal="@dimen/dp_16"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <TextView
        android:enabled="false"
        android:textSize="16sp"
        android:textColor="@color/color_download_enable"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:id="@+id/tv_submit"
        android:background="@drawable/bg_download"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="提交"
        android:layout_marginHorizontal="@dimen/dp_16"/>
</FrameLayout>
