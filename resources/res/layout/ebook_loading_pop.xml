<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/layoutRoot"
    android:padding="20dp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:background_normal="#80000000">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_loading"
        android:background="@drawable/loading_pop"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:textColor="@color/color_C2C6CB"
        android:id="@+id/tv_loading_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="努力加载中"
        android:layout_below="@+id/iv_loading"
        android:layout_centerInParent="true"/>
</com.ruffian.library.widget.RRelativeLayout>
