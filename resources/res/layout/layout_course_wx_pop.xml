<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_wx_bg"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/close"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/closenew"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#666666"
            android:id="@+id/title"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="添加助教微信，加入课程交流群交流学习心得"
            android:layout_below="@+id/close"
            android:layout_alignRight="@+id/close"
            android:lineSpacingExtra="1.2dp"
            android:lineSpacingMultiplier="1.2"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title">
            <ImageView
                android:id="@+id/pictrueimg"
                android:padding="20dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/app_icon"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:id="@+id/tipstxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加助教微信"/>
                <TextView
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#5cc984"
                    android:id="@+id/saveimg"
                    android:background="@drawable/shape_wx"
                    android:paddingLeft="10dp"
                    android:paddingTop="4dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="保存并跳转微信"
                    android:includeFontPadding="true"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
