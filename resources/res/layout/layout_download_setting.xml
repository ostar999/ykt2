<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_toolbar_common"/>
    <RelativeLayout
        android:background="?attr/new_bg_one_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/first_txt_color"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="允许运营商网络下载"
            android:layout_centerVertical="true"/>
        <Switch
            android:id="@+id/sw_allow_operator_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_24"
            android:thumb="@drawable/thumb_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:track="@drawable/switch_selector_green"
            android:layout_marginEnd="@dimen/dp_16"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16"
        style="@style/new_gray_line_style"/>
    <LinearLayout style="@style/set_layout_style">
        <TextView
            android:id="@+id/tv_video_definition"
            android:text="视频下载清晰度"
            style="@style/set_text_style"/>
        <TextView
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/tv_play_str"
            android:background="?attr/new_bg_one_color"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_4"
            android:visibility="visible"
            android:drawablePadding="@dimen/dp_4"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/img_info_local"
            android:layout_toEndOf="@+id/tv_info_local"
            style="@style/text_normal_font_12_style"/>
        <ImageView style="@style/personal_right_arrow_style"/>
    </LinearLayout>
    <View
        android:background="?attr/new_bg_two_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"/>
    <RelativeLayout
        android:id="@+id/ly_info_local"
        android:background="?attr/new_bg_one_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/first_txt_color"
            android:gravity="center_vertical"
            android:id="@+id/tv_info_local"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资料默认下载位置"
            android:layout_centerVertical="true"/>
        <TextView
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/tv_info_local_address"
            android:background="?attr/new_bg_one_color"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_4"
            android:visibility="visible"
            android:text=""
            android:maxLines="2"
            android:drawablePadding="@dimen/dp_4"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/img_info_local"
            android:layout_toEndOf="@+id/tv_info_local"
            style="@style/text_normal_font_12_style"/>
        <ImageView
            android:id="@+id/img_info_local"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            style="@style/personal_right_arrow_style"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"
        style="@style/new_gray_line_style"/>
    <RelativeLayout
        android:id="@+id/ly_book_local"
        android:background="?attr/new_bg_one_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/first_txt_color"
            android:gravity="center_vertical"
            android:id="@+id/tv_book_local"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图书默认下载位置"
            android:layout_centerVertical="true"/>
        <TextView
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/tv_book_local_address"
            android:background="?attr/new_bg_one_color"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_4"
            android:visibility="visible"
            android:text=""
            android:maxLines="2"
            android:drawablePadding="@dimen/dp_4"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/img_book"
            android:layout_toEndOf="@+id/tv_book_local"
            style="@style/text_normal_font_12_style"/>
        <ImageView
            android:id="@+id/img_book"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            style="@style/personal_right_arrow_style"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16"
        style="@style/new_gray_line_style"/>
</LinearLayout>
