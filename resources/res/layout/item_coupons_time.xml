<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_9"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_9"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_16"
    android:paddingVertical="@dimen/dp_9">
    <TextView
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        android:textColor="?attr/first_txt_color"
        android:ellipsize="end"
        android:id="@+id/tv_coupons_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="优惠券名称优惠券名称优惠券名称优惠券名称"
        android:lines="1"
        android:layout_marginEnd="@dimen/dp_48"
        android:layout_toStartOf="@+id/btn_use"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="?attr/main_theme_color"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:text="倒计时  23：32：30"
        android:layout_below="@+id/tv_coupons_name"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="?attr/new_bg_one_color"
        android:id="@+id/btn_use"
        android:background="@drawable/shape_app_theme_corners_4"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_4"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即使用"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="@dimen/dp_8"
        android:paddingVertical="@dimen/dp_4"/>
</RelativeLayout>
