<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_update_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="?attr/app_update_top_img"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/umeng_update_frame"
            android:background="?attr/umeng_update_dialog_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:layout_below="@+id/iv_update_top">
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/dominant_color"
                android:layout_gravity="center"
                android:id="@+id/tv_version_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/UMUpdateTitle"
                android:layout_centerInParent="true"/>
            <TextView
                android:textSize="13sp"
                android:textColor="?attr/secondary_text_color"
                android:id="@+id/umeng_update_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="24dp"
                android:text="1、修复部分手机不能观看直播问题"
                android:layout_weight="1"
                android:lineSpacingExtra="8dp"
                android:layout_marginHorizontal="24dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="24dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/first_text_color"
                    android:gravity="center"
                    android:id="@+id/umeng_update_id_cancel"
                    android:background="?attr/first_empty_circle_bg"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginRight="5dp"
                    android:text="下次再说"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/umeng_update_id_ok"
                    android:background="?attr/red_round_coner"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:text="立即更新"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
