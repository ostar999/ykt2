<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh_view"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/include_header"
        android:visibility="gone"
        layout="@layout/incluedheader"/>
    <View
        android:id="@+id/viewa"
        android:background="?attr/gray_line_126"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/include_header"/>
    <ExpandableListView
        android:id="@+id/elv_re_live"
        android:background="?attr/bg_backgroud"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:groupIndicator="@null"
        android:childDivider="?attr/divider_color"
        android:divider="?attr/divider_color"
        android:dividerHeight="0.5dp"
        android:layout_below="@+id/viewa"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/liner_img"
        android:background="?attr/bg_backgroud"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/kong_data"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </LinearLayout>
</RelativeLayout>
