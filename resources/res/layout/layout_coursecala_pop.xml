<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_coursecala_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="15sp"
        android:textColor="@drawable/select_video_speed_textcolor"
        android:gravity="center"
        android:id="@+id/smallSpeed"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.75X"/>
    <View
        android:background="?attr/fourth_line_backgroup_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@drawable/select_video_speed_textcolor"
        android:gravity="center"
        android:id="@+id/nomalspeed"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.0X"/>
    <View
        android:background="?attr/fourth_line_backgroup_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@drawable/select_video_speed_textcolor"
        android:gravity="center"
        android:id="@+id/oneSmallSpeed"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.25X"/>
    <View
        android:background="?attr/fourth_line_backgroup_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@drawable/select_video_speed_textcolor"
        android:gravity="center"
        android:id="@+id/middleSpeed"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.5X"/>
    <View
        android:background="?attr/fourth_line_backgroup_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@drawable/select_video_speed_textcolor"
        android:gravity="center"
        android:id="@+id/bigSpeed"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2.0X"/>
</LinearLayout>
