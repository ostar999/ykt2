<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/pop_frame_backgroup_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/jmui_menu_title_bar"
            android:background="?attr/app_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height">
            <ImageButton
                android:id="@+id/jmui_return_btn"
                android:background="@color/transparent"
                android:padding="10dp"
                android:layout_width="@dimen/title_bar_height"
                android:layout_height="match_parent"
                android:src="?attr/ic_black_back"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
                <TextView
                    android:textSize="16sp"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/jmui_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="190dp"
                    android:text="投诉"
                    android:singleLine="true"/>
            </LinearLayout>
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/submitBtn"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="?attr/secondary_text_color"
                    android:background="?attr/secondary_backgroup_color"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请选择投诉该账号的原因"/>
                <TextView
                    android:textColor="?attr/tertiary_text_color"
                    android:background="?attr/app_bg"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发布不适当内容对我造成骚扰"/>
                <GridLayout
                    android:orientation="vertical"
                    android:background="?attr/app_bg"
                    android:paddingLeft="4dp"
                    android:paddingRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="3"
                    android:columnCount="2">
                    <CheckBox
                        android:theme="?attr/report_checkbox_style"
                        android:textColor="?attr/first_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="色情"/>
                    <CheckBox
                        android:theme="?attr/report_checkbox_style"
                        android:textColor="?attr/first_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="违法犯罪及违禁品"/>
                    <CheckBox
                        android:theme="?attr/report_checkbox_style"
                        android:textColor="?attr/first_text_color"
                        android:layout_width="wrap_content"
                        android:text="赌博"/>
                    <CheckBox
                        android:theme="?attr/report_checkbox_style"
                        android:textColor="?attr/first_text_color"
                        android:layout_width="wrap_content"
                        android:text="政治言论"/>
                    <CheckBox
                        android:theme="?attr/report_checkbox_style"
                        android:textColor="?attr/first_text_color"
                        android:layout_width="wrap_content"
                        android:text="暴恐血腥"/>
                </GridLayout>
                <TextView
                    android:textColor="?attr/tertiary_text_color"
                    android:background="?attr/app_bg"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="存在欺诈骗钱行为"/>
                <GridLayout
                    android:orientation="vertical"
                    android:background="?attr/app_bg"
                    android:paddingLeft="4dp"
                    android:paddingRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="6"
                    android:columnCount="2">
                    <CheckBox
                        android:theme="?attr/report_checkbox_style"
                        android:textColor="?attr/first_text_color"
                        android:layout_gravity="fill"
                        android:layout_width="wrap_content"
                        android:text="金融诈骗（贷款/提额/代开/套现等）"
                        android:layout_row="0"
                        android:layout_columnSpan="2"/>
                    <CheckBox
                        android:theme="?attr/report_checkbox_style"
                        android:textColor="?attr/first_text_color"
                        android:layout_gravity="fill"
                        android:layout_width="wrap_content"
                        android:text="游戏相关诈骗（代练/充值等）"
                        android:layout_columnSpan="2"/>
                    <CheckBox
                        android:theme="?attr/report_checkbox_style"
                        android:textColor="?attr/first_text_color"
                        android:layout_width="wrap_content"
                        android:text="网络兼职刷单诈骗"/>
                    <CheckBox
                        android:theme="?attr/report_checkbox_style"
                        android:textColor="?attr/first_text_color"
                        android:layout_width="wrap_content"
                        android:text="返利诈骗"/>
                    <CheckBox
                        android:theme="?attr/report_checkbox_style"
                        android:textColor="?attr/first_text_color"
                        android:layout_width="wrap_content"
                        android:text="网络交友诈骗"/>
                    <CheckBox
                        android:theme="?attr/report_checkbox_style"
                        android:textColor="?attr/first_text_color"
                        android:layout_width="wrap_content"
                        android:text="虚假投资理财诈骗"/>
                    <CheckBox
                        android:theme="?attr/report_checkbox_style"
                        android:textColor="?attr/first_text_color"
                        android:layout_width="wrap_content"
                        android:text="赌博诈骗"/>
                    <CheckBox
                        android:theme="?attr/report_checkbox_style"
                        android:textColor="?attr/first_text_color"
                        android:layout_width="wrap_content"
                        android:text="收款不发货"/>
                    <CheckBox
                        android:theme="?attr/report_checkbox_style"
                        android:textColor="?attr/first_text_color"
                        android:layout_width="wrap_content"
                        android:text="仿冒他人诈骗"/>
                    <CheckBox
                        android:theme="?attr/report_checkbox_style"
                        android:textColor="?attr/first_text_color"
                        android:layout_width="wrap_content"
                        android:text="免费送诈骗"/>
                </GridLayout>
                <TextView
                    android:textColor="?attr/tertiary_text_color"
                    android:background="?attr/secondary_backgroup_color"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="其他问题投诉"/>
                <EditText
                    android:textSize="18sp"
                    android:textColor="?attr/first_text_color"
                    android:textColorHint="?attr/tertiary_text_color"
                    android:gravity="top"
                    android:background="?attr/app_bg"
                    android:padding="10dp"
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:hint="请输入投诉内容"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linep"
        android:background="#55000000"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="提交中..."/>
    </LinearLayout>
</RelativeLayout>
