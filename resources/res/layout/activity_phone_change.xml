<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/identity_confirm_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/secondary_text_color"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="7dp"
        android:text="请输入手机号及验证码进行验证"
        android:maxLines="1"
        android:autoSizeTextType="uniform"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?attr/pop_frame_backgroup_color"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:id="@+id/tv_phone_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:text="手机号"/>
        <com.psychiatrygarden.widget.ClearEditText
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:textColorHint="?attr/tertiary_text_color"
            android:id="@+id/ed_phone"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="请输入新的手机号"
            android:maxLines="1"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?attr/pop_frame_backgroup_color"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:id="@+id/tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:text="验证码"/>
        <com.psychiatrygarden.widget.ClearEditText
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:textColorHint="?attr/tertiary_text_color"
            android:id="@+id/ed_verification_code"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="请输入短信验证码"
            android:maxLines="1"
            android:layout_weight="1"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/tv_send_verification_code"
            android:background="@drawable/ffe25d49_20"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:minWidth="84dp"
            android:text="获取验证码"/>
    </LinearLayout>
    <View
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/new_bg_one_color"
        android:gravity="center"
        android:id="@+id/tv_next"
        android:background="@drawable/fff1cac5_20"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:text="下一步"/>
    <TextView
        android:textSize="13sp"
        android:textColor="#ffe25d49"
        android:gravity="center"
        android:id="@+id/tv_no_verification_code"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="收不到验证码？"/>
</LinearLayout>
