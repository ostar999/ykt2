<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/new_bg_one_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/ly_nav"
        layout="@layout/layout_toolbar_material_list"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_preview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="?attr/new_bg_one_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ly_progress"
                android:background="@drawable/download_progress_bg"
                android:visibility="visible"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true">
                <com.psychiatrygarden.widget.ProgressWheel
                    android:id="@+id/progress_wheel_download"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    app:matProg_barColor="?attr/loading_dialog_text_color"
                    app:matProg_barWidth="1dp"
                    app:matProg_progressIndeterminate="true"
                    app:matProg_rimWidth="1dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/loading_dialog_text_color"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/dialog_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="加载中"
                    android:maxLines="2"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/ly_bottom"
            android:background="?attr/tertiary_backgroup_white_color"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="?attr/new_gray_line_color"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:id="@+id/qbrel"
                android:background="?attr/tertiary_backgroup_white_color"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp">
                <LinearLayout
                    android:id="@+id/ly_praise"
                    android:layout_alignParentEnd="true"
                    style="@style/layout_icon_style">
                    <ImageView
                        android:id="@+id/img_praise"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="?attr/dianzancourse"/>
                    <TextView
                        android:text="点赞"
                        style="@style/layotu_textview_icon_style"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_comment_msg"
                    android:layout_toStartOf="@+id/ly_praise"
                    style="@style/layout_icon_style">
                    <ImageView
                        android:id="@+id/img_comment"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="?attr/question_msg"/>
                    <TextView
                        android:text="评论"
                        style="@style/layotu_textview_icon_style"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_collection"
                    android:layout_toStartOf="@+id/ly_comment_msg"
                    style="@style/layout_icon_style">
                    <ImageView
                        android:id="@+id/img_collection"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="?attr/icon_collect_no"/>
                    <TextView
                        android:text="收藏"
                        style="@style/layotu_textview_icon_style"/>
                </LinearLayout>
                <TextView
                    android:textSize="13sp"
                    android:textStyle="normal"
                    android:textColor="?attr/information_edit_hint_color"
                    android:gravity="center_vertical"
                    android:id="@+id/btn_comment"
                    android:background="@drawable/comment_bg_shape"
                    android:paddingLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="写评论"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/ly_collection"
                    app:drawableStartCompat="?attr/icon_write_comment"/>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_question_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_alignTop="@+id/btn_comment"
                    android:layout_marginEnd="6dp"
                    android:layout_alignEnd="@+id/btn_comment">
                    <View
                        android:id="@+id/line"
                        android:background="?attr/fourth_line_backgroup_color"
                        android:layout_width="1dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"/>
                    <ImageView
                        android:id="@+id/img_msg"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="?attr/comment_icon_msg"
                        android:layout_centerInParent="true"
                        android:layout_toEndOf="@+id/line"/>
                    <TextView
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"
                        android:id="@+id/questiondetails_btn_commentNum"
                        android:background="@drawable/fff6614b_8"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginTop="3dp"
                        android:text="？评论"
                        android:singleLine="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="-10dp"
                        android:layout_toEndOf="@+id/img_msg"/>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:textSize="18sp"
                android:textColor="?attr/questiondetails_btn_pushAnswer"
                android:gravity="center"
                android:id="@+id/questiondetails_btn_pushAnswer"
                android:background="?attr/question_submit_bg"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/line_viewok"
                android:background="#f7f7f7"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/zuoduil"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="答对了"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"/>
                <View
                    android:background="#e8e8e8"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/zuocuol"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="答错了"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include
        android:id="@+id/ly_details"
        android:visibility="gone"
        layout="@layout/layout_information_details"/>
    <com.psychiatrygarden.widget.CustomEmptyView
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
