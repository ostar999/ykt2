<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_question_detail_filter"
    android:padding="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="end"
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:src="?attr/closeing"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLabels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <TextView
        android:textColor="?attr/app_bg"
        android:gravity="center"
        android:id="@+id/tv_do_question"
        android:background="@drawable/red_round_coner_color_f95843_radius_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="去做本考点试题"/>
</LinearLayout>
