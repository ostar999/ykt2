<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center"
        android:background="?attr/new_bg_one_color"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <com.psychiatrygarden.widget.CircleImageView
            android:id="@+id/header_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="?attr/personal_headimg_icon"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/first_txt_color"
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/header_img"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/content"
            android:layout_centerHorizontal="true">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/mingcheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部院校排"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/zylineview"
        android:background="?attr/app_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/lin_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="14sp"
                android:textColor="@drawable/homepage_bottom_textcolor"
                android:gravity="center"
                android:id="@+id/tv_all"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全部院校"/>
            <TextView
                android:id="@+id/view1"
                android:background="@drawable/tv_backgroup"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>
        <View
            android:background="?attr/line"
            android:layout_width="0.5dp"
            android:layout_height="25dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/lin_s"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="14sp"
                android:textColor="@drawable/homepage_bottom_textcolor"
                android:gravity="center"
                android:id="@+id/tv_s"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="考研院校"/>
            <TextView
                android:id="@+id/view3"
                android:background="@drawable/tv_backgroup"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>
        <View
            android:background="?attr/line"
            android:layout_width="0.5dp"
            android:layout_height="25dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/lin_sc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="14sp"
                android:textColor="@drawable/homepage_bottom_textcolor"
                android:gravity="center"
                android:id="@+id/tv_sc"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本科院校"/>
            <TextView
                android:id="@+id/view2"
                android:background="@drawable/tv_backgroup"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
