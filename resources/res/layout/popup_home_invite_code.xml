<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popCl"
        android:background="@drawable/home_code_popbg"
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_230"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/codeCl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_62"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_26"
                android:src="@drawable/home_code_invite_txt"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_575757"
                android:gravity="center"
                android:id="@+id/phoneTv"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_72"
                android:text="@string/login_binding"
                android:layout_marginStart="@dimen/dp_60"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_575757"
                android:gravity="center"
                android:id="@+id/codeTv"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_26"
                android:text="@string/login_code11"
                android:layout_marginStart="@dimen/dp_60"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneTv"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_575757"
                android:gravity="center"
                android:id="@+id/inviteCodeTv"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_26"
                android:text="@string/home_code_invite1"
                android:layout_marginStart="@dimen/dp_60"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/codeTv"/>
            <com.noober.background.view.BLEditText
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_575757"
                android:gravity="start|center_vertical"
                android:id="@+id/phoneEt"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:hint="@string/login_phone"
                android:maxLength="11"
                android:inputType="numberSigned"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_30"
                android:paddingHorizontal="@dimen/dp_6"
                app:bl_corners_radius="@dimen/dp_1"
                app:bl_solid_color="@color/c_d6d6d6"
                app:layout_constraintBottom_toBottomOf="@+id/phoneTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/phoneTv"
                app:layout_constraintTop_toTopOf="@+id/phoneTv"/>
            <com.noober.background.view.BLEditText
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_575757"
                android:gravity="start|center_vertical"
                android:id="@+id/codeEt"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:hint="@string/login_input_num"
                android:maxLength="6"
                android:inputType="numberSigned"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_30"
                android:paddingHorizontal="@dimen/dp_6"
                app:bl_corners_radius="@dimen/dp_1"
                app:bl_solid_color="@color/c_d6d6d6"
                app:layout_constraintBottom_toBottomOf="@+id/codeTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/codeTv"
                app:layout_constraintTop_toTopOf="@+id/codeTv"/>
            <com.noober.background.view.BLTextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/numTv"
                android:visibility="gone"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_22"
                android:text="60s"
                android:layout_marginEnd="@dimen/dp_1"
                app:bl_corners_radius="@dimen/dp_4"
                app:bl_solid_color="@color/c_a4a4a4"
                app:layout_constraintBottom_toBottomOf="@+id/codeEt"
                app:layout_constraintEnd_toEndOf="@+id/codeEt"
                app:layout_constraintTop_toTopOf="@+id/codeEt"/>
            <com.noober.background.view.BLTextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/getTv"
                android:visibility="visible"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_30"
                android:text="@string/common_get"
                android:layout_marginEnd="@dimen/dp_2"
                app:bl_corners_radius="@dimen/dp_4"
                app:bl_solid_color="@color/c_3a78ff"
                app:layout_constraintBottom_toBottomOf="@+id/codeEt"
                app:layout_constraintEnd_toEndOf="@+id/codeEt"
                app:layout_constraintTop_toTopOf="@+id/codeEt"/>
            <com.noober.background.view.BLEditText
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_575757"
                android:gravity="start|center_vertical"
                android:id="@+id/inviteCodeEt"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:hint="@string/home_code_input1"
                android:maxLength="6"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_30"
                android:paddingHorizontal="@dimen/dp_6"
                app:bl_corners_radius="@dimen/dp_1"
                app:bl_solid_color="@color/c_d6d6d6"
                app:layout_constraintBottom_toBottomOf="@+id/inviteCodeTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/inviteCodeTv"
                app:layout_constraintTop_toTopOf="@+id/inviteCodeTv"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_575757"
                android:paddingTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_code_invite_tip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inviteCodeTv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/errorCl"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_86"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_26"
                android:src="@drawable/home_code_txt1"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c_575757"
                android:id="@+id/tipTv"
                android:paddingTop="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_code_tip1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/succesCl"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_86"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_26"
                android:src="@drawable/home_code_txt2"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_black"
                android:id="@+id/tipSuccessTv"
                android:paddingTop="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_code_tip2"
                app:layout_constraintBottom_toTopOf="@+id/goTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:gravity="center"
                android:id="@+id/goTv"
                android:background="@drawable/me_code_btn"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_38"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@string/home_code_look"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/closeImgv"
        android:visibility="invisible"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_6"
        android:src="@drawable/common_x5"
        android:paddingStart="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_black"
        android:gravity="center"
        android:id="@+id/goBtnTv"
        android:background="@drawable/me_code_btn"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/common_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popCl"/>
</androidx.constraintlayout.widget.ConstraintLayout>
