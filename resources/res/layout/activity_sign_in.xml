<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/new_bg_two_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/title_bar"
        android:background="@drawable/sign_topbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_back"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_10"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:src="@drawable/icon_black_back"
                android:contentDescription="@null"
                android:paddingVertical="@dimen/dp_10"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/sign_top_title_tv"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到领福利"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/iv_top_share"
                android:paddingLeft="@dimen/dp_4"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_10"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:src="@drawable/sign_share"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"
                android:paddingVertical="@dimen/dp_10"/>
            <ImageView
                android:id="@+id/iv_top_question"
                android:padding="@dimen/dp_10"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:src="@drawable/sign_qustion"
                android:layout_toLeftOf="@+id/iv_top_share"
                android:contentDescription="@null"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_44">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_top_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/signin_top_img"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/bg_white_round_16"
                        android:padding="@dimen/dp_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_220"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginHorizontal="@dimen/dp_16">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:textSize="@dimen/dp_16"
                                    android:textStyle="bold"
                                    android:textColor="@color/first_txt_color"
                                    android:id="@+id/tv_days_str"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/third_txt_color"
                                    android:id="@+id/tv_date_str"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/second_txt_color"
                                android:gravity="center_vertical"
                                android:id="@+id/tv_member_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_40"
                                android:text="会员明细"/>
                            <ImageView
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:src="@drawable/sign_arrows"/>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_sign_days"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12"
                            android:overScrollMode="never"/>
                    </LinearLayout>
                </RelativeLayout>
                <FrameLayout
                    android:id="@+id/sign_banner_fl"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginHorizontal="@dimen/dp_16">
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/banner_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_114"/>
                    <HorizontalScrollView
                        android:layout_gravity="bottom|center_horizontal"
                        android:scrollbars="none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/ll_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_15"/>
                    </HorizontalScrollView>
                </FrameLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_13"
                    android:layout_marginHorizontal="@dimen/dp_16">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_btn_radius_8"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_56"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dp_15">
                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:src="@drawable/signin_invite_friend"
                            android:layout_marginStart="@dimen/dp_12"/>
                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/first_txt_color"
                            android:gravity="start"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="邀请好友"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/dp_4"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/new_fail_color"
                            android:gravity="center"
                            android:id="@+id/tv_invite_friend"
                            android:background="@drawable/shape_btn_light_red_radius_8"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_24"
                            android:text="分享"
                            android:layout_marginEnd="@dimen/dp_12"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_btn_radius_8"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_56"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:src="@drawable/signin_help_friend"
                            android:layout_marginStart="@dimen/dp_12"/>
                        <EditText
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/first_txt_color"
                            android:textColorHint="@color/forth_txt_color"
                            android:gravity="center_vertical"
                            android:id="@+id/help_et"
                            android:background="@null"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:hint="助力好友"
                            android:maxLines="1"
                            android:maxLength="6"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/dp_4"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/main_theme_four_deep_color"
                            android:gravity="center"
                            android:id="@+id/tv_help_friend"
                            android:background="@drawable/shape_btn_light_red_radius_8"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_24"
                            android:text="助力"
                            android:layout_marginEnd="@dimen/dp_12"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16">
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    app:tabIndicator="@drawable/tab_indicator_signin"
                    app:tabIndicatorFullWidth="false"
                    app:tabIndicatorGravity="bottom"
                    app:tabIndicatorHeight="@dimen/dp_6"
                    app:tabMode="fixed"
                    app:tabRippleColor="@null"
                    app:tabSelectedTextColor="@color/first_txt_color"
                    app:tabTextColor="@color/third_txt_color"/>
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewpager"
                    android:background="@drawable/bg_white_round_16"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_800"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingHorizontal="@dimen/dp_10"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_top"
        android:background="@color/new_bg_two_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_44"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16"
        app:tabIndicator="@drawable/tab_indicator_signin"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="bottom"
        app:tabIndicatorHeight="@dimen/dp_6"
        app:tabMode="fixed"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="@color/first_txt_color"
        app:tabTextColor="@color/third_txt_color"/>
</RelativeLayout>
