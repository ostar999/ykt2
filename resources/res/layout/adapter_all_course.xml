<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/llay_subject"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/gray_bg"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <View
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:textColor="@color/gray_font"
                android:id="@+id/tv_subject_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全科课程"
                android:singleLine="true"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/gray_light"
                android:id="@+id/tv_subject_seconedtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/llay_all_subject"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/orange_font"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_all_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全科单月课程"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/orange_font"
                android:id="@+id/tv_dis_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="88"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/gray_light"
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="原价108"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/tv_dis_price"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/orange_font"
                android:id="@+id/tv_dis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="限时8折"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/tv_price"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/orange_font"
                android:id="@+id/tv_all_renew"
                android:background="@drawable/bt_video_pay_bg"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_single_subject"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_font"
            android:id="@+id/tv_single_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生理课单月课程"
            android:singleLine="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_light"
            android:gravity="center"
            android:id="@+id/tv_single_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="108"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/tv_single_renew"
            android:layout_toRightOf="@+id/tv_single_name"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/orange_font"
            android:id="@+id/tv_single_renew"
            android:background="@drawable/bt_video_pay_bg"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/view_heng_line"
        android:background="@color/gray_line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:text="我们"
        android:singleLine="true"/>
</LinearLayout>
