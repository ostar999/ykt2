<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/umeng_socialize_list_item_bgcolor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/umeng_socialize_title"
        layout="@layout/umeng_socialize_titile_bar"/>
    <ScrollView
        android:layout_gravity="center"
        android:id="@+id/umeng_xp_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/umeng_socialize_list_item_textcolor"
                android:id="@+id/umeng_socialize_first_area_title"
                android:paddingLeft="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/umeng_socialize_first_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/umeng_socialize_first_area_title"
                android:layout_centerInParent="true"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/umeng_socialize_list_item_textcolor"
                android:id="@+id/umeng_socialize_second_area_title"
                android:paddingLeft="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/umeng_socialize_first_area"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/umeng_socialize_second_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/umeng_socialize_second_area_title"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
