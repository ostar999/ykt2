<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/app_bg"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <com.psychiatrygarden.widget.AutoSplitTextView
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="?attr/question_color"
        android:ellipsize="end"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标签"
        android:maxLines="2"
        android:lineSpacingExtra="3dp"/>
    <com.psychiatrygarden.widget.AutoSplitTextView
        android:textSize="14sp"
        android:textColor="?attr/tertiary_text_color"
        android:ellipsize="end"
        android:id="@+id/tv_desc"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="标签"
        android:maxLines="2"
        android:layout_below="@+id/title"
        android:lineSpacingExtra="3dp"/>
    <RelativeLayout
        android:id="@+id/ly_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tv_desc">
        <ImageView
            android:id="@+id/iv_pub_time"
            android:visibility="gone"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="?attr/ic_circle_item_pub_time"
            android:layout_centerInParent="true"
            android:layout_marginEnd="4dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/third_txt_color"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标记时间"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_pub_time"/>
        <ImageView
            android:visibility="gone"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="?attr/ic_circle_item_comment"
            android:layout_centerInParent="true"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/commnum"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/third_txt_color"
            android:id="@+id/commnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/ly_time"/>
</RelativeLayout>
