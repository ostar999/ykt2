<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/itemviewid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/relView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <com.psychiatrygarden.widget.CircleImageView
            android:id="@+id/header"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/app_icon"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="姓名"
            android:layout_toRightOf="@+id/header"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/question_text_small"
        android:textColor="?attr/question_color"
        android:id="@+id/anacontentview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:lineSpacingExtra="1.2dp"
        android:lineSpacingMultiplier="1.4"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:id="@+id/llay_support"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:textSize="11sp"
            android:textColor="?attr/item_school_color"
            android:id="@+id/tv_support"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"/>
        <TextView
            android:textSize="11sp"
            android:textColor="?attr/item_school_color"
            android:id="@+id/tv_oppose"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"/>
        <TextView
            android:textSize="11sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/tv_reply"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
