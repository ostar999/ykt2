<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/alivc_dialog_error_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_back"
        android:padding="@dimen/alivc_common_padding_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="@dimen/alivc_common_font_14"
            android:textColor="@color/alivc_common_font_white_light"
            android:gravity="center"
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alivc_net_state_mobile"
            android:maxLines="1"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/alivc_common_margin_16">
            <TextView
                android:textSize="@dimen/alivc_common_font_15"
                android:textColor="@color/alivc_common_font_white_light"
                android:gravity="center"
                android:id="@+id/continue_play"
                android:background="@drawable/alivc_rr_bg_white"
                android:layout_width="@dimen/alivc_common_width_group_82"
                android:layout_height="@dimen/alivc_common_height_group_30"
                android:text="@string/alivc_net_state_mobile_yes"/>
            <TextView
                android:textSize="@dimen/alivc_common_font_15"
                android:textColor="@color/alivc_common_font_red"
                android:gravity="center"
                android:id="@+id/stop_play"
                android:background="@drawable/alivc_rr_bg_red"
                android:layout_width="@dimen/alivc_common_width_group_82"
                android:layout_height="@dimen/alivc_common_height_group_30"
                android:layout_marginLeft="@dimen/alivc_common_margin_30"
                android:text="@string/alivc_net_state_mobile_no"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
