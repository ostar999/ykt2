<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_circle_report"
        android:paddingLeft="16dp"
        android:paddingTop="17dp"
        android:paddingRight="16dp"
        android:paddingBottom="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="17dp">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/ic_close_custom_year_pop"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_title"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="举报"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/top_line"
            android:background="?attr/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_type"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_line">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举报类型"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/forth_txt_color"
                android:gravity="end"
                android:id="@+id/tv_show_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="请选择举报类型"
                android:drawableRight="@drawable/ic_down_arrow_day"
                android:drawablePadding="4dp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
        <View
            android:id="@+id/line"
            android:background="?attr/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_type"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问题描述"/>
            <TextView
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（选填）"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_input"
            android:background="@drawable/bg_circle_report_input"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_content">
            <EditText
                android:enabled="false"
                android:textSize="16sp"
                android:textColor="?attr/first_txt_color"
                android:textColorHint="?attr/forth_txt_color"
                android:gravity="start"
                android:id="@+id/et_input_content"
                android:background="@null"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="110dp"
                android:hint="提供更多信息有助于举报快速通过哦"
                android:textCursorDrawable="@drawable/input_text_cursor"/>
            <TextView
                android:textSize="13sp"
                android:textColor="?attr/forth_txt_color"
                android:layout_gravity="end"
                android:id="@+id/tv_text_len"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="0/200"
                android:layout_marginEnd="14dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_input">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片补充"/>
            <TextView
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（选填）"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintStart_toStartOf="@+id/ll_pic"
            app:layout_constraintTop_toBottomOf="@+id/ll_pic"
            app:spanCount="3"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/tv_submit"
            android:background="?attr/red_round_coner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:text="提交"
            app:layout_constraintTop_toBottomOf="@+id/rv_pic"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
