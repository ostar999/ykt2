<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="?attr/new_bg_one_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <com.psychiatrygarden.widget.AlphaImageView
            android:id="@+id/iv_ranking_back"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="22dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="?attr/ic_black_back"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/tiku_top_menu_bg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="14sp"
                android:textColor="@drawable/tiku_top_textcolor"
                android:gravity="center"
                android:id="@+id/tv_rank_tiku"
                android:background="@drawable/tiku_top_btn"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="题库"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@drawable/tiku_top_textcolor"
                android:gravity="center"
                android:id="@+id/tv_rank_exam"
                android:background="@drawable/tiku_top_btn_right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="模考"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_centerInParent="true"/>
        <com.psychiatrygarden.widget.AlphaImageView
            android:id="@+id/iv_ranking_xiangqing"
            android:padding="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="?attr/zhuanfaceshi"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_6"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/lineAlltarget"
        android:background="?attr/app_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/lin_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="14sp"
                android:textColor="@drawable/homepage_bottom_textcolor"
                android:gravity="center"
                android:id="@+id/tv_all_r"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全部院校"/>
            <TextView
                android:id="@+id/view1"
                android:background="@drawable/tv_backgroup"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>
        <View
            android:background="?attr/line"
            android:layout_width="0.5dp"
            android:layout_height="25dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/lin_s"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="14sp"
                android:textColor="@drawable/homepage_bottom_textcolor"
                android:gravity="center"
                android:id="@+id/tv_s_r"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="考研院校"/>
            <TextView
                android:id="@+id/view3"
                android:background="@drawable/tv_backgroup"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>
        <View
            android:background="?attr/line"
            android:layout_width="0.5dp"
            android:layout_height="25dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/lin_sc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="14sp"
                android:textColor="@drawable/homepage_bottom_textcolor"
                android:gravity="center"
                android:id="@+id/tv_sc_r"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本科院校"/>
            <TextView
                android:id="@+id/view2"
                android:background="@drawable/tv_backgroup"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>
    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_refresh"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclelist"
            android:background="?attr/app_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <ListView
        android:id="@+id/lv_rank"
        android:visibility="visible"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="?attr/line"
        android:dividerHeight="0.5dp"
        android:layout_weight="1"/>
    <View
        android:id="@+id/line"
        style="@style/new_gray_line_style"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="?attr/new_bg_two_color"
        android:gravity="center"
        android:id="@+id/btn_share"
        android:background="@drawable/shape_app_theme_corners_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="分享到好友"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginVertical="@dimen/dp_8"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ly_no_choose"
        android:paddingTop="@dimen/dp_126"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无考研院校"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/forth_txt_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="选择后不可修改，请谨慎选择"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/new_bg_two_color"
            android:id="@+id/btn_to_choose"
            android:background="@drawable/shape_app_theme_corners_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="去选择"
            android:paddingHorizontal="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_6"/>
    </LinearLayout>
</LinearLayout>
