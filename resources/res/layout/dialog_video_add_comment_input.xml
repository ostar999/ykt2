<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/commentList_bottom_layout"
    android:background="@drawable/bg_pop_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:textColor="?attr/first_txt_color"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:text="反馈内容"/>
    <View
        android:id="@+id/line"
        android:background="?attr/new_bg_one_border_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_16"
        android:fillViewport="true"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:textColorHint="?attr/forth_txt_color"
                android:gravity="top"
                android:id="@+id/dialog_input_et_comment"
                android:background="@drawable/bg_edit_note"
                android:padding="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="@dimen/dp_100"
                android:hint="请输入您的评价"
                android:maxLength="5000"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="end|center_vertical"
        android:id="@+id/relbuttom"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:paddingHorizontal="@dimen/dp_16">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="@dimen/sp_13"
                android:textColor="@drawable/color_knowledge_point_operation"
                android:gravity="center"
                android:id="@+id/pushBtm"
                android:background="@drawable/bg_knowledge_point_operation"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_24"
                android:text="确定"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
