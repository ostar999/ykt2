<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="?attr/app_bg"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.psychiatrygarden.widget.CircleImageView
            android:id="@+id/iv_header_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="?attr/personal_headimg_icon"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/rel_id"
            android:layout_toRightOf="@+id/iv_header_img"
            android:layout_centerVertical="true">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/question_color"
                    android:gravity="center"
                    android:id="@+id/tv_ranking_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/llay_rank_medal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/item_school_color"
                    android:gravity="center"
                    android:id="@+id/tv_ranking_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/item_school_color"
                    android:gravity="center"
                    android:id="@+id/tv_ranking_accuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:gravity="center"
            android:id="@+id/rel_id"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <com.psychiatrygarden.widget.CircleImageView
                android:id="@+id/circleimg"
                android:visibility="gone"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/item_school_color"
                android:gravity="center"
                android:id="@+id/tv_ranking_num"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="123"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"/>
</LinearLayout>
