<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/r1"
        android:background="?attr/add_address_bg_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView6"
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textColor="?attr/question_color"
            android:gravity="center"
            android:id="@+id/textView2"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您还没有添加收货地址赶快添加一个吧！"
            android:layout_below="@+id/textView6"
            android:lineSpacingMultiplier="1.2"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/textView5"
            android:background="?attr/gray_line_126"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/textView2"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:textColor="?attr/question_color"
                android:gravity="center"
                android:id="@+id/tv_fou"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_weight="1"/>
            <TextView
                android:background="?attr/gray_line_126"
                android:visibility="gone"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_shi"
                android:background="?attr/dominant_color"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去设置"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
