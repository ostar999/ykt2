<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_up"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_draw_menu_down_triangle"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:rotation="180"/>
    <com.ruffian.library.widget.RLinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:id="@+id/ll_menu"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_10"
        app:background_normal="@color/color_303030"
        app:corner_radius="@dimen/dp_8">
        <com.ruffian.library.widget.RCheckBox
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/cb_draw_line"
            android:background="@android:color/transparent"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_35"
            android:button="@null"
            android:text="划线"
            app:icon_checked_top="@drawable/icon_cancel_line"
            app:icon_height_top="@dimen/dp_20"
            app:icon_normal_top="@drawable/icon_draw_line"
            app:icon_width_top="@dimen/dp_20"
            app:icon_with_text="true"/>
        <com.ruffian.library.widget.RTextView
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_notes"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:text="笔记"
            android:layout_marginHorizontal="@dimen/dp_24"
            app:icon_height_top="@dimen/dp_20"
            app:icon_normal_top="@drawable/icon_note"
            app:icon_width_top="@dimen/dp_20"/>
        <com.ruffian.library.widget.RTextView
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_comment"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_35"
            android:text="段评"
            app:icon_height_top="@dimen/dp_20"
            app:icon_normal_top="@drawable/icon_paragraph_comment"
            app:icon_width_top="@dimen/dp_20"/>
        <com.ruffian.library.widget.RTextView
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_copy"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:text="复制"
            android:layout_marginHorizontal="@dimen/dp_24"
            app:icon_height_top="@dimen/dp_20"
            app:icon_normal_top="@drawable/icon_copy"
            app:icon_width_top="@dimen/dp_20"/>
        <com.ruffian.library.widget.RTextView
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_share"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_35"
            android:text="分享"
            app:icon_height_top="@dimen/dp_20"
            app:icon_normal_top="@drawable/icon_share_ebook"
            app:icon_width_top="@dimen/dp_20"/>
        <com.ruffian.library.widget.RTextView
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_error"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_35"
            android:text="纠错"
            android:layout_marginStart="@dimen/dp_24"
            app:icon_height_top="@dimen/dp_20"
            app:icon_normal_top="@drawable/icon_error_recovery"
            app:icon_width_top="@dimen/dp_20"/>
    </com.ruffian.library.widget.RLinearLayout>
    <ImageView
        android:id="@+id/iv_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_draw_menu_down_triangle"
        android:layout_below="@+id/ll_menu"
        android:layout_centerInParent="true"/>
    <FrameLayout
        android:id="@+id/fl_draw_line_menu"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_below="@+id/ll_menu"
        android:layout_alignStart="@+id/ll_menu"
        android:layout_alignEnd="@+id/ll_menu">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.ruffian.library.widget.RFrameLayout
                android:id="@+id/fl_text_bg"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginEnd="@dimen/dp_12"
                app:background_normal="@color/color_303030"
                app:corner_radius="@dimen/dp_18">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@drawable/icon_text_bg"
                    android:contentDescription="@null"/>
            </com.ruffian.library.widget.RFrameLayout>
            <com.ruffian.library.widget.RFrameLayout
                android:id="@+id/fl_draw_line"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                app:background_normal="@color/color_303030"
                app:corner_radius="@dimen/dp_18">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@drawable/icon_draw_line_more"
                    android:contentDescription="@null"/>
            </com.ruffian.library.widget.RFrameLayout>
        </LinearLayout>
        <com.ruffian.library.widget.RLinearLayout
            android:layout_gravity="end"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:paddingHorizontal="@dimen/dp_12"
            android:paddingVertical="@dimen/dp_10"
            app:background_normal="@color/color_303030"
            app:corner_radius="@dimen/dp_18">
            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <com.ruffian.library.widget.RRadioButton
                    android:gravity="center"
                    android:id="@+id/cb_color_one"
                    android:background="@android:color/transparent"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:button="@null"
                    app:background_normal="@color/color_ff9da6"
                    app:corner_radius="@dimen/dp_8"
                    app:icon_height="@dimen/dp_10"
                    app:icon_src_checked="@drawable/icon_color_selected"
                    app:icon_src_normal="@null"
                    app:icon_width="@dimen/dp_10"
                    app:icon_with_text="true"/>
                <com.ruffian.library.widget.RRadioButton
                    android:id="@+id/cb_color_two"
                    android:background="@android:color/transparent"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:button="@null"
                    android:layout_marginHorizontal="@dimen/dp_8"
                    app:background_normal="@color/color_b6a0ff"
                    app:corner_radius="@dimen/dp_8"
                    app:icon_height="@dimen/dp_10"
                    app:icon_src_checked="@drawable/icon_color_selected"
                    app:icon_src_normal="@null"
                    app:icon_width="@dimen/dp_10"
                    app:icon_with_text="true"/>
                <com.ruffian.library.widget.RRadioButton
                    android:id="@+id/cb_color_three"
                    android:background="@android:color/transparent"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:button="@null"
                    app:background_normal="@color/color_78aeff"
                    app:corner_radius="@dimen/dp_8"
                    app:icon_height="@dimen/dp_10"
                    app:icon_src_checked="@drawable/icon_color_selected"
                    app:icon_src_normal="@null"
                    app:icon_width="@dimen/dp_10"
                    app:icon_with_text="true"/>
                <com.ruffian.library.widget.RRadioButton
                    android:id="@+id/cb_color_four"
                    android:background="@android:color/transparent"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:button="@null"
                    android:layout_marginHorizontal="@dimen/dp_8"
                    app:background_normal="@color/color_90d691"
                    app:corner_radius="@dimen/dp_8"
                    app:icon_height="@dimen/dp_10"
                    app:icon_src_checked="@drawable/icon_color_selected"
                    app:icon_src_normal="@null"
                    app:icon_width="@dimen/dp_10"
                    app:icon_with_text="true"/>
                <com.ruffian.library.widget.RRadioButton
                    android:id="@+id/cb_color_five"
                    android:background="@android:color/transparent"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:button="@null"
                    app:background_normal="@color/color_ffc86e"
                    app:corner_radius="@dimen/dp_8"
                    app:icon_height="@dimen/dp_10"
                    app:icon_src_checked="@drawable/icon_color_selected"
                    app:icon_src_normal="@null"
                    app:icon_width="@dimen/dp_10"
                    app:icon_with_text="true"/>
            </RadioGroup>
        </com.ruffian.library.widget.RLinearLayout>
    </FrameLayout>
</RelativeLayout>
