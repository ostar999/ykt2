<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_toolbar_normal"/>
    <androidx.core.widget.NestedScrollView
        android:background="?attr/new_bg_one_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout style="@style/set_layout_style">
                <TextView
                    android:id="@+id/changePhoneNum"
                    android:text="账号与安全"
                    style="@style/set_text_style"/>
                <ImageView style="@style/personal_right_arrow_style"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"
                style="@style/new_gray_line_style"/>
            <LinearLayout style="@style/set_layout_style">
                <TextView
                    android:id="@+id/tv_address"
                    android:text="收货地址"
                    style="@style/personal_text_style"/>
                <ImageView style="@style/personal_right_arrow_style"/>
            </LinearLayout>
            <View
                android:background="?attr/new_bg_two_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_12"/>
            <LinearLayout style="@style/set_layout_style">
                <TextView
                    android:id="@+id/btn_message_notice"
                    android:text="消息通知"
                    style="@style/personal_text_style"/>
                <ImageView style="@style/personal_right_arrow_style"/>
            </LinearLayout>
            <View
                android:background="?attr/new_gray_line_color"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <View
                android:background="?attr/new_bg_two_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_12"/>
            <RelativeLayout
                android:id="@+id/ly_deepnight"
                android:background="?attr/new_bg_one_color"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="?attr/first_txt_color"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夜间模式"
                    android:layout_centerVertical="true"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_10"/>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_deepnight"
                    android:background="?attr/new_bg_one_color"
                    android:visibility="visible"
                    android:text="夜间模式"
                    android:layout_centerVertical="true"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_4"
                    android:layout_toStartOf="@+id/img_night"
                    style="@style/text_normal_font_12_style"/>
                <ImageView
                    android:id="@+id/img_night"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_alignParentEnd="true"
                    style="@style/personal_right_arrow_style"/>
            </RelativeLayout>
            <View
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"
                style="@style/new_gray_line_style"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="?attr/first_text_color"
                android:id="@+id/tv_read_set"
                android:background="?attr/new_bg_one_color"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_18"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="阅读设置"
                android:drawablePadding="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_16"
                android:paddingVertical="@dimen/dp_18"
                app:drawableRightCompat="?attr/icon_indicator_right"/>
            <RelativeLayout
                android:id="@+id/yejianmoshi"
                android:background="?attr/bg_backgroud"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/first_text_color"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingTop="18dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夜间模式"
                    android:layout_centerVertical="true"/>
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/yejianSwith"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:checked="false"
                    android:minHeight="48dp"
                    android:thumb="@drawable/thumb_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/switch_selector_green"/>
            </RelativeLayout>
            <View
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"
                style="@style/new_gray_line_style"/>
            <RelativeLayout
                android:id="@+id/rel_clear"
                android:background="?attr/new_bg_one_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="?attr/first_txt_color"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清除缓存"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_app_clear"
                    android:background="?attr/new_bg_one_color"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_4"
                    android:visibility="visible"
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/img_clear"
                    style="@style/text_normal_font_12_style"/>
                <ImageView
                    android:id="@+id/img_clear"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_alignParentEnd="true"
                    style="@style/personal_right_arrow_style"/>
            </RelativeLayout>
            <View
                android:background="?attr/new_bg_two_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_12"/>
            <LinearLayout style="@style/set_layout_style">
                <TextView
                    android:id="@+id/tv_download_set"
                    android:text="下载设置"
                    style="@style/set_text_style"/>
                <ImageView style="@style/personal_right_arrow_style"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"
                style="@style/new_gray_line_style"/>
            <LinearLayout style="@style/set_layout_style">
                <TextView
                    android:id="@+id/tv_video_player_set"
                    android:text="视频播放设置"
                    style="@style/set_text_style"/>
                <ImageView style="@style/personal_right_arrow_style"/>
            </LinearLayout>
            <View
                android:background="?attr/new_bg_two_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_12"/>
            <LinearLayout style="@style/set_layout_style">
                <TextView
                    android:text="截屏后显示功能面板"
                    style="@style/set_text_style"/>
                <Switch
                    android:id="@+id/sw_show_screen_plat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_24"
                    android:thumb="@drawable/thumb_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/switch_selector_green"/>
            </LinearLayout>
            <View
                android:background="?attr/new_bg_two_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_12"/>
            <LinearLayout style="@style/set_layout_style">
                <TextView
                    android:id="@+id/clearQuestion"
                    android:text="清除答题记录"
                    style="@style/personal_text_style"/>
                <ImageView style="@style/personal_right_arrow_style"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"
                style="@style/new_gray_line_style"/>
            <RelativeLayout
                android:id="@+id/ly_wrong_question_set"
                android:background="?attr/new_bg_one_color"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_74">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="错题作对移除"
                        android:paddingStart="@dimen/dp_16"
                        android:paddingEnd="@dimen/dp_10"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/third_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关闭后，错题再次做对后不会从错题中移除"
                        android:paddingStart="@dimen/dp_16"/>
                </LinearLayout>
                <Switch
                    android:id="@+id/sw_error_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_24"
                    android:thumb="@drawable/thumb_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/switch_selector_green"
                    android:layout_marginEnd="@dimen/dp_16"/>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_wrong_question_set"
                    android:background="?attr/new_bg_one_color"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_4"
                    android:layout_toStartOf="@+id/img_error_set"
                    style="@style/text_normal_font_12_style"/>
                <ImageView
                    android:id="@+id/img_error_set"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_alignParentEnd="true"
                    style="@style/personal_right_arrow_style"/>
            </RelativeLayout>
            <View
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"
                style="@style/new_gray_line_style"/>
            <RelativeLayout
                android:background="?attr/new_bg_one_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="?attr/first_txt_color"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="斩题提示音"
                    android:layout_centerVertical="true"/>
                <Switch
                    android:id="@+id/sw_cut_question_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_24"
                    android:thumb="@drawable/thumb_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/switch_selector_green"
                    android:layout_marginEnd="@dimen/dp_16"/>
            </RelativeLayout>
            <View
                android:background="?attr/new_bg_two_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_12"/>
            <LinearLayout style="@style/set_layout_style">
                <TextView
                    android:id="@+id/tv_frind_permission"
                    android:text="朋友权限"
                    style="@style/set_text_style"/>
                <ImageView style="@style/personal_right_arrow_style"/>
            </LinearLayout>
            <View
                android:background="?attr/new_bg_two_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_12"/>
            <RelativeLayout
                android:background="?attr/new_bg_one_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/aboutView"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_app_name"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:paddingHorizontal="@dimen/dp_16"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/main_theme_red_color"
                    android:gravity="right"
                    android:id="@+id/tvNewVersion"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发现新版本V2.5.10"
                    android:layout_toLeftOf="@+id/img_about"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="4dp"/>
                <View
                    android:id="@+id/view_new_version"
                    android:background="@drawable/shape_full_red"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_6"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_toStartOf="@+id/img_about"/>
                <ImageView
                    android:id="@+id/img_about"
                    style="@style/set_right_arrow_style"/>
            </RelativeLayout>
            <View
                android:background="?attr/line_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="?attr/new_bg_one_color"
                android:gravity="center"
                android:id="@+id/outLogin"
                android:background="@drawable/shape_app_theme_corners_12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_8"
                android:text="退出登录"
                android:layout_marginHorizontal="@dimen/dp_16"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
