<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_16">
    <ImageView
        android:id="@+id/iv_icon_note_idea"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@drawable/ic_note_video"/>
    <View
        android:background="#252c46"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_below="@+id/ll_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/iv_icon_note_idea">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/tv_note_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingExtra="5dp"
            android:textIsSelectable="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_one"
                android:layout_width="@dimen/dp_98"
                android:layout_height="@dimen/dp_98"
                app:riv_corner_radius="@dimen/dp_8"/>
            <View
                android:layout_gravity="center"
                android:id="@+id/line"
                android:background="#252c46"
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_marginVertical="@dimen/dp_16"/>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_two"
                android:layout_width="@dimen/dp_98"
                android:layout_height="@dimen/dp_98"
                android:layout_marginLeft="@dimen/dp_2"
                app:riv_corner_radius="@dimen/dp_8"/>
        </LinearLayout>
        <com.psychiatrygarden.gradview.NineGridTestLayout
            android:id="@+id/ningrids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:transitionName="sharedView"
            app:sapcing="3dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="#909499"
                android:id="@+id/tv_note_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_note_menu"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_18"
                android:src="@drawable/ic_note_edit_menu"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
