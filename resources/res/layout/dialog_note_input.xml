<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/commentList_bottom_layout"
    android:background="?attr/identity_confirm_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_dialog_cancel"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/chosebiao"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加笔记"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:textSize="14sp"
                android:id="@+id/screenview"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/comment_expand_img"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/sviptscolor"
                android:gravity="right"
                android:id="@+id/dialog_input_btn_comment_ok"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"/>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:background="?attr/identity_confirm_bg_color"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:textColorHint="?attr/dialog_input_hint_color"
                android:gravity="top"
                android:id="@+id/dialog_input_et_comment"
                android:background="?attr/dialog_input_color"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="添加笔记"
                android:maxLength="5000"
                android:layout_weight="1"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/relbuttom"
        android:background="?attr/input_color"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/toTxt"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转至解析"
            android:drawableRight="@drawable/icon_indicator_right"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:id="@+id/relimg"
            android:visibility="visible"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/imgshown"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/app_icon"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <RelativeLayout
                android:id="@+id/uploadprogrss"
                android:background="#77000000"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true">
                <ProgressBar
                    android:id="@+id/processView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:indeterminateDrawable="?attr/progressBar"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/processTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/deleteimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="?attr/updelete"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/vbimg"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vbimg"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/upimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="?attr/comment_crop_img"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="13sp"
                android:textColor="?attr/put_comment_text_color"
                android:id="@+id/pushBtm"
                android:background="?attr/write_comment_publish"
                android:paddingLeft="8dp"
                android:paddingTop="3dp"
                android:paddingRight="8dp"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="保存"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
