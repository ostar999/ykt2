<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/view_dialog_root"
    android:background="@drawable/shape_white_top_13"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/forth_txt_color"
            android:gravity="center"
            android:id="@+id/btn_cancel"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="取消"
            android:paddingHorizontal="16dp"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/first_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加投票"
            android:layout_centerInParent="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/search_text_color"
            android:gravity="center"
            android:id="@+id/btn_finish"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="完成"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="16dp"/>
    </RelativeLayout>
    <View style="@style/line_style"/>
    <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="?attr/toupiao"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/first_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投票类型"
            android:layout_toRightOf="@+id/img"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/secondary_text_color"
            android:gravity="center"
            android:id="@+id/btn_single"
            android:background="@drawable/shape_bg_gray_4_round"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:text="单选"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/btn_more"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/main_theme_color"
            android:gravity="center"
            android:id="@+id/btn_more"
            android:background="@drawable/shape_bg_light_red_4_round"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:text="多选"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linetoupiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginHorizontal="16dp"/>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/ly_add_option"
                android:background="@drawable/bg_circle_report_input"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="16dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/main_theme_color"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/addoption"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="增加选项"
                    android:drawableLeft="?attr/tainjia"
                    android:drawablePadding="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
