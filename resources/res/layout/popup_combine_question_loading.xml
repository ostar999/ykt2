<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_combine_question_loading"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:paddingVertical="24dp">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_loading"
        android:background="@drawable/anim_combine_question_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/question_color"
        android:layout_gravity="center"
        android:id="@+id/tv_tips"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:text="仅50道题满足条件"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/secondary_text_color"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="系统平台正在进行智能匹配\10请耐心等待..."/>
</LinearLayout>
