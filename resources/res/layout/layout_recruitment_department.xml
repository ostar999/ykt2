<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/new_bg_one_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_bg"
        android:background="@drawable/shape_choose_school_details_top_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240"/>
    <include
        android:id="@+id/tabbar"
        layout="@layout/layout_toolbar_common"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ly_bottom"
        android:layout_below="@+id/tabbar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_24"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginVertical="@dimen/dp_24">
                <com.psychiatrygarden.widget.CircleImageView
                    android:id="@+id/school_head"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginEnd="@dimen/dp_12"/>
                <TextView
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/tv_school_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text=""
                    android:layout_toEndOf="@+id/school_head"/>
                <LinearLayout
                    android:id="@+id/ly_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_below="@+id/tv_school_name"
                    android:layout_toEndOf="@+id/school_head"/>
                <TextView
                    android:textSize="@dimen/sp_11"
                    android:textColor="?attr/third_txt_color"
                    android:id="@+id/tv_school_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="地址："
                    android:layout_alignBottom="@+id/school_head"
                    android:layout_toEndOf="@+id/school_head"/>
                <TextView
                    android:textSize="@dimen/sp_11"
                    android:textColor="?attr/third_txt_color"
                    android:id="@+id/tv_school_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代码："
                    android:layout_alignBottom="@+id/tv_school_address"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_toEndOf="@+id/tv_school_address"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/ly_content"
                android:layout_alignBottom="@+id/ly_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:background="?attr/new_bg_one_color"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/dp_8"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                <include
                    android:id="@+id/ly_open_vip"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    layout="@layout/layout_choose_school_lock_view"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_bottom"
        android:background="?attr/new_bg_one_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View style="@style/line_gray_style"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:background="@drawable/shape_svip_kt_round12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_7"
            android:text="开通权限查看招录院系"
            android:layout_marginHorizontal="@dimen/dp_8"/>
    </LinearLayout>
</RelativeLayout>
