<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f7f7f7"
    android:paddingLeft="17dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <ImageView
        android:id="@+id/selectId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/uncheckvideo"
        android:scaleType="fitXY"
        android:scaleX="0.9"
        android:scaleY="0.9"/>
    <TextView
        android:textSize="15sp"
        android:textColor="#969696"
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:layout_toRightOf="@+id/selectId"/>
    <TextView
        android:textSize="15sp"
        android:textColor="#191919"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="生理学"
        android:layout_toLeftOf="@+id/shanchuvimg"
        android:layout_toRightOf="@+id/num"/>
    <TextView
        android:textSize="13sp"
        android:textColor="#969696"
        android:id="@+id/detailtx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="时长 06:35  |  已看75%"
        android:drawableLeft="@drawable/dsimg"
        android:drawablePadding="10dp"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/num"/>
    <ImageView
        android:id="@+id/whyimg"
        android:visibility="gone"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/wrong_layer_shape"
        android:layout_toRightOf="@+id/detailtx"
        android:layout_alignTop="@+id/detailtx"/>
    <ImageView
        android:id="@+id/shanchuvimg"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shanchuvimg"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
