<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/white_top_13"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_remove"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textSize="15sp"
            android:textColor="?attr/tertiary_text_color"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:text="做对移除"/>
        <Switch
            android:id="@+id/sw_question_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:checked="true"
            android:thumb="@drawable/thumb_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:track="@drawable/switch_selector_green"/>
        <View
            android:layout_alignParentBottom="true"
            style="@style/line_style"/>
    </RelativeLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/first_text_color"
        android:gravity="center"
        android:id="@+id/btn_compose_test"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="组题"/>
    <View
        android:id="@+id/compose_line"
        style="@style/line_style"/>
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/first_text_color"
        android:gravity="center"
        android:id="@+id/btn_export"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="导出"/>
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/first_text_color"
        android:gravity="center"
        android:id="@+id/btn_cancel"
        android:background="@drawable/shape_cancel_circle_bg"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:text="取消"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"/>
</LinearLayout>
