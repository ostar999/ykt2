<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_bg"
        android:background="@drawable/ic_study_report_top_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        app:layout_collapseMode="parallax"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ly_bottom">
        <com.google.android.material.appbar.AppBarLayout
            android:orientation="vertical"
            android:id="@+id/appbarlayout"
            android:background="@color/transparent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapse"
                android:background="@drawable/shpe_study_report_top_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toobars1"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">
                    <RelativeLayout
                        android:id="@+id/toolbars"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44">
                        <ImageView
                            android:id="@+id/iv_actionbar_back"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_left_back"/>
                        <TextView
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:ellipsize="end"
                            android:id="@+id/nav_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学习报告"
                            android:lines="1"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"/>
                        <RelativeLayout
                            android:id="@+id/btn_export"
                            android:layout_width="@dimen/dp_46"
                            android:layout_height="@dimen/dp_40"
                            android:layout_alignParentEnd="true">
                            <ImageView
                                android:gravity="center"
                                android:id="@+id/img_export"
                                android:paddingTop="@dimen/dp_10"
                                android:paddingBottom="@dimen/dp_10"
                                android:layout_width="@dimen/dp_46"
                                android:layout_height="@dimen/dp_40"
                                android:src="@drawable/ic_white_export"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_16"
                                android:layout_alignParentEnd="true"
                                android:paddingVertical="@dimen/dp_10"/>
                            <ImageView
                                android:id="@+id/img_vip"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:src="@drawable/ic_study_report_vip_tag"
                                android:layout_marginEnd="@dimen/dp_7"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                        <ImageView
                            android:gravity="center"
                            android:id="@+id/btn_share"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:visibility="gone"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/ic_white_share"
                            android:paddingStart="@dimen/dp_10"
                            android:layout_toStartOf="@+id/btn_statistics"
                            android:paddingVertical="@dimen/dp_10"/>
                        <ImageView
                            android:gravity="center"
                            android:id="@+id/btn_statistics"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:visibility="gone"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/ic_white_statistics"
                            android:layout_centerVertical="true"
                            android:paddingStart="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:layout_alignParentEnd="true"
                            android:paddingVertical="@dimen/dp_10"/>
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:id="@+id/rellogview"
                    android:background="@drawable/shape_white_top_16_no_night"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_68"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginHorizontal="@dimen/dp_16">
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:id="@+id/ly_title_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:id="@+id/ly_score_info"
                            android:background="@drawable/ic_score_info_bg"
                            android:paddingTop="@dimen/dp_8"
                            android:layout_width="@dimen/dp_108"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dp_12">
                            <TextView
                                android:textSize="@dimen/sp_16"
                                android:textStyle="bold"
                                android:textColor="@color/first_txt_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="预估分"
                                android:layout_marginEnd="@dimen/dp_6"/>
                            <ImageView
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:src="@drawable/ic_score_info_gray"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/ly_change_view"
                            android:paddingTop="@dimen/dp_4"
                            android:paddingBottom="@dimen/dp_4"
                            android:layout_width="@dimen/dp_150"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingStart="@dimen/dp_12"
                            android:paddingEnd="@dimen/dp_4"
                            android:layout_alignParentEnd="true"
                            android:paddingVertical="@dimen/dp_4">
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/third_txt_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="变化趋势"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/dp_4"
                                android:layout_toStartOf="@+id/img_arrow"/>
                            <ImageView
                                android:id="@+id/img_arrow"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:src="@drawable/ic_study_score_right_arrow"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/ly_webview_score"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_below="@+id/ly_title_info">
                        <WebView
                            android:id="@+id/webview_score"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/linearLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_30"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true">
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/third_txt_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="预估分"/>
                            <TextView
                                android:textSize="@dimen/sp_44"
                                android:textStyle="bold"
                                android:textColor="@color/first_txt_color"
                                android:id="@+id/tv_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-10dp"
                                android:text="0"/>
                            <LinearLayout
                                android:gravity="center"
                                android:id="@+id/ly_trend"
                                android:background="@drawable/shape_btn_light_red_radius_8"
                                android:visibility="gone"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="@dimen/dp_24"
                                android:layout_marginTop="-5dp"
                                android:layout_alignBottom="@+id/progress_view"
                                android:layout_centerHorizontal="true">
                                <ImageView
                                    android:id="@+id/img_trend"
                                    android:layout_width="@dimen/dp_12"
                                    android:layout_height="@dimen/dp_12"
                                    android:src="@drawable/ic_trend_up"/>
                                <TextView
                                    android:textSize="@dimen/sp_14"
                                    android:textStyle="bold"
                                    android:textColor="@color/main_theme_color"
                                    android:id="@+id/tv_trend_score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"/>
                            </LinearLayout>
                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/view_web_score"
                            android:background="@color/new_bg_one_color"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_200"
                            android:layout_alignTop="@+id/webview_score"
                            android:layout_alignBottom="@+id/webview_score">
                            <com.psychiatrygarden.widget.ProgressWheel
                                android:id="@+id/progress_wheel"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginBottom="10dp"
                                android:layout_centerInParent="true"
                                app:matProg_barColor="#a6a6a6"
                                app:matProg_barWidth="1dp"
                                app:matProg_progressIndeterminate="true"
                                app:matProg_rimWidth="1dp"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/forth_txt_color"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_update_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_24"
                        android:layout_centerHorizontal="true"/>
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <LinearLayout
                android:gravity="center"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_8">
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/shape_new_bg_two_color_no_night_corners"
                    android:padding="@dimen/dp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/third_txt_color"
                        android:gravity="center"
                        android:id="@+id/btn_today"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_28"
                        android:text="今天"
                        android:paddingHorizontal="@dimen/dp_16"/>
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold"
                        android:textColor="@color/first_txt_color"
                        android:gravity="center"
                        android:id="@+id/btn_week"
                        android:background="@drawable/shape_new_bg_one_color_no_night_corners"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_28"
                        android:text="本周"
                        android:paddingHorizontal="@dimen/dp_16"/>
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/third_txt_color"
                        android:gravity="center"
                        android:id="@+id/btn_month"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_28"
                        android:text="本月"
                        android:paddingHorizontal="@dimen/dp_16"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:background="@color/white"
            android:visibility="visible"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginHorizontal="@dimen/dp_16">
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:textColor="@color/first_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="做题统计"/>
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/third_txt_color"
                        android:id="@+id/tv_refresh_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="记录05-21 14:00开始刷题数据"
                        android:layout_marginStart="@dimen/dp_4"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginHorizontal="@dimen/dp_16">
                    <LinearLayout style="@style/statistics_layout_style">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="@dimen/sp_13"
                                android:id="@+id/tv_study_num_two"
                                android:visibility="gone"
                                android:text="0h"
                                style="@style/statistics_main_txt_style"/>
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textStyle="bold"
                                android:textColor="@color/first_txt_color"
                                android:id="@+id/tv_study_num_two_min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0m"/>
                        </LinearLayout>
                        <TextView
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/third_txt_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总用时"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="match_parent"/>
                    <LinearLayout style="@style/statistics_layout_style">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_all_number"
                                android:text="0"
                                style="@style/statistics_main_txt_style"/>
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/first_txt_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="次"/>
                        </LinearLayout>
                        <TextView
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/third_txt_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计作答"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="match_parent"/>
                    <LinearLayout style="@style/statistics_layout_style">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_personal_percent"
                                android:text="0"
                                style="@style/statistics_main_txt_style"/>
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/first_txt_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%"/>
                        </LinearLayout>
                        <TextView
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/third_txt_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正确率"/>
                    </LinearLayout>
                </LinearLayout>
                <com.psychiatrygarden.widget.PointProgressByTaskView
                    android:id="@+id/point_task_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:id="@+id/ly_webview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="@dimen/dp_40">
                    <WebView
                        android:id="@+id/webview_score_day"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <WebView
                        android:id="@+id/webview_score_month"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <WebView
                        android:id="@+id/webview_score_week"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:id="@+id/view_web"
                        android:background="@color/app_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.psychiatrygarden.widget.ProgressWheel
                            android:id="@+id/progress_wheel_download"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_centerInParent="true"
                            app:matProg_barColor="#a6a6a6"
                            app:matProg_barWidth="1dp"
                            app:matProg_progressIndeterminate="true"
                            app:matProg_rimWidth="1dp"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <WebView
        android:id="@+id/report_webview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ly_old_detail"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/new_gray_line_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/new_bg_one_color"
                android:gravity="center"
                android:id="@+id/btn_old_detail"
                android:background="@drawable/shape_all_main_color_12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_8"
                android:text="往期周报"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginVertical="@dimen/dp_8"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ly_open_vip"
            android:background="@color/white"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/new_gray_line_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/first_txt_color"
                android:gravity="center"
                android:id="@+id/btn_open_vip"
                android:background="@drawable/shape_svip_btn_no_night_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_8"
                android:text="开通会员，查看学习报告"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginVertical="@dimen/dp_8"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
