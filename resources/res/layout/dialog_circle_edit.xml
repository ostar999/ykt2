<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_white"
    android:paddingLeft="@dimen/content_item_padding"
    android:paddingTop="@dimen/content_item_padding_large"
    android:paddingRight="@dimen/content_item_padding"
    android:paddingBottom="@dimen/content_item_padding_large"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_options_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center_horizontal"
            android:id="@+id/rl_reply_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_option_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_circle_reply"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_item_padding_small"
                android:text="@string/reply_label_only"
                android:layout_toRightOf="@+id/iv_option_1"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:id="@+id/rl_copy_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_option_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_circle_copy"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_item_padding_small"
                android:text="@string/copy_label_only"
                android:layout_toRightOf="@+id/iv_option_2"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:id="@+id/rl_report_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_option_3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_circle_sixin"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_item_padding_small"
                android:text="私信"
                android:layout_toRightOf="@+id/iv_option_3"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_options_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_item_padding_large"
        android:layout_below="@+id/ll_options_1">
        <RelativeLayout
            android:gravity="center_horizontal"
            android:id="@+id/rl_edit_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_option_4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_circle_edit"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_item_padding_small"
                android:text="@string/edit_label_only"
                android:layout_toRightOf="@+id/iv_option_4"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:id="@+id/rl_delete_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_option_5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_circle_delete"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_item_padding_small"
                android:text="@string/delete_label_only"
                android:layout_toRightOf="@+id/iv_option_5"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:id="@+id/rl_jiajin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_option_6"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/jiajinghui"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/jiajing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_item_padding_small"
                android:text="加精"
                android:layout_toRightOf="@+id/iv_option_6"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_options_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_item_padding_large"
        android:weightSum="3"
        android:layout_below="@+id/ll_options_2">
        <RelativeLayout
            android:gravity="center_horizontal"
            android:id="@+id/zhiding_rl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_option_7"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/zhidinghui"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/zhiding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_item_padding_small"
                android:text="置顶"
                android:layout_toRightOf="@+id/iv_option_7"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/ll_options_3"
        android:layout_alignLeft="@+id/ll_options_3"
        android:layout_alignRight="@+id/ll_options_3">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_option_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/close"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
