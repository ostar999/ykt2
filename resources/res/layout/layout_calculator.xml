<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/gridlayout"
    android:background="#f0f0f0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="9"
    android:columnCount="4"
    android:alignmentMode="alignBounds">
    <EditText
        android:textSize="35dp"
        android:layout_gravity="center"
        android:id="@+id/edit"
        android:text=" "
        android:layout_columnSpan="4"
        android:layout_rowWeight="3"
        android:layout_columnWeight="1"/>
    <TextView
        android:textSize="45dp"
        android:layout_gravity="center"
        android:id="@+id/view"
        android:text="0"
        android:layout_columnSpan="4"
        android:layout_rowWeight="3"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/add"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="+"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/substact"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="-"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/multiply"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="ร"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/divide"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="รท"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/seven"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="7"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/eight"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="8"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/nine"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="9"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/left"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="("
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/four"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="4"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/five"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="5"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/six"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="6"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/right"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text=")"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/three"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/two"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/one"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:id="@+id/Clean"
        android:background="#fb7730"
        android:layout_margin="1dp"
        android:text="AC"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/dot"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="."
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/zero"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:textSize="24dp"
        android:textColor="#7c7d82"
        android:id="@+id/equal"
        android:background="#fafafa"
        android:layout_margin="1dp"
        android:text="="
        android:layout_columnSpan="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
</GridLayout>
