<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="?attr/app_bg"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/liveCalendarTitleBarLayout"
        android:background="?attr/toolbar_color_new"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <ImageView
            android:id="@+id/imgCourseDirectoryBack"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="?attr/ic_black_back"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_5"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:id="@+id/tvCourseDirectoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:drawablePadding="10dp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/ivEditCollect"
            android:visibility="gone"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="?attr/ic_right_menu_edit"
            android:layout_toLeftOf="@+id/imgCourseDirectoryDownload"
            android:layout_centerVertical="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginEnd="@dimen/dp_16"/>
        <ImageView
            android:id="@+id/imgCourseDirectoryDownload"
            android:visibility="gone"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="?attr/icon_course_directory_download"
            android:layout_toLeftOf="@+id/imgCourseDirectoryAnswer"
            android:layout_centerVertical="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginEnd="@dimen/dp_16"/>
        <ImageView
            android:id="@+id/imgCourseDirectoryAnswer"
            android:visibility="gone"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="?attr/icon_course_directory_answer"
            android:layout_toLeftOf="@+id/imgCourseDirectoryNoteExport"
            android:layout_centerVertical="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginEnd="@dimen/dp_16"/>
        <ImageView
            android:id="@+id/imgCourseDirectoryNoteExport"
            android:visibility="gone"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="?attr/icon_note_export_new"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16"/>
    </RelativeLayout>
    <cn.webdemo.com.supporfragment.tablayout.MagicIndicator
        android:id="@+id/orderListMagicIndicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16"/>
    <View
        android:id="@+id/viewGap"
        android:background="?attr/fourth_line_backgroup_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/orderListViewPage"
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
