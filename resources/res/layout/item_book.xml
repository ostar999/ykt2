<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_item"
    android:background="@drawable/shape_ebook_item_12"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingRight="16dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_cover"
        android:layout_width="@dimen/dp_41"
        android:layout_height="@dimen/dp_56"
        android:src="@mipmap/ykb_qr_code"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        app:riv_corner_radius="4dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/first_text_color"
        android:ellipsize="end"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小红书顺序版小红书顺序版小红书顺序版小红书顺序版"
        android:maxLines="1"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/tv_score"
        android:layout_toEndOf="@+id/img_cover"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/tertiary_text_color"
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_cover"
        android:layout_toEndOf="@+id/img_cover"/>
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/warn_color"
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无评分"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/img_close"
        android:visibility="gone"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/closenewimg"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
