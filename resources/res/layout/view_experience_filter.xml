<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本科院校"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:id="@+id/ly_show_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/forth_txt_color"
                android:id="@+id/tv_more_one"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="展开"/>
            <ImageView
                android:id="@+id/img_arrow_one"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="?attr/ic_exp_search_down_arrow"
                android:layout_marginStart="3dp"/>
        </LinearLayout>
    </RelativeLayout>
    <com.psychiatrygarden.widget.LabelsView
        android:id="@+id/lb_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:animateLayoutChanges="true"
        android:layout_marginVertical="12dp"
        app:columns="2"
        app:labelBackground="@drawable/selected_experience_bg"
        app:labelGravity="center"
        app:labelTextColor="@drawable/select_text_red_black_color"
        app:labelTextPaddingBottom="7dp"
        app:labelTextPaddingLeft="8dp"
        app:labelTextPaddingRight="8dp"
        app:labelTextPaddingTop="7dp"
        app:labelTextSize="12sp"
        app:labelTextWidth="135dp"
        app:layout_constraintTop_toTopOf="parent"
        app:lineMargin="12dp"
        app:selectType="SINGLE"
        app:wordMargin="12dp"/>
</LinearLayout>
