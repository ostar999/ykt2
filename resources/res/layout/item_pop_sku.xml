<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_4">
    <LinearLayout
        android:id="@+id/ll_sku"
        android:background="@drawable/bg_pop_sku_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8">
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@drawable/text_color_course_sku"
            android:gravity="start|center_vertical"
            android:id="@+id/tv_sku_name"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_8"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/dp_12"
            android:paddingVertical="@dimen/dp_8"
            android:lineHeight="@dimen/dp_20"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_exp"
            android:visibility="gone"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:src="?attr/icon_bottom_arrow_new"
            android:layout_marginHorizontal="@dimen/dp_12"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_9"
        android:textColor="?attr/white_deep_color"
        android:gravity="center"
        android:layout_gravity="end"
        android:id="@+id/tv_label"
        android:background="@drawable/bg_sku_taag"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15"
        android:paddingHorizontal="@dimen/dp_5"/>
</FrameLayout>
