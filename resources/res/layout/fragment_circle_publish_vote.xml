<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/color_white"
            android:padding="@dimen/content_item_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_item_padding">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_vote_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/content_text_size"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:id="@+id/tv_classify"
                    android:visibility="gone"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/classify_label"
                    android:singleLine="true"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_arraw_classify"
                    android:visibility="gone"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="@dimen/content_item_padding_small"
                    android:src="@drawable/ic_arrow_down"/>
                <EditText
                    android:textSize="@dimen/content_text_size"
                    android:id="@+id/et_vote_title"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_item_padding_small"
                    android:hint="@string/enter_title_hint"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/shape_edit_cursor"/>
            </LinearLayout>
            <View
                android:id="@+id/view_divider"
                android:background="@color/color_divider"
                android:paddingLeft="@dimen/content_item_padding"
                android:paddingRight="@dimen/content_item_padding"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_marginTop="@dimen/content_item_padding"
                android:layout_below="@+id/ll_vote_title"/>
            <EditText
                android:textSize="@dimen/content_text_size"
                android:gravity="top|left"
                android:id="@+id/et_vote_content"
                android:background="@color/transparent"
                android:paddingLeft="8dp"
                android:paddingTop="15dp"
                android:paddingRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_content_hint"
                android:maxLines="6"
                android:lines="6"
                android:layout_below="@+id/view_divider"
                android:textCursorDrawable="@drawable/shape_edit_cursor"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_vote_items"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/content_item_padding">
            <include layout="@layout/view_divider"/>
            <com.psychiatrygarden.widget.CircleImageView
                android:id="@+id/cviv_item_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/tv_add_vote_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/circle_vote_item_height">
                <ImageView
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/bg_btn_plus"/>
                <TextView
                    android:textSize="@dimen/content_text_size"
                    android:textColor="@color/color_title_bg_light"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/circle_vote_item_height"
                    android:layout_marginLeft="@dimen/content_item_padding"
                    android:text="@string/add_vote_item_label"/>
            </LinearLayout>
            <include
                android:id="@+id/view_divider_vote_item_bottom"
                layout="@layout/view_divider"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
