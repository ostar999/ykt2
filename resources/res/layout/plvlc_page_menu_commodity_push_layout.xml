<?xml version="1.0" encoding="utf-8"?>
<com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="114dp"
    android:paddingStart="12dp"
    android:paddingEnd="0dp"
    app:radius="4dp">
    <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectLayout
        android:id="@+id/plvlc_commodity_cover_ly"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="4dp">
        <ImageView
            android:id="@+id/plvlc_commodity_cover_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/plvlc_commodity_cover_number_tv"
            android:background="#59000000"
            android:layout_width="27dp"
            android:layout_height="16dp"/>
    </com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/plvlc_commodity_name_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plvlc_commodity_cover_ly"
        app:layout_constraintTop_toTopOf="parent">
        <com.easefun.polyv.livecommon.ui.widget.PLVRoundRectGradientTextView
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:id="@+id/plvlc_commodity_name_number_tv"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="10dp"
            app:plvGradientColors="#59000000"
            app:plvRadius="6dp"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/plvlc_commodity_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/plvlc_commodity_feature_tag_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plvlc_commodity_cover_ly"
        app:layout_constraintTop_toBottomOf="@+id/plvlc_commodity_name_ll"/>
    <TextView
        android:textSize="12sp"
        android:textColor="#99333333"
        android:ellipsize="end"
        android:id="@+id/plvlc_commodity_product_desc_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plvlc_commodity_cover_ly"
        app:layout_constraintTop_toBottomOf="@+id/plvlc_commodity_feature_tag_ll"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/plvlc_commodity_enter_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plvlc_commodity_cover_ly"
        app:layout_constraintTop_toTopOf="@+id/plvlc_commodity_enter_iv">
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ff473a"
            android:gravity="center_vertical"
            android:id="@+id/plvlc_commodity_real_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="26dp"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#adadc0"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/plvlc_commodity_src_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/plvlc_commodity_dialog_close_iv"
        android:padding="8dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/plvlc_commodity_push_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/plvlc_commodity_enter_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/plvlc_commodity_enter"
        android:layout_marginEnd="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectConstraintLayout>
