<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/alivc_common_theme_primary_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/alivc_common_theme_primary_light"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alivc_player_download_dialog_height">
        <RelativeLayout
            android:paddingTop="@dimen/alivc_common_padding_12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/alivc_common_margin_15"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_video_cover"
                android:paddingLeft="@dimen/alivc_common_padding_4"
                android:paddingTop="@dimen/alivc_common_padding_16"
                android:paddingRight="@dimen/alivc_common_padding_4"
                android:paddingBottom="16dp"
                android:layout_width="127dp"
                android:layout_height="98dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:textSize="@dimen/alivc_common_font_16"
                android:textColor="@android:color/white"
                android:id="@+id/tv_add_download_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/alivc_common_margin_15"
                android:layout_marginTop="@dimen/alivc_common_margin_38"
                android:maxWidth="125dp"
                android:singleLine="true"
                android:layout_toRightOf="@+id/iv_video_cover"/>
            <TextView
                android:textSize="@dimen/alivc_common_font_12"
                android:textColor="@android:color/white"
                android:id="@+id/tv_add_download_view_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/alivc_common_margin_15"
                android:layout_marginTop="@dimen/alivc_common_margin_6"
                android:layout_toRightOf="@+id/iv_video_cover"
                android:layout_below="@+id/tv_add_download_view_title"/>
            <ImageView
                android:id="@+id/iv_download_dialog_close"
                android:padding="@dimen/alivc_common_padding_12"
                android:layout_width="@dimen/alivc_common_size_icon_42"
                android:layout_height="@dimen/alivc_common_size_icon_42"
                android:layout_marginRight="@dimen/alivc_common_margin_16"
                android:src="@drawable/alivc_download_dialog_close"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/alivc_common_font_14"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alivc_common_margin_15"
            android:layout_marginTop="@dimen/alivc_common_margin_38"
            android:text="@string/choose_download_sharpness"/>
        <RadioGroup
            android:orientation="horizontal"
            android:id="@+id/rg_quality_list"
            android:paddingLeft="@dimen/alivc_common_padding_15"
            android:paddingRight="@dimen/alivc_common_padding_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"/>
        <Button
            android:layout_gravity="bottom"
            android:id="@+id/download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/alivc_common_margin_34"
            android:text="@string/add_to_download"
            style="@style/btn_style"/>
    </LinearLayout>
</ScrollView>
