<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.psychiatrygarden.widget.CustomEmptyView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_title"
            android:background="?attr/new_bg_one_color"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:paddingHorizontal="@dimen/dp_16">
            <ImageView
                android:id="@+id/iv_switch"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/index_change_img_personal"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_back"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/ic_black_back"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:gravity="center"
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商城"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/iv_search_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/all_course_search_icon"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/app_title_color"
                android:gravity="center"
                android:id="@+id/customimg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:drawableRight="?attr/customimg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"/>
        </RelativeLayout>
        <cn.webdemo.com.supporfragment.tablayout.MagicIndicator
            android:id="@+id/shopindicator"
            android:background="?attr/new_bg_one_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/shopviewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_network_load_fail"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/network_load_fail"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/load_anim"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/load_anim"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
