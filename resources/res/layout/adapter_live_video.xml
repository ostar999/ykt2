<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/question_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl"
        android:background="?attr/bg_backgroud"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.psychiatrygarden.widget.CircleImageView
            android:id="@+id/iv_live_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <RelativeLayout
            android:id="@+id/rl_apply_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/iv_warn_state"
            android:layout_toRightOf="@+id/iv_live_img"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/question_color"
                android:id="@+id/tv_live_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:maxLines="2"/>
            <RelativeLayout
                android:id="@+id/relitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tv_live_title">
                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:id="@+id/llay_time"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="10dp"
                        android:gravity="center"
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="距开始仅剩"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/tv_day"
                        android:background="@drawable/estimebackgroup"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="8dp"
                        android:text="?"/>
                    <TextView
                        android:textSize="10sp"
                        android:padding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/tv_hour"
                        android:background="@drawable/estimebackgroup2"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:text="?"/>
                    <TextView
                        android:textSize="10sp"
                        android:padding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/tv_minute"
                        android:background="@drawable/estimebackgroup3"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:text="?"/>
                </LinearLayout>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/item_school_color"
                    android:id="@+id/tv_live_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1111"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/llay_apply_num"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/gray_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报名人数"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:id="@+id/tv_apply_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/item_school_color"
                android:gravity="bottom"
                android:id="@+id/tv_live_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="11111"
                android:singleLine="true"
                android:layout_toRightOf="@+id/relitem"
                android:layout_below="@+id/tv_live_title"
                android:layout_alignBottom="@+id/relitem"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_warn_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/video_zbz"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:background="?attr/divider_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:text=""/>
</LinearLayout>
