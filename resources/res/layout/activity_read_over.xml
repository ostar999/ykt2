<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_end_page"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_65"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_463">
                <ImageView
                    android:id="@+id/iv_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_read_over"
                    android:scaleType="fitXY"
                    android:importantForAccessibility="no"/>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_44">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/img_back"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_black_back"
                            android:importantForAccessibility="no"
                            android:layout_marginStart="16dp"/>
                    </FrameLayout>
                    <TextView
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_303030"
                        android:id="@+id/tv_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="全书完"/>
                    <ImageView
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_4"
                        android:layout_marginTop="@dimen/dp_4"
                        android:src="@drawable/icon_read_over_line"
                        android:importantForAccessibility="no"/>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="@color/color_303030"
                        android:id="@+id/tv_next_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="本书已看完，下一本书也精彩"/>
                    <ImageView
                        android:id="@+id/iv_book"
                        android:layout_width="168dp"
                        android:layout_height="@dimen/dp_120"
                        android:layout_marginTop="@dimen/dp_24"
                        android:src="@drawable/icon_read_over_book"
                        android:importantForAccessibility="no"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="@dimen/dp_32"
                        android:layout_marginRight="16dp"
                        android:baselineAligned="false"
                        android:layout_marginHorizontal="16dp">
                        <com.ruffian.library.widget.RLinearLayout
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:id="@+id/ll_read_time"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/dp_98"
                            android:layout_weight="2"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:paddingHorizontal="@dimen/dp_12"
                            app:background_normal="@color/color_FFF5F7"
                            app:border_color_normal="@color/color_FFE7E7"
                            app:border_width_normal="0.5dp"
                            app:corner_radius="@dimen/dp_12">
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/color_303030"
                                android:id="@+id/tv_read_time_str"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="累计阅读时长"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_6"
                                android:layout_marginBottom="@dimen/dp_6"
                                android:layout_marginVertical="@dimen/dp_6">
                                <TextView
                                    android:textSize="@dimen/sp_22"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_dd594a"
                                    android:id="@+id/tv_hour"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:textSize="12sp"
                                    android:textColor="@color/color_dd594a"
                                    android:id="@+id/tv_hour_str"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="小时"/>
                                <TextView
                                    android:textSize="@dimen/sp_22"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_dd594a"
                                    android:id="@+id/tv_minute"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:textSize="12sp"
                                    android:textColor="@color/color_dd594a"
                                    android:id="@+id/tv_minute_str"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="分钟"/>
                            </LinearLayout>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/color_909090"
                                android:id="@+id/tv_read_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </com.ruffian.library.widget.RLinearLayout>
                        <com.ruffian.library.widget.RLinearLayout
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:id="@+id/ll_read_day"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/dp_98"
                            android:layout_weight="1.5"
                            android:paddingHorizontal="@dimen/dp_12"
                            app:background_normal="@color/color_FFF9EB"
                            app:border_color_normal="@color/color_FFF1CD"
                            app:border_width_normal="0.5dp"
                            app:corner_radius="@dimen/dp_12">
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/color_303030"
                                android:id="@+id/tv_read_time_str_day"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="累计阅读天数"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_6"
                                android:layout_marginBottom="@dimen/dp_6"
                                android:layout_marginVertical="@dimen/dp_6">
                                <TextView
                                    android:textSize="@dimen/sp_22"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_dd594a"
                                    android:id="@+id/tv_days"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:textSize="12sp"
                                    android:textColor="@color/color_dd594a"
                                    android:id="@+id/tv_day_str"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="天"/>
                            </LinearLayout>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/color_909090"
                                android:ellipsize="end"
                                android:id="@+id/tv_row_days"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"/>
                        </com.ruffian.library.widget.RLinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_pj"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingTop="@dimen/dp_24"
                    android:paddingRight="16dp"
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingHorizontal="16dp">
                    <LinearLayout
                        android:gravity="start"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="@dimen/sp_34"
                                android:textStyle="bold"
                                android:textColor="@color/color_303030"
                                android:id="@+id/tv_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/color_303030"
                                android:id="@+id/tv_score_str"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分"/>
                        </LinearLayout>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="@color/color_909090"
                            android:id="@+id/tv_comment_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/score_line"
                        android:background="@color/color_eeeeee"
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="36dp"
                        android:layout_marginHorizontal="36dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="11sp"
                                android:textColor="@color/color_909090"
                                android:id="@+id/high_comment_progress_str"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="高评价"/>
                            <com.ykb.ebook.weight.RoundCornerProgressBar
                                android:id="@+id/high_comment_progress"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_6"
                                android:layout_marginStart="@dimen/dp_8"
                                app:background_color="@color/color_f7f8fa"
                                app:progress_color="@color/color_dd594a"
                                app:progress_corner_radius="@dimen/dp_3"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:layout_marginVertical="@dimen/dp_8">
                            <TextView
                                android:textSize="11sp"
                                android:textColor="@color/color_909090"
                                android:id="@+id/middle_comment_progress_str"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="中评价"/>
                            <com.ykb.ebook.weight.RoundCornerProgressBar
                                android:id="@+id/middle_comment_progress"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_6"
                                android:layout_marginStart="@dimen/dp_8"
                                app:background_color="@color/color_f7f8fa"
                                app:progress_color="@color/color_dd594a"
                                app:progress_corner_radius="@dimen/dp_3"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="11sp"
                                android:textColor="@color/color_909090"
                                android:id="@+id/low_comment_progress_str"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="低评价"/>
                            <com.ykb.ebook.weight.RoundCornerProgressBar
                                android:id="@+id/low_comment_progress"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_6"
                                android:layout_marginStart="@dimen/dp_8"
                                app:background_color="@color/color_f7f8fa"
                                app:progress_color="@color/color_dd594a"
                                app:progress_corner_radius="@dimen/dp_3"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp">
                    <View
                        android:id="@+id/line_left"
                        android:background="@color/color_eeeeee"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="@color/color_606060"
                        android:id="@+id/tv_comment_str"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="我要点评此书"
                        android:layout_marginHorizontal="16dp"/>
                    <View
                        android:id="@+id/line_right"
                        android:background="@color/color_eeeeee"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <RadioGroup
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp">
                    <com.ruffian.library.widget.RTextView
                        android:textSize="14sp"
                        android:gravity="center"
                        android:id="@+id/rb_high"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:button="@null"
                        android:text="高评价"
                        android:drawablePadding="@dimen/dp_4"
                        android:layout_weight="1"
                        app:background_normal="@color/color_f7f8fa"
                        app:background_selected="@color/color_15dd594a"
                        app:corner_radius="100dp"
                        app:icon_height="20dp"
                        app:icon_src_normal="@drawable/icon_good_review"
                        app:icon_width="20dp"
                        app:icon_with_text="true"
                        app:text_color_normal="@color/color_303030"
                        app:text_color_selected="@color/color_dd594a"/>
                    <com.ruffian.library.widget.RTextView
                        android:textSize="14sp"
                        android:gravity="center"
                        android:id="@+id/rb_middle"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:button="@null"
                        android:text="中评价"
                        android:drawablePadding="@dimen/dp_4"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/dp_8"
                        app:background_normal="@color/color_f7f8fa"
                        app:background_selected="@color/color_15dd594a"
                        app:corner_radius="100dp"
                        app:icon_height="20dp"
                        app:icon_src_normal="@drawable/icon_middle_review"
                        app:icon_width="20dp"
                        app:icon_with_text="true"
                        app:text_color_normal="@color/color_303030"
                        app:text_color_selected="@color/color_dd594a"/>
                    <com.ruffian.library.widget.RTextView
                        android:textSize="14sp"
                        android:gravity="center"
                        android:id="@+id/rb_low"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:button="@null"
                        android:text="低评价"
                        android:drawablePadding="@dimen/dp_4"
                        android:layout_weight="1"
                        app:background_normal="@color/color_f7f8fa"
                        app:background_selected="@color/color_15dd594a"
                        app:corner_radius="100dp"
                        app:icon_height="20dp"
                        app:icon_src_normal="@drawable/icon_low_review"
                        app:icon_width="20dp"
                        app:icon_with_text="true"
                        app:text_color_normal="@color/color_303030"
                        app:text_color_selected="@color/color_dd594a"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:layout_gravity="bottom"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_15"
        android:paddingHorizontal="16dp">
        <com.ruffian.library.widget.RTextView
            android:textSize="14sp"
            android:gravity="center"
            android:id="@+id/tv_exit_read"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="退出阅读"
            app:background_normal="@color/color_dd594a"
            app:corner_radius="20dp"
            app:text_color_normal="@color/white"/>
    </FrameLayout>
</FrameLayout>
