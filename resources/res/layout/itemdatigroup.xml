<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingRight="15dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:id="@+id/mycollect_groups_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/course_img"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/course_img"
            android:layout_below="@+id/mycollect_groups_tv_name">
            <TextView
                android:textSize="13sp"
                android:textColor="?attr/item_school_color"
                android:id="@+id/mycollect_groups_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <RelativeLayout
                android:id="@+id/tanhao"
                android:visibility="gone"
                android:layout_width="35dp"
                android:layout_height="wrap_content">
                <com.psychiatrygarden.widget.SkinGrakImagView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/tanhao"/>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/course_img"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:src="?attr/icon_indicator_bottomix"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
