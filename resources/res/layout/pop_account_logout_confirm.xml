<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@mipmap/logout_success_icon"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#ff303030"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="注销成功"/>
    <TextView
        android:textSize="14sp"
        android:textColor="#ff606060"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="1、您的所有已登录该帐号的设备将自动登出\102、您的帐号产生的所有数据(包括但不限于个人信息、关注、评论、消费、下载记录、播放记录等)将自动删除 \103、即使您再次使用同样的手机号注册登录，依然无法找回原有数据，新注册的帐号将作为全新帐号使用 \104、15天内此手机号不能再次注册"
        android:lineSpacingExtra="5dp"/>
    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_logout"
        android:background="@drawable/shape_round_red"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:text="下次再见"/>
</LinearLayout>
