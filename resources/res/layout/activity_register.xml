<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.psychiatrygarden.widget.ClearEditText
        android:textSize="14sp"
        android:textColor="?attr/first_text_color"
        android:textColorHint="?attr/dialog_input_hint_color"
        android:id="@+id/et_phone"
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="@string/input_phone"
        android:singleLine="true"
        android:maxLength="11"
        android:drawableLeft="?attr/register_phone_icon"
        android:drawablePadding="10dp"
        android:inputType="numberSigned"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>
    <View
        android:background="?attr/fourth_line_backgroup_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"/>
    <RelativeLayout
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <com.psychiatrygarden.widget.ClearEditText
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:textColorHint="?attr/dialog_input_hint_color"
            android:id="@+id/et_auth_code"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="@string/auth_code"
            android:singleLine="true"
            android:drawableLeft="?attr/register_auth_code_icon"
            android:drawablePadding="10dp"
            android:inputType="numberSigned"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_toStartOf="@+id/bt_auth_code"/>
        <com.psychiatrygarden.widget.AlphaButton
            android:textSize="12sp"
            android:textColor="?attr/float_bg"
            android:id="@+id/bt_auth_code"
            android:background="@color/transparent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/get_auth_code"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:background="?attr/fourth_line_backgroup_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"/>
    <RelativeLayout
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.psychiatrygarden.widget.ClearEditText
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:textColorHint="?attr/dialog_input_hint_color"
            android:id="@+id/et_input_pwd"
            android:background="?attr/bg_backgroud"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="@string/input_pwd"
            android:singleLine="true"
            android:drawableLeft="?attr/register_input_pwd_icon"
            android:drawablePadding="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_toStartOf="@+id/iv_look_pwd"/>
        <ImageView
            android:id="@+id/iv_look_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/ic_eyes_open"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:background="?attr/fourth_line_backgroup_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"/>
    <View
        android:background="?attr/gray_line_126"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
    <com.psychiatrygarden.widget.ClearEditText
        android:textSize="14sp"
        android:textColor="?attr/first_text_color"
        android:textColorHint="?attr/dialog_input_hint_color"
        android:id="@+id/et_register_code"
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="请输入邀请码（非必填）"
        android:singleLine="true"
        android:drawableLeft="?attr/register_yaoqing_icon"
        android:drawablePadding="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>
    <View
        android:background="?attr/fourth_line_backgroup_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"/>
    <RelativeLayout
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <com.psychiatrygarden.widget.AlphaButton
            android:textSize="14sp"
            android:textColor="?attr/white_color02"
            android:id="@+id/bt_next"
            android:background="?attr/red_round_coner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/next"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <TextView
                android:textSize="10sp"
                android:textColor="@color/gray_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击注册按钮，即表示你同意"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/app_theme_red"
                android:id="@+id/tv_yijiaoyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
