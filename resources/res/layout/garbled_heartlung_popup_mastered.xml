<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_26"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_460"
    android:paddingHorizontal="@dimen/dp_16"
    app:bl_corners_topLeftRadius="@dimen/dp_12"
    app:bl_corners_topRightRadius="@dimen/dp_12"
    app:bl_solid_color="@color/color_white">
    <com.noober.background.view.BLView
        android:id="@+id/topV"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_10"
        app:bl_corners_radius="@dimen/dp_3"
        app:bl_solid_color="@color/c_f0f1f6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.catchpig.mvvm.widget.DotView
        android:id="@+id/dotBlue"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_40"
        app:dotColor="@color/c_3776ff"
        app:dotRadiusw="@dimen/dp_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/c_50536b"
        android:id="@+id/masteredTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heartlung_mastered"
        android:paddingStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/dotBlue"
        app:layout_constraintStart_toEndOf="@+id/dotBlue"
        app:layout_constraintTop_toTopOf="@+id/dotBlue"/>
    <com.catchpig.mvvm.widget.DotView
        android:id="@+id/dotGray"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_20"
        app:dotColor="@color/c_e7e9f2"
        app:dotRadiusw="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@+id/masteredTv"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/c_50536b"
        android:id="@+id/masteredNoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heartlung_mastered_not"
        android:paddingStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/dotBlue"
        app:layout_constraintStart_toEndOf="@+id/dotGray"
        app:layout_constraintTop_toTopOf="@+id/dotBlue"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dotBlue"/>
</androidx.constraintlayout.widget.ConstraintLayout>
