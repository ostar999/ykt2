<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dp_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.noober.background.view.BLLinearLayout
        android:orientation="horizontal"
        android:id="@+id/topTypeLl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        app:bl_corners_radius="@dimen/dp_4"
        app:bl_gradient_angle="0"
        app:bl_gradient_endColor="@color/c_b8eddc"
        app:bl_gradient_startColor="@color/color_white">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:id="@+id/oneTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/exam_top0"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_black"
            android:ellipsize="marquee"
            android:gravity="center"
            android:id="@+id/twoTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_weight="2"
            android:marqueeRepeatLimit="marquee_forever"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:id="@+id/threeTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/exam_top2"
            android:layout_weight="2"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:id="@+id/fourTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/exam_top3"
            android:layout_weight="1"/>
    </com.noober.background.view.BLLinearLayout>
</FrameLayout>
