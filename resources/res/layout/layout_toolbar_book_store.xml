<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/titlebar_layout"
    android:layout_width="match_parent"
    android:layout_height="44dp">
    <ImageView
        android:id="@+id/iv_actionbar_back"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="?attr/ic_black_back"
        android:layout_centerVertical="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingVertical="5dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="?attr/line_all_round_write"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="?attr/home_search_img"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_alignParentStart="true"/>
        <com.psychiatrygarden.widget.ClearEditText
            android:textSize="14sp"
            android:textColor="?attr/first_txt_color"
            android:textColorHint="?attr/forth_txt_color"
            android:id="@+id/et_search"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:hint="输入关键词搜索图书"
            android:singleLine="true"
            android:drawablePadding="5dp"
            android:imeOptions="actionSearch"
            android:textCursorDrawable="@drawable/color_cursor"
            android:paddingStart="9dp"
            android:paddingEnd="16dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/first_txt_color"
            android:textColorHint="?attr/forth_txt_color"
            android:gravity="center_vertical"
            android:id="@+id/tv_search_area"
            android:background="@null"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:hint="输入关键词搜索图书"
            android:drawablePadding="5dp"
            android:paddingStart="9dp"/>
    </LinearLayout>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/search_text_color"
        android:layout_gravity="center"
        android:id="@+id/tv_search"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_label"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_book_shelf"
        android:layout_width="23dp"
        android:layout_height="20dp"
        android:src="?attr/ic_book_shelf"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"/>
</LinearLayout>
