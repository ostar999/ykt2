<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/ll_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/homepage_bottom_tab_color"
            android:gravity="center"
            android:id="@+id/tv_menu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/imgcat"
        android:background="@drawable/red_round"
        android:visibility="invisible"
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"/>
    <ImageView
        android:id="@+id/iv_message_new"
        android:background="@drawable/red_round"
        android:visibility="gone"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgcat"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/tv_chat_message"
        android:visibility="gone"
        android:text=""
        android:maxLines="1"
        android:includeFontPadding="false"
        android:contentDescription="@null"
        android:layout_alignStart="@+id/imgcat"
        style="@style/personal_top_unred_num_txt_style"/>
</RelativeLayout>
