<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/appBarLayout"
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="exitUntilCollapsed|scroll">
            <com.psychiatrygarden.widget.glideUtil.GlideImageView
                android:id="@+id/headerimg"
                android:background="#80808000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5"/>
            <View
                android:background="?attr/app_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="pin">
                    <com.psychiatrygarden.widget.glideUtil.GlideImageView
                        android:id="@+id/icon_left_back"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_left_back"
                        android:scaleType="centerInside"
                        android:tint="?attr/first_txt_color"/>
                    <TextView
                        android:textSize="18sp"
                        android:textColor="?attr/first_txt_color"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/tv_title"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐题单"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_toLeftOf="@+id/layoutIcon"
                        android:layout_toRightOf="@+id/icon_left_back"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:paddingStart="@dimen/dp_16"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:id="@+id/layoutIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">
                        <com.psychiatrygarden.widget.glideUtil.GlideImageView
                            android:id="@+id/chongzuoimg"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/chonzuoimg"
                            android:tint="?attr/first_txt_color"/>
                        <com.psychiatrygarden.widget.glideUtil.GlideImageView
                            android:id="@+id/qiehuan"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/qiehuan"
                            android:tint="?attr/first_txt_color"/>
                        <com.psychiatrygarden.widget.glideUtil.GlideImageView
                            android:id="@+id/shoucang"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/shoucang"
                            android:tint="?attr/first_txt_color"/>
                        <RelativeLayout
                            android:id="@+id/pinglunrel"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <com.psychiatrygarden.widget.glideUtil.GlideImageView
                                android:id="@+id/pinglunimg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:src="@drawable/pinglunimg"
                                android:tint="?attr/first_txt_color"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="?attr/first_txt_color"
                                android:gravity="center"
                                android:id="@+id/unreadnum"
                                android:paddingTop="1dp"
                                android:paddingBottom="2dp"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="91666"
                                android:layout_toRightOf="@+id/pinglunimg"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
            <RelativeLayout
                android:id="@+id/reldddd"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/headermin"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="10dp"/>
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:ellipsize="end"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:maxLines="2"
                    android:layout_toRightOf="@+id/headermin"
                    android:layout_alignTop="@+id/headermin"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/third_txt_color"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:drawableRight="@drawable/icon_indicator_right"
                    android:drawablePadding="5dp"
                    android:layout_toRightOf="@+id/headermin"
                    android:layout_below="@+id/title"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/forth_txt_color"
                    android:id="@+id/timrs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/headermin"
                    android:layout_alignBottom="@+id/headermin"/>
                <View
                    android:id="@+id/gap"
                    android:background="?attr/new_gray_line_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_below="@+id/headermin"
                    android:layout_marginHorizontal="@dimen/dp_16"/>
                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/gap"
                    layout="@layout/include_header_new"/>
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/questionList_GridView"
        android:paddingBottom="@dimen/dp_58"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layoutLiveBottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        app:layout_anchor="@+id/questionList_GridView"
        app:layout_anchorGravity="bottom">
        <View
            android:background="?attr/new_gray_line_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/app_bg"
            android:gravity="center"
            android:id="@+id/tvLiveButton"
            android:background="@drawable/bg_download"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dp_16"
            android:text="直播中"
            android:layout_marginHorizontal="@dimen/dp_16"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
