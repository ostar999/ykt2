<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/view_dialog_root"
    android:background="@drawable/bg_unbind_wx_pop"
    android:visibility="visible"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <TextView
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:textColor="?attr/first_txt_color"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:text="温馨提示"
        android:paddingHorizontal="@dimen/dp_16"/>
    <TextView
        android:textColor="?attr/second_txt_color"
        android:gravity="center"
        android:id="@+id/tv_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_24"
        android:text="确定要交卷吗?"
        android:lineSpacingMultiplier="1.2"
        android:paddingHorizontal="@dimen/dp_16"/>
    <View
        android:background="?attr/new_bg_one_border_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <Button
            android:textSize="@dimen/sp_16"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:id="@+id/btn_negative_single"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:text="取消"
            android:layout_weight="1"/>
        <View
            android:background="?attr/new_gray_line_color"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <Button
            android:textSize="@dimen/sp_16"
            android:textColor="?attr/main_theme_color"
            android:gravity="center"
            android:id="@+id/btn_positive_single"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:text="@string/ok"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
