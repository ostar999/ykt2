<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_top_title"
                android:background="?attr/question_title_bg_color"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/question_title_color"
                    android:id="@+id/questiondetails_tv_title"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:singleLine="true"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/lineviewtype"
                    android:paddingBottom="8dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">
                    <TextView
                        android:id="@+id/verticaltv"
                        android:background="?attr/app_theme"
                        android:layout_width="3dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="1dp"/>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/question_color"
                        android:id="@+id/typeStr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单选题"
                        android:includeFontPadding="false"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/verticaltv"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="?attr/numdefault"
                            android:id="@+id/pagenumtv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="10/23"
                            android:includeFontPadding="false"/>
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#ffe25d49"
                    android:gravity="center"
                    android:id="@+id/tv_question_new"
                    android:background="@drawable/fffff470_2"
                    android:paddingLeft="8dp"
                    android:paddingTop="2dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="2dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新增"
                    android:layout_marginStart="20dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="?attr/question_color"
                        android:id="@+id/titletv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="1.2dp"
                        android:lineSpacingMultiplier="1.2"/>
                    <ImageView
                        android:id="@+id/img_audio"
                        android:visibility="gone"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/audio_play_anim"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ly_video_view"
                    android:visibility="gone"
                    android:layout_width="168dp"
                    android:layout_height="94dp"
                    android:layout_margin="16dp">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/img_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="8dp"/>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/video_play_normal"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <com.tencent.smtt.sdk.WebView
                    android:id="@+id/webview"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>
                <ImageView
                    android:id="@+id/imgtitle"
                    android:background="@color/transparent"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>
                <com.psychiatrygarden.widget.MaxRecyclerView
                    android:id="@+id/qlistview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/lineout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">
                    <RelativeLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">
                        <Button
                            android:textSize="13sp"
                            android:textColor="?attr/comment_color"
                            android:id="@+id/questiondetails_btn_commentNum"
                            android:background="?attr/question_comment_flag_icon_two"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="50dp"
                            android:minHeight="26dp"
                            android:text="？评论"
                            android:singleLine="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:paddingHorizontal="10dp"/>
                        <TextView
                            android:textSize="13sp"
                            android:textColor="?attr/question_color"
                            android:id="@+id/questiondetails_tv_Answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正确答案:"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/questiondetails_layout_diff"
                        android:paddingLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="20dp">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="?attr/question_color"
                            android:id="@+id/textView_difficulty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="难度："
                            android:lineSpacingExtra="1.2dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/ll_statistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="?attr/question_color"
                            android:id="@+id/tv_statistics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="统计："
                            android:lineSpacingExtra="1.2dp"/>
                        <TextView
                            android:textSize="13sp"
                            android:textColor="?attr/question_color"
                            android:id="@+id/questiondetails_tv_statistics"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="1.2dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/linbiaoqian"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="?attr/question_color"
                            android:gravity="center"
                            android:id="@+id/biaotxt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="标签：？"/>
                        <RelativeLayout
                            android:id="@+id/rl_column"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1">
                            <HorizontalScrollView
                                android:id="@+id/mColumnHorizontalScrollView"
                                android:scrollbars="none"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_toStartOf="@+id/ll_more_columns">
                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:id="@+id/mRadioGroup_content"
                                    android:paddingLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:paddingEnd="5dp"/>
                            </HorizontalScrollView>
                            <LinearLayout
                                android:gravity="center"
                                android:id="@+id/ll_more_columns"
                                android:layout_width="30dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true">
                                <ImageView
                                    android:id="@+id/button_more_columns"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="?attr/tikujia"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/question_color"
                        android:id="@+id/questiondetails_tv_outline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="大纲考点:"
                        android:lineSpacingExtra="1.2dp"
                        android:lineSpacingMultiplier="1.2"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"/>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/question_color"
                        android:id="@+id/sourcetv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="来源"
                        android:lineSpacingExtra="1.2dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"/>
                    <RelativeLayout
                        android:id="@+id/rl_question_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp">
                        <com.psychiatrygarden.widget.NestedScrollableHost
                            android:id="@+id/ntls"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.viewpager2.widget.ViewPager2
                                android:orientation="horizontal"
                                android:id="@+id/vp_video"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.psychiatrygarden.widget.NestedScrollableHost>
                        <com.psychiatrygarden.widget.CirclePoint
                            android:id="@+id/circlepoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_alignBottom="@+id/ntls"
                            app:appSix="false"
                            app:size="6dp"/>
                    </RelativeLayout>
                    <View
                        android:background="?attr/gray_line_126"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="20dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/questiondetails_layout_answer"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">
                            <com.psychiatrygarden.widget.english.EnglishTextView
                                android:id="@+id/tv_word"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingEnd="35dp"
                                app:ct_clickTextColor="@color/app_theme_red"
                                app:ct_clickable="true"
                                app:ct_customTextColor="?attr/question_color"
                                app:ct_customTextSize="28sp"
                                app:ct_drawDashLineAble="false"
                                app:ct_drawLineAble="false"
                                app:ct_lineSpacing="4dp"
                                app:ct_text=""/>
                            <ImageView
                                android:id="@+id/iv_play"
                                android:padding="5dp"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/icon_pop_word_play"
                                android:layout_alignTop="@+id/tv_word"
                                android:layout_alignEnd="@+id/tv_word"/>
                        </RelativeLayout>
                        <TextView
                            android:textSize="17sp"
                            android:textColor="#ff8c8c8c"
                            android:id="@+id/tv_phonetic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="[ ‘lu:krətɪv ]"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_phonetic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"/>
                        <View
                            android:id="@+id/line_split"
                            android:background="?attr/color_ececec"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="?attr/color_f9f9f9"
                            android:gravity="center"
                            android:id="@+id/tv_split"
                            android:background="@drawable/ff000000_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:minWidth="34dp"
                            android:minHeight="20dp"
                            android:text="拆分1"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_split"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>
                        <View
                            android:id="@+id/line_example_sentence"
                            android:background="?attr/color_ececec"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="?attr/color_f9f9f9"
                            android:gravity="center"
                            android:id="@+id/tv_example_sentence"
                            android:background="@drawable/ff000000_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:minWidth="34dp"
                            android:minHeight="20dp"
                            android:text="例句"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_example_sentence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ll_restore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:id="@+id/line_restore"
                                android:background="?attr/color_ececec"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="?attr/color_f9f9f9"
                                android:gravity="center"
                                android:id="@+id/tv_restore"
                                android:background="@drawable/ff000000_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:minWidth="34dp"
                                android:minHeight="20dp"
                                android:text="还原"/>
                            <TextView
                                android:textSize="17sp"
                                android:textColor="?attr/question_color"
                                android:textColorHighlight="#afe1f4"
                                android:id="@+id/questiondetails_tv_content_ques"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:lineSpacingMultiplier="1.2"
                                android:textIsSelectable="true"/>
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/img_original"
                                android:visibility="gone"
                                android:layout_width="88dp"
                                android:layout_height="88dp"
                                android:layout_marginTop="16dp"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/question_detail_last_edit_time"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/tv_edit_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"/>
                    <com.psychiatrygarden.widget.QuestionAdWidegt
                        android:orientation="vertical"
                        android:id="@+id/ll_ad"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginHorizontal="16dp"/>
                    <View
                        android:background="?attr/gray_line_126"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="24dp"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ll_view_comment"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:textSize="14sp"
                            android:textColor="?attr/first_text_color"
                            android:id="@+id/tv_view_comment"
                            android:background="@drawable/bg_view_comment"
                            android:paddingLeft="16dp"
                            android:paddingTop="6dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看评论"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="6dp"/>
                        <TextView
                            android:textSize="13sp"
                            android:textColor="?attr/tertiary_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:text="滑动页面加载评论~"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ll_no_comment"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="?attr/ic_no_comment"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="?attr/tertiary_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:text="暂无评论"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_gravity="end"
            android:id="@+id/iv_cut_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_cut_day"
            android:layout_marginEnd="53dp"/>
    </FrameLayout>
</ScrollView>
