<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_16">
    <com.psychiatrygarden.widget.CircleImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:src="@mipmap/ic_order_default"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/view_empty"
        android:layout_width="@dimen/dp_2"
        android:layout_height="@dimen/dp_2"
        android:layout_centerInParent="true"/>
    <TextView
        android:textSize="@dimen/sp_8"
        android:textStyle="bold"
        android:textColor="?attr/first_txt_color"
        android:id="@+id/tv_tag"
        android:background="@drawable/shape_choose_school_tag_bg"
        android:paddingLeft="@dimen/dp_3"
        android:paddingTop="@dimen/dp_1"
        android:paddingRight="@dimen/dp_3"
        android:paddingBottom="@dimen/dp_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginStart="@dimen/dp_4"
        android:layout_toEndOf="@+id/view_empty"
        android:paddingHorizontal="@dimen/dp_3"
        android:paddingVertical="@dimen/dp_1"/>
    <TextView
        android:textSize="@dimen/sp_11"
        android:textColor="?attr/first_txt_color"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:text="招生简章"
        android:layout_below="@+id/img_icon"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
