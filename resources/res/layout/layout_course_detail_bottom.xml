<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:paddingRight="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_58">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_customer"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ll_anchor"
        android:layout_alignBottom="@+id/ll_anchor">
        <ImageView
            android:id="@+id/iv_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/icon_course_detail_customer_service"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textColor="?attr/first_txt_color"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_anchor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginBottom="@dimen/dp_9"
        android:layout_toRightOf="@+id/ll_customer"
        android:layout_marginVertical="@dimen/dp_9">
        <LinearLayout
            android:id="@+id/ll_sold_out"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:enabled="false"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_download_enable"
                android:gravity="center"
                android:id="@+id/tv_sold_out"
                android:background="@drawable/bg_download"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="已售罄"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_goods"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:enabled="false"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_download_enable"
                android:gravity="center"
                android:id="@+id/tv_goods"
                android:background="@drawable/bg_download"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="已售罄"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_stop_sale"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:enabled="false"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_download_enable"
                android:gravity="center"
                android:id="@+id/tv_stop_sale"
                android:background="@drawable/bg_download"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="停售"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_not_sale_alone"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:enabled="false"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_download_enable"
                android:gravity="center"
                android:id="@+id/tv_not_sale_alone"
                android:background="@drawable/bg_download"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="非单独售卖"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_unlock_course"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_download_enable"
                android:gravity="center"
                android:id="@+id/tv_unlock_course"
                android:background="@drawable/bg_download"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="解锁此课程"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_buy_now"
            android:background="@drawable/bg_download"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="?attr/white_deep_color"
                android:gravity="center"
                android:id="@+id/tv_buy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="立即购买"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_take_now"
            android:background="@drawable/bg_download"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="?attr/white_deep_color"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="立即领取"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_start_study"
            android:background="@drawable/bg_download"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="?attr/white_deep_color"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="开始上课"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_buy_vip_study"
            android:background="@drawable/bg_action_2"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="#fff2d9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开通会员"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="#fff2d9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免费学"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_join_activity_study"
            android:background="@drawable/bg_action_3"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="#fff2d9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参与活动"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="#fff2d9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免费学"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
