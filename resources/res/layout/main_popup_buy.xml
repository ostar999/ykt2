<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popCl"
        android:background="@drawable/home_code_popbg"
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/codeCl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_26"
                android:src="@drawable/home_code_txt3"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_20"
                android:textColor="@color/c_575757"
                android:gravity="center"
                android:id="@+id/detailTv"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_60"
                android:paddingRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_575757"
                android:id="@+id/integralTv"
                android:paddingBottom="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/errorCl"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_86"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_26"
                android:src="@drawable/home_code_txt4"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c_575757"
                android:id="@+id/tipTv"
                android:paddingTop="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_integral_share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:gravity="center"
                android:id="@+id/shareTv"
                android:background="@drawable/me_code_btn"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_38"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@string/common_share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/succesCl"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_86"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_26"
                android:src="@drawable/home_code_txt2"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_black"
                android:id="@+id/tipSuccessTv"
                android:paddingTop="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_code_tip2"
                app:layout_constraintBottom_toTopOf="@+id/goTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:gravity="center"
                android:id="@+id/goTv"
                android:background="@drawable/me_code_btn"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_38"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@string/me_start"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/closeImgv"
        android:visibility="visible"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:src="@drawable/common_x5"
        android:paddingStart="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="@+id/popCl"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/codeBtnCl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popCl">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:id="@+id/buyBtnTv"
            android:background="@drawable/me_code_btn1"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/home_buy1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:id="@+id/shareBtnTv"
            android:background="@drawable/me_code_btn"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/home_buy2"
            android:layout_marginStart="@dimen/dp_80"
            app:layout_constraintStart_toEndOf="@+id/buyBtnTv"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
