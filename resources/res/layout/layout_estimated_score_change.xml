<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_bg"
        android:background="@drawable/ic_estimated_score_change_top_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_collapseMode="parallax"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:orientation="vertical"
            android:id="@+id/appbarlayout"
            android:background="@color/transparent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">
                <RelativeLayout
                    android:orientation="vertical"
                    android:id="@+id/rellogview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_44">
                    <com.psychiatrygarden.widget.WeekReportProgressView
                        android:id="@+id/progress_view"
                        android:background="@color/transparent"
                        android:layout_width="@dimen/dp_320"
                        android:layout_height="@dimen/dp_160"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_centerHorizontal="true"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_68"
                        android:layout_alignBottom="@+id/progress_view"
                        android:layout_centerHorizontal="true">
                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预估分"/>
                        <TextView
                            android:textSize="@dimen/sp_32"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/tv_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-8dp"
                            android:text="0"/>
                        <LinearLayout
                            android:gravity="center"
                            android:id="@+id/ly_trend"
                            android:background="@drawable/shape_btn_light_red_radius_8"
                            android:layout_width="@dimen/dp_64"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginTop="-5dp">
                            <ImageView
                                android:id="@+id/img_trend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_trend_up"/>
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                android:textColor="@color/main_theme_color"
                                android:id="@+id/tv_trend_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ly_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:layout_alignBottom="@+id/progress_view"
                        android:layout_centerHorizontal="true">
                        <ImageView
                            android:layout_width="@dimen/dp_14"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_score_desc_triangle"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/new_bg_one_color"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/tv_desc"
                            android:background="@drawable/shape_white_10_trans_round10"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingTop="@dimen/dp_8"
                            android:paddingRight="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_8"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:paddingHorizontal="@dimen/dp_12"
                            android:paddingVertical="@dimen/dp_8"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/new_bg_one_color"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_update_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_32"
                        android:text="更新时间：05-21 14:00"
                        android:layout_below="@+id/ly_desc"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toobars1"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">
                    <RelativeLayout
                        android:id="@+id/toolbars"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_actionbar_back"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_left_back"/>
                        <TextView
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:textColor="@color/new_bg_one_color"
                            android:ellipsize="end"
                            android:id="@+id/nav_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="变化趋势"
                            android:lines="1"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"/>
                        <ImageView
                            android:gravity="center"
                            android:id="@+id/btn_statistics"
                            android:padding="@dimen/dp_10"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/ic_white_statistics"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/dp_6"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/shape_white_top_16_no_night"
                android:paddingTop="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_8">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_new_bg_two_color_no_night_corners"
                        android:padding="@dimen/dp_2"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dp_8">
                        <TextView
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/third_txt_color"
                            android:gravity="center"
                            android:id="@+id/btn_week"
                            android:background="@drawable/shape_new_bg_one_color_no_night_corners"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_28"
                            android:text="周趋势"
                            android:paddingHorizontal="@dimen/dp_16"/>
                        <TextView
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/third_txt_color"
                            android:gravity="center"
                            android:id="@+id/btn_month"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_28"
                            android:text="月趋势"
                            android:paddingHorizontal="@dimen/dp_16"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/dp_16">
                <RelativeLayout
                    android:id="@+id/ly_webview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <WebView
                        android:id="@+id/webview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:id="@+id/view_web"
                        android:background="@color/app_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.psychiatrygarden.widget.ProgressWheel
                            android:id="@+id/progress_wheel_download"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_centerInParent="true"
                            app:matProg_barColor="#a6a6a6"
                            app:matProg_barWidth="1dp"
                            app:matProg_progressIndeterminate="true"
                            app:matProg_rimWidth="1dp"/>
                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ly_add_change_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_20"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>
