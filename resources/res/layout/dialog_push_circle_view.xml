<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/view_dialog_root"
    android:background="@drawable/shape_white_top_13"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="400dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/btn_cancel"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/ic_close_gray"
            android:layout_centerVertical="true"
            android:paddingStart="6dp"
            android:paddingEnd="16dp"
            android:layout_alignParentEnd="true"
            android:paddingVertical="5dp"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/first_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐帖子"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View style="@style/line_style"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ly_search"
        android:background="@drawable/shape_forum_search_edittext_bg"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="?attr/ic_forum_search"
            android:layout_marginStart="16dp"/>
        <com.psychiatrygarden.widget.ClearEditText
            android:textSize="14sp"
            android:textColor="?attr/question_color"
            android:textColorHint="?attr/forth_txt_color"
            android:id="@+id/ed_search"
            android:background="@null"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入关键词进行搜索"
            android:singleLine="true"
            android:drawablePadding="5dp"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:textCursorDrawable="@drawable/color_cursor"
            android:paddingHorizontal="8dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ly_progress"
            android:background="@drawable/download_progress_bg"
            android:visibility="gone"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true">
            <com.psychiatrygarden.widget.ProgressWheel
                android:id="@+id/progress_wheel_download"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                app:matProg_barColor="?attr/loading_dialog_text_color"
                app:matProg_barWidth="1dp"
                app:matProg_progressIndeterminate="true"
                app:matProg_rimWidth="1dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/loading_dialog_text_color"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/dialog_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="加载中"
                android:maxLines="2"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ly_bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View style="@style/line_style"/>
        <ImageView
            android:id="@+id/ic_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/ic_push_circle"
            android:layout_centerVertical="true"
            android:paddingStart="16dp"/>
        <TextView
            android:textColor="?attr/first_txt_color"
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/ic_push"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/new_bg_one_color"
            android:gravity="center"
            android:id="@+id/btn_sure"
            android:background="@drawable/shape_app_theme_corners_12"
            android:layout_width="164dp"
            android:layout_height="40dp"
            android:text="确定"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
