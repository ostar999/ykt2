<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_weight="1.5">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/gray_font"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择您的身份"/>
        <View
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_font"
            android:id="@+id/tv_zhuan_student"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="西医专硕考生"
            android:drawableRight="@drawable/tiku_select_default"/>
        <View
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_font"
            android:id="@+id/tv_xue_student"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="西医学硕考生"
            android:drawableRight="@drawable/tiku_select_default"/>
        <View
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_font"
            android:id="@+id/tv_zyys_student"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="西医执业医师考生"
            android:drawableRight="@drawable/tiku_select_default"/>
        <View
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <com.psychiatrygarden.widget.AlphaButton
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/bt_confirm"
            android:background="@drawable/drawable_quetionlist_red"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:text="确认"/>
    </LinearLayout>
</LinearLayout>
