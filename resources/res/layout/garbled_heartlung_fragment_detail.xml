<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollV"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_70"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16">
            <com.noober.background.view.BLConstraintLayout
                android:id="@+id/topCl"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_16"
                app:bl_corners_radius="@dimen/dp_12"
                app:bl_solid_color="@color/color_white"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/c_2f2f46"
                    android:id="@+id/nameTv"
                    android:paddingBottom="@dimen/dp_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.noober.background.view.BLTextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_8f91a1"
                    android:gravity="center"
                    android:id="@+id/numTv"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_24"
                    app:bl_corners_radius="@dimen/dp_12"
                    app:bl_solid_color="@color/c_f0f1f6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/nameTv">
                    <com.lwkandroid.widget.ngv.NineGridView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/nineGridView"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_16"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_180"
                        app:enable_edit_mode="false"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/mediaCl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/sp_10"
                            android:textColor="@color/c_8f91a1"
                            android:id="@+id/currentTimeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00:00"
                            app:layout_constraintBottom_toBottomOf="@+id/seekBar"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/seekBar"/>
                        <TextView
                            android:textSize="@dimen/sp_10"
                            android:textColor="@color/c_8f91a1"
                            android:id="@+id/totalTimeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--:--"
                            app:layout_constraintBottom_toBottomOf="@+id/seekBar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/seekBar"/>
                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            app:layout_constraintEnd_toStartOf="@+id/totalTimeTv"
                            app:layout_constraintStart_toEndOf="@+id/currentTimeTv"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/HiSeekbarStyle"/>
                        <ImageView
                            android:id="@+id/audioImgv"
                            android:layout_width="@dimen/dp_218"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_30"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:src="@drawable/heart_audio_bg"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/seekBar"/>
                        <ImageView
                            android:id="@+id/playImgv"
                            android:layout_width="@dimen/dp_48"
                            android:layout_height="@dimen/dp_48"
                            android:layout_marginTop="@dimen/dp_m_12"
                            android:src="@drawable/heart_play"
                            app:layout_constraintEnd_toEndOf="@+id/audioImgv"
                            app:layout_constraintStart_toStartOf="@+id/audioImgv"
                            app:layout_constraintTop_toTopOf="@+id/audioImgv"/>
                        <ImageView
                            android:id="@+id/pauseImgv"
                            android:visibility="invisible"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_80"
                            android:layout_marginTop="@dimen/dp_m_24"
                            android:src="@drawable/heart_pause"
                            app:layout_constraintEnd_toEndOf="@+id/audioImgv"
                            app:layout_constraintStart_toStartOf="@+id/audioImgv"
                            app:layout_constraintTop_toTopOf="@+id/audioImgv"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </com.noober.background.view.BLConstraintLayout>
            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/magicIndicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@+id/topCl"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:minHeight="@dimen/dp_280"
                app:bl_corners_topLeftRadius="@dimen/dp_12"
                app:bl_corners_topRightRadius="@dimen/dp_12"
                app:bl_gradient_angle="270"
                app:bl_gradient_endColor="@color/c_f8f8fa"
                app:bl_gradient_startColor="@color/color_white">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/oneLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:minHeight="@dimen/dp_280">
                    <com.noober.background.view.BLTextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/c_50536b"
                        android:id="@+id/detailTv"
                        android:padding="@dimen/dp_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.lwkandroid.widget.ngv.NineGridView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/nine1GridView"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:enable_edit_mode="false"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:visibility="gone"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:minHeight="@dimen/dp_280"
                    android:paddingHorizontal="@dimen/dp_16"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomCl"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:paddingHorizontal="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.noober.background.view.BLTextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/c_8f91a1"
            android:gravity="center"
            android:id="@+id/goBtv"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_48"
            android:text="@string/heartlung_mastered1"
            app:bl_corners_radius="@dimen/dp_24"
            app:bl_solid_color="@color/c_f0f1f6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/errorCl"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/collectCl"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/errorImgv"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:src="@drawable/heart_bottom_error"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="@color/c_8f91a1"
                android:id="@+id/errorTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:text="@string/heartlung_correction_error"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/errorImgv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/collectCl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pointCl"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/collectImgv"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:src="@drawable/garbled_heart_bottom_save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="@color/c_8f91a1"
                android:id="@+id/collectTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:text="@string/heartlung_collect1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/collectImgv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pointCl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/pointImgv"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:src="@drawable/heart_bottom_point"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="@color/c_8f91a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:text="@string/heartlung_point"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pointImgv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
