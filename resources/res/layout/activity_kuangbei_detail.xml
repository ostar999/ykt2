<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:skin="http://schemas.android.com/android/skin"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_top_title"
        android:background="?attr/hor_view_color"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:ellipsize="middle"
            android:id="@+id/questiondetails_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一章"
            android:singleLine="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.psychiatrygarden.widget.ViewPagerCompat
            android:id="@+id/questiondetails_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/questiondetails_bottom_layout"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/questiondetails_bottom_layout"
            android:background="?attr/hor_view_color"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <View
                android:background="?attr/gray_line_126"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:background="?attr/hor_view_color"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="14sp"
                    android:textColor="?attr/line_txt_color"
                    android:gravity="center_vertical"
                    android:id="@+id/btn_comment"
                    android:background="?attr/line_all_round"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:text="写评论"
                    android:drawablePadding="5dp"
                    android:layout_toLeftOf="@+id/questiondetails_btn_edit"
                    android:layout_centerVertical="true"/>
                <com.psychiatrygarden.widget.AlphaImageView
                    android:id="@+id/questiondetails_zantong"
                    android:background="?attr/dianzancourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    skin:enable="true"/>
                <com.psychiatrygarden.widget.AlphaImageView
                    android:id="@+id/questiondetails_btn_centerMsg"
                    android:background="?attr/question_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/questiondetails_zantong"
                    android:layout_centerVertical="true"
                    skin:enable="true"/>
                <com.psychiatrygarden.widget.AlphaImageView
                    android:id="@+id/questiondetails_btn_share"
                    android:background="@drawable/icon_share_no"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/questiondetails_btn_centerMsg"
                    android:layout_centerVertical="true"
                    skin:enable="true"/>
                <com.psychiatrygarden.widget.AlphaImageView
                    android:id="@+id/questiondetails_btn_collect"
                    android:background="?attr/icon_collect_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/questiondetails_btn_share"
                    android:layout_centerVertical="true"/>
                <com.psychiatrygarden.widget.AlphaImageView
                    android:id="@+id/questiondetails_btn_edit"
                    android:background="?attr/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/questiondetails_btn_collect"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_viewok"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:textColor="?attr/green_child"
                android:gravity="center"
                android:id="@+id/zuoduil"
                android:background="?attr/line_all_round"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="做对了"
                android:layout_weight="1"/>
            <TextView
                android:textColor="?attr/red_child"
                android:gravity="center"
                android:id="@+id/zuocuol"
                android:background="?attr/line_all_round"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="做错了"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
