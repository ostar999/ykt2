<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/download_progress_bg"
        android:layout_width="120dp"
        android:layout_height="120dp">
        <com.psychiatrygarden.widget.ProgressWheel
            android:id="@+id/progress_wheel_download"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            wheel:matProg_barColor="#a6a6a6"
            wheel:matProg_barWidth="1dp"
            wheel:matProg_progressIndeterminate="true"
            wheel:matProg_rimWidth="1dp"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/loading_dialog_text_color"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="加载中"
            android:maxLines="2"/>
    </LinearLayout>
</LinearLayout>
