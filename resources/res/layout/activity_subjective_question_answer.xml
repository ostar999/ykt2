<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_title_night"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/questiondetails_bottom_layout"
            android:background="?attr/bg_backgroud"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <View
                android:background="?attr/gray_line_126"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:background="?attr/bg_backgroud"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/questiondetails_btn_zantong"
                    android:visibility="gone"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="?attr/dianzancourse"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/questiondetails_btn_centerMsg"
                    android:visibility="gone"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:src="?attr/question_msg"
                    android:layout_toLeftOf="@+id/questiondetails_btn_zantong"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/questiondetails_btn_share"
                    android:visibility="gone"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_share_no"
                    android:layout_toLeftOf="@+id/questiondetails_btn_centerMsg"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/questiondetails_btn_collect"
                    android:visibility="gone"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:src="?attr/icon_collect_no"
                    android:layout_toLeftOf="@+id/questiondetails_btn_share"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/questiondetails_btn_edit"
                    android:visibility="gone"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:src="?attr/btn_edit"
                    android:layout_toLeftOf="@+id/questiondetails_btn_collect"
                    android:layout_centerVertical="true"/>
                <Button
                    android:textSize="14sp"
                    android:textColor="?attr/line_txt_color"
                    android:gravity="center_vertical"
                    android:id="@+id/btn_comment"
                    android:background="?attr/line_all_round"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:text="写评论"
                    android:drawablePadding="5dp"
                    android:layout_toLeftOf="@+id/questiondetails_btn_edit"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <com.psychiatrygarden.widget.BetterRecyclerView
            android:id="@+id/rv_subjective"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/questiondetails_bottom_layout"/>
    </RelativeLayout>
</LinearLayout>
