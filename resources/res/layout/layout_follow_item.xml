<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemrel"
    android:background="?attr/app_bg"
    android:paddingTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.psychiatrygarden.widget.CircleImageView
        android:id="@+id/iv_header_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/app_icon"
        android:layout_centerVertical="true"
        android:contentDescription="@null"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/tv_status"
        android:layout_toRightOf="@+id/iv_header_img">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/linvddd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:textColor="?attr/first_text_color"
                android:gravity="center"
                android:id="@+id/tv_ranking_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"/>
            <ImageView
                android:id="@+id/vipimg"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/vipimg"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linvddd"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/tertiary_text_color"
                android:gravity="center"
                android:id="@+id/tv_ranking_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/first_text_color"
        android:gravity="center"
        android:id="@+id/tv_status"
        android:background="@drawable/shape_round_a4a1a0"
        android:layout_width="56dp"
        android:layout_height="26dp"
        android:layout_marginRight="10dp"
        android:text="关注"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <View
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/iv_header_img"
        style="@style/line_style"/>
</RelativeLayout>
