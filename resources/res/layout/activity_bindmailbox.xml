<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.psychiatrygarden.widget.ClearEditText
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_line"
        android:id="@+id/et_input_phone"
        android:background="?attr/editview_gray_bond_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入您要绑定的邮箱地址"
        android:singleLine="true"
        android:inputType="number"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>
    <com.psychiatrygarden.widget.AlphaButton
        android:textSize="14sp"
        android:textColor="@color/white"
        android:id="@+id/bt_next"
        android:background="@drawable/bg_red_round_conner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/next"/>
</LinearLayout>
