<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/gray_line_126"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.psychiatrygarden.widget.ClearEditText
        android:textSize="14sp"
        android:textColor="?attr/question_color"
        android:textColorHint="?attr/dialog_input_hint_color"
        android:id="@+id/et_input_phone"
        android:background="?attr/editview_gray_bond_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/input_phone"
        android:singleLine="true"
        android:inputType="number"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>
    <com.psychiatrygarden.widget.AlphaButton
        android:textSize="14sp"
        android:textColor="?attr/white_color02"
        android:id="@+id/bt_next"
        android:background="?attr/red_round_coner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/next"/>
</LinearLayout>
