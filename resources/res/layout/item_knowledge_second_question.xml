<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/itemRootSecond"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/itemSecondContent"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingVertical="@dimen/dp_16">
        <ImageView
            android:id="@+id/secondSelectImage"
            android:visibility="gone"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_12"
            android:src="?attr/download_new_select"
            android:scaleType="fitXY"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/secondTitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_24"
            android:text="第一章 绪论【直播】"
            android:maxLines="1"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/noteSecondSelectImage"
            android:paddingEnd="@dimen/dp_8"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/third_txt_color"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/tvSecondCount"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:text=""
            android:layout_marginHorizontal="@dimen/dp_24"/>
        <ImageView
            android:id="@+id/imgArrow"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:visibility="gone"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_22"
            android:src="?attr/icon_bottom_arrow_new"
            android:layout_alignParentRight="true"
            android:paddingVertical="@dimen/dp_3"/>
    </LinearLayout>
    <View
        android:background="?attr/new_bg_one_border_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
