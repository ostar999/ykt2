<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_round_corner_top_radius_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/forth_txt_color"
            android:gravity="center"
            android:id="@+id/tv_cancel"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="取消"
            android:paddingHorizontal="@dimen/dp_16"/>
        <TextView
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="所在地区"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:id="@+id/tv_confirm"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确定"
            android:paddingHorizontal="@dimen/dp_16"/>
    </LinearLayout>
    <View
        android:background="?attr/new_bg_one_border_color"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"/>
    <top.defaults.view.DivisionPickerView
        android:id="@+id/picker_view"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingVertical="@dimen/dp_16"/>
</LinearLayout>
