<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/ly_view"
    android:background="@drawable/shape_white_top_16_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/color_bfbfbf"
            android:layout_gravity="start|center_vertical"
            android:id="@+id/tv_cancel"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="取消"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/color_dd594a"
            android:layout_gravity="end|center_vertical"
            android:id="@+id/tv_publish_f"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:layout_centerInParent="true"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_303030"
            android:layout_gravity="center"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写段评"/>
        <ImageView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/btn_scale"
            android:padding="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/icon_zoom"
            android:contentDescription="@null"
            android:layout_marginEnd="16dp"/>
    </FrameLayout>
    <View
        android:id="@+id/view_line"
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_content"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="@dimen/dp_205"
        android:layout_weight="1"
        android:paddingHorizontal="16dp">
        <com.ruffian.library.widget.REditText
            android:textSize="16sp"
            android:textColor="@color/color_303030"
            android:textColorHint="@color/color_bfbfbf"
            android:gravity="start"
            android:id="@+id/et_content"
            android:padding="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="请输入您的评论"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            app:corner_radius="@dimen/dp_8"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <FrameLayout
                android:id="@+id/fl_image"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.ruffian.library.widget.RImageView
                    android:id="@+id/img_album"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/image_cover_default"
                    android:scaleType="centerCrop"
                    android:contentDescription="@null"
                    android:layout_marginEnd="6dp"
                    app:corner_radius="@dimen/dp_3"/>
                <ProgressBar
                    android:layout_gravity="center"
                    android:id="@+id/processView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"/>
                <ImageView
                    android:layout_gravity="end"
                    android:id="@+id/btn_del_pic"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/icon_clean_select"
                    android:contentDescription="@null"/>
            </FrameLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/btn_add_pic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_select_img"
                android:contentDescription="@null"
                android:layout_marginEnd="16dp"/>
            <com.ruffian.library.widget.RTextView
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btn_publish"
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:text="发布"
                app:background_normal="@color/color_dd594a"
                app:corner_radius="12dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
