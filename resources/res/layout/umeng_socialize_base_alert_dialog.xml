<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/umeng_socialize_bind_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:id="@+id/umeng_socialize_tipinfo"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="使用已有账号发表评论"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/umeng_socialize_alert_body"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/umeng_socialize_tipinfo"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/umeng_socialize_alert_footer"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_below="@+id/umeng_socialize_alert_body"/>
</RelativeLayout>
