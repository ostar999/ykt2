<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relview"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/check_video"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/uncheckvideo"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:id="@+id/rl_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/check_video">
        <ImageView
            android:id="@+id/iv_store_img"
            android:layout_width="120dp"
            android:layout_height="67.4dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <RelativeLayout
            android:id="@+id/rel_zhezhao"
            android:background="#55000000"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="120dp"
            android:layout_height="67.4dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/mdownimg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="?attr/dimg"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/question_color"
        android:id="@+id/course_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        android:layout_toRightOf="@+id/rl_image"
        android:layout_above="@+id/rl_course_info"
        android:layout_alignTop="@+id/rl_image"/>
    <RelativeLayout
        android:id="@+id/rl_course_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rl_image"
        android:layout_alignBottom="@+id/rl_image">
        <TextView
            android:textSize="13sp"
            android:textColor="?attr/item_school_color"
            android:id="@+id/tv_course_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/item_school_color"
            android:gravity="center"
            android:id="@+id/tv_course_mb"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:layout_toRightOf="@+id/tv_course_status"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
