<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/new_bg_one_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_phone"
        android:background="?attr/new_bg_one_color"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:gravity="center_vertical"
            android:text="手机号"
            android:layout_centerVertical="true"
            android:paddingStart="16dp"
            android:paddingEnd="10dp"
            style="@style/text_normal_font_14_style"/>
        <TextView
            android:gravity="center"
            android:id="@+id/tv_phone"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/img_phone"
            style="@style/text_normal_font_12_style"/>
        <ImageView
            android:id="@+id/img_phone"
            style="@style/set_right_arrow_style"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"
        style="@style/new_gray_line_style"/>
    <RelativeLayout
        android:id="@+id/rl_email"
        android:background="?attr/new_bg_one_color"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:gravity="center_vertical"
            android:text="邮箱"
            android:layout_centerVertical="true"
            android:paddingStart="16dp"
            android:paddingEnd="10dp"
            style="@style/text_normal_font_14_style"/>
        <TextView
            android:gravity="center"
            android:id="@+id/tv_email"
            android:checked="false"
            android:text="******"
            android:includeFontPadding="false"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/img_email"
            style="@style/text_normal_font_12_style"/>
        <ImageView
            android:id="@+id/img_email"
            style="@style/set_right_arrow_style"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"
        style="@style/new_gray_line_style"/>
    <RelativeLayout
        android:id="@+id/changePasswordNum"
        android:background="?attr/new_bg_one_color"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:gravity="center_vertical"
            android:text="修改密码"
            android:layout_centerVertical="true"
            android:paddingStart="16dp"
            android:paddingEnd="10dp"
            style="@style/text_normal_font_14_style"/>
        <TextView
            android:gravity="center"
            android:id="@+id/messageSwitchs"
            android:checked="false"
            android:text="******"
            android:includeFontPadding="false"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/img_pwd"
            style="@style/text_normal_font_12_style"/>
        <ImageView
            android:id="@+id/img_pwd"
            style="@style/set_right_arrow_style"/>
    </RelativeLayout>
    <View
        android:background="?attr/new_bg_two_color"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:id="@+id/rl_wechat_num"
        android:background="?attr/new_bg_one_color"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:gravity="center_vertical"
            android:text="微信号"
            android:layout_centerVertical="true"
            android:paddingStart="16dp"
            android:paddingEnd="10dp"
            style="@style/text_normal_font_14_style"/>
        <TextView
            android:gravity="center"
            android:id="@+id/tv_wechat"
            android:text="尚未绑定"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/img_wechat"
            style="@style/text_normal_font_12_style"/>
        <ImageView
            android:id="@+id/img_wechat"
            style="@style/set_right_arrow_style"/>
    </RelativeLayout>
    <View
        android:background="?attr/new_bg_two_color"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:id="@+id/rl_accountCancellation"
        android:background="?attr/new_bg_one_color"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:gravity="center_vertical"
            android:text="注销账号"
            android:layout_centerVertical="true"
            android:paddingStart="16dp"
            android:paddingEnd="10dp"
            style="@style/text_normal_font_14_style"/>
        <TextView
            android:gravity="center"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/img_account"
            style="@style/text_normal_font_12_style"/>
        <ImageView
            android:id="@+id/img_account"
            style="@style/set_right_arrow_style"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"
        style="@style/new_gray_line_style"/>
</LinearLayout>
