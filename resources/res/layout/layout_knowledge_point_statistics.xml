<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240"
        android:src="@drawable/ic_point_statistics_top_bg"
        android:scaleType="fitXY"
        app:layout_collapseMode="parallax"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/parent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:orientation="vertical"
            android:id="@+id/appbarlayout"
            android:background="@color/transparent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapse"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/rellogview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_60">
                    <TextView
                        android:textSize="@dimen/sp_22"
                        android:textStyle="bold"
                        android:textColor="@color/first_txt_color"
                        android:id="@+id/tv_project_name"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_24"
                        android:text=""
                        android:layout_below="@+id/toolbars"
                        android:paddingHorizontal="@dimen/dp_16"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/shape_white_top_16_no_night"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:textColor="@color/first_txt_color"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_32"
                            android:text="考点做题统计"
                            android:paddingHorizontal="@dimen/dp_16"/>
                        <com.psychiatrygarden.widget.KnowledgePointStatisticsProgressView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/progress_view"
                            android:background="@color/app_bg"
                            android:layout_width="@dimen/dp_320"
                            android:layout_height="@dimen/dp_160"
                            android:layout_marginTop="@dimen/dp_22"/>
                        <LinearLayout
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-66dp"
                            android:paddingHorizontal="@dimen/dp_16">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/tv_avg_time"
                                        android:text="0"
                                        style="@style/statistics_main_txt_style"/>
                                    <TextView
                                        android:textSize="@dimen/sp_12"
                                        android:textColor="@color/first_txt_color"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="s"/>
                                </LinearLayout>
                                <TextView
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/third_txt_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="平均用时/题"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/tv_history_time"
                                        android:visibility="gone"
                                        android:text="0h"
                                        style="@style/statistics_main_txt_style"/>
                                    <TextView
                                        android:textSize="@dimen/sp_12"
                                        android:textStyle="bold"
                                        android:textColor="@color/first_txt_color"
                                        android:id="@+id/tv_history_time_min"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0m"/>
                                </LinearLayout>
                                <TextView
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/third_txt_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="总用时"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/tv_do_question_num"
                                        android:text="0"
                                        style="@style/statistics_main_txt_style"/>
                                    <TextView
                                        android:textSize="@dimen/sp_12"
                                        android:textColor="@color/first_txt_color"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="次"/>
                                </LinearLayout>
                                <TextView
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/third_txt_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="做题次数"/>
                            </LinearLayout>
                        </LinearLayout>
                        <com.psychiatrygarden.widget.PointProgressByTaskView
                            android:id="@+id/point_task_progress"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toobars1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">
                    <RelativeLayout
                        android:id="@+id/toolbars"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_actionbar_back"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/ic_black_back"/>
                        <TextView
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:textColor="@color/first_txt_color"
                            android:ellipsize="end"
                            android:id="@+id/nav_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:lines="1"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/btn_share"
                            android:layout_toEndOf="@+id/iv_actionbar_back"/>
                        <ImageView
                            android:gravity="center"
                            android:id="@+id/btn_share"
                            android:padding="@dimen/dp_10"
                            android:visibility="gone"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/ic_gray_share"
                            android:layout_marginEnd="@dimen/dp_6"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/new_bg_one_color"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:gravity="center_vertical"
                    android:id="@+id/ly_point_title"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dp_16">
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:textColor="@color/first_txt_color"
                        android:layout_gravity="start|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="掌握情况"/>
                    <LinearLayout
                        android:gravity="end"
                        android:layout_gravity="end|center_vertical"
                        android:orientation="horizontal"
                        android:background="@drawable/shape_btn_light_red_radius_6"
                        android:paddingRight="@dimen/dp_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_120"
                        android:layout_marginRight="@dimen/dp_40">
                        <TextView
                            android:textSize="@dimen/sp_10"
                            android:textColor="@color/main_theme_color"
                            android:ellipsize="marquee"
                            android:gravity="center"
                            android:id="@+id/tv_kc_desc"
                            android:paddingTop="@dimen/dp_2"
                            android:paddingBottom="@dimen/dp_2"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:lines="1"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:layout_toLeftOf="@+id/btn_filter"
                            android:layout_centerVertical="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:paddingStart="@dimen/dp_10"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingVertical="@dimen/dp_2"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:orientation="horizontal"
                            android:id="@+id/rvFilter"
                            android:background="@drawable/shape_btn_light_red_radius_6"
                            android:paddingRight="@dimen/dp_5"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/btn_filter"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:id="@+id/btn_filter"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/ic_filter_day"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </FrameLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ly_point_view"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dp_16"/>
                <RelativeLayout
                    android:id="@+id/ly_webview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="@dimen/dp_32">
                    <WebView
                        android:id="@+id/webview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:id="@+id/view_web"
                        android:background="@color/app_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.psychiatrygarden.widget.ProgressWheel
                            android:id="@+id/progress_wheel_download"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_centerInParent="true"
                            app:matProg_barColor="#a6a6a6"
                            app:matProg_barWidth="1dp"
                            app:matProg_progressIndeterminate="true"
                            app:matProg_rimWidth="1dp"/>
                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/ly_to_question"
                    android:background="@drawable/shape_point_statistics_layout_bg"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:paddingHorizontal="@dimen/dp_16">
                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@mipmap/ic_point_to_question"/>
                    <TextView
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"
                        android:textColor="@color/first_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="针对性练习"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_8"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/new_bg_one_color"
                        android:gravity="center"
                        android:id="@+id/btn_to_question"
                        android:background="@drawable/shape_main_theme_color_no_night_round"
                        android:paddingLeft="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_24"
                        android:text="去做题"
                        android:paddingHorizontal="@dimen/dp_14"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/ly_to_study"
                    android:background="@drawable/shape_point_statistics_layout_bg"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:paddingHorizontal="@dimen/dp_16">
                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@mipmap/ic_point_to_study"/>
                    <TextView
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"
                        android:textColor="@color/first_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐视频资料"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_8"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/new_bg_one_color"
                        android:gravity="center"
                        android:id="@+id/btn_to_study"
                        android:background="@drawable/shape_main_theme_color_no_night_round"
                        android:paddingLeft="@dimen/dp_14"
                        android:paddingRight="@dimen/dp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_24"
                        android:text="去学习"
                        android:paddingHorizontal="@dimen/dp_14"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>
