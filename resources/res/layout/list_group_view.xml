<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_item_layout"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:background="@color/white_bg_night"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <RelativeLayout
        android:id="@+id/rl_head"
        android:background="@color/white_bg_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TextView
            android:textSize="13sp"
            android:textColor="@color/white_font_night"
            android:gravity="center"
            android:id="@+id/group_name"
            android:background="@drawable/question_comment_flag"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="热门评论"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_font_night"
            android:gravity="center"
            android:id="@+id/group_tip"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="暂无热门评论"
            android:layout_below="@+id/group_name"/>
    </RelativeLayout>
</RelativeLayout>
