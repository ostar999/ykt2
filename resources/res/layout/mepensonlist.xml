<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:background="@drawable/rangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
        <com.psychiatrygarden.widget.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_ask_headimage"
            android:background="@drawable/personal_headimg_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            app:border_color="@color/white"
            app:border_width="2dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_ask_headimage">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/gray_light"
                android:id="@+id/tv_ask_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/gray_font"
                android:id="@+id/tv_ask_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:id="@+id/iv_ask_arrow"
                android:paddingTop="8dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/askbar_down_icon"
                android:contentDescription="@null"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/gray_font"
            android:gravity="center"
            android:id="@+id/textView6"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lls"
            android:layout_centerHorizontal="true"/>
        <View
            android:id="@+id/view"
            android:background="@drawable/dash_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/textView6"
            android:layerType="software"/>
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/view">
            <com.psychiatrygarden.widget.CircleImageView
                android:id="@+id/iv_answer_headimage"
                android:background="@drawable/personal_headimg_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                app:border_color="@color/white"
                app:border_width="2dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lls2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_answer_headimage">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/gray_light"
                    android:id="@+id/tv_answer_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/gray_font"
                    android:id="@+id/tv_answer_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:id="@+id/iv_answer_arrow"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/askbar_down_icon"
                    android:contentDescription="@null"/>
            </LinearLayout>
            <TextView
                android:textColor="@color/gray_font"
                android:gravity="center"
                android:id="@+id/textV"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lls2"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/v1"
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/relativeLayout2"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/gray_font"
            android:gravity="left"
            android:id="@+id/tv_time"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_ask_headimage"
            android:layout_below="@+id/v1"/>
        <LinearLayout
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_time"
            android:layout_alignTop="@+id/tv_time"
            android:layout_alignRight="@+id/v1"
            android:layout_alignBottom="@+id/tv_time">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/gray_font"
                android:gravity="center_vertical"
                android:id="@+id/tv_thread"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:drawableLeft="@drawable/askbar_pinglunicon"
                android:drawablePadding="5dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/gray_font"
                    android:gravity="center"
                    android:id="@+id/tv_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/askbar_no_dianzan"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/app_theme_red"
                    android:id="@+id/commentList_item_tv_praisenum"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/gray_font"
                android:gravity="center"
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:drawableStart="@drawable/askbar_share_icon"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
