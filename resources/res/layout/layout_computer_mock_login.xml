<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:paddingHorizontal="@dimen/dp_16">
        <ImageView
            android:id="@+id/img_back"
            android:padding="@dimen/dp_3"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="?attr/ic_back_gray"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_mock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模考名称"
            android:lines="1"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@+id/img_back"/>
    </RelativeLayout>
    <View style="@style/new_gray_line_style"/>
    <TextView
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:textColor="?attr/first_txt_color"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="欢迎使用本系统"/>
    <TextView
        android:textSize="@dimen/sp_13"
        android:textColor="?attr/first_txt_color"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入准考证号以进入系统"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dp_12">
            <LinearLayout
                android:gravity="center_vertical"
                android:background="?attr/new_bg_two_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_21">
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="准考证号："/>
                <EditText
                    android:textSize="@dimen/sp_13"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/et_test_number"
                    android:background="@drawable/shape_bg_one_stroke_gray_round8"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_28"
                    android:text=""
                    android:paddingHorizontal="@dimen/dp_8"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="?attr/new_bg_two_color"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_12">
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="座位号："/>
                <TextView
                    android:textSize="@dimen/sp_60"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/shape_bg_two_stroke_gray_round8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_38">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="?attr/ic_mock_login_check"
                    android:layout_marginEnd="@dimen/dp_4"/>
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据完整"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22">
                <TextView
                    android:background="@drawable/shape_circle_first_txt_color_bg"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_6"/>
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考生数据包数据完整"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7">
                <TextView
                    android:background="@drawable/shape_circle_first_txt_color_bg"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_6"/>
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="试卷数据包数据完整"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/dp_12">
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/main_theme_color"
                    android:gravity="center"
                    android:id="@+id/btn_back"
                    android:background="@drawable/shape_computer_review_test_btn_bg_round8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_28"
                    android:text="退出"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dp_8"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/main_theme_six_deep_color"
                    android:gravity="center"
                    android:id="@+id/btn_login"
                    android:background="@drawable/shape_app_theme_corners_8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_28"
                    android:text="登录"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_8"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
