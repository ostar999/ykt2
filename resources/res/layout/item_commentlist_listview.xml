<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="end"
            android:orientation="vertical"
            android:id="@+id/llay_content"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_commentList_item_userIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.psychiatrygarden.widget.CircleImageView
                        android:id="@+id/commentList_item_userIcon"
                        android:background="@drawable/personal_headimg_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"
                        app:border_color="@color/white"
                        app:border_width="0dp"/>
                    <com.psychiatrygarden.widget.CircleImageView
                        android:id="@+id/night_vedio_bg"
                        android:background="#7f121622"
                        android:visibility="gone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@null"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/commentList_item_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/rl_commentList_item_userIcon"
                    android:layout_alignParentEnd="true">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/blue_light_night"
                        android:id="@+id/commentList_item_tv_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:singleLine="true"
                        android:lineSpacingMultiplier="1.2"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="@color/gray_light"
                        android:gravity="center_vertical"
                        android:id="@+id/commentList_item_tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:singleLine="true"
                        android:drawablePadding="3dp"
                        android:layout_below="@+id/commentList_item_tv_userName"
                        android:layout_alignParentBottom="true"
                        android:lineSpacingMultiplier="1.2"/>
                    <ImageView
                        android:id="@+id/iv_comment_me_new"
                        android:background="@drawable/red_round"
                        android:visibility="invisible"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:contentDescription="@null"
                        android:layout_marginStart="3dp"
                        android:layout_toEndOf="@+id/commentList_item_tv_userName"/>
                </RelativeLayout>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/gray_light"
                    android:gravity="bottom"
                    android:id="@+id/commentList_item_tv_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    app:drawableEndCompat="@drawable/icon_praise_gray_left"/>
                <TextView
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="bottom"
                    android:id="@+id/commentList_item_tv_praisenum"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <LinearLayout
                android:gravity="right"
                android:orientation="vertical"
                android:id="@+id/commentList_item_reply_layout"
                android:background="@drawable/lineshapes"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="20dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/blue_light_night"
                    android:id="@+id/commentList_item_reply_tv_userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:lineSpacingMultiplier="1.2"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/gray_light"
                    android:gravity="center_vertical"
                    android:id="@+id/commentList_re_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:drawablePadding="3dp"
                    android:lineSpacingMultiplier="1.2"/>
                <com.psychiatrygarden.utils.CBAlignTextView
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/commentList_item_reply_tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginStart="-3dp"/>
                <TextView
                    android:textSize="11sp"
                    android:textColor="@color/color_gray_a0"
                    android:gravity="end"
                    android:id="@+id/iv_ask_arrow"
                    android:background="@drawable/bg_tv"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="展开"
                    android:drawableRight="@drawable/askbar_down_icon"
                    android:drawablePadding="5dp"
                    android:contentDescription="@null"/>
            </LinearLayout>
            <com.psychiatrygarden.utils.CBAlignTextView
                android:textSize="15sp"
                android:textColor="@color/black"
                android:id="@+id/commentList_item_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textScaleX="1"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:textSize="11sp"
                android:textColor="@color/color_gray_a0"
                android:gravity="right"
                android:id="@+id/iv_ask_arrow1"
                android:background="@drawable/bg_tv"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="展开"
                android:drawableRight="@drawable/askbar_down_icon"
                android:drawablePadding="5dp"
                android:contentDescription="@null"
                android:layout_marginEnd="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/gray_font_night"
                    android:id="@+id/tv_question"
                    android:background="@drawable/line_all_round"
                    android:paddingLeft="8dp"
                    android:paddingTop="2dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="2dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:drawableRight="@drawable/login_forget_arrow"
                    android:drawablePadding="2dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/commentlist_item_btn_reply"
                    android:background="#5c84b4"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="3dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回复"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:textColor="#a1a1a1"
                    android:id="@+id/commentList_item_btn_letter"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="私信"
                    android:drawableLeft="@drawable/icon_sendmsg"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_toStartOf="@+id/commentlist_item_btn_reply"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/view_line"
            android:background="@color/gray_line_night"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <include layout="@layout/item_comment_ad"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_elite"
        android:background="@drawable/circle_elite_icon"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
