<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/commentList_bottom_layout"
    android:background="@drawable/shape_comment_dialog_top16"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/shape_comment_dialog_top16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/forth_txt_color"
            android:gravity="center"
            android:id="@+id/dialog_input_btn_comment_cancel"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:paddingHorizontal="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_5"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写评论"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="@dimen/dp_16">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/screenview"
                android:padding="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/comment_expand_img"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="?attr/first_txt_color"
                android:gravity="right"
                android:id="@+id/dialog_input_btn_comment_ok"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="?attr/new_bg_one_border_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_16"
        android:fillViewport="true"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16">
            <EditText
                android:textSize="@dimen/sp_16"
                android:textColor="?attr/first_txt_color"
                android:textColorHint="?attr/write_comment_hint"
                android:gravity="top"
                android:id="@+id/dialog_input_et_comment"
                android:background="@drawable/bg_edit_note"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="@dimen/dp_80"
                android:hint="输入内容..."
                android:maxLength="5000"
                android:layout_weight="1"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/relbuttom"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="@dimen/dp_16">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/toTxt"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转至解析"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            app:drawableRightCompat="@drawable/icon_indicator_right"/>
        <RelativeLayout
            android:id="@+id/relimg"
            android:visibility="visible"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgshown"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/app_icon"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                app:riv_corner_radius="@dimen/dp_4"/>
            <RelativeLayout
                android:id="@+id/uploadprogrss"
                android:background="#77000000"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true">
                <ProgressBar
                    android:id="@+id/processView"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:indeterminateDrawable="?attr/progressBar"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/processTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/deleteimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:src="?attr/ic_item_top_delete_img"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_alignParentEnd="true"/>
            <ImageView
                android:id="@+id/vbimg"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vbimg"
                android:layout_centerInParent="true"
                android:paddingEnd="10dp"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:id="@+id/upvideoimg"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/comment_video_img"/>
            <ImageView
                android:id="@+id/upimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/comment_crop_img"
                android:layout_marginStart="15dp"/>
            <TextView
                android:textColor="?attr/put_comment_text_color"
                android:id="@+id/pushBtm"
                android:background="?attr/write_comment_publish"
                android:paddingLeft="@dimen/dp_14"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布"
                android:layout_marginStart="15dp"
                android:paddingHorizontal="@dimen/dp_14"
                android:paddingVertical="@dimen/dp_2"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
