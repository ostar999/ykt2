<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/jmui_menu_title_bar"
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height">
        <ImageButton
            android:id="@+id/jmui_return_btn"
            android:background="@color/transparent"
            android:padding="10dp"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:src="?attr/ic_black_back"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/jmui_right_btn"
            android:layout_toRightOf="@+id/jmui_return_btn"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/jmui_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="190dp"
                android:text="聊天设置"
                android:singleLine="true"/>
            <TextView
                android:textSize="20sp"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/jmui_group_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/jmui_right_btn"
            android:visibility="invisible"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:src="@drawable/jmui_chat_detail"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="?attr/app_bg"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="?attr/first_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入黑名单"
            android:layout_centerVertical="true"/>
        <Switch
            android:id="@+id/switchs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/thumb_selector"
            android:layout_centerVertical="true"
            android:track="@drawable/switch_selector_green"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textColor="?attr/first_text_color"
        android:id="@+id/tousu"
        android:background="?attr/app_bg"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="投诉"
        android:drawableRight="?attr/icon_indicator_right"/>
    <View
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
