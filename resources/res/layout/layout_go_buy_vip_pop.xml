<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/coorid"
        android:background="@drawable/gobuyimg"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_marginTop="-41dp"
            android:src="@drawable/gobuyheaderimg"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/first_text_color"
            android:layout_gravity="center_horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="推荐方案"/>
        <RelativeLayout
            android:orientation="vertical"
            android:background="@drawable/shape_vip_jx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/first_text_color"
                android:ellipsize="end"
                android:id="@+id/goodnames"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="23考研一课通（全年班全年"
                android:maxLines="1"
                android:drawableLeft="@mipmap/plboimg"
                android:drawablePadding="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/secondary_text_color"
                android:ellipsize="end"
                android:id="@+id/goodsDetail"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="自1月美国境内出现第一例新冠肺炎确诊病例开始算起，短短三个多月的时间里，美国新冠肺炎确诊病例突破百万。"
                android:maxLines="3"
                android:layout_below="@+id/goodnames"
                android:lineSpacingExtra="1.2dp"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:id="@+id/labelid"
                android:background="@drawable/sviplabel"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="14sp"
            android:textColor="#ffffffff"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/goodsPickName"
            android:background="@drawable/shape_domin_red"
            android:paddingLeft="10dp"
            android:paddingTop="13dp"
            android:paddingRight="10dp"
            android:paddingBottom="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="购买23考研一课通（全年班）"
            android:maxLines="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/first_text_color"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/gotoSource"
            android:background="@drawable/shape_gray_line_null"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="继续开通VIP"
            android:maxLines="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/vipclose"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vipclose"
        android:layout_alignTop="@+id/coorid"
        android:layout_alignRight="@+id/coorid"/>
</RelativeLayout>
