<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/dialog_transparent_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_ad_image"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:contentDescription="@null"/>
    <ImageView
        android:id="@+id/iv_ad_close"
        android:background="@drawable/ad_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_ad_image"
        android:contentDescription="@null"
        android:layout_alignEnd="@+id/iv_ad_image"/>
</RelativeLayout>
