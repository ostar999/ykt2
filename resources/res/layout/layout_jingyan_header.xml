<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="?attr/hor_view_color"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="?attr/first_text_color"
            android:id="@+id/my_category_text"
            android:layout_marginLeft="10dp"
            android:text="@string/subscribe_my_category"
            style="@style/subscribe_more_tip_text"/>
    </LinearLayout>
    <com.psychiatrygarden.widget.DragListView
        android:gravity="center"
        android:id="@+id/userGridView"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent"
        android:numColumns="1"
        android:divider="@color/transparent"
        android:dividerHeight="0dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?attr/hor_view_color"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:textColor="?attr/first_text_color"
            android:id="@+id/more_category_text"
            android:layout_marginLeft="10dp"
            android:text="@string/subscribe_more_category"
            style="@style/subscribe_more_tip_text"/>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_gravity="center_horizontal"
        android:id="@+id/mColumnHorizontalScrollView"
        android:background="?attr/app_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/idScrollLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </HorizontalScrollView>
</LinearLayout>
