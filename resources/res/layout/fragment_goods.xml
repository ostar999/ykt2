<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/gray_line_126"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view5">
    <ScrollView
        android:id="@+id/scrollView2"
        android:background="?attr/gray_line_126"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/goumai_tv">
        <LinearLayout
            android:orientation="vertical"
            android:background="?attr/gray_line_126"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="?attr/gray_line_126"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/liner"
                    android:background="?attr/gray_line_126"
                    android:layout_width="match_parent"
                    android:layout_height="360dp">
                    <cn.lightsky.infiniteindicator.InfiniteIndicator xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/infinite_anim_circle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:indicator_type="indicator_anim_circle"/>
                </LinearLayout>
                <View
                    android:id="@+id/view1"
                    android:background="?attr/gray_line_126"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/liner"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/lll"
                    android:background="?attr/bg_backgroud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view1">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/question_color"
                        android:id="@+id/tv_title"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:lineSpacingMultiplier="1.2"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/float_bg"
                        android:id="@+id/tv_content"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:lineSpacingMultiplier="1.2"/>
                    <LinearLayout
                        android:id="@+id/lla"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp">
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:id="@+id/tv_money"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"/>
                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/tv_money1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="?attr/font_com_list"
                            android:id="@+id/tv_zhekoujia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="?attr/font_com_list"
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="?attr/font_com_list"
                            android:id="@+id/tv_youfei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/view3"
                        android:background="?attr/gray_line_126"
                        android:layout_width="wrap_content"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/line_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">
                        <com.psychiatrygarden.utils.TagFlowLayout
                            android:id="@+id/test"
                            android:background="?attr/bg_backgroud"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:max_select="1"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/view4"
                        android:background="?attr/gray_line_126"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"/>
                    <TextView
                        android:textColor="?attr/font_com_list"
                        android:id="@+id/no_content"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="选择     商品类型"
                        android:drawableRight="?attr/icon_indicator_right"/>
                </LinearLayout>
                <View
                    android:id="@+id/view5"
                    android:background="?attr/gray_line_126"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@+id/lll"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linear_pinglun"
                android:background="?attr/bg_backgroud"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rl_dingwei"
                    android:background="?attr/bg_backgroud"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/font_com_list"
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="评论"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:drawableRight="?attr/icon_indicator_right"
                        android:drawablePadding="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/font_com_list"
                        android:id="@+id/all_say_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="(8888)"
                        android:layout_toRightOf="@+id/textView1"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/float_bg"
                        android:id="@+id/tv_all_haoping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:layout_toLeftOf="@+id/textView2"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/font_com_list"
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="好评度"
                        android:layout_toLeftOf="@+id/tv_all_haoping"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView
                    android:background="?attr/gray_line_126"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/list_linear"
                    android:background="?attr/bg_backgroud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="?attr/font_com_list"
                    android:gravity="center"
                    android:id="@+id/cat_all_tv"
                    android:background="?attr/tijiao"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="查看全部评论"/>
            </LinearLayout>
            <View
                android:id="@+id/views"
                android:background="?attr/gray_line_126"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/goumai_tv"
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/llay_shiti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10sp"
                android:textColor="?attr/font_com_list"
                android:gravity="center"
                android:id="@+id/textView3"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="客服"
                android:drawableTop="?attr/kefu"
                android:drawablePadding="5dp"
                android:layout_weight="0.5"/>
            <View
                android:id="@+id/view2"
                android:background="?attr/gray_line_126"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:id="@+id/rl_gouwuche"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/gray_font"
                    android:gravity="center"
                    android:id="@+id/gouwuche"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="购物车"
                    android:drawableTop="@drawable/gouwuche"
                    android:drawablePadding="2dp"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/view_BadgeView"
                    android:background="@drawable/red_round"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center"
                android:id="@+id/tv_joincart"
                android:background="#e89b25"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="加入购物车"
                android:layout_weight="1"/>
            <TextView
                android:textSize="15sp"
                android:textColor="?attr/app_title_color"
                android:gravity="center"
                android:id="@+id/goumai"
                android:background="?attr/app_theme"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="立即购买"
                android:layout_weight="2.5"/>
        </LinearLayout>
        <TextView
            android:textSize="15sp"
            android:textColor="?attr/app_title_color"
            android:gravity="center"
            android:id="@+id/goumai_xuni"
            android:background="@color/app_theme_red"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="立即购买"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_pop_bg"
        android:background="#33000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
