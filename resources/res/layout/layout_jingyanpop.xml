<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/lineview"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/lineanmo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/item_school_color"
            android:gravity="center"
            android:background="?attr/bg_backgroud"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="请选择排序方式"/>
        <View style="@style/line_style"/>
        <ListView
            android:id="@+id/listView"
            android:background="?attr/bg_backgroud"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?attr/fourth_line_backgroup_color"
            android:dividerHeight="0.7dp"/>
        <View
            android:background="?attr/fourth_line_backgroup_color"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/question_color"
            android:gravity="center"
            android:id="@+id/close"
            android:background="?attr/bg_backgroud"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>
