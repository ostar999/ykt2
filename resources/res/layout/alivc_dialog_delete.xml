<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:background="@color/alivc_common_theme_primary_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_dialog_parent"
        android:background="@drawable/alivc_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/iv_dialog_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/alivc_common_margin_15"/>
        <TextView
            android:textColor="@color/alivc_common_font_white_light"
            android:layout_gravity="center"
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alivc_common_margin_20"
            android:layout_marginRight="@dimen/alivc_common_margin_20"/>
        <View
            android:background="#e4e4e4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alivc_common_line_1px"
            android:layout_marginTop="@dimen/alivc_common_margin_15"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alivc_common_height_group_40">
            <Button
                android:textSize="@dimen/alivc_common_font_16"
                android:textColor="@color/alivc_common_font_cyan_light"
                android:gravity="center"
                android:id="@+id/no"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/alivc_common_margin_10"
                android:text="No"
                android:singleLine="true"
                android:layout_weight="1"/>
            <View
                android:background="#e4e4e4"
                android:layout_width="@dimen/alivc_common_line_1px"
                android:layout_height="match_parent"/>
            <Button
                android:textSize="@dimen/alivc_common_font_16"
                android:textColor="@color/alivc_common_font_cyan_light"
                android:gravity="center"
                android:id="@+id/yes"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/alivc_common_margin_10"
                android:text="Yes"
                android:singleLine="true"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
