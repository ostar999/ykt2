<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_multi_select"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="?attr/download_select"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_single_select"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="?attr/download_item_un_select_icon"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/second_txt_color"
            android:gravity="start|center_vertical"
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="1"/>
    </LinearLayout>
    <EditText
        android:textSize="@dimen/sp_16"
        android:textColor="?attr/third_txt_color"
        android:textColorHint="?attr/forth_txt_color"
        android:gravity="start|top"
        android:id="@+id/input_et_content"
        android:background="@drawable/bg_edit_note"
        android:padding="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:minHeight="@dimen/dp_170"
        android:hint="输入内容"/>
</LinearLayout>
