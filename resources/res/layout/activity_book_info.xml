<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_start_page"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:contentInsetStart="0dp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/icon_black_back"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/dp_16"/>
    </Toolbar>
    <com.ruffian.library.widget.RImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/img_cover"
        android:layout_width="@dimen/dp_95"
        android:layout_height="@dimen/dp_126"
        android:layout_marginTop="8dp"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        app:corner_radius="4dp"/>
    <TextView
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/color_303030"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13sp"
            android:textColor="@color/color_145FB3"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"/>
        <TextView
            android:textSize="13sp"
            android:textColor="@color/color_303030"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_word_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"/>
    </LinearLayout>
    <View
        android:id="@+id/line_1"
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16"/>
    <LinearLayout
        android:paddingTop="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:baselineAligned="false"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:paddingVertical="@dimen/dp_24">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_book_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_303030"
                android:id="@+id/tv_review_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/color_909090"
                    android:id="@+id/tv_book_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="书评"/>
                <ImageView
                    android:id="@+id/iv_book_review_count"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:src="@drawable/icon_more_grey"
                    android:adjustViewBounds="true"
                    android:layout_toRightOf="@+id/tv_book_comment"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_303030"
                android:id="@+id/tv_read_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_909090"
                android:id="@+id/tv_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_303030"
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/color_909090"
                    android:id="@+id/tv_goto_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100人点评"
                    app:icon_height_right="@dimen/dp_12"
                    app:icon_normal_right="@drawable/icon_more_grey"
                    app:icon_width_right="@dimen/dp_12"
                    app:icon_with_text="true"/>
                <ImageView
                    android:id="@+id/iv_book_comment_count"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:src="@drawable/icon_more_grey"
                    android:adjustViewBounds="true"
                    android:layout_toRightOf="@+id/tv_goto_comment"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_2"
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16"/>
    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/color_303030"
        android:id="@+id/tv_simple_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="简介"
        android:layout_marginStart="@dimen/dp_26"/>
    <RelativeLayout
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/dp_24">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/color_303030"
            android:ellipsize="end"
            android:id="@+id/tv_book_info"
            android:paddingBottom="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="6"
            android:lineSpacingExtra="@dimen/dp_5"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/ly_more"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_book_info"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_145FB3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"/>
            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:src="@mipmap/ic_blue_more"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.ruffian.library.widget.RTextView
            android:textSize="14sp"
            android:textColor="@color/color_303030"
            android:gravity="center"
            android:id="@+id/tv_add_book"
            android:paddingLeft="@dimen/dp_24"
            android:paddingRight="@dimen/dp_24"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_24"
            android:text="加入书架"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginVertical="@dimen/dp_24"
            android:paddingHorizontal="@dimen/dp_24"
            app:background_normal="@color/white"
            app:border_color_normal="@color/color_eeeeee"
            app:border_width_normal="@dimen/dp_1"
            app:corner_radius="@dimen/dp_12"/>
        <com.ruffian.library.widget.RTextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_begin_read"
            android:paddingLeft="@dimen/dp_24"
            android:paddingRight="@dimen/dp_24"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_24"
            android:text="开始阅读"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginVertical="@dimen/dp_24"
            android:paddingHorizontal="@dimen/dp_24"
            app:background_normal="@color/color_F95843"
            app:border_width_normal="@dimen/dp_1"
            app:corner_radius="@dimen/dp_12"/>
    </LinearLayout>
</LinearLayout>
