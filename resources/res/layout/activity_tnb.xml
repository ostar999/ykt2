<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="?attr/tertiary_backgroup_white_color"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="11sp"
        android:textColor="@drawable/homepage_bottom_textcolor"
        android:gravity="center"
        android:id="@+id/home_tab1_nav"
        android:tag="mNavItemBank"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="题库"
        android:drawableTop="?attr/home_tab1"
        android:drawablePadding="5dp"
        android:layout_weight="1"/>
    <TextView
        android:textSize="11sp"
        android:textColor="@drawable/homepage_bottom_textcolor"
        android:gravity="center"
        android:id="@+id/home_tab2_nav"
        android:tag="mNavCurriculum"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="课程"
        android:drawableTop="?attr/home_tab2"
        android:drawablePadding="5dp"
        android:layout_weight="1"/>
    <TextView
        android:textSize="11sp"
        android:textColor="@drawable/homepage_bottom_textcolor"
        android:gravity="center"
        android:id="@+id/home_tab3_nav"
        android:tag="mNavPost"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="论坛"
        android:drawableTop="?attr/home_tab3"
        android:drawablePadding="5dp"
        android:layout_weight="1"/>
    <TextView
        android:textSize="11sp"
        android:textColor="@drawable/homepage_bottom_textcolor"
        android:gravity="center"
        android:id="@+id/home_tab4_nav"
        android:tag="mNavShoppingMall"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="商城"
        android:drawableTop="?attr/home_tab4"
        android:drawablePadding="5dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textSize="11sp"
            android:textColor="@drawable/homepage_bottom_textcolor"
            android:gravity="center"
            android:id="@+id/home_tab5_nav"
            android:tag="mNavMe"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的"
            android:drawableTop="?attr/home_tab5"
            android:drawablePadding="5dp"/>
        <ImageView
            android:id="@+id/imgcat"
            android:background="@drawable/red_round"
            android:visibility="invisible"
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/iv_message_new"
            android:background="@drawable/red_round"
            android:visibility="gone"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgcat"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/tv_chat_message"
            android:visibility="visible"
            android:text=""
            android:maxLines="1"
            android:includeFontPadding="false"
            android:contentDescription="@null"
            android:layout_alignStart="@+id/imgcat"
            style="@style/personal_top_unred_num_txt_style"/>
    </RelativeLayout>
</LinearLayout>
