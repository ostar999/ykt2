<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lineremen"
        android:background="?attr/app_bg"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center_vertical"
            android:background="?attr/app_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="?attr/app_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:background="?attr/bg_red"
                    android:layout_width="3dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/question_color"
                    android:id="@+id/group_nametv"
                    android:background="?attr/app_bg"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="最热评论"
                    android:paddingStart="0dp"
                    android:paddingEnd="3dp"
                    android:layout_marginStart="11dp"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp">
            <View
                android:background="#ffdd594a"
                android:visibility="gone"
                android:layout_width="3dp"
                android:layout_height="12dp"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/first_text_color"
                android:id="@+id/tv_restoration_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="补充内容"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="10sp"
                android:textColor="?attr/white_color"
                android:id="@+id/tv_restore_status"
                android:background="@drawable/question_restore_part_accept"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已采纳"
                android:includeFontPadding="false"
                android:layout_marginStart="8dp"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/color_vip"
                android:id="@+id/tv_vip_day"
                android:background="@drawable/ffc2af6d_2"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP+5天"
                android:includeFontPadding="false"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/first_text_color"
            android:ellipsize="end"
            android:id="@+id/tv_restoration_content"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:maxLines="3"
            android:layout_below="@+id/ll_one"
            android:lineSpacingExtra="10dp"/>
        <include
            android:id="@+id/myexptervew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/ll_one"
            app:maxExpandLines="3"
            layout="@layout/adapter_item"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/tertiary_text_color"
            android:ellipsize="end"
            android:id="@+id/tv_restoration_content_explin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/myexptervew"
            android:lineSpacingExtra="10dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/tv_restoration_content_explin">
            <com.psychiatrygarden.widget.CircleImageView
                android:id="@+id/iv_userhead"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/app_icon"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/nickanme"
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="nickname"
                android:maxLines="1"
                android:layout_weight="11"/>
            <TextView
                android:textSize="13sp"
                android:textColor="?attr/fourth_text_color"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022-12-23"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_accept_state"
            android:layout_width="56dp"
            android:layout_height="54dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/restore_list_no_accept"
            android:layout_alignParentRight="true"/>
        <View
            android:background="?attr/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/ll_two"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/threeview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/dominant_color"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_look_more"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全部采纳考点还原"
            android:drawablePadding="0dp"
            app:drawableEndCompat="@drawable/ic_red_rigth"/>
        <View
            android:background="?attr/line"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </LinearLayout>
</LinearLayout>
