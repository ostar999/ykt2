<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_preview"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="?attr/new_bg_one_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ly_progress"
                android:background="@drawable/download_progress_bg"
                android:visibility="visible"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true">
                <com.psychiatrygarden.widget.ProgressWheel
                    android:id="@+id/progress_wheel_download"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    app:matProg_barColor="?attr/loading_dialog_text_color"
                    app:matProg_barWidth="1dp"
                    app:matProg_progressIndeterminate="true"
                    app:matProg_rimWidth="1dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/loading_dialog_text_color"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/dialog_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="加载中"
                    android:maxLines="2"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
