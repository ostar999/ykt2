<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="?attr/gray_line_126"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:background="?attr/gray_line_126"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.psychiatrygarden.widget.AlphaButton
            android:textSize="14sp"
            android:textColor="?attr/question_color"
            android:id="@+id/view_wheeltime_cancel_btn"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="@string/cancel"
            android:layout_alignParentLeft="true"/>
        <com.psychiatrygarden.widget.AlphaButton
            android:textSize="14sp"
            android:textColor="?attr/question_color"
            android:id="@+id/view_wheeltime_sure_btn"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="@string/ok"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:background="?attr/gray_line_126"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="?attr/bg_backgroud"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.psychiatrygarden.widget.LoopView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center_vertical"
            android:id="@+id/view_label_picker_labels"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:colorBlack="?attr/question_color"
            app:font_color="?attr/item_school_color"
            app:font_hint_color="?attr/gray_line_126"/>
        <com.psychiatrygarden.widget.LoopView
            android:layout_gravity="center_vertical"
            android:id="@+id/view_label_picker_labels2"
            android:visibility="gone"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:colorBlack="?attr/question_color"
            app:font_color="?attr/item_school_color"
            app:font_hint_color="?attr/gray_line_126"/>
    </LinearLayout>
</LinearLayout>
