<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_head"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_16">
        <com.ruffian.library.widget.RImageView
            android:id="@+id/img_cover"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_64"
            android:src="@drawable/image_cover_default"
            android:scaleType="centerCrop"
            app:corner_radius="@dimen/dp_4"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_64"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/dp_12">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/color_303030"
                android:ellipsize="end"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_909090"
                android:id="@+id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.ruffian.library.widget.RTextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/tv_continue"
            android:layout_width="@dimen/dp_88"
            android:layout_height="@dimen/dp_28"
            android:text="继续阅读"
            app:background_normal="@color/color_dd594a"
            app:corner_radius="@dimen/dp_14"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/title_line"
            android:background="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_16"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_24"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_16">
        <LinearLayout
            android:gravity="start"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_303030"
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/color_303030"
                    android:id="@+id/tv_score_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"/>
            </LinearLayout>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_909090"
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:id="@+id/v_line"
            android:background="@color/color_eeeeee"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginRight="@dimen/dp_36"
            android:layout_marginHorizontal="@dimen/dp_36"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="11sp"
                    android:textColor="@color/color_909090"
                    android:id="@+id/tv_high_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高评价"/>
                <com.ykb.ebook.weight.RoundCornerProgressBar
                    android:id="@+id/high_comment_progress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_6"
                    android:layout_marginStart="@dimen/dp_8"
                    app:background_color="@color/color_f7f8fa"
                    app:progress_color="@color/color_dd594a"
                    app:progress_corner_radius="@dimen/dp_3"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginVertical="@dimen/dp_8">
                <TextView
                    android:textSize="11sp"
                    android:textColor="@color/color_909090"
                    android:id="@+id/tv_middle_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中评价"/>
                <com.ykb.ebook.weight.RoundCornerProgressBar
                    android:id="@+id/middle_comment_progress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_6"
                    android:layout_marginStart="@dimen/dp_8"
                    app:background_color="@color/color_f7f8fa"
                    app:progress_color="@color/color_dd594a"
                    app:progress_corner_radius="@dimen/dp_3"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="11sp"
                    android:textColor="@color/color_909090"
                    android:id="@+id/tv_low_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="低评价"/>
                <com.ykb.ebook.weight.RoundCornerProgressBar
                    android:id="@+id/low_comment_progress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_6"
                    android:layout_marginStart="@dimen/dp_8"
                    app:background_color="@color/color_f7f8fa"
                    app:progress_color="@color/color_dd594a"
                    app:progress_corner_radius="@dimen/dp_3"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_606060"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tv_pj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价本书："/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_pj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ruffian.library.widget.RTextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/tv_high"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:checked="true"
                    android:button="@null"
                    android:text="高评价"
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_weight="1"
                    android:paddingVertical="5dp"
                    app:background_normal="@color/color_f7f8fa"
                    app:background_selected="@color/color_15dd594a"
                    app:corner_radius="100dp"
                    app:icon_height="20dp"
                    app:icon_src_normal="@drawable/icon_good_review"
                    app:icon_width="20dp"
                    app:icon_with_text="true"
                    app:text_color_normal="@color/color_303030"
                    app:text_color_selected="@color/color_dd594a"/>
                <com.ruffian.library.widget.RTextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/tv_middle"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:button="@null"
                    android:text="中评价"
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/dp_8"
                    android:paddingVertical="5dp"
                    app:background_normal="@color/color_f7f8fa"
                    app:background_selected="@color/color_15dd594a"
                    app:corner_radius="100dp"
                    app:icon_height="@dimen/dp_20"
                    app:icon_src_normal="@drawable/icon_middle_review"
                    app:icon_width="@dimen/dp_20"
                    app:icon_with_text="true"
                    app:text_color_normal="@color/color_303030"
                    app:text_color_selected="@color/color_dd594a"/>
                <com.ruffian.library.widget.RTextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/tv_low"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:button="@null"
                    android:text="低评价"
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_weight="1"
                    android:paddingVertical="5dp"
                    app:background_normal="@color/color_f7f8fa"
                    app:background_selected="@color/color_15dd594a"
                    app:corner_radius="100dp"
                    app:icon_height="@dimen/dp_20"
                    app:icon_src_normal="@drawable/icon_low_review"
                    app:icon_width="@dimen/dp_20"
                    app:icon_with_text="true"
                    app:text_color_normal="@color/color_303030"
                    app:text_color_selected="@color/color_dd594a"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_comment_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="15dp">
            <ImageView
                android:id="@+id/imgLock"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:src="@drawable/icon_review_lock"
                android:scaleType="fitXY"
                android:layout_marginEnd="@dimen/dp_4"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_909090"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvReadCommentHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:background="@color/color_f7f8fa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"/>
</LinearLayout>
