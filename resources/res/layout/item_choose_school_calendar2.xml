<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layoutLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.psychiatrygarden.widget.DashedLineView
            android:layout_gravity="center_horizontal"
            android:id="@+id/line1"
            android:layout_width="@dimen/dp_3"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:ykbGapW="2dp"
            app:ykbLineStrokeW="0.7dp"
            app:ykbLinesColor="?attr/new_gray_line_color"
            app:ykbLinesW="2dp"/>
        <ImageView
            android:id="@+id/imgPoint"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:src="@drawable/icon_choose_school_calendar_point_gray_svg"/>
        <com.psychiatrygarden.widget.DashedLineView
            android:layout_gravity="center_horizontal"
            android:id="@+id/line2"
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_8"
            android:layout_weight="1"
            app:ykbGapW="2dp"
            app:ykbLineStrokeW="0.7dp"
            app:ykbLinesColor="?attr/new_gray_line_color"
            app:ykbLinesW="2dp"/>
    </LinearLayout>
    <RelativeLayout
        android:background="@drawable/shape_app_bg_corners_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:layout_toRightOf="@+id/layoutLeft"
        android:layout_marginStart="@dimen/dp_8">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/forth_txt_color"
            android:gravity="center"
            android:id="@+id/tvStatus"
            android:background="@drawable/shape_new_bg_two_color_round4"
            android:layout_width="@dimen/dp_24"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:text="已\10结\10束"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginVertical="@dimen/dp_4"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvStatus"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_8">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2026届考研初试择校"
                android:fontFamily="@font/poppins_medium"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/third_txt_color"
                android:id="@+id/tvTimeStr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:text="建议7月之前完成"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imgMore"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@drawable/icon_right_arrow_mo_kao"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_12"/>
    </RelativeLayout>
</RelativeLayout>
