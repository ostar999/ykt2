<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/gray_line_126"
    android:clickable="true"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="?attr/app_theme"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/app_title_color"
                android:id="@+id/tv_exam_day"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离考研？天"
                android:singleLine="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/app_title_color"
                android:id="@+id/txt_actionbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:singleLine="true"
                android:layout_centerInParent="true"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:id="@+id/tv_set"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/app_title_color"
                android:id="@+id/yejianmoshi"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <include layout="@layout/layout_mem_header"/>
        <RelativeLayout
            android:id="@+id/rl_gerenziliao"
            android:background="?attr/bg_backgroud"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人资料"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="8sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_gerenziliao"
                android:background="@drawable/red_round"
                android:visibility="gone"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="10dp"
                android:text="12"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/iv_gerenziliao"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/item_school_color"
                android:gravity="center_vertical"
                android:id="@+id/iv_gerenziliao"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:drawableRight="?attr/icon_indicator_right"
                android:drawablePadding="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:id="@+id/rl_my_mall"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的商城"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_mall_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/icon_indicator_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_mall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_mall_arrow"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_my_store"
            android:background="?attr/bg_backgroud"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的订单"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/gray_light"
                android:id="@+id/tv_my_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text=""
                android:maxLines="1"
                android:layout_toLeftOf="@+id/iv_my_store_arrow"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_my_store_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/icon_indicator_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/diuhuanma"
            android:background="?attr/bg_backgroud"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡券激活"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/gray_light"
                android:id="@+id/tv_duihuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text=""
                android:maxLines="1"
                android:layout_toLeftOf="@+id/iv_my"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/icon_indicator_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>
        <RelativeLayout
            android:id="@+id/rl_my_message"
            android:background="?attr/bg_backgroud"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的关注"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="8sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_my_message"
                android:background="@drawable/red_round"
                android:visibility="gone"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="10dp"
                android:text="12"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/iv_message_arrow"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_message_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/icon_indicator_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/rl_my_message_system"
            android:background="?attr/bg_backgroud"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:id="@+id/sts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的消息"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/system_red_dot"
                android:background="?attr/red_yuan"
                android:visibility="gone"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_message_arrow_system"
                android:layout_centerVertical="true"
                android:contentDescription="@null"/>
            <ImageView
                android:id="@+id/iv_message_arrow_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/icon_indicator_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/rl_my_chat"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的聊天"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_chat_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/icon_indicator_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/tv_chat_message"
                android:background="@drawable/shape_rounded_rectangle_red"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:minWidth="18dp"
                android:minHeight="15dp"
                android:text=""
                android:maxLines="1"
                android:includeFontPadding="false"
                android:layout_toLeftOf="@+id/iv_chat_arrow"
                android:layout_centerVertical="true"
                android:contentDescription="@null"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/rl_my_message_system1"
            android:background="?attr/bg_backgroud"
            android:padding="20dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:id="@+id/sts1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的评论"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/system_red_dot1"
                android:background="?attr/red_yuan"
                android:visibility="gone"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_message_arrow_system1"
                android:layout_centerVertical="true"
                android:contentDescription="@null"/>
            <TextView
                android:id="@+id/iv_message_arrow_system1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="?attr/icon_indicator_right"
                android:drawablePadding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/rl_my_guanzhu"
            android:background="@color/white"
            android:padding="20dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的下载"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_indicator_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"/>
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:id="@+id/rl_my_comment"
            android:background="@color/white"
            android:padding="20dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的评论"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_indicator_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/rl_comment_me"
            android:background="@color/white"
            android:padding="20dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论我的"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_experience_comment_new"
                android:background="@drawable/red_round"
                android:visibility="gone"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_comment_me"
                android:layout_centerVertical="true"
                android:contentDescription="@null"/>
            <ImageView
                android:id="@+id/iv_comment_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_indicator_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/rl_my_shoucang"
            android:background="@color/white"
            android:padding="20dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_indicator_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"/>
        <View
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:id="@+id/rl_set"
            android:background="?attr/bg_backgroud"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换题库"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/gray_light"
                android:id="@+id/tv_my_store1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text=""
                android:maxLines="1"
                android:layout_toLeftOf="@+id/iv_my_store_arrow1"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_my_store_arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/icon_indicator_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</ScrollView>
