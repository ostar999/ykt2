<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/list_child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/relchildview"
        android:background="?attr/list_child"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingRight="10dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_select"
            android:padding="6dp"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/check_box_bg"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="13sp"
            android:textColor="?attr/question_color"
            android:ellipsize="end"
            android:id="@+id/main_child_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="90dp"
            android:maxLines="2"
            android:layout_toLeftOf="@+id/lineview"
            android:layout_toRightOf="@+id/iv_select"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/font_com_list"
            android:id="@+id/cNumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_right"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lineview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_right"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="11sp"
                android:textColor="?attr/font_com_list"
                android:layout_gravity="right"
                android:id="@+id/main_child_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100é¢˜"/>
            <com.psychiatrygarden.widget.SpringProgressView
                android:id="@+id/spro_child"
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_right"
            android:background="?attr/icon_indicator_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
    </RelativeLayout>
    <View
        android:background="?attr/divider_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
