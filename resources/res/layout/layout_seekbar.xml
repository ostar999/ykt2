<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预估分"/>
        <TextView
            android:textSize="31sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="0"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/ly_trend"
            android:background="@drawable/shape_btn_light_red_radius_8"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignBottom="@+id/progress_view"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/img_trend"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:src="@drawable/ic_trend_up"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/main_theme_color"
                android:id="@+id/fraction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32"/>
        </LinearLayout>
    </LinearLayout>
    <com.psychiatrygarden.widget.arcseekbar.LineArcSeekBar
        android:id="@+id/lineArcSeekBar"
        android:clipChildren="false"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_280"
        app:arcEnabledDrag="false"
        app:arcEnabledSingle="false"
        app:arcEnabledSize="true"
        app:arcMax="600"
        app:arcNormalColor="#f6f6f6"
        app:arcStartAngle="155"
        app:arcStrokeWidth="2dp"
        app:arcSweepAngle="230"
        app:arcText="24年过考分%s"
        app:arcThumbColor="#ffffff"
        app:arcThumbRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.psychiatrygarden.widget.arcseekbar.ArcSeekBar
        android:id="@+id/arcSeekBar"
        android:padding="10dp"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_260"
        app:arcEnabledDrag="true"
        app:arcEnabledSingle="true"
        app:arcMax="600"
        app:arcNormalColor="#f6f6f6"
        app:arcNormalStrokeWidth="10dp"
        app:arcStartAngle="155"
        app:arcStrokeWidth="20dp"
        app:arcSweepAngle="230"
        app:arcThumbColor="#fdb93f"
        app:arcThumbRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.psychiatrygarden.widget.arcseekbar.LineArcSeekBar
        android:id="@+id/lineArcSeekBar2"
        android:clipChildren="false"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        app:arcEnabledDrag="false"
        app:arcEnabledSingle="false"
        app:arcMax="600"
        app:arcNormalColor="#f6f6f6"
        app:arcStartAngle="150"
        app:arcStrokeWidth="2dp"
        app:arcSweepAngle="240"
        app:arcText="及格分%s"
        app:arcThumbColor="#ffffff"
        app:arcThumbRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
