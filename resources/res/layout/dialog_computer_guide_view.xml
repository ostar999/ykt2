<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="start"
    android:orientation="horizontal"
    android:id="@+id/ly_view"
    android:background="#50000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ly_content"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="14dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/img_step"
            android:background="@mipmap/ic_computer_guide_step_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ly_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="51dp">
            <TextView
                android:textSize="13sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btn_skip"
                android:background="@drawable/shape_white_strok_13"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:text="跳过"
                android:layout_marginEnd="12dp"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@color/first_txt_color"
                android:gravity="center"
                android:id="@+id/btn_next"
                android:background="@drawable/shape_white_solid_13"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:text="下一步"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ly_content_last"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="199dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp">
            <TextView
                android:textSize="13sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btn_skip_last"
                android:background="@drawable/shape_white_strok_13"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:text="跳过"
                android:layout_marginEnd="12dp"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@color/first_txt_color"
                android:gravity="center"
                android:id="@+id/btn_next_last"
                android:background="@drawable/shape_white_solid_13"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:text="我知道啦"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@mipmap/ic_computer_guide_step_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</LinearLayout>
