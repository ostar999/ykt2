<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/fl_2_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_430">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/red_packet_coupon"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_13"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_285"
            android:layout_marginTop="@dimen/dp_140"
            android:paddingVertical="@dimen/dp_13">
            <androidx.recyclerview.widget.RecyclerView
                android:orientation="vertical"
                android:id="@+id/rvList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginHorizontal="@dimen/dp_14"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/main_theme_color"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_get"
        android:background="@drawable/bg_take_coupon_red_packet"
        android:layout_width="@dimen/dp_177"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_20"
        android:text="立即领取"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/ic_close_pop"/>
</LinearLayout>
