<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <View style="@style/line_style"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_background"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
        <TextView
            android:textColor="?attr/question_color"
            android:id="@+id/toupiaocontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投票内容"
            android:layout_centerVertical="true"/>
        <CheckBox
            android:gravity="center_vertical"
            android:id="@+id/check"
            android:background="@drawable/btn_selector_checkbox_single_night"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:button="@null"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/xuanze"
            android:visibility="gone"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_login_check_checked"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:id="@+id/lineduihao"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="14dp"
                android:id="@+id/duigou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/duigouc"/>
            <TextView
                android:textColor="?attr/question_color"
                android:id="@+id/baifenbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20%"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
