<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="?attr/identity_confirm_bg_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/tertiary_text_color"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="2022-12-25 12:52"/>
    <RelativeLayout
        android:background="@drawable/ffffffff_10"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/first_text_color"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下单通知"/>
        <View
            android:id="@+id/line"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_below="@+id/tv_title"
            style="@style/line_gray_style"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/secondary_text_color"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="同学你好，你购买的《商品名称商品名称商品名称》已经下单成功。"
            android:layout_toLeftOf="@+id/img_icon"
            android:layout_below="@+id/line"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/tertiary_text_color"
            android:id="@+id/tv_to_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:text="查看详情"
            android:drawablePadding="5dp"
            android:layout_below="@+id/tv_content"
            android:layout_alignParentLeft="true"
            app:drawableRightCompat="?attr/icon_indicator_right"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/app_icon"
            android:layout_below="@+id/line"
            android:layout_alignParentRight="true"
            app:riv_corner_radius="2dp"/>
    </RelativeLayout>
</LinearLayout>
