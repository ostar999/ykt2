<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="?attr/first_bg_color"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_left_backdetail"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>
        <TextView
            android:textSize="18sp"
            android:textColor="#ff2c2c2c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份验证"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_inreview"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginTop="60dp"
        android:src="@mipmap/verify_inreview"/>
    <TextView
        android:textSize="20sp"
        android:textColor="?attr/first_text_color"
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="已进入人工审核"/>
    <TextView
        android:textSize="17sp"
        android:textColor="?attr/fourth_text_color"
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="将在1-3个工作日完成审核，请耐心等待"/>
    <TextView
        android:textSize="19sp"
        android:textColor="?attr/first_text_color"
        android:gravity="center"
        android:id="@+id/tv_next"
        android:background="@drawable/fff2f2f2_25"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="90dp"
        android:text="返回"
        android:paddingStart="72dp"
        android:paddingEnd="72dp"/>
</LinearLayout>
