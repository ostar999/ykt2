<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/linrel"
    android:background="?attr/question_detail_select_tag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/first_text_color"
            android:gravity="center"
            android:id="@+id/titleTv"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择标签"/>
        <ImageView
            android:id="@+id/chose"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/ic_close_select_tag"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <GridView
        android:gravity="center_horizontal"
        android:id="@+id/gridview"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@color/transparent"
        android:horizontalSpacing="15dp"
        android:verticalSpacing="12dp"
        android:numColumns="2"
        android:paddingHorizontal="10dp"/>
    <TextView
        android:textColor="?attr/question_color"
        android:gravity="center"
        android:id="@+id/xuanzetijiao"
        android:background="?attr/toupiaobuttom"
        android:visibility="visible"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
