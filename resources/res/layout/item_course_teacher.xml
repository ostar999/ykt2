<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_teacher"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:layout_width="@dimen/dp_196"
    android:layout_height="@dimen/dp_90"
    android:layout_marginLeft="@dimen/dp_16"
    android:minHeight="@dimen/dp_74"
    android:paddingHorizontal="@dimen/dp_16">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.psychiatrygarden.widget.CircleImageView
            android:layout_gravity="start|center_vertical"
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:src="?attr/ic_avatar_def"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_marginStart="@dimen/dp_8">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:gravity="start|center_vertical"
                android:id="@+id/tv_name"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/third_txt_color"
                android:ellipsize="end"
                android:id="@+id/tv_description"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:background="?attr/new_bg_one_border_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"/>
</LinearLayout>
