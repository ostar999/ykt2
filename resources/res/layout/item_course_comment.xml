<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_16">
    <View
        android:id="@+id/line"
        android:background="?attr/new_bg_one_border_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvImg"/>
    <TextView
        android:textSize="@dimen/sp_13"
        android:textColor="?attr/third_txt_color"
        android:id="@+id/tv_course_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintStart_toStartOf="@+id/tv_hospital"
        app:layout_constraintTop_toBottomOf="@+id/tv_hospital"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_38"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        app:spanCount="3"/>
    <com.psychiatrygarden.widget.ReadMoreTextView
        android:textSize="@dimen/sp_16"
        android:textColor="?attr/first_txt_color"
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:lineHeight="@dimen/dp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_hospital"
        app:layout_constraintTop_toBottomOf="@+id/tv_course_name"
        app:trimLines="5"
        app:trimMode="trimModeLine"/>
    <com.psychiatrygarden.widget.NiceRatingBar
        android:layout_gravity="center"
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:nrb_rating="1"
        app:nrb_ratingStatus="Disable"
        app:nrb_starEmptyResource="?attr/ic_rating_star_not_select"
        app:nrb_starFullResource="?attr/ic_rating_star_select"
        app:nrb_starImageHeight="@dimen/dp_12"
        app:nrb_starImagePadding="@dimen/dp_7"
        app:nrb_starImageWidth="@dimen/dp_12"
        app:nrb_starTotal="5"/>
    <TextView
        android:textSize="@dimen/sp_10"
        android:textColor="?attr/third_txt_color"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_hospital"
        app:layout_constraintLeft_toRightOf="@+id/tv_hospital"/>
    <TextView
        android:textSize="@dimen/sp_10"
        android:textColor="?attr/third_txt_color"
        android:id="@+id/tv_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_user_name"
        app:layout_constraintTop_toBottomOf="@+id/rating_bar"/>
    <ImageView
        android:id="@+id/iv_vip"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_8"
        android:src="@drawable/vip_icon"
        app:layout_constraintBottom_toBottomOf="@+id/tv_user_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_user_name"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.psychiatrygarden.widget.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@drawable/avatar_def"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="?attr/normal_blue_color"
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
