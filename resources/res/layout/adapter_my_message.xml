<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/ffffffff_10"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/first_text_color"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_toLeftOf="@+id/ctime"
            android:layout_alignParentTop="true"
            android:lineSpacingMultiplier="1.2"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/tertiary_text_color"
            android:id="@+id/ctime"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
        <RelativeLayout
            android:id="@+id/rel_view"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/img"
            android:layout_below="@+id/title">
            <TextView
                android:textSize="15sp"
                android:textColor="?attr/tertiary_text_color"
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:maxLines="2"
                android:lineSpacingMultiplier="1.2"/>
            <TextView
                android:textColor="?attr/tertiary_text_color"
                android:id="@+id/tofrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <com.psychiatrygarden.widget.SkinGrakImagView
            android:id="@+id/img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/ctime"
            android:layout_alignTop="@+id/rel_view"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
