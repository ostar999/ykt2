<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nesview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bview">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recymenvip"
                    android:paddingTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_16"/>
                <RelativeLayout
                    android:id="@+id/ly_coupons"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginHorizontal="@dimen/dp_16">
                    <ImageView
                        android:id="@+id/img_triangle"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_6"
                        android:src="?attr/ic_member_coupons_down"
                        android:layout_alignParentStart="true"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_member_coupons_gradient_bg"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginTop="-1dp"
                        android:layout_below="@+id/img_triangle"
                        android:paddingHorizontal="@dimen/dp_12">
                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:src="?attr/ic_member_coupons_tips"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="?attr/first_txt_color"
                            android:ellipsize="end"
                            android:id="@+id/tv_coupons_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠券名称优惠券名称优惠券名称优惠券名称"
                            android:lines="1"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginEnd="@dimen/dp_32"/>
                        <TextView
                            android:textSize="@dimen/sp_10"
                            android:textColor="?attr/main_theme_color"
                            android:id="@+id/tv_coupons_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23：32：30后失效"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:textSize="13sp"
                android:textColor="#909090"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员规则"
                android:drawableRight="@drawable/suleimg"/>
            <View
                android:background="@color/fourth_line_backgroup_color"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/first_text_color"
                android:gravity="center"
                android:id="@+id/zxtqtv"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="尊享特权"
                android:includeFontPadding="false"
                android:drawableLeft="@drawable/select_vip_line_red"
                android:drawablePadding="7dp"
                android:layout_marginStart="16dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/videoviewid"
                android:background="@drawable/shape_vip_video_bg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">
                <com.psychiatrygarden.aliPlayer.widget.CustomAliPlayerView
                    android:id="@+id/aplibo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/privilegelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"/>
            <View
                android:background="@color/fourth_line_backgroup_color"
                android:layout_width="match_parent"
                android:layout_height="12dp"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/first_text_color"
                android:gravity="center"
                android:id="@+id/tqxqtv"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="特权详情"
                android:includeFontPadding="false"
                android:drawableLeft="@drawable/select_vip_line_red"
                android:drawablePadding="7dp"
                android:layout_marginStart="16dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/privilegedetaillist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"/>
            <View
                android:background="@color/fourth_line_backgroup_color"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/first_text_color"
                android:gravity="center"
                android:id="@+id/tqdbtv"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="特权对比"
                android:includeFontPadding="false"
                android:drawableLeft="@drawable/select_vip_line_red"
                android:drawablePadding="7dp"
                android:layout_marginStart="16dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tablayoutView"
                android:background="@drawable/tqvipbg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <View
                android:id="@+id/gzlineview"
                android:background="@color/fourth_line_backgroup_color"
                android:layout_width="match_parent"
                android:layout_height="12dp"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/first_text_color"
                android:gravity="center"
                android:id="@+id/hygutv"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="注意事项"
                android:includeFontPadding="false"
                android:drawablePadding="7dp"
                android:layout_marginStart="16dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gzrecyid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="28dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/btview"
            android:background="@color/white"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="16dp">
            <TextView
                android:textSize="10sp"
                android:textColor="#000000"
                android:id="@+id/kefu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服"
                android:drawableTop="@drawable/kf3img"
                android:drawablePadding="4dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="#090400"
                android:gravity="center"
                android:id="@+id/buttomviewtv"
                android:background="@drawable/shape_line_rote_bg"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="开通会员（续费）"
                android:layout_marginStart="18dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/btnlineview"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="18dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/xfantv"
                    android:background="@drawable/subtract"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="￥388续费1年"
                    android:layout_weight="1"
                    android:layout_marginEnd="-10dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/sjantv"
                    android:background="@drawable/subtract2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="￥388升级1年"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
