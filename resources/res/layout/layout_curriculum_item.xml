<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_app_bg_corners_8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_20">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_17"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="临床医学综合能力教材领读课程"
            android:maxLines="1"
            android:lineSpacingExtra="1.5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layoutDesc"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/statusTv"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_4"
                android:src="@drawable/load_lv_anim_new"
                android:scaleType="fitXY"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/secondary_text_color"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播课，2019-12-04"
                android:maxLines="1"
                android:drawablePadding="@dimen/dp_4"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/course_combine_flags_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15">
            <com.psychiatrygarden.utils.FlowLayout
                android:id="@+id/course_combine_flags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flowLayoutMaxLines="1"
                app:isLimit="true"/>
        </LinearLayout>
        <RelativeLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/layoutContent"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_alignTop="@+id/line"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/line"/>
            <LinearLayout
                android:gravity="right"
                android:orientation="vertical"
                android:id="@+id/line"
                android:paddingLeft="@dimen/dp_10"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">
                <TextView
                    android:textSize="@dimen/sp_11"
                    android:textStyle="bold"
                    android:textColor="?attr/main_theme_red_color"
                    android:id="@+id/buttonStartLearn"
                    android:background="@drawable/shape_main_theme_color_stroke_0_5_corners_8"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="5dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:text="开始学习"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="5dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="?attr/forth_txt_color"
                        android:id="@+id/originPrice"
                        android:paddingTop="@dimen/dp_6"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥699"
                        android:includeFontPadding="false"
                        android:paddingEnd="@dimen/dp_16"/>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:textColor="?attr/main_theme_red_color"
                        android:id="@+id/priceTv"
                        android:paddingTop="@dimen/dp_6"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥699"
                        android:includeFontPadding="false"/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="?attr/forth_txt_color"
                    android:id="@+id/numTv"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="已购1000人"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
