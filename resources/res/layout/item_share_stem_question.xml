<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_top_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_top_title"
            android:background="?attr/question_title_bg_color"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:textColor="?attr/question_title_color"
                android:id="@+id/questiondetails_tv_title"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsl"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_stem_content"
                android:paddingTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lineviewtype"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <View
                        android:id="@+id/verticaltv"
                        android:background="?attr/dominant_color"
                        android:layout_width="3.5dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/question_color"
                        android:id="@+id/typeStr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共用题干题"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="14dp"
                        app:layout_constraintBottom_toBottomOf="@+id/verticaltv"
                        app:layout_constraintStart_toEndOf="@+id/verticaltv"
                        app:layout_constraintTop_toTopOf="@+id/verticaltv"/>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/numdefault"
                        android:id="@+id/pagenumtv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1/23"
                        android:includeFontPadding="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:textSize="18sp"
                    android:textColor="?attr/question_color"
                    android:id="@+id/titletv"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.3"
                    android:paddingHorizontal="16dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_child_question"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_drag_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="?attr/bg_share_stem_part_top"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:background="?attr/app_bg"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <cn.webdemo.com.supporfragment.tablayout.MagicIndicator
                android:orientation="horizontal"
                android:id="@+id/magic_indicator"
                android:background="?attr/stem_question_drag_middle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <FrameLayout
                android:layout_width="10dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_left_part"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:src="?attr/bg_share_stem_part_left"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:layout_gravity="end|center_vertical"
                    android:id="@+id/iv_shadow_left"
                    android:visibility="gone"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:src="?attr/bg_share_stem_part_left_shadow"
                    android:rotation="180"/>
            </FrameLayout>
            <FrameLayout
                android:layout_gravity="end"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="?attr/bg_share_stem_part_right"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:id="@+id/iv_shadow_right"
                    android:visibility="gone"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:src="?attr/bg_share_stem_part_right_shadow"
                    android:rotation="180"/>
            </FrameLayout>
        </RelativeLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:background="?attr/app_bg"
            android:paddingTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</FrameLayout>
