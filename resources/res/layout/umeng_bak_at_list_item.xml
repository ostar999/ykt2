<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#393d46"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="45dp">
    <ImageView
        android:id="@+id/umeng_socialize_avatar_imv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="14dp"
        android:src="@drawable/umeng_socialize_default_avatar"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:id="@+id/umeng_socialize_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="Label"
        android:layout_toRightOf="@+id/umeng_socialize_avatar_imv"
        android:layout_centerVertical="true"/>
</RelativeLayout>
