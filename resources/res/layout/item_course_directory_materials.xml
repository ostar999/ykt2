<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_76"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginHorizontal="@dimen/dp_16"
    android:paddingVertical="@dimen/dp_16">
    <ImageView
        android:id="@+id/itemMaterialsImg"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:src="@drawable/ic_word"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:textColor="?attr/first_txt_color"
        android:ellipsize="end"
        android:id="@+id/itemMaterialsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2022年临床医学资料.txt"
        android:maxLines="1"
        android:layout_toRightOf="@+id/itemMaterialsImg"
        android:layout_marginStart="@dimen/dp_14"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="?attr/third_txt_color"
        android:id="@+id/itemMaterialsSize"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:text="24.5M"
        android:layout_toRightOf="@+id/itemMaterialsImg"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_14"/>
</RelativeLayout>
