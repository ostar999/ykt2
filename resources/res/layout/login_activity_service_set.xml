<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backImgv"
        android:padding="@dimen/dp_10"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:src="@drawable/clinic_back_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_006cff"
        android:id="@+id/saveTv"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_save"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingVertical="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="@+id/backImgv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backImgv"/>
    <TextView
        android:textSize="@dimen/sp_24"
        android:textStyle="bold"
        android:textColor="@color/c_121212"
        android:id="@+id/tipTv"
        android:paddingLeft="@dimen/dp_24"
        android:paddingTop="@dimen/dp_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_service_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backImgv"/>
    <com.noober.background.view.BLEditText
        android:textSize="@dimen/sp_14"
        android:textColorHint="@color/color_999"
        android:id="@+id/et"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_24"
        android:hint="@string/login_service_input"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:paddingHorizontal="@dimen/dp_8"
        app:bl_corners_radius="@dimen/dp_2"
        app:bl_stroke_color="@color/c_eeeeee"
        app:bl_stroke_width="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@+id/tipTv"/>
</androidx.constraintlayout.widget.ConstraintLayout>
