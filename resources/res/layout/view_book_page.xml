<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/page_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:id="@+id/vw_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/vw_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/vw_status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:gravity="bottom"
            android:id="@+id/ll_top"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/vw_status_bar">
            <TextView
                android:textSize="13sp"
                android:textColor="@color/color_909090"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/ll_bottom"
            app:layout_constraintTop_toBottomOf="@+id/ll_top">
            <com.ykb.ebook.weight.ContentTextView
                android:id="@+id/content_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:id="@+id/ll_permission"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/top_empty"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <View
                    android:id="@+id/v_bg"
                    android:background="@drawable/shape_translate_bg"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="vertical"
                    android:id="@+id/rv_bottom"
                    android:paddingLeft="@dimen/dp_24"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dp_24"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/ll_bottom"
            android:paddingLeft="@dimen/dp_24"
            android:paddingRight="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_24"
            app:layout_constraintBottom_toBottomOf="parent">
            <com.ykb.ebook.weight.BatteryView
                android:textSize="14sp"
                android:textColor="@color/color_909090"
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.ykb.ebook.weight.BatteryView
                android:textSize="14sp"
                android:textColor="@color/color_909090"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.ykb.ebook.weight.BatteryView
                android:textSize="14sp"
                android:textColor="@color/color_909090"
                android:id="@+id/tv_battery"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"/>
            <com.ykb.ebook.weight.BatteryWidget
                android:layout_gravity="center"
                android:id="@+id/battery_info"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_14"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:id="@+id/first_page"
        layout="@layout/activity_book_info"/>
    <include
        android:id="@+id/end_page"
        layout="@layout/activity_read_over"/>
</FrameLayout>
