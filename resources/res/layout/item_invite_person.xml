<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/pop_frame_backgroup_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp">
        <com.psychiatrygarden.widget.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ease_default_avatar"
            android:layout_marginEnd="8dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/img_auth"
                    android:visibility="gone"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/authentication_icon"
                    android:contentDescription="@null"
                    android:layout_marginStart="4dp"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="?attr/warn_color"
                    android:id="@+id/tv_status"
                    android:background="@drawable/invite_status_no_bg_shape"
                    android:paddingLeft="2dp"
                    android:paddingTop="1dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingHorizontal="2dp"
                    android:paddingVertical="1dp"/>
            </LinearLayout>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/fourth_text_color"
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/dominant_color"
                android:id="@+id/tv_vip_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+60"/>
            <TextView
                android:textSize="10sp"
                android:textColor="?attr/dominant_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="å¤©"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="?attr/gray_line_126"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
