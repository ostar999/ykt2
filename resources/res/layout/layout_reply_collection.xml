<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layoutRoot"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:contentInsetStart="0dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/dp_16">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/icon_black_back"
                android:contentDescription="@null"/>
            <TextView
                android:textSize="@dimen/sp_18"
                android:textColor="@color/color_303030"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/toolbar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="回复合集"
                android:maxLines="1"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_24"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/line"
        android:background="@color/color_1C2134"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/refresh_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlTextRefreshing="正在刷新数据中"
            app:srlTextRelease="松开立即刷新"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layoutItemRoot"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dp_16"
                    android:paddingVertical="@dimen/dp_16">
                    <com.ruffian.library.widget.RImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_2"
                        android:src="@drawable/personal_headimg_icon"
                        android:scaleType="centerCrop"
                        android:contentDescription="@null"
                        android:layout_marginEnd="@dimen/dp_8"
                        app:is_circle="true"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:textSize="12sp"
                                    android:textColor="@color/color_0062ba"
                                    android:id="@+id/tv_nick_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textSize="10sp"
                                        android:textColor="@color/color_909090"
                                        android:ellipsize="end"
                                        android:id="@+id/tv_hospital"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxWidth="@dimen/dp_140"
                                        android:maxLines="1"
                                        android:layout_marginEnd="12dp"/>
                                    <TextView
                                        android:textSize="10sp"
                                        android:textColor="@color/color_909090"
                                        android:id="@+id/tv_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                            <com.ruffian.library.widget.RTextView
                                android:textSize="14sp"
                                android:textColor="@color/color_909090"
                                android:id="@+id/tv_high_comment"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="高评价"
                                android:drawablePadding="@dimen/dp_2"
                                app:icon_height_left="@dimen/dp_16"
                                app:icon_normal_left="@drawable/icon_good_review"
                                app:icon_width_left="@dimen/dp_16"/>
                        </LinearLayout>
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/color_303030"
                            android:id="@+id/tv_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"/>
                        <com.ruffian.library.widget.RImageView
                            android:id="@+id/img_picture"
                            android:visibility="gone"
                            android:layout_width="@dimen/dp_140"
                            android:layout_height="@dimen/dp_140"
                            android:layout_marginTop="@dimen/dp_8"
                            android:src="@drawable/image_cover_default"
                            android:scaleType="centerCrop"
                            app:corner_radius="@dimen/dp_12"/>
                        <LinearLayout
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12">
                            <com.ruffian.library.widget.RTextView
                                android:textSize="12sp"
                                android:id="@+id/tv_support"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:text_color_normal="@color/color_bfbfbf"
                                app:text_color_selected="@color/color_81cb30"/>
                            <com.ruffian.library.widget.RTextView
                                android:textSize="12sp"
                                android:id="@+id/tv_opposition"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_24"
                                android:layout_marginRight="@dimen/dp_24"
                                android:layout_marginHorizontal="@dimen/dp_24"
                                app:text_color_normal="@color/color_bfbfbf"
                                app:text_color_selected="@color/color_dd594a"/>
                            <com.ruffian.library.widget.RTextView
                                android:textSize="12sp"
                                android:gravity="center"
                                android:id="@+id/tv_reply"
                                android:paddingLeft="@dimen/dp_6"
                                android:paddingRight="@dimen/dp_6"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_20"
                                android:paddingHorizontal="@dimen/dp_6"
                                app:background_normal="@color/color_0a000000"
                                app:corner_radius="@dimen/dp_100"
                                app:text_color_normal="@color/color_bfbfbf"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_newest"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/viewLine2"
            android:background="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/ll_write_reply"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:paddingHorizontal="@dimen/dp_16">
            <com.ruffian.library.widget.RImageView
                android:id="@+id/img_login_avatar"
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_34"
                android:src="@drawable/personal_headimg_icon"
                android:scaleType="centerCrop"
                app:is_circle="true"/>
            <com.ruffian.library.widget.RTextView
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_c2c6cb"
                android:gravity="center_vertical"
                android:id="@+id/tv_add_sp"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:text="写回复"
                android:drawablePadding="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_12"
                android:paddingHorizontal="@dimen/dp_12"
                app:background_normal="@color/color_f9fafb"
                app:corner_radius="@dimen/dp_18"
                app:icon_height="@dimen/dp_20"
                app:icon_src_normal="@drawable/icon_edit_sp"
                app:icon_width="@dimen/dp_20"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
