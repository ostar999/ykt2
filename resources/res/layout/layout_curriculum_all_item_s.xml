<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/icon_course_card_bg_new"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_18_">
    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/transparent"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/first_text_color"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_below="@+id/heji"
            android:lineSpacingExtra="1.2dp"
            android:lineSpacingMultiplier="1.2"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/course_combine_flags_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/titleTv">
            <com.psychiatrygarden.utils.FlowLayout
                android:id="@+id/course_combine_flags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleTv"
                app:flowLayoutMaxLines="1"
                app:isLimit="true"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyall"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_below="@+id/course_combine_flags_layout"
            android:overScrollMode="never"/>
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/relbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyall">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/third_txt_color"
                android:gravity="center_vertical"
                android:id="@+id/jidoortv"
                android:paddingTop="1.5dp"
                android:paddingBottom="1.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8门课程"
                android:includeFontPadding="false"
                android:layout_alignBottom="@+id/line"/>
            <ImageView
                android:id="@+id/imgopenbottom"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:src="?attr/imgopenbottom"
                android:scaleType="center"
                android:layout_toRightOf="@+id/jidoortv"
                android:layout_alignTop="@+id/jidoortv"/>
            <LinearLayout
                android:gravity="right"
                android:orientation="vertical"
                android:id="@+id/line"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true">
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/main_theme_red_color"
                    android:gravity="center_vertical"
                    android:id="@+id/priceTv"
                    android:paddingTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥699"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="?attr/forth_txt_color"
                    android:id="@+id/numTv"
                    android:paddingTop="1.5dp"
                    android:paddingBottom="1.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:background="?attr/new_bg_one_border_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_below="@+id/relbottom"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textColor="?attr/white_color02"
            android:gravity="center"
            android:id="@+id/heji"
            android:background="@drawable/shape_course_combine_flag_bg"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8_"
            android:layout_marginRight="@dimen/dp_20_"
            android:text="合集"
            android:includeFontPadding="false"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>
