<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout"
        android:background="?attr/buttom_bg"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="exitUntilCollapsed|scroll">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linepaxview"
                android:paddingTop="68dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="1.2">
                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/first_text_color"
                    android:gravity="center_vertical"
                    android:id="@+id/proTitle"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2023考研一课通（全年班）"
                    android:lineSpacingExtra="1.5dp"
                    android:lineSpacingMultiplier="1.5"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/secondary_text_color"
                    android:id="@+id/prodesc"
                    android:paddingTop="5.5dp"
                    android:paddingBottom="5.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="2023考研一课通包含教材领读课程、考点精讲课程程、重难点突破课程、考研英语课程、材领读课程"
                    android:lineSpacingExtra="1.5dp"
                    android:lineSpacingMultiplier="1.5"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:lineHeight="26dp"/>
                <RelativeLayout
                    android:id="@+id/relPrice"
                    android:paddingBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/tertiary_text_color"
                        android:id="@+id/pronum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3门课程"
                        android:includeFontPadding="false"
                        android:drawablePadding="6dp"
                        android:layout_alignBottom="@+id/linepewView"
                        android:layout_centerVertical="true"
                        app:drawableStartCompat="?attr/couseallimg"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/linepewView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/dominant_color"
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:id="@+id/proprice"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥6537"
                            android:includeFontPadding="false"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView
                            android:textSize="13sp"
                            android:textColor="?attr/tertiary_text_color"
                            android:layout_gravity="right"
                            android:id="@+id/pressTxt"
                            android:paddingTop="0.5dp"
                            android:paddingBottom="0.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="12223人购买"
                            android:includeFontPadding="false"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:background="?attr/fourth_line_backgroup_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"> &gt; 
                </View>
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:background="?attr/new_bg_one_color"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="pin">
                    <ImageView
                        android:id="@+id/nav_back"
                        android:layout_width="wrap_content"
                        android:layout_height="43.5dp"
                        android:src="?attr/ic_black_back"
                        android:layout_centerVertical="true"
                        android:paddingStart="16dp"
                        android:paddingEnd="20dp"/>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center"
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="43.5dp"
                        android:text="课程合集"
                        android:layout_centerHorizontal="true"/>
                    <View
                        android:background="?attr/fourth_line_backgroup_color"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/title"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:id="@+id/fid"
        android:background="?attr/app_bg"
        android:paddingBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <RelativeLayout
        android:gravity="center"
        android:layout_gravity="bottom"
        android:id="@+id/goumai_tv"
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llay_shiti"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10sp"
                android:textColor="?attr/first_text_color"
                android:gravity="center"
                android:id="@+id/services_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服"
                android:drawablePadding="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                app:drawableTopCompat="?attr/kefu"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/goumai"
                android:background="@drawable/shape_goods_action"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="立即购买"
                android:layout_marginEnd="15dp"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
