<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <View
        android:id="@+id/line"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_below="@+id/iv_book_img"
        style="@style/new_gray_line_style"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/second_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:maxLines="2"
            android:layout_below="@+id/tv_book_name"
            android:layout_toEndOf="@+id/iv_book_img"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toEndOf="@+id/iv_book_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_book_img"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_88"
            android:scaleType="centerCrop"
            android:layout_marginEnd="@dimen/dp_12"
            app:riv_corner_radius="@dimen/dp_4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_book_img"
            android:layout_toEndOf="@+id/iv_book_img">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_read_num"
                    android:visibility="gone"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="?attr/ic_book_read_people"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/third_txt_color"
                    android:id="@+id/tv_read_people_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="end|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_comment_num"
                    android:visibility="gone"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="?attr/ic_circle_item_comment"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/third_txt_color"
                    android:id="@+id/tv_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
