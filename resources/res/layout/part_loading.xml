<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/loadingView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_40">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/hide_sub_floor_content"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/second_txt_color"
            android:gravity="center"
            android:id="@+id/hide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="正在载入"
            android:drawablePadding="8dp"
            android:layout_centerInParent="true"/>
        <ProgressBar
            android:id="@+id/hide_pb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:indeterminateDrawable="?attr/progressBar"
            android:layout_toLeftOf="@+id/hide_text"
            android:layout_centerVertical="true"
            android:toDegrees="360"/>
    </RelativeLayout>
</LinearLayout>
