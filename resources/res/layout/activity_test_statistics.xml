<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/new_bg_one_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/rl_title"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="?attr/new_bg_one_color">
            <TextView
                android:textSize="14sp"
                android:id="@+id/tv_filtrate"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="?attr/ic_black_back"
                android:layout_centerVertical="true"
                android:contentDescription="@null"/>
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/first_txt_color"
                android:gravity="center"
                android:id="@+id/txt_actionbar_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_20"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_centerInParent="true"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="15dp"
                android:src="?attr/zhuanfaceshi"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/dp_16">
            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/totalfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:textSize="13dp"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/zongfenshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:background="?attr/gray_line_126"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/ly_title"/>
    <ExpandableListView
        android:id="@+id/elv_tiku_question"
        android:background="@color/transparent"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:groupIndicator="@null"
        android:childDivider="?attr/divider_color"
        android:divider="?attr/divider_color"
        android:dividerHeight="0.5dp"
        android:layout_below="@+id/view"
        android:headerDividersEnabled="false"/>
    <TextView
        android:textColor="?attr/question_color"
        android:gravity="center"
        android:id="@+id/shujujiazaizhong"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="数据加载中..."
        android:layout_below="@+id/view"/>
</RelativeLayout>
