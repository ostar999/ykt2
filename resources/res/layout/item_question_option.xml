<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_8"
    android:minHeight="@dimen/dp_38">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/QuestionOptions_item_img_select"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_2"
                    android:src="@drawable/icon_options_select_no"
                    android:layout_marginStart="@dimen/dp_8"/>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="?attr/first_txt_color"
                    android:gravity="center_vertical"
                    android:id="@+id/QuestionOptions_item_tv_content"
                    android:padding="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="20dp"
                    android:text=""
                    android:lineSpacingMultiplier="1.1"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/QuestionOptions_item_img_select"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/fl_img_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/QuestionOptions_item_img_select"
                android:layout_below="@+id/QuestionOptions_item_tv_content">
                <com.tencent.smtt.sdk.WebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:overScrollMode="never"/>
                <ImageView
                    android:id="@+id/optionimg"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/first_txt_color"
            android:layout_gravity="center"
            android:id="@+id/tv_correction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_8"/>
    </LinearLayout>
</LinearLayout>
