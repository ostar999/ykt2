<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_vertical"
        android:background="?attr/bg_backgroud"
        android:paddingTop="17dp"
        android:paddingRight="20dp"
        android:paddingBottom="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/uncheckvideo"
            android:paddingLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/uncheckvideo"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:id="@+id/mycollect_groups_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/mycollect_groups_tv_num"
            android:layout_toRightOf="@+id/uncheckvideo"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/black_font_new"
            android:id="@+id/share_num"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:drawableRight="?attr/font_com_list"
            android:layout_alignRight="@+id/course_img"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/font_com_list"
            android:id="@+id/mycollect_groups_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/course_img"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/course_x"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
