<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_comment"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/include_title_relative"
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/include_btn_left"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="?attr/ic_black_back"
            android:layout_centerVertical="true"
            android:paddingStart="15dp"
            android:paddingEnd="22dp"/>
        <ImageView
            android:id="@+id/include_btn_right"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingStart="22dp"
            android:paddingEnd="15dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:id="@+id/include_btn_right_tv"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/include_title_layout"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <com.psychiatrygarden.widget.CircleImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/header_title_img"
                android:visibility="gone"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/schooldefaultimg"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/first_txt_color"
                android:layout_gravity="center_vertical"
                android:id="@+id/include_title_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/include_title_center_iv"
                android:visibility="gone"
                android:layout_width="10dp"
                android:layout_height="5dp"
                android:src="@drawable/bg_title_open_arrow"
                android:layout_marginStart="3dp"/>
        </LinearLayout>
        <TextView
            android:textSize="10sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/comment_lou"
            android:background="@drawable/stoke_kongwrite"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="楼主"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/delete_img"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/deletevideo"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="15sp"
            android:textColor="?attr/title_bar_text_color"
            android:id="@+id/deleteTxt"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/pinglunlog"
            android:padding="15dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/tishi"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
        <LinearLayout
            android:id="@+id/lineselect"
            android:background="?attr/bondline"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true">
            <CheckedTextView
                android:textSize="13sp"
                android:textColor="@drawable/text_new_color"
                android:gravity="center"
                android:id="@+id/remen"
                android:background="@drawable/hot_select_bg"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="热门"/>
            <View
                android:background="?attr/select_line_new"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <CheckedTextView
                android:textSize="13sp"
                android:textColor="@drawable/text_new_color"
                android:gravity="center"
                android:id="@+id/zuixin"
                android:background="@drawable/latest_select_bg"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新"/>
        </LinearLayout>
    </RelativeLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mSwipeLayput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_topic_detail_bottom"
        android:layout_below="@+id/include_title_relative">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/empty_view"
                android:visibility="gone"
                layout="@layout/layout_empty_view"/>
            <com.psychiatrygarden.widget.PinnedSectionListView1
                android:id="@+id/pinnedSectionListView1"
                android:scrollbars="none"
                android:fadingEdge="none"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@color/transparent"
                android:divider="@null"
                android:dividerHeight="0dp"/>
        </LinearLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <RelativeLayout
        android:id="@+id/rl_topic_detail_bottom"
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:id="@+id/view_topic_detail_divider"
            android:background="?attr/gray_line_126"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:background="?attr/bg_backgroud"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_topic_detail_divider"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">
            <RelativeLayout
                android:id="@+id/relksd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">
                <LinearLayout
                    android:id="@+id/ly_iv_topic_detail_msg"
                    style="@style/layout_icon_style">
                    <ImageView
                        android:id="@+id/iv_topic_detail_msg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="?attr/question_msg"/>
                    <TextView
                        android:text="评论"
                        style="@style/layotu_textview_icon_style"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_iv_topic_detail_zan"
                    android:visibility="gone"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="0dp"
                    android:layout_toEndOf="@+id/ly_iv_topic_detail_msg"
                    style="@style/layout_icon_style">
                    <ImageView
                        android:id="@+id/iv_topic_detail_zan"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="?attr/dianzancourse"/>
                    <TextView
                        android:text="点赞"
                        style="@style/layotu_textview_icon_style"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/line_txt_color"
                android:gravity="center_vertical"
                android:id="@+id/tv_topic_detail_add_comment"
                android:background="?attr/line_all_round"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="写评论"
                android:drawablePadding="5dp"
                android:layout_centerVertical="true"
                android:paddingStart="15dp"
                android:layout_toStartOf="@+id/relksd"
                app:drawableStartCompat="?attr/icon_write_comment"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lineselect2"
        android:background="@drawable/shape_hot_new_bg"
        android:padding="1dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/include_title"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true">
        <CheckedTextView
            android:textSize="@dimen/sp_11"
            android:textColor="@drawable/text_new2_color"
            android:gravity="center"
            android:id="@+id/remen2"
            android:background="@drawable/hot_select_bg"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="最热"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>
        <CheckedTextView
            android:textSize="@dimen/sp_11"
            android:textColor="@drawable/text_new2_color"
            android:gravity="center"
            android:id="@+id/zuixin2"
            android:background="@drawable/latest_select_bg"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/reltransview"
        android:background="@drawable/sanjiaoimg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <TextView
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热评功能已升级"
                android:drawablePadding="10dp"
                android:layout_centerVertical="true"
                app:drawableStartCompat="@drawable/notisimg"/>
            <TextView
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:id="@+id/catview"
                android:background="@drawable/hotshape2"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看升级版"
                android:layout_centerVertical="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
