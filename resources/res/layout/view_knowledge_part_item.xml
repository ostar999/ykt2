<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ly_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/first_txt_color"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一部分"
            android:paddingStart="@dimen/dp_8"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/first_txt_color"
            android:gravity="center"
            android:id="@+id/tv_all_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/first_txt_color"
            android:gravity="center"
            android:id="@+id/tv_study_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="134"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/first_txt_color"
            android:gravity="center"
            android:id="@+id/tv_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80%"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/ly_right_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_11"
                android:textColor="@color/first_txt_color"
                android:gravity="center"
                android:id="@+id/tv_right_percent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0%"
                android:layout_weight="1"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/ic_arrow_right_new_day"/>
    </LinearLayout>
    <View
        android:background="@color/new_gray_line_color"
        style="@style/new_gray_line_style"/>
</LinearLayout>
