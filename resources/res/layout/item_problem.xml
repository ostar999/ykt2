<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:paddingHorizontal="@dimen/dp_16">
    <TextView
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:textColor="?attr/first_txt_color"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="?attr/second_txt_color"
        android:id="@+id/tv_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="App内考点顺序/考点乱序/历年真题下题目的答题记录是互通的，即在考点顺序作答后，在考点乱序和历年真题下的该题也会同步显示答案; 同理，在历年真题清除答题记录后 (重做)考点顺序和考点乱序下的该题也会被清除 (重做) 。"
        android:lineHeight="@dimen/dp_24"/>
    <View
        android:background="?attr/new_bg_one_border_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
