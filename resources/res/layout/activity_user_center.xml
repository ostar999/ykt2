<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/new_bg_one_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:background="?attr/new_bg_two_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="exitUntilCollapsed|scroll">
            <com.psychiatrygarden.widget.glideUtil.GlideImageView
                android:id="@+id/backimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="1"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="pin">
                    <com.psychiatrygarden.widget.glideUtil.GlideImageView
                        android:id="@+id/icon_left_back"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:src="?attr/ic_black_back"
                        android:scaleType="centerInside"/>
                    <com.psychiatrygarden.widget.glideUtil.GlideImageView
                        android:id="@+id/icon_remove_member"
                        android:visibility="gone"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/jmui_chat_detail"
                        android:scaleType="centerInside"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="end|center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/liner1"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="?attr/first_text_color"
                        android:id="@+id/cusbianji"
                        android:background="@drawable/shape_round_a4a1a0"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="编辑"/>
                    <TextView
                        android:textColor="?attr/new_bg_one_color"
                        android:gravity="center"
                        android:id="@+id/cusrenzheng"
                        android:background="@drawable/shape_app_theme_corners_8"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="认证"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/liner2"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="?attr/secondary_text_color"
                        android:gravity="center"
                        android:id="@+id/tv_sixinimg"
                        android:background="@drawable/shape_round_a4a1a0"
                        android:visibility="visible"
                        android:layout_width="56dp"
                        android:layout_height="26dp"
                        android:layout_marginRight="10dp"
                        android:text="私信"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="?attr/new_bg_one_color"
                        android:gravity="center"
                        android:id="@+id/tv_guanzhuimg"
                        android:background="@drawable/shape_app_theme_corners_8"
                        android:layout_width="56dp"
                        android:layout_height="26dp"
                        android:text="关注"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="博士后"/>
                <ImageView
                    android:id="@+id/seximg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/male_icon"/>
                <ImageView
                    android:id="@+id/isvipimg"
                    android:layout_width="18sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/vipimg"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/tertiary_text_color"
                    android:ellipsize="end"
                    android:id="@+id/identity_judged_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首都医科大学附属北京同仁医院首都医科大学附属北京同仁医院"
                    android:lines="1"
                    android:layout_weight="1"/>
                <View
                    android:id="@+id/view_line"
                    android:background="?attr/user_info_divider"
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/tertiary_text_color"
                    android:ellipsize="end"
                    android:id="@+id/schoolname"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="本科院校:  北京大学"
                    android:lines="1"/>
            </LinearLayout>
            <TextView
                android:textSize="13sp"
                android:textColor="?attr/tertiary_text_color"
                android:gravity="center_vertical"
                android:id="@+id/identity_description"
                android:paddingLeft="20dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/ly_identity"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginHorizontal="16dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/ly_yellow_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_yellow_v"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/tertiary_text_color"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_yellow_identity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/ly_blue_identity"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_blue_v"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/tertiary_text_color"
                        android:id="@+id/tv_blue_identity"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/lineview"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/tertiary_text_color"
                    android:id="@+id/guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0关注"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/tertiary_text_color"
                    android:id="@+id/beiguanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0被关注"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/tertiary_text_color"
                    android:id="@+id/tv_get_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0获赞"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/shape_personal_info_bg"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="16dp"
                android:paddingVertical="8dp">
                <LinearLayout style="@style/person_info_layout_style">
                    <TextView
                        android:id="@+id/tv_tips"
                        android:text="0"
                        style="@style/person_info_text_num_style"/>
                    <TextView
                        android:text="帖子"
                        style="@style/person_info_text_style"/>
                </LinearLayout>
                <LinearLayout style="@style/person_info_layout_style">
                    <TextView
                        android:id="@+id/tv_red"
                        android:text="0"
                        style="@style/person_info_text_num_style"/>
                    <TextView
                        android:text="阅读"
                        style="@style/person_info_text_style"/>
                </LinearLayout>
                <LinearLayout style="@style/person_info_layout_style">
                    <TextView
                        android:id="@+id/tv_like"
                        android:text="0"
                        style="@style/person_info_text_num_style"/>
                    <TextView
                        android:text="点赞"
                        style="@style/person_info_text_style"/>
                </LinearLayout>
                <LinearLayout style="@style/person_info_layout_style">
                    <TextView
                        android:id="@+id/tv_comment"
                        android:text="0"
                        style="@style/person_info_text_num_style"/>
                    <TextView
                        android:text="评论"
                        style="@style/person_info_text_style"/>
                </LinearLayout>
                <LinearLayout style="@style/person_info_layout_style">
                    <TextView
                        android:id="@+id/tv_collection"
                        android:text="0"
                        style="@style/person_info_text_num_style"/>
                    <TextView
                        android:text="收藏"
                        style="@style/person_info_text_style"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="?attr/person_info_color"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <RelativeLayout
                android:id="@+id/rl_comment_tiku"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="?attr/first_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="题库评论"
                    android:maxLines="1"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_comment_tiku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="?attr/icon_indicator_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textColor="?attr/tertiary_text_color"
                    android:id="@+id/mycommnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/iv_comment_tiku"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:background="?attr/fourth_line_backgroup_color"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:id="@+id/rl_comment_jingyan"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="?attr/first_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经验评论"
                    android:maxLines="1"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_comment_jingyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="?attr/icon_indicator_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textColor="?attr/tertiary_text_color"
                    android:id="@+id/myjingyannum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/iv_comment_jingyan"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:background="?attr/fourth_line_backgroup_color"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:id="@+id/rl_comment_kecheng"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="?attr/first_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帖子评论"
                    android:maxLines="1"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/iv_comment_kecheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="?attr/icon_indicator_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textColor="?attr/tertiary_text_color"
                    android:id="@+id/mytiezinum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/iv_comment_kecheng"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:background="?attr/fourth_line_backgroup_color"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/ly_user_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_anchor="@+id/appbar"
        app:layout_anchorGravity="bottom">
        <com.psychiatrygarden.widget.CircleImageView
            android:id="@+id/avaimg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/app_icon"
            android:scaleType="centerCrop"
            app:border_color="?attr/white_color"
            app:border_width="0.5dp"/>
        <com.psychiatrygarden.widget.CircleImageView
            android:id="@+id/jiav"
            android:visibility="gone"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:src="?attr/jiav"
            android:scaleType="centerCrop"
            android:layout_alignRight="@+id/avaimg"
            android:layout_alignBottom="@+id/avaimg"/>
        <ImageView
            android:id="@+id/verimg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/authimg"
            android:layout_alignRight="@+id/avaimg"
            android:layout_alignBottom="@+id/avaimg"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
