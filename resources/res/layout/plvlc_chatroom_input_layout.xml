<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#1a1b1f"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="56dp">
    <ImageView
        android:id="@+id/plvlc_iv_show_point_reward"
        android:visibility="gone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/plvlc_iv_show_point_reward"/>
    <com.easefun.polyv.livecommon.ui.widget.gif.GifEditText
        android:textSize="16sp"
        android:textColor="#adadc0"
        android:textColorHint="#494a56"
        android:id="@+id/input_et"
        android:background="@drawable/plvlc_et_chat_corner"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:hint="我也来聊几句"
        android:singleLine="true"
        android:maxLength="200"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:imeOptions="flagNoFullscreen|actionSend"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/right_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/toggle_emoji_iv"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/plvlc_chatroom_btn_emoji_toggle"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/toggle_more_iv"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/plvlc_chatroom_btn_more_toggle"/>
    </LinearLayout>
</LinearLayout>
