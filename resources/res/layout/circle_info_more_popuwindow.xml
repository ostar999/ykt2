<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_mian"
    android:background="@drawable/bg_pop_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_top_indicator"
        android:layout_width="39dp"
        android:layout_height="6dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/bg_pop_bottom_btn"/>
    <com.lxj.xpopup.widget.VerticalRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/sp_16"
        android:textColor="?attr/first_txt_color"
        android:gravity="center"
        android:id="@+id/tv_comment_cancel"
        android:background="@drawable/bg_pop_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_margin="@dimen/dp_16"
        android:text="取消"
        android:layout_below="@+id/recyclerView"/>
</LinearLayout>
