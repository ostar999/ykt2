<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="?attr/app_theme"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/include_btn_left"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="?attr/icon_back"
            android:layout_centerVertical="true"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"/>
        <com.psychiatrygarden.widget.NavigationTabStrip
            android:layout_gravity="center"
            android:id="@+id/nts_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_toStartOf="@+id/include_btn_right"
            android:layout_toEndOf="@+id/include_btn_left"
            app:nts_active_color="?attr/app_title_color"
            app:nts_color="?attr/app_title_color"
            app:nts_corners_radius="0dp"
            app:nts_factor="1"
            app:nts_gravity="bottom"
            app:nts_inactive_color="?attr/jianbai"
            app:nts_titles="@array/titles"
            app:nts_weight="2dp"/>
        <ImageView
            android:id="@+id/include_btn_right"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_left_back"
            android:layout_centerVertical="true"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
