<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/new_bg_two_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_app_bg_radius12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56"
                    android:paddingHorizontal="@dimen/dp_16">
                    <TextView
                        android:textColor="?attr/first_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货人"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>
                    <EditText
                        android:textSize="14sp"
                        android:textColor="?attr/first_text_color"
                        android:textColorHint="?attr/forth_txt_color"
                        android:gravity="start|center_vertical"
                        android:id="@+id/tv_shouhuoren"
                        android:background="@null"
                        android:paddingLeft="5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:hint="填写收货人"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"/>
                </LinearLayout>
                <View
                    android:background="?attr/new_bg_one_border_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56"
                    android:paddingHorizontal="@dimen/dp_16">
                    <TextView
                        android:textColor="?attr/first_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>
                    <EditText
                        android:textSize="14sp"
                        android:textColor="?attr/first_txt_color"
                        android:textColorHint="?attr/forth_txt_color"
                        android:gravity="start|center_vertical"
                        android:id="@+id/tv_phone"
                        android:background="@null"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:hint="请填写收货人手机号"
                        android:layout_weight="1"
                        android:inputType="phone"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_app_bg_radius12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/r3"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56"
                    android:paddingHorizontal="@dimen/dp_16">
                    <TextView
                        android:textColor="?attr/first_text_color"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="所在地区"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="?attr/first_txt_color"
                        android:textColorHint="?attr/forth_txt_color"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_select_address"
                        android:background="@null"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:hint="选择地区"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="?attr/arrow_right"/>
                </LinearLayout>
                <View
                    android:background="?attr/new_bg_one_border_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_56"
                    android:paddingHorizontal="@dimen/dp_16">
                    <TextView
                        android:textColor="?attr/first_text_color"
                        android:gravity="center"
                        android:id="@+id/tt1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="详细地址"/>
                    <EditText
                        android:textSize="14sp"
                        android:textColor="?attr/first_text_color"
                        android:textColorHint="?attr/write_comment_hint"
                        android:gravity="center_vertical"
                        android:id="@+id/tt2"
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:hint="请输入详细地址"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/r5"
                android:background="@drawable/bg_app_bg_radius12"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:paddingHorizontal="@dimen/dp_16">
                <TextView
                    android:textColor="?attr/first_text_color"
                    android:gravity="center"
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="邮政编码"/>
                <EditText
                    android:textSize="14sp"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/forth_txt_color"
                    android:id="@+id/tv_post_code"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:hint="填写邮政编码"
                    android:layout_weight="1"
                    android:inputType="number"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_set_default"
                android:background="@drawable/bg_app_bg_radius12"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:paddingHorizontal="@dimen/dp_16">
                <TextView
                    android:textColor="?attr/first_text_color"
                    android:gravity="start|center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="设为默认地址"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_default"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="?attr/ic_circle_anonymous_single_not_select"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:padding="@dimen/dp_9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58">
        <TextView
            android:enabled="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_save"
            android:background="@drawable/red_round_coner_color_f95843_radius_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:text="保存"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
