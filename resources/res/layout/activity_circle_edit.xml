<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/include_title"
        layout="@layout/include_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_item_padding"
        android:layout_below="@+id/include_title">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_edit_topic_title"
            android:background="@color/color_white"
            android:padding="@dimen/content_item_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/content_text_size"
                android:gravity="center"
                android:id="@+id/tv_edit_classify"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/classify_label"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_edit_arraw_classify"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_arrow_down"
                android:layout_marginStart="@dimen/content_item_padding_small"/>
            <EditText
                android:textSize="@dimen/content_text_size"
                android:id="@+id/et_edit_topic_title"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_title_hint"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:layout_marginStart="@dimen/content_item_padding_small"/>
        </LinearLayout>
        <View
            android:id="@+id/view_edit_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_item_padding_small"
            android:layout_below="@+id/ll_edit_topic_title"/>
        <EditText
            android:textSize="@dimen/content_text_size"
            android:gravity="top|left"
            android:id="@+id/et_edit_topic_content"
            android:background="@color/color_white"
            android:padding="@dimen/content_item_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_content_hint"
            android:maxLines="6"
            android:lines="6"
            android:layout_below="@+id/view_edit_divider"
            android:textCursorDrawable="@drawable/shape_edit_cursor"/>
    </RelativeLayout>
</RelativeLayout>
