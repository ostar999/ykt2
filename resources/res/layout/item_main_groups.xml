<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/main_groups_layout"
        android:background="?attr/bg_backgroud"
        android:paddingLeft="10dp"
        android:paddingTop="17dp"
        android:paddingRight="10dp"
        android:paddingBottom="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_select"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/check_box_bg"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="15sp"
            android:textColor="?attr/question_color"
            android:ellipsize="end"
            android:id="@+id/main_groups_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="生物化学"
            android:maxLines="2"
            android:layout_toLeftOf="@+id/llay_progress_view"
            android:layout_toRightOf="@+id/iv_select"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/font_com_list"
            android:id="@+id/gnumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/llay_progress_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/font_com_list"
                android:layout_gravity="right"
                android:id="@+id/main_groups_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100题"/>
            <com.psychiatrygarden.widget.SpringProgressView
                android:id="@+id/spring_progress_view"
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_indicator_bottom"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/font_com_list"
            android:gravity="center"
            android:id="@+id/main_groups_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:background="?attr/divider_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
