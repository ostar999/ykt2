<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/allview"
    android:background="#20000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linview"
        android:background="@drawable/background_view_rounded_top"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/relda"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/tjline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/question_color"
                    android:id="@+id/scoreStr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150分"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp">
                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="?attr/gufendui"/>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/green_child"
                        android:gravity="center"
                        android:id="@+id/rightNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="150"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp">
                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="?attr/gufencuo"/>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/red_child"
                        android:gravity="center"
                        android:id="@+id/wrongNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="15"/>
                </LinearLayout>
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/red_child"
                    android:id="@+id/seeWrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="只看错题"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/reljj"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/tijiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:id="@+id/tijiaoimg"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/gufenjh"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/gray_light_new"
                    android:id="@+id/jiaojuans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="交卷"/>
            </LinearLayout>
            <TextView
                android:textColor="?attr/question_color"
                android:id="@+id/timerstrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="145:30"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/linelbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <TextView
                    android:textSize="14dp"
                    android:textColor="?attr/question_color"
                    android:gravity="center"
                    android:id="@+id/cuspos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-1dp"
                    android:text="123/165"
                    android:drawableLeft="?attr/gufenlb"
                    android:drawablePadding="5dp"/>
            </LinearLayout>
        </RelativeLayout>
        <GridView
            android:id="@+id/gridView1"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="7"
            android:layout_below="@+id/rel"/>
        <View
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
</RelativeLayout>
