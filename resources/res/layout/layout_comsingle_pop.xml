<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/bg_backgroud"
    android:paddingLeft="10dp"
    android:paddingTop="15dp"
    android:paddingRight="10dp"
    android:paddingBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/float_bg"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="特别提醒"
            android:drawableLeft="@drawable/tanhao2"
            android:drawablePadding="5dp"/>
        <TextView
            android:textColor="?attr/question_color"
            android:gravity="center"
            android:id="@+id/text"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="为确保数据真实可靠，仅对考生第一次作答成绩进行排名分析，请勿必认真对待！"
            android:lineSpacingExtra="1.5dp"/>
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/mclick"
            android:background="@drawable/linetype3"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="我知道了"/>
    </LinearLayout>
</RelativeLayout>
