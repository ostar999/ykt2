<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp">
        <com.psychiatrygarden.widget.CircleImageView
            android:layout_gravity="center"
            android:id="@+id/iconheader"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:src="?attr/personal_headimg_icon"/>
        <TextView
            android:textSize="15sp"
            android:textColor="?attr/first_txt_color"
            android:layout_gravity="center"
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:text="xxx"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/third_txt_color"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:text="有效证件"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/first_txt_color"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="**********"/>
        </LinearLayout>
        <View style="@style/new_gray_line_style"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/third_txt_color"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:text="考试科目"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/first_txt_color"
                android:gravity="center_vertical"
                android:id="@+id/tv_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="模考所在科目"/>
        </LinearLayout>
        <View style="@style/new_gray_line_style"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/third_txt_color"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:text="试卷名称"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/first_txt_color"
                android:gravity="center_vertical"
                android:id="@+id/tv_test_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="模考所在科目"/>
        </LinearLayout>
        <View style="@style/new_gray_line_style"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/third_txt_color"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="试卷题量"
                android:layout_marginVertical="4dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/first_txt_color"
                android:gravity="center_vertical"
                android:id="@+id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200道"/>
        </LinearLayout>
        <View style="@style/new_gray_line_style"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/third_txt_color"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="总分"
                android:layout_marginVertical="4dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/first_txt_color"
                android:gravity="center_vertical"
                android:id="@+id/tv_all_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="150分"/>
        </LinearLayout>
        <View style="@style/new_gray_line_style"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/computer_statistics_top_end_color"
            android:gravity="center"
            android:id="@+id/btn_join_test"
            android:background="@drawable/shape_new_fail_color_12"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="28dp"
            android:text="确认"/>
        <TextView
            android:textSize="13sp"
            android:textColor="?attr/main_theme_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="4dp"
            android:text="温馨提示"/>
        <TextView
            android:textSize="13sp"
            android:textColor="?attr/default_choosed_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="1、机考模拟系统无需输入考生信息，点击“进入考试”即可参加考试。"/>
        <TextView
            android:textSize="13sp"
            android:textColor="?attr/default_choosed_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2、真实考试需要输入最真实考生信息访客进入考试。"/>
        <TextView
            android:textSize="13sp"
            android:textColor="?attr/default_choosed_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="3、本考试为模拟考试流程，最终规则以正式考试为准。"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
