            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/common_line"/>
        <TextView
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:textColor="@color/c_173a8e"
            android:gravity="center"
            android:id="@+id/fiveTv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="@string/me_integral_scorc"
            android:paddingEnd="@dimen/dp_6"/>
        <ImageView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/common_line"/>
        <TextView
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:textColor="@color/c_173a8e"
            android:gravity="center"
            android:id="@+id/sixTv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="@string/me_get_money"
            android:paddingEnd="@dimen/dp_6"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/rightFl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/leftLl"
        app:layout_constraintTop_toBottomOf="@+id/titleCl">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/me_user_bg1"
            android:layout_width="@dimen/dp_380"
            android:layout_height="@dimen/dp_180"
            android:layout_marginTop="@dimen/dp_64"
            android:layout_marginStart="@dimen/dp_94">
            <ImageView
                android:id="@+id/userImgv"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_marginBottom="@dimen/dp_30"
                android:src="@drawable/common_user_icon"
                android:layout_marginStart="@dimen/dp_30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:enabled="false"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:textColor="@color/c_173a8e"
                android:ellipsize="end"
                android:id="@+id/nameEt"
                android:background="@color/color_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/dp_180"
                android:maxLines="1"
                android:imeOptions="actionDone"/>
