                android:id="@+id/editImgv"
                android:paddingTop="@dimen/dp_6"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/me_name_edit"
                app:layout_constraintBottom_toBottomOf="@+id/nameEt"
                app:layout_constraintStart_toEndOf="@+id/nameEt"
                app:layout_constraintTop_toTopOf="@+id/nameEt"/>
            <ImageView
                android:id="@+id/userLineImgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/me_user_line"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                android:textColor="@color/c_173a8e"
                android:id="@+id/idTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.constraintlayout.helper.widget.Flow
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_30"
                android:paddingStart="@dimen/dp_36"
                app:constraint_referenced_ids="nameEt,userLineImgv,idTv"
                app:flow_horizontalAlign="start"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/userImgv"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_173a8e"
                android:id="@+id/meTv"
                android:paddingBottom="@dimen/dp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_integral"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/idTv"/>
