<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_83"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_content"
        android:background="@drawable/circle_entrance_guide_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_44">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textColor="?attr/circle_guide_text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="论坛发布入口搬到这里啦～"
            android:paddingStart="@dimen/dp_16"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textStyle="bold"
            android:textColor="?attr/circle_guide_text_ik_color"
            android:gravity="center"
            android:id="@+id/tv_ok"
            android:background="@drawable/circle_entrance_guide_ik_bg"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_24"
            android:text="我知道啦"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_16"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_down_triangle"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_7"
        android:layout_marginTop="-1dp"
        android:src="?attr/ic_down_triangle"/>
</LinearLayout>
