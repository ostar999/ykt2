<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_view"
    android:background="?attr/app_bg"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <WebView
        android:id="@+id/temp_webview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/questiondetails_bottom_layout">
        <com.psychiatrygarden.widget.PinnedSectionListView1
            android:id="@+id/pinnedSectionListView1"
            android:scrollbars="none"
            android:fadingEdge="none"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:layout_below="@+id/srl_refresh"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/questiondetails_bottom_layout"
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:background="?attr/tertiary_backgroup_white_color"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">
            <LinearLayout
                android:id="@+id/ly_questiondetails_btn_zantong"
                android:layout_alignParentEnd="true"
                style="@style/layout_icon_style">
                <ImageView
                    android:id="@+id/questiondetails_btn_zantong"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/dianzancourse"/>
                <TextView
                    android:text="点赞"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_questiondetails_btn_centerMsg"
                android:layout_toStartOf="@+id/ly_questiondetails_btn_zantong"
                style="@style/layout_icon_style">
                <ImageView
                    android:id="@+id/questiondetails_btn_centerMsg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/question_msg"/>
                <TextView
                    android:text="评论"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_questiondetails_btn_share"
                android:layout_toStartOf="@+id/ly_questiondetails_btn_centerMsg"
                style="@style/layout_icon_style">
                <com.psychiatrygarden.widget.AlphaImageView
                    android:id="@+id/questiondetails_btn_share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/icon_share_no"/>
                <TextView
                    android:text="分享"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_questiondetails_btn_collect"
                android:paddingLeft="17dp"
                android:layout_toStartOf="@+id/ly_questiondetails_btn_share"
                style="@style/layout_icon_style">
                <com.psychiatrygarden.widget.AlphaImageView
                    android:id="@+id/questiondetails_btn_collect"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/icon_collect_no"/>
                <TextView
                    android:text="收藏"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/sp_13"
                android:textColor="?attr/third_txt_color"
                android:gravity="center_vertical"
                android:id="@+id/btn_comment"
                android:background="@drawable/shape_forum_search_edittext_bg"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="写评论"
                android:drawablePadding="5dp"
                android:layout_centerVertical="true"
                android:paddingStart="10dp"
                android:layout_toStartOf="@+id/ly_questiondetails_btn_collect"
                app:drawableStartCompat="?attr/icon_write_comment"/>
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/ll_question_comment"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignTop="@+id/btn_comment"
                android:layout_marginEnd="6dp"
                android:layout_alignEnd="@+id/btn_comment">
                <View
                    android:id="@+id/line"
                    android:background="?attr/fourth_line_backgroup_color"
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"/>
                <ImageView
                    android:id="@+id/img_msg"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="?attr/comment_icon_msg"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/line"/>
                <TextView
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="?attr/new_bg_one_color"
                    android:gravity="center"
                    android:id="@+id/questiondetails_btn_commentNum"
                    android:background="@drawable/fff6614b_8"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginTop="3dp"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="-10dp"
                    android:layout_toEndOf="@+id/img_msg"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_message_new"
                android:background="@drawable/red_round"
                android:visibility="invisible"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="10dp"
                android:layout_alignRight="@+id/btn_comment"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"/>
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/layout_comment_hot_new"/>
</RelativeLayout>
