<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="?attr/identity_confirm_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/secondary_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:text="邮箱是您身份的重要凭证，当账号发生异常时，将会通过该邮箱第一时间通知到您。"
        android:lineSpacingExtra="5dp"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/first_text_color"
        android:background="?attr/pop_frame_backgroup_color"
        android:paddingLeft="16dp"
        android:paddingTop="18dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="已绑定邮箱"/>
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/first_text_color"
        android:id="@+id/tv_email_conent"
        android:background="?attr/pop_frame_backgroup_color"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12*********@163.com"/>
    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?attr/new_bg_one_color"
        android:gravity="center"
        android:id="@+id/tv_modify_mail"
        android:background="@drawable/shape_app_theme_corners_12"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:text="更换邮箱"/>
    <TextView
        android:textSize="13sp"
        android:textColor="?attr/secondary_color"
        android:id="@+id/tv_unbind_email"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="解除绑定"/>
</LinearLayout>
