<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="?attr/app_theme"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/include_btn_left"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="?attr/icon_back"
            android:layout_centerVertical="true"
            android:paddingStart="16dp"
            android:paddingEnd="22dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/app_title_color"
            android:gravity="center"
            android:id="@+id/step"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="下一步"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textColor="?attr/app_title_color"
            android:gravity="center"
            android:id="@+id/yulan"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="预览"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/step"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/format_bar">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/first_text_color"
                    android:textColorHint="?attr/fourth_text_color"
                    android:id="@+id/title_circle"
                    android:background="@null"
                    android:padding="16sp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="  输入标题，限10-50个字"
                    android:maxLength="50"
                    android:textCursorDrawable="@drawable/color_cursor"/>
                <View
                    android:id="@+id/gray_line_new"
                    android:background="?attr/line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/title_circle"/>
                <com.psychiatrygarden.widget.CircleRichEditor
                    android:id="@+id/sourceview_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/push_recyclerview"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ly_vote"
                    android:background="@drawable/shape_empty_gray_line_bg"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginHorizontal="16dp">
                    <RelativeLayout
                        android:id="@+id/ly_vote_title"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="?attr/toupiao"
                            android:scaleType="fitXY"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:textSize="16sp"
                            android:textColor="?attr/first_text_color"
                            android:id="@+id/tv_vote_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="投票"
                            android:layout_toRightOf="@+id/img"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="6dp"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="?attr/tertiary_text_color"
                            android:id="@+id/tv_vote_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="多选"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="8dp"
                            android:layout_toEndOf="@+id/tv_vote_title"/>
                        <ImageView
                            android:id="@+id/btn_cancel_vote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:src="?attr/ic_close_gray"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View style="@style/line_style"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/ly_add_vote_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginHorizontal="16dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <include
            android:id="@+id/format_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            layout="@layout/include_bottom"/>
    </RelativeLayout>
</LinearLayout>
