<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/titleBar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/icon_black_back"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/dp_16"
            android:tintMode="src_in"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/color_141516"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="更多设置"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:paddingHorizontal="@dimen/dp_16">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_303030"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示段评"
                android:layout_centerVertical="true"/>
            <Switch
                android:id="@+id/sw_show_paragraph_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_48"
                android:thumb="@drawable/ebook_thumb_selector"
                android:layout_centerVertical="true"
                android:track="@drawable/ebook_switch_selector_green"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="@color/color_eeeeee"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:paddingHorizontal="@dimen/dp_16">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_303030"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示笔记"
                android:layout_centerVertical="true"/>
            <Switch
                android:id="@+id/sw_show_book_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:minHeight="@dimen/dp_48"
                android:thumb="@drawable/ebook_thumb_selector"
                android:layout_centerVertical="true"
                android:track="@drawable/ebook_switch_selector_green"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="@color/color_f7f8fa"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>
        <RelativeLayout
            android:id="@+id/rl_flip_page"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:paddingHorizontal="@dimen/dp_16">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_303030"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="翻页设置"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_606060"
                android:id="@+id/tv_page_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左右翻页"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_toStartOf="@+id/iv_arrow"/>
            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:src="@drawable/ic_down_arrow"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:rotation="270"
                android:importantForAccessibility="no"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="@color/color_f7f8fa"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/contentTopLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingLeft="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_303030"
                    android:id="@+id/voiceClickTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音量键翻页"
                    android:layout_centerVertical="true"/>
                <Switch
                    android:id="@+id/sw_voice_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:minHeight="@dimen/dp_48"
                    android:thumb="@drawable/ebook_thumb_selector"
                    android:layout_centerVertical="true"
                    android:track="@drawable/ebook_switch_selector_green"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View
                android:id="@+id/settingLine1"
                android:background="@color/color_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"/>
            <RelativeLayout
                android:paddingLeft="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_303030"
                    android:id="@+id/settingBatteryTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅读器内显示时间/电量"
                    android:layout_centerVertical="true"/>
                <Switch
                    android:id="@+id/sw_show_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:minHeight="@dimen/dp_48"
                    android:thumb="@drawable/ebook_thumb_selector"
                    android:layout_centerVertical="true"
                    android:track="@drawable/ebook_switch_selector_green"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View
                android:id="@+id/settingLine2"
                android:background="@color/color_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"/>
            <RelativeLayout
                android:paddingLeft="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_303030"
                    android:id="@+id/showStatusBarTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="显示系统状态栏"
                    android:layout_centerVertical="true"/>
                <Switch
                    android:id="@+id/sw_status_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:minHeight="@dimen/dp_48"
                    android:thumb="@drawable/ebook_thumb_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/ebook_switch_selector_green"
                    android:layout_marginEnd="@dimen/dp_16"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/settingLine3"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/contentBotLl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/ly_close_time"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:paddingHorizontal="@dimen/dp_16">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_303030"
                    android:id="@+id/closeTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="屏幕关闭时间"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_606060"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跟随系统"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_alignParentEnd="true"/>
                <ImageView
                    android:id="@+id/closeMoreIvTime"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:src="@drawable/ic_down_arrow"
                    android:layout_centerVertical="true"
                    android:rotation="270"
                    android:importantForAccessibility="no"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View
                android:id="@+id/settingLine4"
                android:background="@color/color_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"/>
            <RelativeLayout
                android:id="@+id/ly_reset_time"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:paddingHorizontal="@dimen/dp_16">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_303030"
                    android:id="@+id/restTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="休息时间提醒"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_606060"
                    android:id="@+id/tv_rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关闭"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_alignParentEnd="true"/>
                <ImageView
                    android:id="@+id/restMoreIvTime"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:src="@drawable/ic_down_arrow"
                    android:layout_centerVertical="true"
                    android:rotation="270"
                    android:importantForAccessibility="no"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View
                android:id="@+id/settingLine5"
                android:background="@color/color_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
