<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="exitUntilCollapsed|scroll">
            <LinearLayout
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_16">
                <com.ruffian.library.widget.RImageView
                    android:layout_width="@dimen/dp_47"
                    android:layout_height="@dimen/dp_64"
                    android:src="@drawable/image_cover_default"
                    android:scaleType="centerCrop"
                    app:corner_radius="@dimen/dp_4"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_64"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/dp_12">
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_303030"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_909090"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <com.ruffian.library.widget.RTextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_width="@dimen/dp_88"
                    android:layout_height="@dimen/dp_28"
                    android:text="继续阅读"
                    app:background_normal="@color/color_dd594a"
                    app:corner_radius="@dimen/dp_14"/>
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="parallax">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/dp_16">
                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/icon_black_back"
                        android:contentDescription="@null"/>
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/color_303030"
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="阴阳典当铺"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_24"/>
                    <com.ruffian.library.widget.RTextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="@dimen/dp_88"
                        android:layout_height="@dimen/dp_28"
                        android:text="继续阅读"
                        app:background_normal="@color/color_dd594a"
                        app:corner_radius="@dimen/dp_14"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <com.ykb.ebook.weight.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.ykb.ebook.weight.StickyLinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/color_eeeeee"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginHorizontal="@dimen/dp_16"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_24"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dp_16">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/sp_34"
                            android:textColor="@color/color_303030"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/color_909090"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:background="@color/color_eeeeee"
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_36"
                        android:layout_marginRight="@dimen/dp_36"
                        android:layout_marginHorizontal="@dimen/dp_36"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="@dimen/sp_13"
                                android:textColor="@color/color_909090"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="高评价"/>
                            <com.ykb.ebook.weight.RoundCornerProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_6"
                                android:layout_marginStart="@dimen/dp_8"
                                app:background_color="@color/color_f7f8fa"
                                app:progress_color="@color/color_dd594a"
                                app:progress_corner_radius="@dimen/dp_3"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:layout_marginVertical="@dimen/dp_8">
                            <TextView
                                android:textSize="@dimen/sp_13"
                                android:textColor="@color/color_909090"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="中评价"/>
                            <com.ykb.ebook.weight.RoundCornerProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_6"
                                android:layout_marginStart="@dimen/dp_8"
                                app:background_color="@color/color_f7f8fa"
                                app:progress_color="@color/color_dd594a"
                                app:progress_corner_radius="@dimen/dp_3"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="@dimen/sp_13"
                                android:textColor="@color/color_909090"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="低评价"/>
                            <com.ykb.ebook.weight.RoundCornerProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_6"
                                android:layout_marginStart="@dimen/dp_8"
                                app:background_color="@color/color_f7f8fa"
                                app:progress_color="@color/color_dd594a"
                                app:progress_corner_radius="@dimen/dp_3"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dp_16">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_606060"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评价本书："/>
                    <com.ruffian.library.widget.RTextView
                        android:textSize="@dimen/sp_14"
                        android:gravity="center"
                        android:layout_width="@dimen/dp_84"
                        android:layout_height="@dimen/dp_30"
                        android:checked="true"
                        android:button="@null"
                        android:text="高评价"
                        android:drawablePadding="@dimen/dp_4"
                        android:layout_marginStart="@dimen/dp_15"
                        app:background_normal="@color/color_f7f8fa"
                        app:corner_radius="@dimen/dp_15"
                        app:icon_height="@dimen/dp_20"
                        app:icon_src_normal="@drawable/icon_good_review"
                        app:icon_width="@dimen/dp_20"
                        app:icon_with_text="true"
                        app:text_color_normal="@color/color_303030"/>
                    <com.ruffian.library.widget.RTextView
                        android:textSize="@dimen/sp_14"
                        android:gravity="center"
                        android:layout_width="@dimen/dp_84"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:button="@null"
                        android:text="中评价"
                        android:drawablePadding="@dimen/dp_4"
                        android:layout_marginHorizontal="@dimen/dp_8"
                        app:background_normal="@color/color_f7f8fa"
                        app:corner_radius="@dimen/dp_15"
                        app:icon_height="@dimen/dp_20"
                        app:icon_src_normal="@drawable/icon_middle_review"
                        app:icon_width="@dimen/dp_20"
                        app:icon_with_text="true"
                        app:text_color_normal="@color/color_303030"/>
                    <com.ruffian.library.widget.RCheckBox
                        android:textSize="@dimen/sp_14"
                        android:gravity="center"
                        android:layout_width="@dimen/dp_84"
                        android:layout_height="@dimen/dp_30"
                        android:button="@null"
                        android:text="低评价"
                        android:drawablePadding="@dimen/dp_4"
                        app:background_normal="@color/color_f7f8fa"
                        app:corner_radius="@dimen/dp_15"
                        app:icon_height="@dimen/dp_20"
                        app:icon_src_normal="@drawable/icon_low_review"
                        app:icon_width="@dimen/dp_20"
                        app:icon_with_text="true"
                        app:text_color_normal="@color/color_303030"/>
                </LinearLayout>
                <FrameLayout
                    android:background="@color/white"
                    android:paddingBottom="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.ruffian.library.widget.RTextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_909090"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="阅读本书5分钟后，即可点评"
                        android:drawablePadding="@dimen/dp_4"
                        app:icon_height="@dimen/dp_18"
                        app:icon_src_normal="@drawable/icon_review_lock"
                        app:icon_width="@dimen/dp_18"
                        app:icon_with_text="true"/>
                </FrameLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56"
                    app:isSticky="true">
                    <com.ruffian.library.widget.RView
                        android:layout_width="@dimen/dp_4"
                        android:layout_height="@dimen/dp_16"
                        app:background_normal="@color/color_dd594a"
                        app:corner_radius_bottom_right="@dimen/dp_4"
                        app:corner_radius_top_right="@dimen/dp_4"/>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_303030"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="最热评论（3条）"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_12"/>
                </LinearLayout>
                <View
                    android:background="@color/color_eeeeee"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_hot"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"/>
                <View
                    android:background="@color/color_eeeeee"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56"
                    app:isSticky="true">
                    <com.ruffian.library.widget.RView
                        android:layout_width="@dimen/dp_4"
                        android:layout_height="@dimen/dp_16"
                        app:background_normal="@color/color_dd594a"
                        app:corner_radius_bottom_right="@dimen/dp_4"
                        app:corner_radius_top_right="@dimen/dp_4"/>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_303030"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="最新评论（13条）"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_12"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_newest"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"/>
            </com.ykb.ebook.weight.StickyLinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.ykb.ebook.weight.StickyScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
