<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.psychiatrygarden.widget.CircleImageView
                    android:id="@+id/icon_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:src="?attr/personal_headimg_icon"/>
                <TextView
                    android:textColor="?attr/question_color"
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/item_school_color"
                    android:id="@+id/exam_status"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">
                <TextView
                    android:textStyle="bold"
                    android:textColor="?attr/question_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考试类型："/>
                <TextView
                    android:textColor="?attr/item_school_color"
                    android:id="@+id/exam_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp">
                <TextView
                    android:textStyle="bold"
                    android:textColor="?attr/question_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考试题量："/>
                <TextView
                    android:textColor="?attr/item_school_color"
                    android:id="@+id/exam_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp">
                <TextView
                    android:textStyle="bold"
                    android:textColor="?attr/question_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卷面分值："/>
                <TextView
                    android:textColor="?attr/item_school_color"
                    android:id="@+id/exam_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp">
                <TextView
                    android:textStyle="bold"
                    android:textColor="?attr/question_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="及格分数："/>
                <TextView
                    android:textColor="?attr/item_school_color"
                    android:id="@+id/pass_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginStart="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp">
                <TextView
                    android:textStyle="bold"
                    android:textColor="?attr/question_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考试时间："/>
                <TextView
                    android:textColor="?attr/item_school_color"
                    android:id="@+id/exam_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginStart="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp">
                <TextView
                    android:textStyle="bold"
                    android:textColor="?attr/question_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起止时间："/>
                <TextView
                    android:textColor="?attr/item_school_color"
                    android:id="@+id/exam_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginStart="30dp"/>
            </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:textColor="?attr/question_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="温馨提示"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/item_school_color"
                android:id="@+id/tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text=""
                android:lineSpacingExtra="1.5dp"
                android:lineSpacingMultiplier="1.5"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:enabled="false"
        android:textColor="?attr/question_color"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_btn"
        android:background="?attr/linetype1"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_marginBottom="20dp"/>
</LinearLayout>
