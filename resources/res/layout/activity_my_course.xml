<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/gray_font"
        android:gravity="center_vertical"
        android:id="@+id/tv_purchase"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="购买课程"
        android:drawableLeft="@drawable/my_course_buy_icon"
        android:drawableRight="@drawable/icon_indicator_right"
        android:drawablePadding="15dp"/>
    <View
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/gray_font"
        android:gravity="center_vertical"
        android:id="@+id/tv_myorder"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的订单"
        android:drawableLeft="@drawable/my_order_icon"
        android:drawableRight="@drawable/icon_indicator_right"
        android:drawablePadding="15dp"/>
    <View
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/gray_font"
        android:gravity="center_vertical"
        android:id="@+id/tv_myserver"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的服务"
        android:drawableLeft="@drawable/my_server_icon"
        android:drawableRight="@drawable/icon_indicator_right"
        android:drawablePadding="15dp"/>
    <View
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/gray_font"
        android:gravity="center_vertical"
        android:id="@+id/tv_service"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的客服"
        android:drawableLeft="@drawable/my_service_icon"
        android:drawableRight="@drawable/icon_indicator_right"
        android:drawablePadding="15dp"/>
    <View
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/gray_font"
        android:gravity="center_vertical"
        android:id="@+id/tv_invitation_code"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="邀请码"
        android:drawableLeft="@drawable/my_invitation_code_icon"
        android:drawableRight="@drawable/icon_indicator_right"
        android:drawablePadding="15dp"/>
    <View
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
