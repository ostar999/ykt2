<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/lineadview"
    android:background="?attr/app_bg"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/comment_ad_icon"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#ff9b9b9b"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="推广"
            android:layout_weight="11"
            android:layout_marginStart="8dp"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_delete_ad"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/question_comment_ad_close"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/adimgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:scaleType="fitXY"
        android:layout_marginStart="33dp"/>
    <View
        android:background="?attr/gray_line_126"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
