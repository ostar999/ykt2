<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?attr/line_all_round_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="?attr/home_search_img"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_alignParentStart="true"/>
        <com.psychiatrygarden.widget.ClearEditText
            android:textSize="14sp"
            android:textColor="?attr/question_color"
            android:textColorHint="?attr/dialog_input_hint_color"
            android:id="@+id/et_search"
            android:background="@null"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint=" 用关键词搜索试试"
            android:singleLine="true"
            android:drawablePadding="5dp"
            android:imeOptions="actionSearch"
            android:textCursorDrawable="@drawable/color_cursor"
            android:paddingHorizontal="8dp"/>
    </LinearLayout>
    <View
        android:background="?attr/divider_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <include
        android:id="@+id/ll_search"
        layout="@layout/head_search_history"/>
    <FrameLayout
        android:orientation="vertical"
        android:id="@+id/fl_handout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/empty_view"
            android:visibility="invisible"
            layout="@layout/layout_empty_view"/>
        <ListView
            android:id="@+id/lv_search"
            android:background="@color/transparent"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_reply"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_reply"
            android:background="@color/transparent"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </FrameLayout>
</LinearLayout>
