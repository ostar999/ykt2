<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="264dp"
    android:layout_height="380dp"
    android:layout_marginLeft="-15dp">
    <RelativeLayout
        android:background="@drawable/tqvipbg"
        android:paddingLeft="16dp"
        android:paddingTop="7dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/icon_pop_vip_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_pop_vip_bg"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/iv_pop_vip_icon"
            android:background="@drawable/bg_circle_black"
            android:padding="11dp"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="-20dp"
            android:src="@mipmap/icon_vip_small_default"
            android:layout_below="@+id/icon_pop_vip_bg"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/first_text_color"
            android:id="@+id/tv_pop_vip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="直播权限"
            android:layout_below="@+id/iv_pop_vip_icon"
            android:layout_centerHorizontal="true"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/tv_pop_vip_title">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/first_text_color"
                    android:gravity="center_vertical"
                    android:id="@+id/qysmtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:text="权益说明"
                    android:includeFontPadding="false"
                    android:drawableLeft="@drawable/select_vip_line_red"
                    android:drawablePadding="6dp"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/secondary_text_color"
                    android:id="@+id/tv_rights_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:text="权益说明权益说明权益说明权益说明权益说明权益说明"
                    android:lineSpacingExtra="3dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/first_text_color"
                    android:id="@+id/sysmtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:text="使用方法"
                    android:includeFontPadding="false"
                    android:drawableLeft="@drawable/select_vip_line_red"
                    android:drawablePadding="6dp"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/secondary_text_color"
                    android:id="@+id/tv_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:text="使用说明使用说明使用说明使用说明使用说明使用说明使用说明使用说明"
                    android:lineSpacingExtra="3dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</RelativeLayout>
