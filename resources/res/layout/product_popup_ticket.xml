<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dp_300"
    app:bl_corners_topLeftRadius="@dimen/dp_12"
    app:bl_corners_topRightRadius="@dimen/dp_12"
    app:bl_solid_color="@color/color_white">
    <ImageView
        android:id="@+id/xImgv"
        android:padding="@dimen/dp_8"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_20"
        android:src="@drawable/common_x7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:textColor="@color/color_black"
        android:gravity="center"
        android:id="@+id/titleTv"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_ticket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:background="@color/c_aaaaaa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:paddingLeft="@dimen/dp_22"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_22"
        android:paddingBottom="@dimen/dp_54"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/dp_22"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"/>
    <com.noober.background.view.BLTextView
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:id="@+id/sureBtv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:text="@string/common_sure"
        android:layout_marginHorizontal="@dimen/dp_36"
        app:bl_corners_radius="@dimen/dp_19"
        app:bl_gradient_angle="0"
        app:bl_gradient_endColor="@color/c_2980ff"
        app:bl_gradient_startColor="@color/c_70baff"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
