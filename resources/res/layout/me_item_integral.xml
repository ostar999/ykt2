<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.noober.background.view.BLConstraintLayout
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_4"
        android:paddingRight="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_12"
        app:bl_corners_radius="@dimen/dp_6"
        app:bl_solid_color="@color/c_54ffffff">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/c_173a8e"
            android:ellipsize="end"
            android:id="@+id/typeTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@+id/detailTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_5e5e5e"
            android:ellipsize="end"
            android:id="@+id/timeTv"
            android:paddingTop="@dimen/dp_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingEnd="@dimen/dp_16"
            app:layout_constraintEnd_toStartOf="@+id/integralTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/typeTv"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/c_173a8e"
            android:id="@+id/detailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_5e5e5e"
            android:id="@+id/integralTv"
            android:paddingTop="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailTv"/>
    </com.noober.background.view.BLConstraintLayout>
</FrameLayout>
