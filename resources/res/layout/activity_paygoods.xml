<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/new_bg_two_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/r1"
            android:paddingTop="@dimen/dp_42"
            android:paddingBottom="@dimen/dp_42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_42">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="?attr/main_theme_red_color"
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"/>
                <TextView
                    android:textSize="@dimen/sp_28"
                    android:textStyle="bold"
                    android:textColor="?attr/main_theme_red_color"
                    android:id="@+id/tv_paymonty"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/textView3"
            android:background="?attr/fourth_line_backgroup_color"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/r2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <TextView
                android:id="@+id/tx3"
                android:background="?attr/fourth_line_backgroup_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/tertiary_text_color"
                android:id="@+id/tx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="选择支付方式"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/shape_write_bg"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_12"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:paddingHorizontal="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_12">
            <RelativeLayout
                android:id="@+id/layoutWXPay"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_26">
                <ImageView
                    android:id="@+id/imgWX"
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_26"
                    android:src="@drawable/icon_wx_pay"/>
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="?attr/first_txt_color"
                    android:paddingLeft="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:layout_toRightOf="@+id/imgWX"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/imgCheckoutWX"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="?attr/forum_book_un_select_icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/r3"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_16">
                <ImageView
                    android:id="@+id/zhifubao"
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_26"
                    android:src="@drawable/icon_zfb_pay"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="?attr/first_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="支付宝"
                    android:layout_toRightOf="@+id/zhifubao"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/imgSelect"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="?attr/forum_book_un_select_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:background="#eeeeee"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/ll_wx_pay"
            android:background="@color/white"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/weixinzhifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/wexinzhifu"
                android:layout_centerVertical="true"/>
            <TextView
                android:textColor="?attr/first_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="微信支付"
                android:layout_toRightOf="@+id/weixinzhifu"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:src="?attr/sel_pay_checked"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:background="#eeeeee"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/r4"
            android:background="@color/white"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/yinlianzhifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/yinlian"
                android:layout_centerVertical="true"/>
            <TextView
                android:textColor="?attr/first_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="银联支付"
                android:layout_toRightOf="@+id/yinlianzhifu"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:src="?attr/sel_pay_checked"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/dp_4">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/app_bg"
            android:gravity="center"
            android:id="@+id/okzhifu"
            android:background="@drawable/shape_app_theme_corners_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:text="确认支付"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
