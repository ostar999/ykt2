<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ly_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/line"
        style="@style/new_gray_line_style"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/ly_major"
            android:layout_width="@dimen/dp_72"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:id="@+id/tv_major"
                android:padding="@dimen/dp_12"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="专业"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ly_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:layout_alignTop="@+id/ly_major"
            android:layout_alignBottom="@+id/ly_major"
            android:layout_toEndOf="@+id/ly_major">
            <LinearLayout
                android:id="@+id/ly_major_type"
                android:visibility="gone"
                android:layout_width="@dimen/dp_72"
                android:text="专硕"
                style="@style/choose_school_form_txt_style">
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:id="@+id/tv_type"
                    android:paddingLeft="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学硕"
                    android:layout_marginStart="@dimen/dp_2"
                    android:paddingHorizontal="@dimen/dp_2"/>
            </LinearLayout>
            <View
                android:id="@+id/type_line"
                android:visibility="gone"
                style="@style/hor_new_gray_line_style"/>
            <TextView
                android:id="@+id/tv_score"
                android:layout_width="@dimen/dp_72"
                android:text=""
                style="@style/choose_school_form_txt_style"/>
            <View style="@style/hor_new_gray_line_style"/>
            <TextView
                android:id="@+id/tv_name_one"
                android:layout_width="@dimen/dp_72"
                android:text=""
                style="@style/choose_school_form_txt_style"/>
            <View style="@style/hor_new_gray_line_style"/>
            <TextView
                android:id="@+id/tv_name_two"
                android:layout_width="@dimen/dp_72"
                android:text=""
                style="@style/choose_school_form_txt_style"/>
            <View style="@style/hor_new_gray_line_style"/>
            <TextView
                android:id="@+id/tv_name_three"
                android:layout_width="@dimen/dp_72"
                android:text=""
                style="@style/choose_school_form_txt_style"/>
            <View
                android:id="@+id/line_four"
                style="@style/hor_new_gray_line_style"/>
            <TextView
                android:id="@+id/tv_name_four"
                android:layout_width="@dimen/dp_72"
                android:text=""
                style="@style/choose_school_form_txt_style"/>
            <View
                android:id="@+id/line_five"
                style="@style/hor_new_gray_line_style"/>
            <TextView
                android:id="@+id/tv_name_five"
                android:layout_width="@dimen/dp_72"
                android:text=""
                style="@style/choose_school_form_txt_style"/>
            <RelativeLayout
                android:id="@+id/ly_arrow"
                android:visibility="gone"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent">
                <View style="@style/hor_new_gray_line_style"/>
                <ImageView
                    android:id="@+id/img_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_right_arrow_mo_kao"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
