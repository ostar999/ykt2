<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_askbar_bg"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="16sp"
        android:textColor="@color/gray_font"
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立刻就烦死了快点击放大来看是否"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/gray_light"
        android:id="@+id/tv_question_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="2016-2-5"/>
    <View
        android:background="@drawable/dash_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layerType="software"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <com.psychiatrygarden.widget.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_answer_headimg"
            android:background="@drawable/personal_headimg_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            app:border_color="@color/white"
            app:border_width="1dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_answer_headimg">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/gray_light"
                android:id="@+id/tv_ask_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一本道|文字工作者"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/gray_font"
                android:id="@+id/tv_ask_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="啊撒旦撒旦是非法广告啥地方是范德萨范德萨发郭德纲撒旦撒旦撒范德萨发的个爱的撒旦是否v从v"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/gray_light"
                android:id="@+id/tv_ask_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2016-2-5"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="@drawable/dash_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layerType="software"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <View
            android:background="@color/app_theme_red"
            android:layout_width="3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/app_theme_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="问吧"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/gray_light"
            android:id="@+id/tv_askbar_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="方法覆盖方法"
            android:singleLine="true"
            android:drawableRight="@drawable/icon_indicator_right"
            android:drawablePadding="5dp"/>
    </LinearLayout>
</LinearLayout>
