<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemRootFirst"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_57"
    android:animateLayoutChanges="true"
    android:paddingHorizontal="@dimen/dp_16">
    <RelativeLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/itemFirstContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/noteFirstImage"
                android:visibility="visible"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_12"
                android:src="?attr/download_new_select"
                android:scaleType="fitXY"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:textColor="?attr/first_text_color"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/itemFirstTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="第一章 绪论【直播】"
                android:maxLines="1"
                android:layout_toLeftOf="@+id/itemFirstLayout"
                android:layout_toRightOf="@+id/noteFirstImage"
                android:paddingEnd="@dimen/dp_8"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/itemFirstLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:id="@+id/itemArrow"
                    android:padding="@dimen/dp_1"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="?attr/icon_bottom_arrow_new"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/viewEditLine"
            android:background="?attr/fourth_line_backgroup_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
