<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:layout_width="@dimen/dp_224"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_down_triangle_two"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_7"
        android:src="?attr/ic_down_triangle"
        android:rotation="180"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_content_two"
        android:background="@drawable/circle_entrance_guide_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="-1dp"
        android:layout_below="@+id/iv_down_triangle_two"
        android:layout_alignParentStart="true">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textColor="?attr/circle_guide_text_color"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠集结，立减无忧"
            android:paddingStart="@dimen/dp_16"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textStyle="bold"
            android:textColor="?attr/circle_guide_text_ik_color"
            android:gravity="center"
            android:id="@+id/tv_ok_two"
            android:background="@drawable/circle_entrance_guide_ik_bg"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_24"
            android:text="我知道啦"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_16"/>
    </LinearLayout>
</RelativeLayout>
