<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_290"
    android:paddingHorizontal="@dimen/dp_10"
    app:bl_corners_radius="@dimen/dp_6"
    app:bl_solid_color="@color/color_white">
    <ImageView
        android:id="@+id/xImgv"
        android:padding="@dimen/dp_6"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_6"
        android:src="@drawable/common_x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_333"
        android:id="@+id/titleTv"
        android:paddingTop="@dimen/dp_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用环境切换"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_666"
        android:id="@+id/hostTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="当前使用BaseUrl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_666"
        android:id="@+id/hostChangeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="替换BaseUrl："
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hostTv"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_666"
        android:id="@+id/fileTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文件加载地址："
        app:layout_constraintTop_toBottomOf="@+id/hostChangeTv"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_666"
        android:id="@+id/filePrivateTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="私有文件地址："
        app:layout_constraintTop_toBottomOf="@+id/fileTv"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_666"
        android:id="@+id/bodyTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前Web加载地址："
        app:layout_constraintTop_toBottomOf="@+id/filePrivateTv"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/bodyTv">
        <com.noober.background.view.BLTextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_FF0000"
            android:id="@+id/devTv"
            android:padding="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开发"
            app:bl_corners_radius="@dimen/dp_2"
            app:bl_solid_color="@color/c_eeeeee"/>
        <com.noober.background.view.BLTextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333"
            android:id="@+id/testTv"
            android:padding="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试外网"
            app:bl_corners_radius="@dimen/dp_2"
            app:bl_solid_color="@color/c_eeeeee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.noober.background.view.BLTextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_0e9602"
            android:id="@+id/test192Tv"
            android:padding="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试123"
            app:bl_corners_radius="@dimen/dp_2"
            app:bl_solid_color="@color/c_aaaaaa"/>
        <com.noober.background.view.BLTextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333"
            android:id="@+id/test126Tv"
            android:padding="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试126"
            app:bl_corners_radius="@dimen/dp_2"
            app:bl_solid_color="@color/c_4675c7"/>
        <com.noober.background.view.BLTextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_121212"
            android:id="@+id/uatTv"
            android:padding="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UAT预发"
            app:bl_corners_radius="@dimen/dp_2"
            app:bl_solid_color="@color/c_2a57c2"/>
        <com.noober.background.view.BLTextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_0000FF"
            android:id="@+id/formalTv"
            android:padding="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正式"
            app:bl_corners_radius="@dimen/dp_2"
            app:bl_solid_color="@color/c_fa5151"/>
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="devTv,testTv,test192Tv,test126Tv,uatTv,formalTv"
            app:flow_horizontalGap="@dimen/dp_6"
            app:flow_verticalGap="@dimen/dp_8"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.noober.background.view.BLTextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_333"
        android:id="@+id/saveTv"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="保存"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingVertical="@dimen/dp_6"
        app:bl_corners_radius="@dimen/dp_2"
        app:bl_solid_color="@color/c_aaaaaa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
