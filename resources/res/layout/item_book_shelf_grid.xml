<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_item"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_book_img"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="3dp"/>
    <TextView
        android:textSize="9sp"
        android:textColor="@color/white"
        android:id="@+id/tv_new_flag"
        android:background="@drawable/bg_book_shelf_new"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="更新"
        android:layout_alignTop="@+id/iv_book_img"
        android:layout_marginEnd="8dp"
        android:layout_alignEnd="@+id/iv_book_img"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"/>
    <ImageView
        android:id="@+id/iv_select"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:src="?attr/download_item_un_select_icon"
        android:layout_alignBottom="@+id/iv_book_img"
        android:layout_marginEnd="4dp"
        android:layout_alignEnd="@+id/iv_book_img"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/forth_txt_color"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:lines="1"
        android:layout_below="@+id/tv_book_name"/>
    <TextView
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="?attr/first_txt_color"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:layout_below="@+id/iv_book_img"/>
</RelativeLayout>
