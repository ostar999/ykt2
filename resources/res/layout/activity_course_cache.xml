<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/tabbar"
        layout="@layout/layout_toolbar_normal"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ly_tab"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_12"
        android:paddingVertical="@dimen/dp_16">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@drawable/select_down_text_color"
            android:gravity="center"
            android:id="@+id/courseid"
            android:background="@drawable/shape_main_color_round8"
            android:paddingLeft="@dimen/sp_12"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/sp_12"
            android:paddingBottom="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程"
            android:includeFontPadding="false"
            android:layout_marginEnd="@dimen/dp_12"
            android:paddingHorizontal="@dimen/sp_12"
            android:paddingVertical="@dimen/dp_5"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@drawable/select_down_text_color"
            android:gravity="center"
            android:id="@+id/infomation"
            android:background="@drawable/shape_bg_one_round8"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资料"
            android:layout_marginEnd="@dimen/dp_12"
            android:paddingHorizontal="@dimen/dp_12"
            android:paddingVertical="@dimen/dp_5"/>
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpage2"
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
