<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.noober.background.view.BLConstraintLayout
            android:id="@+id/cl"
            android:background="@drawable/main_rule_bg1"
            android:paddingBottom="@dimen/dp_6"
            android:layout_width="@dimen/dp_478"
            android:layout_height="@dimen/dp_260"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_60"
            android:layout_marginHorizontal="@dimen/dp_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/top1Imgv"
                android:layout_width="@dimen/dp_82"
                android:layout_height="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@drawable/home_code_txt5"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/dp_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ScrollView
                android:id="@+id/scrollV"
                android:paddingTop="@dimen/dp_46"
                android:paddingBottom="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                app:layout_constraintBottom_toTopOf="@+id/webImgv"
                app:layout_constraintTop_toBottomOf="@+id/webTitleTv">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_black"
                    android:gravity="top|left"
                    android:id="@+id/ruleTv"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_60"
                    android:paddingHorizontal="@dimen/dp_30"/>
            </ScrollView>
            <ImageView
                android:id="@+id/xImgv"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_4"
                android:src="@drawable/common_x5"
                android:paddingStart="@dimen/dp_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/webImgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_6"
                android:src="@drawable/set_web_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </com.noober.background.view.BLConstraintLayout>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:id="@+id/knowTv"
            android:background="@drawable/me_code_btn1"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_33"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/home_go_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
