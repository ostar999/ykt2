<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_coupon_record_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_12">
    <RelativeLayout
        android:id="@+id/layout1"
        android:background="@drawable/shape_coupon_record_item_bg"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90">
        <RelativeLayout
            android:paddingBottom="@dimen/dp_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="?attr/forth_txt_color"
                android:id="@+id/tvCountTag"
                android:paddingBottom="@dimen/dp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:layout_alignBottom="@+id/tvCount"
                android:layout_marginStart="@dimen/dp_25"/>
            <TextView
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                android:textColor="?attr/forth_txt_color"
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:layout_toRightOf="@+id/tvCountTag"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="?attr/forth_txt_color"
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="满300元可用"
                android:layout_below="@+id/tvCount"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textStyle="normal"
                android:textColor="?attr/forth_txt_color"
                android:gravity="center"
                android:id="@+id/tvUse"
                android:background="@drawable/shape_forth_txt_color_stroke_corner19"
                android:visibility="visible"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_4"
                android:text="立即使用"
                android:layout_below="@+id/tvDesc"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_toRightOf="@+id/layout1"
        android:paddingStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_44">
        <TextView
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            android:textColor="?attr/forth_txt_color"
            android:ellipsize="end"
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="优惠券名称优惠券名称优惠券名称名称"
            android:maxLines="1"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="?attr/forth_txt_color"
            android:ellipsize="end"
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="2022-10-12 15:30至2023-10-12 15:30"
            android:maxLines="1"
            android:layout_below="@+id/tvTitle"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="?attr/forth_txt_color"
            android:id="@+id/tvDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="使用详情"
            android:layout_below="@+id/tvTime"/>
        <ImageView
            android:id="@+id/imgDetail"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/icon_bottom_arrow_new"
            android:layout_toRightOf="@+id/tvDetail"
            android:layout_alignTop="@+id/tvDetail"
            android:layout_alignBottom="@+id/tvDetail"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layoutDetail"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_below="@+id/layout1"
        android:paddingHorizontal="@dimen/dp_10">
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="?attr/forth_txt_color"
            android:ellipsize="end"
            android:id="@+id/tvDetail1"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="券编码：12345678765432345"
            android:maxLines="1"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="?attr/forth_txt_color"
            android:ellipsize="end"
            android:id="@+id/tvDetail2"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="限品类：适用于全部商品/适用于全部课程适用于全部商品/适用于全部课程"
            android:maxLines="1"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/imageStatusBg"
        android:visibility="gone"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:src="@drawable/icon_triangle_corner"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textSize="@dimen/sp_10"
        android:textColor="?attr/app_bg"
        android:id="@+id/tvCouponStatus"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="已失效"
        android:layout_alignParentRight="true"
        android:rotation="45"/>
    <TextView
        android:textSize="@dimen/sp_10"
        android:textColor="?attr/app_bg"
        android:gravity="center"
        android:id="@+id/tvCouponFlag"
        android:background="@drawable/shape_course_combine_flag_bg"
        android:paddingLeft="@dimen/dp_3"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_3"
        android:paddingBottom="@dimen/dp_2"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐"
        android:layout_alignParentRight="true"
        android:paddingHorizontal="@dimen/dp_3"
        android:paddingVertical="@dimen/dp_2"/>
</RelativeLayout>
