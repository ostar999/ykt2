<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemRootThird"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_16">
    <RelativeLayout
        android:id="@+id/itemInnerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/itemThirdViewTag"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_16"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tvFreeSee"
            android:layout_below="@+id/itemThirdViewTag">
            <RelativeLayout
                android:id="@+id/layoutFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/itemThirdImgCourseAnim"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_3"
                    android:src="@drawable/living_anim3_day"
                    android:layout_alignWithParentIfMissing="true"/>
                <ImageView
                    android:id="@+id/itemThirdImgCourseType"
                    android:visibility="visible"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_3"
                    android:src="?attr/icon_live_video"
                    android:layout_alignWithParentIfMissing="true"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="?attr/first_txt_color"
                android:ellipsize="end"
                android:id="@+id/itemThirdTvCourseTitle"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_22"
                android:text="考研长难句试听课直播课25考研长难句试滴水穿石调查"
                android:maxLines="1"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/layoutFlag"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginStart="@dimen/dp_12"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/main_theme_red_color"
                android:id="@+id/tvLastLearn"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:text="上次学习"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginStart="@dimen/dp_12"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/itemThirdDirectory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toLeftOf="@+id/tvFreeSee"
            android:layout_below="@+id/layoutTitle"
            android:paddingStart="@dimen/dp_28">
            <ImageView
                android:id="@+id/itemThirdImgCourseDownload"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:src="?attr/icon_course_directory_download_success"
                android:layout_marginEnd="@dimen/dp_3"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/third_txt_color"
                android:gravity="center"
                android:id="@+id/tvDownload"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="已下载"
                android:layout_marginEnd="@dimen/dp_8"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/third_txt_color"
                android:gravity="center"
                android:id="@+id/tvTeacherName"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="讲师"
                android:layout_marginEnd="@dimen/dp_8"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/third_txt_color"
                android:gravity="center"
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1月25日"
                android:layout_marginEnd="@dimen/dp_8"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/third_txt_color"
                android:gravity="center"
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="14:20~16:20"
                android:layout_marginEnd="@dimen/dp_8"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/main_theme_red_color"
                android:id="@+id/tvLearnProgress"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="已学习23%"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/forth_txt_color"
                android:gravity="right"
                android:id="@+id/tvLiveStatus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="直播结束"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="?attr/main_theme_color"
            android:gravity="center"
            android:id="@+id/tvFreeSee"
            android:background="@drawable/shape_main_theme_color_stoke0_5_corners100"
            android:visibility="gone"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_20"
            android:text="试看"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_8"/>
        <View
            android:id="@+id/thirdItemLine"
            android:background="?attr/fourth_line_backgroup_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_below="@+id/itemThirdDirectory"/>
    </RelativeLayout>
</RelativeLayout>
