<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ly_view"
    android:background="?attr/new_bg_one_color"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/titlebar_layout"
        layout="@layout/nav_search_title_view"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:orientation="vertical"
        android:background="?attr/new_bg_one_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar_layout">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior">
            <RelativeLayout
                android:background="?attr/new_bg_one_color"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                app:layout_scrollFlags="snap|scroll">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ly_history"
                    android:background="?attr/new_bg_one_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    app:layout_scrollFlags="snap|enterAlways|scroll">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/first_txt_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="搜索历史"
                            android:layout_weight="1"/>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:id="@+id/ly_show_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="12sp"
                                android:textColor="?attr/forth_txt_color"
                                android:id="@+id/tv_more_history"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:text="更多记录"/>
                            <ImageView
                                android:id="@+id/img_arrow"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="?attr/ic_forum_search_down_arrow"
                                android:rotation="0"
                                android:layout_marginStart="3dp"/>
                            <View
                                android:background="?attr/forth_txt_color"
                                android:layout_width="0.5dp"
                                android:layout_height="10dp"
                                android:layout_marginStart="12dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:id="@+id/ly_show_del_all"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="12sp"
                                android:textColor="?attr/forth_txt_color"
                                android:id="@+id/tv_del_all"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:text="全部删除"/>
                            <View
                                android:background="?attr/forth_txt_color"
                                android:layout_width="0.5dp"
                                android:layout_height="10dp"
                                android:layout_marginStart="12dp"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="?attr/first_txt_color"
                                android:id="@+id/tv_finish"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:text="完成"
                                android:paddingStart="12dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/btn_del_history"
                            android:layout_width="28dp"
                            android:layout_height="16dp"
                            android:src="?attr/ic_froum_delete"
                            android:paddingStart="12dp"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_subject">
                        <com.psychiatrygarden.widget.LabelsView
                            android:id="@+id/lb_history"
                            android:background="?attr/app_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:animateLayoutChanges="true"
                            app:labelBackground="@drawable/shape_forum_search_edittext_bg"
                            app:labelGravity="center"
                            app:labelTextColor="?attr/first_txt_color"
                            app:labelTextPaddingBottom="5dp"
                            app:labelTextPaddingLeft="12dp"
                            app:labelTextPaddingRight="12dp"
                            app:labelTextPaddingTop="5dp"
                            app:labelTextSize="14sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lineMargin="12dp"
                            app:minSelect="1"
                            app:selectType="SINGLE"
                            app:wordMargin="12dp"/>
                        <com.psychiatrygarden.widget.HistoryLabelsView
                            android:id="@+id/lb_del_history"
                            android:background="?attr/app_bg"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:animateLayoutChanges="true"
                            app:labelBackground="@drawable/shape_forum_search_edittext_bg"
                            app:labelGravity="center"
                            app:labelTextColor="?attr/first_txt_color"
                            app:labelTextPaddingBottom="5dp"
                            app:labelTextPaddingLeft="12dp"
                            app:labelTextPaddingRight="12dp"
                            app:labelTextPaddingTop="5dp"
                            app:labelTextSize="14sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lineMargin="12dp"
                            app:minSelect="1"
                            app:selectType="SINGLE"
                            app:wordMargin="12dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ly_hot_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_below="@+id/ly_history">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热词榜"/>
                    <com.psychiatrygarden.widget.TagLabelsView
                        android:id="@+id/lb_hot_word"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/tv_subject"
                        android:animateLayoutChanges="true"
                        app:labelBackground="@drawable/shape_forum_search_edittext_bg"
                        app:labelGravity="center"
                        app:labelTextColor="?attr/first_txt_color"
                        app:labelTextPaddingBottom="5dp"
                        app:labelTextPaddingLeft="12dp"
                        app:labelTextPaddingRight="12dp"
                        app:labelTextPaddingTop="5dp"
                        app:labelTextSize="14sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:lineMargin="12dp"
                        app:minSelect="1"
                        app:selectType="SINGLE"
                        app:wordMargin="12dp"/>
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_hot_search"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/dp_16"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
            <androidx.recyclerview.widget.RecyclerView
                android:orientation="horizontal"
                android:id="@+id/rvHotSearchRankTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager2HotSearchRank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_search_value"
        android:background="?attr/new_bg_one_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar_layout"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_result"
        android:background="?attr/new_bg_one_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar_layout">
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/type_recyclerview"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rank_recycler"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingHorizontal="16dp"/>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/result_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/result_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
</RelativeLayout>
