<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/gray_line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:id="@+id/rl_collect_jingyan"
        android:background="@color/white"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经验收藏"
            android:maxLines="1"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_jingyan_collect"
            android:background="@drawable/red_round"
            android:visibility="gone"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_collect_jingyan"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/iv_collect_jingyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_indicator_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:background="@color/gray_line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/rl_collect_ziliao"
        android:background="@color/white"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资料收藏"
            android:maxLines="1"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_ziliao_collect"
            android:background="@drawable/red_round"
            android:visibility="gone"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_collect_ziliao"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/iv_collect_ziliao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_indicator_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:background="@color/gray_line"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"/>
</LinearLayout>
