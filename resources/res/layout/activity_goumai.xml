<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/rlll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"/>
    <RelativeLayout
        android:id="@+id/rl_bootom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:background="?attr/bg_backgroud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">
            <TextView
                android:textColor="?attr/float_bg"
                android:id="@+id/tv_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="222222"
                android:layout_alignParentTop="true"
                android:layout_marginStart="130dp"/>
            <TextView
                android:textColor="?attr/item_school_color"
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="222222"
                android:layout_below="@+id/tv_m"
                android:layout_alignStart="@+id/tv_m"/>
            <TextView
                android:textColor="?attr/item_school_color"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="请选择套餐"
                android:layout_below="@+id/tv_count"
                android:layout_alignStart="@+id/tv_count"/>
            <TextView
                android:textSize="16sp"
                android:gravity="center"
                android:id="@+id/tv_guanbi"
                android:background="?attr/chosebiao"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>
            <ScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_above="@+id/llay_goods_bottom"
                android:layout_below="@+id/tv_count">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="?attr/font_com_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="商品简介"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:textColor="?attr/item_school_color"
                        android:id="@+id/tv_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="套装一：1本题+1本解析"
                        android:paddingStart="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"/>
                    <TextView
                        android:background="@color/color_new"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:textColor="?attr/font_com_list"
                        android:id="@+id/tv_orders2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="商品类型"
                        android:layout_marginStart="10dp"/>
                    <com.psychiatrygarden.utils.TagFlowLayout xmlns:zhy="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/id_flowlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        zhy:max_select="1"/>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:id="@+id/llay_goods_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <include layout="@layout/item_goods_tag_bottom"/>
            </LinearLayout>
        </RelativeLayout>
        <com.psychiatrygarden.widget.SkinGrakImagView
            android:id="@+id/img_imgview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/app_icon"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
</LinearLayout>
