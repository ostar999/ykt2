<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:background="?attr/new_gray_line_color"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <RelativeLayout
                android:id="@+id/niview"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:gravity="right"
                    android:id="@+id/nktxt"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/kyyxview"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/tv_school_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考研院校"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/forth_txt_color"
                    android:gravity="right"
                    android:id="@+id/stxt"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_school_label"
                    android:layout_alignParentEnd="true"
                    app:drawableEndCompat="@drawable/icon_indicator_right"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ly_dept"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/tv_dept_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="院系所"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/forth_txt_color"
                    android:gravity="right"
                    android:id="@+id/tv_dept"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_dept_label"
                    android:layout_alignParentEnd="true"
                    app:drawableEndCompat="@drawable/icon_indicator_right"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ly_type"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专业类别"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/forth_txt_color"
                    android:gravity="right"
                    android:id="@+id/tv_type"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentEnd="true"
                    app:drawableEndCompat="@drawable/icon_indicator_right"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/kyzyview"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/tv_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考研专业"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/forth_txt_color"
                    android:gravity="right"
                    android:id="@+id/kytxt"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_label"
                    android:layout_alignParentEnd="true"
                    app:drawableEndCompat="@drawable/icon_indicator_right"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/scoreView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="?attr/new_gray_line_color"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <RelativeLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/zz"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="政治"
                        android:layout_centerVertical="true"/>
                    <EditText
                        android:textSize="15sp"
                        android:textColor="?attr/first_txt_color"
                        android:textColorHint="?attr/forth_txt_color"
                        android:gravity="end|center_vertical"
                        android:id="@+id/edzz"
                        android:background="@color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="请填写您的政治成绩"
                        android:singleLine="true"
                        android:maxLength="8"
                        android:digits="1234567890."
                        android:drawablePadding="5dp"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/edwy"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/zz"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/wy"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="外语"
                        android:layout_centerVertical="true"/>
                    <EditText
                        android:textSize="15sp"
                        android:textColor="?attr/first_txt_color"
                        android:textColorHint="?attr/forth_txt_color"
                        android:gravity="end|center_vertical"
                        android:id="@+id/edwy"
                        android:background="@color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="请填写您的外语成绩"
                        android:singleLine="true"
                        android:maxLength="8"
                        android:digits="1234567890."
                        android:drawablePadding="5dp"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/edzyy"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/wy"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/zyy"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="专业一"
                        android:layout_centerVertical="true"/>
                    <EditText
                        android:textSize="15sp"
                        android:textColor="?attr/first_txt_color"
                        android:textColorHint="?attr/forth_txt_color"
                        android:gravity="end|center_vertical"
                        android:id="@+id/edzyy"
                        android:background="@color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="请填写您的专业课或数学成绩"
                        android:singleLine="true"
                        android:maxLength="8"
                        android:digits="1234567890."
                        android:drawablePadding="5dp"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/edzye"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/zyy"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/zhuanyeyi"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/zye"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="专业二"
                        android:layout_centerVertical="true"/>
                    <EditText
                        android:textSize="15sp"
                        android:textColor="?attr/first_txt_color"
                        android:textColorHint="?attr/forth_txt_color"
                        android:gravity="end|center_vertical"
                        android:id="@+id/edzye"
                        android:background="@color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="请填写您的专业课成绩"
                        android:singleLine="true"
                        android:maxLength="8"
                        android:digits="1234567890."
                        android:drawablePadding="5dp"
                        android:layout_centerVertical="true"
                        android:inputType="numberDecimal"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/zye"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/trlview"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">
                    <TextView
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/txds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传志愿截图"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/forth_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(仅用于审核，不公开)"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/txds"/>
                    <RelativeLayout
                        android:background="@color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true">
                        <ImageView
                            android:id="@+id/addimg"
                            android:padding="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/rpmscimg"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:id="@+id/close"
                            android:visibility="invisible"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="?attr/updelete"
                            android:layout_marginStart="-20dp"
                            android:layout_toEndOf="@+id/addimg"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:textSize="15sp"
        android:textColor="?attr/new_bg_one_color"
        android:gravity="center"
        android:id="@+id/catview"
        android:background="?attr/main_theme_color"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="查看排名"/>
</LinearLayout>
