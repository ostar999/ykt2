<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_choose_school_source_bg"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_24">
    <TextView
        android:id="@+id/tvDot"
        android:background="@drawable/shape_circle_first_txt_color"
        android:layout_width="@dimen/dp_5"
        android:layout_height="@dimen/dp_5"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_12"/>
    <TextView
        android:textSize="@dimen/sp_13"
        android:textColor="?attr/first_txt_color"
        android:gravity="center"
        android:id="@+id/tvSourceName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="测试数据"
        android:layout_toRightOf="@+id/tvDot"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_12"/>
</RelativeLayout>
