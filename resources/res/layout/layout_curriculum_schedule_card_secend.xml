<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingEnd="15dp">
        <ImageView
            android:id="@+id/statusimg"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@drawable/playloadimg"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="15sp"
            android:textColor="?attr/first_text_color"
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/rels"
            android:layout_toEndOf="@+id/statusimg"/>
        <RelativeLayout
            android:id="@+id/rels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/white_color02"
                android:id="@+id/stateTv"
                android:background="@drawable/shape_round_red"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播中"/>
            <ImageView
                android:id="@+id/lockcourse"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lockcourse"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:textSize="13sp"
        android:textColor="?attr/tertiary_text_color"
        android:id="@+id/detailTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="本地  31分钟  已学完"
        android:layout_marginStart="30dp"/>
    <View
        android:id="@+id/line"
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"/>
</LinearLayout>
