                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_below="@+id/tv_year"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginEnd="@dimen/dp_8"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:layout_constraintTop_toTopOf="parent"
                            app:spanCount="4"/>
                        <FrameLayout
                            android:id="@+id/ll_ec_year"
                            android:paddingTop="@dimen/dp_16"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/yearRecyclerView"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:textSize="@dimen/sp_11"
                                android:textColor="?attr/forth_txt_color"
                                android:layout_gravity="end"
                                android:id="@+id/tv_expand_collapse_years"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="展开更多"
                                android:layout_marginEnd="@dimen/dp_16"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                            <ImageView
                                android:layout_gravity="end|center_vertical"
                                android:id="@+id/iv_arrow_year"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:src="?attr/ic_question_combine_arrow"
                                android:layout_marginStart="@dimen/dp_2"/>
                        </FrameLayout>
                    </RelativeLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctl_question_type"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginHorizontal="@dimen/dp_16">
                        <com.psychiatrygarden.widget.LabelsView
                            android:id="@+id/lv_question_type"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_36"
                            android:animateLayoutChanges="true"
                            app:labelBackground="@drawable/tagbiao_bg_combine_question"
                            app:labelGravity="center"
                            app:labelTextColor="@drawable/color_combine_question_text"
                            app:labelTextPaddingLeft="@dimen/dp_24"
                            app:labelTextPaddingRight="@dimen/dp_24"
                            app:labelTextSize="@dimen/sp_12"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lineMargin="@dimen/dp_12"
                            app:minSelect="1"
                            app:selectType="MULTI"
                            app:wordMargin="@dimen/dp_12"/>
                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:textColor="?attr/first_text_color"
                            android:id="@+id/tv_question_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="题型"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:textSize="@dimen/sp_11"
                            android:textColor="?attr/forth_txt_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(可多选)"
                            android:layout_marginStart="@dimen/dp_8"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_question_type"
                            app:layout_constraintStart_toEndOf="@+id/tv_question_type"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctl_source"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginHorizontal="@dimen/dp_16">
                        <com.psychiatrygarden.widget.LabelsView
                            android:id="@+id/lv_source"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_36"
                            android:animateLayoutChanges="true"
                            app:labelBackground="@drawable/tagbiao_bg_combine_question"
                            app:labelGravity="center"
                            app:labelTextColor="@drawable/color_combine_question_text"
                            app:labelTextSize="@dimen/sp_12"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lineMargin="@dimen/dp_12"
                            app:selectType="SINGLE_IRREVOCABLY"
                            app:wordMargin="@dimen/dp_8"/>
                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:textColor="?attr/first_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分类"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ly_outlines"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginHorizontal="@dimen/dp_16">
                        <com.psychiatrygarden.widget.LabelsView
                            android:id="@+id/lv_outline"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_36"
                            android:animateLayoutChanges="true"
                            app:labelBackground="@drawable/tagbiao_bg_combine_question"
                            app:labelGravity="center"
                            app:labelTextColor="@drawable/color_combine_question_text"
                            app:labelTextSize="@dimen/sp_12"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lineMargin="@dimen/dp_12"
                            app:selectType="SINGLE_IRREVOCABLY"
                            app:wordMargin="@dimen/dp_8"/>
                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:textColor="?attr/first_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="大纲"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctl_frequency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginHorizontal="@dimen/dp_16">
                        <com.psychiatrygarden.widget.LabelsView
                            android:id="@+id/lv_frequency"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_36"
                            android:animateLayoutChanges="true"
                            app:labelBackground="@drawable/tagbiao_bg_combine_question"
                            app:labelGravity="center"
                            app:labelTextColor="@drawable/color_combine_question_text"
                            app:labelTextSize="@dimen/sp_12"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lineMargin="@dimen/dp_12"
                            app:selectType="SINGLE_IRREVOCABLY"
                            app:wordMargin="@dimen/dp_8"/>
                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:textColor="?attr/first_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="考频"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctlRenZhi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginHorizontal="@dimen/dp_16">
                        <com.psychiatrygarden.widget.LabelsView
                            android:id="@+id/lvRenZhi"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_36"
                            android:animateLayoutChanges="true"
                            app:labelBackground="@drawable/tagbiao_bg_combine_question"
                            app:labelGravity="center"
                            app:labelTextColor="@drawable/color_combine_question_text"
                            app:labelTextSize="@dimen/sp_12"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lineMargin="@dimen/dp_12"
                            app:selectType="SINGLE_IRREVOCABLY"
                            app:wordMargin="@dimen/dp_8"/>
                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:textColor="?attr/first_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="认知层次"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctl_mode"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginHorizontal="@dimen/dp_16">
                        <com.psychiatrygarden.widget.LabelsView
                            android:id="@+id/lv_mode"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_36"
                            android:animateLayoutChanges="true"
                            app:columns="4"
                            app:labelBackground="@drawable/tagbiao_bg_combine_question"
                            app:labelGravity="center"
                            app:labelTextColor="@drawable/color_combine_question_text"
                            app:labelTextSize="@dimen/sp_12"
                            app:labelTextWidth="@dimen/dp_72"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lineMargin="@dimen/dp_12"
                            app:selectType="SINGLE_IRREVOCABLY"
                            app:wordMargin="@dimen/dp_12"/>
                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:textColor="?attr/first_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="模式"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctl_number"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginHorizontal="@dimen/dp_16">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/ll_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_36"
                            android:weightSum="4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textColor="@drawable/color_combine_question_text"
                                android:gravity="center"
                                android:id="@+id/tv_count_one"
                                android:tag="15"
                                android:background="@drawable/tagbiao_bg_combine_question"
                                android:layout_width="0dp"
                                android:layout_height="28dp"
                                android:text="15"
                                android:layout_weight="1"/>
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textColor="@drawable/color_combine_question_text"
                                android:gravity="center"
                                android:id="@+id/tv_count_two"
                                android:tag="30"
                                android:background="@drawable/tagbiao_bg_combine_question"
                                android:layout_width="0dp"
                                android:layout_height="28dp"
                                android:text="30"
                                android:layout_weight="1"
                                android:layout_marginStart="9dp"/>
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textColor="@drawable/color_combine_question_text"
                                android:gravity="center"
                                android:id="@+id/tv_count_three"
                                android:tag="50"
                                android:background="@drawable/tagbiao_bg_combine_question"
                                android:layout_width="0dp"
                                android:layout_height="28dp"
                                android:text="50"
                                android:layout_weight="1"
                                android:layout_marginStart="9dp"/>
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textColor="@drawable/color_combine_question_text"
                                android:gravity="center"
                                android:id="@+id/tv_count_four"
                                android:tag="100"
                                android:background="@drawable/tagbiao_bg_combine_question"
                                android:layout_width="0dp"
                                android:layout_height="28dp"
                                android:text="100"
                                android:layout_weight="1"
                                android:layout_marginStart="9dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12"
                            app:layout_constraintStart_toStartOf="@+id/ll_count"
                            app:layout_constraintTop_toBottomOf="@+id/ll_count">
                            <EditText
                                android:textSize="@dimen/sp_12"
                                android:textColor="?attr/question_color"
                                android:textColorHint="?attr/write_comment_hint"
                                android:gravity="center"
                                android:id="@+id/et_input"
                                android:background="@drawable/shape_customer_button_bg"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:hint="自定义"
                                android:layout_weight="3"
                                android:inputType="number"
                                android:imeOptions="actionDone"
                                android:layout_marginEnd="9dp"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                        </LinearLayout>
                        <TextView
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="?attr/first_text_color"
                            android:id="@+id/tvQuestionCount"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:text="题量"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_74"/>
                </LinearLayout>
                <com.psychiatrygarden.widget.CustomEmptyView
