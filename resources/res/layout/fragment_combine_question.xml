<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_root"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_combine_question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_74"
        android:layout_marginHorizontal="@dimen/dp_16">
        <androidx.core.widget.NestedScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layoutContent"
                    android:paddingTop="@dimen/dp_24"
                    android:paddingBottom="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="@dimen/dp_24">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:textColor="?attr/first_text_color"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="名称"
                        android:paddingHorizontal="@dimen/dp_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <EditText
                        android:textSize="@dimen/sp_14"
                        android:textColor="?attr/question_color"
                        android:textColorHint="?attr/forth_txt_color"
                        android:gravity="start|center_vertical"
                        android:id="@+id/et_question_title"
                        android:background="@drawable/bg_combine_question_input"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_42"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:hint="请输入组题名称"
                        android:lines="1"
                        android:maxLength="20"
                        android:textCursorDrawable="@drawable/input_text_cursor"
                        android:layout_marginHorizontal="@dimen/dp_16"
                        android:paddingHorizontal="12dp"/>
                    <RelativeLayout
                        android:id="@+id/ll_subjects"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginHorizontal="@dimen/dp_16">
                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:textColor="?attr/first_text_color"
                            android:id="@+id/tv_subject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学科"/>
                        <TextView
                            android:textSize="@dimen/sp_11"
                            android:textColor="?attr/forth_txt_color"
                            android:id="@+id/tv_subject_duo_xuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(可多选)"
                            android:layout_alignBaseline="@+id/tv_subject"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_toEndOf="@+id/tv_subject"/>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:id="@+id/ly_choose_chapter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true">
                            <TextView
                                android:textSize="@dimen/sp_11"
                                android:textColor="?attr/forth_txt_color"
                                android:id="@+id/tv_choose_chapter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="按章节选择"
                                android:layout_alignBottom="@+id/tv_subject"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_toEndOf="@+id/tv_subject"/>
                            <ImageView
                                android:id="@+id/img_choose_chapter"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:src="?attr/ic_question_combine_arrow"
                                android:rotation="-90"/>
                            <ImageView
                                android:id="@+id/img_choose_chapter_red"
                                android:visibility="gone"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:src="?attr/ic_choose_chapter_red"/>
                        </LinearLayout>
                        <com.psychiatrygarden.widget.LabelsView
                            android:id="@+id/lv_subject"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_below="@+id/tv_subject"
                            android:animateLayoutChanges="true"
                            app:labelBackground="@drawable/tagbiao_bg_combine_question"
                            app:labelGravity="center"
                            app:labelTextColor="@drawable/color_combine_question_text"
                            app:labelTextPaddingLeft="@dimen/dp_11"
                            app:labelTextPaddingRight="@dimen/dp_11"
                            app:labelTextSize="@dimen/sp_12"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lineMargin="@dimen/dp_12"
                            app:minSelect="1"
                            app:selectType="MULTI"
                            app:wordMargin="@dimen/dp_12"/>
                        <FrameLayout
                            android:id="@+id/ll_ec_subject"
                            android:paddingTop="@dimen/dp_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lv_subject"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:textSize="@dimen/sp_11"
                                android:textColor="?attr/forth_txt_color"
                                android:layout_gravity="end"
                                android:id="@+id/tv_expand_collapse_subject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="展开更多"
                                android:layout_marginEnd="@dimen/dp_16"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                            <ImageView
                                android:layout_gravity="end|center_vertical"
                                android:id="@+id/iv_arrow_subject"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:src="?attr/ic_question_combine_arrow"/>
                        </FrameLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/ctl_year"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_24">
                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:textColor="?attr/first_text_color"
                            android:id="@+id/tv_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16"
