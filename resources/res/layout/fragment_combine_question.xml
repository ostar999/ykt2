                            android:id="@+id/lv_years"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_below="@+id/tv_year"
                            android:animateLayoutChanges="true"
                            app:columns="4"
                            app:labelBackground="@drawable/tagbiao_bg_combine_question"
                            app:labelGravity="center"
                            app:labelTextColor="@drawable/color_combine_question_text"
                            app:labelTextSize="@dimen/sp_12"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lineMargin="@dimen/dp_12"
                            app:minSelect="1"
                            app:selectType="SINGLE_IRREVOCABLY"
                            app:wordMargin="@dimen/dp_8"/>
