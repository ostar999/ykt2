<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <FrameLayout
        android:id="@+id/share_change_fl"
        android:background="@color/dialog_transparent_bg"
        android:paddingBottom="@dimen/dp_175"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/ly_pic_view"
            android:visibility="visible"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginHorizontal="24dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/topEmptyView"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"/>
                <RelativeLayout
                    android:id="@+id/layoutImageRoot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/share_top_iv"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_128"
                            android:src="@drawable/icon_white_theme_share_dialog_bg"
                            android:scaleType="fitXY"/>
                        <View
                            android:id="@+id/share_center_v"
                            android:background="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginTop="-3dp"
                            android:layout_marginBottom="-3dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/share_bot_iv"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:src="@drawable/icon_yellow_theme_share_dialog_bottom_bg"
                            android:scaleType="fitXY"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/layoutContent"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="24dp">
                        <RelativeLayout
                            android:id="@+id/rl_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/book_share_img"
                                android:layout_width="41dp"
                                android:layout_height="56dp"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius="4dp"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="#ff303030"
                                android:id="@+id/book_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="阴阳典当铺"
                                android:layout_toRightOf="@+id/book_share_img"
                                android:layout_marginStart="12dp"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="#ff909090"
                                android:id="@+id/book_author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="作者名称"
                                android:layout_toRightOf="@+id/book_share_img"
                                android:layout_alignBottom="@+id/book_share_img"
                                android:layout_marginStart="12dp"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="16dp"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/imgLeftMark"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/icon_white_theme_left_mark_svg"
                                android:scaleType="fitXY"
                                android:layout_below="@+id/rl_info"/>
                            <TextView
                                android:textSize="16sp"
                                android:textColor="#ff303030"
                                android:id="@+id/book_share_text"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:text=""
                                android:layout_weight="1"
                                android:lineSpacingExtra="3dp"
                                android:lineSpacingMultiplier="1.2"
                                android:letterSpacing="0.15"/>
                            <ImageView
                                android:layout_gravity="end"
                                android:id="@+id/imgRightMark"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginBottom="32dp"
                                android:src="@drawable/icon_white_theme_right_mark_svg"
                                android:scaleType="fitXY"
                                android:layout_below="@+id/book_share_text"
                                android:layout_alignParentRight="true"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/ly_code"
                            android:layout_width="match_parent"
                            android:layout_height="64dp">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/img_logo"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/app_icon"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="4dp"
                                app:riv_corner_radius="4dp"/>
                            <ImageView
                                android:id="@+id/img_ykb_logo"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:src="?attr/ic_screen_ykb_logo"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/img_logo"/>
                            <ImageView
                                android:id="@+id/imgLog2"
                                android:layout_width="wrap_content"
                                android:layout_height="33dp"
                                android:layout_marginLeft="2dp"
                                android:src="?attr/ic_screen_ykb_info_logo"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/img_ykb_logo"/>
                            <ImageView
                                android:id="@+id/img_code"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:src="@mipmap/ic_ykb_download_code"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/ly_share"
        android:background="@drawable/white_top_13"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_marginTop="95dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/first_text_color"
            android:gravity="center"
            android:id="@+id/tv_share_to"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="分享至"/>
        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="31dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="31dp">
                    <ImageView
                        android:padding="6dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@mipmap/ic_save_pic"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/question_color"
                        android:id="@+id/tv_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="保存图片"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/btn_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp">
                    <ImageView
                        android:padding="6dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="?attr/umeng_socialize_wechat"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/question_color"
                        android:id="@+id/tv_wechat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="微信好友"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/btn_wxcircle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp">
                    <ImageView
                        android:padding="8dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="?attr/umeng_socialize_wxcircle"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/question_color"
                        android:id="@+id/tv_friendship"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="朋友圈"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/btn_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp">
                    <ImageView
                        android:padding="8dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="?attr/umeng_socialize_renren_on"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/question_color"
                        android:id="@+id/tv_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="QQ"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/btn_sina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp">
                    <ImageView
                        android:padding="6dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="?attr/umeng_socialize_sina_on"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/question_color"
                        android:id="@+id/tv_weibo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="微博"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <View
            android:id="@+id/line"
            android:background="?attr/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/first_text_color"
            android:gravity="center"
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="取消"/>
    </LinearLayout>
</FrameLayout>
