<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/app_title_color"
        android:gravity="center"
        android:background="?attr/app_theme"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="社群"
        android:layout_centerInParent="true"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/question_color"
        android:textColorHint="?attr/dialog_input_hint_color"
        android:gravity="center_vertical"
        android:id="@+id/tv_search"
        android:background="?attr/line_all_round_write"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:hint=" 关键词搜索"
        android:singleLine="true"
        android:drawableLeft="?attr/icon_search"
        android:drawablePadding="5dp"
        android:imeOptions="actionSearch"
        android:textCursorDrawable="@drawable/color_cursor"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_group_chat_classify"
            android:background="@color/gray_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/mSwipeLayput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_group_chat_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
</LinearLayout>
