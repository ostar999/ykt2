<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/alivc_common_theme_primary_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/alivc_common_theme_primary_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/alivc_common_margin_25">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alivc_common_height_group_15"
            android:layout_marginTop="@dimen/alivc_common_margin_8">
            <View
                android:layout_gravity="center"
                android:background="@color/alivc_common_bg_gray_bright"
                android:layout_width="0dp"
                android:layout_height="@dimen/alivc_common_line_1px"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/alivc_common_font_12"
                android:textColor="@color/alivc_common_font_white_light"
                android:id="@+id/tv_action_title"
                android:paddingLeft="@dimen/alivc_common_padding_5"
                android:paddingRight="@dimen/alivc_common_padding_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alivc_danmaku_setting_title"/>
            <View
                android:layout_gravity="center"
                android:background="@color/alivc_common_bg_gray_bright"
                android:layout_width="0dp"
                android:layout_height="@dimen/alivc_common_line_1px"
                android:layout_weight="1"/>
        </LinearLayout>
        <RelativeLayout
            android:paddingLeft="@dimen/alivc_common_keyline_32"
            android:paddingTop="@dimen/alivc_common_padding_10"
            android:paddingRight="@dimen/alivc_common_keyline_32"
            android:paddingBottom="@dimen/alivc_common_padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/alivc_common_font_12"
                android:textColor="@color/alivc_common_font_white_light"
                android:id="@+id/tv_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alivc_danmaku_setting_alpha"/>
            <TextView
                android:textSize="@dimen/alivc_common_font_12"
                android:textColor="@color/alivc_common_font_white_light"
                android:id="@+id/tv_alpha_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alivc_common_padding_10"
                android:text="0%"
                android:layout_below="@+id/tv_alpha"
                android:layout_alignParentRight="true"/>
            <androidx.appcompat.widget.AppCompatSeekBar
                android:layout_gravity="center"
                android:id="@+id/seek_alpha"
                android:paddingTop="@dimen/alivc_common_padding_6"
                android:paddingBottom="@dimen/alivc_common_padding_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alivc_common_margin_10"
                android:layout_marginRight="@dimen/alivc_common_margin_8"
                android:progress="0"
                android:layout_toLeftOf="@+id/tv_alpha_value"
                android:layout_below="@+id/tv_alpha"
                android:layout_alignLeft="@+id/tv_alpha"
                style="@style/alivc_info_seekbar_blue_voice"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingLeft="@dimen/alivc_common_keyline_32"
            android:paddingTop="@dimen/alivc_common_padding_10"
            android:paddingRight="@dimen/alivc_common_keyline_32"
            android:paddingBottom="@dimen/alivc_common_padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/alivc_common_font_12"
                android:textColor="@color/alivc_common_font_white_light"
                android:id="@+id/tv_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alivc_danmaku_setting_region"/>
            <TextView
                android:textSize="@dimen/alivc_common_font_12"
                android:textColor="@color/alivc_common_font_white_light"
                android:id="@+id/tv_region_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alivc_common_margin_10"
                android:text="1/4å±"
                android:layout_below="@+id/tv_region"
                android:layout_alignParentRight="true"/>
            <androidx.appcompat.widget.AppCompatSeekBar
                android:layout_gravity="center"
                android:id="@+id/seek_region"
                android:paddingTop="@dimen/alivc_common_padding_6"
                android:paddingBottom="@dimen/alivc_common_padding_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alivc_common_padding_10"
                android:layout_marginRight="@dimen/alivc_common_padding_8"
                android:max="3"
                android:layout_toLeftOf="@+id/tv_region_value"
                android:layout_below="@+id/tv_region"
                android:layout_alignLeft="@+id/tv_region"
                style="@style/alivc_info_seekbar_blue_voice"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingLeft="@dimen/alivc_common_keyline_32"
            android:paddingTop="@dimen/alivc_common_padding_10"
            android:paddingRight="@dimen/alivc_common_keyline_32"
            android:paddingBottom="@dimen/alivc_common_padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/alivc_common_font_12"
                android:textColor="@color/alivc_common_font_white_light"
                android:id="@+id/tv_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alivc_danmaku_setting_speed"/>
            <TextView
                android:textSize="@dimen/alivc_common_font_12"
                android:textColor="@color/alivc_common_font_white_light"
                android:id="@+id/tv_speed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alivc_common_margin_10"
                android:text="0%"
                android:layout_below="@+id/tv_speed"
                android:layout_alignParentRight="true"/>
            <androidx.appcompat.widget.AppCompatSeekBar
                android:layout_gravity="center"
                android:id="@+id/seek_speed"
                android:paddingTop="@dimen/alivc_common_padding_6"
                android:paddingBottom="@dimen/alivc_common_padding_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alivc_common_margin_10"
                android:layout_marginRight="@dimen/alivc_common_margin_8"
                android:progress="0"
                android:layout_toLeftOf="@+id/tv_speed_value"
                android:layout_below="@+id/tv_speed"
                android:layout_alignLeft="@+id/tv_speed"
                style="@style/alivc_info_seekbar_blue_voice"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/alivc_common_font_12"
            android:textColor="@color/alivc_common_font_white_light"
            android:gravity="center"
            android:id="@+id/tv_default"
            android:background="@color/alivc_common_bg_black_alpha_80"
            android:padding="@dimen/alivc_common_padding_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alivc_common_margin_12"
            android:layout_marginTop="@dimen/alivc_common_margin_30"
            android:layout_marginBottom="@dimen/alivc_common_margin_30"
            android:text="@string/alivc_danmaku_setting_default"/>
    </LinearLayout>
</ScrollView>
