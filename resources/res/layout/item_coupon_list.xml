<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_main_theme_five_deep_color_corners_12_stroke0_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16">
    <RelativeLayout
        android:id="@+id/layout1"
        android:background="@drawable/shape_main_theme_five_deep_color_corners_12_left"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="?attr/main_theme_color"
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="¥50"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textColor="?attr/main_theme_color"
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满300元可用"
            android:layout_below="@+id/tvCount"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            android:textColor="?attr/main_theme_color"
            android:gravity="center"
            android:id="@+id/tvUse"
            android:background="@drawable/shape_main_theme_color_stoke0_5_corners100"
            android:layout_width="@dimen/dp_69"
            android:layout_height="@dimen/dp_22"
            android:layout_marginTop="10dp"
            android:text="立即使用"
            android:layout_below="@+id/tvDesc"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_toRightOf="@+id/layout1"
        android:paddingStart="@dimen/dp_10">
        <TextView
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="优惠券名称优惠券名称优惠券名称名称"
            android:maxLines="1"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="?attr/second_txt_color"
            android:ellipsize="end"
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="2022-10-12 15:30至2023-10-12 15:30"
            android:maxLines="1"
            android:layout_below="@+id/tvTitle"/>
        <TextView
            android:textSize="11sp"
            android:textColor="#ff7b7e83"
            android:id="@+id/tvDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="使用详情"
            android:layout_below="@+id/tvTime"/>
        <ImageView
            android:id="@+id/imgDetail"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/icon_bottom_arrow_new"
            android:layout_toRightOf="@+id/tvDetail"
            android:layout_alignTop="@+id/tvDetail"
            android:layout_alignBottom="@+id/tvDetail"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layoutDetail"
        android:paddingTop="@dimen/dp_10"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_below="@+id/layout1"
        android:paddingStart="@dimen/dp_10">
        <TextView
            android:textSize="11sp"
            android:textColor="#ff7b7e83"
            android:id="@+id/tvDetail1"
            android:visibility="visible"
            android:layout_width="323dp"
            android:layout_height="20dp"
            android:text="券编码：12345678765432345"/>
        <TextView
            android:textSize="11sp"
            android:textColor="#ff7b7e83"
            android:id="@+id/tvDetail2"
            android:visibility="visible"
            android:layout_width="323dp"
            android:layout_height="20dp"
            android:text="限品类：适用于全部商品/适用于全部课程适用于全部商品/适用于全部课程"/>
    </LinearLayout>
</RelativeLayout>
