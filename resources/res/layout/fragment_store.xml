<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="?attr/app_theme"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <com.psychiatrygarden.widget.AlphaImageView
            android:background="@drawable/nightmode"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/app_title_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商城"
            android:layout_centerInParent="true"/>
        <com.psychiatrygarden.widget.AlphaTextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="分享"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linechild"
        android:background="?attr/hor_view_color"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:id="@+id/rl_column"
            android:background="?attr/hor_view_color"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1">
            <HorizontalScrollView
                android:id="@+id/mColumnScrollView"
                android:background="?attr/hor_view_color"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/mRadioGroup_content"
                    android:background="?attr/hor_view_color"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"/>
            </HorizontalScrollView>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/category_line"
        android:background="?attr/gray_line_126"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.psychiatrygarden.widget.LazyViewPager
            android:id="@+id/mViewPagerShop"
            android:background="?attr/bg_backgroud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_network_load_fail"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/network_load_fail"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
