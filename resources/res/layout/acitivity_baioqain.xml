<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:id="@+id/biao_rel"
    android:background="#00000000"
    android:paddingTop="10dp"
    android:paddingBottom="38dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="38dp"
    android:paddingEnd="38dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linrel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:gravity="center"
                android:background="?attr/shangyuan"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请选择标签"/>
            <ImageView
                android:id="@+id/chose"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/chosebiao"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <TextView
            android:textColor="?attr/item_school_color"
            android:background="?attr/biaoqian"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标签:"
            android:paddingStart="10dp"/>
        <com.psychiatrygarden.utils.TagMuilFlowLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mTagMuilFlowLayout"
            android:background="?attr/biaoqian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>
        <TextView
            android:textColor="?attr/question_color"
            android:gravity="center"
            android:id="@+id/xuanzetijiao"
            android:background="?attr/toupiaobuttom"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
