<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/buttom_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView1"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/textView7"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/dominant_color"
                    android:id="@+id/textView8"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/textView9"
                android:background="?attr/line"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <RelativeLayout
                android:gravity="center"
                android:id="@+id/shouhuo_rl"
                android:background="?attr/buttom_bg"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView2"
                    android:background="@drawable/dingwei"
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:textColor="?attr/tertiary_text_color"
                    android:ellipsize="end"
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="收货地址：请添加收货地址"
                    android:maxLines="2"
                    android:layout_toLeftOf="@+id/tv_view"
                    android:layout_toRightOf="@+id/textView2"
                    android:layout_below="@+id/textView5"
                    android:lineSpacingMultiplier="1.2"/>
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/tertiary_text_color"
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="收  货 人："
                    android:layout_alignLeft="@+id/textView3"/>
                <TextView
                    android:id="@+id/tv_view"
                    android:background="?attr/tertiary_text_color"
                    android:visibility="gone"
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/tertiary_text_color"
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="82dp"
                    android:layout_toRightOf="@+id/textView2"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"/>
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/tertiary_text_color"
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView6"
                    android:layout_alignRight="@+id/textView3"
                    android:layout_alignBottom="@+id/textView6"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/textView1"
                android:background="@drawable/tiaofu"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>
            <TextView
                android:id="@+id/textView4"
                android:background="?attr/line"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/rl_views"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/textView13"
                    android:background="?attr/line"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/rl_views"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="?attr/font_com_list"
                    android:gravity="center"
                    android:id="@+id/tv_jia"
                    android:background="?attr/gray_line_126"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="+"
                    android:layout_alignParentRight="true"/>
                <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/textView16"
                    android:background="?attr/gray_line_126"
                    android:paddingTop="0.5dp"
                    android:paddingBottom="0.5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@+id/tv_jia"
                    android:layout_alignTop="@+id/tv_jia">
                    <TextView
                        android:textColor="?attr/question_color"
                        android:gravity="center"
                        android:id="@+id/tv_num"
                        android:background="?attr/bg_backgroud"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="1"/>
                </RelativeLayout>
                <TextView
                    android:textColor="?attr/font_com_list"
                    android:gravity="center"
                    android:id="@+id/tv_jian"
                    android:background="?attr/gray_line_126"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="-"
                    android:layout_toLeftOf="@+id/textView16"
                    android:layout_alignTop="@+id/tv_jia"/>
                <TextView
                    android:id="@+id/textView19"
                    android:background="?attr/gray_line_126"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_jian"
                    android:layout_alignLeft="@+id/textView14"
                    android:layout_alignRight="@+id/tv_jia"/>
                <TextView
                    android:textColor="?attr/font_com_list"
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="数量"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/data_song"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="配送："
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/tv_kuaidi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/textView21"
                    android:background="?attr/line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/data_song"
                    android:layout_alignLeft="@+id/data_song"
                    android:layout_alignRight="@+id/tv_kuaidi"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/kuaidiming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/data_song"
                    android:layout_alignBaseline="@+id/data_song"
                    android:layout_alignBottom="@+id/data_song"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/t"
                    android:background="@null"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/d"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="买家留言："
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/te"
                android:background="?attr/line"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/textView26"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="?attr/dominant_color"
                    android:id="@+id/tv_tmoney2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_alignBaseline="@+id/textView26"
                    android:layout_alignBottom="@+id/textView26"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/dominant_color"
                    android:id="@+id/tv_tmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_tmoney2"
                    android:layout_alignBaseline="@+id/tv_tmoney2"
                    android:layout_alignBottom="@+id/tv_tmoney2"/>
                <TextView
                    android:id="@+id/textView29"
                    android:background="?attr/line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/textView30"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下单时间"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/tv_dingdanshijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="2016-12-04"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/textView32"
                    android:background="?attr/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/rl"
        android:background="?attr/bg_backgroud"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/textView22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/font_com_list"
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款剩余时间"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/float_bg"
                android:id="@+id/shijian_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <TextView
            android:textColor="?attr/font_com_list"
            android:gravity="center"
            android:id="@+id/quit_tv"
            android:background="?attr/gray_line_126"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="取消订单"
            android:layout_weight="1"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/app_title_color"
            android:gravity="center"
            android:id="@+id/textView25"
            android:background="?attr/app_theme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="继续支付"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:id="@+id/r2"
        android:background="?attr/bg_backgroud"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:gravity="bottom"
            android:id="@+id/kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="联系客服"
            android:drawableLeft="@drawable/kefu"
            android:drawablePadding="3dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/r2_txt"
            android:background="@color/app_theme_red"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="查看物流"/>
    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:background="?attr/gray_line_126"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/rl"/>
</RelativeLayout>
