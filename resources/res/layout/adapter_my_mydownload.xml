<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <CheckBox
        android:id="@+id/checkBox_download"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_download_state"
        android:layout_toRightOf="@+id/checkBox_download"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/black"
            android:id="@+id/tv_download_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生理学 导学"
            android:singleLine="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/gray_font"
                android:id="@+id/tv_download_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/gray_font"
                android:id="@+id/tv_download_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载中"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/probar_download"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:progressTint="#6acc6b"
            android:progressBackgroundTint="#ededed"
            style="@android:style/Widget.SeekBar"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_download_state"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/download_xiazai_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
