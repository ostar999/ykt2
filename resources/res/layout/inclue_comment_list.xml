<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/f_view"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/show_sub_floor_content"
        android:paddingTop="10dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/myexptervew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linetitlschool"
            android:layout_marginEnd="15dp"
            android:layout_alignStart="@+id/linetitlschool"
            layout="@layout/adapter_item"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/myexptervew"
            android:paddingEnd="15dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="11sp"
                android:textColor="?attr/item_school_color"
                android:id="@+id/tv_support"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支持(1)"
                android:layout_marginEnd="30dp"/>
            <TextView
                android:textSize="11sp"
                android:textColor="?attr/comment_oppose_text_color"
                android:id="@+id/tv_oppose"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="反对(2)"
                android:layout_marginEnd="30dp"/>
            <TextView
                android:textSize="11sp"
                android:textColor="?attr/secondary_text_color"
                android:id="@+id/tv_reply"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:paddingRight="8dp"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 回复"/>
        </LinearLayout>
        <TextView
            android:textSize="9sp"
            android:textColor="?attr/lou_color"
            android:gravity="center"
            android:id="@+id/tit_lou"
            android:background="?attr/lou_bg_color"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:layout_alignParentTop="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#1b79d7"
            android:gravity="top"
            android:id="@+id/tit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tit_lou"/>
        <ImageView
            android:gravity="top"
            android:id="@+id/isvipimg"
            android:visibility="gone"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/vipimg"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tit_name"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/linetitlschool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tit_name"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/tit_name">
            <ImageView
                android:id="@+id/isverauth"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:src="@drawable/auth2img"
                android:scaleType="fitCenter"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:textSize="10sp"
                android:textColor="?attr/school_name_text_color"
                android:id="@+id/tit_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_elite"
            android:background="@drawable/circle_elite_icon"
            android:visibility="gone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:contentDescription="@null"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/lin_zan"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="10sp"
                android:textColor="#555555"
                android:id="@+id/commentList_item_tv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="100"/>
            <ImageView
                android:id="@+id/imageView_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/hide_sub_floor_content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:textColor="?attr/question_color"
            android:gravity="center"
            android:id="@+id/hide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="展开隐藏楼层"
            android:drawablePadding="10dp"
            android:layout_centerInParent="true"/>
        <ProgressBar
            android:id="@+id/hide_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/hide_text"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</FrameLayout>
