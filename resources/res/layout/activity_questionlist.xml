<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="32dp"
        android:minHeight="?attr/actionBarSize"
        app:layout_collapseMode="pin">
        <com.google.android.material.appbar.AppBarLayout
            android:orientation="vertical"
            android:id="@+id/appBarLayout"
            android:background="?attr/app_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:expanded="true">
            <RelativeLayout
                android:id="@+id/rl_content"
                android:background="?attr/app_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                app:layout_scrollFlags="snap|exitUntilCollapsed|scroll">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleview"
                    android:paddingLeft="15dp"
                    android:paddingBottom="15dp"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:paddingEnd="16dp"/>
                <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/openrel"
                    android:background="?attr/app_bg"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/recycleview">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/opentxt"
                        android:gravity="center"
                        android:id="@+id/opentxt"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="全部"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/buttonimg"
                        android:layout_toRightOf="@+id/opentxt"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:background="?attr/question_sheet_line_color"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="vertical"
            android:id="@+id/questionList_GridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginHorizontal="@dimen/dp_10"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/question_color"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:id="@+id/tv_statistics"
        android:background="?attr/tertiary_backgroup_color"
        android:layout_width="match_parent"
        android:layout_height="32dp"/>
</FrameLayout>
