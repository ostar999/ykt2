<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/view_flexible_publishing_image"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:src="@drawable/bg_upload_image"
        android:scaleType="centerCrop"/>
    <TextView
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/view_flexible_publishing_text_progress"
        android:background="#77000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"/>
    <ImageView
        android:id="@+id/view_flexible_publishing_image_delete"
        android:background="@drawable/selector_icon_my_edit_clear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
