<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:paddingLeft="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="16dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="?attr/register_phone_icon"/>
            <EditText
                android:textSize="14sp"
                android:textColor="?attr/first_text_color"
                android:textColorHint="?attr/fourth_text_color"
                android:id="@+id/edt_phone"
                android:background="@color/transparent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入账号"
                android:singleLine="true"
                android:maxLength="11"
                android:inputType="numberSigned"
                android:layout_marginStart="10dp"
                android:importantForAutofill="no"/>
        </LinearLayout>
        <View
            android:background="?attr/fourth_line_backgroup_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <ImageView
                android:id="@+id/img_pwd"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="?attr/register_input_pwd_icon"
                android:layout_centerVertical="true"/>
            <EditText
                android:textSize="14sp"
                android:textColor="?attr/first_text_color"
                android:textColorHint="?attr/dialog_input_hint_color"
                android:id="@+id/edt_pwd"
                android:background="@color/transparent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:layout_centerVertical="true"
                android:inputType="textPassword"
                android:layout_marginStart="11dp"
                android:layout_toStartOf="@+id/img_eyes"
                android:layout_toEndOf="@+id/img_pwd"/>
            <ImageView
                android:id="@+id/img_eyes"
                android:padding="@dimen/dp_4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="?attr/ic_eyes_open"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="?attr/fourth_line_backgroup_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"/>
        <com.psychiatrygarden.widget.AlphaTextView
            android:textSize="12sp"
            android:textColor="?attr/fourth_text_color"
            android:gravity="center"
            android:id="@+id/tv_forget_pwd"
            android:paddingTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forget_pwd"
            android:singleLine="true"
            android:drawablePadding="2dp"
            android:paddingEnd="10dp"/>
        <TextView
            android:enabled="false"
            android:textColor="@drawable/login_btn_text_color"
            android:gravity="center"
            android:id="@+id/tv_login"
            android:background="?attr/login_btn_en_disable"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:text="@string/login"/>
        <com.psychiatrygarden.widget.AlphaButton
            android:textSize="14sp"
            android:textColor="?attr/dominant_color"
            android:id="@+id/bt_register"
            android:background="?attr/register_bg_white_round_conner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:text="@string/register"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_agree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <CheckBox
                android:gravity="center_vertical"
                android:id="@+id/logincheck"
                android:background="?attr/checkbox_style"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:checked="false"
                android:button="@null"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/secondary_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/dominant_color"
                android:gravity="center"
                android:id="@+id/yonghuxieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户协议》"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/secondary_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 和 "/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/dominant_color"
                android:gravity="bottom|center_horizontal"
                android:id="@+id/yinsixieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私政策》"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/iv_wx_login"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginBottom="64dp"
        android:src="@drawable/ic_wx_login"/>
</FrameLayout>
