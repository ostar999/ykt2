<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:layout_marginTop="@dimen/dp_6"
    app:bl_corners_radius="@dimen/dp_2"
    app:bl_gradient_angle="270"
    app:bl_gradient_endColor="@color/c_58cdff"
    app:bl_gradient_startColor="@color/c_89edff">
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_173a8e"
        android:id="@+id/tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lineImgv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/lineImgv"
        android:layout_width="@dimen/dp_2"
        android:layout_height="match_parent"
        android:src="@drawable/common_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lineImgv"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_173a8e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_score"
            android:paddingEnd="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/scoreTv"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.noober.background.view.BLTextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_173a8e"
            android:gravity="center"
            android:id="@+id/scoreTv"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_24"
            app:bl_corners_radius="@dimen/dp_2"
            app:bl_solid_color="@color/c_54ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.noober.background.view.BLConstraintLayout>
