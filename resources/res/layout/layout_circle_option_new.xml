<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/optionRel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:textSize="16sp"
        android:textColor="?attr/first_txt_color"
        android:textColorHint="?attr/forth_txt_color"
        android:id="@+id/editId"
        android:background="@drawable/bg_circle_report_input"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:maxLength="15"
        android:textCursorDrawable="@drawable/color_cursor"
        android:paddingStart="16dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/first_txt_color"
        android:textColorHint="?attr/forth_txt_color"
        android:gravity="center_vertical"
        android:id="@+id/tv_content"
        android:background="@drawable/bg_circle_report_input"
        android:paddingLeft="16dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text=""
        android:maxLength="15"
        android:textCursorDrawable="@drawable/color_cursor"/>
    <ImageView
        android:id="@+id/deleEdit"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/optiondete"
        android:layout_alignTop="@+id/editId"
        android:layout_alignBottom="@+id/editId"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/editId"/>
</RelativeLayout>
