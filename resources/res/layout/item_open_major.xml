<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_white_corners_12"
    android:paddingLeft="@dimen/dp_12"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    android:layout_marginHorizontal="@dimen/dp_8"
    android:paddingHorizontal="@dimen/dp_12">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100201-内科学"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textColor="?attr/orange_color"
            android:id="@+id/tv_type"
            android:background="@drawable/shape_major_type_xue_bg"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学硕"
            android:layout_marginStart="@dimen/dp_2"
            android:paddingHorizontal="@dimen/dp_2"/>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginVertical="@dimen/dp_12"
        style="@style/new_gray_line_style"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_11"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/tv_follow_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.3w"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="?attr/third_txt_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16">
            <TextView
                android:textSize="@dimen/sp_11"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/tv_follow_count_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.3w"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="?attr/third_txt_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="近7天关注"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16">
            <TextView
                android:textSize="@dimen/sp_11"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/tv_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.3w"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="?attr/third_txt_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="end"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_11"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/tv_student_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.3w"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="?attr/third_txt_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招生数"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
