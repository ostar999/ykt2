<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/item_majors_ll"
    android:background="@drawable/shape_white_corners_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8">
    <RelativeLayout
        android:id="@+id/item_majors_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_12">
                <TextView
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/major_title_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100201-内科学"/>
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="?attr/orange_color"
                    android:id="@+id/tv_type"
                    android:background="@drawable/shape_major_type_xue_bg"
                    android:paddingLeft="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学硕"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_toEndOf="@+id/major_title_code_tv"
                    android:paddingHorizontal="@dimen/dp_2"/>
                <CheckBox
                    android:id="@+id/checkbox_select"
                    android:background="@drawable/school_check_box_bg_new"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_12"
                    android:button="@null"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View
                android:background="?attr/new_gray_line_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="@dimen/dp_12"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/follow_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:textColor="?attr/third_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/recent_7days_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:textColor="?attr/third_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="近7天关注"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/view_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:textColor="?attr/third_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="浏览"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16">
                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/student_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <TextView
                        android:textSize="@dimen/sp_10"
                        android:textColor="?attr/third_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="招生数"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/major_change_ll"
            android:background="@drawable/school_rank_bg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_28">
            <ImageView
                android:id="@+id/rankChangeIv"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:src="@drawable/rank_up"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textStyle="bold"
                android:textColor="@color/main_theme_color"
                android:id="@+id/major_rank_change_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_4"
                android:text="2"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/major_rank_rl"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/major_rank_iv"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/school_rank_first"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/svip_blod_color"
                android:id="@+id/major_rank_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:text="02"
                android:fontFamily="@font/poppins_bold"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
