<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/bg_item_red_packet_layout_top"
        android:paddingLeft="@dimen/dp_24"
        android:paddingTop="@dimen/dp_4"
        android:paddingRight="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_24"
        android:paddingVertical="@dimen/dp_4">
        <View
            android:background="@drawable/bg_item_red_packet_layout_circle"
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_2"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/main_theme_color"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="限时优惠"
            android:paddingHorizontal="@dimen/dp_5"/>
        <View
            android:background="@drawable/bg_item_red_packet_layout_circle"
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_2"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:textColor="#fff95843"
        android:gravity="center"
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="#ff141516"
        android:layout_gravity="center"
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"/>
    <LinearLayout
        android:layout_gravity="center"
        android:background="@drawable/bg_red_packet_count_down"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_8">
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="#ffffc100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="倒计时"/>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </LinearLayout>
</LinearLayout>
