<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginHorizontal="16dp">
    <View
        android:id="@+id/v_line"
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="24dp"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/color_909090"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <View
        android:id="@+id/v_line_child"
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="33dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/icon_all_notes"
            android:contentDescription="@null"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp">
            <com.ykb.ebook.weight.DrawLineTextView
                android:textSize="16sp"
                android:textColor="@color/color_303030"
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:lineSpacingMultiplier="1.4"
                app:draw_type="0"
                app:line_color="@color/color_909090"/>
            <com.ruffian.library.widget.RLinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ll_quote"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_8"
                android:paddingHorizontal="@dimen/dp_8"
                app:background_normal="@color/color_f7f8fa"
                app:corner_radius="2dp">
                <View
                    android:id="@+id/dot"
                    android:background="@color/color_909090"
                    android:layout_width="2dp"
                    android:layout_height="10dp"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/color_909090"
                    android:ellipsize="end"
                    android:id="@+id/tv_citation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginStart="4dp"/>
            </com.ruffian.library.widget.RLinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/color_909090"
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/iv_permission"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/icon_write_private"
                        android:layout_marginStart="16dp"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:id="@+id/tv_permission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/icon_edit"
                    android:contentDescription="@null"
                    android:layout_marginEnd="16dp"/>
                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/icon_delete"
                    android:contentDescription="@null"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
