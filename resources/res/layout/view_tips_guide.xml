<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root"
    android:background="@color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="start"
        android:id="@+id/iv_down_triangle"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_7"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:src="?attr/ic_down_triangle"
        android:rotationX="180"
        android:layout_marginHorizontal="@dimen/dp_12"
        app:layout_constraintBottom_toTopOf="@+id/ll_content"/>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:id="@+id/ll_content"
        android:background="@drawable/circle_entrance_guide_bg"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1.2dp"
        android:layout_alignParentStart="true"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingVertical="@dimen/dp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_down_triangle">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/circle_guide_text_color"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自主组题移到这里了"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="?attr/circle_guide_text_ik_color"
            android:gravity="center"
            android:id="@+id/tv_ok"
            android:background="@drawable/circle_entrance_guide_ik_bg"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_24"
            android:text="我知道了"
            android:layout_marginStart="@dimen/dp_10"/>
    </LinearLayout>
</LinearLayout>
