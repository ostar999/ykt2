<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.ruffian.library.widget.RFrameLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        app:background_normal="@color/white"
        app:corner_radius_top_left="@dimen/dp_12"
        app:corner_radius_top_right="@dimen/dp_12">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/img_close"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_close"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/color_303030"
            android:layout_gravity="center"
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"/>
    </com.ruffian.library.widget.RFrameLayout>
    <FrameLayout
        android:id="@+id/layoutSearch"
        android:background="@color/white"
        android:padding="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.ruffian.library.widget.REditText
            android:textSize="14sp"
            android:textColor="@color/color_303030"
            android:textColorHint="@color/color_bfbfbf"
            android:gravity="center_vertical"
            android:id="@+id/et_input"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入关键词进行搜索"
            android:drawablePadding="@dimen/dp_8"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:paddingHorizontal="@dimen/dp_16"
            app:background_normal="@color/color_f7f8fa"
            app:corner_radius="@dimen/dp_18"
            app:icon_height="@dimen/dp_20"
            app:icon_src_normal="@drawable/chapter_search_icon_svg"
            app:icon_width="@dimen/dp_20"/>
        <ImageView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/img_clean"
            android:visibility="gone"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@drawable/icon_input_clean"
            android:importantForAccessibility="no"
            android:layout_marginEnd="@dimen/dp_16"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/layoutSearchResult"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_empty"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_303030"
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="请尝试搜索更精准的关键词"
                android:layout_marginHorizontal="@dimen/dp_16"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_29"
                android:layout_marginHorizontal="@dimen/dp_29">
                <View
                    android:layout_gravity="center_vertical"
                    android:id="@+id/view2"
                    android:background="@drawable/cirlce_dot_303030_bg"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/color_303030"
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="仅在此书中搜索"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_29"
                android:layout_marginHorizontal="@dimen/dp_29">
                <View
                    android:layout_gravity="center_vertical"
                    android:id="@+id/view3"
                    android:background="@drawable/cirlce_dot_303030_bg"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/color_303030"
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请检查文字是否输入有误"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_29"
                android:layout_marginHorizontal="@dimen/dp_29">
                <View
                    android:layout_gravity="center_vertical"
                    android:id="@+id/view4"
                    android:background="@drawable/cirlce_dot_303030_bg"
                    android:layout_width="4dp"
                    android:layout_height="4dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/color_303030"
                    android:id="@+id/tv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请尝试搜索更精准的关键词"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_result"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/color_909090"
                    android:id="@+id/tv_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <com.ruffian.library.widget.RCheckBox
                    android:textSize="12sp"
                    android:textColor="@color/color_909090"
                    android:id="@+id/cb_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:button="@null"
                    android:text="倒序"
                    android:drawablePadding="@dimen/dp_2"
                    android:layout_marginStart="@dimen/dp_8"
                    app:icon_checked_left="@drawable/icon_positive_sequence"
                    app:icon_height_left="12dp"
                    app:icon_normal_left="@drawable/icon_reverse_order"
                    app:icon_width_left="12dp"
                    app:icon_with_text="true"/>
            </LinearLayout>
            <View
                android:id="@+id/viewLine3"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"
                style="@style/line_style_book"/>
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.scwang.smartrefresh.layout.header.ClassicsHeader
                    android:id="@+id/refresh_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srlTextRefreshing="正在刷新数据中"
                    app:srlTextRelease="松开立即刷新"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
