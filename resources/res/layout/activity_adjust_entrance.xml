<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/kyyxview"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/tv_school_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考研院校"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/forth_txt_color"
                    android:gravity="right"
                    android:id="@+id/stxt"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_school_label"
                    android:layout_alignParentEnd="true"
                    app:drawableEndCompat="@drawable/icon_indicator_right"/>
            </RelativeLayout>
            <View
                android:background="?attr/fourth_line_backgroup_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/alivc_common_line_1px"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"/>
            <RelativeLayout
                android:id="@+id/ly_dept"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/tv_dept_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="院系所"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/forth_txt_color"
                    android:gravity="right"
                    android:id="@+id/tv_dept"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_dept_label"
                    android:layout_alignParentEnd="true"
                    app:drawableEndCompat="@drawable/icon_indicator_right"/>
                <View
                    android:background="?attr/fourth_line_backgroup_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/alivc_common_line_1px"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ly_type"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专业类别"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/forth_txt_color"
                    android:gravity="right"
                    android:id="@+id/tv_type"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentEnd="true"
                    app:drawableEndCompat="@drawable/icon_indicator_right"/>
            </RelativeLayout>
            <View
                android:background="?attr/fourth_line_backgroup_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/alivc_common_line_1px"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"/>
            <RelativeLayout
                android:id="@+id/kyzyview"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/tv_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考研专业"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/forth_txt_color"
                    android:gravity="right"
                    android:id="@+id/kytxt"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_label"
                    android:layout_alignParentEnd="true"
                    app:drawableEndCompat="@drawable/icon_indicator_right"/>
            </RelativeLayout>
            <View
                android:background="?attr/fourth_line_backgroup_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/alivc_common_line_1px"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:textSize="15sp"
        android:textColor="?attr/new_bg_one_color"
        android:gravity="center"
        android:id="@+id/catview"
        android:background="@drawable/shape_round_red_bg"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="提交，查看调剂排名"
        android:layout_marginHorizontal="@dimen/dp_16"/>
</LinearLayout>
