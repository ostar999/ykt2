<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="enterAlwaysCollapsed|scroll">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_head"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingTop="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/dp_16">
                        <com.ruffian.library.widget.RImageView
                            android:id="@+id/img_cover"
                            android:layout_width="@dimen/dp_47"
                            android:layout_height="@dimen/dp_64"
                            android:src="@drawable/image_cover_default"
                            android:scaleType="centerCrop"
                            app:corner_radius="@dimen/dp_4"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_64"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginRight="@dimen/dp_12"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="@dimen/dp_12">
                            <TextView
                                android:textSize="@dimen/sp_16"
                                android:textColor="@color/color_303030"
                                android:ellipsize="end"
                                android:id="@+id/tv_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/color_909090"
                                android:id="@+id/tv_author"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <com.ruffian.library.widget.RTextView
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="bottom"
                            android:id="@+id/tv_continue"
                            android:layout_width="@dimen/dp_88"
                            android:layout_height="@dimen/dp_28"
                            android:text="继续阅读"
                            app:background_normal="@color/color_dd594a"
                            app:corner_radius="@dimen/dp_14"/>
                    </LinearLayout>
                    <FrameLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:background="@color/color_eeeeee"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_marginHorizontal="@dimen/dp_16"/>
                    </FrameLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingTop="@dimen/dp_24"
                        android:paddingRight="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/dp_16">
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="@dimen/sp_34"
                                    android:textColor="@color/color_303030"
                                    android:id="@+id/tv_score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:textSize="@dimen/sp_14"
                                    android:textColor="@color/color_303030"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="分"/>
                            </LinearLayout>
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/color_909090"
                                android:id="@+id/tv_comment_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <View
                            android:background="@color/color_eeeeee"
                            android:layout_width="0.5dp"
                            android:layout_height="@dimen/dp_24"
                            android:layout_marginLeft="@dimen/dp_36"
                            android:layout_marginRight="@dimen/dp_36"
                            android:layout_marginHorizontal="@dimen/dp_36"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/color_909090"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="高评价"/>
                                <com.ykb.ebook.weight.RoundCornerProgressBar
                                    android:id="@+id/high_comment_progress"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_6"
                                    android:layout_marginStart="@dimen/dp_8"
                                    app:background_color="@color/color_f7f8fa"
                                    app:progress_color="@color/color_dd594a"
                                    app:progress_corner_radius="@dimen/dp_3"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:layout_marginBottom="@dimen/dp_8"
                                android:layout_marginVertical="@dimen/dp_8">
                                <TextView
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/color_909090"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="中评价"/>
                                <com.ykb.ebook.weight.RoundCornerProgressBar
                                    android:id="@+id/middle_comment_progress"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_6"
                                    android:layout_marginStart="@dimen/dp_8"
                                    app:background_color="@color/color_f7f8fa"
                                    app:progress_color="@color/color_dd594a"
                                    app:progress_corner_radius="@dimen/dp_3"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/color_909090"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="低评价"/>
                                <com.ykb.ebook.weight.RoundCornerProgressBar
                                    android:id="@+id/low_comment_progress"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_6"
                                    android:layout_marginStart="@dimen/dp_8"
                                    app:background_color="@color/color_f7f8fa"
                                    app:progress_color="@color/color_dd594a"
                                    app:progress_corner_radius="@dimen/dp_3"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/dp_16">
                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/color_606060"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="评价本书："/>
                        <HorizontalScrollView
                            android:scrollbars="none"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <com.ruffian.library.widget.RTextView
                                    android:textSize="@dimen/sp_14"
                                    android:gravity="center"
                                    android:id="@+id/tv_high"
                                    android:layout_width="@dimen/dp_84"
                                    android:layout_height="@dimen/dp_30"
                                    android:checked="true"
                                    android:button="@null"
                                    android:text="高评价"
                                    android:drawablePadding="@dimen/dp_4"
                                    android:layout_marginStart="@dimen/dp_15"
                                    app:background_normal="@color/color_f7f8fa"
                                    app:background_selected="@color/color_15dd594a"
                                    app:corner_radius="@dimen/dp_15"
                                    app:icon_height="@dimen/dp_20"
                                    app:icon_src_normal="@drawable/icon_good_review"
                                    app:icon_width="@dimen/dp_20"
                                    app:icon_with_text="true"
                                    app:text_color_normal="@color/color_303030"
                                    app:text_color_selected="@color/color_dd594a"/>
                                <com.ruffian.library.widget.RTextView
                                    android:textSize="@dimen/sp_14"
                                    android:gravity="center"
                                    android:id="@+id/tv_middle"
                                    android:layout_width="@dimen/dp_84"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_marginLeft="@dimen/dp_8"
                                    android:layout_marginRight="@dimen/dp_8"
                                    android:button="@null"
                                    android:text="中评价"
                                    android:drawablePadding="@dimen/dp_4"
                                    android:layout_marginHorizontal="@dimen/dp_8"
                                    app:background_normal="@color/color_f7f8fa"
                                    app:background_selected="@color/color_15dd594a"
                                    app:corner_radius="@dimen/dp_15"
                                    app:icon_height="@dimen/dp_20"
                                    app:icon_src_normal="@drawable/icon_middle_review"
                                    app:icon_width="@dimen/dp_20"
                                    app:icon_with_text="true"
                                    app:text_color_normal="@color/color_303030"
                                    app:text_color_selected="@color/color_dd594a"/>
                                <com.ruffian.library.widget.RTextView
                                    android:textSize="@dimen/sp_14"
                                    android:gravity="center"
                                    android:id="@+id/tv_low"
                                    android:layout_width="@dimen/dp_84"
                                    android:layout_height="@dimen/dp_30"
                                    android:button="@null"
                                    android:text="低评价"
                                    android:drawablePadding="@dimen/dp_4"
                                    app:background_normal="@color/color_f7f8fa"
                                    app:background_selected="@color/color_15dd594a"
                                    app:corner_radius="@dimen/dp_15"
                                    app:icon_height="@dimen/dp_20"
                                    app:icon_src_normal="@drawable/icon_low_review"
                                    app:icon_width="@dimen/dp_20"
                                    app:icon_with_text="true"
                                    app:text_color_normal="@color/color_303030"
                                    app:text_color_selected="@color/color_dd594a"/>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                    <FrameLayout
                        android:background="@color/white"
                        android:paddingBottom="@dimen/dp_24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.ruffian.library.widget.RTextView
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/color_909090"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="阅读本书5分钟后，即可点评"
                            android:drawablePadding="@dimen/dp_4"
                            app:icon_height="@dimen/dp_18"
                            app:icon_src_normal="@drawable/icon_review_lock"
                            app:icon_width="@dimen/dp_18"
                            app:icon_with_text="true"/>
                    </FrameLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_newest"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:overScrollMode="never"/>
                        <RelativeLayout
                            android:gravity="center_vertical"
                            android:id="@+id/ly_tab"
                            android:background="@color/white"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_56"
                            android:paddingEnd="@dimen/dp_16"
                            app:isSticky="true">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:id="@+id/ly_title_view"
                                android:background="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_56"
                                app:isSticky="true">
                                <com.ruffian.library.widget.RView
                                    android:layout_width="@dimen/dp_4"
                                    android:layout_height="@dimen/dp_16"
                                    app:background_normal="@color/color_dd594a"
                                    app:corner_radius_bottom_right="@dimen/dp_4"
                                    app:corner_radius_top_right="@dimen/dp_4"/>
                                <TextView
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/color_303030"
                                    android:id="@+id/tv_tab_title"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="最新评论（13条）"
                                    android:layout_weight="1"
                                    android:layout_marginStart="@dimen/dp_12"/>
                            </LinearLayout>
                            <com.ruffian.library.widget.RLinearLayout
                                android:id="@+id/ly_tab_view"
                                android:padding="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="16dp"
                                android:layout_alignParentEnd="true"
                                app:background_normal="@color/color_f7f8fa"
                                app:corner_radius="100dp">
                                <com.ruffian.library.widget.RTextView
                                    android:textSize="11sp"
                                    android:id="@+id/btn_hot"
                                    android:paddingLeft="6dp"
                                    android:paddingTop="3dp"
                                    android:paddingRight="6dp"
                                    android:paddingBottom="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="最热"
                                    android:paddingHorizontal="6dp"
                                    android:paddingVertical="3dp"
                                    app:background_normal="@color/color_f9fafb"
                                    app:background_selected="@color/white"
                                    app:corner_radius="100dp"
                                    app:text_color_normal="@color/color_bfbfbf"
                                    app:text_color_selected="@color/color_303030"/>
                                <com.ruffian.library.widget.RTextView
                                    android:textSize="11sp"
                                    android:id="@+id/btn_news"
                                    android:paddingLeft="6dp"
                                    android:paddingTop="3dp"
                                    android:paddingRight="6dp"
                                    android:paddingBottom="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="最新"
                                    android:paddingHorizontal="6dp"
                                    android:paddingVertical="3dp"
                                    app:background_normal="@color/color_f9fafb"
                                    app:background_selected="@color/white"
                                    app:corner_radius="100dp"
                                    app:text_color_normal="@color/color_bfbfbf"
                                    app:text_color_selected="@color/color_303030"/>
                            </com.ruffian.library.widget.RLinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <androidx.appcompat.widget.Toolbar
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                app:contentInsetStart="0dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/dp_16">
                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/icon_black_back"
                        android:contentDescription="@null"/>
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/color_303030"
                        android:ellipsize="end"
                        android:id="@+id/toolbar_title"
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="扎实推进“十四五”规划目标任务落实"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_24"/>
                    <com.ruffian.library.widget.RTextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/toolbar_continue"
                        android:visibility="invisible"
                        android:layout_width="@dimen/dp_88"
                        android:layout_height="@dimen/dp_28"
                        android:text="继续阅读"
                        app:background_normal="@color/color_dd594a"
                        app:corner_radius="@dimen/dp_14"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyexpend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>
