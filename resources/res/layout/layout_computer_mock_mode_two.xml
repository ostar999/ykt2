<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="16dp">
        <ImageView
            android:id="@+id/img_back"
            android:padding="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="?attr/ic_back_gray"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/ly_time"
            android:layout_toEndOf="@+id/img_back">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/tv_mock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前试室：第一试室"
                android:layout_marginStart="8dp"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/first_txt_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前场次：第01场次"
                android:layout_marginStart="8dp"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学生姓名：a*n"
                android:layout_marginStart="8dp"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/first_txt_color"
                android:ellipsize="end"
                android:id="@+id/tv_test_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="准考证号：110298302830"
                android:lines="1"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/main_theme_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余时间： "/>
            <TextView
                android:id="@+id/tv_time_one"
                android:text="0"
                style="@style/computer_time_text_style"/>
            <TextView
                android:id="@+id/tv_time_two"
                android:text="1"
                style="@style/computer_time_text_style"/>
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/orange_color"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:text=":"
                android:layout_marginEnd="2dp"/>
            <TextView
                android:id="@+id/tv_time_three"
                android:text="0"
                style="@style/computer_time_text_style"/>
            <TextView
                android:id="@+id/tv_time_four"
                android:text="0"
                style="@style/computer_time_text_style"/>
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/orange_color"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:text=":"
                android:layout_marginEnd="2dp"/>
            <TextView
                android:id="@+id/tv_time_five"
                android:text="0"
                style="@style/computer_time_text_style"/>
            <TextView
                android:id="@+id/tv_time_six"
                android:text="0"
                style="@style/computer_time_text_style"/>
        </LinearLayout>
    </RelativeLayout>
    <View style="@style/new_gray_line_style"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ly_tips"
        android:background="?attr/main_theme_five_deep_color"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34"
        android:paddingHorizontal="@dimen/dp_16">
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="?attr/main_theme_color"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testTips"
            android:lines="1"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="?attr/new_bg_one_color"
            android:id="@+id/btn_close_tips"
            android:background="@drawable/shape_app_theme_corners_4"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我知道了"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/left_view"
            android:visibility="visible"
            android:fitsSystemWindows="true"
            android:layout_width="199dp"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginHorizontal="16dp">
                    <LinearLayout style="@style/computer_question_type_layout_style">
                        <View
                            android:background="@drawable/shape_computer_answerd_question_bg"
                            style="@style/computer_question_type_view_style"/>
                        <TextView
                            android:text="已答"
                            style="@style/computer_question_type_text_style"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        style="@style/computer_question_type_layout_style">
                        <View
                            android:background="@drawable/shape_computer_no_answer_question_bg"
                            style="@style/computer_question_type_view_style"/>
                        <TextView
                            android:text="未答"
                            style="@style/computer_question_type_text_style"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="end|center_vertical"
                        style="@style/computer_question_type_layout_style">
                        <View
                            android:background="@drawable/shape_computer_current_question_bg"
                            style="@style/computer_question_type_view_style"/>
                        <TextView
                            android:text="在答"
                            style="@style/computer_question_type_text_style"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ly_type_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginVertical="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_sheet"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="16dp"
                    android:layout_marginEnd="3dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="5"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/ly_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="@dimen/dp_16"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.core.widget.NestedScrollView
                    android:id="@+id/sc_public_title"
                    android:layout_width="214dp"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom_line">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="?attr/first_text_color"
                        android:id="@+id/tv_public_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="欲比较A、B、C三种药物对雄性Wistar大鼠尿中氨基氮排出量的影响，将36只大鼠按照体重和月龄相近的原则每3只为1区组，共12区组，每个区组的3只大鼠随机分配到A、B、C三个药物组。一个月后观察尿中氨基氮的排出量。欲比较A、B、C三种药物对雄性Wistar大鼠尿中氨基氮排出量的影响，将36只大鼠按照体重和月龄相近的原则每3只为1区组，共12区组，每个区组的3只大鼠随机分配到A、B、C三个药物组。一个月后观察尿中氨基氮的排出量。"
                        android:lineSpacingExtra="3dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginVertical="16dp"/>
                </androidx.core.widget.NestedScrollView>
                <View
                    android:id="@+id/public_line"
                    android:background="?attr/new_gray_line_color"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/sc_public_title"
                    android:layout_alignBottom="@+id/sc_public_title"
                    android:layout_marginEnd="16dp"
                    android:layout_toEndOf="@+id/sc_public_title"/>
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom_line"
                    android:layout_toEndOf="@+id/public_line">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/ly_add_question_view"
                        android:paddingBottom="@dimen/dp_16"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ly_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">
                            <TextView
                                android:textSize="14sp"
                                android:textColor="?attr/first_text_color"
                                android:id="@+id/tv_question_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="103、以每日吸烟量为自变量x，肺组织中DNA加合物含量为应变量y进行直线回归分析，则要求"/>
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/img_title"
                                android:visibility="gone"
                                android:layout_width="128dp"
                                android:layout_height="72dp"
                                android:layout_marginTop="12dp"
                                app:riv_corner_radius="8dp"/>
                        </LinearLayout>
                        <com.psychiatrygarden.widget.MaxRecyclerView
                            android:id="@+id/qlistview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/bottom_line"
                            android:layout_toEndOf="@+id/public_line"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
                <View
                    android:id="@+id/bottom_line"
                    android:background="?attr/new_gray_line_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_above="@+id/ly_bottom_view"/>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ly_bottom_view"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_above="@+id/ly_detail_info"
                    android:layout_marginEnd="16dp">
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center"
                        android:id="@+id/btn_previous"
                        android:background="@drawable/shape_computer_bottom_btn_bg"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="上一题"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center"
                        android:id="@+id/btn_next"
                        android:background="@drawable/shape_computer_bottom_btn_bg"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="下一题"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center"
                        android:id="@+id/btn_calculator"
                        android:background="@drawable/shape_computer_bottom_btn_bg"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="计算器"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center"
                        android:id="@+id/btn_help"
                        android:background="@drawable/shape_computer_bottom_btn_bg"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="帮助"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center"
                        android:id="@+id/btn_finish"
                        android:background="@drawable/shape_computer_bottom_btn_bg"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="交卷"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/ly_detail_info"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingBottom="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingEnd="@dimen/dp_16">
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="?attr/second_txt_color"
                        android:id="@+id/tv_test_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="考试总时间：100分钟"/>
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="?attr/second_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="答题进度"
                        android:layout_marginStart="@dimen/dp_10"/>
                    <ProgressBar
                        android:id="@+id/do_progress"
                        android:layout_width="@dimen/dp_138"
                        android:layout_height="@dimen/dp_6"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:progress="50"
                        android:indeterminateDrawable="?attr/progressBar"
                        android:progressDrawable="@drawable/custom_progress_bar"
                        android:layout_marginHorizontal="@dimen/dp_8"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="?attr/second_txt_color"
                        android:id="@+id/tv_do_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:layout_marginStart="@dimen/dp_10"/>
                    <LinearLayout
                        android:gravity="end|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="@dimen/sp_11"
                            android:textColor="?attr/second_txt_color"
                            android:ellipsize="end"
                            android:id="@+id/tv_all_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总题数：100"
                            android:lines="1"
                            android:layout_marginStart="@dimen/dp_10"/>
                        <TextView
                            android:textSize="@dimen/sp_11"
                            android:textColor="?attr/second_txt_color"
                            android:ellipsize="end"
                            android:id="@+id/tv_do_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已答：84"
                            android:lines="1"
                            android:layout_marginStart="@dimen/dp_10"/>
                        <TextView
                            android:textSize="@dimen/sp_11"
                            android:textColor="?attr/second_txt_color"
                            android:ellipsize="end"
                            android:id="@+id/tv_no_answer_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="剩余：16"
                            android:lines="1"
                            android:layout_marginStart="@dimen/dp_10"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
