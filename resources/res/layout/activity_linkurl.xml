<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/view_dialog_root"
    android:background="@drawable/shape_circle_linkurl_top_13_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/forth_txt_color"
            android:gravity="center"
            android:id="@+id/btn_negative"
            android:background="@null"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/cancel"
            android:layout_centerVertical="true"
            android:paddingHorizontal="16dp"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加链接"
            android:layout_centerInParent="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/forth_txt_color"
            android:gravity="center"
            android:id="@+id/btn_positive"
            android:background="@null"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/ok"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="16dp"/>
    </RelativeLayout>
    <View style="@style/line_style"/>
    <com.psychiatrygarden.widget.ClearEditText
        android:textSize="14sp"
        android:textColor="?attr/first_txt_color"
        android:textColorHint="?attr/forth_txt_color"
        android:id="@+id/linkURL"
        android:background="@drawable/circle_item_ebook_bg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text=""
        android:hint="链接地址"
        android:inputType="textUri"
        android:imeOptions="actionNext"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp"/>
    <com.psychiatrygarden.widget.ClearEditText
        android:textSize="14sp"
        android:textColor="?attr/first_txt_color"
        android:textColorHint="?attr/forth_txt_color"
        android:id="@+id/linkText"
        android:background="@drawable/circle_item_ebook_bg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="链接名称"
        android:inputType="text"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp"/>
</LinearLayout>
