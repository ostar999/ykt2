<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:textSize="12sp"
            android:gravity="center"
            android:id="@+id/tv_question_cuoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="错题"
            android:drawableTop="@drawable/wrongimg"
            android:drawablePadding="5dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="13sp"
            android:gravity="center"
            android:id="@+id/tv_question_biji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="笔记"
            android:drawableTop="@drawable/noteimg"
            android:drawablePadding="5dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="12sp"
            android:gravity="center"
            android:id="@+id/tv_question_shoucang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:drawableTop="@drawable/collectimg"
            android:drawablePadding="5dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
