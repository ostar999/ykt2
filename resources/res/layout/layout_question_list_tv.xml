<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/questionList_item_tv"
        android:background="@drawable/drawable_gray_night_cut"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""/>
    <ImageView
        android:id="@+id/iv_question_new"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="14dp"
        android:layout_marginRight="-2dp"
        android:src="?attr/question_sheet_new_add_icon"
        android:layout_alignTop="@+id/questionList_item_tv"
        android:layout_alignRight="@+id/questionList_item_tv"/>
    <ImageView
        android:id="@+id/img_conunite"
        android:visibility="gone"
        android:layout_width="@dimen/dp_34"
        android:layout_height="@dimen/dp_15"
        android:layout_marginTop="-6dp"
        android:layout_marginRight="-12dp"
        android:src="?attr/ic_question_continue_do"
        android:layout_alignTop="@+id/questionList_item_tv"
        android:layout_alignRight="@+id/questionList_item_tv"/>
    <ImageView
        android:id="@+id/iv_cut_slash"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_cut_question_slash"/>
</RelativeLayout>
