<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="?attr/new_bg_two_color"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/titlebar_layout"
        android:background="?attr/toolbar_color_new"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/iv_actionbar_back"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="?attr/ic_black_back"
            android:layout_centerVertical="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingVertical="5dp"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:id="@+id/txt_actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:drawablePadding="10dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_58"
        android:layout_below="@+id/titlebar_layout">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAddress"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"/>
            <RelativeLayout
                android:background="@drawable/shape_write_bg"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:paddingHorizontal="@dimen/dp_16"
                android:paddingVertical="@dimen/dp_16">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/orderConfirmImg"
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_72"
                    android:src="@mipmap/ic_order_default"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="@dimen/dp_12"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:ellipsize="end"
                    android:id="@+id/tvOrderConfirmTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/orderConfirmImg"
                    android:layout_marginStart="@dimen/dp_8"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/third_txt_color"
                    android:ellipsize="end"
                    android:id="@+id/tvOrderConfirmDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="-"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/orderConfirmImg"
                    android:layout_below="@+id/tvOrderConfirmTitle"
                    android:layout_marginStart="@dimen/dp_8"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/third_txt_color"
                    android:ellipsize="end"
                    android:id="@+id/tvOrderConfirmNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="-"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/orderConfirmImg"
                    android:layout_alignBottom="@+id/orderConfirmImg"
                    android:layout_marginStart="@dimen/dp_8"/>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="?attr/main_theme_red_color"
                    android:ellipsize="end"
                    android:id="@+id/tvOrderConfirmPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="¥0"
                    android:maxLines="1"
                    android:layout_alignBottom="@+id/orderConfirmImg"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_alignParentEnd="true"/>
                <View
                    android:id="@+id/line1"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_below="@+id/orderConfirmImg"
                    style="@style/line_style"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line1">
                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginTop="@dimen/dp_16">
                        <TextView
                            android:textSize="@dimen/sp_13"
                            android:textColor="?attr/first_txt_color"
                            android:ellipsize="end"
                            android:id="@+id/tvOrderConfirmPriceDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品总价"
                            android:maxLines="1"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:textSize="@dimen/sp_13"
                            android:textColor="?attr/first_txt_color"
                            android:ellipsize="end"
                            android:id="@+id/tvOrderConfirmPrice1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥0"
                            android:maxLines="1"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginTop="@dimen/dp_16">
                        <TextView
                            android:textSize="@dimen/sp_13"
                            android:textColor="?attr/first_txt_color"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="促销价"
                            android:maxLines="1"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:textSize="@dimen/sp_13"
                            android:textStyle="normal"
                            android:textColor="?attr/orange_color"
                            android:ellipsize="end"
                            android:id="@+id/tvOrderConfirmSale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="减 0"
                            android:maxLines="1"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:orientation="vertical"
                        android:id="@+id/layoutCoupon"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginTop="@dimen/dp_16">
                        <TextView
                            android:textSize="@dimen/sp_13"
                            android:textColor="?attr/first_txt_color"
                            android:ellipsize="end"
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠券"
                            android:maxLines="1"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:textSize="@dimen/sp_13"
                            android:textStyle="normal"
                            android:textColor="?attr/orange_color"
                            android:ellipsize="end"
                            android:id="@+id/tvOrderConfirmCoupon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:maxLines="1"
                            android:layout_toLeftOf="@+id/orderConfirmImgRightCoupon"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginEnd="@dimen/dp_4"/>
                        <ImageView
                            android:id="@+id/orderConfirmImgRightCoupon"
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:src="?attr/arrow_right"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:orientation="vertical"
                        android:id="@+id/layoutRedPacket"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginTop="@dimen/dp_16">
                        <TextView
                            android:textSize="@dimen/sp_13"
                            android:textColor="?attr/first_txt_color"
                            android:ellipsize="end"
                            android:id="@+id/tvRedPacket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="红包"
                            android:maxLines="1"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:textSize="@dimen/sp_13"
                            android:textStyle="normal"
                            android:textColor="?attr/orange_color"
                            android:ellipsize="end"
                            android:id="@+id/tvRedPacketCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:maxLines="1"
                            android:layout_toLeftOf="@+id/redPacketCountImage"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginEnd="@dimen/dp_4"/>
                        <ImageView
                            android:id="@+id/redPacketCountImage"
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:src="?attr/arrow_right"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:orientation="vertical"
                        android:id="@+id/layoutFare"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginTop="@dimen/dp_16">
                        <TextView
                            android:textSize="@dimen/sp_13"
                            android:textColor="?attr/first_txt_color"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运费"
                            android:maxLines="1"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:textSize="@dimen/sp_13"
                            android:textColor="?attr/first_txt_color"
                            android:ellipsize="end"
                            android:id="@+id/tvOrderConfirmFare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥0"
                            android:maxLines="1"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_below="@+id/orderConfirmImg"
                        style="@style/line_style"/>
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:textColor="?attr/main_theme_color"
                        android:gravity="end"
                        android:id="@+id/tvOrderTotalCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="合计：¥0"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:id="@+id/layoutMessage"
                android:background="@drawable/shape_write_bg"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_54"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:paddingHorizontal="@dimen/dp_16">
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="?attr/first_txt_color"
                    android:ellipsize="end"
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="留言"
                    android:maxLines="1"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/forth_txt_color"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:id="@+id/tvOrderConfirmLeaveMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:hint="建议留言前先与客服沟通确认"
                    android:maxLines="1"
                    android:layout_toLeftOf="@+id/orderConfirmImgRightLeaveMessage"
                    android:layout_toRightOf="@+id/tv2"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_48"
                    android:layout_marginEnd="@dimen/dp_4"/>
                <ImageView
                    android:id="@+id/orderConfirmImgRightLeaveMessage"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:src="?attr/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/shape_write_bg"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_12"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:paddingHorizontal="@dimen/dp_16"
                android:paddingVertical="@dimen/dp_12">
                <RelativeLayout
                    android:id="@+id/layoutWXPay"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_26">
                    <ImageView
                        android:id="@+id/imgWX"
                        android:layout_width="@dimen/dp_26"
                        android:layout_height="@dimen/dp_26"
                        android:src="@drawable/icon_wx_pay"/>
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:textColor="?attr/first_txt_color"
                        android:paddingLeft="@dimen/dp_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信支付"
                        android:layout_toRightOf="@+id/imgWX"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/imgCheckoutWX"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="?attr/forum_book_un_select_icon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layoutZFB"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_16">
                    <ImageView
                        android:id="@+id/imgZFB"
                        android:layout_width="@dimen/dp_26"
                        android:layout_height="@dimen/dp_26"
                        android:src="@drawable/icon_zfb_pay"/>
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:textColor="?attr/first_txt_color"
                        android:paddingLeft="@dimen/dp_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付宝支付"
                        android:layout_toRightOf="@+id/imgZFB"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/imgCheckoutZFB"
                        android:visibility="visible"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="?attr/forum_book_un_select_icon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:gravity="center_vertical"
                android:id="@+id/layoutGift"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_16">
                <TextView
                    android:background="@drawable/order_confirm_recommend_line"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_1"
                    android:layout_toLeftOf="@+id/dotGift"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:layout_marginEnd="@dimen/dp_4"/>
                <TextView
                    android:id="@+id/dotGift"
                    android:background="@drawable/shape_circle_forth_txt_color_dot"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_4"
                    android:layout_toLeftOf="@+id/tvGiftHint"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_16"/>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:ellipsize="end"
                    android:id="@+id/tvGiftHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赠送"
                    android:maxLines="1"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/dotGift2"
                    android:background="@drawable/shape_circle_forth_txt_color_dot"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_4"
                    android:layout_toRightOf="@+id/tvGiftHint"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_16"/>
                <TextView
                    android:background="@drawable/order_confirm_recommend_line"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_1"
                    android:layout_toRightOf="@+id/dotGift2"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_4"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewGift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:id="@+id/layoutTJ2"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_16">
                <TextView
                    android:background="@drawable/order_confirm_recommend_line"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_1"
                    android:layout_toLeftOf="@+id/dot1"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:layout_marginEnd="@dimen/dp_4"/>
                <TextView
                    android:id="@+id/dot1"
                    android:background="@drawable/shape_circle_forth_txt_color_dot"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_4"
                    android:layout_toLeftOf="@+id/tvCommentHint"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_16"/>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:ellipsize="end"
                    android:id="@+id/tvCommentHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐商品"
                    android:maxLines="1"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/dot2"
                    android:background="@drawable/shape_circle_forth_txt_color_dot"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_4"
                    android:layout_toRightOf="@+id/tvCommentHint"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_16"/>
                <TextView
                    android:background="@drawable/order_confirm_recommend_line"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_1"
                    android:layout_toRightOf="@+id/dot2"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_4"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:background="?attr/app_bg"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="@dimen/dp_16">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="?attr/main_theme_red_color"
            android:ellipsize="end"
            android:id="@+id/tvOrderConfirmBottomPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0"
            android:maxLines="1"
            android:layout_centerVertical="true"/>
        <TextView
            android:enabled="false"
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/app_bg"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/tvOrderConfirmSubmit"
            android:background="@drawable/bg_download"
            android:layout_width="@dimen/dp_138"
            android:layout_height="@dimen/dp_42"
            android:text="确认支付"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>
