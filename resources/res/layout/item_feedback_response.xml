<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/identity_confirm_bg_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/tertiary_text_color"
        android:gravity="center"
        android:id="@+id/tv_replay_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"/>
    <RelativeLayout
        android:id="@+id/ly_user_ask"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp">
        <com.psychiatrygarden.widget.CircleImageView
            android:id="@+id/img_user_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/app_icon"
            android:layout_marginStart="8dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:id="@+id/tv_user_content"
            android:background="@drawable/shape_feedback_response_ask_bg"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
            android:lineSpacingExtra="3dp"
            android:layout_toStartOf="@+id/img_user_head"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_pic"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:src="@drawable/app_icon"
            android:layout_toStartOf="@+id/img_user_head"
            app:riv_corner_radius="8dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ly_offical_replay"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp">
        <com.psychiatrygarden.widget.CircleImageView
            android:id="@+id/img_offical_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/app_icon"
            android:layout_marginEnd="8dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:id="@+id/tv_offical_content"
            android:background="@drawable/shape_feedback_response_replay_bg"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:lineSpacingExtra="3dp"
            android:layout_toEndOf="@+id/img_offical_head"/>
    </RelativeLayout>
    <View
        android:id="@+id/empty_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="24dp"/>
</LinearLayout>
