<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingTop="17dp"
        android:paddingRight="10dp"
        android:paddingBottom="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_select"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/check_box_bg"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/font_com_list"
            android:id="@+id/mycollect_groups_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_select"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#8a8a8a"
            android:gravity="center"
            android:id="@+id/tv_groups_bei_share"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text=""
            android:drawableRight="@drawable/icon_password2"
            android:drawablePadding="5dp"
            android:layout_toRightOf="@+id/mycollect_groups_tv_name"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/font_com_list"
            android:id="@+id/mycollect_groups_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/icon_indicator_bottom"
            android:drawablePadding="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
