<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_rank_all_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/bgvip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_comment_rank_bg"
        android:scaleType="fitXY"
        app:layout_collapseMode="parallax"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:orientation="vertical"
            android:id="@+id/appbarlayout"
            android:background="@color/transparent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapse"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toobars1"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">
                    <RelativeLayout
                        android:id="@+id/toolbars"
                        android:layout_width="match_parent"
                        android:layout_height="44dp">
                        <ImageView
                            android:id="@+id/iv_actionbar_back"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="?attr/ic_black_back"/>
                        <TextView
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:textColor="@color/first_txt_color"
                            android:id="@+id/title"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_centerInParent="true"/>
                        <ImageView
                            android:gravity="center"
                            android:id="@+id/question"
                            android:padding="@dimen/dp_10"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@mipmap/ic_rank_question"
                            android:layout_marginEnd="@dimen/dp_6"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
                <RelativeLayout
                    android:id="@+id/rellogview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp">
                    <RelativeLayout
                        android:id="@+id/ly_view_one"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/img_name_logo"
                            android:layout_width="@dimen/dp_130"
                            android:layout_height="@dimen/dp_36"
                            android:src="@mipmap/ic_rank_comment_name_logo"
                            android:layout_centerHorizontal="true"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_rank_comment_name_left"
                            android:layout_alignBottom="@+id/tv_desc"
                            android:layout_toStartOf="@+id/tv_desc"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_rank_comment_name_left"
                            android:layout_alignBottom="@+id/tv_desc"
                            android:rotationY="180"
                            android:layout_toEndOf="@+id/tv_desc"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/rank_update_time"
                            android:id="@+id/tv_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="莫愁前路无知己  帮里谁人不识君"
                            android:layout_below="@+id/img_name_logo"
                            android:layout_centerHorizontal="true"
                            android:layout_marginHorizontal="@dimen/dp_10"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/ly_view_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/img_name_logo2"
                            android:layout_width="@dimen/dp_130"
                            android:layout_height="@dimen/dp_40"
                            android:src="@mipmap/ic_rank_question_name_logo"
                            android:layout_centerHorizontal="true"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_rank_post_question_left"
                            android:layout_alignTop="@+id/img_name_logo2"
                            android:layout_alignBottom="@+id/img_name_logo2"
                            android:layout_toStartOf="@+id/img_name_logo2"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_rank_post_question_left"
                            android:layout_alignTop="@+id/img_name_logo2"
                            android:layout_alignBottom="@+id/img_name_logo2"
                            android:rotationY="180"
                            android:layout_toEndOf="@+id/img_name_logo2"/>
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/rank_update_time"
                            android:id="@+id/tv_desc2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_6"
                            android:layout_marginRight="@dimen/dp_8"
                            android:text="医考帮百万医学生之中脱颖而出"
                            android:layout_below="@+id/img_name_logo2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginHorizontal="@dimen/dp_8"/>
                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_4"
                            android:src="@mipmap/ic_rank_shot_line"
                            android:layout_alignTop="@+id/tv_desc2"
                            android:layout_alignBottom="@+id/tv_desc2"
                            android:layout_toStartOf="@+id/tv_desc2"/>
                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_4"
                            android:src="@mipmap/ic_rank_shot_line"
                            android:layout_alignTop="@+id/tv_desc2"
                            android:layout_alignBottom="@+id/tv_desc2"
                            android:rotation="180"
                            android:layout_toEndOf="@+id/tv_desc2"/>
                    </RelativeLayout>
                </RelativeLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <cn.webdemo.com.supporfragment.tablayout.MagicIndicator
                android:layout_gravity="center"
                android:id="@+id/magic_indicator"
                android:background="@drawable/shape_white_no_dark_100"
                android:padding="@dimen/dp_2"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="@dimen/dp_236"
                android:layout_height="@dimen/dp_34"
                android:layout_marginTop="@dimen/dp_18"/>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:background="@drawable/shape_white_no_dark_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_below="@+id/tv_desc"
            android:layout_marginHorizontal="@dimen/dp_16"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>
