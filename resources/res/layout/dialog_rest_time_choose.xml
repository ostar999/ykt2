<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:background_normal="@color/white"
    app:corner_radius_top_left="@dimen/dp_16"
    app:corner_radius_top_right="@dimen/dp_16">
    <TextView
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:textColor="@color/color_303030"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:text="休息时间提醒"
        android:layout_centerInParent="true"/>
    <View style="@style/line_style_book"/>
    <RadioGroup
        android:orientation="vertical"
        android:id="@+id/rg_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.ruffian.library.widget.RRadioButton
            android:textSize="@dimen/sp_16"
            android:id="@+id/cb_close"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:button="@null"
            android:text="关闭"
            android:paddingHorizontal="@dimen/dp_16"
            app:icon_checked_right="@drawable/ic_checked"
            app:icon_height_right="@dimen/dp_16"
            app:icon_width_right="@dimen/dp_16"
            app:text_color_checked="@color/color_dd594a"
            app:text_color_normal="@color/color_303030"/>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp"
            style="@style/line_style_book"/>
        <com.ruffian.library.widget.RRadioButton
            android:textSize="@dimen/sp_16"
            android:id="@+id/cb_thirty_minutes"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:button="@null"
            android:text="1分钟"
            android:paddingHorizontal="@dimen/dp_16"
            app:icon_checked_right="@drawable/ic_checked"
            app:icon_height_right="@dimen/dp_16"
            app:icon_width_right="@dimen/dp_16"
            app:text_color_checked="@color/color_dd594a"
            app:text_color_normal="@color/color_303030"/>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp"
            style="@style/line_style_book"/>
        <com.ruffian.library.widget.RRadioButton
            android:textSize="@dimen/sp_16"
            android:id="@+id/cb_forty_five_minutes"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:button="@null"
            android:text="45分钟"
            android:paddingHorizontal="@dimen/dp_16"
            app:icon_checked_right="@drawable/ic_checked"
            app:icon_height_right="@dimen/dp_16"
            app:icon_width_right="@dimen/dp_16"
            app:text_color_checked="@color/color_dd594a"
            app:text_color_normal="@color/color_303030"/>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp"
            style="@style/line_style_book"/>
        <com.ruffian.library.widget.RRadioButton
            android:textSize="@dimen/sp_16"
            android:id="@+id/cb_one_hour"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:button="@null"
            android:text="60分钟"
            android:paddingHorizontal="@dimen/dp_16"
            app:icon_checked_right="@drawable/ic_checked"
            app:icon_height_right="@dimen/dp_16"
            app:icon_width_right="@dimen/dp_16"
            app:text_color_checked="@color/color_dd594a"
            app:text_color_normal="@color/color_303030"/>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp"
            style="@style/line_style_book"/>
        <com.ruffian.library.widget.RRadioButton
            android:textSize="@dimen/sp_16"
            android:id="@+id/cb_two_hour"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:button="@null"
            android:text="120分钟"
            android:paddingHorizontal="@dimen/dp_16"
            app:icon_checked_right="@drawable/ic_checked"
            app:icon_height_right="@dimen/dp_16"
            app:icon_width_right="@dimen/dp_16"
            app:text_color_checked="@color/color_dd594a"
            app:text_color_normal="@color/color_303030"/>
    </RadioGroup>
    <View style="@style/line_style_book"/>
    <TextView
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:textColor="@color/color_303030"
        android:gravity="center"
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:text="取消"/>
</com.ruffian.library.widget.RLinearLayout>
