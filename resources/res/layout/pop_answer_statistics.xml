<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="?attr/bg_question_statistics_top"
            android:layout_width="match_parent"
            android:layout_height="116dp"/>
        <ImageView
            android:layout_gravity="end"
            android:layout_width="174dp"
            android:layout_height="110dp"
            android:src="?attr/ic_question_statistics_top"
            android:layout_alignParentEnd="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="24dp">
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/tv_chapter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/tertiary_text_color"
                    android:ellipsize="end"
                    android:id="@+id/tv_child_chapter_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:layout_marginEnd="30dp"
                    app:layout_constraintStart_toStartOf="@+id/tv_chapter_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_chapter_name"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_question_statistics_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>
                <com.psychiatrygarden.widget.QuestionStatisticsProgressView
                    android:layout_gravity="center"
                    android:id="@+id/progress_view"
                    android:layout_width="320dp"
                    android:layout_height="160dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-40dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/first_text_color"
                            android:gravity="center"
                            android:id="@+id/tv_total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="123"/>
                        <TextView
                            android:textSize="11sp"
                            android:textColor="?attr/tertiary_text_color"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="题量(道)"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/first_text_color"
                            android:gravity="center"
                            android:id="@+id/tv_answered"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="66"/>
                        <TextView
                            android:textSize="11sp"
                            android:textColor="?attr/tertiary_text_color"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="答(道)"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/success_color"
                            android:gravity="center"
                            android:id="@+id/tv_right_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="30"/>
                        <TextView
                            android:textSize="11sp"
                            android:textColor="?attr/tertiary_text_color"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="对(道)"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/dominant_color"
                            android:gravity="center"
                            android:id="@+id/tv_wrong_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="27"/>
                        <TextView
                            android:textSize="11sp"
                            android:textColor="?attr/tertiary_text_color"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="错(道)"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="?attr/line"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginHorizontal="16dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#ffff8c1e"
                    android:gravity="center"
                    android:id="@+id/tv_describe"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="一首凉凉送给自己"
                    android:paddingVertical="16dp"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_gravity="end"
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="?attr/closeing"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>
    </FrameLayout>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_next_chapter"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_btn_next_chapter"/>
</LinearLayout>
