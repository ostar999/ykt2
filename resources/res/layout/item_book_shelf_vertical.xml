<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ly_item"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/ly_item_list"
        android:paddingLeft="8dp"
        android:paddingTop="16dp"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_book_img"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_88"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            app:riv_corner_radius="@dimen/dp_3"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_toStartOf="@+id/iv_select"
            android:layout_toEndOf="@+id/iv_book_img"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/forth_txt_color"
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_book_img"
            android:layout_toStartOf="@+id/iv_select"
            android:layout_toEndOf="@+id/iv_book_img"/>
        <TextView
            android:textSize="9sp"
            android:textColor="@color/white"
            android:id="@+id/tv_new_flag"
            android:background="@drawable/bg_book_shelf_new"
            android:paddingLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="更新"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_alignEnd="@+id/iv_book_img"
            android:paddingHorizontal="@dimen/dp_4"
            android:paddingVertical="@dimen/dp_2"/>
        <ImageView
            android:id="@+id/iv_select"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/forum_book_un_select_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ly_item_grid"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_book_img_grid"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="3dp"/>
        <TextView
            android:textSize="9sp"
            android:textColor="@color/white"
            android:id="@+id/tv_new_flag_grid"
            android:background="@drawable/bg_book_shelf_new"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="更新"
            android:layout_alignTop="@+id/iv_book_img_grid"
            android:layout_marginEnd="8dp"
            android:layout_alignEnd="@+id/iv_book_img_grid"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"/>
        <ImageView
            android:id="@+id/iv_select_grid"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="?attr/forum_book_un_select_icon"
            android:layout_alignBottom="@+id/iv_book_img_grid"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/forth_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_desc_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:lines="1"
            android:layout_below="@+id/tv_book_name_grid"/>
        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_book_name_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:layout_below="@+id/iv_book_img_grid"/>
    </RelativeLayout>
</LinearLayout>
