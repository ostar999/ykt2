<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/llay_reply_bg"
    android:background="?attr/app_bg"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lineremen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="?attr/app_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <View
                    android:background="@drawable/shape_project_filter_line"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="@dimen/dp_16"/>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/group_name"
                    android:background="?attr/app_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="热门评论"
                    android:layout_weight="1"
                    android:paddingEnd="3dp"
                    android:layout_marginStart="@dimen/dp_13"/>
                <LinearLayout
                    android:id="@+id/lineselect2"
                    android:background="@drawable/shape_hot_new_bg"
                    android:padding="2dp"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/headertitle"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true">
                    <CheckedTextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="@drawable/text_new2_color"
                        android:gravity="center"
                        android:id="@+id/remen2"
                        android:background="@drawable/hot_select_bg"
                        android:paddingTop="2dp"
                        android:paddingBottom="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="最热"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"/>
                    <CheckedTextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="@drawable/text_new2_color"
                        android:gravity="center"
                        android:id="@+id/zuixin2"
                        android:background="@drawable/latest_select_bg"
                        android:paddingTop="2dp"
                        android:paddingBottom="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="最新"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="?attr/new_bg_one_border_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/linciew"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_16">
            <RelativeLayout
                android:id="@+id/rel_cdf"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <com.psychiatrygarden.widget.CircleImageView
                    android:id="@+id/commentList_item_userIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="?attr/personal_headimg_icon"
                    android:scaleType="centerCrop"/>
                <com.psychiatrygarden.widget.CircleImageView
                    android:id="@+id/jiav"
                    android:visibility="gone"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/jiav"
                    android:scaleType="centerCrop"
                    android:layout_alignBottom="@+id/commentList_item_userIcon"
                    android:layout_marginEnd="-5dp"
                    android:layout_alignEnd="@+id/commentList_item_userIcon"/>
                <TextView
                    android:id="@+id/isreadtext"
                    android:background="?attr/red_yuan"
                    android:visibility="gone"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_alignTop="@+id/commentList_item_userIcon"
                    android:layout_toEndOf="@+id/commentList_item_userIcon"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/lineTile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/commentList_item_userIcon">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="12dp"
                            android:textColor="?attr/comment_nick_name_text_color"
                            android:id="@+id/commentList_item_tv_userName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>
                        <ImageView
                            android:id="@+id/vipimgid"
                            android:visibility="gone"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/vipimg"
                            android:scaleType="fitCenter"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/isverauth"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="12dp"
                            android:src="@drawable/auth2img"
                            android:scaleType="fitCenter"
                            android:layout_marginEnd="5dp"/>
                        <TextView
                            android:textSize="10dp"
                            android:textColor="?attr/item_school_color"
                            android:ellipsize="end"
                            android:id="@+id/commentList_item_tv_school"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:minLines="1"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_comment_me_new"
                    android:background="?attr/red_yuan"
                    android:visibility="gone"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:contentDescription="@null"
                    android:layout_marginStart="-1dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/lineTile"/>
                <ImageView
                    android:id="@+id/iv_elite"
                    android:background="@drawable/circle_elite_icon"
                    android:visibility="gone"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@null"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/lin_praise"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true">
                    <TextView
                        android:textSize="10sp"
                        android:textColor="?attr/font_com"
                        android:id="@+id/commentList_item_tv_praise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:layout_marginEnd="3dp"/>
                    <ImageView
                        android:id="@+id/imageView2_praiuse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </RelativeLayout>
            <com.psychiatrygarden.widget.FloorView
                android:id="@+id/foor"
                android:background="?attr/comment_floor_bg_color"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/rel_cdf"
                android:layout_marginStart="38dp"
                android:layout_marginEnd="10dp"/>
            <include
                android:id="@+id/myexptervew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/foor"
                android:layout_marginStart="38dp"
                layout="@layout/adapter_item"/>
            <com.psychiatrygarden.gradview.NineGridTestLayout
                android:id="@+id/ningrids"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/myexptervew"
                android:layout_marginStart="38dp"
                android:layout_marginEnd="10dp"
                android:transitionName="sharedView"
                app:sapcing="3dp"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/gray_font_night"
                android:id="@+id/tv_question"
                android:background="@drawable/line_all_round"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:drawablePadding="2dp"
                android:layout_below="@+id/ningrids"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginStart="38dp"
                android:layout_marginEnd="10dp"
                app:drawableEndCompat="@drawable/login_forget_arrow"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/llay_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/tv_question"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true">
                <TextView
                    android:textSize="11sp"
                    android:textColor="?attr/item_school_color"
                    android:id="@+id/tv_support"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"/>
                <TextView
                    android:textSize="11sp"
                    android:textColor="?attr/item_school_color"
                    android:id="@+id/tv_oppose"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"/>
                <TextView
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:id="@+id/tv_reply"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:background="?attr/new_bg_one_border_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/llay_support"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/line_null"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/noDataImageView"
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="6dp"
                android:src="?attr/ic_no_comment"
                android:scaleType="centerCrop"/>
            <TextView
                android:textColor="?attr/circle_info_list_no_data_text_color"
                android:gravity="center_horizontal"
                android:id="@+id/tv_null"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="暂无数据"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_ad_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view_line_bottom"
            android:background="?attr/gray_line_126"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <com.psychiatrygarden.widget.QuestionAdWidegt
            android:orientation="vertical"
            android:id="@+id/ll_ad"
            android:background="@color/white"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
