<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/bg_item_red_packet_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/dp_14">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/bg_white_corner_12_only_day_theme"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_88"
            android:layout_margin="@dimen/dp_6">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                android:textColor="@color/main_theme_color"
                android:gravity="center"
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:minWidth="@dimen/dp_63"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                android:gravity="center"
                android:background="@drawable/bg_item_multi_red_packet_layout_top"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <View
                    android:background="@drawable/bg_item_red_packet_layout_circle"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_2"/>
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textStyle="bold"
                    android:textColor="@color/main_theme_color"
                    android:id="@+id/tv_coupon"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限时优惠"
                    android:paddingHorizontal="@dimen/dp_5"/>
                <View
                    android:background="@drawable/bg_item_red_packet_layout_circle"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_2"/>
            </LinearLayout>
            <com.psychiatrygarden.widget.DashedLineView
                android:id="@+id/line"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_price"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/first_txt_color"
                android:layout_gravity="center"
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_24"
                app:layout_constraintStart_toEndOf="@+id/line"
                app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/ll_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_10"
                app:layout_constraintStart_toStartOf="@+id/tv_desc"
                app:layout_constraintTop_toBottomOf="@+id/tv_desc">
                <TextView
                    android:textSize="@dimen/sp_11"
                    android:textColor="#ffffc100"
                    android:id="@+id/tv_count_down_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="倒计时"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="horizontal"
                    android:id="@+id/rvCountDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>
