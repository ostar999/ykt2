<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_item"
    android:background="@drawable/shape_rank_user_owner_bg"
    android:paddingLeft="@dimen/dp_8"
    android:paddingTop="@dimen/dp_11"
    android:paddingRight="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_11"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:paddingHorizontal="@dimen/dp_8"
    android:paddingVertical="@dimen/dp_11">
    <TextView
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:textColor="?attr/forth_txt_color"
        android:layout_gravity="center"
        android:id="@+id/tv_rank"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"/>
    <TextView
        android:textSize="@dimen/sp_13"
        android:textStyle="bold"
        android:textColor="@color/forth_txt_color"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_sort"
        android:background="@mipmap/ic_rank_first"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:text="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8">
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/second_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:maxLines="2"
            android:layout_below="@+id/tv_book_name"
            android:layout_toEndOf="@+id/iv_book_img"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toEndOf="@+id/iv_book_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_book_img"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_88"
            android:scaleType="centerCrop"
            android:layout_marginEnd="@dimen/dp_8"
            app:riv_corner_radius="@dimen/dp_4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_book_img"
            android:layout_toEndOf="@+id/iv_book_img">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_read_num"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_1"
                    android:src="?attr/ic_book_read_people"
                    android:layout_marginEnd="@dimen/dp_4"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/third_txt_color"
                    android:id="@+id/tv_read_people_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_comment_num"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_1"
                    android:src="?attr/ic_circle_item_comment"
                    android:layout_marginEnd="@dimen/dp_4"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/third_txt_color"
                    android:id="@+id/tv_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
