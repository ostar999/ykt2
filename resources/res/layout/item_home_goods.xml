<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_weight="1">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_store_img"
            android:layout_width="@dimen/dp_106"
            android:layout_height="@dimen/dp_106"
            android:src="@drawable/imgplacehodel_image"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            app:riv_corner_radius="@dimen/dp_10"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/iv_store_img">
            <TextView
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:ellipsize="end"
                android:id="@+id/tv_store_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"/>
            <androidx.recyclerview.widget.RecyclerView
                android:orientation="horizontal"
                android:id="@+id/rvLabels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_9"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <com.psychiatrygarden.widget.TagLabelsView
                android:id="@+id/labels"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_9"
                app:labelGravity="center"
                app:labelTextPaddingBottom="@dimen/dp_1"
                app:labelTextPaddingLeft="@dimen/dp_4"
                app:labelTextPaddingRight="@dimen/dp_4"
                app:labelTextPaddingTop="@dimen/dp_1"
                app:labelTextSize="@dimen/sp_10"
                app:maxLines="1"
                app:selectType="NONE"
                app:wordMargin="@dimen/dp_8"/>
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:id="@+id/viewline"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/sp_11"
                    android:textColor="?attr/third_txt_color"
                    android:id="@+id/tv_store_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:textColor="?attr/third_txt_color"
                        android:id="@+id/tv_stroke_line_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textColor="?attr/main_theme_color"
                        android:id="@+id/tv_store_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginStart="@dimen/dp_8"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:background="?attr/new_bg_one_border_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
