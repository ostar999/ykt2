<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ffffffff_8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_restoration_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:src="@mipmap/restoration_accept_pop"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/line_restore_one"
        android:paddingTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.psychiatrygarden.widget.CircleImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/iv_user_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/app_icon"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/first_text_color"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/tv_uset_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="24dp"
            android:text="莫问前程"
            android:maxLines="1"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/tertiary_text_color"
            android:gravity="center"
            android:id="@+id/tv_restoration_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="24dp"
            android:text="12月13日"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_above="@+id/llay_support"
        android:layout_below="@+id/line_restore_one">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/tertiary_text_color"
                android:id="@+id/tv_restoration_standard"
                android:background="?attr/tertiary_backgroup_color"
                android:paddingLeft="24dp"
                android:paddingTop="16dp"
                android:paddingRight="24dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="内环境是细胞直接进行物质交换的场所，是细胞直接生活的环境。"
                android:lineSpacingExtra="8dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="24dp">
                <View
                    android:background="#ffdd594a"
                    android:layout_width="3dp"
                    android:layout_height="12dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/tv_restoration_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="补充内容"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/app_bg"
                    android:id="@+id/tv_vip_reward"
                    android:background="@drawable/ffc2af6d_2"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="VIP+5天"
                    android:includeFontPadding="false"/>
            </LinearLayout>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/first_text_color"
                android:id="@+id/tv_restoration_user_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="24dp"
                android:text="物质交换的场所，内环境是多细胞生内环境是多细胞生物的细胞在体内直接所处的环境即细胞外液内环境是多细胞生物的细胞在体内直接所处的环境即细胞外液内环境是多细胞生物的细胞在体内直接所处的环境即细胞外液内环境是多细胞生物的细胞在体内直接所处的环境即细胞外液内环境是多细胞生物的细胞在体内直接所处的环境即细胞外液物的细胞在体内直接所处的环境即细胞外液内环境是多细胞生内环境是多细胞生物的细胞在体内直接所处的环境即细胞外液内环境是多细胞生物的细胞在体内直接所处的环境即细胞外液内环境是多细胞生物的细胞在体内直接所处的环境即细胞外液内环境是多细胞生物的细胞在体内直接所处的环境即细胞外液内环境是多细胞生物的细胞在体内直接所处的环境即细胞外液物的细胞在体内直接所处的环境即细胞外液内环境是多细胞生内环境是多细胞生物的细胞在体内直接所处的环境即细胞外液内环境是多细胞生物的细胞在体内直接所处的环境即细胞外液内环境是多细胞生物的细胞在体内直接所处的环境即细胞外液内环境是多细胞生物的细胞在体内直接所处的环境即细胞外液内环境是多细胞生物的细胞在体内直接所处的环境即细胞外液物的细胞在体内直接所处的环境即细胞外液是细胞直接生活的环境。细胞代谢所需要的氧气和各种营养物质只能从内环境中摄取，而细胞代谢产生的二氧化碳和代谢终末产物也需要直接排到内环境中，然后通过血液循环运输，由呼吸和排泄器官排出体外”。"
                android:lineSpacingExtra="8dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:gravity="right"
        android:orientation="horizontal"
        android:id="@+id/llay_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="11sp"
            android:textColor="?attr/question_color"
            android:id="@+id/tv_support"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:minWidth="54dp"
            android:text="赞同"/>
        <TextView
            android:textSize="11sp"
            android:textColor="?attr/question_color"
            android:id="@+id/tv_oppose"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:minWidth="54dp"
            android:text="反对"/>
        <TextView
            android:textSize="11sp"
            android:textColor="?attr/question_color"
            android:id="@+id/tv_reply"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"/>
    </LinearLayout>
</RelativeLayout>
