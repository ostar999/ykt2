<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_bg1"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backImgv"
            android:padding="@dimen/dp_8"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@drawable/clinic_back_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_26"
            android:textStyle="bold"
            android:textColor="@color/color_333"
            android:gravity="center"
            android:id="@+id/tv"
            android:paddingLeft="@dimen/dp_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:text="@string/login_psw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backImgv"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingLeft="@dimen/dp_24"
            android:paddingRight="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_70"
            android:paddingHorizontal="@dimen/dp_24">
            <EditText
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_333"
                android:textColorHint="@color/color_999"
                android:id="@+id/pswEt"
                android:background="@color/color_transparent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:hint="@string/login_psw_input"
                android:maxLength="20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/xImgv"
                android:padding="@dimen/dp_6"
                android:visibility="invisible"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/common_x"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:background="@color/c_f4f4f4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/againCl"
            android:paddingLeft="@dimen/dp_24"
            android:paddingRight="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_30"
            android:paddingHorizontal="@dimen/dp_24">
            <EditText
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_333"
                android:textColorHint="@color/color_999"
                android:id="@+id/pswAgainEt"
                android:background="@color/color_transparent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:hint="@string/login_psw_again"
                android:maxLength="20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/x1Imgv"
                android:padding="@dimen/dp_6"
                android:visibility="invisible"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/common_x"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/line2"
                android:background="@color/c_f4f4f4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_c3c3c3"
            android:id="@+id/tipTv"
            android:paddingLeft="@dimen/dp_24"
            android:paddingTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_psw_tip"/>
        <com.noober.background.view.BLTextView
            android:enabled="false"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:id="@+id/goTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_20"
            android:text="@string/common_save"
            android:layout_marginHorizontal="@dimen/dp_20"
            app:bl_corners_radius="@dimen/dp_12"
            app:bl_solid_color="@color/c_dfe0e6"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_999"
            android:layout_gravity="center_horizontal"
            android:id="@+id/skipTv"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/login_skip"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>
</FrameLayout>
