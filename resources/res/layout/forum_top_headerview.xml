<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/rellogview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_text_banner"
            android:background="@drawable/circle_top_msg_bg"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="12dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="?attr/ic_circle_push_msg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp">
                <androidx.viewpager2.widget.ViewPager2
                    android:orientation="vertical"
                    android:id="@+id/viewPager2Notice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_close"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="?attr/ic_close_circle_push_msg"/>
        </LinearLayout>
        <com.psychiatrygarden.widget.CircleKingKongLayout
            android:id="@+id/ly_gride"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="94dp"/>
        <com.psychiatrygarden.widget.Circle24HotLayout
            android:id="@+id/hot_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <cn.webdemo.com.supporfragment.tablayout.MagicIndicator
        android:id="@+id/circlehs"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="8dp"/>
</LinearLayout>
