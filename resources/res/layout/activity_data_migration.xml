<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:padding="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/data_mairation_icon"
        android:contentDescription="@null"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/gray_font"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你可以在上传本记录后，在另外一个设备上登录并下载记录\10\10学习记录包括答题记录和答题闯关记录"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp">
        <Button
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/btn_upload_record"
            android:background="#3ac0fd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上传学习记录"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"/>
        <Button
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/btn_download_record"
            android:background="#8dd254"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下载学习记录"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
