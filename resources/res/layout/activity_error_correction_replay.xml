<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/refreshid"
        android:background="?attr/tertiary_backgroup_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="11">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="?attr/secondary_text_color"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_reply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="?attr/secondary_text_color"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/line_txt_color"
        android:gravity="center_vertical"
        android:id="@+id/tv_topic_detail_add_comment"
        android:background="?attr/line_all_round"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:text="写回复"
        android:drawablePadding="5dp"
        android:paddingStart="15dp"/>
</LinearLayout>
