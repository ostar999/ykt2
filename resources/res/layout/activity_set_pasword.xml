<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/secondary_backgroup_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:textSize="14sp"
        android:textColor="?attr/input_text_color"
        android:textColorHint="?attr/input_hint_text_color"
        android:id="@+id/et_password"
        android:background="?attr/editview_gray_bond_bg"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="请输入密码（密码长度必须在6到16位之间）"
        android:singleLine="true"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>
    <View
        android:background="?attr/line_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <EditText
        android:textSize="14sp"
        android:textColor="?attr/input_text_color"
        android:textColorHint="?attr/input_hint_text_color"
        android:id="@+id/et_confirm_password"
        android:background="?attr/editview_gray_bond_bg"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="再次输入密码"
        android:singleLine="true"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>
    <com.psychiatrygarden.widget.AlphaButton
        android:textSize="14sp"
        android:textColor="?attr/white_color02"
        android:id="@+id/btn_confirm"
        android:background="?attr/red_round_coner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:text="确认"
        android:layout_marginHorizontal="16dp"/>
</LinearLayout>
