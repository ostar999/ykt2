<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:background="@drawable/me_history_bg"
        android:paddingBottom="@dimen/dp_10"
        android:layout_width="@dimen/dp_540"
        android:layout_height="@dimen/dp_300">
        <ImageView
            android:id="@+id/tipImgv"
            android:layout_width="@dimen/dp_116"
            android:layout_height="@dimen/dp_200"
            android:src="@drawable/me_history_tip"
            android:scaleType="fitXY"
            android:layout_marginStart="@dimen/dp_26"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/c_173a8e"
            android:id="@+id/tipTv"
            android:paddingTop="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_exam_scores"
            app:layout_constraintEnd_toEndOf="@+id/tipImgv"
            app:layout_constraintStart_toStartOf="@+id/tipImgv"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_34"
            android:textStyle="bold"
            android:textColor="@color/c_2a57c2"
            android:gravity="center"
            android:id="@+id/scoreTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:minWidth="@dimen/dp_80"
            android:text="98"
            android:paddingEnd="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="@+id/tipImgv"
            app:layout_constraintTop_toBottomOf="@+id/tipTv"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_173a8e"
            android:id="@+id/timeTipTv"
            android:paddingBottom="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_exam_time"
            app:layout_constraintBottom_toTopOf="@+id/timeTv"
            app:layout_constraintEnd_toEndOf="@+id/timeTv"
            app:layout_constraintStart_toStartOf="@+id/timeTv"/>
        <com.noober.background.view.BLTextView
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textColor="@color/c_2a57c2"
            android:gravity="center"
            android:id="@+id/timeTv"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_42"
            app:bl_corners_radius="@dimen/dp_2"
            app:bl_solid_color="@color/c_54ffffff"
            app:layout_constraintBottom_toBottomOf="@+id/tipImgv"
            app:layout_constraintEnd_toEndOf="@+id/tipImgv"
            app:layout_constraintStart_toStartOf="@+id/tipImgv"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_173a8e"
            android:gravity="center"
            android:id="@+id/closeTv"
            android:background="@drawable/me_history_x"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_26"
            android:text="@string/common_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tipImgv"
            app:layout_constraintStart_toStartOf="@+id/tipImgv"
            app:layout_constraintTop_toBottomOf="@+id/tipImgv"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="@dimen/dp_34"
            android:paddingEnd="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tipImgv"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
