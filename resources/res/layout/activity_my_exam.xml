<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/secondary_backgroup_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_top_panel"
        android:background="?attr/bg_backgroud"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="24dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:gravity="center"
            android:id="@+id/tv_scan_qr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/scan_qr_code"
            android:drawablePadding="12dp"
            android:layout_weight="1"
            app:drawableTopCompat="?attr/icon_scan_qr_code"/>
        <View
            android:background="?attr/fourth_line_backgroup_color"
            android:layout_width="0.5dp"
            android:layout_height="24dp"
            android:layout_marginTop="18dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:gravity="center"
            android:id="@+id/tv_input_exam_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/input_exam_code"
            android:drawablePadding="12dp"
            android:layout_weight="1"
            app:drawableTopCompat="?attr/icon_edit_input"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_top_panel">
            <View
                android:id="@+id/line"
                android:background="@color/app_theme"
                android:layout_width="4dp"
                android:layout_height="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/first_text_color"
                android:layout_gravity="top"
                android:id="@+id/tv_my_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的考试"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/line"
                android:layout_alignParentStart="true"
                app:layout_constraintBottom_toBottomOf="@+id/line"
                app:layout_constraintStart_toEndOf="@+id/line"
                app:layout_constraintTop_toTopOf="@+id/line"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/sep_line"
            android:background="?attr/fourth_line_backgroup_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_exam"/>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/srl_refresh"
            android:background="?attr/bg_backgroud"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp">
            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
</LinearLayout>
