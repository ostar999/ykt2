<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/white_color02"
            android:id="@+id/dbiaoshitext"
            android:background="@drawable/shape_address_item"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址1"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/first_text_color"
            android:id="@+id/addrptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="北京市昌平区"/>
    </LinearLayout>
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/img">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/first_text_color"
                android:ellipsize="end"
                android:id="@+id/addrdtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="昌平区西三旗桥东A座2315"
                android:singleLine="true"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/first_text_color"
                android:id="@+id/addrname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="姓名 182*****9637"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/backnewimg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="?attr/bg_backgroud"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/first_text_color"
            android:id="@+id/numtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买数量"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="?attr/bg_backgroud"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">
            <TextView
                android:textSize="22sp"
                android:textColor="?attr/viptscolor"
                android:gravity="center"
                android:id="@+id/jianText"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="-"
                android:layout_toLeftOf="@+id/textView16"
                android:layout_alignTop="@+id/tv_jia"/>
            <EditText
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/first_text_color"
                android:gravity="center"
                android:id="@+id/numText"
                android:background="?attr/secondary_backgroup_color"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:minWidth="120dp"
                android:text="0"
                android:inputType="number"/>
            <TextView
                android:textSize="18sp"
                android:textColor="?attr/viptscolor"
                android:gravity="center"
                android:id="@+id/jiaText"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:text="+"
                android:layout_alignParentRight="true"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
