<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/bg_white_round_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginHorizontal="@dimen/dp_40">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textColor="@color/color_141516"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="助力口令已生成"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/second_txt_color"
            android:gravity="center"
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_16"
            android:lineSpacingExtra="@dimen/dp_4"
            android:layout_marginHorizontal="@dimen/dp_24"/>
        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/tv_copy_and_open_wechat"
            android:background="@drawable/shape_btn_red_radius_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_32"
            android:text="保存并跳转微信"
            android:layout_marginHorizontal="@dimen/dp_24"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_32"
        android:src="@drawable/close_white_line"/>
</LinearLayout>
