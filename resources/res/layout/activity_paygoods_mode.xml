<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/secondary_backgroup_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/dominant_color"
            android:id="@+id/tv_pay_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="¥"
            android:layout_alignBottom="@+id/tv_paymonty"/>
        <TextView
            android:textSize="24sp"
            android:textColor="?attr/dominant_color"
            android:id="@+id/tv_paymonty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="388.0"
            android:includeFontPadding="false"
            android:layout_toRightOf="@+id/tv_pay_tag"/>
    </RelativeLayout>
    <TextView
        android:textSize="13sp"
        android:textColor="?attr/tertiary_text_color"
        android:gravity="center"
        android:id="@+id/tv_pay_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:text="SVIP到期：2022年12月28日"/>
    <TextView
        android:textSize="12sp"
        android:textColor="?attr/tertiary_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:text="选择支付方式"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/tertiary_backgroup_white_color"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_zfb_pay"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/pay_zfb_logo"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/first_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="支付宝"
                android:layout_weight="11"/>
            <ImageView
                android:id="@+id/checkbox_zfb"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="?attr/sel_pay_checked"/>
        </LinearLayout>
        <View
            android:background="#ffeeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_wx_pay"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/pay_wx_logo"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/first_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="微信支付"
                android:layout_weight="11"/>
            <ImageView
                android:id="@+id/checkbox_wx"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="?attr/sel_pay_checked"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_pay_go"
        android:background="@drawable/shape_round_red"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:text="确认支付"/>
</LinearLayout>
