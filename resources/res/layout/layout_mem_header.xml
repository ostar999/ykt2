<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/new_bg_two_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_info"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_24"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_16">
        <FrameLayout
            android:id="@+id/fragview"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.psychiatrygarden.widget.CircleImageView
                android:id="@+id/mycenter_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="?attr/ic_avatar_def"
                android:scaleType="centerCrop"
                app:border_color="?attr/app_title_color"
                app:border_width="2dp"/>
            <ImageView
                android:layout_gravity="bottom|right"
                android:id="@+id/prenimg"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/prenimg"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/logindetail"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/isLoginBtn"
            android:layout_toRightOf="@+id/fragview"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="18sp"
                android:textColor="?attr/app_title_color"
                android:gravity="center"
                android:id="@+id/tv_no_login"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/welcome_2_app"/>
            <TextView
                android:textSize="18sp"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/tv_my_nickname"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的资料"
                android:maxLines="1"
                android:drawablePadding="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="13sp"
                android:textColor="?attr/third_txt_color"
                android:ellipsize="end"
                android:id="@+id/tv_school_kaosheng"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="河北医科大学，专硕考生"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/ly_no_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.psychiatrygarden.widget.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="?attr/ic_avatar_def"
                android:scaleType="centerCrop"
                app:border_color="?attr/app_title_color"
                app:border_width="0dp"/>
            <TextView
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:gravity="center"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录/注册"
                android:paddingStart="@dimen/dp_9"/>
        </LinearLayout>
        <TextView
            android:textSize="11sp"
            android:textColor="@color/secondary_color"
            android:gravity="center"
            android:id="@+id/isLoginBtn"
            android:background="@drawable/shape_w_bg"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:text="登录/注册"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/marginsbgview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <HorizontalScrollView
        android:id="@+id/vipsHoriz"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16">
            <FrameLayout
                android:id="@+id/vipbgview"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_gravity="bottom"
                    android:id="@+id/ly_share"
                    android:background="@drawable/shape_invite_share_bg"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_8"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_67"
                    android:paddingHorizontal="@dimen/dp_16">
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        android:textColor="#ffe5b8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邀请好友，免费领取会员"
                        android:layout_alignParentBottom="true"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="#ffe5b8"
                        android:id="@+id/tv_invite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="多分享多领取"
                        android:drawableRight="@mipmap/ic_vip_share_arrow"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/img_vip_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_74"
                    android:src="?attr/membgimg"
                    android:scaleType="fitXY"/>
                <RelativeLayout
                    android:id="@+id/rel_memview"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_74">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_centerVertical="true">
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/nologinLineView"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/memn2img"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="?attr/viphimg"/>
                                <TextView
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/vip_blod_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:text=" VIP会员"/>
                            </LinearLayout>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="?attr/vip_info_color"
                                android:id="@+id/simplinevip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="开通会员，领取专属福利"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/loginLineView"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/memn2img"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:src="?attr/viphimg"
                                    android:scaleType="fitXY"/>
                                <TextView
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/vip_blod_color"
                                    android:gravity="center"
                                    android:paddingTop="1dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:text="VIP会员"
                                    android:includeFontPadding="false"/>
                            </LinearLayout>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="?attr/vip_info_color"
                                android:id="@+id/datelineTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="2013-12-12到期"/>
                        </LinearLayout>
                    </FrameLayout>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/vip_button_txt_color"
                        android:gravity="center"
                        android:id="@+id/anniuclickTv"
                        android:background="@drawable/shape_kt_bg"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="立即开通"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/svipbgview"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_74"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_16">
                <ImageView
                    android:id="@+id/img_svip_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="?attr/svipmebg"
                    android:scaleType="fitXY"/>
                <RelativeLayout
                    android:id="@+id/rel_svidmemview"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_centerVertical="true">
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/nologinsvidLineView"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/memnsvip2img"
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:src="?attr/sviphimg"/>
                                <TextView
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/svip_blod_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:text=" SVIP会员"/>
                            </LinearLayout>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="?attr/svip_info_color"
                                android:id="@+id/simplinesvip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="开通会员，领取专属福利"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/loginsvidLineView"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/memnsvip2img"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:src="?attr/sviphimg"
                                    android:scaleType="fitXY"/>
                                <TextView
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/svip_blod_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:text=" SVIP会员"/>
                            </LinearLayout>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="?attr/svip_info_color"
                                android:id="@+id/datesviplineTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="2013-12-12到期"/>
                        </LinearLayout>
                    </FrameLayout>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center"
                        android:id="@+id/anniusvipclickTv"
                        android:background="@drawable/shape_svip_kt"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="立即开通"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
