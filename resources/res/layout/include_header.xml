<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/llay_top_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="10sp"
        android:textColor="?attr/app_title_color"
        android:gravity="center"
        android:id="@+id/tv_question_cuoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="错题"
        android:drawableTop="?attr/wrongtd"
        android:drawablePadding="5dp"
        android:layout_weight="1"/>
    <TextView
        android:textSize="10sp"
        android:textColor="?attr/app_title_color"
        android:gravity="center"
        android:id="@+id/tv_question_shoucang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收藏"
        android:drawableTop="?attr/collecttd"
        android:drawablePadding="5dp"
        android:layout_weight="1"/>
    <TextView
        android:textSize="10sp"
        android:textColor="?attr/app_title_color"
        android:gravity="center"
        android:id="@+id/pinglun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论"
        android:drawableTop="?attr/commingtd"
        android:drawablePadding="5dp"
        android:layout_weight="1"/>
    <TextView
        android:textSize="10sp"
        android:textColor="?attr/app_title_color"
        android:gravity="center"
        android:id="@+id/dianzan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点赞"
        android:drawableTop="?attr/zantd"
        android:drawablePadding="5dp"
        android:layout_weight="1"/>
    <TextView
        android:textSize="10sp"
        android:textColor="?attr/app_title_color"
        android:gravity="center"
        android:id="@+id/tv_question_biji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="笔记"
        android:drawableTop="?attr/notetd"
        android:drawablePadding="5dp"
        android:layout_weight="1"/>
</LinearLayout>
