<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_mian"
    android:background="@drawable/bg_pop_comment"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_276">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_top_indicator"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_16"
        android:src="@drawable/bg_pop_bottom_btn"/>
    <TextView
        android:textSize="@dimen/sp_13"
        android:textColor="?attr/third_txt_color"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_comment_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:text=""
        android:maxLines="2"
        android:paddingHorizontal="@dimen/dp_16"
        android:lineHeight="22dp"/>
    <View
        android:background="?attr/new_bg_one_border_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_14"/>
    <com.lxj.xpopup.widget.VerticalRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/dp_16"/>
    <TextView
        android:textSize="@dimen/sp_16"
        android:textColor="?attr/first_txt_color"
        android:gravity="center"
        android:id="@+id/tv_comment_cancel"
        android:background="@drawable/bg_pop_bottom_btn"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="取消"
        android:layout_marginHorizontal="@dimen/dp_16"/>
</LinearLayout>
