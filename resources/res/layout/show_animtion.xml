<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#3f000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_info"
        android:background="@color/app_theme_red"
        android:padding="10dp"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:id="@+id/tv_exam_day"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离考研？天"
            android:singleLine="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:id="@+id/tv_set"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_set">
            <com.psychiatrygarden.widget.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mycenter_icon"
                android:background="@drawable/personal_headimg_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                app:border_color="@color/white"
                app:border_width="2dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击登录"
                    android:singleLine="true"/>
                <ImageView
                    android:id="@+id/iv_user_sex"
                    android:background="@drawable/male_icon"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@null"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/llay_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/iv_vip_icon"
                    android:background="@drawable/vip_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@null"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程会员 "
                    android:singleLine="true"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/orange_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="课程续费 "
                    android:singleLine="true"/>
            </LinearLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_ranking"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="最新排名：全国？名，目标院校0名 "
                    android:singleLine="true"
                    android:drawableRight="@drawable/me_white_arrow"
                    android:drawablePadding="3dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_user_school"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="考研院校 "
                    android:singleLine="true"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_login_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="您还没有登录，没法获取院校信息 "
                    android:singleLine="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/gray_font"
        android:gravity="center_vertical"
        android:id="@+id/tv_personal_info"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="个人资料"
        android:drawableLeft="@drawable/grzl_icon"
        android:drawableRight="@drawable/icon_indicator_right"
        android:drawablePadding="15dp"
        android:layout_below="@+id/rl_info"/>
    <RelativeLayout
        android:id="@+id/show_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rl_info">
        <ImageView
            android:id="@+id/show_jiantou"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/jiantou"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/wenzi"
            android:layout_below="@+id/show_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/show_wozhidaole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/wozhidaole"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/show_img"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/jiantou2"
            android:scaleType="fitXY"
            android:layout_toLeftOf="@+id/show_jiantou"
            android:layout_below="@+id/show_jiantou"/>
    </RelativeLayout>
</RelativeLayout>
