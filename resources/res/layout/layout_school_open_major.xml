<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/new_bg_two_color_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/img_bg"
        android:background="@drawable/shape_choose_school_details_top_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:orientation="vertical"
            android:id="@+id/appbarlayout"
            android:background="@color/transparent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">
                <RelativeLayout
                    android:id="@+id/rellogview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginHorizontal="@dimen/dp_20">
                    <com.psychiatrygarden.widget.CircleImageView
                        android:id="@+id/school_head"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:src="@mipmap/ic_order_default"
                        android:layout_marginEnd="@dimen/dp_12"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/school_head">
                        <TextView
                            android:textSize="@dimen/sp_17"
                            android:textStyle="bold"
                            android:textColor="?attr/first_txt_color"
                            android:ellipsize="end"
                            android:id="@+id/tv_school_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="北京大学"
                            android:maxLines="2"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/ly_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_below="@+id/tv_school_name"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8">
                            <TextView
                                android:textSize="@dimen/sp_11"
                                android:textColor="?attr/third_txt_color"
                                android:id="@+id/tv_school_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="地址：北京"/>
                            <TextView
                                android:textSize="@dimen/sp_11"
                                android:textColor="?attr/third_txt_color"
                                android:id="@+id/tv_school_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="代码：100001"
                                android:layout_marginStart="@dimen/dp_12"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toobars1"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">
                    <include
                        android:id="@+id/toolbars"
                        layout="@layout/layout_toolbar_common"/>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_12"
                android:paddingHorizontal="@dimen/dp_8">
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ly_category"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:textColor="?attr/second_txt_color"
                        android:id="@+id/major_type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专业类别"/>
                    <ImageView
                        android:id="@+id/major_type_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_arrow_second_txt_color_bottom"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ly_department"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:textColor="?attr/second_txt_color"
                        android:id="@+id/major_school_select_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="院系"/>
                    <ImageView
                        android:id="@+id/major_school_select_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_arrow_second_txt_color_bottom"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ll_empty"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/img_empty"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:src="?attr/ic_empty_data_normal"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="?attr/forth_txt_color"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="暂无数据"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>
