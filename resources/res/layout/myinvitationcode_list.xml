<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myinvitation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="明天，你好"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:textColor="@color/orgle"
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="2016-12-12"
        android:layout_alignBottom="@+id/tv_username"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textColor="@color/gray_light"
        android:id="@+id/tv_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="生化单月单科"
        android:layout_below="@+id/tv_username"
        android:layout_alignLeft="@+id/tv_username"/>
    <TextView
        android:textColor="@color/orgle"
        android:id="@+id/tv_add_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:text="【奖励:延长5天】"
        android:layout_toRightOf="@+id/tv_course"
        android:layout_alignBottom="@+id/tv_course"/>
    <View
        android:background="@color/gray_line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_course"/>
</RelativeLayout>
