<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ly_view"
    android:background="@drawable/shape_white_round_16_no_night"
    android:paddingBottom="@dimen/dp_16"
    android:layout_width="@dimen/dp_295"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/first_txt_color"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预估分说明"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/img_close"
            android:padding="@dimen/dp_6"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/closeing"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16">
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="@color/first_txt_color"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实现“学→练一背一考”全程线上化学习，因此我们有“全程、完整、百万量级的数据”，数据量是够的;也有专业的AI算法团队建模经过6个多月的调整和测试，在数据完整的情况下，准确率在98%左右。但要说明的是:预估分准不准也要看用户个人的学习数据，如果用户学习数据量大+维度丰富，那准确率就高;反之，准确率就不高。特殊说明:若您没有主观题批改权限，预估分和主观题得分率数据会受到一定的影响。反之，预估分的准"
            android:lineSpacingExtra="@dimen/dp_3"/>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:textColor="@color/new_bg_one_color"
        android:gravity="center"
        android:id="@+id/btn_sure"
        android:background="@drawable/shape_main_theme_color_no_night_round12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="我知道了"
        android:layout_marginHorizontal="@dimen/dp_16"/>
</LinearLayout>
