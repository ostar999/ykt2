<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/ly_item"
    android:background="?attr/app_bg"
    android:layout_width="72dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="6dp"
            android:layout_centerHorizontal="true"/>
        <View
            android:id="@+id/dot"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="9sp"
            android:textColor="?attr/new_bg_one_color"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/tv_tag"
            android:background="@drawable/shape_forum_kingkong_tag_bg"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="标签"
            android:lines="1"
            android:layout_toEndOf="@+id/dot"
            android:paddingHorizontal="5dp"/>
        <TextView
            android:textSize="9sp"
            android:textColor="?attr/new_bg_one_color"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/tv_tag_more"
            android:background="@drawable/shape_forum_kingkong_tag_bg"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="标签标签"
            android:lines="1"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="5dp"/>
    </RelativeLayout>
    <TextView
        android:textSize="11sp"
        android:textColor="?attr/first_txt_color"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/iv_icon"/>
</LinearLayout>
