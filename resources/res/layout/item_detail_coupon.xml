<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_item_detail_coupon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/bg_detail_coupon_left_hide_detail"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_10">
            <TextView
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="?attr/main_theme_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="?attr/main_theme_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"/>
            <CheckedTextView
                android:textSize="@dimen/sp_10"
                android:textColor="@drawable/text_color_item_detail_coupon"
                android:gravity="center"
                android:background="@drawable/bg_item_detail_coupon_state"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_4"
                android:checked="true"
                android:textAlignment="center"/>
        </LinearLayout>
        <com.psychiatrygarden.widget.DashedLineView
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:paddingVertical="@dimen/dp_8">
            <TextView
                android:textSize="@dimen/sp_13"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:ellipsize="end"
                android:id="@+id/tv_coupon_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="优惠券名称优惠券名称优惠券名称优惠券名称优惠券名称优惠券名称优惠券名称优惠券名称"
                android:lines="1"/>
            <TextView
                android:textSize="@dimen/sp_11"
                android:textColor="?attr/second_txt_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"/>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/ll_use_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:textSize="@dimen/sp_11"
                    android:textColor="?attr/second_txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用详情"/>
                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_1"
                    android:src="?attr/icon_bottom_arrow_new"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@drawable/bg_coupon_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="?attr/second_txt_color"
            android:id="@+id/tv_sn"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingHorizontal="@dimen/dp_10"
            android:lineHeight="@dimen/dp_20"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="?attr/second_txt_color"
            android:id="@+id/tv_desc"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_10"
            android:lineHeight="@dimen/dp_20"/>
    </LinearLayout>
</LinearLayout>
