<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/view_dialog_root"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_content"
        android:background="@drawable/shape_white_top_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_400">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <ImageView
                android:id="@+id/btn_cancel"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/ic_close_gray"
                android:layout_centerVertical="true"
                android:paddingStart="6dp"
                android:paddingEnd="16dp"
                android:layout_alignParentEnd="true"
                android:paddingVertical="5dp"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="?attr/first_text_color"
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/top_tab_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <RelativeLayout
                android:orientation="vertical"
                android:id="@+id/layout_tab1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/tvTab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可用优惠券（35）"
                    android:layout_centerInParent="true"/>
                <View
                    android:id="@+id/tabLine1"
                    android:background="@drawable/shape_app_theme_corners_8"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:id="@+id/layout_tab2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="normal"
                    android:textColor="?attr/third_txt_color"
                    android:id="@+id/tvTab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不可用优惠券（5）"
                    android:layout_centerInParent="true"/>
                <View
                    android:id="@+id/tabLine2"
                    android:background="@drawable/shape_app_theme_corners_8"
                    android:visibility="invisible"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
        <View style="@style/line_style"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.psychiatrygarden.widget.imagezoom.HackyViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ly_progress"
                android:background="@drawable/download_progress_bg"
                android:visibility="gone"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true">
                <com.psychiatrygarden.widget.ProgressWheel
                    android:id="@+id/progress_wheel_download"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    wheel:matProg_barColor="?attr/loading_dialog_text_color"
                    wheel:matProg_barWidth="1dp"
                    wheel:matProg_progressIndeterminate="true"
                    wheel:matProg_rimWidth="1dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/loading_dialog_text_color"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/dialog_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="加载中"
                    android:maxLines="2"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layoutBottom"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:paddingHorizontal="@dimen/dp_16">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="?attr/first_txt_color"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="已选择 "/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="?attr/main_theme_color"
                android:gravity="center_vertical"
                android:id="@+id/tvSelectNum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0 "/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="?attr/first_txt_color"
                android:gravity="center_vertical"
                android:id="@+id/tvFlag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="张， 可减 "/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="?attr/main_theme_color"
                android:gravity="center_vertical"
                android:id="@+id/tvSelectDecreaseCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="¥0 "/>
            <TextView
                android:enabled="false"
                android:textSize="@dimen/sp_14"
                android:textColor="?attr/app_bg"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/tvSubmit"
                android:background="@drawable/bg_download"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_42"
                android:text="确定"
                android:maxLines="1"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_31"
                android:layout_alignParentEnd="true"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
