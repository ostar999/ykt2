<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/relayout_note_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:background_normal="@color/white"
    app:corner_radius_top_left="@dimen/dp_16"
    app:corner_radius_top_right="@dimen/dp_16">
    <RelativeLayout
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:paddingHorizontal="@dimen/dp_16">
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_close"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="#303030"
            android:id="@+id/tvNoteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="笔记"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/viewLine"
        style="@style/line_style_book"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.ruffian.library.widget.RRelativeLayout
            android:orientation="vertical"
            android:id="@+id/relayoutNoteContent"
            android:padding="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="0dp"
            android:layout_marginHorizontal="16dp"
            app:background_normal="#f9fafb"
            app:border_color_normal="#ffffff"
            app:border_width_normal="1dp"
            app:corner_radius="@dimen/dp_8">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/color_303030"
                android:ellipsize="end"
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_more"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_content"
                android:layout_alignParentEnd="true">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/color_145FB3"
                    android:id="@+id/moreNoteContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"/>
                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:src="@mipmap/ic_blue_more"
                    android:contentDescription="more"/>
            </LinearLayout>
            <View
                android:id="@+id/viewContentLine"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_below="@+id/tv_content"
                android:layout_marginVertical="@dimen/dp_12"
                style="@style/line_style_book"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/viewContentLine"
                android:layout_marginHorizontal="16dp">
                <com.ruffian.library.widget.RTextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/color_303030"
                    android:id="@+id/tv_draw_line"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_35"
                    android:text="划线"
                    app:icon_height_top="@dimen/dp_20"
                    app:icon_normal_top="@drawable/icon_note_draw_line"
                    app:icon_width_top="@dimen/dp_20"
                    app:icon_with_text="true"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <com.ruffian.library.widget.RTextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/color_303030"
                    android:id="@+id/tv_copy"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_35"
                    android:text="复制"
                    app:icon_height_top="@dimen/dp_20"
                    app:icon_normal_top="@drawable/icon_note_copy"
                    app:icon_width_top="@dimen/dp_20"
                    app:icon_with_text="true"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <com.ruffian.library.widget.RTextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/color_303030"
                    android:id="@+id/tv_share"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_35"
                    android:text="分享"
                    app:icon_height_top="@dimen/dp_20"
                    app:icon_normal_top="@drawable/icon_note_share"
                    app:icon_width_top="@dimen/dp_20"
                    app:icon_with_text="true"/>
            </LinearLayout>
        </com.ruffian.library.widget.RRelativeLayout>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:id="@+id/refresh_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlTextRefreshing="正在刷新数据中"
                app:srlTextRelease="松开立即刷新"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/line"
            android:background="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:paddingHorizontal="@dimen/dp_16">
            <com.ruffian.library.widget.RImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_34"
                android:src="@drawable/personal_headimg_icon"
                android:layout_marginEnd="@dimen/dp_12"
                app:is_circle="true"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/layoutAddNote"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:paddingHorizontal="@dimen/dp_12"
                app:corner_radius="@dimen/dp_18">
                <ImageView
                    android:id="@+id/iv_add_note"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/ic_add_comment"
                    android:layout_marginEnd="@dimen/dp_4"/>
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_303030"
                    android:textColorHint="@color/color_c2c6cb"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_add_note"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="添加笔记"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.ruffian.library.widget.RLinearLayout>
