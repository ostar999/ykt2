<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myscrollid"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/llay_all_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:id="@+id/questiondetails_tv_childTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:lineSpacingMultiplier="1.3"/>
        <ImageView
            android:id="@+id/imgtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
        <com.psychiatrygarden.widget.MyListView
            android:id="@+id/questiondetails_listView"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:listSelector="@color/transparent"
            android:divider="?attr/app_bg"
            android:dividerHeight="10dp"/>
        <RelativeLayout
            android:background="?attr/app_bg"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="12sp"
                android:textColor="?attr/comment_color"
                android:id="@+id/questiondetails_btn_commentNum"
                android:background="?attr/question_comment_flag_icon_two"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:minWidth="50dp"
                android:text="？评论"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/questiondetails_layout_diff"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/questiondetails_btn_commentNum"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/questiondetails_btn_commentNum"/>
        </RelativeLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/question_color"
            android:id="@+id/questiondetails_tv_statistics"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1.2dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linbiaoqian"
            android:background="?attr/app_bg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/question_color"
                android:gravity="center"
                android:id="@+id/biaotxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="标签：？"/>
            <RelativeLayout
                android:id="@+id/rl_column"
                android:background="?attr/app_bg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">
                <HorizontalScrollView
                    android:id="@+id/mColumnHorizontalScrollView"
                    android:background="?attr/app_bg"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_toLeftOf="@+id/ll_more_columns">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/mRadioGroup_content"
                        android:background="?attr/app_bg"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"/>
                </HorizontalScrollView>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ll_more_columns"
                    android:background="?attr/app_bg"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/button_more_columns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="?attr/tikujia"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_question_video"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="7dp"
            android:layerType="software">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager_question_video"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>
            <com.psychiatrygarden.widget.CirclePoint
                android:id="@+id/circlepoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                app:appSix="false"
                app:size="6dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_play"
            android:background="#dfddd8"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/iv_play_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:contentDescription="@null"/>
            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/uvv_itv_player_play"
                android:layout_centerInParent="true"
                android:contentDescription="@null"/>
            <ImageView
                android:id="@+id/night_vedio_bg"
                android:background="@drawable/night_vedio_bg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/questiondetails_layout_answer"
            android:background="?attr/answer_content_bg"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/jiucuo"
                android:id="@+id/tv_correction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="纠错"
                android:layout_alignParentRight="true"/>
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:id="@+id/questiondetails_tv_Answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正确答案:"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/questiondetails_tv_Answer">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingLeft="-8dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="【考点还原】"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="?attr/question_color"
                    android:id="@+id/questiondetails_tv_outline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="大纲考点:"
                    android:lineSpacingMultiplier="1.3"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="?attr/question_color"
                    android:id="@+id/questiondetails_tv_content_ques1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lineSpacingMultiplier="1.3"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="?attr/question_color"
                    android:id="@+id/questiondetails_tv_content_ques"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lineSpacingMultiplier="1.3"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="?attr/question_color"
                    android:id="@+id/questiondetails_tv_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="考点详解:"
                    android:lineSpacingMultiplier="1.3"/>
            </LinearLayout>
        </RelativeLayout>
        <Button
            android:textSize="14sp"
            android:textColor="?attr/question_color"
            android:gravity="center"
            android:id="@+id/questiondetails_btn_pushAnswer"
            android:background="?attr/tijiao"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="提交答案"/>
    </LinearLayout>
</ScrollView>
