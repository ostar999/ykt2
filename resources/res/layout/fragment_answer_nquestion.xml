<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/questiondetails_bottom_layout"
        app:srlEnableFooterFollowWhenLoadFinished="true"
        app:srlEnableScrollContentWhenLoaded="true">
        <androidx.core.widget.NestedScrollView
            android:orientation="vertical"
            android:background="?attr/bg_backgroud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:background="?attr/bg_backgroud"
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#ffe25d49"
                    android:gravity="center"
                    android:id="@+id/tv_question_new"
                    android:background="@drawable/fffff470_2"
                    android:paddingLeft="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新增"
                    android:paddingEnd="8dp"
                    android:layout_marginStart="16dp"/>
                <RelativeLayout
                    android:paddingLeft="16dp"
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp">
                    <TextView
                        android:id="@+id/verticaltv"
                        android:background="?attr/app_theme"
                        android:layout_width="3dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="1dp"/>
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/question_color"
                        android:id="@+id/typeStr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单选题"
                        android:includeFontPadding="false"
                        android:layout_toRightOf="@+id/verticaltv"
                        android:layout_marginStart="10dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:textSize="13dp"
                            android:textColor="?attr/numdefault"
                            android:id="@+id/pagenumtv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="10/23"
                            android:includeFontPadding="false"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="?attr/question_color"
                        android:id="@+id/titletv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:lineSpacingMultiplier="1.3"/>
                    <ImageView
                        android:id="@+id/img_audio"
                        android:visibility="gone"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/audio_play_anim"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ly_video_view"
                    android:visibility="gone"
                    android:layout_width="168dp"
                    android:layout_height="94dp"
                    android:layout_margin="16dp">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/img_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="8dp"/>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/video_play_normal"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <WebView
                    android:id="@+id/web"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>
                <com.tencent.smtt.sdk.WebView
                    android:id="@+id/img_webview"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>
                <ImageView
                    android:id="@+id/imgtitle"
                    android:background="@color/transparent"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/lineout"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/schildline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:background="?attr/app_bg"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp">
                            <TextView
                                android:textSize="12sp"
                                android:textColor="?attr/question_color"
                                android:id="@+id/tv_correction"
                                android:background="@drawable/ffeeeeee_12_stroke_1"
                                android:paddingLeft="10dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="试题纠错"
                                android:layout_centerVertical="true"
                                android:paddingEnd="10dp"
                                android:layout_alignParentEnd="true"/>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:id="@+id/questiondetails_layout_diff"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/questiondetails_btn_commentNum"
                                android:layout_centerVertical="true"
                                android:paddingEnd="10dp">
                                <TextView
                                    android:textSize="12sp"
                                    android:textColor="?attr/question_color"
                                    android:id="@+id/textView_difficulty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="难度："
                                    android:lineSpacingExtra="1.2dp"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">
                            <TextView
                                android:textSize="13sp"
                                android:textColor="?attr/question_color"
                                android:id="@+id/tv_statistics"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="统计："
                                android:lineSpacingExtra="1.2dp"/>
                            <TextView
                                android:textSize="13sp"
                                android:textColor="?attr/question_color"
                                android:id="@+id/questiondetails_tv_statistics"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingMultiplier="1.3"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/linbiaoqian"
                            android:background="?attr/app_bg"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">
                            <TextView
                                android:textSize="13sp"
                                android:textColor="?attr/question_color"
                                android:gravity="center"
                                android:id="@+id/biaotxt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="标签：？"/>
                            <RelativeLayout
                                android:id="@+id/rl_column"
                                android:background="?attr/app_bg"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1">
                                <HorizontalScrollView
                                    android:id="@+id/mColumnHorizontalScrollView"
                                    android:background="?attr/app_bg"
                                    android:scrollbars="none"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_toLeftOf="@+id/ll_more_columns">
                                    <LinearLayout
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:id="@+id/mRadioGroup_content"
                                        android:background="?attr/app_bg"
                                        android:paddingLeft="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_centerVertical="true"
                                        android:paddingEnd="5dp"/>
                                </HorizontalScrollView>
                                <LinearLayout
                                    android:gravity="center"
                                    android:id="@+id/ll_more_columns"
                                    android:background="?attr/app_bg"
                                    android:layout_width="30dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true">
                                    <ImageView
                                        android:id="@+id/button_more_columns"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="?attr/tikujia"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                        <TextView
                            android:textSize="13sp"
                            android:textColor="?attr/question_color"
                            android:id="@+id/questiondetails_tv_outline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="大纲考点:"
                            android:lineSpacingExtra="1.2dp"
                            android:lineSpacingMultiplier="1.2"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"/>
                        <TextView
                            android:textSize="13sp"
                            android:textColor="?attr/question_color"
                            android:id="@+id/sourcetv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="来源"
                            android:lineSpacingExtra="1.2dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"/>
                    </LinearLayout>
                    <View
                        android:background="?attr/gray_line_126"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="20dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/ansline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyansitem"
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"/>
                        <View
                            android:background="?attr/gray_line_126"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/questiondetails_layout_answer"
                        android:background="@drawable/fffaf4e6_2"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="10dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">
                            <TextView
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="?attr/kaodiancolor"
                                android:id="@+id/nitv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="考点还原"
                                android:includeFontPadding="false"
                                android:drawableLeft="?attr/localimg"
                                android:drawablePadding="4dp"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:id="@+id/ll_restore_enter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <RelativeLayout
                                    android:gravity="right"
                                    android:id="@+id/rl_restore_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="11"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginEnd="12dp"/>
                                <TextView
                                    android:textSize="14sp"
                                    android:textColor="#ffbfa464"
                                    android:id="@+id/tv_restore_edit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10人编辑"
                                    android:drawableRight="@mipmap/restore_arrow"
                                    android:drawablePadding="6dp"/>
                                <TextView
                                    android:textSize="14sp"
                                    android:textColor="#ffbfa464"
                                    android:gravity="center"
                                    android:id="@+id/tv_restore_to_edit"
                                    android:background="@drawable/ffc0a464_12_stroke_1"
                                    android:paddingLeft="12dp"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="24dp"
                                    android:text="我要编辑"
                                    android:includeFontPadding="false"
                                    android:paddingEnd="12dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:id="@+id/view_line_restore"
                            android:background="?attr/questionline"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="16dp"/>
                        <TextView
                            android:textSize="18sp"
                            android:textColor="?attr/question_color"
                            android:id="@+id/questiondetails_tv_content_ques1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:lineSpacingMultiplier="1.3"
                            android:textIsSelectable="true"/>
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/img_original"
                            android:visibility="gone"
                            android:layout_width="88dp"
                            android:layout_height="88dp"
                            android:layout_marginTop="16dp"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius="5dp"/>
                        <TextView
                            android:textSize="15sp"
                            android:textColor="?attr/kaodiancolor"
                            android:id="@+id/tv_restore_reword"
                            android:background="#fff8f0dd"
                            android:padding="10dp"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="点击右上角“编辑入口”参与考点还原编写，可获得丰厚会员奖励。"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="1.3"/>
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/kaodiancolor"
                            android:id="@+id/eitv"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="考点还原"
                            android:includeFontPadding="false"
                            android:drawableLeft="?attr/localimg"
                            android:drawablePadding="4dp"/>
                        <View
                            android:id="@+id/eitvline"
                            android:background="?attr/questionline"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="15dp"/>
                        <TextView
                            android:textSize="18sp"
                            android:textColor="?attr/question_color"
                            android:id="@+id/questiondetails_tv_content_ques"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:lineSpacingMultiplier="1.3"
                            android:textIsSelectable="true"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ly_analysis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp">
                                <TextView
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/kaodiancolor"
                                    android:id="@+id/tv_answer_analyze"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="答案解析"
                                    android:includeFontPadding="false"
                                    android:drawableLeft="?attr/ansimg2"
                                    android:drawablePadding="4dp"/>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:id="@+id/ll_analyze_enter"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <RelativeLayout
                                        android:gravity="right"
                                        android:id="@+id/rl_analyze_user"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="11"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginEnd="12dp"/>
                                    <TextView
                                        android:textSize="14sp"
                                        android:textColor="#ffbfa464"
                                        android:id="@+id/tv_analyze_edit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="3人编辑"
                                        android:drawableRight="@mipmap/restore_arrow"
                                        android:drawablePadding="6dp"/>
                                    <TextView
                                        android:textSize="14sp"
                                        android:textColor="#ffbfa464"
                                        android:gravity="center"
                                        android:id="@+id/tv_analyze_to_edit"
                                        android:background="@drawable/ffc0a464_12_stroke_1"
                                        android:paddingLeft="12dp"
                                        android:visibility="gone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="24dp"
                                        android:text="我要编辑"
                                        android:includeFontPadding="false"
                                        android:paddingEnd="12dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <View
                                android:id="@+id/view_line_analyze"
                                android:background="?attr/questionline"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="15dp"/>
                            <TextView
                                android:textSize="18sp"
                                android:textColor="?attr/question_color"
                                android:id="@+id/questiondetails_tv_contents"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="考点详解:"
                                android:lineSpacingMultiplier="1.3"
                                android:textIsSelectable="true"/>
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/img_explain"
                                android:visibility="gone"
                                android:layout_width="88dp"
                                android:layout_height="88dp"
                                android:layout_marginTop="16dp"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius="5dp"/>
                            <TextView
                                android:textSize="15sp"
                                android:textColor="?attr/kaodiancolor"
                                android:id="@+id/tv_analyze_reword"
                                android:background="#fff8f0dd"
                                android:padding="10dp"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:layout_marginBottom="10dp"
                                android:text="点击右上角“编辑入口”参与答案解析编写，可获得丰厚会员奖励。"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="1.3"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="Translate"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/questiondetails_bottom_layout"
        android:background="?attr/bg_backgroud"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:background="?attr/gray_line_126"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/qbrel"
            android:background="?attr/bg_backgroud"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">
            <LinearLayout
                android:id="@+id/ly_questiondetails_btn_zantong"
                android:layout_marginEnd="4dp"
                android:layout_alignParentEnd="true"
                style="@style/layout_icon_style">
                <ImageView
                    android:id="@+id/questiondetails_btn_zantong"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/dianzancourse"/>
                <TextView
                    android:text="点赞"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_questiondetails_btn_centerMsg"
                android:layout_toStartOf="@+id/ly_questiondetails_btn_zantong"
                style="@style/layout_icon_style">
                <ImageView
                    android:id="@+id/questiondetails_btn_centerMsg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/question_msg"/>
                <TextView
                    android:text="评论"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_questiondetails_btn_collect"
                android:layout_toStartOf="@+id/ly_questiondetails_btn_centerMsg"
                style="@style/layout_icon_style">
                <ImageView
                    android:id="@+id/questiondetails_btn_collect"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/icon_collect_no"/>
                <TextView
                    android:text="收藏"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_questiondetails_btn_edit"
                android:layout_toStartOf="@+id/ly_questiondetails_btn_collect"
                style="@style/layout_icon_style">
                <ImageView
                    android:id="@+id/questiondetails_btn_edit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/btn_edit"/>
                <TextView
                    android:text="笔记"
                    style="@style/layotu_textview_icon_style"/>
            </LinearLayout>
            <TextView
                android:textSize="13sp"
                android:textStyle="normal"
                android:textColor="?attr/secondary_text_color"
                android:gravity="center_vertical"
                android:id="@+id/btn_comment"
                android:background="@drawable/comment_bg_shape"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="写评论"
                android:drawablePadding="2dp"
                android:layout_centerVertical="true"
                android:paddingStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@+id/ly_questiondetails_btn_edit"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_question_comment"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignTop="@+id/btn_comment"
                android:paddingEnd="20dp"
                android:layout_marginEnd="6dp"
                android:layout_alignEnd="@+id/btn_comment">
                <View
                    android:background="#ffeeeeee"
                    android:layout_width="1dp"
                    android:layout_height="12dp"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/comment_icon_question_bottom"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
            <TextView
                android:textSize="9sp"
                android:textColor="?attr/comment_color"
                android:gravity="center"
                android:id="@+id/questiondetails_btn_commentNum"
                android:background="@drawable/fff6614b_8"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginTop="3dp"
                android:minWidth="29dp"
                android:text="？评论"
                android:singleLine="true"
                android:layout_alignTop="@+id/btn_comment"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginEnd="6dp"
                android:layout_alignEnd="@+id/btn_comment"/>
        </RelativeLayout>
        <TextView
            android:textSize="18sp"
            android:textColor="?attr/question_color"
            android:gravity="center"
            android:id="@+id/questiondetails_btn_pushAnswer"
            android:background="?attr/gray_line_126"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="撰写解析"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/line_viewok"
            android:background="?attr/gray_line_126"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="?attr/green_child"
                android:gravity="center"
                android:id="@+id/zuoduil"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="答对了"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"/>
            <View
                android:background="@color/gray_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:textColor="?attr/red_child"
                android:gravity="center"
                android:id="@+id/zuocuol"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="答错了"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
