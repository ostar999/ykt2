<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/app_bg"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_head"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/app_icon"
        android:layout_marginEnd="8dp"
        app:riv_corner_radius="100dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/first_text_color"
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toEndOf="@+id/img_head"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ly_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tv_nickname"
        android:layout_toEndOf="@+id/img_head">
        <ImageView
            android:id="@+id/img_auth"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/auth2img"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/fourth_text_color"
            android:id="@+id/tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="?attr/first_text_color"
        android:ellipsize="end"
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:layout_below="@+id/ly_school"
        android:layout_toEndOf="@+id/img_head"/>
    <View
        android:id="@+id/line"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tv_content"
        style="@style/line_style"/>
</RelativeLayout>
