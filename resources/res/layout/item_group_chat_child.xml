<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_group_chat_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/app_icon"
            android:scaleType="centerCrop"
            app:riv_corner_radius="3dp"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/tv_add_remove"
            android:background="@drawable/shape_line_rectangle"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="加入"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_add_remove"
            android:layout_toRightOf="@+id/iv_group_chat_img"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:ellipsize="end"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="考研群"
                android:maxLines="1"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="11sp"
                android:textColor="#cd624e"
                android:ellipsize="end"
                android:id="@+id/tv_member_num"
                android:background="@drawable/shape_rectangle_f7f7f7_3"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="12334成员"
                android:maxLines="1"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:textSize="13sp"
        android:textColor="#ffadadad"
        android:ellipsize="end"
        android:id="@+id/tv_group_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:text="23复旦大学临床考研复试交流群，专硕、学硕均可入群，入群需提供准考证截图。"
        android:maxLines="3"
        android:includeFontPadding="false"
        android:lineSpacingExtra="3dp"/>
    <View
        android:id="@+id/view_line"
        android:background="#eaeaea"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>
</LinearLayout>
