<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:id="@+id/tv_jia"
                android:background="@color/gray_bg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="+"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <RelativeLayout
                android:gravity="center"
                android:id="@+id/tv_orders6"
                android:background="@color/gray_bg"
                android:paddingTop="0.5dp"
                android:paddingBottom="0.5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/tv_jia"
                android:layout_alignTop="@+id/tv_jia"
                android:layout_centerVertical="true">
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_num"
                    android:background="@color/white"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="1"/>
                <TextView
                    android:textColor="@color/app_theme_red"
                    android:gravity="center"
                    android:id="@+id/tv_donghua"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="+1"/>
            </RelativeLayout>
            <TextView
                android:gravity="center"
                android:id="@+id/tv_jian"
                android:background="@color/gray_bg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="-"
                android:layout_toLeftOf="@+id/tv_orders6"
                android:layout_alignTop="@+id/tv_jia"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_orders4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:layout_marginLeft="18dp"
                android:text="购买数量"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llay_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/tv_order"
            android:background="#e89b25"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="加入购物车"
            android:layout_weight="1"/>
        <TextView
            android:textColor="?attr/app_title_color"
            android:gravity="center"
            android:id="@+id/tv_orders"
            android:background="?attr/app_theme"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="立即购买"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
