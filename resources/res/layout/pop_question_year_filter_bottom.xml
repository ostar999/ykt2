<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rl_mian"
    android:background="@drawable/bg_answer_sheet_custom_pop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/question_sheet_custom_pop_title_color"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="自定义"/>
        <ImageView
            android:id="@+id/iv_year_close"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="?attr/ic_close_custom_year_pop"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_line"
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_top"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/view_line"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@+id/tv_year_ok"
        android:background="@drawable/ffdedede_6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:text="选择开始年份"
        android:layout_below="@+id/recyclerView"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_year_hint"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="64dp">
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/answer_sheet_pop_hint_color"
            android:gravity="center"
            android:background="@drawable/ff4c4c4c_4"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="请选择截止年份\10如仅需一年题目，请再次点击此年份"
            android:layout_weight="1"
            android:lineSpacingExtra="5dp"/>
        <com.psychiatrygarden.widget.TriangleView
            android:id="@+id/triangle_pop"
            android:layout_width="14dp"
            android:layout_height="8dp"
            app:ykb_triangleColor="?attr/answer_sheet_tag_bg"
            app:ykb_triangle_direction="bottom"/>
    </LinearLayout>
</RelativeLayout>
