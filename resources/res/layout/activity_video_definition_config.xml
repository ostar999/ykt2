<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/first_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ly_play_config"
        android:background="?attr/pop_frame_backgroup_color"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:gravity="center_vertical"
            android:text="播放清晰度"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_10"
            style="@style/text_normal_font_14_style"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_play_config"
            android:background="?attr/pop_frame_backgroup_color"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_4"
            android:layout_toStartOf="@+id/img_play"
            style="@style/text_normal_font_12_style"/>
        <ImageView
            android:id="@+id/img_play"
            style="@style/set_right_arrow_style"/>
    </RelativeLayout>
    <View
        android:background="?attr/line_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16"/>
    <RelativeLayout
        android:id="@+id/ly_down_config"
        android:background="?attr/pop_frame_backgroup_color"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:gravity="center_vertical"
            android:text="下载清晰度"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_10"
            style="@style/text_normal_font_14_style"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_down_config"
            android:background="?attr/pop_frame_backgroup_color"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_4"
            android:layout_toStartOf="@+id/img_down"
            style="@style/text_normal_font_12_style"/>
        <ImageView
            android:id="@+id/img_down"
            style="@style/set_right_arrow_style"/>
    </RelativeLayout>
</LinearLayout>
