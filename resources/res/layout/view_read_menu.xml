<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/vw_menu_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/ll_bottom_menu"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/title_bar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/icon_black_back"
            android:contentDescription="@null"
            android:layout_marginStart="16dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.ruffian.library.widget.RTextView
                android:textSize="@dimen/sp_9"
                android:gravity="center"
                android:id="@+id/tv_addlibrary"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_36"
                android:layout_marginRight="@dimen/dp_11"
                android:text="加入书架"
                app:icon_height_top="@dimen/dp_20"
                app:icon_normal_top="@drawable/icon_addlibrary_no"
                app:icon_width_top="@dimen/dp_20"
                app:text_color_normal="@color/color_303030"/>
            <com.ruffian.library.widget.RTextView
                android:textSize="@dimen/sp_9"
                android:textColor="@color/color_303030"
                android:gravity="center"
                android:id="@+id/tv_download"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_36"
                android:layout_marginRight="@dimen/dp_11"
                android:text="下载全书"
                app:icon_height_top="@dimen/dp_20"
                app:icon_normal_top="@drawable/icon_download_book"
                app:icon_width_top="@dimen/dp_20"/>
            <com.ruffian.library.widget.RCheckBox
                android:textSize="@dimen/sp_9"
                android:gravity="center"
                android:id="@+id/cb_review"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_36"
                android:layout_marginRight="@dimen/dp_11"
                android:button="@null"
                android:text="隐藏段评"
                android:textAlignment="center"
                app:icon_height_top="@dimen/dp_20"
                app:icon_normal_top="@drawable/icon_hide_review"
                app:icon_width_top="@dimen/dp_20"
                app:text_color_checked="@color/color_303030"
                app:text_color_normal="@color/color_909090"/>
            <com.ruffian.library.widget.RCheckBox
                android:textSize="@dimen/sp_9"
                android:gravity="center"
                android:id="@+id/cb_note"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_36"
                android:layout_marginRight="@dimen/dp_11"
                android:button="@null"
                android:text="隐藏笔记"
                android:textAlignment="center"
                app:icon_checked_top="@drawable/icon_show_note"
                app:icon_height_top="@dimen/dp_20"
                app:icon_normal_top="@drawable/icon_hide_note"
                app:icon_width_top="@dimen/dp_20"
                app:text_color_checked="@color/color_303030"
                app:text_color_normal="@color/color_909090"/>
            <ImageView
                android:id="@+id/btn_shre"
                android:padding="@dimen/dp_5"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/ic_ebook_share_more"
                android:layout_marginEnd="@dimen/dp_6"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tvShowProgress"
        android:background="@drawable/shape_toast"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:minWidth="150dp"
        android:minHeight="60dp"
        android:text="10% \10 sssssss"
        android:maxLines="2"
        app:layout_constraintBottom_toTopOf="@+id/ll_bottom_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_bottom_menu"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_24">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/sp_18"
                            android:textColor="@color/color_303030"
                            android:gravity="center"
                            android:id="@+id/tv_read_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="@dimen/dp_2"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/line_v"
                    android:background="@color/color_eeeeee"
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_54"
                    android:layout_marginRight="@dimen/dp_54"
                    android:layout_marginHorizontal="@dimen/dp_54"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/color_303030"
                        android:gravity="center"
                        android:id="@+id/tv_read_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/dp_2"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_24"
                android:importantForAccessibility="no"
                android:layout_marginHorizontal="@dimen/dp_24">
                <com.ruffian.library.widget.RTextView
                    android:enabled="false"
                    android:textSize="12sp"
                    android:id="@+id/tv_preview"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上一章"
                    app:text_color_normal="@color/color_312d2d"
                    app:text_color_unable="@color/color_909090"/>
                <com.ykb.ebook.weight.slider.NiftySlider
                    android:value="3"
                    android:id="@+id/seek_read_page"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:stepSize="1"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="true"
                    android:valueFrom="1"
                    android:valueTo="3"
                    android:layout_marginHorizontal="@dimen/dp_12"
                    app:enableDrawHalo="false"
                    app:thumbColor="@color/white"
                    app:thumbRadius="@dimen/dp_16"
                    app:thumbShadowColor="@color/color_0a000000"
                    app:thumbText=""
                    app:thumbTextColor="@color/color_303030"
                    app:thumbTextSize="@dimen/sp_11"
                    app:thumbWithinTrackBounds="true"
                    app:trackColor="@color/color_eeeeee"
                    app:trackColorInactive="@color/color_f7f8fa"
                    app:trackHeight="@dimen/dp_32"/>
                <com.ruffian.library.widget.RTextView
                    android:enabled="false"
                    android:textSize="12sp"
                    android:id="@+id/tv_next"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一章"
                    app:text_color_normal="@color/color_312d2d"
                    app:text_color_unable="@color/color_909090"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ly_setting"
            android:paddingLeft="@dimen/dp_24"
            android:paddingTop="@dimen/dp_24"
            android:paddingRight="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_24">
            <com.ykb.ebook.weight.slider.NiftySlider
                android:value="20"
                android:id="@+id/seek_font_size"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:stepSize="1"
                android:hapticFeedbackEnabled="true"
                android:valueFrom="16"
                android:valueTo="27"
                app:enableDrawHalo="false"
                app:thumbColor="@color/white"
                app:thumbRadius="@dimen/dp_16"
                app:thumbShadowColor="@color/color_0a000000"
                app:thumbText="20"
                app:thumbTextBold="true"
                app:thumbTextColor="@color/color_303030"
                app:thumbTextSize="@dimen/sp_14"
                app:thumbWithinTrackBounds="true"
                app:trackColor="@color/color_eeeeee"
                app:trackColorInactive="@color/color_f7f8fa"
                app:trackHeight="@dimen/dp_32"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_15">
                <com.ykb.ebook.weight.slider.NiftySlider
                    android:value="24"
                    android:id="@+id/seek_page_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stepSize="1"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="true"
                    android:valueFrom="16"
                    android:valueTo="27"
                    android:layout_marginEnd="@dimen/dp_8"
                    app:enableDrawHalo="false"
                    app:thumbColor="@color/white"
                    app:thumbRadius="@dimen/dp_16"
                    app:thumbShadowColor="@color/color_0a000000"
                    app:thumbText="边距"
                    app:thumbTextColor="@color/color_303030"
                    app:thumbTextSize="@dimen/sp_11"
                    app:thumbWithinTrackBounds="true"
                    app:trackColor="@color/color_eeeeee"
                    app:trackColorInactive="@color/color_f7f8fa"
                    app:trackHeight="@dimen/dp_32"/>
                <com.ykb.ebook.weight.slider.NiftySlider
                    android:value="24"
                    android:id="@+id/seek_page_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stepSize="1"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="true"
                    android:valueFrom="16"
                    android:valueTo="27"
                    app:enableDrawHalo="false"
                    app:thumbColor="@color/white"
                    app:thumbRadius="@dimen/dp_16"
                    app:thumbShadowColor="@color/color_f7f8fa"
                    app:thumbText="行距"
                    app:thumbTextColor="@color/color_303030"
                    app:thumbTextSize="@dimen/sp_11"
                    app:thumbWithinTrackBounds="true"
                    app:trackColor="@color/color_eeeeee"
                    app:trackColorInactive="@color/color_f7f8fa"
                    app:trackHeight="@dimen/dp_32"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_16">
                <TextView
                    android:textSize="12sp"
                    android:textColor="#312d2d"
                    android:id="@+id/tv_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="背景"
                    android:layout_marginEnd="@dimen/dp_16"/>
                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.ruffian.library.widget.RRadioButton
                        android:id="@+id/bg_white"
                        android:background="@android:color/transparent"
                        android:layout_width="@dimen/dp_56"
                        android:layout_height="@dimen/dp_32"
                        android:button="@null"
                        android:layout_marginEnd="@dimen/dp_24"
                        app:background_normal="@color/white"
                        app:border_color_checked="@color/color_dd594a"
                        app:border_color_normal="@android:color/transparent"
                        app:border_width_normal="@dimen/dp_1"
                        app:corner_radius="@dimen/dp_16"/>
                    <com.ruffian.library.widget.RRadioButton
                        android:id="@+id/bg_yellow"
                        android:background="@android:color/transparent"
                        android:layout_width="@dimen/dp_56"
                        android:layout_height="@dimen/dp_32"
                        android:button="@null"
                        android:layout_marginEnd="@dimen/dp_24"
                        app:background_normal="@color/color_fae3a8"
                        app:border_color_checked="@color/color_dd594a"
                        app:border_color_normal="@android:color/transparent"
                        app:border_width_normal="@dimen/dp_1"
                        app:corner_radius="@dimen/dp_16"/>
                    <com.ruffian.library.widget.RRadioButton
                        android:id="@+id/bg_blue"
                        android:background="@android:color/transparent"
                        android:layout_width="@dimen/dp_56"
                        android:layout_height="@dimen/dp_32"
                        android:button="@null"
                        android:layout_marginEnd="@dimen/dp_24"
                        app:background_normal="@color/color_7380a9"
                        app:border_color_checked="@color/color_dd594a"
                        app:border_color_normal="@android:color/transparent"
                        app:border_width_normal="@dimen/dp_1"
                        app:corner_radius="@dimen/dp_16"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_24">
                <com.ruffian.library.widget.RTextView
                    android:textSize="12sp"
                    android:textColor="@color/color_303030"
                    android:gravity="center"
                    android:id="@+id/tv_page_set"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_32"
                    android:text="翻页设置"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dp_17"
                    app:background_normal="@color/color_f7f8fa"
                    app:corner_radius="@dimen/dp_16"
                    app:icon_height_right="@dimen/dp_16"
                    app:icon_normal_right="@drawable/ic_set_right"
                    app:icon_width_right="@dimen/dp_16"
                    app:icon_with_text="true"/>
                <com.ruffian.library.widget.RTextView
                    android:textSize="12sp"
                    android:textColor="@color/color_303030"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_more_set"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_32"
                    android:text="更多设置"
                    android:layout_weight="1"
                    app:background_normal="@color/color_f7f8fa"
                    app:corner_radius="@dimen/dp_16"
                    app:icon_height_right="16dp"
                    app:icon_normal_right="@drawable/ic_set_right"
                    app:icon_width_right="16dp"
                    app:icon_with_text="true"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ly_page_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingLeft="@dimen/dp_24"
                android:paddingRight="@dimen/dp_24"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:paddingHorizontal="@dimen/dp_24">
                <ImageView
                    android:id="@+id/close_page_method"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/ic_down_arrow"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="@color/color_303030"
                    android:id="@+id/tv_page_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="翻页设置"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <View
                android:id="@+id/viewPageLine"
                android:background="@color/color_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RadioGroup
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ruffian.library.widget.RRadioButton
                    android:textSize="@dimen/sp_14"
                    android:id="@+id/cb_page_fz"
                    android:background="@android:color/transparent"
                    android:paddingLeft="@dimen/dp_24"
                    android:paddingRight="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="仿真翻页"
                    android:paddingHorizontal="@dimen/dp_24"
                    app:icon_checked_right="@drawable/ic_page_flipping_checked"
                    app:icon_height_right="@dimen/dp_16"
                    app:icon_normal_right="@null"
                    app:icon_width_right="@dimen/dp_16"
                    app:text_color_checked="@color/color_dd594a"
                    app:text_color_normal="@color/color_312d2d"/>
                <com.ruffian.library.widget.RRadioButton
                    android:textSize="@dimen/sp_14"
                    android:id="@+id/cb_page_zy"
                    android:background="@android:color/transparent"
                    android:paddingLeft="@dimen/dp_24"
                    android:paddingRight="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="左右滑动"
                    android:paddingHorizontal="@dimen/dp_24"
                    app:icon_height_right="@dimen/dp_16"
                    app:icon_normal_right="@null"
                    app:icon_width_right="@dimen/dp_16"
                    app:text_color_checked="@color/color_dd594a"
                    app:text_color_normal="@color/color_312d2d"/>
                <com.ruffian.library.widget.RRadioButton
                    android:textSize="@dimen/sp_14"
                    android:id="@+id/cb_page_sx"
                    android:background="@android:color/transparent"
                    android:paddingLeft="@dimen/dp_24"
                    android:paddingRight="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="上下翻页"
                    android:paddingHorizontal="@dimen/dp_24"
                    app:icon_checked_right="@drawable/ic_page_flipping_checked"
                    app:icon_height_right="@dimen/dp_16"
                    app:icon_normal_right="@null"
                    app:icon_width_right="@dimen/dp_16"
                    app:text_color_checked="@color/color_dd594a"
                    app:text_color_normal="@color/color_312d2d"/>
            </RadioGroup>
        </LinearLayout>
        <View
            android:id="@+id/line_view"
            android:background="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:baselineAligned="false">
            <FrameLayout
                android:id="@+id/fl_book_catalog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/img_book_catalog"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/icon_book_catalog"
                    android:contentDescription="@null"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/fl_book_mark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/img_book_mark"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/icon_bookmark"
                    android:contentDescription="@null"/>
            </FrameLayout>
            <RelativeLayout
                android:id="@+id/fl_book_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/img_book_comment"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/icon_book_comment"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null"/>
                <com.ruffian.library.widget.RTextView
                    android:textSize="8sp"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_comment_num"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="2.5万+"
                    android:lines="1"
                    android:layout_marginStart="12dp"
                    android:layout_alignStart="@+id/img_book_comment"
                    android:paddingHorizontal="@dimen/dp_5"
                    android:paddingVertical="@dimen/dp_2"
                    app:background_normal="#fd4018"
                    app:corner_radius="100dp"/>
            </RelativeLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.ruffian.library.widget.RCheckBox
                    android:layout_gravity="center"
                    android:id="@+id/cb_dark_mode"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:button="@null"
                    android:contentDescription="@null"
                    app:icon_height="@dimen/dp_26"
                    app:icon_src_checked="@drawable/icon_book_dark_mode_night"
                    app:icon_src_normal="@drawable/icon_book_dark_mode"
                    app:icon_width="@dimen/dp_26"
                    app:icon_with_text="true"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/fl_setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/img_book_setting"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@drawable/icon_book_setting"
                    android:contentDescription="@null"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
