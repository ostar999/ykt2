<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/dp_16">
    <TextView
        android:textColor="?attr/first_txt_color"
        android:gravity="center"
        android:id="@+id/tv_all2"
        android:background="?attr/new_bg_two_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:text="优惠券+红包 共2个"/>
    <TextView
        android:textColor="?attr/first_txt_color"
        android:gravity="center"
        android:id="@+id/tv_all"
        android:background="?attr/new_bg_two_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:text="优惠券+红包 多个"/>
    <TextView
        android:textColor="?attr/first_txt_color"
        android:gravity="center"
        android:id="@+id/tv_coupon_single"
        android:background="?attr/new_bg_two_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:text="单个优惠券"/>
    <TextView
        android:textColor="?attr/first_txt_color"
        android:gravity="center"
        android:id="@+id/tv_coupon_multi"
        android:background="?attr/new_bg_two_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:text="多个优惠券"/>
    <TextView
        android:textColor="?attr/first_txt_color"
        android:gravity="center"
        android:id="@+id/tv_single_red_packet"
        android:background="?attr/new_bg_two_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:text="单个红包"/>
    <TextView
        android:textColor="?attr/first_txt_color"
        android:gravity="center"
        android:id="@+id/tv_multi_red_packet"
        android:background="?attr/new_bg_two_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:text="多个红包"/>
</LinearLayout>
