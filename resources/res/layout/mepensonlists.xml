<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:background="@drawable/rangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <com.psychiatrygarden.widget.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_ask_headimage"
            android:background="@drawable/personal_headimg_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            app:border_color="@color/white"
            app:border_width="2dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/lls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_ask_headimage"
            android:layout_alignTop="@+id/iv_ask_headimage"
            android:layout_alignBottom="@+id/iv_ask_headimage">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/app_theme_red"
                android:id="@+id/tv_answer_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="232"/>
            <TextView
                android:textColor="@color/gray_font"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:id="@+id/iv_ask_arrow"
                android:paddingTop="8dp"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/askbar_down_icon"
                android:contentDescription="@null"/>
        </LinearLayout>
        <View
            android:id="@+id/view"
            android:background="@drawable/dash_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/iv_ask_headimage"
            android:layerType="software"/>
        <RelativeLayout
            android:id="@+id/rr"
            android:background="@color/white"
            android:paddingLeft="@dimen/content_item_padding"
            android:paddingRight="@dimen/content_item_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_ask_headimage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:id="@+id/rl_circle_topic_detail_reply"
                android:background="@drawable/bg_circle_topic_reply"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp">
                <TextView
                    android:textSize="@dimen/content_text_size"
                    android:textColor="@color/color_landlord"
                    android:id="@+id/tv_ask_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"/>
                <TextView
                    android:textSize="@dimen/content_text_size"
                    android:textColor="@color/color_black"
                    android:id="@+id/tv_ask_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_item_padding_small"
                    android:text="123 android:text=123"
                    android:layout_below="@+id/tv_ask_nickname"
                    android:lineSpacingMultiplier="1.2"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/content_text_size"
                android:textColor="@color/color_black"
                android:id="@+id/tv_answer_content"
                android:paddingLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="123243243"
                android:layout_below="@+id/rl_circle_topic_detail_reply"
                android:lineSpacingMultiplier="1.2"/>
            <RelativeLayout
                android:id="@+id/rel_yuyin"
                android:background="@drawable/line_yuan"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:layout_below="@+id/rl_circle_topic_detail_reply"
                android:layout_alignTop="@+id/tv_answer_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/bofang"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/dayibofang"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/yigui"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:src="@drawable/yingui2"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/share_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="分享解锁"
                    android:layout_toRightOf="@+id/bofang"/>
                <TextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/txt_time"
                    android:paddingRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2:10"
                    android:layout_toRightOf="@+id/yigui"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                android:textColor="@color/color_landlord"
                android:id="@+id/tv_wenzi"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="展开评论"
                android:layout_below="@+id/tv_answer_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/view">
            <com.psychiatrygarden.widget.CircleImageView
                android:id="@+id/iv_answer_headimage"
                android:background="@drawable/personal_headimg_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                app:border_color="@color/white"
                app:border_width="2dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_answer_headimage">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/gray_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/gray_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:id="@+id/iv_answer_arrow"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/askbar_down_icon"
                    android:contentDescription="@null"/>
            </LinearLayout>
            <TextView
                android:textColor="@color/gray_font"
                android:gravity="center"
                android:id="@+id/textV"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lls2"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/gray_font"
            android:gravity="left"
            android:id="@+id/tv_time"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="2014-12-12"
            android:layout_below="@+id/rr"/>
        <LinearLayout
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_time"
            android:layout_alignTop="@+id/tv_time"
            android:layout_alignRight="@+id/lls"
            android:layout_alignBottom="@+id/tv_time">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/gray_font"
                android:gravity="center_vertical"
                android:id="@+id/tv_thread"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:drawableLeft="@drawable/askbar_pinglunicon"
                android:drawablePadding="5dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/gray_font"
                    android:gravity="center"
                    android:id="@+id/tv_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/askbar_no_dianzan"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/app_theme_red"
                    android:id="@+id/commentList_item_tv_praisenum"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/gray_font"
                android:gravity="center"
                android:id="@+id/tv_share"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/askbar_share_icon"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
