<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="?attr/jingyan_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <com.psychiatrygarden.widget.AlphaImageView
            android:id="@+id/iv_back"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="?attr/jingyanback"
            android:layout_centerVertical="true"
            android:paddingStart="17dp"
            android:paddingEnd="22dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写评论"
            android:layout_centerInParent="true"
            android:transitionName="title"/>
        <TextView
            android:textColor="?attr/question_color"
            android:gravity="center"
            android:id="@+id/pushtxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发表"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_alignParentEnd="true"
            android:transitionName="pushtxt"/>
    </RelativeLayout>
    <EditText
        android:gravity="top"
        android:id="@+id/commentContent"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"/>
    <ImageView
        android:id="@+id/imagpush"
        android:padding="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
</LinearLayout>
