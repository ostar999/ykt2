<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:background="?attr/bg_backgroud"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:background="?attr/bg_backgroud"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:scrollbars="none"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <WebView
                    android:id="@+id/web_title_hint"
                    android:background="?attr/bg_backgroud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <WebView
                    android:id="@+id/web_title"
                    android:background="?attr/bg_backgroud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <Button
                    android:textSize="12sp"
                    android:textColor="?attr/comment_color"
                    android:id="@+id/btv_kuangbei_comment"
                    android:background="?attr/question_comment_flag_icon_two"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:minWidth="50dp"
                    android:text="？评论"
                    android:singleLine="true"
                    android:layout_alignParentRight="true"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/questiondetails_layout_diff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/btv_kuangbei_comment"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                android:textColor="?attr/question_color"
                android:id="@+id/tongji"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:lineSpacingMultiplier="1.3"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/question_color"
                android:id="@+id/tv_kuangbei_dingwei"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="定位:"
                android:lineSpacingMultiplier="1.3"
                android:textIsSelectable="true"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/llay_kuangbei_zhenti"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/question_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考频： "
                    android:lineSpacingMultiplier="1.3"
                    android:textIsSelectable="true"/>
                <com.psychiatrygarden.widget.tag.TagFlowLayout
                    android:id="@+id/id_flowlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    zhy:max_select="1"/>
            </LinearLayout>
            <Button
                android:textSize="14sp"
                android:textColor="?attr/question_color"
                android:gravity="center"
                android:background="?attr/tijiao"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="查看答案"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/questiondetails_btn_pushAnswer"
        android:background="#f3f3f3"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:gravity="center_vertical"
            android:background="#f3f3f3"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="查看答案"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
