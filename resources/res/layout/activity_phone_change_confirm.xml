<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/secondary_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="7dp"
        android:text="更换绑定的手机号之后可以用新手机号及当前密码登录"
        android:maxLines="1"
        android:autoSizeTextType="uniform"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?attr/pop_frame_backgroup_color"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:text="手机号"/>
        <com.psychiatrygarden.widget.ClearEditText
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:textColorHint="?attr/write_comment_hint"
            android:id="@+id/ed_phone"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="请输入新的手机号"
            android:maxLines="1"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?attr/pop_frame_backgroup_color"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:text="验证码"/>
        <com.psychiatrygarden.widget.ClearEditText
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:textColorHint="?attr/write_comment_hint"
            android:id="@+id/ed_verification_code"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="请输入短信验证码"
            android:maxLines="1"
            android:layout_weight="1"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/tv_send_verification_code"
            android:background="@drawable/ffe25d49_20"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:minWidth="84dp"
            android:text="获取验证码"/>
    </LinearLayout>
    <View
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@+id/tv_confirm"
        android:background="@drawable/fff1cac5_20"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:text="确定"/>
</LinearLayout>
