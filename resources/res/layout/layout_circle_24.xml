<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_left"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:src="?attr/ic_forum_hot_circle_left_bg"
        android:layout_alignTop="@+id/ly_middel"
        android:layout_alignBottom="@+id/ly_middel"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_middel"
        android:background="?attr/ic_forum_hot_circle_middle_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/img_right"
        android:layout_toEndOf="@+id/img_left">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:src="?attr/circle_24hot"
            android:adjustViewBounds="true"/>
        <RelativeLayout
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv24Circles"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"/>
            <TextView
                android:layout_gravity="center"
                android:background="?attr/line"
                android:layout_width="0.6dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_alignTop="@+id/rv24Circles"
                android:layout_alignBottom="@+id/rv24Circles"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="16dp"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_right"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:src="?attr/ic_forum_hot_circle_left_bg"
        android:layout_alignTop="@+id/ly_middel"
        android:layout_alignBottom="@+id/ly_middel"
        android:rotation="180"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
