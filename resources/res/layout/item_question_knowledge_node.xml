<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl"
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/leftView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_exp_col"
                android:visibility="visible"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="?attr/ic_question_knowledge_point_collapse"/>
            <View
                android:layout_gravity="center"
                android:id="@+id/view_last"
                android:background="@drawable/icon_knowledge_last_level_circle_point"
                android:visibility="gone"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </FrameLayout>
        <TextView
            android:textColor="?attr/first_txt_color"
            android:gravity="start|center_vertical"
            android:id="@+id/tv_title"
            android:background="@drawable/shape_bg_one_round8"
            android:padding="@dimen/dp_12"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="@+id/leftView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/leftView"
            app:layout_constraintTop_toTopOf="@+id/leftView"/>
        <com.psychiatrygarden.widget.LShapeDashLine
            android:id="@+id/lLine"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_8"
            app:layout_constraintStart_toStartOf="@+id/leftView"
            app:layout_constraintTop_toBottomOf="@+id/leftView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
