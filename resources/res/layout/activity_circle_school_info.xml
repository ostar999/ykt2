<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_left_backdetail"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>
        <ImageView
            android:id="@+id/iv_circle_school_search"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/icon_circle_school_search"
            android:layout_alignParentRight="true"
            android:paddingStart="25dp"
            android:paddingEnd="5dp"
            android:layout_marginEnd="48dp"/>
        <ImageView
            android:id="@+id/iv_circle_school_menu"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/icon_circle_school_menu"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="11">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <com.psychiatrygarden.widget.CircleImageView
                    android:id="@+id/iv_circle_school"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentEnd="true"/>
                <android.support.v7.widget.AppCompatTextView
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#ff191919"
                    android:ellipsize="end"
                    android:id="@+id/tv_school_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_toStartOf="@+id/iv_circle_school"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/item_school_color"
                    android:ellipsize="end"
                    android:id="@+id/tv_school_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:maxLines="2"
                    android:layout_below="@+id/tv_school_name"
                    android:lineSpacingExtra="1.2dp"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_marginEnd="20dp"
                    android:layout_toStartOf="@+id/iv_circle_school"/>
                <com.psychiatrygarden.widget.StackLayout
                    android:id="@+id/sl_school_flag"
                    android:visibility="gone"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_school_name"
                    app:itemMargin="10dp"/>
            </RelativeLayout>
            <com.psychiatrygarden.widget.StackLayout
                android:id="@+id/sl_school_flag_join"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/tv_school_name"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/iv_circle_school"
                app:itemMargin="10dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="#ff404040"
                        android:gravity="center"
                        android:id="@+id/tv_post_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ff868686"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="帖子"
                        android:layout_below="@+id/tv_post_num"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="#ff404040"
                        android:id="@+id/tv_discuss_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ff868686"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="讨论"
                        android:layout_below="@+id/tv_discuss_num"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="#ff404040"
                        android:gravity="center"
                        android:id="@+id/tv_member_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ff868686"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="成员"
                        android:layout_below="@+id/tv_member_num"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:background="#fff6f6f6"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="25dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/line_maderoate"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <TextView
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#ff191919"
                    android:id="@+id/moderatonum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="版主"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/banzhuline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"/>
                </HorizontalScrollView>
            </LinearLayout>
            <TextView
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#ff191919"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="加入须知"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="#ff191919"
                android:id="@+id/jointxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="1.5dp"
                android:lineSpacingMultiplier="1.5"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:textSize="17sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_join_school"
        android:background="@drawable/ffe15949_4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="申请加入"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
</LinearLayout>
