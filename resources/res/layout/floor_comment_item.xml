<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/f_view"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/show_sub_floor_content"
        android:paddingTop="10dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/myexptervew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_below="@+id/linetitlschool"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_alignStart="@+id/linetitlschool"
            app:maxExpandLines="5"
            layout="@layout/adapter_item_ebook"/>
        <LinearLayout
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myexptervew"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="@dimen/sp_12"
                android:id="@+id/tv_support"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text_color_normal="@color/color_bfbfbf"
                app:text_color_selected="@color/color_81cb30"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:id="@+id/tv_oppose"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginHorizontal="@dimen/dp_24"
                app:text_color_normal="@color/color_bfbfbf"
                app:text_color_selected="@color/color_dd594a"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:id="@+id/tv_reply"
                android:background="@drawable/shape_reply_selected_bg"
                android:paddingLeft="@dimen/dp_6"
                android:paddingTop="1dp"
                android:paddingRight="@dimen/dp_6"
                android:paddingBottom="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复"
                android:paddingHorizontal="@dimen/dp_6"
                android:paddingVertical="1dp"/>
        </LinearLayout>
        <TextView
            android:textSize="9sp"
            android:textColor="@color/color_7B7E83"
            android:gravity="center"
            android:id="@+id/tit_lou"
            android:background="@color/color_eeeeee"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:layout_alignParentTop="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#1b79d7"
            android:gravity="top"
            android:id="@+id/tit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tit_lou"/>
        <ImageView
            android:gravity="top"
            android:id="@+id/isvipimg"
            android:visibility="gone"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/vipimg"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tit_name"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/linetitlschool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tit_name"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/tit_name">
            <ImageView
                android:id="@+id/isverauth"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:src="@mipmap/auth2img"
                android:scaleType="fitCenter"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/color_909499"
                android:id="@+id/tit_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/lin_zan"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="10sp"
                android:textColor="#555555"
                android:id="@+id/commentList_item_tv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="100"/>
            <ImageView
                android:id="@+id/imageView_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/hide_sub_floor_content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:textColor="@color/color_C2C6CB"
            android:gravity="center"
            android:id="@+id/hide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="展开隐藏楼层"
            android:drawablePadding="10dp"
            android:layout_centerInParent="true"/>
        <ProgressBar
            android:id="@+id/hide_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/hide_text"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</FrameLayout>
