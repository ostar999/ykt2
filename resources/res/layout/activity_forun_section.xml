<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="?attr/jingyan_bar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:gravity="center"
            android:id="@+id/icon_left2"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:src="?attr/jingyanback"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/forum_change_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换版块"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:background="?attr/gray_line_126"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <com.psychiatrygarden.widget.ClearEditText
        android:textSize="14sp"
        android:textColor="?attr/question_color"
        android:textColorHint="?attr/section_font_default"
        android:id="@+id/editTxt"
        android:background="?attr/fff8f8f8_18"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:hint="用关键词搜索试试"
        android:singleLine="true"
        android:drawablePadding="10dp"
        android:imeOptions="actionSearch"
        android:drawableStart="?attr/icon_search_circle"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle"
            android:background="?attr/section_bg"
            android:visibility="gone"
            android:layout_width="92dp"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/sec_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
