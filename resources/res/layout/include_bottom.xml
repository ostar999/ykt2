<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_anonymous"
        android:background="?attr/new_bg_one_color"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:paddingHorizontal="@dimen/dp_16">
        <ImageView
            android:id="@+id/iv_anonymous_push"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="?attr/ic_circle_anonymous_single_not_select"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:id="@+id/tv_anonymous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匿名发帖"
            android:layout_toRightOf="@+id/iv_anonymous_push"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dp_8"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/third_txt_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（保存后无法修改）"
            android:layout_toRightOf="@+id/tv_anonymous"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:background="?attr/new_gray_line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?attr/new_bg_one_color"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="16dp">
        <ImageView
            android:id="@+id/circle_biaoqing"
            android:visibility="gone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/circle_biaoqing"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/circle_book"
            android:background="@drawable/shape_block_corners_8"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="?attr/circle_book"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推书"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/push_circle"
            android:background="@drawable/shape_block_corners_8"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="?attr/ic_push_circle"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推贴"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/circle_toupai"
            android:background="@drawable/shape_block_corners_8"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="?attr/circle_toupai"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投票"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_admin_pic"
                android:visibility="gone"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="?attr/circle_admin_paizhao"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_toStartOf="@+id/circle_paizhao"/>
            <ImageView
                android:id="@+id/circle_paizhao"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="?attr/circle_paizhao"
                android:layout_toStartOf="@+id/circle_lianjie"/>
            <ImageView
                android:id="@+id/circle_lianjie"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="?attr/circle_lianjie"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:textSize="15sp"
                android:textColor="?attr/secondary_text_color"
                android:id="@+id/topicLabel"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="话题"
                android:drawableLeft="?attr/topicactionimg2"
                android:drawableRight="?attr/topicimg"
                android:drawablePadding="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
