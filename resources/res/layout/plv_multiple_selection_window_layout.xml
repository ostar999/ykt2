<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/plv_multiple_selection_mask_view"
        android:background="#cc000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/plv_multiple_selection_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/plv_multiple_selection_separator_line"
        android:background="#1a1b1f"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <TextView
        android:textSize="18sp"
        android:textColor="#adadc0"
        android:gravity="center"
        android:id="@+id/plv_multiple_selection_cancel_tv"
        android:background="#2b2c35"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="取消"/>
</LinearLayout>
