<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_icon_note_idea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_note_idea"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/iv_icon_note_idea">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="?attr/question_note_title_text_color"
            android:id="@+id/tv_note_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingExtra="5dp"
            android:textIsSelectable="true"/>
        <com.psychiatrygarden.gradview.NineGridTestLayout
            android:id="@+id/ningrids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:transitionName="sharedView"
            app:sapcing="3dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/question_note_time_text_color"
                android:id="@+id/tv_note_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_note_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/question_note_item_pop_icon"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
