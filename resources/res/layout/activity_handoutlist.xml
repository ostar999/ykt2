<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@color/app_theme_red"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <com.psychiatrygarden.widget.AlphaImageView
                android:background="@drawable/nightmode"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经验"
                android:layout_centerInParent="true"/>
            <com.psychiatrygarden.widget.AlphaTextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="分享"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/line_ids"
            android:background="?attr/top_tab_bg_color"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <RelativeLayout
                android:id="@+id/rl_column"
                android:background="?attr/top_tab_bg_color"
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1">
                <cn.webdemo.com.supporfragment.tablayout.MagicIndicator
                    android:id="@+id/circlehs"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <ImageView
                    android:id="@+id/shade_right"
                    android:visibility="visible"
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:src="?attr/column_showdow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/ll_more_columns"
                android:background="?attr/top_tab_bg_color"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/button_more_columns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="?attr/tikujia"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/category_line"
            android:background="?attr/gray_line_126"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/mViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_network_load_fail"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/network_load_fail"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/load_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/load_anim"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
