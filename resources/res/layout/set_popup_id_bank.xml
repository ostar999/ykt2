<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popCl"
        android:background="@drawable/set_id_bank_bg"
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_280"
        android:layout_marginTop="@dimen/dp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/codeCl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_76"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_12"
                android:src="@drawable/set_id_bank"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_575757"
                android:gravity="center"
                android:id="@+id/phoneTv"
                android:layout_width="@dimen/dp_64"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_44"
                android:text="@string/login_phone_num1"
                android:layout_marginStart="@dimen/dp_60"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_575757"
                android:gravity="center"
                android:id="@+id/nameTv"
                android:layout_width="@dimen/dp_64"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_26"
                android:text="@string/me_bank_name"
                android:layout_marginStart="@dimen/dp_60"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneTv"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_575757"
                android:gravity="center"
                android:id="@+id/idTv"
                android:layout_width="@dimen/dp_64"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_26"
                android:text="@string/me_bank_id"
                android:layout_marginStart="@dimen/dp_60"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameTv"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_575757"
                android:gravity="center"
                android:id="@+id/bankTv"
                android:layout_width="@dimen/dp_64"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_26"
                android:text="@string/me_bank_num"
                android:layout_marginStart="@dimen/dp_60"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idTv"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_575757"
                android:gravity="center"
                android:id="@+id/bankOpenTv"
                android:layout_width="@dimen/dp_64"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_26"
                android:text="@string/me_bank_open"
                android:layout_marginStart="@dimen/dp_60"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bankTv"/>
            <com.noober.background.view.BLTextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_575757"
                android:gravity="start|center_vertical"
                android:id="@+id/phoneInputTv"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_30"
                android:paddingHorizontal="@dimen/dp_6"
                app:bl_corners_radius="@dimen/dp_1"
                app:bl_solid_color="@color/c_d6d6d6"
                app:layout_constraintBottom_toBottomOf="@+id/phoneTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/phoneTv"
                app:layout_constraintTop_toTopOf="@+id/phoneTv"/>
            <com.noober.background.view.BLEditText
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_575757"
                android:gravity="start|center_vertical"
                android:id="@+id/nameEt"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:hint="@string/me_bank_tip0"
                android:maxLength="20"
                android:inputType="text"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_30"
                android:paddingHorizontal="@dimen/dp_6"
                app:bl_corners_radius="@dimen/dp_1"
                app:bl_solid_color="@color/c_d6d6d6"
                app:layout_constraintBottom_toBottomOf="@+id/nameTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nameTv"
                app:layout_constraintTop_toTopOf="@+id/nameTv"/>
            <com.noober.background.view.BLEditText
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_575757"
                android:gravity="start|center_vertical"
                android:id="@+id/idEt"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:hint="@string/me_bank_tip1"
                android:maxLength="18"
                android:inputType="text"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_30"
                android:paddingHorizontal="@dimen/dp_6"
                app:bl_corners_radius="@dimen/dp_1"
                app:bl_solid_color="@color/c_d6d6d6"
                app:layout_constraintBottom_toBottomOf="@+id/idTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/idTv"
                app:layout_constraintTop_toTopOf="@+id/idTv"/>
            <com.noober.background.view.BLEditText
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_575757"
                android:gravity="start|center_vertical"
                android:id="@+id/bankNumEt"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:hint="@string/me_bank_tip2"
                android:maxLength="20"
                android:inputType="numberSigned"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_30"
                android:paddingHorizontal="@dimen/dp_6"
                app:bl_corners_radius="@dimen/dp_1"
                app:bl_solid_color="@color/c_d6d6d6"
                app:layout_constraintBottom_toBottomOf="@+id/bankTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/bankTv"
                app:layout_constraintTop_toTopOf="@+id/bankTv"/>
            <com.noober.background.view.BLEditText
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_575757"
                android:gravity="start|center_vertical"
                android:id="@+id/bankOpenEt"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:hint="@string/me_bank_tip3"
                android:maxLength="20"
                android:inputType="text"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_30"
                android:paddingHorizontal="@dimen/dp_6"
                app:bl_corners_radius="@dimen/dp_1"
                app:bl_solid_color="@color/c_d6d6d6"
                app:layout_constraintBottom_toBottomOf="@+id/bankOpenTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/bankOpenTv"
                app:layout_constraintTop_toTopOf="@+id/bankOpenTv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/errorCl"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_86"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_26"
                android:src="@drawable/home_code_txt1"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c_575757"
                android:id="@+id/tipTv"
                android:paddingTop="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_code_tip1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/succesCl"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_86"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_26"
                android:src="@drawable/home_code_txt2"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_black"
                android:id="@+id/tipSuccessTv"
                android:paddingTop="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_code_tip2"
                app:layout_constraintBottom_toTopOf="@+id/goTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:gravity="center"
                android:id="@+id/goTv"
                android:background="@drawable/me_code_btn"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_38"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@string/home_code_look"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/closeImgv"
        android:visibility="invisible"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_1"
        android:src="@drawable/common_x5"
        android:paddingStart="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_black"
        android:gravity="center"
        android:id="@+id/goBtnTv"
        android:background="@drawable/me_code_btn"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/common_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popCl"/>
</androidx.constraintlayout.widget.ConstraintLayout>
