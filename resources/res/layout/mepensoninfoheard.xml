<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rimg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/iv_content_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/imgplacehodel_image"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <View
            android:background="#50000000"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/relativeLayout1"
        android:background="@drawable/rangle"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rimg">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/lls"
            android:paddingTop="1dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/iv_mycenter_icon">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/app_theme_red"
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxx"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/gray_light"
                android:gravity="center"
                android:id="@+id/tv_user_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:text="北京大学人民医院，2017级"
                android:lineSpacingMultiplier="1.2"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/gray_light"
                android:gravity="center"
                android:id="@+id/tv_user_intro1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:text="内分泌专业，专业型硕士"
                android:lineSpacingMultiplier="1.2"/>
        </LinearLayout>
        <TextView
            android:gravity="center"
            android:id="@+id/textView6"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图片"
            android:layout_below="@+id/lls"
            android:layout_centerHorizontal="true"/>
        <com.psychiatrygarden.widget.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_mycenter_icon"
            android:background="@drawable/personal_headimg_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:border_color="@color/white"
            app:border_width="2dp"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/lls"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:textSize="12sp"
                android:id="@+id/tv_attention_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="10关注"/>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#fff"
                android:id="@+id/tv_attention"
                android:background="@drawable/tiku_top_menu_bg"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                android:paddingRight="15dp"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="+ 关注"/>
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="#000"
            android:gravity="center"
            android:id="@+id/tv_content"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:layout_below="@+id/li"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
