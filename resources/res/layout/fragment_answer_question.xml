<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srlAccentColor="?attr/first_text_color">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="?attr/secondary_text_color"/>
        <RelativeLayout
            android:id="@+id/rl_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.psychiatrygarden.widget.CommentSectionListView
                android:id="@+id/pinnedSectionListView"
                android:scrollbars="none"
                android:fadingEdge="none"
                android:descendantFocusability="afterDescendants"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@color/transparent"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:overScrollMode="never"/>
            <RelativeLayout
                android:id="@+id/rl_topic_detail_bottom"
                android:background="?attr/bg_backgroud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <View
                    android:id="@+id/view_topic_detail_divider"
                    android:background="?attr/line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/lineselect2"
                android:background="@drawable/shape_hot_new_bg"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true">
                <CheckedTextView
                    android:textSize="@dimen/sp_11"
                    android:textColor="@drawable/text_new2_color"
                    android:gravity="center"
                    android:id="@+id/remen2"
                    android:background="@drawable/hot_select_bg"
                    android:paddingTop="2dp"
                    android:paddingBottom="3dp"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:text="最热"
                    android:textAlignment="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"/>
                <CheckedTextView
                    android:textSize="@dimen/sp_11"
                    android:textColor="@drawable/text_new2_color"
                    android:gravity="center"
                    android:id="@+id/zuixin2"
                    android:background="@drawable/latest_select_bg"
                    android:paddingTop="2dp"
                    android:paddingBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="最新"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"/>
            </LinearLayout>
        </RelativeLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="?attr/first_text_color"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <include layout="@layout/layout_answer_question_bottom_panel"/>
</LinearLayout>
