<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/secondary_backgroup_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view2"
        android:background="@color/gray_line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/llay_nickname"
        android:background="?attr/pop_frame_backgroup_color"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/first_text_color"
            android:id="@+id/tv_nickname_str"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="账号"
            android:layout_weight="1"
            android:layout_marginStart="8dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="right"
                android:id="@+id/tv_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/iv_arrow2"/>
            <ImageView
                android:id="@+id/iv_arrow2"
                android:background="@drawable/icon_indicator_right"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:layout_marginStart="5dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:background="@color/gray_line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/rl_modify_pwd"
        android:background="@color/white"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/first_text_color"
            android:id="@+id/tv_modify_pwd_str"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绑定邮箱"
            android:layout_marginStart="8dp"/>
        <ImageView
            android:id="@+id/iv_arrow9"
            android:background="@drawable/icon_indicator_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:background="@color/gray_line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/rl_pwd"
        android:background="@color/white"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/first_text_color"
            android:id="@+id/tv_pwd_str"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_marginStart="8dp"/>
        <ImageView
            android:id="@+id/iv"
            android:background="@drawable/icon_indicator_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view4"
        android:background="@color/gray_line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"/>
</LinearLayout>
