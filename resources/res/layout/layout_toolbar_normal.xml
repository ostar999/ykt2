<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/titlebar_layout"
    android:background="?attr/toolbar_color_new"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_44">
    <ImageView
        android:id="@+id/iv_actionbar_back"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="5dp"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="?attr/ic_black_back"
        android:layout_centerVertical="true"
        android:tintMode="src_in"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingVertical="5dp"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="?attr/first_txt_color"
        android:id="@+id/tv_actionbar2_back"
        android:background="@color/transparent"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:paddingHorizontal="@dimen/dp_16"/>
    <TextView
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:textColor="?attr/first_txt_color"
        android:ellipsize="end"
        android:id="@+id/txt_actionbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:drawablePadding="10dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="?attr/first_txt_color"
        android:id="@+id/tv_actionbar_right"
        android:background="@color/transparent"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:paddingStart="10dp"
        android:paddingEnd="6dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
