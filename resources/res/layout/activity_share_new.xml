<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="#55000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/line"
        android:background="?attr/line_new_round"
        android:padding="10dp"
        android:layout_width="260dp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:gravity="center"
            android:id="@+id/xuekeid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="解锁题库"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/fenxiang_line"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/question_color"
                android:gravity="center"
                android:id="@+id/mfristTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:text="分享解锁"
                android:drawableLeft="?attr/liwu"
                android:drawablePadding="10dp"
                android:lineSpacingExtra="1.2dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/item_school_color"
                android:gravity="center"
                android:id="@+id/mDofristTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="参加分享活动免费解锁题库"/>
        </LinearLayout>
        <View
            android:gravity="center"
            android:id="@+id/zuoguo"
            android:background="?attr/dash_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layerType="software"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/shangpin_line"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/question_color"
                android:gravity="center"
                android:id="@+id/goumaitxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:text="购买解锁"
                android:drawableLeft="?attr/shangc"
                android:drawablePadding="10dp"
                android:lineSpacingExtra="1.2dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/item_school_color"
                android:gravity="center"
                android:id="@+id/goumaiinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="购买此商品解锁题库"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/close"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:src="?attr/chosebiao"
        android:layout_alignTop="@+id/line"
        android:layout_alignRight="@+id/line"/>
</RelativeLayout>
