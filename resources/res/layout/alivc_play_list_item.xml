<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/alivc_video_info_item_layout"
    android:background="@drawable/alivc_list_item_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/alivc_common_margin_15"
    android:layout_marginBottom="@dimen/alivc_common_margin_15">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_video_cover"
            android:paddingLeft="@dimen/alivc_common_padding_15"
            android:layout_width="@dimen/alivc_common_width_icon_120"
            android:layout_height="@dimen/alivc_common_height_icon_68"
            android:scaleType="fitXY"/>
        <TextView
            android:textSize="@dimen/alivc_common_font_10"
            android:textColor="@color/alivc_common_font_white_light"
            android:layout_gravity="bottom|right"
            android:id="@+id/tv_video_duration"
            android:background="@android:color/black"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/alivc_common_padding_5"
            android:layout_marginBottom="@dimen/alivc_common_padding_5"/>
    </FrameLayout>
    <TextView
        android:textSize="@dimen/alivc_common_font_16"
        android:textColor="@android:color/white"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_video_title"
        android:paddingLeft="@dimen/alivc_common_padding_10"
        android:paddingRight="@dimen/alivc_common_padding_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
