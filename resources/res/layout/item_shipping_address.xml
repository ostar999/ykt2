<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ffffffff_13"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:paddingHorizontal="@dimen/dp_16">
    <TextView
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:textColor="?attr/first_text_color"
        android:ellipsize="end"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/dp_100"
        android:text="张三"
        android:singleLine="true"/>
    <TextView
        android:textSize="@dimen/sp_13"
        android:textColor="?attr/question_color"
        android:gravity="center_vertical"
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:text="18266649616"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_alignTop="@+id/tv_name"
        android:layout_alignBottom="@+id/tv_name"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="?attr/tertiary_text_color"
        android:ellipsize="end"
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text="张三张三张三张三张三三张三张三"
        android:maxLines="2"
        android:layout_toLeftOf="@+id/img_check"
        android:layout_below="@+id/tv_name"
        android:lineSpacingMultiplier="1.2"/>
    <View
        android:id="@+id/line"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_below="@+id/tv_address"
        style="@style/line_style"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ly_set_default"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:paddingVertical="@dimen/dp_12">
        <ImageView
            android:id="@+id/img_selected"
            android:background="@mipmap/ic_select_no_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="?attr/secondary_text_color"
            android:id="@+id/tv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认地址"
            android:layout_marginStart="@dimen/dp_8"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="?attr/third_txt_color"
        android:gravity="center"
        android:id="@+id/tvEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:layout_toLeftOf="@+id/btn_delete"
        android:layout_alignTop="@+id/btn_delete"
        android:layout_alignBottom="@+id/btn_delete"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="?attr/tertiary_text_color"
        android:gravity="center_vertical"
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:layout_alignTop="@+id/ly_set_default"
        android:layout_alignBottom="@+id/ly_set_default"
        android:paddingStart="@dimen/dp_16"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/img_check"
        android:visibility="visible"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:src="?attr/icon_address_no_check_bg"
        android:layout_alignTop="@+id/tv_address"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_28"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
