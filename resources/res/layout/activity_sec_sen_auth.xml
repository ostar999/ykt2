<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/gray_line_126"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/bg_backgroud"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/question_color"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="为什么需要获取我的相册"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/item_school_color"
            android:id="@+id/titlecontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="为什么需要获取我的相册"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/shezhiclik"
        android:background="?attr/bg_backgroud"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:id="@+id/shezhitxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为什么需要获取我的相册"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/item_name_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去设置"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/item_school_color"
            android:id="@+id/shezhicontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="为什么需要获取我的相册"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/mclickLine"
        android:background="?attr/bg_backgroud"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:id="@+id/mClicl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/question_color"
                android:id="@+id/whys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为什么需要获取我的相册"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/item_name_color"
                android:id="@+id/oppentext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="展开"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/item_school_color"
            android:id="@+id/opcontent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="为什么需要获取我的相册"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/relweburl"
        android:background="?attr/bg_backgroud"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/item_name_color"
            android:id="@+id/weburl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="为什么需要获取我的相册"/>
    </LinearLayout>
</LinearLayout>
