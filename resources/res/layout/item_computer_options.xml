<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">
    <ImageView
        android:id="@+id/img_select"
        android:padding="2dp"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/icon_options_select_no"
        android:layout_alignTop="@+id/tv_content"
        android:layout_alignBottom="@+id/tv_content"
        android:layout_marginEnd="8dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/first_text_color"
        android:gravity="center_vertical"
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生活生活生活生活生活生活生活生活生活生活生活生活生活生活生活生活生活生活生活生活"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="1.1"
        android:layout_toEndOf="@+id/img_select"/>
    <ImageView
        android:id="@+id/optionimg"
        android:visibility="visible"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/tv_content"
        android:layout_toEndOf="@+id/img_select"/>
</RelativeLayout>
