<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ly_view"
    android:background="@drawable/shape_white_top_16_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:paddingHorizontal="@dimen/dp_16">
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_close"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/color_303030"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部段评（3条）"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/line"
        style="@style/line_style_book"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/refresh_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlTextRefreshing="正在刷新数据中"
            app:srlTextRelease="松开立即刷新"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <include
                android:visibility="gone"
                layout="@layout/item_comment_header"/>
            <LinearLayout
                android:layout_gravity="end"
                android:id="@+id/ll_comment_locate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_56">
                <com.ruffian.library.widget.RLinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/ll_comment_wrap"
                    android:padding="@dimen/dp_2"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/dp_16"
                    app:background_normal="@color/color_f7f8fa"
                    app:border_dash_width="@dimen/dp_1"
                    app:corner_radius="@dimen/dp_100">
                    <com.ruffian.library.widget.RTextView
                        android:textSize="@dimen/sp_11"
                        android:gravity="center"
                        android:id="@+id/tv_hot"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:text="最热"
                        android:paddingHorizontal="@dimen/dp_6"
                        app:background_normal="@color/color_f9fafb"
                        app:background_selected="@color/white"
                        app:corner_radius="@dimen/dp_100"
                        app:text_color_normal="@color/color_bfbfbf"
                        app:text_color_selected="@color/color_303030"/>
                    <com.ruffian.library.widget.RTextView
                        android:textSize="@dimen/sp_11"
                        android:gravity="center"
                        android:id="@+id/tv_new"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="false"
                        android:text="最新"
                        android:paddingHorizontal="@dimen/dp_6"
                        app:background_normal="@color/color_f9fafb"
                        app:background_selected="@color/white"
                        app:corner_radius="@dimen/dp_100"
                        app:text_color_normal="@color/color_bfbfbf"
                        app:text_color_selected="@color/color_303030"/>
                </com.ruffian.library.widget.RLinearLayout>
            </LinearLayout>
        </FrameLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:paddingHorizontal="@dimen/dp_16">
        <com.ruffian.library.widget.RImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:src="@drawable/personal_headimg_icon"
            android:layout_marginEnd="@dimen/dp_12"
            app:is_circle="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/ll_comment"
            android:background="@drawable/shape_color_f9fafb_bg"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingHorizontal="12dp">
            <ImageView
                android:id="@+id/iv_add_comment"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/ic_add_comment"
                android:layout_marginEnd="@dimen/dp_4"/>
            <TextView
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_303030"
                android:textColorHint="@color/color_c2c6cb"
                android:gravity="center_vertical"
                android:id="@+id/et_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="添加段落评论"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
