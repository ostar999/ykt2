<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_bg1"
        android:scaleType="fitXY"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backImgv"
        android:padding="@dimen/dp_10"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@drawable/clinic_back_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/phoneCl"
        android:paddingTop="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backImgv">
        <TextView
            android:textSize="@dimen/sp_26"
            android:textStyle="bold"
            android:textColor="@color/color_333"
            android:gravity="center"
            android:id="@+id/loginTv"
            android:paddingLeft="@dimen/dp_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_welcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_999"
            android:id="@+id/loginTipTv"
            android:paddingLeft="@dimen/dp_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_tip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginTv"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/inputPhoneCl"
            android:paddingLeft="@dimen/dp_24"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_50"
            android:paddingHorizontal="@dimen/dp_24"
            app:layout_constraintTop_toBottomOf="@+id/loginTipTv">
            <EditText
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c_121212"
                android:textColorHint="@color/color_999"
                android:id="@+id/phoneEt"
                android:background="@color/color_transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/login_phone"
                android:maxLength="13"
                android:inputType="phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:background="@color/c_cccccc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/xImgv"
                android:padding="@dimen/dp_6"
                android:visibility="invisible"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/common_x4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/selectCl"
            android:paddingLeft="@dimen/dp_24"
            android:paddingRight="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_40"
            android:paddingHorizontal="@dimen/dp_24"
            app:layout_constraintTop_toBottomOf="@+id/inputPhoneCl">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/selectImgv"
                android:padding="@dimen/dp_4"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/common_unselect"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999"
                android:id="@+id/tipTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/login_tip1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/selectImgv"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.noober.background.view.BLTextView
            android:enabled="false"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:id="@+id/sendNumG0Tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_24"
            android:text="@string/login_num_get"
            android:layout_marginHorizontal="@dimen/dp_24"
            app:bl_corners_radius="@dimen/dp_12"
            app:bl_solid_color="@color/c_3776ff"
            app:layout_constraintTop_toBottomOf="@+id/selectCl"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_999"
            android:layout_gravity="right"
            android:id="@+id/pswTv"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_use_psw"
            android:paddingVertical="@dimen/dp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sendNumG0Tv"/>
        <View
            android:id="@+id/lineLfet"
            android:background="@color/c_eeeeee"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@+id/otherTv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/otherTv"
            app:layout_constraintTop_toTopOf="@+id/otherTv"/>
        <View
            android:id="@+id/lineRight"
            android:background="@color/c_eeeeee"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_40"
            app:layout_constraintBottom_toBottomOf="@+id/otherTv"
            app:layout_constraintLeft_toRightOf="@+id/otherTv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/otherTv"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999"
            android:id="@+id/otherTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_32"
            android:text="@string/login_other"
            app:layout_constraintBottom_toTopOf="@+id/otherCl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/otherCl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/phoneImgv"
                android:visibility="gone"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:src="@drawable/login_phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/wxImgv"
                android:visibility="visible"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:src="@drawable/common_wx1"
                android:layout_marginStart="@dimen/dp_30"
                app:layout_constraintStart_toEndOf="@+id/phoneImgv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginStart="0dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/serviceImgv"
                android:visibility="gone"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:src="@drawable/login_service"
                android:layout_marginStart="@dimen/dp_30"
                app:layout_constraintStart_toEndOf="@+id/wxImgv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginStart="@dimen/dp_30"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/codeCl"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backImgv">
        <TextView
            android:textSize="@dimen/sp_26"
            android:textStyle="bold"
            android:textColor="@color/color_333"
            android:gravity="center"
            android:id="@+id/codeTv"
            android:paddingLeft="@dimen/dp_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:text="@string/login_num"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_999"
            android:id="@+id/codeTipTv"
            android:paddingLeft="@dimen/dp_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_send2_num"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/codeTv"/>
        <com.al.open.SplitEditTextView
            android:textSize="@dimen/sp_24"
            android:textColor="@color/c_121212"
            android:id="@+id/set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_44"
            android:layout_marginRight="@dimen/dp_24"
            android:inputType="number"
            android:layout_marginHorizontal="@dimen/dp_24"
            app:contentNumber="6"
            app:contentShowMode="text"
            app:inputBoxStyle="underline"
            app:layout_constraintTop_toBottomOf="@+id/codeTipTv"
            app:spaceSize="20dp"
            app:underlineFocusColor="@color/c_a7a7a7"
            app:underlineNormalColor="@color/c_f4f4f4"/>
        <TextView
            android:enabled="false"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_999"
            android:id="@+id/sendNumTv"
            android:paddingLeft="@dimen/dp_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/login_num_get"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/hostFl"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_110"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
