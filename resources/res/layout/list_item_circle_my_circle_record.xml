<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.daimajia.swipe.SwipeLayout
        android:gravity="center_vertical"
        android:id="@+id/mycircle_SwipeLayout"
        android:background="@drawable/btn_white_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:textSize="20sp"
                android:textColor="@color/color_white"
                android:id="@+id/mycircle_btn_delect"
                android:background="@color/color_red"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="删除"
                android:singleLine="true"/>
        </LinearLayout>
        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/content_text_size"
                android:textColor="#424242"
                android:id="@+id/tv_record_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/sub_contenr_text_size"
                android:textColor="@color/color_new"
                android:id="@+id/tv_record_name"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_item_padding"
                android:layout_below="@+id/tv_record_title"/>
            <TextView
                android:textSize="@dimen/sub_contenr_text_size"
                android:textColor="@color/color_new"
                android:id="@+id/tv_record_time"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="@dimen/content_item_padding"
                android:layout_toRightOf="@+id/tv_record_name"
                android:layout_below="@+id/tv_record_title"/>
            <TextView
                android:textSize="@dimen/sub_contenr_text_size"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:id="@+id/tv_circle_topic_item_vote_flag"
                android:background="@drawable/bg_vote"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/content_item_padding"
                android:text="@string/vote_topic_label"
                android:layout_toRightOf="@+id/tv_record_time"
                android:layout_below="@+id/tv_record_title"/>
            <TextView
                android:textSize="@dimen/sub_contenr_text_size"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:id="@+id/tv_circle_topic_image_flag"
                android:background="@drawable/bg_vote"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/content_item_padding"
                android:text="图"
                android:layout_toRightOf="@+id/tv_circle_topic_item_vote_flag"
                android:layout_below="@+id/tv_record_title"/>
            <TextView
                android:textSize="@dimen/sub_contenr_text_size"
                android:textColor="@color/color_new"
                android:id="@+id/tv_circle_topic_item_view_reply"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_item_padding"
                android:drawableLeft="@drawable/ic_reply_number"
                android:drawablePadding="3dp"
                android:layout_below="@+id/tv_record_title"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/iv_elite"
                android:background="@drawable/circle_elite_icon"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"/>
        </RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>
