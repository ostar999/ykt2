<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="?attr/app_theme"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <com.psychiatrygarden.widget.AlphaImageView
            android:id="@+id/sys_icon_left"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="?attr/icon_back"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <com.psychiatrygarden.widget.ColumnHorizontalScrollView
            android:id="@+id/mColumnHorizontalScrollView"
            android:background="@color/transparent"
            android:scrollbars="none"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/mRadioGroup_content"
                android:background="@color/transparent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true">
                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:id="@+id/syscoms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@drawable/tiku_top_textcolor"
                        android:id="@+id/syscomstxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论消息"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>
                    <TextView
                        android:id="@+id/syscomsline"
                        android:layout_width="20dp"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/syscomstxt"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:id="@+id/sysnotifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:textColor="@drawable/tiku_top_textcolor"
                        android:id="@+id/notifitxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="系统消息"/>
                    <TextView
                        android:id="@+id/notifiline"
                        android:layout_width="20dp"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/notifitxt"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </LinearLayout>
        </com.psychiatrygarden.widget.ColumnHorizontalScrollView>
        <FrameLayout
            android:id="@+id/fraglaytouid"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/cropnumimg"/>
            <TextView
                android:textSize="9sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="right"
                android:id="@+id/cropNumtv"
                android:background="?attr/shape_crop_bg"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:visibility="visible"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="-2dp"
                android:minWidth="14dp"
                android:minHeight="13dp"
                android:includeFontPadding="false"/>
        </FrameLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.psychiatrygarden.widget.LazyViewPager
            android:id="@+id/sys_viewpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_network_load_fail"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/network_load_fail"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
