<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="16dp">
        <ImageView
            android:id="@+id/img_back"
            android:padding="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="?attr/ic_back_gray"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:id="@+id/tv_mock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模考名称"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/img_back"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/main_theme_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余时间： "/>
            <TextView
                android:id="@+id/tv_time_one"
                android:text="0"
                style="@style/computer_time_text_style"/>
            <TextView
                android:id="@+id/tv_time_two"
                android:text="1"
                style="@style/computer_time_text_style"/>
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/orange_color"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:text=":"
                android:layout_marginEnd="2dp"/>
            <TextView
                android:id="@+id/tv_time_three"
                android:text="0"
                style="@style/computer_time_text_style"/>
            <TextView
                android:id="@+id/tv_time_four"
                android:text="0"
                style="@style/computer_time_text_style"/>
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/orange_color"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:text=":"
                android:layout_marginEnd="2dp"/>
            <TextView
                android:id="@+id/tv_time_five"
                android:text="0"
                style="@style/computer_time_text_style"/>
            <TextView
                android:id="@+id/tv_time_six"
                android:text="0"
                style="@style/computer_time_text_style"/>
        </LinearLayout>
    </RelativeLayout>
    <View style="@style/new_gray_line_style"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/left_view"
            android:visibility="visible"
            android:fitsSystemWindows="true"
            android:layout_width="199dp"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/first_txt_color"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_test_time"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="考试时间：16:30-19:00"
                    android:paddingHorizontal="16dp"/>
                <View
                    android:background="?attr/new_gray_line_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/tv_no_answer_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="未答题数：100"
                    android:layout_marginStart="16dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/tv_biao_doubt_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:text="标疑题数：10"
                    android:layout_marginStart="16dp"/>
                <View
                    android:background="?attr/new_gray_line_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ly_type_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginVertical="10dp"/>
                <View
                    android:background="?attr/new_gray_line_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginHorizontal="16dp">
                    <LinearLayout style="@style/computer_question_type_layout_style">
                        <ImageView
                            android:background="@drawable/shape_computer_yellow_question_bg"
                            style="@style/computer_question_type_view_style"/>
                        <TextView
                            android:text="标疑"
                            style="@style/computer_question_type_text_style"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        style="@style/computer_question_type_layout_style">
                        <View
                            android:background="@drawable/shape_computer_no_answer_question_bg"
                            style="@style/computer_question_type_view_style"/>
                        <TextView
                            android:text="未答"
                            style="@style/computer_question_type_text_style"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        style="@style/computer_question_type_layout_style">
                        <View
                            android:background="@drawable/shape_computer_answerd_question_bg"
                            style="@style/computer_question_type_view_style"/>
                        <TextView
                            android:text="已答"
                            style="@style/computer_question_type_text_style"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="end|center_vertical"
                        style="@style/computer_question_type_layout_style">
                        <View
                            android:background="@drawable/shape_computer_current_question_bg"
                            style="@style/computer_question_type_view_style"/>
                        <TextView
                            android:text="当前"
                            style="@style/computer_question_type_text_style"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_sheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="16dp"
                    android:layout_marginEnd="3dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="5"/>
                <TextView
                    android:textSize="11sp"
                    android:textColor="?attr/first_txt_color"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/btn_next_stage"
                    android:background="@drawable/shape_computer_bottom_btn_bg"
                    android:paddingLeft="22dp"
                    android:paddingTop="5dp"
                    android:paddingRight="22dp"
                    android:paddingBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="下一阶段"
                    android:paddingHorizontal="22dp"
                    android:paddingVertical="5dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/ly_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <View
                    android:background="?attr/new_gray_line_color"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="16dp"
                    android:layout_height="match_parent">
                    <View
                        android:background="?attr/new_gray_line_color"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="40dp"/>
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/ly_arrow"
                        android:background="@drawable/shape_computer_arrow_bg"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:id="@+id/img_arrow"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="?attr/ic_question_combine_arrow"
                            android:rotation="90"/>
                    </LinearLayout>
                    <View
                        android:background="?attr/new_gray_line_color"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="40dp"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ly_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_toStartOf="@+id/btn_more">
                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="题型："/>
                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="?attr/main_theme_color"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_question_type"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="共用题干题"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/first_txt_color"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_question_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="每一道试题下面有A、B、C、D、E五个备选答案"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="10dp"/>
                </LinearLayout>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/forth_txt_color"
                    android:gravity="center_vertical"
                    android:id="@+id/btn_more"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="查看更多"
                    android:drawableRight="?attr/ic_computer_more_arrow"
                    android:layout_marginEnd="16dp"
                    android:layout_alignParentEnd="true"/>
                <View
                    android:id="@+id/top_line"
                    android:background="?attr/new_gray_line_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/ly_type"/>
                <androidx.core.widget.NestedScrollView
                    android:id="@+id/sc_public_title"
                    android:layout_width="214dp"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom_line"
                    android:layout_below="@+id/top_line">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="?attr/first_text_color"
                        android:id="@+id/tv_public_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="欲比较A、B、C三种药物对雄性Wistar大鼠尿中氨基氮排出量的影响，将36只大鼠按照体重和月龄相近的原则每3只为1区组，共12区组，每个区组的3只大鼠随机分配到A、B、C三个药物组。一个月后观察尿中氨基氮的排出量。欲比较A、B、C三种药物对雄性Wistar大鼠尿中氨基氮排出量的影响，将36只大鼠按照体重和月龄相近的原则每3只为1区组，共12区组，每个区组的3只大鼠随机分配到A、B、C三个药物组。一个月后观察尿中氨基氮的排出量。"
                        android:lineSpacingExtra="3dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginVertical="16dp"/>
                </androidx.core.widget.NestedScrollView>
                <View
                    android:id="@+id/public_line"
                    android:background="?attr/new_gray_line_color"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/sc_public_title"
                    android:layout_alignBottom="@+id/sc_public_title"
                    android:layout_marginEnd="16dp"
                    android:layout_toEndOf="@+id/sc_public_title"/>
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom_line"
                    android:layout_below="@+id/top_line"
                    android:layout_toEndOf="@+id/public_line">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/ly_add_question_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ly_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">
                            <TextView
                                android:textSize="14sp"
                                android:textColor="?attr/first_text_color"
                                android:id="@+id/tv_question_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="103、以每日吸烟量为自变量x，肺组织中DNA加合物含量为应变量y进行直线回归分析，则要求"/>
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/img_title"
                                android:visibility="gone"
                                android:layout_width="128dp"
                                android:layout_height="72dp"
                                android:layout_marginTop="12dp"
                                app:riv_corner_radius="8dp"/>
                        </LinearLayout>
                        <com.psychiatrygarden.widget.MaxRecyclerView
                            android:id="@+id/qlistview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/bottom_line"
                            android:layout_toEndOf="@+id/public_line"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
                <View
                    android:id="@+id/bottom_line"
                    android:background="?attr/new_gray_line_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_above="@+id/ly_bottom_view"/>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ly_bottom_view"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="16dp">
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center"
                        android:id="@+id/btn_biao_doubt"
                        android:background="@drawable/shape_computer_bottom_btn_bg"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="标疑"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center"
                        android:id="@+id/btn_to_biao_doubt"
                        android:background="@drawable/shape_computer_bottom_btn_bg"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="转到标疑题"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center"
                        android:id="@+id/btn_to_no_answer"
                        android:background="@drawable/shape_computer_bottom_btn_bg"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="转到未答题"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center"
                        android:id="@+id/btn_previous"
                        android:background="@drawable/shape_computer_bottom_btn_bg"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="上一题"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center"
                        android:id="@+id/btn_next"
                        android:background="@drawable/shape_computer_bottom_btn_bg"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="下一题"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center"
                        android:id="@+id/btn_finish"
                        android:background="@drawable/shape_computer_bottom_btn_bg"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="完成考试"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
