<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemRootThird"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_16">
    <RelativeLayout
        android:id="@+id/itemInnerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/viewTag"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_12"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/noteThirdLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewTag">
            <ImageView
                android:id="@+id/noteThirdSelectImage"
                android:visibility="visible"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="?attr/download_new_select"
                android:scaleType="fitXY"
                android:layout_below="@+id/viewTag"/>
            <ImageView
                android:id="@+id/img"
                android:padding="@dimen/dp_5"
                android:visibility="gone"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/icon_course_note_new"
                android:layout_below="@+id/viewTag"
                android:layout_alignWithParentIfMissing="true"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="?attr/first_txt_color"
                android:ellipsize="end"
                android:id="@+id/noteThirdTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_22"
                android:text="考研长难句试听课直播课25考研长难句试滴水穿石调查"
                android:maxLines="1"
                android:layout_toRightOf="@+id/img"
                android:layout_below="@+id/viewTag"
                android:layout_alignWithParentIfMissing="true"
                android:paddingEnd="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_12"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/third_txt_color"
            android:id="@+id/tvThirdNoteNum"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_5"
            android:text="1条笔记"
            android:layout_below="@+id/noteThirdLayout1"
            android:layout_marginStart="@dimen/dp_36"/>
        <View
            android:id="@+id/thirdNoteItemLine"
            android:background="?attr/fourth_line_backgroup_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_below="@+id/tvThirdNoteNum"/>
    </RelativeLayout>
</RelativeLayout>
