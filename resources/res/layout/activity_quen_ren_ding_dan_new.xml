<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/identity_confirm_bg_color"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView1"
        android:background="?attr/identity_confirm_bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/llay_buy_goods"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView4"
                android:background="?attr/identity_confirm_bg_color"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <RelativeLayout
                android:background="?attr/bg_backgroud"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/first_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品金额："
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/goodstotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="?attr/bg_backgroud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/data_song"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="快递运费："
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/tv_kuaidi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/data_song"
                    android:layout_alignLeft="@+id/data_song"
                    android:layout_alignRight="@+id/tv_kuaidi"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/data_song"
                    android:layout_alignBaseline="@+id/data_song"
                    android:layout_alignBottom="@+id/data_song"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="?attr/bg_backgroud"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/first_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券："
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="?attr/bg_backgroud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="买家留言："
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:id="@+id/te"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/d"/>
                <EditText
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/first_text_color"
                    android:textColorHint="?attr/secondary_text_color"
                    android:id="@+id/edite"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:hint="选填"
                    android:ems="10"
                    android:layout_toRightOf="@+id/d"
                    android:layout_above="@+id/te"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:background="?attr/identity_confirm_bg_color"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <RelativeLayout
                android:background="?attr/bg_backgroud"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="?attr/viptscolor"
                    android:gravity="center"
                    android:id="@+id/tv_jia"
                    android:background="?attr/number_bg_color"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="+"
                    android:layout_alignParentRight="true"/>
                <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/textView16"
                    android:background="?attr/bg_backgroud"
                    android:paddingTop="0.5dp"
                    android:paddingBottom="0.5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@+id/tv_jia"
                    android:layout_alignTop="@+id/tv_jia">
                    <TextView
                        android:textColor="?attr/first_text_color"
                        android:gravity="center"
                        android:id="@+id/tv_num"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="1"/>
                    <TextView
                        android:textColor="@color/app_theme_red"
                        android:gravity="center"
                        android:id="@+id/tv_donghua"
                        android:background="@color/white"
                        android:visibility="gone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="+1"/>
                </RelativeLayout>
                <TextView
                    android:textColor="?attr/viptscolor"
                    android:gravity="center"
                    android:id="@+id/tv_jian"
                    android:background="?attr/number_bg_color"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="-"
                    android:layout_toLeftOf="@+id/textView16"
                    android:layout_alignTop="@+id/tv_jia"/>
                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_jian"
                    android:layout_alignLeft="@+id/textView14"
                    android:layout_alignRight="@+id/tv_jia"/>
                <TextView
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:layout_marginLeft="18dp"
                    android:text="数量"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:id="@+id/shouhuo_rl"
                android:background="?attr/bg_backgroud"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/dimgray"
                    android:ellipsize="end"
                    android:id="@+id/tv_shouhuos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="收货地址：请添加收货地址"
                    android:maxLines="2"
                    android:layout_toLeftOf="@+id/textView7"
                    android:layout_toRightOf="@+id/textView2"
                    android:layout_below="@+id/textView5"
                    android:lineSpacingMultiplier="1.2"/>
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="收  货 人："
                    android:layout_alignLeft="@+id/tv_shouhuos"/>
                <TextView
                    android:id="@+id/textView7"
                    android:background="@drawable/icon_indicator_right"
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/font_com"
                    android:id="@+id/tv_shouhuoren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="82dp"
                    android:layout_toRightOf="@+id/textView2"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"/>
                <TextView
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/font_com"
                    android:id="@+id/tv_phones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_shouhuoren"
                    android:layout_alignRight="@+id/tv_shouhuos"
                    android:layout_alignBottom="@+id/tv_shouhuoren"/>
            </RelativeLayout>
            <com.psychiatrygarden.widget.MyListView
                android:id="@+id/address_line"
                android:background="?attr/bg_backgroud"
                android:paddingTop="10dp"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="?attr/line"
                android:dividerHeight="10dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/addressview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="?attr/identity_confirm_bg_color"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <TextView
                    android:textColor="?attr/first_text_color"
                    android:gravity="center"
                    android:background="?attr/bg_backgroud"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+添加地址"
                    android:layout_above="@+id/rl"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rl"
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_tijiao"
            android:background="@drawable/shape_full_red"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:text="提交订单"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/dominant_color"
            android:id="@+id/tv_money2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?attr/dominant_color"
            android:id="@+id/tv_moneys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_tijiao"
            android:layout_alignBaseline="@+id/tv_tijiao"
            android:layout_alignBottom="@+id/tv_tijiao"/>
    </RelativeLayout>
</RelativeLayout>
