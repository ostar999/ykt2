<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_content"
        android:background="@drawable/circle_entrance_guide_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="-1dp"
        android:layout_below="@+id/iv_down_triangle"
        android:layout_marginEnd="@dimen/dp_9"
        android:layout_alignParentEnd="true">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textColor="?attr/circle_guide_text_color"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击此处查看和编辑组题记录"
            android:paddingStart="@dimen/dp_16"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textStyle="bold"
            android:textColor="?attr/circle_guide_text_ik_color"
            android:gravity="center"
            android:id="@+id/tv_ok"
            android:background="@drawable/circle_entrance_guide_ik_bg"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_24"
            android:text="我知道啦"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_16"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_down_triangle"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_34"
        android:src="@drawable/ic_down_triangle_day"
        android:layout_alignParentTop="true"
        android:rotation="180"
        android:layout_marginEnd="@dimen/dp_9"
        android:layout_alignEnd="@+id/ll_content"/>
</RelativeLayout>
