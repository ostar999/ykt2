<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="?attr/app_bg"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_item_type"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/ll_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="15dp">
        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2022年临床医学资料2022年临床医学资料2022年临床医学资料.ppt"
            android:maxLines="1"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            android:progress="0"
            android:indeterminate="false"
            android:progressDrawable="@drawable/download_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_success_local"
                android:visibility="gone"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:src="@drawable/ic_local_download_success"
                android:layout_marginEnd="@dimen/dp_3"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/third_txt_color"
                android:ellipsize="end"
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/third_txt_color"
                android:id="@+id/tv_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/third_txt_color"
                android:id="@+id/tv_download_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/third_txt_color"
                android:gravity="end"
                android:id="@+id/tv_status"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="暂停下载"
                android:maxLines="1"
                android:layout_weight="1"
                android:layout_marginStart="14dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_operate"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_start_download"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_select"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="?attr/download_item_un_select_icon_new"/>
</LinearLayout>
