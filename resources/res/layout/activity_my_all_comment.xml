<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/gray_line_126"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="?attr/gray_line_126"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:id="@+id/rl_comment_tiku"
        android:background="?attr/bg_backgroud"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/question_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="题库评论"
            android:maxLines="1"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_tiku_comment"
            android:background="?attr/red_yuan"
            android:visibility="gone"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_comment_tiku"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/iv_comment_tiku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/icon_indicator_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textColor="?attr/item_school_color"
            android:id="@+id/mycommnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_comment_tiku"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:background="?attr/gray_line_126"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/rl_comment_jingyan"
        android:background="?attr/bg_backgroud"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/question_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经验评论"
            android:maxLines="1"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_jingyan_comment"
            android:background="?attr/red_yuan"
            android:visibility="gone"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_comment_jingyan"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/iv_comment_jingyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/icon_indicator_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textColor="?attr/item_school_color"
            android:id="@+id/myjingyannum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_comment_jingyan"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:background="?attr/gray_line_126"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/rl_comment_ziliao"
        android:background="?attr/bg_backgroud"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/question_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资料评论"
            android:maxLines="1"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_ziliao_comment"
            android:background="?attr/red_yuan"
            android:visibility="gone"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_comment_ziliao"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/iv_comment_ziliao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/icon_indicator_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:background="?attr/gray_line_126"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/rl_comment_kecheng"
        android:background="?attr/bg_backgroud"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/question_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帖子评论"
            android:maxLines="1"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_kecheng_comment"
            android:background="?attr/red_yuan"
            android:visibility="gone"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_comment_kecheng"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/iv_comment_kecheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/icon_indicator_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textColor="?attr/item_school_color"
            android:id="@+id/mytiezinum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_comment_kecheng"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:background="?attr/gray_line_126"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"/>
</LinearLayout>
