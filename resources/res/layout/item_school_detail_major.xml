<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/ly_item"
    android:background="@drawable/shape_new_bg_two_color_new_round8"
    android:paddingLeft="@dimen/dp_12"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_8"
    android:paddingHorizontal="@dimen/dp_12"
    android:paddingVertical="@dimen/dp_16">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textColor="?attr/first_txt_color"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100201-内科学"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textColor="?attr/orange_color"
            android:id="@+id/tv_type"
            android:background="@drawable/shape_major_type_xue_bg"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学硕"
            android:layout_marginStart="@dimen/dp_2"
            android:paddingHorizontal="@dimen/dp_2"/>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:src="@drawable/icon_right_arrow_mo_kao"/>
</LinearLayout>
