<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.psychiatrygarden.widget.CustomViewPager2
        android:orientation="horizontal"
        android:id="@+id/questiondetails_viewPager"
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_48">
        <RelativeLayout
            android:id="@+id/rl_top_title"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_40">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="?attr/question_title_color"
                android:gravity="center"
                android:id="@+id/questiondetails_tv_title"
                android:background="?attr/question_title_bg_color"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:singleLine="true"
                android:layout_centerInParent="true"
                android:paddingHorizontal="@dimen/dp_16"/>
        </RelativeLayout>
    </LinearLayout>
    <include
        android:id="@+id/include_title"
        layout="@layout/include_title_answer_question"/>
    <ImageView
        android:layout_gravity="end|bottom"
        android:id="@+id/iv_back_2_top"
        android:visibility="gone"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginBottom="100dp"
        android:src="?attr/question_back_top"
        android:layout_marginEnd="16dp"/>
    <View
        android:id="@+id/answer_question_mask"
        android:background="@color/dialog_transparent_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_gravity="right"
        android:orientation="vertical"
        android:id="@+id/ll_cut_guide"
        android:background="@color/transparent"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_44"
        android:layout_marginEnd="@dimen/dp_7">
        <ImageView
            android:layout_gravity="end"
            android:id="@+id/iv_triangle"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_7"
            android:src="?attr/ic_down_triangle"
            android:rotationX="180"
            android:layout_marginEnd="@dimen/dp_45"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:background="@drawable/circle_entrance_guide_bg"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="-1.2dp"
            android:layout_alignParentStart="true"
            android:paddingHorizontal="@dimen/dp_10">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="?attr/circle_guide_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击可进行斩题"/>
            <TextView
                android:textSize="@dimen/sp_11"
                android:textStyle="bold"
                android:textColor="?attr/circle_guide_text_ik_color"
                android:gravity="center"
                android:id="@+id/tv_ok"
                android:background="@drawable/circle_entrance_guide_ik_bg"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_24"
                android:text="我知道了"
                android:layout_marginStart="@dimen/dp_10"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
