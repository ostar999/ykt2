<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:paddingHorizontal="@dimen/dp_10">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_right_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/iv_select"
                android:padding="@dimen/dp_3"
                android:visibility="visible"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/download_new_not_select"/>
            <ImageView
                android:id="@+id/iv_question_arrow"
                android:padding="@dimen/dp_6"
                android:visibility="gone"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:src="@mipmap/arrow_question_collapse"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_center_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/ly_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_56"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dp_10">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="?attr/question_color"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/main_groups_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/img_continue"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_8"
                    android:src="?attr/ic_question_continue_do"
                    android:layout_toEndOf="@+id/main_groups_tv_name"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/tertiary_text_color"
                android:id="@+id/gnumTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_arrow"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/homepage_question_password"/>
            <ImageView
                android:id="@+id/iv_arrow_export"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/homepage_question_password"
                android:layout_marginStart="@dimen/dp_24"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/llay_progress_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_6">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/tertiary_text_color"
                android:layout_gravity="right"
                android:id="@+id/main_groups_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.psychiatrygarden.widget.SpringProgressView
                android:id="@+id/spring_progress_view"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_3"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="?attr/line"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
</LinearLayout>
