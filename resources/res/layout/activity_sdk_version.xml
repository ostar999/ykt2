<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/alivc_common_theme_primary_darker"
    android:padding="@dimen/alivc_common_padding_10"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/alivc_common_font_18"
        android:textColor="@color/alivc_common_font_white"
        android:gravity="center"
        android:padding="@dimen/alivc_common_padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alivc_base_version"/>
    <TextView
        android:textSize="@dimen/alivc_common_font_14"
        android:textColor="@color/alivc_common_font_white"
        android:id="@+id/tv_version"
        android:padding="@dimen/alivc_common_padding_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/alivc_common_font_14"
        android:textColor="@color/alivc_common_font_white"
        android:id="@+id/tv_module"
        android:padding="@dimen/alivc_common_padding_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/alivc_common_font_14"
        android:textColor="@color/alivc_common_font_white"
        android:id="@+id/tv_build_id"
        android:padding="@dimen/alivc_common_padding_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/alivc_common_font_14"
        android:textColor="@color/alivc_common_font_white"
        android:id="@+id/tv_src_commit_id"
        android:padding="@dimen/alivc_common_padding_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/alivc_common_font_14"
        android:textColor="@color/alivc_common_font_white"
        android:id="@+id/tv_alivc_commit_id"
        android:padding="@dimen/alivc_common_padding_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/alivc_common_font_14"
        android:textColor="@color/alivc_common_font_white"
        android:id="@+id/tv_android_commit_id"
        android:padding="@dimen/alivc_common_padding_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
