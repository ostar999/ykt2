<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/new_bg_one_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_title"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:textSize="14sp"
                android:id="@+id/tv_filtrate"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="?attr/ic_black_back"
                android:layout_centerVertical="true"
                android:contentDescription="@null"/>
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/txt_actionbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_centerInParent="true"/>
            <RelativeLayout
                android:id="@+id/iv_search"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:id="@+id/tv_search"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/zhuanfaceshi"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/dp_16">
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/totalfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_title"
                android:layout_marginStart="20dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/zongfenshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_title"
                android:layout_marginStart="10dp"/>
            <LinearLayout
                android:id="@+id/ly_zongfe"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">
                <TextView
                    android:textSize="13dp"
                    android:textColor="?attr/person_orange_color"
                    android:id="@+id/zongfe"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看排名"
                    android:drawablePadding="5dp"/>
                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="?attr/ic_view_rank_right"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:background="?attr/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/ly_title"/>
    <ExpandableListView
        android:id="@+id/elv_tiku_question"
        android:background="@color/transparent"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:groupIndicator="@null"
        android:childDivider="?attr/line"
        android:divider="?attr/line"
        android:dividerHeight="0.5dp"
        android:layout_below="@+id/view"
        android:headerDividersEnabled="false"/>
    <TextView
        android:textColor="?attr/question_color"
        android:gravity="center"
        android:id="@+id/shujujiazaizhong"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="数据加载中..."
        android:layout_below="@+id/view"/>
</RelativeLayout>
