<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginHorizontal="@dimen/dp_16">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_114"
        app:riv_corner_radius_top_left="@dimen/dp_12"
        app:riv_corner_radius_top_right="@dimen/dp_12"/>
    <RelativeLayout
        android:background="@drawable/shape_white_bottom_12"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingVertical="@dimen/dp_16">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医考帮公益学习营一八周搞定生理学"
            android:lines="1"
            android:layout_toStartOf="@+id/btn_status"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/third_txt_color"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="2024年3月25日~2024年4月25日"
            android:layout_below="@+id/tv_title"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="?attr/new_bg_one_color"
            android:id="@+id/btn_status"
            android:background="@drawable/shape_app_theme_corners_8"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进行中"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="@dimen/dp_12"
            android:paddingVertical="@dimen/dp_6"/>
    </RelativeLayout>
</LinearLayout>
