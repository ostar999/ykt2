<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popCl"
        android:background="@drawable/home_code_popbg"
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_180"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/codeCl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_26"
                android:src="@drawable/exam_call"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ScrollView
                android:id="@+id/scrollV"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_12"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_575757"
                    android:gravity="center_horizontal"
                    android:id="@+id/tipTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\10请联系机构管理员"/>
            </ScrollView>
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_black"
                android:gravity="center"
                android:id="@+id/unlockTv"
                android:background="@drawable/me_code_btn"
                android:layout_width="@dimen/dp_126"
                android:layout_height="@dimen/dp_28"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="@string/common_sure"
                app:layout_constraintBottom_toBottomOf="@+id/scrollV"
                app:layout_constraintEnd_toEndOf="@+id/scrollV"
                app:layout_constraintStart_toStartOf="@+id/scrollV"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/closeImgv"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:src="@drawable/common_x5"
            android:paddingStart="@dimen/dp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
