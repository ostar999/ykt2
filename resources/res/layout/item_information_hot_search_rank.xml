<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_item"
    android:background="@drawable/shape_rank_user_owner_bg"
    android:paddingLeft="@dimen/dp_8"
    android:paddingTop="@dimen/dp_11"
    android:paddingRight="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_11"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:paddingHorizontal="@dimen/dp_8"
    android:paddingVertical="@dimen/dp_11">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            android:textColor="@color/forth_txt_color"
            android:gravity="center"
            android:id="@+id/tv_sort"
            android:background="@mipmap/ic_rank_first"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:text="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/ic_file_type"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@drawable/ic_ppt"
            android:layout_marginStart="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_sort"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/second_txt_color"
            android:id="@+id/tv_download_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_file_author"
            app:layout_constraintLeft_toRightOf="@+id/tv_file_size"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/second_txt_color"
            android:id="@+id/tv_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_file_author"
            app:layout_constraintLeft_toRightOf="@+id/tv_file_author"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/second_txt_color"
            android:id="@+id/tv_file_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            app:layout_constraintStart_toStartOf="@+id/tv_file_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_file_name"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:id="@+id/tv_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            app:layout_constraintLeft_toRightOf="@+id/ic_file_type"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ic_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/lock"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
