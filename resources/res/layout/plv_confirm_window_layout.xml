<?xml version="1.0" encoding="utf-8"?>
<com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@android:color/black"
    android:paddingTop="15dp"
    android:layout_width="228dp"
    android:layout_height="wrap_content"
    android:alpha="0.75"
    app:mode="all"
    app:radius="8dp">
    <TextView
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:id="@+id/plv_confirm_title"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:id="@+id/plv_confirm_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/plv_confirm_title"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/plv_confirm_separator_line"
        android:background="#1af0f1f5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/plv_confirm_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/plv_confirm_separator_line">
        <TextView
            android:textSize="14sp"
            android:textColor="#ccffffff"
            android:gravity="center"
            android:id="@+id/plv_left_confirm_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <View
            android:id="@+id/plv_split_view"
            android:background="#1af0f1f5"
            android:visibility="visible"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#ccffffff"
            android:gravity="center"
            android:id="@+id/plv_right_confirm_btn"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectLayout>
