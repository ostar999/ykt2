<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ExpandableListView
            android:id="@+id/elv_tiku_question"
            android:background="?attr/bg_backgroud"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:groupIndicator="@null"
            android:childDivider="?attr/divider_color"
            android:divider="?attr/divider_color"
            android:dividerHeight="0.5dp"
            android:headerDividersEnabled="false"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/dialog_toast"
        android:background="?attr/bg_backgroud"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminateDrawable="?attr/progressBar"
            style="?android:attr/progressBarStyleLarge"/>
        <TextView
            android:textSize="15dp"
            android:textColor="?attr/question_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="题库加载中..."/>
    </LinearLayout>
    <include
        android:id="@+id/showview"
        android:visibility="gone"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        layout="@layout/dialog_download_progress"/>
</RelativeLayout>
