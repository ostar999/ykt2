<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/include_title_relative"
        android:background="@color/app_theme_red"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/include_btn_l"
            android:paddingLeft="22dp"
            android:paddingTop="5dp"
            android:paddingRight="22dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_left_back"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/include_btn_right"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:id="@+id/include_btn_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_alignParentEnd="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/include_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/color_white"
                android:id="@+id/include_title_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/include_title_center_iv"
                android:visibility="gone"
                android:layout_width="10dp"
                android:layout_height="5dp"
                android:src="@drawable/bg_title_open_arrow"
                android:layout_marginStart="3dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/include_btn_left"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/include_title_layout"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/listView1"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:layout_below="@+id/include_title_relative"/>
    <RelativeLayout
        android:id="@+id/rela_list"
        android:background="#22000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_title_relative">
        <ListView
            android:id="@+id/listView2"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"/>
    </RelativeLayout>
</RelativeLayout>
