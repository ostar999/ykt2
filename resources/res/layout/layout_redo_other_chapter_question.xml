<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mSwipeLayput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linexportview">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="?attr/forum_swipe_txt"
            app:srlClassicsSpinnerStyle="Translate"
            app:srlPrimaryColor="@color/transparent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linexportview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:background="?attr/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/relbuttom"
            android:background="?attr/tertiary_backgroup_white_color"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="16dp">
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/dominant_color"
                android:gravity="center"
                android:id="@+id/btn_all_redo"
                android:background="@drawable/shape_error_all_redo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="全部重做"
                android:layout_weight="1"
                android:layout_alignParentRight="true"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btn_error_redo"
                android:background="?attr/red_round_coner"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="错题重做"
                android:layout_weight="1"
                android:layout_alignParentRight="true"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
