<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_item_content"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_type_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55">
            <View
                android:background="@color/color_dd594a"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"/>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="@color/color_303030"
                android:layout_gravity="center"
                android:id="@+id/tv_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"/>
        </LinearLayout>
        <View
            android:id="@+id/type_line_customer"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_16">
            <com.ruffian.library.widget.RImageView
                android:id="@+id/img_avatar"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="2dp"
                android:src="@drawable/personal_headimg_icon"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                android:layout_marginEnd="@dimen/dp_8"
                app:is_circle="true"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/color_0062ba"
                                android:id="@+id/tv_nick_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/personalVipIv"
                                android:visibility="gone"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginLeft="4dp"
                                android:src="@drawable/personal_vip_night"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="10sp"
                                android:textColor="@color/color_909090"
                                android:ellipsize="end"
                                android:id="@+id/tv_hospital"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="@dimen/dp_140"
                                android:maxLines="1"/>
                            <TextView
                                android:textSize="10sp"
                                android:textColor="@color/color_909090"
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_12"/>
                        </LinearLayout>
                    </LinearLayout>
                    <com.ruffian.library.widget.RTextView
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_909090"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高评价"
                        android:drawablePadding="@dimen/dp_2"
                        app:icon_height_left="@dimen/dp_16"
                        app:icon_normal_left="@drawable/icon_good_review"
                        app:icon_width_left="@dimen/dp_16"/>
                </LinearLayout>
                <com.ykb.ebook.weight.FloorViews
                    android:id="@+id/floor"
                    android:background="@color/color_FFFDF0"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/rel_cdf"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_303030"
                    android:id="@+id/tv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"/>
                <com.ruffian.library.widget.RImageView
                    android:id="@+id/img_picture"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_140"
                    android:layout_height="@dimen/dp_140"
                    android:layout_marginTop="@dimen/dp_8"
                    android:src="@drawable/image_cover_default"
                    android:scaleType="centerCrop"
                    app:corner_radius="@dimen/dp_12"/>
                <LinearLayout
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13">
                    <com.ruffian.library.widget.RTextView
                        android:textSize="12sp"
                        android:id="@+id/tv_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:text_color_normal="@color/color_bfbfbf"
                        app:text_color_selected="@color/color_81cb30"/>
                    <com.ruffian.library.widget.RTextView
                        android:textSize="12sp"
                        android:id="@+id/tv_opposition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_24"
                        android:layout_marginHorizontal="@dimen/dp_24"
                        app:text_color_normal="@color/color_bfbfbf"
                        app:text_color_selected="@color/color_dd594a"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_141516"
                        android:gravity="center"
                        android:id="@+id/tv_comment_reply"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_6"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:paddingHorizontal="@dimen/dp_6"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/v_line"
            android:layout_marginTop="@dimen/dp_17"
            style="@style/line_style_book"/>
    </LinearLayout>
</LinearLayout>
