<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/new_bg_two_color_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/tabbar"
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <ImageView
            android:id="@+id/iv_actionbar_back"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:src="?attr/ic_black_back"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="2dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/top_ll_search"
            android:background="@drawable/shape_forum_search_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/top_search_tv"
            android:layout_toEndOf="@+id/iv_actionbar_back">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="?attr/ic_forum_search"
                android:layout_marginStart="16dp"/>
            <com.psychiatrygarden.widget.ClearEditText
                android:textSize="14sp"
                android:textColor="?attr/first_txt_color"
                android:textColorHint="?attr/forth_txt_color"
                android:id="@+id/top_search"
                android:background="@null"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:hint="输入关键字"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:textCursorDrawable="@drawable/color_cursor"
                android:paddingHorizontal="8dp"/>
        </LinearLayout>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/search_text_color"
            android:gravity="center"
            android:id="@+id/top_search_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:text="搜索"
            android:paddingStart="12dp"
            android:layout_alignParentEnd="true"/>
        <View
            android:id="@+id/toSearchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_40"/>
    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicator="@drawable/tab_indicator_school"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="bottom"
        app:tabIndicatorHeight="@dimen/dp_3"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="?attr/first_text_color"
        app:tabTextColor="?attr/third_txt_color"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/llEmpty"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:src="@mipmap/ic_empty_data"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/third_txt_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="暂无学校数据"/>
    </LinearLayout>
</LinearLayout>
