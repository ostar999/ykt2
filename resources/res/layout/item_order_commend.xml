<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layoutRoot"
    android:background="@drawable/shape_write_bg"
    android:paddingBottom="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginHorizontal="@dimen/dp_16">
    <TextView
        android:textSize="9sp"
        android:textColor="?attr/app_bg"
        android:gravity="center"
        android:id="@+id/tvTJ"
        android:background="@drawable/shape_order_confirm_recommend_flag"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="推荐"
        android:paddingHorizontal="6dp"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/orderConfirmRecommendImg"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_16"
        android:src="@mipmap/ic_order_default"
        android:scaleType="fitXY"
        app:riv_corner_radius="@dimen/dp_12"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:textColor="?attr/first_txt_color"
        android:ellipsize="end"
        android:id="@+id/tvOrderConfirmTitleRecommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="-"
        android:maxLines="1"
        android:layout_toRightOf="@+id/orderConfirmRecommendImg"
        android:layout_marginStart="@dimen/dp_8"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        android:textColor="?attr/third_txt_color"
        android:ellipsize="end"
        android:id="@+id/tvOrderConfirmRecommendDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text="-"
        android:maxLines="1"
        android:layout_toRightOf="@+id/orderConfirmRecommendImg"
        android:layout_below="@+id/tvOrderConfirmTitleRecommend"
        android:layout_marginStart="@dimen/dp_8"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:textColor="?attr/main_theme_red_color"
        android:ellipsize="end"
        android:id="@+id/tvOrderConfirmRecommendPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text="-"
        android:maxLines="1"
        android:layout_toRightOf="@+id/orderConfirmRecommendImg"
        android:layout_alignBottom="@+id/orderConfirmRecommendImg"
        android:layout_marginStart="@dimen/dp_8"/>
</RelativeLayout>
