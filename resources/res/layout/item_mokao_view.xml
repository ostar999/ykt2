<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:paddingRight="17dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/black"
            android:id="@+id/tv_mokao_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="医考帮最后五套题"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/tv_mokao_buy"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/orange_font"
            android:id="@+id/tv_mokao_buy"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买"
            android:layout_toLeftOf="@+id/iv_mokao_arrow_right"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="10sp"
            android:textColor="@color/gray_font"
            android:id="@+id/tv_mokao_date"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_mokao_arrow_right"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_mokao_arrow_right"
            android:background="@drawable/icon_password2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
    </RelativeLayout>
</LinearLayout>
