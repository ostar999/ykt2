<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@drawable/shape_computer_statistics_top_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.psychiatrygarden.widget.CircleImageView
                    android:id="@+id/user_head"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="用户昵称"
                    android:layout_below="@+id/user_head"
                    android:layout_centerHorizontal="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_below="@+id/tv_username"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/tv_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="得分：0分"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="排名：0"
                        android:layout_marginStart="16dp"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/first_txt_color"
                        android:id="@+id/tv_score_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未知"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:paddingTop="24dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@drawable/shape_computer_statustics_line_bg"
                    android:layout_width="3dp"
                    android:layout_height="17dp"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="题型错题分布"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/type_recycler"
                android:background="@drawable/shape_new_gray_socket_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginHorizontal="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <LinearLayout
                android:paddingTop="24dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@drawable/shape_computer_statustics_line_bg"
                    android:layout_width="3dp"
                    android:layout_height="17dp"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="错题考点分布"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/kaodian_recycler"
                android:background="@drawable/shape_new_gray_socket_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginHorizontal="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <View
            android:background="?attr/new_gray_line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp">
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/new_fail_color"
                android:gravity="center"
                android:id="@+id/btn_review_test"
                android:background="@drawable/shape_computer_review_test_btn_bg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="回顾试卷"
                android:layout_weight="1"/>
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/second_txt_color"
                android:gravity="center"
                android:id="@+id/btn_reset_test"
                android:background="@drawable/shape_computer_reset_test_btn_bg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="重新考试"
                android:layout_weight="1"
                android:layout_marginStart="16dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
