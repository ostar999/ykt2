<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/new_bg_two_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_content_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <cn.webdemo.com.supporfragment.tablayout.MagicIndicator
            android:id="@+id/magicIndicator"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:paddingHorizontal="@dimen/dp_16"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_loading_view"
        android:background="?attr/combine_guide_bg"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_robot"
            android:background="@drawable/anim_combine_question_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"/>
        <TextView
            android:textColor="?attr/combine_guide_text_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/bg_combine_question_tips"
            android:paddingLeft="24dp"
            android:paddingTop="16dp"
            android:paddingRight="24dp"
            android:paddingBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="AI将按您的指令出题组卷\10 分模块针对性刷题，哪里薄弱刷哪里~"
            android:lineSpacingExtra="10dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"/>
    </LinearLayout>
</LinearLayout>
