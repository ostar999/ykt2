<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
        <RelativeLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="11sp"
                android:textColor="?attr/font_com"
                android:gravity="center"
                android:id="@+id/tv_question_xiazai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载"
                android:drawableTop="?attr/downxiazai"
                android:drawablePadding="5dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/redyuan"
                android:background="@drawable/red_yuan"
                android:visibility="invisible"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_toRightOf="@+id/tv_question_xiazai"/>
        </RelativeLayout>
        <TextView
            android:textSize="11sp"
            android:textColor="?attr/font_com"
            android:gravity="center"
            android:id="@+id/tv_question_shoucang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:drawableTop="?attr/collectimg"
            android:drawablePadding="5dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="11sp"
            android:textColor="?attr/font_com"
            android:gravity="center"
            android:id="@+id/tv_question_pl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="评论"
            android:drawableTop="?attr/pinglun"
            android:drawablePadding="5dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="11sp"
            android:textColor="?attr/font_com"
            android:gravity="center"
            android:id="@+id/tv_question_dz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="点赞"
            android:drawableTop="?attr/zantong"
            android:drawablePadding="5dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="11sp"
            android:textColor="?attr/font_com"
            android:gravity="center"
            android:id="@+id/tv_question_biji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="笔记"
            android:drawableTop="?attr/noteimg"
            android:drawablePadding="5dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:background="?attr/gray_line_126"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</RelativeLayout>
