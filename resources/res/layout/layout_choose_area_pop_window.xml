<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/view_dialog_root"
    android:background="?attr/half_tanslate_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/shape_white_bottom_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridView
            android:gravity="center_horizontal"
            android:id="@+id/gridview"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@color/transparent"
            android:horizontalSpacing="12dp"
            android:verticalSpacing="12dp"
            android:numColumns="4"
            android:paddingHorizontal="16dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:layout_below="@+id/gridview"
            android:translationZ="@dimen/dp_3">
            <View
                android:background="?attr/new_gray_line_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingHorizontal="@dimen/dp_16">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="?attr/third_txt_color"
                    android:gravity="center"
                    android:id="@+id/tvCancel"
                    android:background="@drawable/shape_app_bg_corners12_stroke"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_42"
                    android:text="取消"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="?attr/app_bg"
                    android:gravity="center"
                    android:id="@+id/tvSubmit"
                    android:background="@drawable/bg_download"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_42"
                    android:text="确定"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dp_8"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
