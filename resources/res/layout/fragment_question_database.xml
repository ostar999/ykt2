<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:background="?attr/app_theme"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:id="@+id/txt_actionbar_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="题库"
            android:singleLine="true"
            android:layout_centerInParent="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/question_color"
            android:textColorHint="?attr/dialog_input_hint_color"
            android:gravity="center_vertical"
            android:id="@+id/seachid"
            android:background="?attr/tijiao"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="用关键词搜索试试"
            android:singleLine="true"
            android:drawableLeft="?attr/icon_search"
            android:drawablePadding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:imeOptions="actionSearch"
            android:textCursorDrawable="@drawable/color_cursor"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/line_filtrate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/app_title_color"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/tv_filtrate"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:drawableRight="?attr/index_change_img"
                android:contentDescription="@null"
                android:layout_marginStart="5dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/stolor"
                android:gravity="center"
                android:id="@+id/tv_filtrateTxt"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linecicle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="13sp"
                android:textColor="@drawable/tiku_top_textcolor"
                android:gravity="center"
                android:id="@+id/tv_circle"
                android:background="?attr/tiku_top_btn"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="帖子"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@drawable/tiku_top_textcolor"
                android:gravity="center"
                android:id="@+id/tv_handout"
                android:background="?attr/tiku_top_btn_right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="经验"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linepai"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/app_title_color"
                android:gravity="center"
                android:id="@+id/tv_paixu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="排序"
                android:paddingEnd="10dp"/>
            <TextView
                android:textSize="14sp"
                android:gravity="center"
                android:id="@+id/customimg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="?attr/customimg"
                android:contentDescription="@null"
                android:paddingEnd="10dp"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/app_title_color"
                android:gravity="center"
                android:id="@+id/tv_search"
                android:paddingRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="?attr/index_search_img"
                android:contentDescription="@null"/>
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/app_title_color"
            android:id="@+id/titleluntan"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/frame_contain"
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"/>
</RelativeLayout>
