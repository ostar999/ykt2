<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:background_normal="@color/color_1C2134"
    app:corner_radius_top_left="16dp"
    app:corner_radius_top_right="16dp">
    <com.ruffian.library.widget.RLinearLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_top_indicator"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_24"
        app:background_normal="#cbcbcb"
        app:corner_radius="@dimen/dp_4"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/reportLl"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/color_303030"
            android:id="@+id/reportTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎举报,请选择举报理由"/>
        <TextView
            android:textSize="13sp"
            android:textColor="@color/color_909499"
            android:id="@+id/reportBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="（被举报的评论将及时清理）"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_909090"
        android:ellipsize="end"
        android:gravity="start"
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text=""
        android:maxLines="2"
        android:lineSpacingExtra="@dimen/dp_6"
        android:layout_marginHorizontal="@dimen/dp_16"/>
    <View
        android:id="@+id/line"
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_24"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <com.ruffian.library.widget.RTextView
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_303030"
        android:gravity="center"
        android:id="@+id/tv_comment_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="取消"
        android:layout_marginHorizontal="@dimen/dp_20"
        app:background_normal="@color/color_f7f8fa"
        app:corner_radius="100dp"/>
</com.ruffian.library.widget.RLinearLayout>
