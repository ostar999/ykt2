<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/new_bg_one_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="?attr/ic_mock_rank_top_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/ly_tabbar"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/iv_ranking_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="?attr/ic_black_back"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"/>
            <cn.webdemo.com.supporfragment.tablayout.MagicIndicator
                android:id="@+id/magic_indicator"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/iv_adjust_ranking_share"
                android:padding="@dimen/dp_10"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_5"
                android:src="?attr/zhuanfaceshi"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/iv_adjust_ranking_qr"
                android:padding="10dp"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:src="?attr/qr_adjust_icon"
                android:layout_toLeftOf="@+id/iv_adjust_ranking_share"/>
        </RelativeLayout>
        <com.psychiatrygarden.widget.CircleImageView
            android:id="@+id/img_user_head"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@mipmap/ic_avatar_def"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:id="@+id/tv_nickname"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:paddingHorizontal="@dimen/dp_16"/>
        <TextView
            android:textSize="13sp"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_23"
            android:text=""
            android:singleLine="true"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_11"
        android:textColor="?attr/new_fail_color"
        android:id="@+id/adjust_rank_title_tv"
        android:background="?attr/main_theme_five_deep_color"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingVertical="@dimen/dp_5"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:background="?attr/app_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <View
        android:visibility="gone"
        style="@style/new_gray_line_style"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="?attr/new_bg_two_color"
        android:gravity="center"
        android:id="@+id/btn_share"
        android:background="@drawable/shape_app_theme_corners_12"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="分享到好友"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginVertical="@dimen/dp_8"/>
</LinearLayout>
