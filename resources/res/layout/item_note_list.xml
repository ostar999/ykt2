<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginHorizontal="@dimen/dp_16">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.ruffian.library.widget.RImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="2dp"
            android:src="@drawable/personal_headimg_icon"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            android:layout_marginEnd="@dimen/dp_8"
            app:is_circle="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="12sp"
                            android:textColor="@color/color_0062ba"
                            android:id="@+id/tv_nick_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/personalVipIv"
                            android:visibility="gone"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/personal_vip_night"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="10sp"
                            android:textColor="@color/color_909090"
                            android:ellipsize="end"
                            android:id="@+id/tv_hospital"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxWidth="@dimen/dp_140"
                            android:maxLines="1"/>
                        <TextView
                            android:textSize="10sp"
                            android:textColor="@color/color_909090"
                            android:id="@+id/tv_time"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_12"/>
                    </LinearLayout>
                </LinearLayout>
                <com.ruffian.library.widget.RTextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_909090"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高评价"
                    android:drawablePadding="@dimen/dp_2"
                    app:icon_height_left="@dimen/dp_16"
                    app:icon_normal_left="@drawable/icon_good_review"
                    app:icon_width_left="@dimen/dp_16"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_303030"
                android:ellipsize="end"
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginBottom="@dimen/dp_17">
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/color_909090"
                    android:id="@+id/tv_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"/>
                <com.ruffian.library.widget.RTextView
                    android:textSize="10sp"
                    android:textColor="@color/color_606060"
                    android:gravity="center"
                    android:id="@+id/tv_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="公开"
                    android:includeFontPadding="false"
                    android:drawablePadding="3dp"
                    app:corner_radius="@dimen/dp_12"
                    app:icon_height_left="@dimen/dp_12"
                    app:icon_height_right="@dimen/dp_1"
                    app:icon_width_left="@dimen/dp_12"
                    app:icon_width_right="@dimen/dp_2"
                    app:icon_with_text="true"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/icon_edit"
                    android:contentDescription="@null"
                    android:layout_marginEnd="@dimen/dp_16"/>
                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/icon_delete"
                    android:contentDescription="@null"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/v_line"
        style="@style/line_style_book"/>
</LinearLayout>
