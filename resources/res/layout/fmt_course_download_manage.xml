<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/app_bg"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/editLayout"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:paddingHorizontal="@dimen/dp_16">
        <ImageView
            android:id="@+id/iv_close_back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="?attr/ic_black_back"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="下载管理"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:id="@+id/tv_select_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="编辑"
            android:paddingStart="@dimen/dp_20"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="vertical"
        android:id="@+id/recycledown"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_48"
        android:layout_marginBottom="@dimen/dp_55"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:id="@+id/ll_bottom_pannel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54">
        <TextView
            android:enabled="false"
            android:textSize="@dimen/sp_16"
            android:textColor="@drawable/color_download_dis_enable"
            android:gravity="center"
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="删除"
            android:layout_weight="1"/>
        <TextView
            android:enabled="false"
            android:textSize="@dimen/sp_16"
            android:textColor="@drawable/color_download_dis_enable"
            android:gravity="center"
            android:id="@+id/tv_download"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="下载"
            android:layout_weight="1"/>
        <TextView
            android:enabled="false"
            android:textSize="@dimen/sp_16"
            android:textColor="@drawable/color_download_dis_enable"
            android:gravity="center"
            android:id="@+id/tv_pause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="暂停"
            android:layout_weight="1"/>
    </LinearLayout>
</FrameLayout>
