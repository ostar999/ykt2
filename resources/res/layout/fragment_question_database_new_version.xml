<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.psychiatrygarden.widget.CustomEmptyView
        android:id="@+id/rl_loading"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ly_search"
        android:background="@drawable/shape_forum_search_edittext_bg"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="?attr/ic_forum_search"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_alignParentStart="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp">
            <TextView
                android:textColor="?attr/forth_txt_color"
                android:gravity="center_vertical"
                android:id="@+id/ly_to_search"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="搜索"/>
            <RelativeLayout
                android:id="@+id/keyWorkLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.viewpager2.widget.ViewPager2
                    android:orientation="vertical"
                    android:id="@+id/viewPager2Keywords"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:orientation="vertical"
            android:id="@+id/ctl_content"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ly_search">
            <com.google.android.material.appbar.AppBarLayout
                android:orientation="vertical"
                android:id="@+id/appbarlayout"
                android:background="?attr/app_bg"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="0dp">
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:expandedTitleGravity="top"
                    app:layout_scrollFlags="exitUntilCollapsed|scroll">
                    <LinearLayout
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:id="@+id/rellogview"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:id="@+id/ll_text_banner"
                            android:background="@drawable/circle_top_msg_bg"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginHorizontal="16dp"
                            android:paddingHorizontal="12dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="?attr/ic_circle_push_msg"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="34dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="8dp">
                                <androidx.viewpager2.widget.ViewPager2
                                    android:orientation="vertical"
                                    android:id="@+id/viewPager2Notice"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/iv_close"
                                android:padding="2dp"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="?attr/ic_close_circle_push_msg"/>
                        </LinearLayout>
                        <com.psychiatrygarden.widget.CircleKingKongLayout
                            android:id="@+id/ly_gride"
                            android:paddingTop="@dimen/dp_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <com.psychiatrygarden.widget.Circle24HotLayout
                            android:id="@+id/hot_circle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
                <cn.webdemo.com.supporfragment.tablayout.MagicIndicator
                    android:id="@+id/circlehs"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingHorizontal="16dp"/>
            </com.google.android.material.appbar.AppBarLayout>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpagecircle"
                android:background="?attr/app_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="?attr/forum_swipe_txt"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
