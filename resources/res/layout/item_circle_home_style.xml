<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.psychiatrygarden.widget.AutoSplitTextView
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="?attr/first_txt_color"
        android:ellipsize="end"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标签"
        android:maxLines="2"
        android:lineSpacingExtra="3dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_push_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:background="@drawable/shape_home_recomment_circle_bg"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:paddingHorizontal="16dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_push_circle_blue"
                android:layout_alignTop="@+id/ly_name"
                android:layout_alignBottom="@+id/ly_name"
                android:layout_marginEnd="8dp"/>
            <com.psychiatrygarden.widget.AutoSplitTextView
                android:textSize="@dimen/sp_13"
                android:textColor="?attr/first_txt_color"
                android:ellipsize="end"
                android:id="@+id/tv_circle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:layout_weight="1"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/third_txt_color"
                android:id="@+id/tv_circle_num"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10条推贴"
                android:layout_marginStart="@dimen/dp_24"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/view_one_ebook"
        android:background="@drawable/circle_item_ebook_bg"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_pic"
            android:layout_width="41dp"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:layout_marginVertical="4dp"
            app:riv_corner_radius="4dp"/>
        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="小红书顺序版"
            android:lines="1"
            android:layout_alignTop="@+id/img_pic"
            android:layout_toStartOf="@+id/ly_grade"
            android:layout_toEndOf="@+id/img_pic"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/third_txt_color"
            android:ellipsize="end"
            android:id="@+id/tv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_alignBottom="@+id/img_pic"
            android:layout_toStartOf="@+id/ly_grade"
            android:layout_toEndOf="@+id/img_pic"/>
        <LinearLayout
            android:id="@+id/ly_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/person_orange_color"
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/person_orange_color"
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"/>
        </LinearLayout>
    </RelativeLayout>
    <HorizontalScrollView
        android:id="@+id/ly_book_view"
        android:background="@drawable/shape_bg_one_round8"
        android:visibility="gone"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ly_add_book_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </HorizontalScrollView>
    <RelativeLayout
        android:id="@+id/ly_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_desc">
        <ImageView
            android:id="@+id/iv_pub_time"
            android:visibility="gone"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="?attr/ic_circle_item_pub_time"
            android:layout_centerInParent="true"
            android:layout_marginEnd="4dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/third_txt_color"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标记时间"
            android:layout_toRightOf="@+id/iv_pub_time"
            android:layout_centerVertical="true"/>
        <ImageView
            android:visibility="gone"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="?attr/ic_circle_item_comment"
            android:layout_alignTop="@+id/commnum"
            android:layout_centerInParent="true"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/commnum"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/third_txt_color"
            android:id="@+id/commnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:background="?attr/new_gray_line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"/>
</LinearLayout>
