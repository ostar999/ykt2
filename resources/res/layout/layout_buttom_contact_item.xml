<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="?attr/pop_frame_backgroup_color"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dp_10">
            <TextView
                android:id="@+id/tid"
                android:background="@drawable/shape_buttom_contact"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="24dp"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/tid">
                <TextView
                    android:textSize="16sp"
                    android:textColor="?attr/first_text_color"
                    android:ellipsize="end"
                    android:id="@+id/name"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="售前客服1"
                    android:lines="1"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="?attr/secondary_text_color"
                    android:ellipsize="end"
                    android:id="@+id/dyail"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="VIP会员、图书购买咨询图书购买咨询图书购买咨询图书购买咨询图书购买咨询图书购买咨询图书购买咨询图书购买咨询图书购买咨询图书购买咨询图书购买咨询图书购买咨询"
                    android:lines="2"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_indicator_right2"/>
    </LinearLayout>
    <View
        android:background="?attr/fourth_line_backgroup_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
