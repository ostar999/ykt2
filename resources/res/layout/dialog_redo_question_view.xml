<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/view_dialog_root"
    android:visibility="visible"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="?attr/ic_error_redo_bg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:paddingHorizontal="16dp">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/first_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="温馨提示"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/secondary_text_color"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="重做仅清空答案，不影响斩题记录。\10是否重做本章节试题？"
            android:lineSpacingExtra="3dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/btn_all_redo"
            android:background="?attr/red_round_coner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:text="重做本章节试题"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/dominant_color"
            android:gravity="center"
            android:id="@+id/btn_cancel"
            android:background="@drawable/shape_error_all_redo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:text="取消"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/tertiary_text_color"
            android:id="@+id/btn_redo_other_chapter"
            android:paddingTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重做多个章节试题"/>
    </LinearLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="82dp"
        android:src="?attr/ic_redo_edit"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
