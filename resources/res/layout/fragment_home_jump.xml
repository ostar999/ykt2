<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/new_bg_two_color"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/layoutGroupButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:paddingStart="@dimen/dp_16">
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/layoutGroupAllCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@drawable/tiku_top_textcolor"
                android:gravity="center"
                android:id="@+id/groupNameAllCourse"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:text="全部课程"/>
            <ImageView
                android:id="@+id/groupNameAllCourseImg"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_5"
                android:src="?attr/ic_comment_group_tag"
                android:layout_below="@+id/groupNameAllCourse"
                android:layout_alignStart="@+id/groupNameAllCourse"
                android:layout_alignEnd="@+id/groupNameAllCourse"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/layoutGroupLearnCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layoutGroupAllCourse"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_24">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@drawable/tiku_top_textcolor"
                android:gravity="center"
                android:id="@+id/groupNameLearnCenter"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:text="学习中心"/>
            <ImageView
                android:id="@+id/groupNameLearnCenterImg"
                android:visibility="invisible"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_5"
                android:src="?attr/ic_comment_group_tag"
                android:layout_below="@+id/groupNameLearnCenter"
                android:layout_alignStart="@+id/groupNameLearnCenter"
                android:layout_alignEnd="@+id/groupNameLearnCenter"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/imgLiveCalendarIcon"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="?attr/all_course_live_calendar"
            android:layout_toLeftOf="@+id/imgSearchAllCourse"
            android:layout_centerVertical="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginEnd="@dimen/dp_16"/>
        <ImageView
            android:id="@+id/imgLiveCalendarAnim"
            android:visibility="invisible"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toLeftOf="@+id/imgSearchAllCourse"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginEnd="@dimen/dp_12"/>
        <ImageView
            android:id="@+id/imgSearchAllCourse"
            android:visibility="visible"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="?attr/all_course_search_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16"/>
    </RelativeLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/courseViewPage"
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutGroupButton"/>
</RelativeLayout>
