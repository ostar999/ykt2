<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_shop_round_15"
    android:paddingLeft="15dp"
    android:paddingBottom="15dp"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/shopimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/app_icon"
        android:scaleType="centerCrop"
        app:riv_corner_radius="5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/shopimg"
        android:layout_alignBottom="@+id/shopimg">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/app_theme_red"
            android:id="@+id/priceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥156.80"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#8c8c8c"
            android:id="@+id/saleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="￥156.80"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/closeimg"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/closeimg"
        android:layout_alignParentRight="true"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        android:fillViewport="true"
        android:layout_above="@+id/buygoodsView"
        android:layout_below="@+id/shopimg"/>
    <TextView
        android:textSize="15sp"
        android:textColor="?attr/buy_btn_color"
        android:gravity="center"
        android:id="@+id/buygoodsView"
        android:background="@drawable/shape_goods_action"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:text="确定"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
