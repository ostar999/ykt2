<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/gray_font"
        android:gravity="center_vertical"
        android:id="@+id/tv_my_comment"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的评论"
        android:drawableLeft="@drawable/my_comment_icon"
        android:drawableRight="@drawable/icon_indicator_right"
        android:drawablePadding="15dp"/>
    <View
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/gray_font"
            android:gravity="center_vertical"
            android:id="@+id/tv_comment_me"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="评论我"
            android:drawableLeft="@drawable/plw_icon"
            android:drawableRight="@drawable/icon_indicator_right"
            android:drawablePadding="15dp"/>
        <ImageView
            android:id="@+id/iv_comment_me_new"
            android:background="@drawable/red_round"
            android:visibility="gone"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"/>
    </RelativeLayout>
    <View
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
