<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:background="@drawable/home_callme_bg"
        android:paddingBottom="@dimen/dp_8"
        android:layout_width="@dimen/dp_370"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_246">
        <ImageView
            android:id="@+id/xImgv"
            android:padding="@dimen/dp_6"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@drawable/common_x6"
            android:layout_marginEnd="@dimen/dp_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/logoImgv"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_60"
            app:layout_constraintBottom_toTopOf="@+id/callTv"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:id="@+id/sloganTv"
            android:paddingBottom="@dimen/dp_26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/flowTv"
            app:layout_constraintStart_toStartOf="@+id/flowTv"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:id="@+id/flowTv"
            android:background="@drawable/me_code_btn"
            android:visibility="visible"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_32"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="@string/me_set_join1"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintBottom_toTopOf="@+id/callTv"
            app:layout_constraintStart_toEndOf="@+id/logoImgv"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_727272"
            android:autoLink="all"
            android:id="@+id/callTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
