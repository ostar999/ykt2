<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_app_bg_corners_12"
    android:paddingLeft="@dimen/dp_12"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_8"
    android:paddingHorizontal="@dimen/dp_12">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/layoutRate">
        <com.psychiatrygarden.widget.CircleImageView
            android:id="@+id/schoolIcon"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/ic_order_default"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textColor="?attr/first_txt_color"
            android:gravity="center_vertical"
            android:id="@+id/tvSchoolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京大学"
            android:layout_toRightOf="@+id/schoolIcon"
            android:layout_marginStart="@dimen/dp_4"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_11"
        android:textColor="?attr/third_txt_color"
        android:id="@+id/tvSchoolTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text="985 · 211 · 双一流"
        android:layout_toLeftOf="@+id/layoutRate"
        android:layout_below="@+id/layoutName"/>
    <TextView
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:textColor="?attr/first_txt_color"
        android:id="@+id/tvSchoolZyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="100201-内科学"
        android:layout_toLeftOf="@+id/layoutRate"
        android:layout_below="@+id/tvSchoolTag"/>
    <RelativeLayout
        android:id="@+id/layoutRate"
        android:background="@drawable/shape_choose_school_blue_corners4"
        android:layout_width="@dimen/dp_41"
        android:layout_height="@dimen/dp_51"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="@dimen/sp_15"
                android:textColor="?attr/app_bg"
                android:gravity="center"
                android:id="@+id/tvRate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_23"
                android:text="45%"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_bold"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/app_bg"
                android:gravity="center"
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="冲"
                android:layout_below="@+id/tvRate"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/lines"
        android:background="?attr/new_gray_line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_below="@+id/tvSchoolZyName"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_below="@+id/lines">
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/tvSchoolGZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="?attr/third_txt_color"
                android:id="@+id/tvSchoolGZName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高分"
                android:layout_below="@+id/tvSchoolGZ"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout1"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/tvSchoolGZ_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="?attr/third_txt_color"
                android:id="@+id/tvSchoolGZ_7_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最低分"
                android:layout_below="@+id/tvSchoolGZ_7"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout2"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/tvSchoolSee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="?attr/third_txt_color"
                android:id="@+id/tvSchoolSeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平均分"
                android:layout_below="@+id/tvSchoolSee"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/layout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="?attr/first_txt_color"
                android:id="@+id/tvSchoolZYCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="?attr/third_txt_color"
                android:id="@+id/tvSchoolZYName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招生数"
                android:layout_below="@+id/tvSchoolZYCount"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
