<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:layout_width="@dimen/dp_199"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_white_corners_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="?attr/first_txt_color"
            android:background="@drawable/shape_new_bg_two_color_top_round12"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="计算器"
            android:paddingStart="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_8"/>
        <TextView
            android:textColor="?attr/first_txt_color"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:id="@+id/tv_result"
            android:background="@drawable/shape_bg_one_stroke_gray_round4"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_12"
            android:text="0"
            android:lines="1"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginVertical="@dimen/dp_12"
            android:paddingHorizontal="@dimen/dp_8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_16">
            <TextView
                android:id="@+id/one"
                android:text="1"
                style="@style/calculator_txt_value_style"/>
            <TextView
                android:id="@+id/two"
                android:text="2"
                style="@style/calculator_txt_value_style"/>
            <TextView
                android:id="@+id/three"
                android:text="3"
                style="@style/calculator_txt_value_style"/>
            <TextView
                android:id="@+id/add"
                android:text="+"
                style="@style/calculator_txt_value_style"/>
            <TextView
                android:id="@+id/clean"
                android:text="C"
                android:layout_marginEnd="0dp"
                style="@style/calculator_txt_value_style"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_16">
            <TextView
                android:id="@+id/four"
                android:text="4"
                style="@style/calculator_txt_value_style"/>
            <TextView
                android:id="@+id/five"
                android:text="5"
                style="@style/calculator_txt_value_style"/>
            <TextView
                android:id="@+id/six"
                android:text="6"
                style="@style/calculator_txt_value_style"/>
            <TextView
                android:id="@+id/substact"
                android:text="-"
                style="@style/calculator_txt_value_style"/>
            <TextView
                android:id="@+id/divide"
                android:text="/"
                android:layout_marginEnd="0dp"
                style="@style/calculator_txt_value_style"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_16">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/seven"
                        android:text="7"
                        style="@style/calculator_txt_value_style"/>
                    <TextView
                        android:id="@+id/eight"
                        android:text="8"
                        style="@style/calculator_txt_value_style"/>
                    <TextView
                        android:id="@+id/nine"
                        android:text="9"
                        style="@style/calculator_txt_value_style"/>
                    <TextView
                        android:id="@+id/multiply"
                        android:text="*"
                        style="@style/calculator_txt_value_style"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/zero"
                        android:text="0"
                        style="@style/calculator_txt_value_style"/>
                    <TextView
                        android:id="@+id/dot"
                        android:text="."
                        style="@style/calculator_txt_value_style"/>
                    <TextView
                        android:id="@+id/left"
                        android:text="("
                        style="@style/calculator_txt_value_style"/>
                    <TextView
                        android:id="@+id/right"
                        android:text=")"
                        style="@style/calculator_txt_value_style"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/equal"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_59"
                android:text="="
                android:layout_marginEnd="0dp"
                style="@style/calculator_txt_value_style"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/btn_close"
            android:background="@drawable/shape_bg_one_round8"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="关闭"/>
    </LinearLayout>
</LinearLayout>
