<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/ly_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:background="?attr/new_bg_two_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_500"
                app:banner_indicator_gravity="center"
                app:banner_indicator_height="@dimen/dp_6"
                app:banner_indicator_marginTop="@dimen/dp_30"
                app:banner_infinite_loop="false"/>
            <TextView
                android:textSize="@dimen/sp_10"
                android:textColor="@color/new_bg_one_color"
                android:id="@+id/tv_pic_num"
                android:background="@drawable/shape_hafl_translate_circle_100_bg"
                android:paddingLeft="@dimen/dp_6"
                android:paddingTop="@dimen/dp_1"
                android:paddingRight="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_alignBottom="@+id/banner"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="@dimen/dp_6"
                android:paddingVertical="@dimen/dp_1"/>
            <com.psychiatrygarden.widget.DotIndicatorScrollView
                android:id="@+id/indicator_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_below="@+id/banner"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:id="@+id/title"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:lineSpacingMultiplier="1.1"
            android:paddingHorizontal="16dp"/>
        <RelativeLayout
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="16dp">
            <com.psychiatrygarden.widget.CircleImageView
                android:id="@+id/imgheader"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"/>
            <com.psychiatrygarden.widget.CircleImageView
                android:id="@+id/jiav"
                android:visibility="gone"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/jiav"
                android:scaleType="centerCrop"
                android:layout_alignBottom="@+id/imgheader"
                android:layout_marginEnd="-5dp"
                android:layout_alignEnd="@+id/imgheader"/>
            <TextView
                android:textSize="13dp"
                android:textColor="#ff7e00"
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="eweeeeeee"
                android:layout_toRightOf="@+id/imgheader"/>
            <ImageView
                android:id="@+id/isvipimg"
                android:visibility="gone"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/vipimg"
                android:scaleType="fitCenter"
                android:layout_toRightOf="@+id/username"
                android:layout_alignTop="@+id/username"
                android:layout_alignBottom="@+id/username"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/linetitlschool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgheader"
                android:layout_alignBottom="@+id/imgheader"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/isverauth"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/auth2img"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="?attr/item_school_color"
                    android:id="@+id/timedata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <WebView
            android:id="@+id/webview"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"/>
        <EditText
            android:textSize="16sp"
            android:textColor="?attr/circlecolor"
            android:id="@+id/titleContent"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:cursorVisible="false"
            android:lineSpacingExtra="8dp"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_pic_big"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="true"
            android:layout_marginHorizontal="16dp"
            app:riv_corner_radius="8dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_long_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="0dp">
            <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                android:id="@+id/img_pic_big_long"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ly_pic_two"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_165"
                android:layout_weight="1"
                android:layout_marginEnd="12dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_pic_one"
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="8dp"/>
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/white"
                    android:layout_gravity="end|bottom"
                    android:id="@+id/tv_long_pic_1"
                    android:background="@drawable/bg_long_pic_tag"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="长图"
                    android:layout_alignBottom="@+id/img_pic_one"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_alignEnd="@+id/img_pic_one"
                    android:paddingHorizontal="@dimen/dp_4"
                    android:paddingVertical="@dimen/dp_2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_165"
                android:layout_weight="1">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_pic_two"
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="8dp"/>
                <TextView
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/white"
                    android:layout_gravity="end|bottom"
                    android:id="@+id/tv_long_pic_2"
                    android:background="@drawable/bg_long_pic_tag"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="长图"
                    android:layout_alignBottom="@+id/img_pic_two"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_alignEnd="@+id/img_pic_two"
                    android:paddingHorizontal="@dimen/dp_4"
                    android:paddingVertical="@dimen/dp_2"/>
            </RelativeLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pic_recycler"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"/>
        <com.psychiatrygarden.widget.MyListView
            android:id="@+id/fjlistview"
            android:visibility="gone"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"/>
        <com.psychiatrygarden.widget.MyListView
            android:id="@+id/book_ListView"
            android:visibility="gone"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="16dp"
            android:listSelector="@color/transparent"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="16dp"
            android:layout_marginHorizontal="16dp"/>
        <com.psychiatrygarden.widget.MyListView
            android:id="@+id/push_ListView"
            android:visibility="gone"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:listSelector="@color/transparent"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="16dp"
            android:layout_marginHorizontal="16dp"/>
        <include
            android:id="@+id/toupiaolayout"
            android:visibility="gone"
            layout="@layout/activity_weitoupiao"/>
        <RelativeLayout
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:paddingHorizontal="16dp">
            <ImageView
                android:id="@+id/iv_tiezi_more"
                android:visibility="gone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/tiezi_more_icon"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="11sp"
                android:textColor="?attr/circle_tag"
                android:id="@+id/topicName"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ewqweqweqw"
                android:drawableLeft="?attr/circle_tag_icon"
                android:drawablePadding="5dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_tiezi_more"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/llay_support"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/forth_txt_color"
                    android:id="@+id/tv_support"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_24"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/forth_txt_color"
                    android:id="@+id/tv_oppose"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_24"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/forth_txt_color"
                    android:id="@+id/tv_reply"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/gap_header_circle"
            android:background="?attr/new_bg_two_color"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </LinearLayout>
    <TextView
        android:textColor="?attr/question_color"
        android:id="@+id/wrongtxt"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="出错了..."/>
</RelativeLayout>
