<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/app_theme_red"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="近20年真题"
                    android:drawableTop="@drawable/planning_liebiao"
                    android:drawablePadding="10dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/gray_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="共60天"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/llay_riqi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016.7.17-9.16"
                    android:drawableTop="@drawable/planning_rili"
                    android:drawablePadding="10dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/gray_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="共3600题"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_progress"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.psychiatrygarden.widget.RoundProgressBar
                    android:id="@+id/ronun_progress"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="560"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="共3600题"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="每天3-4小时"
                android:drawableTop="@drawable/planning_clock"
                android:drawablePadding="10dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="52201人参加"
            android:drawableLeft="@drawable/planning_renshu_white"
            android:drawablePadding="3dp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_planning_execute"
        android:background="@color/white"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:listSelector="@color/transparent"
        android:divider="@color/gray_bg"
        android:dividerHeight="10dp"
        android:layout_weight="11"
        android:headerDividersEnabled="false"/>
    <com.psychiatrygarden.widget.AlphaButton
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/btn_next"
        android:background="@color/app_theme_red"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始执行规划"/>
</LinearLayout>
