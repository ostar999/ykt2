<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:orientation="vertical"
        android:id="@+id/appBarLayout"
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:expanded="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapse"
            android:background="?attr/app_theme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="snap|exitUntilCollapsed|scroll">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/bartoolview"
                android:background="?attr/app_theme"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/app_title_color"
                        android:id="@+id/tv_school_name"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:drawablePadding="5dp"
                        android:drawableEnd="@mipmap/circle_school_switch"
                        android:layout_marginEnd="92dp"
                        app:autoSizeMinTextSize="8sp"
                        app:autoSizeTextType="uniform"/>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="?attr/forum_instro_txt"
                        android:ellipsize="end"
                        android:id="@+id/tv_school_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:maxLines="2"
                        android:minLines="2"
                        android:layout_centerVertical="true"
                        android:lineSpacingExtra="1.2dp"
                        android:lineSpacingMultiplier="1.2"
                        android:layout_marginEnd="20dp"
                        android:layout_toStartOf="@+id/iv_circle_school"/>
                    <com.psychiatrygarden.widget.CircleImageView
                        android:id="@+id/iv_circle_school"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="20dp"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <com.psychiatrygarden.widget.StackLayout
                    android:id="@+id/sl_school_flag_join"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:itemMargin="10dp"/>
                <View
                    android:background="?attr/app_theme"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:background="?attr/app_theme"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">
                <RelativeLayout
                    android:background="?attr/app_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/back"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:src="?attr/icon_back"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="?attr/forum_change_txt"
                        android:gravity="center"
                        android:id="@+id/titleTxt"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:drawablePadding="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_toEndOf="@+id/back"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingEnd="10dp"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:textSize="15sp"
                            android:textColor="?attr/forum_change_txt"
                            android:gravity="center"
                            android:id="@+id/followimg"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="切换"
                            android:drawablePadding="5dp"
                            android:paddingEnd="5dp"/>
                        <ImageView
                            android:id="@+id/logImgClick"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="?attr/logimg"
                            android:paddingStart="20dp"/>
                        <ImageView
                            android:id="@+id/iv_circle_school_search"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="?attr/search_froum_write"
                            android:paddingStart="20dp"
                            android:paddingEnd="10dp"/>
                        <ImageView
                            android:id="@+id/iv_circle_school_menu"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:visibility="gone"
                            android:layout_width="40dp"
                            android:layout_height="48dp"
                            android:src="?attr/meau_forum"
                            android:paddingStart="15dp"
                            android:paddingEnd="10dp"/>
                    </LinearLayout>
                    <com.psychiatrygarden.widget.ClearEditText
                        android:textSize="13sp"
                        android:textColor="#646464"
                        android:textColorHint="#646464"
                        android:gravity="center_vertical"
                        android:id="@+id/clearTxt"
                        android:background="@drawable/shape_forum_search_index"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:hint="用关键词搜索试试"
                        android:singleLine="true"
                        android:drawablePadding="10dp"
                        android:layout_centerInParent="true"
                        android:imeOptions="actionSearch"
                        android:drawableStart="@drawable/search_froum"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_collapseMode="pin"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <cn.webdemo.com.supporfragment.tablayout.MagicIndicator
                android:id="@+id/magic_indicator"
                android:background="?attr/bg_backgroud"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@mipmap/icon_circle_menu_right"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/listf"
        android:background="?attr/bg_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_gravity="bottom|right"
        android:id="@+id/floatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:src="@drawable/pimg2"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/transparent"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:fabSize="normal"
        app:layout_behavior="@string/float_behavior2"
        app:maxImageSize="60dp"
        app:pressedTranslationZ="0dp"
        app:rippleColor="@color/transparent"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/netimg"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/network_load_fail"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
