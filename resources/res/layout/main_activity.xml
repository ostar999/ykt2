<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/common_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleCl"
        android:background="@color/c_5fffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iconImgv"
            android:layout_width="@dimen/dp_32"
            android:layout_height="wrap_content"
            android:src="@drawable/common_back"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:textColor="@color/c_173a8e"
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_title"
            android:paddingStart="@dimen/dp_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iconImgv"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/codeImgv"
            android:padding="@dimen/dp_2"
            android:visibility="invisible"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/home_icon_code"
            android:layout_marginEnd="@dimen/dp_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/newImgv"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/newImgv"
            android:padding="@dimen/dp_2"
            android:visibility="invisible"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/home_icon_new"
            android:layout_marginEnd="@dimen/dp_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/callImgv"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/callImgv"
            android:padding="@dimen/dp_2"
            android:visibility="invisible"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/home_icon_call"
            android:layout_marginEnd="@dimen/dp_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/meImgv"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/meImgv"
            android:padding="@dimen/dp_2"
            android:visibility="invisible"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/home_icon_me"
            android:layout_marginEnd="@dimen/dp_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/setImgv"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/setImgv"
            android:padding="@dimen/dp_2"
            android:visibility="invisible"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/home_icon_set"
            android:layout_marginEnd="@dimen/dp_44"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/c_2a57c2"
            android:gravity="end|center_vertical"
            android:id="@+id/newTv"
            android:background="@drawable/main_new"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_26"
            android:text="@string/home_new"
            android:paddingEnd="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_44"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/margueeCl"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginHorizontal="@dimen/dp_50"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toStartOf="@+id/newTv"
            app:layout_constraintStart_toEndOf="@+id/nameTv"
            app:layout_constraintTop_toTopOf="parent">
            <View
                android:background="@drawable/run_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_marginRight="@dimen/dp_60"
                android:layout_marginHorizontal="@dimen/dp_60"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.sunfusheng.marqueeview.MarqueeView
                android:id="@+id/margueeV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:mvAnimDuration="1000"
                app:mvDirection="bottom_to_top"
                app:mvGravity="center"
                app:mvInterval="5000"
                app:mvSingleLine="true"
                app:mvTextColor="@color/c_5e5e5e"
                app:mvTextSize="@dimen/sp_11"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/view"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leftRv"
        android:background="@drawable/home_left_bg"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_0"
        android:paddingEnd="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCl"/>
    <com.noober.background.view.BLFrameLayout
        android:id="@+id/tableBfl"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginHorizontal="@dimen/dp_12"
        app:bl_corners_radius="@dimen/dp_6"
        app:bl_solid_color="@color/c_54ffffff"
        app:layout_constraintEnd_toEndOf="@+id/rightRv"
        app:layout_constraintStart_toStartOf="@+id/rightRv"
        app:layout_constraintTop_toBottomOf="@+id/titleCl">
        <com.angcyo.tablayout.DslTabLayout
            android:id="@+id/dslTablayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tab_default_index="-1"
            app:tab_deselect_color="@color/c_173a8e"
            app:tab_divider_drawable="@drawable/common_vertical"
            app:tab_divider_width="@dimen/dp_2"
            app:tab_draw_divider="true"
            app:tab_draw_indicator="true"
            app:tab_enable_text_bold="true"
            app:tab_indicator_drawable="@drawable/physical_label_select"
            app:tab_indicator_height="MATCH_PARENT"
            app:tab_indicator_width="MATCH_PARENT"
            app:tab_item_is_equ_width="true"
            app:tab_select_color="@color/color_white"/>
    </com.noober.background.view.BLFrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rightRv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/leftRv"
        app:layout_constraintTop_toBottomOf="@+id/tableBfl"
        app:layout_goneMarginTop="@dimen/dp_20"/>
    <FrameLayout
        android:id="@+id/ruleFl"
        android:visibility="gone"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCl">
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/ruleTv"
            android:background="@drawable/main_rule_bg"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:text="@string/me_integral_rule1"
            android:paddingStart="@dimen/dp_20"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/ruleImgv"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/main_rule_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCl"/>
</androidx.constraintlayout.widget.ConstraintLayout>
