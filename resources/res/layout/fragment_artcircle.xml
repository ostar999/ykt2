<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_circe"
        android:background="@color/app_theme_red"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/tiku_top_menu_bg"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="14sp"
                android:textColor="@drawable/tiku_top_textcolor"
                android:gravity="center"
                android:id="@+id/tv_circle_all"
                android:background="@drawable/tiku_top_btn"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="分享"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@drawable/tiku_top_textcolor"
                android:gravity="center"
                android:id="@+id/tv_circlr_quan"
                android:background="@drawable/tiku_top_btn_right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="交流"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fragment_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_circe"/>
</RelativeLayout>
