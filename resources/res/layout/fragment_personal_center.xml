<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/gray_bg"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/app_theme_red"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:id="@+id/tv_exam_day"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离考研？天"
                android:singleLine="true"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:id="@+id/tv_set"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_alignParentRight="true"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_set">
                <com.psychiatrygarden.widget.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mycenter_icon"
                    android:background="@drawable/personal_headimg_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    app:border_color="@color/white"
                    app:border_width="1dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击登录"
                        android:singleLine="true"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/iv_user_sex"
                        android:background="@drawable/male_icon"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="@null"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_my_dengji"
                        android:background="@drawable/dengji_my_bg"
                        android:paddingLeft="8dp"
                        android:paddingTop="2dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="2dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="L1级 "
                        android:singleLine="true"/>
                </LinearLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:id="@+id/tv_ranking"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="最新排名：全国？名，目标院校0名 "
                        android:singleLine="true"
                        android:drawableRight="@drawable/me_white_arrow"
                        android:drawablePadding="3dp"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:id="@+id/tv_user_school"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="考研院校 "
                        android:singleLine="true"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:id="@+id/tv_login_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="您还没有登录，没法获取院校信息 "
                        android:singleLine="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ll_friend_message"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:id="@+id/tv_my_friend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:singleLine="true"
                        android:drawableLeft="@drawable/my_pengyou_icon"
                        android:drawablePadding="5dp"/>
                    <View
                        android:background="@color/gray_line"
                        android:layout_width="0.5dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:id="@+id/tv_my_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="消息"
                            android:singleLine="true"
                            android:drawableLeft="@drawable/my_xiaoxi_icon"
                            android:drawablePadding="5dp"/>
                        <TextView
                            android:textSize="8sp"
                            android:textColor="@color/app_theme_red"
                            android:gravity="center"
                            android:id="@+id/tv_my_message_tishi"
                            android:background="@drawable/white_round"
                            android:visibility="gone"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="-5dp"
                            android:text="1"
                            android:layout_toRightOf="@+id/tv_my_message"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_font"
            android:gravity="center_vertical"
            android:id="@+id/tv_personal_info"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:drawableLeft="@drawable/grzl_icon"
            android:drawableRight="@drawable/icon_indicator_right"
            android:drawablePadding="15dp"/>
        <View
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_font"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的好友"
            android:drawableLeft="@drawable/grzl_icon"
            android:drawableRight="@drawable/icon_indicator_right"
            android:drawablePadding="15dp"/>
        <View
            android:background="@color/gray_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/gray_font"
                android:gravity="center_vertical"
                android:id="@+id/tv_my_jingyan"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的经验"
                android:drawableLeft="@drawable/jingyan_icon"
                android:drawableRight="@drawable/icon_indicator_right"
                android:drawablePadding="15dp"/>
            <ImageView
                android:id="@+id/iv_comment_me_jingyan"
                android:background="@drawable/red_round"
                android:visibility="gone"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"/>
        </RelativeLayout>
        <View
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_font"
            android:gravity="center_vertical"
            android:id="@+id/tv_my_topic"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的徽章"
            android:drawableLeft="@drawable/huizhangnew"
            android:drawableRight="@drawable/icon_indicator_right"
            android:drawablePadding="15dp"/>
        <View
            android:background="@color/gray_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <View
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/gray_font"
                android:gravity="center_vertical"
                android:id="@+id/tv_my_question"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的题库"
                android:drawableLeft="@drawable/my_question_icon"
                android:drawableRight="@drawable/icon_indicator_right"
                android:drawablePadding="15dp"/>
            <ImageView
                android:id="@+id/iv_comment_me_new"
                android:background="@drawable/red_round"
                android:visibility="gone"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"/>
        </RelativeLayout>
        <View
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/gray_font"
                android:gravity="center_vertical"
                android:id="@+id/tv_my_circle"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的圈子"
                android:drawableLeft="@drawable/my_circle_icon"
                android:drawableRight="@drawable/icon_indicator_right"
                android:drawablePadding="15dp"/>
            <ImageView
                android:id="@+id/iv_tv_3_new"
                android:background="@drawable/red_round"
                android:visibility="gone"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"/>
        </RelativeLayout>
        <View
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_font"
            android:gravity="center_vertical"
            android:id="@+id/tv_myorder"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:drawableLeft="@drawable/my_order_icon"
            android:drawableRight="@drawable/icon_indicator_right"
            android:drawablePadding="15dp"/>
        <View
            android:background="@color/gray_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"/>
        <View
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_font"
            android:gravity="center_vertical"
            android:id="@+id/tv_download"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的课程"
            android:drawableLeft="@drawable/my_download_icon"
            android:drawableRight="@drawable/icon_indicator_right"
            android:drawablePadding="15dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_font"
            android:gravity="center_vertical"
            android:id="@+id/tv_my_store"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的商城"
            android:drawableLeft="@drawable/my_store_icon"
            android:drawableRight="@drawable/icon_indicator_right"
            android:drawablePadding="15dp"/>
        <View
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <View
            android:background="@color/gray_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_font"
            android:gravity="center_vertical"
            android:id="@+id/tv_my_invitation_code"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的邀请码"
            android:drawableLeft="@drawable/yqzc"
            android:drawableRight="@drawable/icon_indicator_right"
            android:drawablePadding="15dp"/>
        <View
            android:background="@color/gray_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <View
            android:background="@color/gray_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_font"
            android:gravity="center_vertical"
            android:id="@+id/tv_my_course"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的课程"
            android:drawableLeft="@drawable/my_course_icon"
            android:drawableRight="@drawable/icon_indicator_right"
            android:drawablePadding="15dp"/>
        <View
            android:background="@color/gray_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_font"
            android:gravity="center_vertical"
            android:id="@+id/my_xiaohongshu"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的小红书"
            android:drawableLeft="@drawable/wodexiaohongshu"
            android:drawableRight="@drawable/icon_indicator_right"
            android:drawablePadding="15dp"/>
        <View
            android:background="@color/gray_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/gray_font"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的消息"
                android:drawableLeft="@drawable/my_message_icon"
                android:drawableRight="@drawable/icon_indicator_right"
                android:drawablePadding="15dp"/>
            <ImageView
                android:id="@+id/iv_message_new"
                android:background="@drawable/red_round"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"/>
        </RelativeLayout>
        <View
            android:background="@color/gray_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/gray_font"
            android:gravity="center_vertical"
            android:id="@+id/tv_data_migration"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="答题记录迁移"
            android:drawableLeft="@drawable/my_answer_record_icon"
            android:drawableRight="@drawable/icon_indicator_right"
            android:drawablePadding="15dp"/>
        <View
            android:background="@color/gray_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
</ScrollView>
