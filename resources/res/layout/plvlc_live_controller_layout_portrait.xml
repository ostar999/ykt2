<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_controller_port_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/gradient_bar_port_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/gradient_bar_top_port_view"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:src="@drawable/plvlc_controller_video_top_portrait_gradient"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:src="@drawable/plvlc_controller_video_bottom_portrait_gradient"
            android:scaleType="fitXY"/>
    </FrameLayout>
    <com.easefun.polyv.livecloudclass.modules.media.widget.PLVLCPPTTurnPageLayout
        android:id="@+id/video_ppt_turn_page_layout"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/video_name_port_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-6dp"
        android:text=""
        android:maxEms="8"
        android:singleLine="true"
        android:layout_toRightOf="@+id/back_port_iv"
        android:layout_alignTop="@+id/back_port_iv"
        android:layout_alignBottom="@+id/back_port_iv"/>
    <TextView
        android:textSize="10sp"
        android:textColor="#d0d0d0"
        android:gravity="center_vertical"
        android:id="@+id/video_viewer_count_port_tv"
        android:background="@drawable/plvlc_controller_viewer_count_bg"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"
        android:text="2.3w次播放"
        android:layout_below="@+id/video_name_port_tv"
        android:layout_alignLeft="@+id/video_name_port_tv"/>
    <ImageView
        android:id="@+id/back_port_iv"
        android:padding="8dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/plvlc_controller_back"/>
    <ImageView
        android:id="@+id/video_pause_port_iv"
        android:padding="8dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/plvlc_controller_play_and_pause_selector"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/video_refresh_port_iv"
        android:padding="8dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/plvlc_controller_refresh_video"
        android:layout_toRightOf="@+id/video_pause_port_iv"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/video_ppt_switch_port_iv"
        android:padding="8dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/plvlc_controller_ppt_sub_selector"
        android:layout_toLeftOf="@+id/video_screen_switch_port_iv"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/video_screen_switch_port_iv"
        android:padding="8dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/plvlc_controller_fullscreen"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/plvlc_live_more_control_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/plvlc_live_control_floating_iv"
            android:padding="8dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/plvlc_live_controller_floating_icon"
            android:layout_marginEnd="4dp"/>
        <ImageView
            android:id="@+id/more_port_iv"
            android:padding="8dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/plvlc_controller_more"
            android:layout_marginEnd="4dp"/>
    </LinearLayout>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/plvlc_live_player_controller_tv_reopen_floating_view"
        android:background="@drawable/plvlc_bg_player_controller_reopen_floating"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="40dp"
        android:text="@string/plv_player_controller_reopen_floating_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
