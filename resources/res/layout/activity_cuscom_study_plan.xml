<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/new_bg_one_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_save">
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_20"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16">
            <RelativeLayout
                android:layout_gravity="top"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_18"
                android:paddingBottom="@dimen/dp_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_18">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:id="@+id/tv_plan_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规划名称"
                    android:layout_marginEnd="@dimen/dp_32"/>
                <EditText
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/third_txt_color"
                    android:gravity="end|top"
                    android:id="@+id/et_plan_name"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:hint="请输入规划名称"
                    android:maxLength="20"
                    android:layout_weight="1"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:layout_toEndOf="@+id/tv_plan_label"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View
                android:layout_gravity="center"
                android:background="?attr/new_bg_one_border_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_exam_year"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="试题年份"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/third_txt_color"
                    android:gravity="end"
                    android:id="@+id/tv_exam_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="选择年份"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_12"/>
                <ImageView
                    android:padding="@dimen/dp_2"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@drawable/ic_arrow_right_new"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </LinearLayout>
            <View
                android:layout_gravity="center"
                android:id="@+id/view_exam_year_line"
                android:background="?attr/new_bg_one_border_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_chapters"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="章节选择"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/third_txt_color"
                    android:gravity="end"
                    android:id="@+id/tv_chapters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="选择章节"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_12"/>
                <ImageView
                    android:padding="@dimen/dp_2"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@drawable/ic_arrow_right_new"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </LinearLayout>
            <View
                android:layout_gravity="center"
                android:background="?attr/new_bg_one_border_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_test_filter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="考点筛选"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/third_txt_color"
                    android:gravity="end"
                    android:id="@+id/tv_test_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="选择考点"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_12"/>
                <ImageView
                    android:padding="@dimen/dp_2"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@drawable/ic_arrow_right_new"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="?attr/custom_plan_select_bg"/>
                <com.psychiatrygarden.widget.GradientTextView
                    android:textStyle="bold"
                    android:id="@+id/tv_filter_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="筛选出 题"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@drawable/custom_plan_select_line_l"
                    android:scaleType="fitXY"
                    android:layout_toLeftOf="@+id/tv_filter_result"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:src="@drawable/custom_plan_select_line_r"
                    android:scaleType="fitXY"
                    android:layout_toRightOf="@+id/tv_filter_result"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ll_start_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="规划开始时间"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/third_txt_color"
                    android:gravity="end"
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="默认当天"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_12"/>
                <ImageView
                    android:padding="@dimen/dp_2"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@drawable/ic_arrow_right_new"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </LinearLayout>
            <View
                android:layout_gravity="center"
                android:background="?attr/new_bg_one_border_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_end_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="规划结束时间"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/first_txt_color"
                    android:textColorHint="?attr/third_txt_color"
                    android:gravity="end"
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="未设置"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_12"/>
                <ImageView
                    android:padding="@dimen/dp_2"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@drawable/ic_arrow_right_new"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </LinearLayout>
            <View
                android:layout_gravity="center"
                android:background="?attr/new_bg_one_border_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_18">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
                    <TextView
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:textColor="?attr/first_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APP系统提示"/>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="?attr/third_txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="开启后，按照设置时间段给你发送app提醒"/>
                </LinearLayout>
                <Switch
                    android:id="@+id/switch_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_24"
                    android:thumb="@drawable/thumb_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/switch_selector_green"/>
            </RelativeLayout>
            <View
                android:layout_gravity="center"
                android:id="@+id/view_line"
                android:background="?attr/new_bg_one_border_color"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_reminder_time"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="?attr/first_txt_color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="提醒时间"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/third_txt_color"
                    android:textColorHint="?attr/third_txt_color"
                    android:gravity="end"
                    android:id="@+id/tv_reminder_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:hint="未设置"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_12"/>
                <ImageView
                    android:padding="@dimen/dp_2"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@drawable/ic_arrow_right_new"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </LinearLayout>
            <View
                android:layout_gravity="center"
                android:background="?attr/new_bg_one_border_color"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/dp_30"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:textColor="?attr/wrong_question_tab_bg"
        android:gravity="center"
        android:id="@+id/btn_save"
        android:background="@drawable/shape_app_theme_corners_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_34"
        android:text="保存"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/dp_16"/>
</RelativeLayout>
