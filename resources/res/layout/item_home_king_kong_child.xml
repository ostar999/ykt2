<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_74"
    android:minWidth="@dimen/dp_65">
    <View
        android:id="@+id/empty_view"
        android:visibility="invisible"
        android:layout_width="@dimen/dp_9"
        android:layout_height="@dimen/dp_2"
        android:layout_alignEnd="@+id/ll_root"/>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/ll_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/app_icon"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/dp_12"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="?attr/first_txt_color"
            android:layout_gravity="center"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_below="@+id/iv_icon"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:textColor="?attr/app_bg"
        android:layout_gravity="end"
        android:id="@+id/tv_label"
        android:background="@drawable/bg_kingkong_label"
        android:paddingLeft="@dimen/dp_5"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标签呀"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="@dimen/dp_5"
        android:paddingVertical="@dimen/dp_2"/>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/ly_live"
        android:background="@drawable/bg_kingkong_label"
        android:paddingLeft="@dimen/dp_5"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/empty_view"
        android:paddingHorizontal="@dimen/dp_5"
        android:paddingVertical="@dimen/dp_2">
        <ImageView
            android:id="@+id/img_live"
            android:background="@drawable/live_calendar_living_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
