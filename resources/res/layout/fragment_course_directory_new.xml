<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="32dp"
        android:minHeight="?attr/actionBarSize"
        app:layout_collapseMode="pin">
        <com.google.android.material.appbar.AppBarLayout
            android:orientation="vertical"
            android:id="@+id/appBarLayout"
            android:background="?attr/app_bg"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:expanded="true">
            <RelativeLayout
                android:id="@+id/rl_content"
                android:background="?attr/app_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_34"
                app:layout_scrollFlags="snap|exitUntilCollapsed|scroll">
                <cn.webdemo.com.supporfragment.tablayout.MagicIndicator
                    android:id="@+id/magicIndicator"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginTop="@dimen/dp_4"
                    android:paddingHorizontal="@dimen/dp_16"/>
                <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/openrel"
                    android:background="?attr/new_bg_two_color"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_34"
                    android:layout_alignBottom="@+id/magicIndicator">
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:textColor="?attr/first_txt_color"
                        android:gravity="center"
                        android:id="@+id/opentxt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="全部"/>
                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:src="?attr/ic_black_back"
                        android:layout_toRightOf="@+id/opentxt"
                        android:layout_centerVertical="true"
                        android:rotation="-90"/>
                </RelativeLayout>
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/newViewPage"
            android:background="?attr/app_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>
