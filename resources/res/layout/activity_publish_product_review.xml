<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="10sp"
        android:textColor="?attr/item_school_color"
        android:id="@+id/tv_order"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单编号："
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:textSize="10sp"
        android:id="@+id/tv_oder_time"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下单时间：2019-23-12"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <com.psychiatrygarden.widget.SkinGrakImagView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/textView3"
        android:background="?attr/gray_line_126"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:text="TextView"
        android:layout_below="@+id/tv_order"/>
    <TextView
        android:textColor="?attr/item_school_color"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="评分"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_alignTop="@+id/imageView1"/>
    <TextView
        android:id="@+id/textView5"
        android:background="?attr/gray_line_126"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView1"
        android:layout_alignParentLeft="true"/>
    <EditText
        android:textSize="12sp"
        android:textColor="?attr/question_color"
        android:textColorHint="?attr/dialog_input_hint_color"
        android:gravity="top"
        android:id="@+id/edit_content"
        android:background="?attr/gray_line_126"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:minHeight="120dp"
        android:hint="请输入您对商品的使用感受 "
        android:layout_below="@+id/textView5"
        android:lineSpacingMultiplier="1.2"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/noScrollgridview"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/edit_content"/>
    <com.psychiatrygarden.widget.ProperRatingBar
        android:id="@+id/lowerRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_below="@+id/textView4"
        app:prb_clickable="true"
        app:prb_defaultRating="5"
        app:prb_tickNormalDrawable="@drawable/kongxing"
        app:prb_tickSelectedDrawable="@drawable/xing"
        app:prb_tickSpacing="6dp"
        app:prb_totalTicks="5"/>
</RelativeLayout>
