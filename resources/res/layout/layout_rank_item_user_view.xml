<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ly_item"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:paddingHorizontal="@dimen/dp_8">
        <TextView
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            android:textColor="@color/forth_txt_color"
            android:gravity="center"
            android:id="@+id/tv_no_sort"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未上榜"
            android:layout_marginEnd="@dimen/dp_16"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            android:textColor="@color/forth_txt_color"
            android:gravity="center"
            android:id="@+id/tv_sort"
            android:background="@mipmap/ic_rank_first"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:text=""
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_25"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.psychiatrygarden.widget.CircleImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/ic_avatar_def"
                android:layout_marginEnd="@dimen/dp_12"
                app:border_color="@color/forth_txt_color"
                app:border_width="@dimen/dp_1"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/first_txt_color"
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吃不下一点"/>
            <ImageView
                android:id="@+id/img_vip"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/vipimg"
                android:layout_marginStart="@dimen/dp_8"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/first_txt_color"
            android:id="@+id/tv_question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0道"/>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:background="@color/new_gray_line_color"
        style="@style/line_style"/>
</LinearLayout>
