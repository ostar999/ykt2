<?xml version="1.0" encoding="utf-8"?>
<com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:mode="all"
    app:radius="25dp">
    <com.easefun.polyv.livecommon.ui.widget.PLVRoundRectGradientTextView
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/plvlc_playback_cache_download_status_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:plvGradientColors="#98c1ff"
        app:plvRadius="25dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#3082fe"
        android:gravity="center"
        android:id="@+id/plvlc_playback_cache_download_progress_background_tv"
        android:background="@drawable/plvlc_playback_cache_download_background_text_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/plvlc_playback_cache_download_progress_foreground_tv"
        android:background="@drawable/plvlc_playback_cache_download_foreground_text_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectConstraintLayout>
