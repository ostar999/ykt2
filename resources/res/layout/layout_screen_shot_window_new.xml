<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_view"
    android:background="@color/half_tanslate_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ly_pic_view_big"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_pic_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:riv_corner_radius_top_left="10dp"
                app:riv_corner_radius_top_right="10dp"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:id="@+id/ly_code_big"
                android:background="@drawable/white_bottom_13"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_alignParentBottom="true"
                android:paddingHorizontal="16dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_logo_big"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/app_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="6dp"
                    app:riv_corner_radius="4dp"/>
                <ImageView
                    android:id="@+id/img_ykb_logo_big"
                    android:layout_width="57dp"
                    android:layout_height="26dp"
                    android:src="?attr/ic_screen_ykb_logo"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/img_logo_big"/>
                <ImageView
                    android:layout_width="127dp"
                    android:layout_height="38dp"
                    android:src="?attr/ic_screen_ykb_info_logo"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="11dp"
                    android:layout_toEndOf="@+id/img_ykb_logo_big"/>
                <ImageView
                    android:id="@+id/img_code_big"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@mipmap/ic_ykb_download_code"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="2dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_pic_view"
        android:background="@drawable/shape_white_corners_12"
        android:visibility="visible"
        android:layout_width="@dimen/dp_144"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_16">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:scaleType="centerCrop"
            android:layout_above="@+id/ly_code"
            android:layout_marginHorizontal="@dimen/dp_12"
            app:riv_corner_radius="@dimen/dp_4"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/ly_code"
            android:background="@drawable/white_bottom_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:gravity="center_vertical"
                android:id="@+id/imgLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_logo"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/app_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="4dp"
                    app:riv_corner_radius="4dp"/>
                <ImageView
                    android:id="@+id/img_ykb_logo"
                    android:layout_width="34dp"
                    android:layout_height="16dp"
                    android:src="?attr/ic_screen_ykb_logo"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/img_logo"/>
                <ImageView
                    android:layout_width="74dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="10dp"
                    android:src="?attr/ic_screen_ykb_info_logo"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/img_ykb_logo"/>
                <ImageView
                    android:id="@+id/img_code"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@mipmap/ic_ykb_download_code"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgLayout">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="?attr/first_txt_color"
                    android:gravity="center"
                    android:id="@+id/tvSaveFile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_42"
                    android:text="保存本地"/>
                <View
                    android:id="@+id/line1"
                    android:layout_below="@+id/orderConfirmImg"
                    style="@style/line_style"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="?attr/first_txt_color"
                    android:gravity="center"
                    android:id="@+id/tvShareNew"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_42"
                    android:text="分享"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_share"
        android:background="@drawable/shape_white_top_16"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_62"
            android:text="分享至"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:src="@mipmap/ic_save_pic"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/secondary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="保存图片"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/btn_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:src="@mipmap/ic_share_wechat_friend"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/secondary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="微信好友"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/btn_wxcircle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:src="@mipmap/ic_share_wechat_circle"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/secondary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="朋友圈"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/btn_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:src="@mipmap/ic_share_qq"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/secondary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="QQ"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/btn_sina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:src="@mipmap/ic_shrae_sina"/>
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:textColor="?attr/secondary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="微博"/>
            </LinearLayout>
            <View
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="3"/>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_24"
            style="@style/line_style"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:text="取消"/>
    </LinearLayout>
</RelativeLayout>
