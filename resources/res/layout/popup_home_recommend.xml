<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/qrCl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/adImgv"
                android:layout_width="@dimen/dp_372"
                android:layout_height="@dimen/dp_230"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:id="@+id/codeTv"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_34"
                app:layout_constraintBottom_toTopOf="@+id/qrImgv"
                app:layout_constraintEnd_toEndOf="@+id/qrImgv"
                app:layout_constraintStart_toStartOf="@+id/qrImgv"/>
            <ImageView
                android:id="@+id/qrImgv"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_marginBottom="@dimen/dp_56"
                android:layout_marginStart="@dimen/dp_68"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:id="@+id/xImgv"
                android:padding="@dimen/dp_6"
                android:visibility="visible"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/common_x4"
                app:layout_constraintBottom_toTopOf="@+id/adImgv"
                app:layout_constraintStart_toEndOf="@+id/adImgv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/saveImgv"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_33"
            android:src="@drawable/home_save_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qrCl"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
