<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/dialog_transparent_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/view_dialog_root"
        android:background="@drawable/ffffffff_10"
        android:visibility="visible"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:minHeight="135dp"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/gray_text_color"
            android:gravity="center"
            android:id="@+id/tv_message"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_operations"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp">
            <Button
                android:textColor="@color/gray_font"
                android:gravity="center"
                android:id="@+id/btn_negative"
                android:background="@drawable/bg_white_round_conner"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="@string/cancel"
                android:layout_weight="1"
                android:layout_marginStart="10dp"/>
            <Button
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btn_re_login"
                android:background="@drawable/bg_red_round_conner"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="重新登录"
                android:layout_weight="1"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
