<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/app_bg"
    android:paddingLeft="@dimen/dp_18"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_18"
    android:paddingBottom="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_18">
    <TextView
        android:id="@+id/live_calendar_dot"
        android:background="@drawable/icon_live_calendar_item_msg_dot_bg"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_4"/>
    <TextView
        android:id="@+id/live_calendar_link"
        android:background="@drawable/icon_live_calendar_link_bg"
        android:layout_width="@dimen/dp_2"
        android:layout_height="@dimen/dp_65"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_below="@+id/live_calendar_dot"
        android:layout_marginStart="@dimen/dp_5"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="?attr/second_txt_color"
        android:gravity="center_vertical"
        android:id="@+id/live_calendar_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:text="9:00-10:00"
        android:layout_toRightOf="@+id/live_calendar_dot"
        android:layout_marginStart="@dimen/dp_10"/>
    <TextView
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:textColor="?attr/first_txt_color"
        android:ellipsize="end"
        android:id="@+id/live_calendar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="医考帮考前最后3套卷（含直播讲解）医考帮考前最后3套卷（含直播讲解）医考帮考前最后3套卷（含直播讲解）医考帮考前最后3套卷（含直播讲解）"
        android:maxLines="2"
        android:layout_toRightOf="@+id/live_calendar_dot"
        android:layout_below="@+id/live_calendar_time"
        android:layout_marginStart="@dimen/dp_10"/>
    <com.psychiatrygarden.widget.CircleImageView
        android:id="@+id/live_calendar_teacher_icon"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@+id/live_calendar_dot"
        android:layout_below="@+id/live_calendar_title"
        android:layout_marginStart="@dimen/dp_10"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="?attr/second_txt_color"
        android:gravity="center_vertical"
        android:id="@+id/live_calendar_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:text="教师名称"
        android:layout_toRightOf="@+id/live_calendar_teacher_icon"
        android:layout_below="@+id/live_calendar_title"
        android:layout_marginStart="@dimen/dp_8"/>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/live_calendar_flag"
        android:background="@drawable/icon_shadow_living_day"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="5.5dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="-7dp"
        android:layout_below="@+id/live_calendar_title"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/shape_app_theme_corners_8"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_26"
            android:layout_below="@+id/live_calendar_title"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/liveCalendarAnim"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_12"/>
            <TextView
                android:textSize="@dimen/sp_11"
                android:textColor="?attr/app_bg"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在直播"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_12"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_11"
        android:textStyle="bold"
        android:textColor="?attr/main_theme_red_color"
        android:gravity="center"
        android:id="@+id/live_calendar_flag2"
        android:background="@drawable/shape_main_theme_five_deep_color_corners_8"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_below="@+id/live_calendar_title"
        android:layout_alignParentRight="true"
        android:paddingHorizontal="@dimen/dp_8"/>
    <View
        android:id="@+id/lastItemGap"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_below="@+id/live_calendar_teacher_name"/>
</RelativeLayout>
