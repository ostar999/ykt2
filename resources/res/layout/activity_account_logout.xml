<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/backview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="?attr/jingyanback"
            android:layout_centerVertical="true"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/question_color"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销账号"
            android:maxLines="1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?attr/main_theme_color"
        android:id="@+id/tv_logout_emphasize"
        android:background="?attr/dominant_color_opaque_10"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注销前需要先阅读并同意账号注销须知，一旦完成注销，所有与账号相关的信息将无法恢复"
        android:lineSpacingExtra="3dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>
    <WebView
        android:id="@+id/webview"
        android:background="?attr/bg_backgroud"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:theme="?attr/report_checkbox_style"
            android:textSize="12sp"
            android:textColor="?attr/first_text_color"
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意《账号注销须知》"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/new_bg_one_color"
            android:gravity="center"
            android:id="@+id/tv_logout"
            android:background="@drawable/shape_round_red_default"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="我要注销"
            android:lineSpacingExtra="3dp"/>
    </LinearLayout>
</LinearLayout>
