<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_study_report_top_bg"
        android:scaleType="fitXY"
        app:layout_collapseMode="parallax"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:orientation="vertical"
            android:id="@+id/appbarlayout"
            android:background="@color/transparent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">
                <RelativeLayout
                    android:orientation="vertical"
                    android:id="@+id/rellogview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_44">
                    <com.psychiatrygarden.widget.WeekReportProgressView
                        android:id="@+id/progress_view"
                        android:background="@color/transparent"
                        android:layout_width="@dimen/dp_320"
                        android:layout_height="@dimen/dp_160"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_centerHorizontal="true"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ly_score_trend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_68"
                        android:layout_alignBottom="@+id/progress_view"
                        android:layout_centerHorizontal="true">
                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预估分"/>
                        <TextView
                            android:textSize="@dimen/sp_32"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/tv_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:text="0"/>
                        <LinearLayout
                            android:gravity="center"
                            android:id="@+id/ly_trend"
                            android:background="@drawable/shape_btn_light_red_radius_8"
                            android:layout_width="@dimen/dp_64"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginTop="-5dp">
                            <ImageView
                                android:id="@+id/img_trend"
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:src="@drawable/ic_trend_up"/>
                            <TextView
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                android:textColor="@color/main_theme_color"
                                android:id="@+id/tv_trend_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/new_bg_one_color"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_update_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_32"
                        android:text="统计时间：05-21 14:00"
                        android:layout_alignBottom="@+id/progress_view"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toobars1"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">
                    <RelativeLayout
                        android:id="@+id/toolbars"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44">
                        <ImageView
                            android:id="@+id/iv_actionbar_back"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_left_back"/>
                        <TextView
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:textColor="@color/new_bg_one_color"
                            android:ellipsize="end"
                            android:id="@+id/nav_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="周报"
                            android:lines="1"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"/>
                        <ImageView
                            android:gravity="center"
                            android:id="@+id/btn_statistics"
                            android:padding="@dimen/dp_10"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/ic_white_statistics"
                            android:layout_marginEnd="@dimen/dp_6"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:background="@drawable/shape_white_top_16_no_night"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:orientation="vertical"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="@color/first_txt_color"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_32"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:text="做题统计"
                    android:paddingHorizontal="@dimen/dp_16"/>
                <LinearLayout
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:paddingHorizontal="@dimen/dp_16">
                    <LinearLayout style="@style/statistics_layout_style">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="@dimen/sp_13"
                                android:id="@+id/tv_study_num_two"
                                android:visibility="gone"
                                android:text="1h"
                                style="@style/statistics_main_txt_style"/>
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textStyle="bold"
                                android:textColor="@color/first_txt_color"
                                android:id="@+id/tv_study_num_two_min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0m"/>
                        </LinearLayout>
                        <TextView
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/third_txt_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总用时"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="match_parent"/>
                    <LinearLayout style="@style/statistics_layout_style">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_all_number"
                                android:text="0"
                                style="@style/statistics_main_txt_style"/>
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/first_txt_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="次"/>
                        </LinearLayout>
                        <TextView
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/third_txt_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计作答"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="match_parent"/>
                    <LinearLayout style="@style/statistics_layout_style">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_personal_percent"
                                android:text="0"
                                style="@style/statistics_main_txt_style"/>
                            <TextView
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/first_txt_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%"/>
                        </LinearLayout>
                        <TextView
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/third_txt_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正确率"/>
                    </LinearLayout>
                </LinearLayout>
                <com.psychiatrygarden.widget.PointProgressByTaskView
                    android:id="@+id/point_task_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:id="@+id/ly_webview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="@dimen/dp_40">
                    <WebView
                        android:id="@+id/webview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:id="@+id/view_web"
                        android:background="@color/app_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.psychiatrygarden.widget.ProgressWheel
                            android:id="@+id/progress_wheel_download"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_centerInParent="true"
                            app:matProg_barColor="#a6a6a6"
                            app:matProg_barWidth="1dp"
                            app:matProg_progressIndeterminate="true"
                            app:matProg_rimWidth="1dp"/>
                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ly_add_change_view"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dp_16"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>
