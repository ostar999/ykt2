<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/rl_main_ad"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/iv_ad_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/app_icon"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/first_text_color"
            android:ellipsize="end"
            android:id="@+id/tv_ad_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24考研真题带刷班"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_toLeftOf="@+id/iv_ad_icon"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/tertiary_text_color"
            android:ellipsize="end"
            android:id="@+id/tv_ad_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="全年直播，循环开课"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_toLeftOf="@+id/iv_ad_icon"
            android:layout_below="@+id/tv_ad_title"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_xm_ad"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_alignTop="@+id/rl_main_ad"
        android:layout_alignRight="@+id/rl_main_ad"/>
</RelativeLayout>
