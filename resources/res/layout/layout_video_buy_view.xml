<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/llay_buy_course"
            android:background="@color/uvv_titlebar_bg"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:id="@+id/tv_free_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/app_theme_red"
                android:id="@+id/tv_buy_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="开通权限"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_pay_view"
            android:background="@color/black"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:gravity="center"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/gray_light"
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="试看已结束，继续观看请"
                    android:drawablePadding="5dp"/>
                <TextView
                    android:textColor="@color/app_theme_red"
                    android:id="@+id/buy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="开通"
                    android:layout_toRightOf="@+id/tv_1"/>
            </RelativeLayout>
            <TextView
                android:textSize="14sp"
                android:textColor="#fff"
                android:id="@+id/back_tv"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon_left_back"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/llay_renew"
            android:background="@color/uvv_titlebar_bg"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:id="@+id/tv_renew_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您还剩下?天课程"
                android:drawablePadding="5dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/app_theme_red"
                android:id="@+id/tv_renew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="续费"/>
        </LinearLayout>
    </FrameLayout>
</merge>
