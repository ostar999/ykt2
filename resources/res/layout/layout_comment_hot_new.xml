<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lineselect2"
    android:background="@drawable/shape_hot_new_bg"
    android:padding="2dp"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginBottom="@dimen/dp_16"
    android:layout_marginEnd="10dp"
    android:layout_alignParentEnd="true"
    android:layout_marginVertical="@dimen/dp_16">
    <CheckedTextView
        android:textSize="@dimen/sp_11"
        android:textColor="@drawable/text_new2_color"
        android:gravity="center"
        android:id="@+id/remen2"
        android:background="@drawable/hot_select_bg"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="最热"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"/>
    <CheckedTextView
        android:textSize="@dimen/sp_11"
        android:textColor="@drawable/text_new2_color"
        android:gravity="center"
        android:id="@+id/zuixin2"
        android:background="@drawable/latest_select_bg"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最新"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"/>
</LinearLayout>
