<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ly_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38">
        <LinearLayout
            android:id="@+id/ly_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_8">
            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="?attr/arrow_right"
                android:rotation="90"
                android:layout_marginEnd="@dimen/dp_4"/>
            <TextView
                android:textSize="@dimen/sp_11"
                android:textColor="?attr/first_txt_color"
                android:ellipsize="end"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="章节名称"
                android:lines="1"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:id="@+id/tv_all_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="试题总数"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:id="@+id/tv_do_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷题次数"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:id="@+id/tv_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正确率"/>
    </LinearLayout>
    <View
        android:background="?attr/new_gray_line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_add_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
