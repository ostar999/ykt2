<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_replay"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.psychiatrygarden.widget.CircleImageView
        android:id="@+id/commentList_item_userIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/app_icon"/>
    <TextView
        android:textSize="13sp"
        android:textColor="?attr/comment_nick_name_text_color"
        android:id="@+id/commentList_item_tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/commentList_item_userIcon"/>
    <TextView
        android:textSize="10sp"
        android:textColor="?attr/item_school_color"
        android:id="@+id/commentList_item_tv_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentList_item_tv_userName"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/commentList_item_userIcon"/>
    <include
        android:id="@+id/myexptervew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/commentList_item_tv_school"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/commentList_item_userIcon"
        layout="@layout/adapter_item"/>
    <LinearLayout
        android:gravity="right"
        android:orientation="horizontal"
        android:id="@+id/llay_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/myexptervew"
        android:layout_marginEnd="24dp">
        <TextView
            android:textSize="11sp"
            android:textColor="?attr/question_color"
            android:id="@+id/tv_support"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="54dp"
            android:text="赞同"
            android:layout_marginEnd="20dp"/>
        <TextView
            android:textSize="11sp"
            android:textColor="?attr/question_color"
            android:id="@+id/tv_oppose"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="54dp"
            android:text="反对"
            android:layout_marginEnd="20dp"/>
        <TextView
            android:textSize="11sp"
            android:textColor="?attr/question_color"
            android:id="@+id/tv_reply"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"/>
    </LinearLayout>
    <View
        android:background="?attr/fourth_line_backgroup_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/llay_support"/>
</RelativeLayout>
