<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <com.psychiatrygarden.widget.CircleImageView
            android:id="@+id/headerimg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/app_icon"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <TextView
                android:textSize="13sp"
                android:textColor="?attr/tertiary_text_color"
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="米老鼠"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/lingradview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="15sp"
        android:textColor="?attr/first_text_color"
        android:id="@+id/content"
        android:paddingLeft="13dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="这个题库真的很棒，解析详细，并且定位到了教材。提 几个建议，1.有的题已经过时了，建议删除；2.评论区 灌水评论较多，建议清理。"
        android:lineSpacingExtra="1.2dp"
        android:lineSpacingMultiplier="1.2"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imageRecycleview"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
    <TextView
        android:textSize="13sp"
        android:textColor="?attr/tertiary_text_color"
        android:id="@+id/source"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="【小红书乱序版】"/>
    <View
        android:background="?attr/line"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"/>
</LinearLayout>
