<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/lineview"
        android:background="@drawable/select_vip_purchase"
        android:layout_width="match_parent"
        android:layout_height="135dp">
        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/first_text_color"
            android:ellipsize="end"
            android:id="@+id/year"
            android:paddingTop="3dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="1年"
            android:maxLines="1"
            android:includeFontPadding="false"/>
        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/viptdcolor"
                android:id="@+id/jinetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="@color/viptdcolor"
                android:ellipsize="end"
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:maxLines="1"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/tertiary_text_color"
            android:ellipsize="end"
            android:id="@+id/average"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20元/月"
            android:maxLines="1"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="10sp"
            android:textColor="@color/viptdcolor"
            android:ellipsize="end"
            android:id="@+id/more"
            android:background="@drawable/shape_line_mem_item"
            android:paddingLeft="11dp"
            android:paddingTop="2dp"
            android:paddingRight="11dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="省100元"
            android:maxLines="1"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <TextView
        android:textSize="9sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/label"
        android:background="@drawable/select_vip_label"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="双11活动"/>
    <View
        android:id="@+id/empty_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_37"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_below="@+id/lineview"/>
</RelativeLayout>
