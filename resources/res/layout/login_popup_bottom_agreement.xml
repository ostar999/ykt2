<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dp_26"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:bl_corners_topLeftRadius="@dimen/dp_12"
    app:bl_corners_topRightRadius="@dimen/dp_12"
    app:bl_solid_color="@color/color_white">
    <ImageView
        android:id="@+id/xImgv"
        android:padding="@dimen/dp_6"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_20"
        android:src="@drawable/common_x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:textColor="@color/c_121212"
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:text="@string/login_tip_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/lineV"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/c_3776ff"
        android:id="@+id/tv"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:text="@string/startup_tip1"
        android:paddingVertical="@dimen/dp_20"
        app:layout_constraintEnd_toStartOf="@+id/lineV"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/c_3776ff"
        android:id="@+id/tv1"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="@string/startup_tip3"
        android:paddingVertical="@dimen/dp_20"
        app:layout_constraintStart_toEndOf="@+id/lineV"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"/>
    <com.noober.background.view.BLTextView
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/goTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_24"
        android:text="@string/login_go_next"
        android:layout_marginHorizontal="@dimen/dp_24"
        app:bl_corners_radius="@dimen/dp_24"
        app:bl_solid_color="@color/c_3776ff"
        app:layout_constraintTop_toBottomOf="@+id/tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>
