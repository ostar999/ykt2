<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/new_bg_two_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_topic_detail_bottom">
        <com.psychiatrygarden.widget.PinnedSectionListView1
            android:id="@+id/pinnedSectionListView1"
            android:background="?attr/app_bg"
            android:scrollbars="none"
            android:fadingEdge="none"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="0dp"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <RelativeLayout
        android:id="@+id/rl_topic_detail_bottom"
        android:background="?attr/tertiary_backgroup_white_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:id="@+id/view_topic_detail_divider"
            android:background="?attr/line"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
        <RelativeLayout
            android:background="?attr/bg_backgroud"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_topic_detail_divider"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">
            <LinearLayout
                android:id="@+id/relksd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">
                <LinearLayout
                    android:id="@+id/ly_iv_topic_detail_fenxiang"
                    android:layout_toEndOf="@+id/ly_iv_topic_detail_msg"
                    style="@style/layout_icon_style">
                    <ImageView
                        android:id="@+id/iv_topic_detail_fenxiang"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="?attr/icon_share_no"/>
                    <TextView
                        android:text="分享"
                        style="@style/layotu_textview_icon_style"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_iv_topic_detail_msg"
                    style="@style/layout_icon_style">
                    <ImageView
                        android:id="@+id/iv_topic_detail_msg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tv_topic_detail_msg"
                        style="@style/layotu_textview_icon_style"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_questiondetails_btn_centerMsg"
                    android:layout_toEndOf="@+id/ly_iv_topic_detail_fenxiang"
                    style="@style/layout_icon_style">
                    <ImageView
                        android:id="@+id/questiondetails_btn_centerMsg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="?attr/question_msg"/>
                    <TextView
                        android:text="评论"
                        style="@style/layotu_textview_icon_style"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_questiondetails_btn_zantong"
                    android:layout_toEndOf="@+id/ly_questiondetails_btn_centerMsg"
                    style="@style/layout_icon_style">
                    <ImageView
                        android:id="@+id/questiondetails_btn_zantong"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="?attr/dianzancourse"/>
                    <TextView
                        android:text="点赞"
                        style="@style/layotu_textview_icon_style"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:background="@drawable/shape_forum_search_edittext_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/relksd">
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="?attr/third_txt_color"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_topic_detail_add_comment"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="发表评论"
                    android:lines="1"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:paddingStart="15dp"
                    android:layout_toStartOf="@+id/ll_question_comment"
                    app:drawableStartCompat="?attr/icon_write_comment"/>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_question_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_alignTop="@+id/tv_topic_detail_add_comment"
                    android:layout_marginEnd="6dp"
                    android:layout_alignParentEnd="true">
                    <View
                        android:id="@+id/line"
                        android:background="?attr/fourth_line_backgroup_color"
                        android:layout_width="1dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"/>
                    <ImageView
                        android:id="@+id/img_msg"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="?attr/comment_icon_msg"
                        android:layout_centerInParent="true"
                        android:layout_toEndOf="@+id/line"/>
                    <TextView
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="?attr/new_bg_one_color"
                        android:gravity="center_horizontal"
                        android:id="@+id/questiondetails_btn_commentNum"
                        android:background="@drawable/fff6614b_8"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginTop="3dp"
                        android:text="0"
                        android:singleLine="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="-10dp"
                        android:layout_toEndOf="@+id/img_msg"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <include layout="@layout/layout_comment_hot_new"/>
    <com.psychiatrygarden.widget.CustomEmptyView
        android:id="@+id/loading_view"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
