<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/root"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_400">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/ly_empty_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_empty"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_empty_data_normal_day"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/forth_txt_color"
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="暂无数据"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/new_bg_one_color"
            android:id="@+id/btn_reload"
            android:background="@drawable/shape_push_circle_finish_bg"
            android:paddingLeft="16dp"
            android:paddingTop="6dp"
            android:paddingRight="16dp"
            android:paddingBottom="6dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="快去发帖"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/rl_loading"
        android:background="@drawable/shape_hafl_translate_bg"
        android:visibility="visible"
        android:layout_width="@dimen/dp_118"
        android:layout_height="@dimen/dp_122">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_loading"
            android:background="@drawable/loading"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/loading_txt"
            android:id="@+id/tv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="努力加载中"
            android:layout_below="@+id/iv_loading"/>
    </LinearLayout>
</RelativeLayout>
