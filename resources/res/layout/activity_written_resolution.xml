<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/bg_backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="#ffd9d9d9"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/rl_resolution">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:animateLayoutChanges="true">
            <RelativeLayout
                android:id="@+id/rl_restore"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <com.psychiatrygarden.widget.EditTextCursorWatcher
                    android:textSize="17sp"
                    android:textColor="#ff000000"
                    android:gravity="top"
                    android:id="@+id/edit_restore"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:text=""
                    android:lineSpacingExtra="4dp"/>
                <TextView
                    android:textSize="17sp"
                    android:textColor="#ff958575"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考点还原"
                    android:drawableLeft="@mipmap/analysis_restore_tag"
                    android:drawablePadding="3dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <com.psychiatrygarden.widget.EditTextCursorWatcher
                    android:textSize="17sp"
                    android:textColor="#ff000000"
                    android:gravity="top"
                    android:id="@+id/edit_answer"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:text=""
                    android:lineSpacingExtra="4dp"/>
                <TextView
                    android:textSize="17sp"
                    android:textColor="#ff958575"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="答案解析"
                    android:drawableLeft="@mipmap/analysis_answer_tag"
                    android:drawablePadding="3dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_expand"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <com.psychiatrygarden.widget.EditTextCursorWatcher
                    android:textSize="17sp"
                    android:textColor="#ff000000"
                    android:gravity="top"
                    android:id="@+id/edit_expand"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:text=""
                    android:lineSpacingExtra="4dp"/>
                <TextView
                    android:textSize="17sp"
                    android:textColor="#ff958575"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="知识拓展"
                    android:drawableLeft="@mipmap/analysis_expand_tag"
                    android:drawablePadding="3dp"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/rl_resolution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/iv_add_img"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/analysis_add_img"/>
        <View
            android:id="@+id/view_line"
            android:background="#eeeeee"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/iv_add_img"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#ff969696"
            android:gravity="center"
            android:id="@+id/tv_restore"
            android:background="@drawable/resolution_bottom_menu_bg"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:text="考点还原"
            android:drawableLeft="@drawable/analysis_restore_icon"
            android:drawablePadding="5dp"
            android:layout_below="@+id/view_line"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#ff969696"
            android:gravity="center"
            android:id="@+id/tv_answer"
            android:background="@drawable/resolution_bottom_menu_bg"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:text="答案解析"
            android:drawableLeft="@drawable/analysis_answer_icon"
            android:drawablePadding="5dp"
            android:layout_toRightOf="@+id/tv_restore"
            android:layout_below="@+id/view_line"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#ff969696"
            android:gravity="center"
            android:id="@+id/tv_expand"
            android:background="@drawable/resolution_bottom_menu_bg"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:text="知识拓展"
            android:drawableLeft="@drawable/analysis_expand_icon"
            android:drawablePadding="5dp"
            android:layout_toRightOf="@+id/tv_answer"
            android:layout_below="@+id/view_line"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#ff969696"
            android:gravity="center"
            android:id="@+id/tv_rule"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:text="查看规则"
            android:drawableRight="@mipmap/analysis_rule_arrow"
            android:drawablePadding="3dp"
            android:layout_below="@+id/view_line"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <com.psychiatrygarden.widget.AttachButton
        android:id="@+id/attachbutton_write"
        android:background="@mipmap/analysis_question_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="56dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:customIsAttach="true"
        app:customIsDrag="true"/>
</RelativeLayout>
