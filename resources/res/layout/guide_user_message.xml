<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#55555555"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/guide_message_bottom_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/guide_message_bottom_txt"
        android:layout_above="@+id/rl_guide_message"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/rl_guide_message"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <View
                android:id="@+id/vr"
                android:background="#fff"
                android:layout_width="1dp"
                android:layout_height="100dp"
                android:layout_marginRight="40dp"
                android:layout_alignLeft="@+id/rel_imageView_message"/>
            <RelativeLayout
                android:gravity="center"
                android:id="@+id/rel_imageView_message"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/imageView_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/guide_guanzhu_bottom"
                    android:adjustViewBounds="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
