<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_unbind_wx_pop"
    android:paddingTop="24dp"
    android:layout_width="@dimen/dp_280"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/first_txt_color"
        android:id="@+id/tv_top_hint"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/second_txt_color"
            android:gravity="center"
            android:id="@+id/tv_content"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="本阶段还有12道题未答，考试将进入下一分段，进入后本段试题将无法再做修改，确认要进入下一段考试吗？"
            android:lineSpacingExtra="5dp"
            android:paddingHorizontal="16dp"/>
    </androidx.core.widget.NestedScrollView>
    <View
        android:background="?attr/new_gray_line_color"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/first_txt_color"
            android:gravity="center"
            android:id="@+id/cancel"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="继续作答"
            android:layout_weight="1"/>
        <View
            android:id="@+id/line_view"
            android:background="?attr/new_gray_line_color"
            android:layout_width="0.8dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/new_fail_color"
            android:gravity="center"
            android:id="@+id/ok"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="进入下一阶段"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
