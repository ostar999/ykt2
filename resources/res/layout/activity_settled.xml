<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/askbar_email_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/app_theme_red"
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/gray_font"
                android:id="@+id/tv_email_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"/>
            <View
                android:id="@+id/view_dash_line"
                android:background="@drawable/dash_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_email_content"
                android:layout_alignLeft="@+id/tv_email_content"
                android:layout_alignRight="@+id/tv_email_content"/>
        </RelativeLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/app_theme_red"
            android:gravity="center"
            android:id="@+id/tv_copy_email"
            android:background="@drawable/select_text_btn"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="复制邮箱"/>
    </LinearLayout>
</ScrollView>
