<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_red_packet"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_71"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_450">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRedPacket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_125"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>
        <FrameLayout
            android:layout_gravity="bottom"
            android:background="@mipmap/bg_red_packet_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_81">
            <TextView
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:textColor="@color/main_theme_color"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tv_get"
                android:background="@drawable/bg_btn_get_red_packet"
                android:layout_width="@dimen/dp_177"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_59"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_59"
                android:text="立即领取"
                android:layout_marginHorizontal="@dimen/dp_59"/>
        </FrameLayout>
    </FrameLayout>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_24"
        android:src="@drawable/ic_close_pop"/>
</LinearLayout>
