<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/first_text_color"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑内容"
            android:maxLines="1"
            android:drawableLeft="@mipmap/restore_edit_star"
            android:drawablePadding="6dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/first_text_color"
            android:ellipsize="end"
            android:id="@+id/iv_restore_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看原题"
            android:maxLines="1"
            android:drawableLeft="?attr/restore_edit_question"
            android:drawablePadding="6dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ScrollView
        android:background="@drawable/fff8f8f8_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/tv_to_next"
        android:layout_below="@+id/rl_top">
        <EditText
            android:textSize="16sp"
            android:textColor="?attr/vipkfuTxt"
            android:textColorHint="?attr/fourth_text_color"
            android:gravity="top"
            android:id="@+id/et_restore"
            android:background="@color/transparent"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="500dp"
            android:hint="请输入您要编辑的答案解析。"
            android:includeFontPadding="false"
            android:lineSpacingExtra="5dp"/>
    </ScrollView>
    <ImageView
        android:id="@+id/iv_bottom_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/tabbar_top_shadow"
        android:layout_above="@+id/tv_to_next"/>
    <TextView
        android:textSize="14sp"
        android:textColor="?attr/white_color02"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_to_next"
        android:background="@drawable/ffe25d49_20"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:text="下一步"
        android:maxLines="1"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
