<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/ly_content_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:background_normal="@color/white"
    app:corner_radius_top_left="12dp"
    app:corner_radius_top_right="12dp">
    <com.ruffian.library.widget.RFrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        app:corner_radius_top_left="@dimen/dp_12"
        app:corner_radius_top_right="@dimen/dp_12">
        <TextView
            android:textColor="@color/color_bfbfbf"
            android:layout_gravity="start|center_vertical"
            android:id="@+id/tv_cancel"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_marginStart="16dp"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/color_303030"
            android:layout_gravity="center"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价本书"/>
        <ImageView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/img_full_screen"
            android:padding="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/icon_zoom"
            android:contentDescription="@null"
            android:layout_marginEnd="@dimen/dp_16"/>
        <TextView
            android:textColor="@color/color_dd594a"
            android:layout_gravity="end|center_vertical"
            android:id="@+id/tv_pub"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="@dimen/dp_16"/>
    </com.ruffian.library.widget.RFrameLayout>
    <View
        android:id="@+id/viewLine1"
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ly_content"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="@dimen/dp_205"
        android:layout_weight="1"
        android:paddingHorizontal="16dp">
        <com.ruffian.library.widget.REditText
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_303030"
            android:textColorHint="@color/color_bfbfbf"
            android:gravity="start"
            android:id="@+id/et_input"
            android:padding="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="分享一下您对本书的感受吧～"
            android:maxLength="300"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            app:background_normal="@color/color_f7f8fa"
            app:corner_radius="@dimen/dp_8"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">
            <FrameLayout
                android:id="@+id/fl_image"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.ruffian.library.widget.RImageView
                    android:id="@+id/img_album"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_6"
                    android:src="@drawable/image_cover_default"
                    android:scaleType="centerCrop"
                    android:contentDescription="@null"
                    android:layout_marginEnd="@dimen/dp_6"
                    app:corner_radius="@dimen/dp_3"/>
                <ProgressBar
                    android:layout_gravity="center"
                    android:id="@+id/processView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"/>
                <ImageView
                    android:layout_gravity="end"
                    android:id="@+id/img_delete"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:src="@drawable/icon_clean_select"
                    android:contentDescription="@null"/>
            </FrameLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/img_choose"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/icon_select_img"
                android:contentDescription="@null"
                android:layout_marginEnd="@dimen/dp_16"/>
            <com.ruffian.library.widget.RTextView
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_publish"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_24"
                android:text="发布"
                app:background_normal="@color/color_dd594a"
                app:corner_radius="@dimen/dp_12"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
