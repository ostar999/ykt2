<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp">
        <RelativeLayout
            android:id="@+id/recircle_newreply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textColor="@drawable/circle_textcolor"
                android:id="@+id/new_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新回复"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/new_reply_line"
                android:background="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/new_reply"
                android:layout_alignRight="@+id/new_reply"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recircle_newpush"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textColor="@drawable/circle_textcolor"
                android:id="@+id/new_push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新发表"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/new_push_line"
                android:background="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/new_push"
                android:layout_alignRight="@+id/new_push"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recircle_newtiezi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textColor="@drawable/circle_textcolor"
                android:id="@+id/new_tiezi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精华帖子"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/new_tiezi_line"
                android:background="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/new_tiezi"
                android:layout_alignRight="@+id/new_tiezi"
                android:layout_alignParentBottom="true"/> s 
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
