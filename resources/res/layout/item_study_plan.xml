<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_item_border"
    android:padding="@dimen/dp_16"
    android:focusable="false"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_16">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12">
        <TextView
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="?attr/first_text_color"
            android:id="@+id/tv_plan_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/ll_go_practice"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/third_txt_color"
                android:id="@+id/tv_go_practice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去做题"/>
            <ImageView
                android:padding="@dimen/dp_3"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_1"
                android:src="?attr/icon_indicator_right"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_vip_lock"
            android:background="@drawable/bg_yellow_rounded"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            android:paddingHorizontal="@dimen/dp_5">
            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:src="?attr/lock_vip"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="?attr/vip_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员解锁"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="?attr/wrong_question_tab_bg"
            android:id="@+id/tv_receive"
            android:background="@drawable/bg_red_rounded"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_3"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即领取"
            android:paddingHorizontal="@dimen/dp_8"
            android:paddingVertical="@dimen/dp_3"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_progress_container"
        android:paddingRight="@dimen/dp_2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12">
        <View
            android:background="@drawable/progress_bg_rounded"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_14"
            android:layout_centerVertical="true"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:max="100"
            android:progressDrawable="@drawable/progress_red_gradient"
            android:layout_centerVertical="true"
            style="?android:attr/progressBarStyleHorizontal"/>
        <TextView
            android:textSize="@dimen/sp_10"
            android:textColor="?attr/wrong_question_tab_bg"
            android:id="@+id/tv_progress_percent"
            android:background="@drawable/bg_progress_label"
            android:paddingLeft="@dimen/dp_6"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingHorizontal="@dimen/dp_6"
            android:paddingVertical="@dimen/dp_2"/>
    </RelativeLayout>
    <com.psychiatrygarden.widget.ReadMoreIcon
        android:textColor="?attr/second_txt_color"
        android:id="@+id/tv_description_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:trimCollapsedIcon="?attr/collapsed_icon"
        app:trimLinesIcon="2"
        app:trimModeIcon="0"/>
</LinearLayout>
