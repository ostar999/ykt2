<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="?attr/ic_invite_top_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/nav_tabbar"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageView
                android:id="@+id/iv_actionbar_back"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_left_back"
                android:layout_centerVertical="true"
                android:paddingStart="17dp"
                android:paddingEnd="22dp"
                android:paddingVertical="5dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:background="?attr/ic_invite_white_bg"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-38dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/nav_tabbar"
        android:layout_marginHorizontal="16dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/tv_all_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="?attr/first_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="人"/>
            </LinearLayout>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/tertiary_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成功邀请"/>
        </LinearLayout>
        <View
            android:background="?attr/line"
            android:layout_width="0.5dp"
            android:layout_height="32dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/first_text_color"
                    android:id="@+id/tv_all_vip_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="?attr/first_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="天"/>
            </LinearLayout>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/tertiary_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计获得会员"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp">
        <View
            android:background="?attr/dominant_color"
            android:layout_width="4dp"
            android:layout_height="15dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/vipkfuTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="邀请列表"/>
    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh"
        android:background="?attr/app_bg"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/ly_invite_friends"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="48dp"
                    android:src="?attr/ic_no_friends_view"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/btn_invite_friends"
                    android:background="@drawable/shape_full_red"
                    android:layout_width="104dp"
                    android:layout_height="32dp"
                    android:text="邀请好友"/>
            </LinearLayout>
        </LinearLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
