<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/adImgv"
            android:layout_width="@dimen/dp_506"
            android:layout_height="@dimen/dp_310"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/xImgv"
            android:padding="@dimen/dp_6"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:src="@drawable/common_x4"
            app:layout_constraintBottom_toTopOf="@+id/adImgv"
            app:layout_constraintStart_toEndOf="@+id/adImgv"/>
        <View
            android:id="@+id/leftV"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_230"
            app:layout_constraintBottom_toBottomOf="@+id/adImgv"
            app:layout_constraintEnd_toStartOf="@+id/rightV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/adImgv"/>
        <View
            android:id="@+id/rightV"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_230"
            app:layout_constraintBottom_toBottomOf="@+id/adImgv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/leftV"
            app:layout_constraintTop_toTopOf="@+id/adImgv"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recommendCl"
            android:visibility="gone"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_38"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <View
                android:id="@+id/lineV"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/oneImgv"
                android:layout_width="@dimen/dp_142"
                android:layout_height="@dimen/dp_34"
                android:src="@drawable/home_dot_tip"
                android:layout_marginEnd="@dimen/dp_16"
                app:layout_constraintEnd_toStartOf="@+id/lineV"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/twoImgv"
                android:layout_width="@dimen/dp_142"
                android:layout_height="@dimen/dp_34"
                android:src="@drawable/home_go_recommend"
                android:layout_marginStart="@dimen/dp_16"
                app:layout_constraintStart_toEndOf="@+id/lineV"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
