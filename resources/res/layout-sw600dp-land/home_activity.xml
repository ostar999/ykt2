<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home1_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/backImgv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_6"
        android:src="@drawable/common_back"
        android:layout_marginStart="@dimen/dp_28"
        app:layout_constraintBottom_toBottomOf="@+id/iconImgv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iconImgv"
        android:layout_width="@dimen/dp_140"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:src="@drawable/home1_icon"
        android:layout_marginStart="@dimen/dp_6"
        app:layout_constraintStart_toEndOf="@+id/backImgv"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:textColor="@color/color_black"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="技能一把过"
        android:paddingStart="@dimen/dp_6"
        app:layout_constraintBottom_toBottomOf="@+id/iconImgv"
        app:layout_constraintStart_toEndOf="@+id/iconImgv"
        app:layout_constraintTop_toTopOf="@+id/iconImgv"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/integralCl"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="@dimen/dp_86"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/home_integral_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/sp_11"
            android:textColor="@color/color_white"
            android:gravity="center_horizontal"
            android:id="@+id/integralTv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:textSize="@dimen/sp_11"
        android:textColor="@color/color_white"
        android:gravity="end|center_vertical"
        android:id="@+id/codeTv"
        android:background="@drawable/home_code_bg"
        android:layout_width="@dimen/dp_88"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/home_code"
        android:paddingEnd="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_26"
        app:layout_constraintEnd_toStartOf="@+id/meTv"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_black"
        android:gravity="center"
        android:id="@+id/meTv"
        android:background="@drawable/home_new"
        android:layout_width="@dimen/dp_88"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/home_me"
        android:layout_marginEnd="@dimen/dp_60"
        app:layout_constraintEnd_toStartOf="@+id/integralCl"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.noober.background.view.BLView
        android:id="@+id/bgV"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:bl_corners_radius="@dimen/dp_8"
        app:bl_gradient_angle="270"
        app:bl_gradient_endColor="@color/color_transparent"
        app:bl_gradient_startColor="@color/c_54ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/actionFlow"
        app:layout_constraintEnd_toEndOf="@+id/actionFlow"
        app:layout_constraintStart_toStartOf="@+id/actionFlow"
        app:layout_constraintTop_toTopOf="@+id/actionFlow"/>
    <ImageView
        android:id="@+id/xftzImgv"
        android:layout_width="@dimen/dp_138"
        android:layout_height="@dimen/dp_300"
        android:src="@drawable/home1_1"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/bodyImgv"
        android:layout_width="@dimen/dp_138"
        android:layout_height="@dimen/dp_300"
        android:src="@drawable/home1_2"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/trainImgv"
        android:layout_width="@dimen/dp_138"
        android:layout_height="@dimen/dp_300"
        android:src="@drawable/home1_3"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/scoreImgv"
        android:layout_width="@dimen/dp_138"
        android:layout_height="@dimen/dp_300"
        android:src="@drawable/home1_4"
        android:scaleType="fitXY"/>
    <androidx.constraintlayout.helper.widget.Flow
        android:orientation="horizontal"
        android:id="@+id/actionFlow"
        android:paddingLeft="@dimen/dp_60"
        android:paddingTop="@dimen/dp_30"
        android:paddingRight="@dimen/dp_60"
        android:paddingBottom="@dimen/dp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_60"
        android:paddingVertical="@dimen/dp_30"
        app:constraint_referenced_ids="xftzImgv,bodyImgv,trainImgv,scoreImgv"
        app:flow_horizontalGap="@dimen/dp_26"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
